<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/bright_sky_blue"/>
            <corners android:radius="1dp"/>
            <stroke android:width="1dp" android:color="@color/bright_sky_blue"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/bright_sky_blue"/>
            <corners android:radius="1dp"/>
            <stroke android:width="1dp" android:color="@color/bright_sky_blue"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/bright_sky_blue"/>
            <corners android:radius="1dp"/>
            <stroke android:width="1dp" android:color="@color/bright_sky_blue"/>
        </shape>
    </item>
    <item android:state_selected="false">
        <shape android:shape="rectangle">
            <corners android:radius="1dp"/>
            <stroke android:width="1dp" android:color="@color/bright_sky_blue"/>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="1dp"/>
            <stroke android:width="1dp" android:color="@color/bright_sky_blue"/>
        </shape>
    </item>
</selector>
