<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item>
        <shape android:shape="rectangle">
            <padding android:left="5dp" android:top="5dp" android:right="5dp" android:bottom="5dp"/>
            <solid android:color="#44000000"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="5dp"/>
            <stroke android:width="2dp" android:color="#ff272727"/>
            <gradient android:startColor="#ffa7a7a7" android:endColor="#ffa7a7a7" android:angle="90" android:type="linear" android:centerColor="#ff6a6a6a"/>
        </shape>
    </item>
</layer-list>
