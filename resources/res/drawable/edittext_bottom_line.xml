<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_pressed="true">
        <layer-list>
            <item android:left="-2dp" android:top="-2dp" android:right="-2dp" android:bottom="1dp">
                <shape android:shape="rectangle">
                    <stroke android:width="1dp" android:color="@color/color_e2ebee"/>
                    <solid android:color="@color/drawable_color_a"/>
                    <padding android:left="3dp" android:top="8dp" android:right="3dp" android:bottom="8dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_focused="true">
        <layer-list>
            <item android:left="-2dp" android:top="-2dp" android:right="-2dp" android:bottom="1dp">
                <shape android:shape="rectangle">
                    <stroke android:width="1dp" android:color="@color/color_e2ebee"/>
                    <solid android:color="@color/drawable_color_a"/>
                    <padding android:left="3dp" android:top="8dp" android:right="3dp" android:bottom="8dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:left="-2dp" android:top="-2dp" android:right="-2dp" android:bottom="1dp">
                <shape android:shape="rectangle">
                    <stroke android:width="1dp" android:color="@color/color_e2ebee"/>
                    <solid android:color="@color/drawable_color_a"/>
                    <padding android:left="3dp" android:top="10dp" android:right="3dp" android:bottom="10dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
