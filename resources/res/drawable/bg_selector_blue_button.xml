<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_b8c2cb"/>
            <padding android:left="7dp" android:top="2dp" android:right="7dp" android:bottom="2dp"/>
            <corners android:radius="2dp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/paytm_blue_selected"/>
            <padding android:left="7dp" android:top="2dp" android:right="7dp" android:bottom="2dp"/>
            <corners android:radius="2dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/paytm_blue"/>
            <padding android:left="7dp" android:top="2dp" android:right="7dp" android:bottom="2dp"/>
            <corners android:radius="2dp"/>
        </shape>
    </item>
</selector>
