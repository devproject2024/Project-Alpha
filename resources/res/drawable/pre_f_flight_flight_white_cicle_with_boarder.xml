<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <size android:height="@dimen/dimen_200dp" android:width="@dimen/dimen_200dp"/>
            <stroke android:width="1dp" android:color="@color/flight_tab_divider_color"/>
            <solid android:color="@color/flight_row_selection"/>
        </shape>
    </item>
    <item android:state_activated="true">
        <shape android:shape="oval">
            <size android:height="@dimen/dimen_200dp" android:width="@dimen/dimen_200dp"/>
            <stroke android:width="1dp" android:color="@color/flight_tab_divider_color"/>
            <solid android:color="@color/flight_row_selection"/>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="oval">
            <size android:height="@dimen/dimen_200dp" android:width="@dimen/dimen_200dp"/>
            <stroke android:width="1dp" android:color="@color/flight_tab_divider_color"/>
            <solid android:color="@android:color/white"/>
        </shape>
    </item>
</selector>
