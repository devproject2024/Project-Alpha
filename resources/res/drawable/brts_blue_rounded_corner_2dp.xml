<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item>
        <shape android:layout_width="wrap_content" android:shape="rectangle">
            <gradient android:startColor="#20000000" android:endColor="#000000" android:angle="90" android:type="linear"/>
            <corners android:radius="2dp"/>
        </shape>
    </item>
    <item android:bottom="3px">
        <shape android:shape="rectangle">
            <solid android:color="#00b9f5"/>
            <corners android:radius="2dp"/>
        </shape>
    </item>
</layer-list>
