<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:id="@android:id/background" android:drawable="@color/transparent"/>
    <item android:gravity="left|right|center_vertical|center_horizontal|fill_horizontal|center" android:id="@android:id/progress">
        <scale android:scaleWidth="100%">
            <selector>
                <item android:state_enabled="false" android:drawable="@color/white"/>
                <item>
                    <shape android:tint="@color/white" android:shape="rectangle">
                        <corners android:radius="@dimen/dimen_24dp"/>
                        <size android:height="48dp"/>
                        <solid android:color="@color/white"/>
                    </shape>
                </item>
            </selector>
        </scale>
    </item>
</layer-list>
