<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/white" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/toolbar_layout" android:layout_width="match_parent" android:layout_height="60dp">
        <ImageView android:id="@+id/iv_back_button" android:padding="@dimen/dimen_20dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/upi_ic_back" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout android:background="@drawable/background_top_round" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/toolbar_layout">
        <TextView android:textSize="21sp" android:textStyle="bold" android:textColor="#222222" android:id="@+id/w_custom_dialog_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="25dp" android:layout_marginTop="25dp" android:layout_marginRight="10dp" android:text="Transfer Money to a New Mobile Number" android:layout_toLeftOf="@+id/cross_iv" android:layout_alignParentLeft="true" android:lineSpacingExtra="6sp" android:fontFamily="@string/font_family_roboto_regular"/>
        <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:id="@+id/enter_no_ll" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_25dp" android:layout_marginTop="@dimen/dimen_30dp" android:layout_marginRight="@dimen/dimen_25dp" android:layout_marginBottom="@dimen/dimen_18dp" android:layout_below="@+id/w_custom_dialog_title">
            <TableRow android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="20sp" android:textStyle="normal" android:textColor="@color/color_222222" android:id="@+id/so_cp_country_code_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/mt_india_code_space" android:fontFamily="@string/font_family_roboto_medium"/>
                <androidx.appcompat.widget.AppCompatEditText android:textSize="20sp" android:textStyle="normal" android:textColor="@color/color_222222" android:textColorHint="@color/color_b8c2cb" android:id="@+id/so_cp_contact_et" android:background="@android:color/transparent" android:padding="@dimen/dimen_8dp" android:layout_width="@dimen/dimen_0dp" android:layout_height="wrap_content" android:hint="@string/mt__enter_mobile_numbber" android:maxLines="1" android:maxLength="10" android:layout_weight="1" android:inputType="number" android:imeOptions="actionDone" android:fontFamily="@string/font_family_roboto_medium" android:importantForAutofill="2"/>
            </TableRow>
            <View android:id="@+id/so_phone_number_separator_view" android:background="@color/color_00b9f5" android:layout_width="match_parent" android:layout_height="@dimen/dimen_2dp" android:layout_marginTop="@dimen/dimen_5dp"/>
            <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="@color/color_fd5c5c" android:ellipsize="end" android:id="@+id/so_enter_number_tv" android:paddingTop="@dimen/dimen_5dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/money_transfer_enter_valid_mobile"/>
        </LinearLayout>
    </RelativeLayout>
    <ImageView android:id="@+id/motif_iv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_motif_classic" android:layout_alignParentRight="true"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="55dp" android:layout_margin="12dp" android:layout_marginBottom="@dimen/dimen_30dp" android:layout_alignParentBottom="true">
        <TextView android:textSize="17sp" android:textStyle="bold" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/w_custom_dialog_btn_positive" android:background="@drawable/universal_money_transfer_button_bg" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/proceed" android:textAllCaps="false"/>
        <RelativeLayout android:id="@+id/money_transfer_loader_container" android:background="@color/grid_offer_blue" android:visibility="gone" android:layout_width="match_parent" android:layout_height="55dp">
            <com.airbnb.lottie.LottieAnimationView android:id="@+id/money_transfer_loader" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="30dp" android:layout_centerHorizontal="true" android:layout_centerVertical="true" android:foregroundGravity="left" app:amount="5" app:animationDirectionbundle="-1" app:circleSize="15" app:duration="@android:integer/config_mediumAnimTime" app:endColor="@color/light_blue_A400" app:startColor="@color/light_blue_A700"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
