<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/white" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:id="@+id/motif_iv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_motif_classic" android:layout_alignParentRight="true"/>
    <RelativeLayout android:id="@+id/toolbar_layout" android:layout_width="match_parent" android:layout_height="60dp" android:layout_alignParentTop="true">
        <ImageView android:id="@+id/iv_back_button" android:padding="@dimen/dimen_20dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/upi_ic_back" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <TextView android:textSize="21sp" android:textStyle="bold" android:textColor="#222222" android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/dimen_20dp" android:layout_toLeftOf="@+id/cross_iv" android:layout_below="@+id/toolbar_layout" android:layout_alignParentLeft="true" android:lineSpacingExtra="6sp" android:lineSpacingMultiplier="1.2" android:fontFamily="@string/font_family_roboto_regular"/>
    <RelativeLayout android:id="@+id/friendsBankAccount" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="@dimen/dimen_32dp" android:layout_marginRight="20dp" android:layout_below="@+id/title" android:layout_marginHorizontal="20dp">
        <RelativeLayout android:gravity="center" android:id="@+id/first" android:background="@drawable/blue_circle" android:layout_width="@dimen/dimen_36dp" android:layout_height="@dimen/dimen_36dp">
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" app:srcCompat="@drawable/ic_mobile_details"/>
        </RelativeLayout>
        <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/text_1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginRight="12dp" android:text="@string/transfer_money_by_entering_your_friend_s_bank_account_upi_id" android:layout_toLeftOf="@+id/arrow_1" android:layout_toRightOf="@+id/first" android:lineSpacingExtra="6sp" android:fontFamily="sans-serif"/>
        <ImageView android:id="@+id/arrow_1" android:background="@drawable/arrow_right_black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#21c17a" android:id="@+id/scratch_card_cashback" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_52dp" android:layout_marginTop="@dimen/dimen_16dp" android:text="Get ₹10 Cashback" android:layout_below="@+id/text_1" android:lineSpacingExtra="0sp" android:fontFamily="sans-serif"/>
    </RelativeLayout>
    <View android:id="@+id/divider" android:background="#f3f7f8" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="72dp" android:layout_marginTop="@dimen/dimen_22dp" android:layout_marginBottom="@dimen/dimen_22dp" android:layout_below="@+id/friendsBankAccount" android:layout_marginVertical="@dimen/dimen_22dp"/>
    <RelativeLayout android:id="@+id/inviteFriends" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_below="@+id/divider" android:layout_marginHorizontal="20dp">
        <RelativeLayout android:gravity="center" android:id="@+id/second" android:background="@drawable/blue_circle" android:layout_width="@dimen/dimen_36dp" android:layout_height="@dimen/dimen_36dp">
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" app:srcCompat="@drawable/money_tarnsfer_invite"/>
        </RelativeLayout>
        <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/text_2" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginRight="12dp" android:text="@string/invite_your_friend_to_paytm_upi" android:layout_toLeftOf="@+id/arrow_2" android:layout_toRightOf="@+id/second" android:lineSpacingExtra="6sp" android:fontFamily="sans-serif"/>
        <ImageView android:id="@+id/arrow_2" android:background="@drawable/arrow_right_black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#21c17a" android:id="@+id/invite_cashback" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_52dp" android:layout_marginTop="@dimen/dimen_14dp" android:text="Get ₹101 Cashback on your friend&apos;s first UPI payment" android:layout_below="@+id/text_2" android:lineSpacingExtra="0sp" android:fontFamily="sans-serif"/>
        <com.airbnb.lottie.LottieAnimationView android:id="@+id/wallet_loader" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="20dp" android:layout_marginLeft="-20dp" android:layout_marginTop="15dp" android:layout_below="@+id/invite_cashback" app:amount="5" app:animationDirectionbundle="-1" app:circleSize="8" app:duration="@android:integer/config_mediumAnimTime" app:endColor="@color/light_blue_A400" app:startColor="@color/light_blue_A700"/>
    </RelativeLayout>
    <include android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentBottom="true" layout="@layout/footer_blue_lines"/>
</RelativeLayout>
