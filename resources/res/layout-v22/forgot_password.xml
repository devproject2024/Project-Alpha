<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/forgot_password_ParentView1" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:id="@+id/lyt_edit_box" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:id="@+id/txt_desc" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="15dp" android:text="@string/forget_password_desc"/>
            <com.google.android.material.textfield.TextInputLayout android:theme="@style/PaytmInputTextLabel" android:id="@+id/text_input_username" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="15dp" android:hint="@string/your_mobile_number_or_email" android:layout_below="@+id/txt_desc">
                <androidx.appcompat.widget.AppCompatEditText android:textSize="21sp" android:id="@+id/edit_username" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true" android:fontFamily="@string/font_family_roboto_regular"/>
            </com.google.android.material.textfield.TextInputLayout>
            <View android:id="@+id/sep_1" android:background="@drawable/edit_view_divider" android:visibility="gone" android:layout_width="match_parent" android:layout_height="6dp" android:layout_below="@+id/text_input_username" android:contentDescription="@string/app_name"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/new_password_RL" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/dimen_10dp" android:layout_below="@+id/lyt_edit_box">
            <RelativeLayout android:id="@+id/fgt_lyt_new_password" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/wallet_10_dp" android:layout_below="@+id/new_password_txtview">
                <com.google.android.material.textfield.TextInputLayout android:theme="@style/PaytmEditTextTheme" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatEditText android:textSize="16sp" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/new_paytm_password" android:password="true" android:singleLine="true"/>
                </com.google.android.material.textfield.TextInputLayout>
                <LinearLayout android:gravity="center" android:padding="3dp" android:visibility="gone" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true">
                    <ImageView android:padding="10dp" android:visibility="gone" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/cross_grey" android:layout_centerVertical="true"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/wallet_10_dp" android:layout_marginTop="@dimen/dimen_5dp" android:layout_below="@+id/fgt_lyt_new_password">
                <com.google.android.material.textfield.TextInputLayout android:theme="@style/PaytmEditTextTheme" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatEditText android:textSize="16sp" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/retype_new_password" android:password="true" android:singleLine="true"/>
                </com.google.android.material.textfield.TextInputLayout>
                <LinearLayout android:gravity="center" android:padding="3dp" android:visibility="gone" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true">
                    <ImageView android:padding="10dp" android:visibility="gone" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/cross_grey" android:layout_centerVertical="true"/>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/get_password_button_lyt" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_below="@+id/new_password_RL">
            <Button android:textSize="20sp" android:textColor="@android:color/white" android:id="@+id/get_password_btn" android:background="@drawable/button_click" android:padding="@dimen/dimen_20dp" android:focusable="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/wallet_15_dp" android:text="@string/proceed" android:singleLine="true" android:textAllCaps="false" android:stateListAnimator="@null"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_20dp" android:layout_below="@+id/forgot_password_ParentView1">
        <TextView android:textSize="@dimen/wallet_14_sp" android:textColor="@color/paytm_blue" android:id="@+id/passcode_text" android:padding="@dimen/dimen_10dp" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/enter_current_passcode" android:layout_centerHorizontal="true"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/forgot_passcode_edt_ll" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:layout_below="@+id/passcode_text" android:layout_centerHorizontal="true">
            <net.one97.paytm.common.widgets.PasscodeEditText android:textSize="25sp" android:textStyle="bold" android:textColor="@android:color/black" android:gravity="center_horizontal" android:background="@drawable/passcode_edt_bg" android:layout_width="50dp" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:maxLines="1" android:maxLength="1" android:inputType="numberPassword" android:importantForAutofill="2"/>
            <net.one97.paytm.common.widgets.PasscodeEditText android:textSize="25sp" android:textStyle="bold" android:textColor="@android:color/black" android:gravity="center_horizontal" android:background="@drawable/passcode_edt_bg" android:layout_width="50dp" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:maxLines="1" android:maxLength="1" android:inputType="numberPassword" android:importantForAutofill="2"/>
            <net.one97.paytm.common.widgets.PasscodeEditText android:textSize="25sp" android:textStyle="bold" android:textColor="@android:color/black" android:gravity="center_horizontal" android:background="@drawable/passcode_edt_bg" android:layout_width="50dp" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:maxLines="1" android:maxLength="1" android:inputType="numberPassword" android:importantForAutofill="2"/>
            <net.one97.paytm.common.widgets.PasscodeEditText android:textSize="25sp" android:textStyle="bold" android:textColor="@android:color/black" android:gravity="center_horizontal" android:background="@drawable/passcode_edt_bg" android:layout_width="50dp" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:maxLines="1" android:maxLength="1" android:inputType="numberPassword" android:importantForAutofill="2"/>
            <ImageView android:layout_gravity="center_vertical" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="25dp" android:src="@drawable/availble_click_image"/>
        </LinearLayout>
        <TextView android:textSize="@dimen/wallet_14_sp" android:textColor="@color/error_color" android:id="@+id/passocde_not_match" android:padding="@dimen/dimen_10dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/forgot_passwrd_invalid_passcode" android:layout_below="@+id/forgot_passcode_edt_ll" android:layout_centerHorizontal="true"/>
        <TextView android:textSize="@dimen/wallet_14_sp" android:textColor="@color/paytm_blue" android:padding="@dimen/dimen_10dp" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/do_not_remember_passcode" android:layout_below="@+id/passocde_not_match" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</RelativeLayout>
