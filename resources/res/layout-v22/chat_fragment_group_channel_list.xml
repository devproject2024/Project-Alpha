        </RelativeLayout>
        <include layout="@layout/chat_fragment_group_channel_blank"/>
        <include layout="@layout/chat_merchant_onboarding_layout"/>
        <include layout="@layout/chat_merchant_upcoming_onboarding_layout"/>
    </FrameLayout>
    <include android:id="@+id/layoutLoader" android:visibility="gone" layout="@layout/chat_dialog_loading"/>
</RelativeLayout>
