                    <com.paytm.android.chat.view.ChatHeadView android:id="@+id/image_group_chat_contact_image1" android:layout_width="40dp" android:layout_height="40dp"/>
                    <LinearLayout android:gravity="center" android:id="@+id/ll_contact_image2" android:background="@drawable/chat_shape_share_contact_me_bg" android:layout_width="40dp" android:layout_height="40dp" android:layout_marginStart="-26dp">
                        <com.paytm.android.chat.view.ChatHeadView android:id="@+id/image_group_chat_contact_image2" android:layout_width="36dp" android:layout_height="36dp"/>
                    </LinearLayout>
                    <LinearLayout android:gravity="center" android:id="@+id/ll_friend_count_container" android:background="@drawable/chat_shape_friend_count" android:layout_width="40dp" android:layout_height="40dp" android:layout_marginStart="-26dp">
                        <TextView android:textSize="10sp" android:textColor="@color/white" android:gravity="center" android:layout_gravity="center" android:id="@+id/tv_friend_count" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
                <TextView android:textSize="12sp" android:textColor="@color/chat_nepal" android:gravity="start" android:layout_gravity="center" android:id="@+id/tv_new_friend_noti" android:paddingTop="@dimen/dimen_10dp" android:paddingBottom="@dimen/dimen_10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="6" android:paddingStart="12dp" android:paddingEnd="12dp"/>
                <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="@color/color_00B9F5" android:gravity="end" android:layout_gravity="center" android:id="@+id/tv_view" android:paddingTop="@dimen/dimen_10dp" android:paddingBottom="@dimen/dimen_10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="View" android:layout_weight="2"/>
            </LinearLayout>
            <View android:background="@color/color_E8EDF3" android:layout_width="match_parent" android:layout_height="@dimen/dimen_1dp" android:layout_marginLeft="50dp" android:layout_marginRight="50dp" android:layout_marginHorizontal="50dp"/>
        </LinearLayout>
        <RelativeLayout android:layout_gravity="bottom|center_vertical|center_horizontal|center" android:orientation="vertical" android:id="@+id/ll_btn_new_chat" android:background="@drawable/chat_new_bg_layer" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="32dp">
            <LinearLayout android:orientation="horizontal" android:paddingBottom="7dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true" android:layout_centerVertical="true">
                <ImageView android:layout_gravity="center" android:layout_width="@dimen/dimen_18dp" android:layout_height="@dimen/dimen_18dp" android:src="@drawable/chat_icon_group_input_upload_add" android:tint="@color/white"/>
