    <FrameLayout android:background="#fff" android:descendantFocusability="blocksDescendants" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="@dimen/dimen_15dp" android:layout_below="@+id/friend_search">
        <TextView android:textSize="@dimen/dimen_14sp" android:textColor="@color/black" android:gravity="center" android:layout_gravity="top|center_vertical|center_horizontal|center" android:id="@+id/tv_no_results" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_25dp" android:text="@string/chat_module_chat_no_results"/>
