            <EditText android:textSize="@dimen/dimen_14sp" android:textColor="@android:color/black" android:textColorHint="#748fa6" android:id="@+id/friend_search_edit" android:background="@null" android:layout_width="match_parent" android:layout_height="match_parent" android:hint="@string/chat_module_friend_search_hint" android:singleLine="true" android:layout_centerVertical="true" android:inputType="textNoSuggestions" android:imeOptions="actionSearch" android:textCursorDrawable="@drawable/chat_shape_get_focus" android:layout_toStartOf="@+id/tv_friend_search_exit" android:layout_toEndOf="@+id/img_friend_search"/>
