<?xml version="1.0" encoding="utf-8"?>
<net.one97.paytm.moneytransfer.utils.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/swipe_layout_2" android:layout_width="match_parent" android:layout_height="wrap_content" app:dragEdge="2" app:mode="oneLine">
    <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="match_parent">
        <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#ffffff" android:gravity="center" android:id="@+id/delete_tv" android:background="#fd5c5c" android:layout_width="90dp" android:layout_height="match_parent" android:text="@string/delete" android:fontFamily="sans-serif-medium" android:letterSpacing="0.06"/>
        <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#ffffff" android:gravity="center" android:id="@+id/history_tv" android:background="#0250d3" android:layout_width="95dp" android:layout_height="match_parent" android:text="@string/money_transfer_history" android:fontFamily="sans-serif-medium" android:letterSpacing="0.06"/>
    </LinearLayout>
    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:id="@+id/beneficiary_item" android:background="@color/white" android:paddingLeft="@dimen/dimen_20dp" android:paddingTop="@dimen/dimen_12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:animateLayoutChanges="true" android:elevation="0dp">
            <RelativeLayout android:id="@+id/iconLayout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_2dp" android:layout_marginRight="@dimen/dimen_15dp" android:animateLayoutChanges="true">
                <TextView android:textSize="15sp" android:textStyle="bold" android:textColor="@color/white" android:gravity="center" android:id="@+id/beneficiary_circle" android:background="#2cce86" android:visibility="gone" android:layout_width="38dp" android:layout_height="38dp" android:fontFamily="@string/font_family_roboto_regular"/>
                <RelativeLayout android:id="@+id/layer_contact_list_backgrnd" android:background="@drawable/bg_rounded_corner_acc_page" android:visibility="gone" android:layout_width="38dp" android:layout_height="38dp"/>
                <ImageView android:layout_gravity="center" android:id="@+id/beneficiary_no_name_icon" android:background="@drawable/white_circle_white_stroke" android:padding="5dp" android:visibility="gone" android:layout_width="38dp" android:layout_height="38dp" android:src="@drawable/ic_bank_sbi"/>
                <ImageView android:layout_gravity="right" android:id="@+id/selected_icon" android:background="@drawable/white_circle_white_stroke" android:visibility="gone" android:layout_width="38dp" android:layout_height="38dp" android:src="@drawable/tick_transparent" android:alpha="0.9"/>
                <TextView android:textSize="10sp" android:textStyle="normal" android:textColor="#999999" android:ellipsize="end" android:gravity="center_horizontal" android:layout_gravity="bottom|right|center_vertical|center_horizontal|center|end" android:id="@+id/headerBankLogoName" android:visibility="gone" android:layout_width="75dp" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginRight="10dp" android:maxLines="1" android:layout_below="@+id/beneficiary_no_name_icon" android:fontFamily="sans-serif"/>
            </RelativeLayout>
            <TextView android:textSize="15sp" android:textColor="#222222" android:ellipsize="end" android:id="@+id/beneficiary_number" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_20dp" android:maxLines="1" android:layout_toRightOf="@+id/iconLayout" android:fontFamily="sans-serif"/>
            <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#999999" android:ellipsize="end" android:id="@+id/beneficiary_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_marginRight="@dimen/dimen_20dp" android:maxLines="1" android:layout_toRightOf="@+id/iconLayout" android:layout_below="@+id/beneficiary_number" android:fontFamily="@string/font_family_roboto_regular"/>
            <RelativeLayout android:id="@+id/check_balance_parent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/iconLayout" android:layout_below="@+id/beneficiary_name">
                <TextView android:textSize="@dimen/cart_12sp" android:textColor="#00b9f5" android:id="@+id/check_balance_tv" android:paddingTop="6dp" android:paddingBottom="6dp" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_6dp" android:text="@string/check_balance" android:layout_centerVertical="true" android:fontFamily="@string/font_family_roboto_regular" android:paddingVertical="6dp"/>
                <com.airbnb.lottie.LottieAnimationView android:id="@+id/wallet_loader" android:visibility="gone" android:layout_width="80dp" android:layout_height="20dp" android:layout_marginLeft="-10dp" android:layout_marginTop="@dimen/dimen_6dp" app:amount="5" app:animationDirectionbundle="-1" app:circleSize="8" app:duration="@android:integer/config_mediumAnimTime" app:endColor="@color/light_blue_A400" app:startColor="@color/light_blue_A700"/>
            </RelativeLayout>
            <TextView android:textSize="11sp" android:textStyle="normal" android:textColor="#999999" android:ellipsize="end" android:id="@+id/date_tv" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_15dp" android:text="@string/money_transfer_successfully" android:maxLines="1" android:lineSpacingExtra="0sp" android:fontFamily="@string/font_family_roboto_regular"/>
            <View android:background="@color/color_f3f7f8" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="@dimen/dimen_11dp" android:layout_toRightOf="@+id/iconLayout" android:layout_below="@+id/check_balance_parent"/>
        </RelativeLayout>
    </FrameLayout>
</net.one97.paytm.moneytransfer.utils.SwipeRevealLayout>
