<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.google.android.material.appbar.AppBarLayout android:id="@+id/appBar" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" app:elevation="@dimen/dimen_0dp">
        <com.google.android.material.appbar.CollapsingToolbarLayout android:id="@+id/collapsing_toolbar" android:fitsSystemWindows="true" android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_scrollFlags="3">
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dimen_24dp">
                    <ImageView android:layout_gravity="center_vertical" android:id="@+id/iv_back" android:padding="@dimen/dimen_20dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/upi_ic_back"/>
                    <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="@color/new_black" android:id="@+id/heading" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="@dimen/dimen_10dp" android:layout_marginBottom="@dimen/dimen_10dp" android:text="@string/select_bank" android:layout_below="@+id/iv_back" android:lineSpacingExtra="6sp" android:fontFamily="sans-serif"/>
                    <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#506d85" android:id="@+id/tv_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_below="@+id/heading" android:fontFamily="sans-serif" android:letterSpacing="0.04"/>
                </RelativeLayout>
                <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/cl_banks_layout" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#506d85" android:id="@+id/popular" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginRight="@dimen/dimen_20dp" android:text="@string/upi_popular_banks" android:fontFamily="sans-serif-medium" android:letterSpacing="0.08" android:layout_marginHorizontal="@dimen/dimen_20dp" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0"/>
                    <androidx.recyclerview.widget.RecyclerView android:id="@+id/gridRecycler" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginRight="@dimen/dimen_20dp" android:layout_marginHorizontal="@dimen/dimen_20dp" app:layoutManager="androidx.recyclerview.widget.GridLayoutManager" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/popular" app:spanCount="4"/>
                    <TextView android:textSize="@dimen/dimen_12sp" android:textStyle="normal" android:textColor="@color/new_black" android:gravity="center_vertical" android:id="@+id/tv_other_banks_header" android:background="#f5f8fa" android:paddingLeft="@dimen/dimen_20dp" android:paddingTop="@dimen/dimen_10dp" android:paddingBottom="@dimen/dimen_10dp" android:layout_width="match_parent" android:layout_height="0dp" android:layout_marginTop="@dimen/dimen_32dp" android:text="@string/upi_all_other_banks" android:textAllCaps="true" android:fontFamily="@string/font_family_roboto_medium" android:paddingVertical="@dimen/dimen_10dp" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/gridRecycler"/>
                    <ImageView android:id="@+id/iv_search" android:padding="@dimen/dimen_5dp" android:visibility="gone" android:layout_width="@dimen/dimen_32dp" android:layout_height="@dimen/dimen_32dp" android:layout_marginEnd="@dimen/dimen_15dp" app:layout_constraintBottom_toBottomOf="@+id/tv_other_banks_header" app:layout_constraintEnd_toEndOf="0" app:layout_constraintTop_toTopOf="@+id/tv_other_banks_header" app:srcCompat="@drawable/ic_bank_search"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
        <RelativeLayout android:id="@+id/rl_search_box" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_collapseMode="1">
            <ImageView android:id="@+id/iv_search_back" android:padding="@dimen/dimen_20dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/upi_ic_back"/>
            <EditText android:textSize="@dimen/cart_16sp" android:textColor="@color/new_black" android:textColorHint="#506d85" android:gravity="center_vertical" android:id="@+id/et_search" android:background="@color/transparent" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_15dp" android:hint="@string/upi_search_bank" android:singleLine="true" android:digits="@string/upi_alpha_string" android:layout_toRightOf="@+id/iv_search_back" android:layout_centerVertical="true" android:fontFamily="@string/font_family_roboto_medium"/>
            <ImageView android:id="@+id/iv_cross_search" android:visibility="gone" android:layout_width="16dp" android:layout_height="16dp" android:layout_marginTop="@dimen/dimen_20dp" android:layout_alignParentRight="true" android:layout_marginEnd="20dp" app:srcCompat="@drawable/ic_blue_close"/>
            <View android:background="#f5f8fa" android:layout_width="match_parent" android:layout_height="2dp" android:layout_below="@+id/iv_search_back"/>
        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <FrameLayout android:background="@color/white" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/rv_bank_list" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent"/>
        <ProgressBar android:layout_gravity="center" android:id="@+id/pb_progress" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/ll_empty_container_upi" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
            <ImageView android:id="@+id/iv_empty_result" android:layout_width="110dp" android:layout_height="90dp" android:layout_marginTop="@dimen/dimen_100dp" app:srcCompat="@drawable/ic_img_no_bank"/>
            <net.one97.paytm.upi.common.RoboTextView android:textSize="@dimen/wallet_17_sp" android:textColor="@color/color_222222" android:id="@+id/tv_empty_result" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_20dp" android:text="@string/no_results" app:fontType="3"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/ll_error_container" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_centerInParent="true">
            <ImageView android:id="@+id/iv_error_image" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_100dp" android:src="@drawable/error_server"/>
            <TextView android:textSize="@dimen/wallet_16_sp" android:textColor="@color/color_222222" android:gravity="center" android:id="@+id/tv_error_msg" android:padding="@dimen/dimen_16dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/upi_some_went_wrong"/>
            <TextView android:textSize="@dimen/wallet_18_sp" android:textColor="@color/color_00b9f5" android:id="@+id/tv_retry" android:background="@drawable/blue_rounded_border" android:padding="@dimen/dimen_16dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_24dp" android:text="@string/retry"/>
        </LinearLayout>
    </FrameLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
