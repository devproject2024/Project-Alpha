<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/container_metro_qrcode_item" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="13sp" android:textStyle="normal" android:textColor="#00c33b" android:id="@+id/penaltyText" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Trip Updated" android:layout_centerHorizontal="true" android:fontFamily="sans-serif-medium"/>
        <TextView android:textSize="@dimen/dimen_21sp" android:textStyle="bold" android:textColor="#000000" android:gravity="center_horizontal" android:id="@+id/tv_metro_station" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Andheri to Versova" android:layout_below="@+id/penaltyText" android:layout_centerHorizontal="true" android:lineSpacingExtra="@dimen/dimen_3sp" android:fontFamily="sans-serif"/>
        <LinearLayout android:gravity="center" android:id="@+id/journey_container" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true">
            <TextView android:textSize="21sp" android:textStyle="bold" android:textColor="#000000" android:gravity="center_horizontal" android:id="@+id/txt_source" android:layout_width="wrap_content" android:layout_height="wrap_content" android:lineSpacingExtra="3sp" android:fontFamily="sans-serif"/>
            <ImageView android:padding="3dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:tint="@color/black" app:srcCompat="@drawable/ic_metro_qr_right_arrow"/>
            <TextView android:textSize="21sp" android:textStyle="bold" android:textColor="#000000" android:gravity="center_horizontal" android:id="@+id/txt_destination" android:layout_width="wrap_content" android:layout_height="wrap_content" android:lineSpacingExtra="3sp" android:fontFamily="sans-serif"/>
        </LinearLayout>
        <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#222222" android:gravity="center_horizontal" android:id="@+id/txt_trip_left" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_6dp" android:layout_below="@+id/tv_metro_station" android:layout_centerHorizontal="true" android:lineSpacingExtra="10sp" android:fontFamily="sans-serif-medium"/>
        <TextView android:textSize="@dimen/dimen_14sp" android:textStyle="normal" android:textColor="#222222" android:gravity="center_horizontal" android:id="@+id/tv_qr_msg" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_6dp" android:text="@string/metro_mumbai_qr_msg" android:layout_below="@+id/txt_trip_left" android:layout_centerHorizontal="true" android:fontFamily="sans-serif"/>
        <FrameLayout android:id="@+id/e_qr_img" android:padding="@dimen/dimen_1dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_20dp" android:layout_below="@+id/tv_qr_msg" android:layout_centerHorizontal="true">
            <ImageView android:layout_gravity="center" android:id="@+id/e_qr_image" android:layout_width="235dp" android:layout_height="243dp"/>
        </FrameLayout>
        <FrameLayout android:id="@+id/layout_expired" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/dimen_2dp" android:layout_alignLeft="@+id/e_qr_img" android:layout_alignTop="@+id/e_qr_img" android:layout_alignRight="@+id/e_qr_img" android:layout_alignBottom="@+id/e_qr_img">
            <View android:background="#fff" android:layout_width="match_parent" android:layout_height="match_parent" android:alpha="0.7"/>
            <TextView android:textSize="@dimen/dimen_14sp" android:textStyle="normal" android:textColor="@color/jr_color_metro_expired" android:layout_gravity="center" android:id="@+id/tv_qr_expired" android:background="@drawable/shape_btn_bg_metro_qrcode_expired" android:layout_width="wrap_content" android:layout_height="wrap_content" android:fontFamily="sans-serif-medium"/>
        </FrameLayout>
        <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#222222" android:gravity="center_horizontal" android:id="@+id/tv_ticket_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:layout_below="@+id/e_qr_img" android:layout_centerHorizontal="true" android:lineSpacingExtra="0sp" android:fontFamily="sans-serif"/>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_28dp" android:layout_below="@+id/tv_ticket_time">
            <TextView android:textSize="@dimen/dimen_12sp" android:textStyle="normal" android:textColor="@color/color_os_blue" android:gravity="center" android:id="@+id/tv_need_help" android:paddingTop="@dimen/dimen_20dp" android:paddingBottom="@dimen/dimen_20dp" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/metro_mumbai_help" android:layout_weight="1" android:fontFamily="sans-serif-medium" android:paddingVertical="@dimen/dimen_20dp"/>
            <View android:id="@+id/view_after_need_help" android:background="#e0ebee" android:layout_width="1dp" android:layout_height="match_parent" android:layout_marginLeft="7dp" android:layout_marginTop="@dimen/dimen_10dp" android:layout_marginRight="7dp" android:layout_marginBottom="@dimen/dimen_10dp" android:layout_marginVertical="@dimen/dimen_10dp"/>
            <TextView android:textSize="@dimen/dimen_12sp" android:textStyle="normal" android:textColor="@color/color_os_blue" android:gravity="center" android:id="@+id/tv_view_ticket_details" android:paddingTop="@dimen/dimen_20dp" android:paddingBottom="@dimen/dimen_20dp" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/metro_mumbai_view_ticket_details" android:layout_weight="1" android:fontFamily="sans-serif-medium" android:paddingVertical="@dimen/dimen_20dp"/>
            <View android:id="@+id/view_before_share" android:background="#e0ebee" android:layout_width="1dp" android:layout_height="match_parent" android:layout_marginLeft="7dp" android:layout_marginTop="@dimen/dimen_10dp" android:layout_marginRight="7dp" android:layout_marginBottom="@dimen/dimen_10dp" android:layout_marginVertical="@dimen/dimen_10dp"/>
            <TextView android:textSize="@dimen/dimen_12sp" android:textStyle="normal" android:textColor="@color/color_os_blue" android:gravity="center" android:id="@+id/tv_share_ticket" android:paddingTop="@dimen/dimen_20dp" android:paddingBottom="@dimen/dimen_20dp" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/metro_mumbai_share_ticket" android:layout_weight="1" android:fontFamily="sans-serif-medium" android:paddingVertical="@dimen/dimen_20dp"/>
        </LinearLayout>
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>
