<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="horizontal" android:id="@+id/ll_upi_toolbar" android:layout_width="match_parent" android:layout_height="@dimen/dimen_55dp">
        <ImageView android:layout_gravity="center_vertical" android:id="@+id/iv_back" android:padding="@dimen/dimen_20dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/upi_ic_back"/>
    </LinearLayout>
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true" android:layout_above="@+id/view_1" android:layout_below="@+id/ll_upi_toolbar">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:gravity="center" android:id="@+id/iv_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/dimen_20dp" app:srcCompat="@drawable/paytm_upi_bhim_icon"/>
            <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="@color/black" android:id="@+id/tv_title" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/dimen_20dp" android:layout_marginTop="@dimen/dimen_20dp" android:text="@string/upi_welcome_back" android:layout_below="@+id/iv_title" android:fontFamily="sans-serif"/>
            <TextView android:textSize="14sp" android:textColor="@color/black" android:id="@+id/tv_desc" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginRight="@dimen/dimen_20dp" android:text="@string/upi_reactivate_msg" android:layout_below="@+id/tv_title" android:lineSpacingMultiplier="1.2" android:fontFamily="sans-serif" android:letterSpacing="0.03"/>
            <TextView android:textSize="@dimen/dimen_16sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/tv_re_activate_account" android:background="@drawable/upi_bg_rect_light_blue" android:layout_width="match_parent" android:layout_height="@dimen/dimen_55dp" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginRight="@dimen/dimen_20dp" android:layout_marginBottom="@dimen/dimen_50dp" android:text="@string/upi_reactivate_account" android:layout_alignParentBottom="true" android:fontFamily="@string/font_family_roboto_medium" android:letterSpacing="0.04"/>
            <ImageView android:gravity="center" android:id="@+id/iv_logo" android:layout_width="253dp" android:layout_height="217dp" android:layout_marginTop="@dimen/dimen_50dp" android:layout_marginBottom="@dimen/dimen_20dp" android:layout_above="@+id/tv_re_activate_account" android:layout_below="@+id/tv_desc" android:layout_centerHorizontal="true" app:srcCompat="@drawable/ic_reactivate"/>
        </RelativeLayout>
    </ScrollView>
    <View android:id="@+id/view_1" android:background="#00b9f5" android:layout_width="match_parent" android:layout_height="10dp" android:layout_above="@+id/view"/>
    <View android:id="@+id/view" android:background="#012b72" android:layout_width="match_parent" android:layout_height="10dp" android:layout_alignParentBottom="true"/>
</RelativeLayout>
