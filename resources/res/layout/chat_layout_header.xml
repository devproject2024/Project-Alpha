<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:id="@+id/choose_docs_header_layout_content" android:paddingLeft="20dp" android:layout_width="match_parent" android:layout_height="81dp">
        <ImageView android:layout_gravity="center_vertical" android:background="@drawable/chat_efp__ic_file" android:layout_width="19dp" android:layout_height="@dimen/files_list_item_thumbnail_size" android:layout_marginRight="@dimen/files_list_item_thumbnail_margin_right"/>
        <TextView android:textSize="18sp" android:textColor="#000000" android:layout_gravity="center_vertical" android:id="@+id/header" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Browse other docs..." android:layout_weight="1"/>
    </LinearLayout>
    <View android:background="#f2f2f2" android:layout_width="match_parent" android:layout_height="1dp" android:layout_alignParentBottom="true"/>
</RelativeLayout>
