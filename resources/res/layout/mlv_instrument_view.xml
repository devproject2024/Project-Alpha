<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/outerContainer" android:paddingTop="@dimen/dimen_15dp" android:paddingBottom="17dp" android:layout_width="match_parent" android:layout_height="match_parent" android:paddingStart="20dp">
    <RelativeLayout android:id="@+id/lyt_container" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:layout_toLeftOf="@+id/iv_mlv_icon" android:layout_alignParentStart="true">
        <CheckBox android:layout_gravity="center" android:id="@+id/ivCheckedUnchecked" android:background="@drawable/offline_check_box" android:layout_width="@dimen/dimen_18dp" android:layout_height="@dimen/dimen_18dp" android:layout_marginLeft="3dp" android:layout_marginTop="5dp" android:button="@android:color/transparent"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/lyt_main_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="@dimen/dimen_35dp" app:layout_constraintTop_toTopOf="0">
            <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="#1d252d" android:id="@+id/tvMerchantName" android:layout_width="wrap_content" android:layout_height="wrap_content" android:lineSpacingExtra="1sp" android:fontFamily="sans-serif" android:letterSpacing="0.04"/>
            <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="11dp">
                <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#506d85" android:id="@+id/tvAvailableBalance" android:layout_width="wrap_content" android:layout_height="wrap_content" android:lineSpacingExtra="3sp" android:fontFamily="sans-serif" android:letterSpacing="0.04"/>
                <ImageView android:layout_gravity="center_vertical" android:id="@+id/ivDownArrow" android:padding="5dp" android:visibility="visible" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginStart="8dp" app:srcCompat="@drawable/down_arrow"/>
                <net.one97.paytm.common.widgets.DotProgressBar android:id="@+id/dot_progress_bar" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="@dimen/dimen_15dp" android:layout_marginLeft="2dp" android:layout_marginTop="4dp" android:layout_marginStart="5dp" app:amount="5" app:animationDirectionbundle="-1" app:circleSize="6" app:duration="@android:integer/config_mediumAnimTime" app:endColor="@color/light_blue_A400" app:startColor="@color/light_blue_A700"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <ImageView android:id="@+id/iv_mlv_icon" android:layout_width="30dp" android:layout_height="30dp" android:layout_marginEnd="@dimen/dimen_15dp" android:layout_alignParentEnd="true" app:srcCompat="@drawable/ic_loyalty_balance"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/lytDetailContainer" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/lyt_container" android:layout_marginStart="@dimen/dimen_35dp">
        <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#506d85" android:id="@+id/tvTotalBalance" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:lineSpacingExtra="3sp" android:fontFamily="sans-serif" android:letterSpacing="0.04"/>
        <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#506d85" android:id="@+id/tvOfferDescription" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:lineSpacingExtra="3sp" android:fontFamily="sans-serif"/>
    </LinearLayout>
</RelativeLayout>
