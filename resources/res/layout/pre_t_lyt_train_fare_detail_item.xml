<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/fare_details_layout" android:paddingLeft="@dimen/dimen_15dp" android:paddingTop="@dimen/dimen_13dp" android:paddingRight="@dimen/dimen_15dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
        <View android:id="@+id/v_left_empty_view" android:visibility="gone" android:layout_width="@dimen/dimen_32dp" android:layout_height="@dimen/dimen_10dp" android:layout_alignParentLeft="true"/>
        <com.paytm.utility.RoboTextView android:textSize="13sp" android:textStyle="normal" android:textColor="#666666" android:ellipsize="end" android:id="@+id/fare_title" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxWidth="272dp" android:layout_toRightOf="@+id/v_left_empty_view" android:fontFamily="sans-serif"/>
        <ImageView android:id="@+id/plus_symbol" android:visibility="gone" android:layout_width="@dimen/dimen_17dp" android:layout_height="@dimen/dimen_17dp" android:layout_marginLeft="12dp" android:src="@drawable/sqaure_plus_thin" android:layout_toRightOf="@+id/fare_title"/>
        <com.paytm.utility.RoboTextView android:textSize="13sp" android:textStyle="normal" android:textColor="#666666" android:id="@+id/fare_value" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_12dp" android:layout_alignParentRight="true" android:fontFamily="sans-serif"/>
        <com.paytm.utility.RoboTextView android:textSize="10sp" android:textStyle="normal" android:textColor="#979797" android:id="@+id/sub_title" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_3dp" android:layout_toRightOf="@+id/v_left_empty_view" android:layout_below="@+id/fare_title" android:fontFamily="sans-serif-light"/>
    </RelativeLayout>
    <View android:id="@+id/bottom_separator_line" android:background="@color/item_cards_seperator_bg" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="1dp" android:layout_marginLeft="@dimen/dimen_15dp" android:layout_marginTop="14dp" android:layout_marginRight="@dimen/dimen_15dp" android:layout_below="@+id/fare_details_layout"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/lv_child_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/bottom_separator_line"/>
</LinearLayout>
