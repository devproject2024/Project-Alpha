<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
        <androidx.appcompat.widget.Toolbar android:gravity="center_vertical" android:id="@+id/nearby_tool_bar" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:elevation="1dp" app:contentInsetEnd="0dp" app:contentInsetStart="0dp">
            <RelativeLayout android:gravity="center_vertical" android:orientation="horizontal" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
                <ImageView android:layout_gravity="center" android:id="@+id/header_back_button" android:paddingLeft="@dimen/dimen_15dp" android:paddingTop="@dimen/dimen_20dp" android:paddingRight="@dimen/dimen_5dp" android:paddingBottom="@dimen/dimen_15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/back_arrow" android:onClick="onClick"/>
                <net.one97.paytm.common.widgets.LightTextView android:textSize="@dimen/cart_15sp" android:ellipsize="end" android:id="@+id/toolbar_heading_nearby_location" android:paddingLeft="@dimen/wallet_5_dp" android:paddingTop="@dimen/wallet_5_dp" android:paddingRight="@dimen/wallet_5_dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:lines="1" android:drawableLeft="@drawable/movie_location_img" android:drawableRight="@drawable/arrow_down" android:drawablePadding="@dimen/dimen_3dp" android:layout_toRightOf="@+id/header_back_button" android:layout_centerInParent="true" android:onClick="onLocationSearchClick" app:fontType="2"/>
                <TextView android:textSize="@dimen/dimen_16sp" android:textColor="@color/black" android:id="@+id/toolbar_heading_toolbar" android:padding="@dimen/dimen_12dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/nearby_heading_name" android:layout_toRightOf="@+id/header_back_button" android:layout_centerVertical="true" android:fontFamily="@string/font_family_roboto_medium" android:layout_toEndOf="@+id/header_back_button"/>
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
        <RelativeLayout android:id="@+id/nearby_layout" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/nearby_tool_bar">
            <ProgressBar android:id="@+id/nearby_progress_bar" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:indeterminateDrawable="@drawable/paytm_progress" android:layout_centerInParent="true"/>
            <LinearLayout android:name="net.one97.paytm.wallet.newdesign.nearby.fragment.NearbywithoutFilterFragment" android:orientation="horizontal" android:id="@+id/nearbywithoutfilterfragment" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/nearby_error_layout_id" android:background="@color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent"/>
        </RelativeLayout>
    </RelativeLayout>
    <include android:gravity="center" android:layout_gravity="bottom" android:id="@+id/nearby_messagebanner" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="@dimen/dimen_100dp" layout="@layout/nb_message_nearby"/>
    <include android:gravity="center" android:layout_gravity="bottom" android:id="@+id/nearby_no_location_banner" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="@dimen/dimen_100dp" layout="@layout/nb_layout_nearby_no_location"/>
    <RelativeLayout android:id="@+id/error_service_not_available_rl" android:layout_width="match_parent" android:layout_height="match_parent" android:animateLayoutChanges="true">
        <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="#000000" android:gravity="center" android:id="@+id/error_service_not_available_tv" android:background="#ebfaff" android:padding="20dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/service_is_only_available_from" android:layout_alignParentBottom="true" android:lineSpacingExtra="6.5sp" android:fontFamily="sans-serif-medium"/>
    </RelativeLayout>
    <androidx.constraintlayout.widget.ConstraintLayout android:layout_gravity="bottom" android:id="@+id/parent_lyt" android:background="@color/color_f3f7f8" android:padding="@dimen/dimen_10dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/without_aadhaar_text" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toTopOf="0"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
