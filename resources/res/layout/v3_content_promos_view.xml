<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/header" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentLeft="true">
        <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#8f969c" android:id="@+id/txt_title" android:background="#f3f7f8" android:paddingLeft="20dp" android:paddingTop="11dp" android:paddingBottom="11dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/txt_viewall" android:layout_alignParentLeft="true" android:lineSpacingExtra="4sp" android:textAllCaps="true" android:fontFamily="@string/font_family_roboto_medium" android:letterSpacing="0.04"/>
        <TextView android:textSize="16sp" android:textStyle="normal" android:textColor="@color/v3_text_color_black" android:id="@+id/txt_mobile_title" android:paddingLeft="20dp" android:paddingTop="11dp" android:paddingBottom="7dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/recent_title_for_mobile_screen" android:layout_alignParentLeft="true" android:fontFamily="@string/font_family_roboto_medium"/>
        <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#00b9f5" android:gravity="center_vertical" android:id="@+id/txt_viewall" android:background="#f3f7f8" android:paddingLeft="20dp" android:paddingTop="11dp" android:paddingRight="20dp" android:paddingBottom="11dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignTop="@+id/txt_title" android:layout_alignBottom="@+id/txt_title" android:layout_alignParentRight="true" android:lineSpacingExtra="3.5sp"/>
    </RelativeLayout>
    <View android:id="@+id/promoTopDivider" android:background="@color/color_f3f7f8" android:visibility="gone" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="@dimen/dimen_8dp" android:layout_below="@+id/header"/>
    <net.one97.paytm.common.views.ShimmerFrameLayout android:id="@+id/shimmer_lyt" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/promoTopDivider">
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/recycler_view" android:visibility="gone" android:layoutAnimation="@anim/recycler_view_layout_animation" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </net.one97.paytm.common.views.ShimmerFrameLayout>
    <include android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/header" layout="@layout/shimmer_lyt_promo"/>
    <FrameLayout android:id="@+id/item_recycler_shimmer" android:background="@color/color_ffffff" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignLeft="@+id/recycler_view" android:layout_alignTop="@+id/recycler_view" android:layout_alignRight="@+id/recycler_view" android:layout_alignBottom="@+id/recycler_view"/>
    <FrameLayout android:id="@+id/no_network_container_promo" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/header"/>
    <RelativeLayout android:id="@+id/view_all_container_mobile" android:paddingLeft="@dimen/dimen_20dp" android:paddingRight="@dimen/dimen_20dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_24dp" android:layout_marginBottom="@dimen/dimen_24dp" android:layout_below="@+id/shimmer_lyt">
        <View android:background="@color/recent_border_or_divider_color" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/dimen_1dp" android:layout_centerVertical="true"/>
        <TextView android:textSize="@dimen/dimen_13sp" android:textColor="@color/v3_status_info_1" android:id="@+id/view_all_tv_mobile" android:background="@drawable/v3_rounded_white_background_grey_border_1dp_radius_16dp" android:paddingLeft="@dimen/dimen_24dp" android:paddingTop="@dimen/dimen_8dp" android:paddingRight="@dimen/dimen_24dp" android:paddingBottom="@dimen/dimen_8dp" android:layout_width="wrap_content" android:layout_height="@dimen/dimen_32dp" android:text="@string/v3_recent_view_all" android:layout_centerHorizontal="true" android:textAlignment="center"/>
    </RelativeLayout>
</RelativeLayout>
