<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:padding="20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/cross_imv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:src="@drawable/pass_ic_close_black_bank" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        <TextView android:textSize="21sp" android:textStyle="bold" android:textColor="#222222" android:id="@+id/header_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Your payments on Paytm Mall" android:layout_toLeftOf="@+id/cross_imv" android:layout_alignParentLeft="true" android:lineSpacingExtra="7sp" android:fontFamily="sans-serif"/>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/recent_history_rv" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1"/>
    <LinearLayout android:layout_gravity="center_horizontal" android:orientation="vertical" android:id="@+id/retry_ll" android:padding="10dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <ImageView android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/pass_retry" android:tint="@color/paytm_blue"/>
        <com.paytm.utility.RoboTextView android:textColor="@color/paytm_blue" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="@string/retry"/>
    </LinearLayout>
    <RelativeLayout android:gravity="center" android:id="@+id/loader_rl" android:background="@color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/dimen_60dp">
        <com.airbnb.lottie.LottieAnimationView android:layout_gravity="center" android:id="@+id/loader" android:visibility="visible" android:layout_width="60dp" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_12dp" android:layout_marginBottom="@dimen/dimen_12dp"/>
    </RelativeLayout>
</LinearLayout>
