<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/rl_cvv_dialog" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="21dp" android:layout_marginRight="20dp">
        <com.paytm.utility.RoboTextView android:textSize="21sp" android:textStyle="bold" android:textColor="@color/color_222222" android:id="@+id/tv_what_is_cvv" android:paddingTop="2dp" android:paddingBottom="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:layout_marginRight="55dp" android:text="@string/what_is_cvv" app:fontType="4"/>
        <ImageView android:id="@+id/iv_close_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginRight="@dimen/dimen_2dp" android:src="@drawable/ptop_close_addmoney" android:layout_alignParentRight="true"/>
        <com.paytm.utility.RoboTextView android:textSize="15sp" android:textColor="@color/color_222222" android:id="@+id/tv_cvv_desc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_marginRight="55dp" android:text="@string/cvv_desc" android:layout_below="@+id/tv_what_is_cvv" android:lineSpacingExtra="8sp" app:fontType="3"/>
        <ImageView android:id="@+id/iv_card_image" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="37dp" android:src="@drawable/cvv_help_addmomoney" android:layout_below="@+id/tv_cvv_desc"/>
    </RelativeLayout>
    <Button android:textSize="15sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/btn_proceed" android:background="@drawable/bg_btn_blue_background" android:layout_width="match_parent" android:layout_height="50dp" android:layout_marginLeft="20dp" android:layout_marginTop="30dp" android:layout_marginRight="20dp" android:layout_marginBottom="@dimen/dimen_18dp" android:text="@string/ok_got_it" android:textAllCaps="false" android:fontFamily="@string/font_family_roboto_medium"/>
</LinearLayout>
