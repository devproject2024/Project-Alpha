<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:background="@drawable/movie_layout_backgrounds" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/movie_status_badge" android:background="@drawable/movie_order_failed" android:paddingLeft="20dp" android:paddingTop="3dp" android:paddingRight="20dp" android:paddingBottom="3dp" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" app:fontType="3"/>
            <ProgressBar android:id="@+id/movie_refress_loader" android:layout_width="15dp" android:layout_height="15dp" android:layout_marginLeft="10dp" android:layout_marginTop="@dimen/progressbar_margin_top" android:indeterminateDrawable="@drawable/progress_large_holo" android:layout_toRightOf="@+id/movie_status_badge" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="@color/payment_success_text_black" android:id="@+id/movie_payment_txt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_centerVertical="true" app:fontType="3"/>
        <com.paytm.utility.RoboTextView android:textSize="16sp" android:textColor="@color/movie_name_color" android:id="@+id/failed_movie_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_centerVertical="true" app:fontType="2"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/failed_movie_date_lyt" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="3">
            <LinearLayout android:layout_width="wrap_content" android:layout_height="18dp">
                <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="@color/payment_success_text_black" android:gravity="bottom" android:layout_gravity="bottom" android:id="@+id/failed_movie_date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_centerVertical="true" app:fontType="2"/>
                <com.paytm.utility.RoboTextView android:textSize="9sp" android:textColor="@color/payment_success_text_black" android:gravity="top" android:layout_gravity="top" android:id="@+id/failed_movie_date_suffix" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/movie_date" app:fontType="2"/>
                <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="@color/payment_success_text_black" android:gravity="bottom" android:layout_gravity="bottom" android:id="@+id/failed_movie_month" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/failed_movie_date_suffix" android:layout_centerVertical="true" app:fontType="2"/>
            </LinearLayout>
            <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="@color/payment_success_text_black" android:id="@+id/failed_movie_time" android:layout_width="wrap_content" android:layout_height="18dp" android:layout_marginLeft="30dp" android:layout_weight="1" android:layout_alignParentLeft="true" android:layout_centerVertical="true" app:fontType="2"/>
            <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="@color/payment_success_text_black" android:id="@+id/movie_duration" android:layout_width="wrap_content" android:layout_height="18dp" android:layout_marginLeft="30dp" android:layout_weight="1" android:layout_alignParentLeft="true" android:layout_centerVertical="true" app:fontType="2"/>
        </LinearLayout>
        <include android:id="@+id/failed_movie_promo_lyt" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="24dp" android:layout_below="@+id/failed_movie_date_lyt" layout="@layout/failed_movie_promo_lyt"/>
        <RelativeLayout android:gravity="center" android:layout_gravity="center" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content">
            <net.one97.paytm.common.widgets.RoboButton android:textSize="16sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/try_again_btn" android:background="@drawable/bg_btn_blue" android:paddingLeft="60dp" android:paddingRight="60dp" android:layout_width="match_parent" android:layout_height="48dp" android:text="@string/bargain_agent_connect_dialog_positive_btn" android:textAllCaps="false" android:stateListAnimator="@null" app:fontType="3"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
