<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <include layout="@layout/chat_view_chat_time"/>
    <RelativeLayout android:id="@+id/card_group_chat_message" android:background="@null" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp">
        <LinearLayout android:orientation="horizontal" android:id="@+id/ll" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginEnd="15dp" android:layout_alignParentEnd="true">
            <LinearLayout android:orientation="vertical" android:id="@+id/group_chat_bubble" android:background="@drawable/chat_shape_chat_self_bg" android:layout_width="282dp" android:layout_height="wrap_content" android:minHeight="185dp">
                <com.paytm.android.chat.view.round.RoundAngleFrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="8dp" app:bottomLeftRadius="@dimen/item_chat_bg_corner" app:bottomRightRadius="@dimen/item_chat_bg_corner" app:topLeftRadius="@dimen/item_chat_bg_corner" app:topRightRadius="@dimen/item_chat_bg_corner">
                    <com.paytm.android.chat.view.round.RoundAngleFrameLayout android:layout_width="282dp" android:layout_height="185dp" android:layout_below="@+id/text_group_chat_date" app:bottomLeftRadius="@dimen/item_chat_bg_corner" app:bottomRightRadius="@dimen/item_chat_bg_corner" app:topLeftRadius="@dimen/item_chat_bg_corner" app:topRightRadius="@dimen/item_chat_bg_corner">
                        <ImageView android:id="@+id/image_group_chat_file_thumbnail" android:background="@null" android:layout_width="282dp" android:layout_height="185dp" android:scaleType="centerCrop"/>
                    </com.paytm.android.chat.view.round.RoundAngleFrameLayout>
                    <FrameLayout android:id="@+id/fl_group_chat_down_button" android:background="#80000000" android:layout_width="282dp" android:layout_height="185dp">
                        <com.paytm.android.chat.view.CircleProgressBar android:layout_gravity="center" android:id="@+id/circle_progress" android:layout_width="55dp" android:layout_height="55dp" app:draw_progress_text="false" app:progress_background_color="@color/white" app:progress_end_color="#00b9f5" app:progress_start_color="#00b9f5" app:progress_stroke_cap="0" app:progress_stroke_width="2dp" app:style="2"/>
                        <ImageView android:layout_gravity="center" android:id="@+id/image_group_chat_image_down" android:layout_width="19dp" android:layout_height="26dp" android:src="@drawable/chat_icon_chat_image_file_down"/>
                    </FrameLayout>
                    <com.paytm.android.chat.view.FlexBoxImage android:id="@+id/ll_group_chat_image_bottom" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="190dp" app:forwardTipId="@+id/text_group_chat_list_forward_tip" app:msgTVId="@+id/text_image_group_chat_file_data" app:timeStatusContainerId="@+id/ll_time_status_container">
                        <TextView android:textSize="10sp" android:textColor="@color/chat_forwarded_color" android:id="@+id/text_group_chat_list_forward_tip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/chat_module_forwarded" android:drawableLeft="@drawable/chat_ic_reply_tip" android:drawablePadding="5dp" android:drawableStart="@drawable/chat_ic_reply_tip"/>
                        <TextView android:textSize="14sp" android:textColor="@color/black" android:textColorLink="#000cf7" android:autoLink="all" android:linksClickable="true" android:id="@+id/text_image_group_chat_file_data" android:layout_width="wrap_content" android:layout_height="wrap_content" android:lineSpacingExtra="4sp"/>
                        <LinearLayout android:orientation="horizontal" android:id="@+id/ll_time_status_container" android:layout_width="wrap_content" android:layout_height="wrap_content">
                            <TextView android:textSize="10sp" android:textColor="@color/chat_color_4D000000" android:layout_gravity="center" android:id="@+id/chat_msg_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="12:00 PM" android:fontFamily="sans-serif-medium" android:layout_marginEnd="2dp"/>
                            <ImageView android:layout_gravity="center" android:id="@+id/image_group_chat_read_receipt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/chat_icon_group_chat_message_state_send"/>
                        </LinearLayout>
                    </com.paytm.android.chat.view.FlexBoxImage>
                </com.paytm.android.chat.view.round.RoundAngleFrameLayout>
            </LinearLayout>
            <ImageView android:id="@+id/arrow" android:layout_width="wrap_content" android:layout_height="wrap_content" app:srcCompat="@drawable/chat_bubble_arrow_me"/>
        </LinearLayout>
        <View android:id="@+id/image_group_chat_status_gradient" android:background="@drawable/chat_icon_chat_image_message_bottm_gradient" android:visibility="invisible" android:layout_width="40dp" android:layout_height="40dp" android:layout_alignRight="@+id/ll" android:layout_alignBottom="@+id/ll"/>
        <View android:id="@+id/view_select_view" android:background="@color/chat_select_bg" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignTop="@+id/ll" android:layout_alignBottom="@+id/ll"/>
    </RelativeLayout>
    <include layout="@layout/chat_layout_group_chat_fail_message_tip"/>
</LinearLayout>
