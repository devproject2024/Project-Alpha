<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/money_transfer_semi_translucent_black" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:background="@drawable/background_top_round" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/cross_iv" android:layout_width="30dp" android:layout_height="30dp" android:layout_marginTop="25dp" android:layout_marginRight="25dp" android:src="@drawable/ic_close_minkyc" android:layout_alignParentRight="true"/>
        <TextView android:textSize="21sp" android:textStyle="bold" android:textColor="#222222" android:id="@+id/w_custom_dialog_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="25dp" android:layout_marginTop="25dp" android:layout_marginRight="10dp" android:text="@string/univ_money_trnsfr_re_enter" android:layout_toLeftOf="@+id/cross_iv" android:layout_alignParentLeft="true" android:lineSpacingExtra="6sp" android:fontFamily="@string/font_family_roboto_regular"/>
        <TextView android:textSize="17sp" android:textStyle="bold" android:textColor="#222222" android:ellipsize="end" android:id="@+id/name_tv" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="25dp" android:layout_marginTop="20dp" android:layout_marginRight="@dimen/dimen_5dp" android:maxLines="1" android:layout_toLeftOf="@+id/imageLayout" android:layout_below="@+id/w_custom_dialog_title" android:layout_alignParentLeft="true" android:lineSpacingExtra="5sp" android:fontFamily="@string/font_family_roboto_regular" android:letterSpacing="0.03"/>
        <TextView android:textSize="15sp" android:textColor="#222222" android:ellipsize="end" android:id="@+id/bank_name_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="25dp" android:layout_marginTop="8dp" android:maxLines="1" android:layout_toLeftOf="@+id/imageLayout" android:layout_below="@+id/name_tv" android:layout_alignParentLeft="true" android:fontFamily="@string/font_family_roboto_regular"/>
        <TextView android:textSize="15sp" android:textColor="#222222" android:ellipsize="end" android:id="@+id/bank_ifsc_tv" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="25dp" android:layout_marginTop="8dp" android:maxLines="1" android:layout_toLeftOf="@+id/imageLayout" android:layout_below="@+id/bank_name_tv" android:layout_alignParentLeft="true" android:fontFamily="@string/font_family_roboto_regular"/>
        <RelativeLayout android:gravity="center_horizontal" android:id="@+id/imageLayout" android:layout_width="75dp" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_15dp" android:layout_alignTop="@+id/name_tv" android:layout_alignParentRight="true">
            <ImageView android:id="@+id/receiver_bank_iv" android:background="@drawable/white_circle_white_stroke" android:padding="15dp" android:visibility="visible" android:layout_width="@dimen/dimen_60dp" android:layout_height="@dimen/dimen_60dp" android:layout_centerHorizontal="true" app:srcCompat="@drawable/ic_default_bank"/>
            <TextView android:textSize="10sp" android:textStyle="normal" android:textColor="#999999" android:ellipsize="end" android:gravity="center_horizontal" android:id="@+id/bankLogoName" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:maxLines="1" android:layout_below="@+id/receiver_bank_iv" android:layout_alignParentRight="true" android:fontFamily="sans-serif"/>
        </RelativeLayout>
        <com.google.android.material.textfield.TextInputLayout android:theme="@style/MoneyTransferEditTextTheme" android:id="@+id/float_p2b_account_number" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="25dp" android:layout_marginTop="30dp" android:layout_marginRight="25dp" android:layout_marginBottom="@dimen/dimen_10dp" android:hint="@string/bank_account_number" android:layout_below="@+id/bank_ifsc_tv" app:hintAnimationEnabled="false">
            <EditText android:textSize="17sp" android:textStyle="bold" android:textColor="@color/color_222222" android:id="@+id/edit_p2b_account_number" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true" android:digits="@string/mt_alphanumeric_string_without_space" android:inputType="none|text|textNoSuggestions|number|phone" android:imeOptions="actionDone"/>
        </com.google.android.material.textfield.TextInputLayout>
        <CheckBox android:textSize="@dimen/dimen_12sp" android:textColor="@color/color_222222" android:ellipsize="marquee" android:id="@+id/checkbox" android:paddingLeft="@dimen/dimen_15dp" android:visibility="gone" android:fadingEdge="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_25dp" android:layout_marginTop="@dimen/dimen_10dp" android:layout_marginRight="@dimen/dimen_25dp" android:layout_marginBottom="@dimen/dimen_10dp" android:checked="true" android:button="@drawable/kyc_checkbox" android:text="@string/univ_money_trnsfr_add_this_account" android:scrollHorizontally="true" android:layout_below="@+id/float_p2b_account_number" android:marqueeRepeatLimit="marquee_forever" android:fontFamily="@string/font_family_roboto_regular"/>
        <TextView android:textSize="17sp" android:textStyle="bold" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/w_custom_dialog_btn_positive" android:background="@drawable/universal_money_transfer_button_bg" android:layout_width="match_parent" android:layout_height="55dp" android:layout_marginLeft="@dimen/dimen_25dp" android:layout_marginTop="10dp" android:layout_marginRight="@dimen/dimen_25dp" android:layout_marginBottom="@dimen/dimen_30dp" android:text="@string/confirm" android:layout_below="@+id/checkbox" android:textAllCaps="false"/>
    </RelativeLayout>
</RelativeLayout>
