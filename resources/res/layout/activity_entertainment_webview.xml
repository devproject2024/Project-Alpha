<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/toolbar" android:background="#ffffff" android:paddingTop="@dimen/dimen_9dp" android:paddingRight="@dimen/dimen_10dp" android:paddingBottom="@dimen/dimen_9dp" android:layout_width="match_parent" android:layout_height="55dp">
        <ImageButton android:id="@+id/back_button" android:background="@android:color/transparent" android:paddingLeft="8dp" android:paddingRight="15dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/back_arrow" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
        <TextView android:textSize="16sp" android:textStyle="normal" android:textColor="#000000" android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/back_button" android:layout_centerVertical="true" android:lineSpacingExtra="8sp" android:fontFamily="sans-serif-medium"/>
    </RelativeLayout>
    <WebView android:id="@+id/entertainment_webview" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/toolbar"/>
</RelativeLayout>
