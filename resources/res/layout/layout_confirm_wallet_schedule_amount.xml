        <RelativeLayout android:gravity="center_vertical" android:id="@+id/lyt_edit_no" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/sep_header">
            <TextView android:textSize="16sp" android:textColor="@android:color/black" android:gravity="center_vertical" android:id="@+id/mobile_code" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/rs" android:includeFontPadding="false" android:layout_alignBottom="@+id/txt_new_label" android:layout_alignParentLeft="true" android:layout_alignParentBottom="@+id/txt_new_label"/>
