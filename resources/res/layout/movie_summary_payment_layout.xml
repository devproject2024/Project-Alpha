<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@drawable/movie_layout_backgrounds" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
        <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="@color/payment_success_text_black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/payment_summary" android:layout_alignParentLeft="true" android:layout_centerVertical="true" app:fontType="2"/>
        <com.paytm.utility.RoboTextView android:textSize="10sp" android:textColor="@color/movie_error" android:id="@+id/paytm_booking_id" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/payment_summary" android:layout_alignParentLeft="true" android:layout_centerVertical="true" app:fontType="2"/>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="horizontal" android:id="@+id/lyt_sub_total" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="9">
                <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="@color/payment_success_text_black" android:id="@+id/ticket_breakdown" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/sub_total" android:layout_weight="6" app:fontType="3"/>
                <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="@color/color_de000000" android:gravity="right" android:id="@+id/sub_total_value" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="3" app:fontType="3"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/lyt_tax_info" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <LinearLayout android:orientation="horizontal" android:id="@+id/payment_lyt_1" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="9">
                <com.paytm.utility.RoboTextView android:textSize="12sp" android:textColor="@color/color_de000000" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/covinience_fee" android:layout_weight="6" app:fontType="2"/>
                <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="@color/color_de000000" android:gravity="right" android:id="@+id/payment_value_1" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="3" app:fontType="2"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:id="@+id/payment_lyt_2" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="9">
                <com.paytm.utility.RoboTextView android:textSize="12sp" android:textColor="@color/color_de000000" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/movie_pg_charges_label" android:layout_weight="6" app:fontType="2"/>
                <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="@color/color_de000000" android:gravity="right" android:id="@+id/payment_value_2" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="3" app:fontType="2"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:id="@+id/payment_lyt_3" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="9">
                <com.paytm.utility.RoboTextView android:textSize="12sp" android:textColor="@color/color_de000000" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/service_tx" android:layout_weight="6" app:fontType="2"/>
                <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="@color/color_de000000" android:gravity="right" android:id="@+id/payment_value_3" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="3" app:fontType="2"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:id="@+id/payment_lyt_4" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="9">
                <com.paytm.utility.RoboTextView android:textSize="12sp" android:textColor="@color/color_de000000" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/swach_bharath_cess" android:layout_weight="6" app:fontType="2"/>
                <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="@color/color_de000000" android:gravity="right" android:id="@+id/payment_value_4" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="3" app:fontType="2"/>
            </LinearLayout>
        </LinearLayout>
        <View android:background="@drawable/dotted_line_blue" android:layout_width="match_parent" android:layout_height="1.5dp"/>
        <RelativeLayout android:id="@+id/lyt_movie_total" android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="@color/color_de000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/total" android:layout_alignParentLeft="true" android:layout_centerVertical="true" app:fontType="3"/>
            <com.paytm.utility.RoboTextView android:textSize="16sp" android:textColor="@color/color_de000000" android:gravity="right" android:id="@+id/total_value" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true" app:fontType="4"/>
        </RelativeLayout>
        <include android:id="@+id/success_movie_promo_lyt" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="24dp" android:layout_below="@+id/lyt_movie_total" layout="@layout/summary_promo_lyt"/>
    </LinearLayout>
</LinearLayout>
