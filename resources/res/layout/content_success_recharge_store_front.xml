<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/white" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:id="@+id/top_layout" android:background="@color/white" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true" android:animateLayoutChanges="true">
        <LinearLayout android:orientation="vertical" android:id="@+id/container_main" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:layout_gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_20dp">
                <RelativeLayout android:layout_width="30dp" android:layout_height="30dp" android:layout_marginLeft="@dimen/dimen_20dp">
                    <ImageView android:id="@+id/img_success" android:layout_width="30dp" android:layout_height="30dp" app:srcCompat="@drawable/ic_metro_ticket_status_purchased"/>
                    <ProgressBar android:id="@+id/status_progress_bar" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                </RelativeLayout>
                <LinearLayout android:orientation="vertical" android:id="@+id/container_recharge" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_15dp" android:layout_marginRight="@dimen/dimen_17dp">
                    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/black" android:ellipsize="end" android:id="@+id/txt_recharge_status" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/recharge_order_status_success" android:maxLines="2" android:layout_weight="1" android:layout_toLeftOf="@+id/view_detail_layout" android:layout_alignParentLeft="true" android:fontFamily="sans-serif"/>
                        <RelativeLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/view_detail_layout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_10dp" android:layout_alignParentEnd="true">
                            <com.paytm.utility.RoboTextView android:textSize="10sp" android:textStyle="normal" android:textColor="#00b9f5" android:gravity="center_vertical" android:id="@+id/view_detail" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/view_details" android:fontFamily="sans-serif-medium" app:fontType="3"/>
                            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/view_detail" android:layout_alignTop="@+id/view_detail" android:layout_alignBottom="@+id/view_detail" app:srcCompat="@drawable/ic_fowrard_arrow_re"/>
                        </RelativeLayout>
                    </LinearLayout>
                    <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="@color/black" android:id="@+id/txt_recharge_amount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:lineSpacingExtra="3sp" android:fontFamily="sans-serif"/>
                    <TextView android:textSize="11sp" android:textStyle="normal" android:textColor="@color/black" android:id="@+id/txt_recharge_number" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_9dp" android:layout_marginBottom="@dimen/dimen_10dp" android:lineSpacingExtra="5sp" android:fontFamily="sans-serif"/>
                </LinearLayout>
            </LinearLayout>
            <View android:id="@+id/footer_strip" android:background="@drawable/shape_bg_recharge_footer_strip" android:layout_width="match_parent" android:layout_height="@dimen/dimen_16dp"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/container_details_data" android:background="@color/color_f3f7f8" android:layout_width="match_parent" android:layout_height="match_parent"/>
    </LinearLayout>
</ScrollView>
