<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/money_transfer_semi_translucent_black" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:background="@drawable/background_top_round" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:id="@+id/transfer_layout" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="20sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/tranfer_from_tv" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_15dp" android:layout_marginTop="@dimen/dimen_25dp" android:text="@string/money_transfer_from_" android:layout_toLeftOf="@+id/close_sheet_iv" android:lineSpacingExtra="3sp" android:animateLayoutChanges="true" android:fontFamily="sans-serif-medium"/>
            <ImageView android:id="@+id/close_sheet_iv" android:paddingLeft="@dimen/dimen_10dp" android:paddingBottom="@dimen/dimen_10dp" android:visibility="visible" android:layout_width="35dp" android:layout_height="35dp" android:layout_marginLeft="@dimen/dimen_5dp" android:layout_marginTop="@dimen/dimen_25dp" android:layout_marginRight="@dimen/dimen_15dp" android:layout_alignParentRight="true" app:srcCompat="@drawable/ic_upi_close"/>
        </RelativeLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView android:id="@+id/recycler_view" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_15dp" android:layout_marginTop="@dimen/dimen_10dp" android:layout_marginRight="@dimen/dimen_15dp" android:layout_alignParentTop="true"/>
            <View android:id="@+id/view_all_separator" android:background="@color/color_f3f7f8" android:visibility="visible" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="@dimen/dimen_50dp" android:layout_marginTop="@dimen/dimen_14dp" android:layout_marginBottom="@dimen/dimen_10dp"/>
            <TextView android:textSize="@dimen/cart_12sp" android:textColor="#00b9f5" android:id="@+id/view_all_accounts_tv" android:paddingTop="7dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_50dp" android:text="@string/money_transfer_view_all_acc" android:fontFamily="@string/font_family_roboto_regular"/>
            <TextView android:textSize="@dimen/cart_15sp" android:textColor="@color/upi_paytm_blue" android:id="@+id/link_another_tv" android:paddingTop="7dp" android:paddingBottom="7dp" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_15dp" android:text="@string/money_transfer_link_bank_account_with_plus" android:fontFamily="@string/font_family_roboto_regular"/>
            <TextView android:textSize="17sp" android:textStyle="bold" android:textColor="#ffffff" android:gravity="center" android:id="@+id/bottom_sheet_button" android:background="@drawable/universal_money_transfer_button_bg" android:visibility="visible" android:layout_width="match_parent" android:layout_height="55dp" android:layout_marginLeft="@dimen/dimen_15dp" android:layout_marginTop="@dimen/dimen_20dp" android:layout_marginRight="@dimen/dimen_15dp" android:layout_marginBottom="@dimen/dimen_25dp" android:text="@string/proceed" android:layout_below="@+id/recycler_view" android:fontFamily="@string/font_family_roboto_regular" android:textAlignment="center"/>
            <RelativeLayout android:id="@+id/rel_bottom" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/bottom_sheet_button">
                <View android:id="@+id/rel_light_blue" android:background="@color/excl_color_00b9f5" android:layout_width="match_parent" android:layout_height="@dimen/wallet_8_dp" android:layout_alignParentTop="true"/>
                <View android:background="@color/paytm_dark_blue" android:layout_width="match_parent" android:layout_height="@dimen/wallet_8_dp" android:layout_below="@+id/rel_light_blue"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
