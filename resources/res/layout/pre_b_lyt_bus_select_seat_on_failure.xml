<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/lyt_filter_root" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_alignParentBottom="true" android:layout_alignParentStart="true">
        <RelativeLayout android:id="@+id/train_filer_header" android:background="@color/color_fdfbd3" android:padding="12dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatImageView android:id="@+id/caution_img" android:layout_width="@dimen/dimen_20dp" android:layout_height="@dimen/dimen_20dp" android:layout_marginTop="@dimen/dimen_4dp" android:layout_marginRight="@dimen/dimen_12dp" android:scaleType="fitCenter" app:srcCompat="@drawable/travel_res_bus_caution_img"/>
            <com.paytm.utility.RoboTextView android:textSize="13sp" android:textStyle="bold" android:textColor="@color/color_222222" android:id="@+id/select_another_seat_txt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/please_select_another_seat" android:layout_toRightOf="@+id/caution_img" app:fontType="3"/>
            <com.paytm.utility.RoboTextView android:textSize="12sp" android:textColor="@color/color_666666" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/select_another_seat_header_message" android:layout_toRightOf="@+id/caution_img" android:layout_below="@+id/select_another_seat_txt" app:fontType="2"/>
        </RelativeLayout>
        <View android:id="@+id/train_line1" android:background="@color/smart_list_divider_grey" android:layout_width="match_parent" android:layout_height="1dp" android:layout_below="@+id/train_filer_header"/>
        <RelativeLayout android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/train_line1">
            <RelativeLayout android:id="@+id/top_bar_conatiner" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:layout_alignParentStart="true">
                <View android:id="@+id/root_divider" android:background="@color/bg_grid_grey" android:layout_width="match_parent" android:layout_height="1dp"/>
                <RelativeLayout android:id="@+id/lyt_top_bar_conatiner" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_5dp" android:layout_below="@+id/root_divider">
                    <LinearLayout android:gravity="center_horizontal" android:orientation="horizontal" android:id="@+id/lower_upper_root_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginBottom="8dp">
                        <TextView android:textSize="13sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/lower_birth_selection" android:background="@drawable/travel_res_bus_left_selected" android:layout_width="112dp" android:layout_height="30dp" android:layout_marginLeft="8dp" android:text="@string/lower_deck" android:textAllCaps="false"/>
                        <TextView android:textSize="13sp" android:textColor="#4a4a4a" android:gravity="center" android:id="@+id/upper_birth_selection" android:background="@drawable/travel_res_bus_right_default" android:layout_width="112dp" android:layout_height="30dp" android:layout_marginRight="3dp" android:text="@string/upper_deck" android:textAllCaps="false"/>
                    </LinearLayout>
                    <View android:id="@+id/root_divider2" android:background="@color/bg_grid_grey" android:visibility="gone" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="3dp" android:layout_below="@+id/lower_upper_root_layout"/>
                    <RelativeLayout android:id="@+id/bus_price_filter_recycler_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/root_divider2">
                        <androidx.recyclerview.widget.RecyclerView android:id="@+id/horizontal_list_view_price_filter" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/dimen_10dp" android:layout_centerInParent="true"/>
                        <View android:background="@color/bg_grid_grey" android:layout_width="match_parent" android:layout_height="1dp" android:layout_below="@+id/horizontal_list_view_price_filter"/>
                    </RelativeLayout>
                    <TextView android:textSize="10sp" android:textColor="@android:color/black" android:gravity="center_horizontal" android:id="@+id/txt_ladies_seat_info" android:paddingLeft="8dp" android:paddingRight="8dp" android:paddingBottom="8dp" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                    <LinearLayout android:orientation="vertical" android:id="@+id/ladies_seat_info_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/bus_price_filter_recycler_layout">
                        <LinearLayout android:gravity="center_horizontal" android:orientation="horizontal" android:paddingTop="5dp" android:layout_width="match_parent" android:layout_height="match_parent">
                            <androidx.appcompat.widget.AppCompatImageView android:layout_gravity="center" android:layout_width="20dp" android:layout_height="20dp" android:contentDescription="@string/app_name"/>
                            <TextView android:textSize="10sp" android:textColor="@color/cart_black" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="@string/bus_seat_ladies"/>
                        </LinearLayout>
                        <View android:id="@+id/ladies_seat_info_layout_divider" android:background="@color/bg_grid_grey" android:visibility="gone" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="10dp"/>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout android:id="@+id/bottom_bar_layout" android:background="@drawable/travel_res_bus_carousel_white_background_grey_border_with_no_padding" android:padding="@dimen/dimen_10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
                    <LinearLayout android:gravity="center_horizontal" android:orientation="horizontal" android:id="@+id/proceed_root_layout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="8dp" android:layout_alignParentRight="true">
                        <Button android:textSize="14sp" android:textColor="@color/white" android:id="@+id/btn_proceed" android:background="@drawable/travel_res_bus_btn_grey_round_cornered" android:layout_width="135dp" android:layout_height="@dimen/dimen_48dp" android:text="@string/select_seat" android:textAllCaps="false"/>
                    </LinearLayout>
                    <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_8dp" android:layout_alignParentLeft="true">
                        <Button android:textSize="14sp" android:textColor="@color/color_00b9f5" android:id="@+id/btn_change_bus" android:background="@drawable/travel_res_bus_bg_button_white_blue_border" android:layout_width="135dp" android:layout_height="@dimen/dimen_48dp" android:text="@string/change_bus" android:textAllCaps="false"/>
                    </LinearLayout>
                    <LinearLayout android:gravity="left" android:orientation="vertical" android:id="@+id/seat_root_layout" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_marginTop="1dp" android:layout_marginRight="5dp" android:layout_alignParentLeft="true" android:layout_centerVertical="true">
                        <TextView android:textSize="12sp" android:textColor="#9b9b9b" android:ellipsize="end" android:id="@+id/txt_label_selected_seats" android:paddingLeft="0dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/selected_seats" android:layout_alignParentLeft="true"/>
                        <TextView android:textSize="12sp" android:textStyle="bold" android:textColor="#323232" android:gravity="right" android:id="@+id/txt_selected_seats" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="3L" android:layout_toRightOf="@+id/txt_label_selected_seats" android:layout_alignParentRight="true"/>
                    </LinearLayout>
                    <LinearLayout android:gravity="left" android:orientation="vertical" android:id="@+id/fare_root_layout" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="1dp" android:layout_marginRight="10dp" android:layout_toLeftOf="@+id/proceed_root_layout" android:layout_centerVertical="true">
                        <TextView android:textSize="12sp" android:textColor="#9b9b9b" android:layout_gravity="left" android:id="@+id/txt_label_total_fare" android:paddingLeft="0dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/book_for_text" android:layout_alignParentLeft="true"/>
                        <TextView android:textSize="12sp" android:textStyle="bold" android:textColor="#323232" android:gravity="left" android:id="@+id/txt_total_fare" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="1500" android:layout_toRightOf="@+id/txt_label_total_fare" android:layout_alignParentRight="true"/>
                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout android:gravity="bottom" android:id="@+id/relative_header" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/wallet_20_dp" android:layout_marginTop="@dimen/wallet_10_dp" android:layout_marginRight="@dimen/wallet_20_dp" android:layout_below="@+id/lyt_top_bar_conatiner">
                    <View android:id="@+id/separator_indicator" android:background="@color/bg_grid_grey" android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1"/>
                    <TextView android:textSize="9dp" android:gravity="bottom|center_vertical|center_horizontal|center" android:background="@android:color/white" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/front" android:layout_weight="1"/>
                    <View android:id="@+id/separator_indicator" android:background="@color/bg_grid_grey" android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout android:orientation="vertical" android:background="@color/bg_grid_grey" android:paddingLeft="@dimen/dimen_1dp" android:paddingRight="@dimen/dimen_1dp" android:paddingBottom="@dimen/dimen_1dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/wallet_20_dp" android:layout_marginRight="@dimen/wallet_20_dp" android:layout_above="@+id/bottom_bar_layout" android:layout_below="@+id/relative_header">
                    <LinearLayout android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <androidx.viewpager.widget.ViewPager android:id="@+id/view_pager_select_seats" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
                <TextView android:textSize="14sp" android:textColor="@color/white" android:id="@+id/txt_bottom_bus_error" android:background="@color/movie_select_seat_bottom_error_bg" android:padding="8dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                <RelativeLayout android:id="@+id/lyt_progress_bar" android:visibility="gone" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent">
                    <com.airbnb.lottie.LottieAnimationView android:id="@+id/lottie_progress_bar" android:layout_width="@dimen/dimen_80dp" android:layout_height="@dimen/dimen_25dp" android:layout_centerInParent="true" app:amount="5" app:animationDirectionbundle="-1" app:circleSize="12" app:duration="@android:integer/config_mediumAnimTime" app:lottie_autoPlay="true" app:lottie_fileName="Payments-Loader.json" app:lottie_loop="true"/>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
