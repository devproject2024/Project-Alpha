<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@drawable/park_rectangle_drawable" android:paddingLeft="16dp" android:paddingTop="19dp" android:layout_width="match_parent" android:layout_height="wrap_content">
