<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/search_head" android:background="#f3f7f8" android:layout_width="match_parent" android:layout_height="60dp" android:transitionName="SearchAnimation">
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_10dp" android:layout_marginTop="@dimen/dimen_14dp" android:layout_marginRight="@dimen/dimen_10dp" android:weightSum="10">
            <androidx.appcompat.widget.AppCompatImageView android:layout_gravity="center" android:id="@+id/search_edit_close" android:visibility="visible" android:layout_width="0dp" android:layout_height="28dp" android:layout_marginRight="@dimen/dimen_7dp" android:layout_weight="1" app:srcCompat="@drawable/ic_back_arrow_dark"/>
            <EditText android:textSize="18sp" android:textStyle="normal" android:textColor="@color/color_222222" android:textColorHint="#9e9e9e" android:ellipsize="end" android:layout_gravity="center" android:id="@+id/search_edit_txt" android:background="@android:color/transparent" android:paddingRight="0dp" android:visibility="visible" android:layout_width="0dp" android:layout_height="wrap_content" android:hint="@string/search_movie_hint" android:singleLine="true" android:layout_weight="8" app:fontType="3"/>
            <androidx.appcompat.widget.AppCompatImageView android:layout_gravity="center" android:id="@+id/close_edit_image" android:visibility="gone" android:layout_width="0dp" android:layout_height="28dp" android:layout_marginLeft="@dimen/dimen_7dp" android:src="@drawable/grey_close" android:layout_weight="1"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/movies_search_rel_landing" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/search_head">
        <net.one97.paytm.o2o.movies.common.customui.CustomTabLayout android:theme="@style/Theme.Design.Light" android:layout_gravity="bottom" android:id="@+id/movie_search_tabs" android:background="@color/white" android:layout_width="match_parent" android:layout_height="62dp" android:elevation="2dp" app:tabGravitybundle="0" app:tabIndicatorColor="#00b9f5" app:tabSelectedTextColor="@color/color_222222" app:tabTextAppearance="@style/TabTextStyle" app:tabTextColor="@color/color_999999"/>
        <androidx.viewpager.widget.ViewPager android:id="@+id/movie_search_viewpager" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/movie_search_tabs" app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/movies_search_rel_lyt" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/search_head">
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/recycler_view" android:paddingBottom="10dp" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="match_parent"/>
        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/err_lyt" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/movie_error_icon"/>
            <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="@color/color_000000" android:gravity="center" android:id="@+id/error_text_quote" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:text="@string/movies_err_msg" android:maxLines="2" app:fontType="2"/>
            <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="@color/color_000000" android:gravity="center" android:id="@+id/error_text" android:paddingTop="10dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/movie_search_error_msg" app:fontType="2"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
