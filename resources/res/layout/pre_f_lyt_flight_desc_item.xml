<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/lyt_flight_place" android:layout_width="match_parent" android:layout_height="60dp">
        <LinearLayout android:gravity="left" android:orientation="horizontal" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
            <com.paytm.utility.RoboTextView android:textSize="18sp" android:textColor="@color/color_000000" android:ellipsize="end" android:id="@+id/flight_city_origin" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Bengalure" android:maxLines="1" android:layout_centerVertical="true" app:fontType="3"/>
            <com.paytm.utility.RoboTextView android:textColor="@color/color_000000" android:id="@+id/image_arrow" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="-" android:layout_toRightOf="@+id/flight_city_origin" android:layout_centerVertical="true"/>
            <com.paytm.utility.RoboTextView android:textSize="18sp" android:textColor="@color/color_000000" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/flight_city_destination" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Bhopal" android:singleLine="true" android:layout_toRightOf="@+id/image_arrow" android:layout_centerVertical="true" android:layout_toEndOf="@+id/image_arrow" app:fontType="3"/>
        </LinearLayout>
        <RelativeLayout android:gravity="right" android:id="@+id/lyt_flight_pnr" android:visibility="gone" android:layout_width="0dp" android:layout_height="60dp" android:layout_marginTop="5dp" android:layout_marginRight="2dp" android:layout_weight="1" android:layout_alignParentRight="true">
            <com.paytm.utility.RoboTextView android:textSize="15sp" android:textColor="@color/color_000000" android:ellipsize="end" android:id="@+id/flight_pnr" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:maxLines="1" android:layout_centerVertical="true" app:fontType="3"/>
            <com.paytm.utility.RoboTextView android:textSize="15sp" android:textColor="@color/color_000000" android:ellipsize="end" android:id="@+id/flight_pnr_no" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:maxLines="1" android:layout_toRightOf="@+id/flight_pnr" android:layout_centerVertical="true" app:fontType="3"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="9">
        <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:id="@+id/flight_code_background" android:background="@drawable/pre_f_flight_flight_rectangle_drawable" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
            <ImageView android:layout_gravity="center_horizontal" android:id="@+id/provider_image_flight" android:layout_width="25dp" android:layout_height="25dp" android:layout_marginTop="10dp" app:srcCompat="@drawable/pre_f_defaultcarrier"/>
            <com.paytm.utility.RoboTextView android:textSize="@dimen/cart_14sp" android:layout_gravity="center_horizontal" android:id="@+id/flight_code" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:text="" android:layout_toRightOf="@+id/provider_image_flight" app:fontType="2"/>
            <com.paytm.utility.RoboTextView android:textSize="@dimen/cart_14sp" android:layout_gravity="center_horizontal" android:id="@+id/flight_no" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:text="" android:layout_toRightOf="@+id/provider_image_flight" app:fontType="2"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:background="@drawable/pre_f_flight_flight_rectangle_drawable" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="8">
            <LinearLayout android:id="@+id/lyt_arilinename" android:layout_width="match_parent" android:layout_height="30dp" android:layout_marginLeft="10dp" android:layout_marginTop="5dp">
                <com.paytm.utility.RoboTextView android:textSize="@dimen/cart_14sp" android:textColor="@color/flight_review_flight_name" android:gravity="center_vertical" android:id="@+id/flight_date" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="" android:layout_toRightOf="@+id/provider_image_flight" app:fontType="2"/>
                <com.paytm.utility.RoboTextView android:textSize="@dimen/cart_14sp" android:textColor="@color/flight_review_flight_name" android:gravity="center_vertical" android:id="@+id/flight_no_of_travellers" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="5dp" android:text="" android:layout_toRightOf="@+id/flight_date" app:fontType="2"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:id="@+id/lyt_flight_details" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp">
                <RelativeLayout android:orientation="horizontal" android:id="@+id/view_flight_from" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:gravity="center" android:layout_gravity="left" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp">
                        <com.paytm.utility.RoboTextView android:textSize="22sp" android:textColor="@color/flight_review_flight_name" android:id="@+id/flight_origin_code" android:layout_width="wrap_content" android:layout_height="30dp" android:text="origin" app:fontType="1"/>
                        <com.paytm.utility.RoboTextView android:textSize="18sp" android:textColor="@color/flight_review_flight_name" android:id="@+id/flight_dep_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="wdwdw" app:fontType="3"/>
                    </LinearLayout>
                    <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
                        <ImageView android:background="@drawable/pre_f_duration_clock" android:padding="1dp" android:layout_width="20dp" android:layout_height="20dp" android:scaleType="fitCenter"/>
                        <com.paytm.utility.RoboTextView android:textSize="13dp" android:textColor="#9b9b9b" android:id="@+id/flight_travel_time" android:paddingLeft="2dp" android:paddingTop="2dp" android:paddingRight="2dp" android:paddingBottom="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="" app:fontType="1"/>
                    </LinearLayout>
                    <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:layout_alignParentRight="true">
                        <com.paytm.utility.RoboTextView android:textSize="22sp" android:textColor="@color/flight_review_flight_name" android:id="@+id/flight_destination_code" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="dwdwd" app:fontType="1"/>
                        <com.paytm.utility.RoboTextView android:textSize="18sp" android:textColor="@color/flight_review_flight_name" android:id="@+id/flight_arrival_time" android:layout_width="wrap_content" android:layout_height="30dp" android:text="ssds" app:fontType="3"/>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:id="@+id/view_flight_to" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="10dp" android:layout_marginRight="10dp" android:weightSum="2">
                <com.paytm.utility.RoboTextView android:textSize="12sp" android:textColor="@color/flight_review_airport_complete_name" android:ellipsize="end" android:id="@+id/flight_airpot_name_from" android:paddingBottom="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="2dp" android:layout_marginTop="8dp" android:text="" android:maxLines="2" android:layout_weight="1" android:textAllCaps="false" app:fontType="1"/>
                <com.paytm.utility.RoboTextView android:textSize="12sp" android:textColor="@color/flight_review_airport_complete_name" android:ellipsize="end" android:gravity="right" android:id="@+id/flight_airpot_name_to" android:paddingBottom="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="2dp" android:layout_marginTop="8dp" android:text="" android:maxLines="2" android:layout_weight="1" android:textAllCaps="false" app:fontType="1"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <com.paytm.utility.RoboTextView android:textSize="13sp" android:textColor="@color/flight_itenarary_layover_time" android:gravity="center" android:id="@+id/text_layover_time" android:background="#f3f3f3" android:visibility="visible" android:layout_width="match_parent" android:layout_height="25dp" android:layout_marginTop="15dp" android:text="" app:fontType="2"/>
    </LinearLayout>
</LinearLayout>
