<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:paddingLeft="@dimen/dimen_20dp" android:paddingTop="16dp" android:paddingRight="@dimen/dimen_20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.paytm.utility.RoboTextView android:textSize="18sp" android:textStyle="bold" android:textColor="@color/black" android:id="@+id/nameTv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_10dp" android:layout_toLeftOf="@+id/actorIv" android:layout_alignParentLeft="true" android:fontFamily="sans-serif-medium" app:fontType="3"/>
            <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="@color/color_666666" android:id="@+id/introTv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_6dp" android:layout_below="@+id/nameTv" android:layout_alignLeft="@+id/nameTv" android:layout_alignRight="@+id/nameTv" android:fontFamily="sans-serif-medium" app:fontType="2"/>
            <ImageView android:id="@+id/actorIv" android:layout_width="90dp" android:layout_height="90dp" android:scaleType="centerCrop" android:layout_alignParentRight="true" app:srcCompat="@drawable/ic_actor_placeholder"/>
            <ImageView android:id="@+id/movieCountIv" android:layout_width="24dp" android:layout_height="24dp" android:layout_marginTop="@dimen/dimen_13dp" android:scaleType="centerCrop" android:layout_below="@+id/introTv" app:srcCompat="@drawable/ic_movies_count"/>
            <com.paytm.utility.RoboTextView android:textSize="14sp" android:textStyle="bold" android:textColor="@color/black" android:id="@+id/movieCountTv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="7dp" android:layout_toLeftOf="@+id/actorIv" android:layout_toRightOf="@+id/movieCountIv" android:layout_alignBottom="@+id/movieCountIv" android:fontFamily="sans-serif-medium" app:fontType="3"/>
        </RelativeLayout>
        <include android:id="@+id/bornInfoLL" layout="@layout/actor_info_layout"/>
        <include android:id="@+id/heightLL" layout="@layout/actor_info_layout"/>
        <include android:id="@+id/birthNameLL" layout="@layout/actor_info_layout"/>
        <include android:id="@+id/aliasInfoLL" layout="@layout/actor_info_layout"/>
        <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="@color/black" android:id="@+id/summaryTv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_20dp" android:layout_marginBottom="45dp" android:fontFamily="sans-serif-medium" app:fontType="2"/>
    </LinearLayout>
    <View android:id="@+id/divider" android:background="@color/color_F3F7F8" android:visibility="gone" android:layout_width="match_parent" android:layout_height="10dp"/>
</LinearLayout>
