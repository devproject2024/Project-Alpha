<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center_horizontal" android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/close_icon" android:background="@drawable/close_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/merchant_detail_x_button_bottom_margin"/>
    </LinearLayout>
    <LinearLayout android:gravity="center_horizontal" android:background="@color/white" android:paddingTop="@dimen/dimen_20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <com.paytm.utility.RoboTextView android:textSize="@dimen/merchant_initials_text_size" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/merchant_initails" android:background="@drawable/merchant_initials_bg_ft" android:layout_width="@dimen/merchant_initials_diameter" android:layout_height="@dimen/merchant_initials_diameter" app:fontType="2"/>
    </LinearLayout>
    <RelativeLayout android:background="@color/white" android:paddingBottom="8dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <com.paytm.utility.RoboTextView android:textSize="@dimen/merchant_detail_title_text_size" android:textColor="@color/color_222222" android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:id="@+id/merchant_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_12dp" android:text="@string/fetching" app:fontType="2"/>
        <com.paytm.utility.RoboTextView android:textSize="@dimen/merchant_detail_address_text_size" android:textColor="@color/color_909090" android:gravity="center_horizontal" android:id="@+id/merchant_address" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="@dimen/dimen_3dp" android:layout_marginRight="@dimen/dimen_20dp" android:layout_marginBottom="@dimen/dimen_12dp" android:text="@string/fetching" android:layout_below="@+id/merchant_title" app:fontType="3"/>
        <RelativeLayout android:id="@+id/phone_email_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/merchant_address">
            <View android:background="@color/merchant_details_separator_color" android:layout_width="match_parent" android:layout_height="@dimen/dimen_1dp" android:layout_marginLeft="@dimen/merchant_detail_divider_margin_left"/>
            <RelativeLayout android:gravity="center_vertical" android:id="@+id/phone_num_container" android:layout_width="match_parent" android:layout_height="@dimen/merchant_details_phone_container_height">
                <com.paytm.utility.RoboTextView android:textSize="@dimen/merchant_detail_contact_heading_text_size" android:textColor="@color/greyish_brown" android:id="@+id/contact_literal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/contact_heading_margin_left" android:layout_marginTop="@dimen/dimen_10dp" android:text="@string/contact_number" android:layout_alignParentLeft="true" app:fontType="2"/>
                <com.paytm.utility.RoboTextView android:textSize="@dimen/merchant_detail_contact_num_text_size" android:textColor="@color/merchant_phone_num_color" android:id="@+id/phone_number" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/contact_detail_margin_left" android:layout_marginBottom="@dimen/dimen_8dp" android:text="@string/fetching" android:layout_below="@+id/contact_literal" android:layout_alignParentLeft="true" app:fontType="1"/>
                <ImageView android:id="@+id/call_button" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginRight="@dimen/merchant_detail_call_button_margin_right" android:src="@drawable/call_icon_blue" android:layout_alignParentRight="true" android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <View android:background="@color/merchant_details_separator_color" android:layout_width="match_parent" android:layout_height="@dimen/dimen_1dp" android:layout_marginLeft="@dimen/merchant_detail_divider_margin_left" android:layout_below="@+id/phone_num_container"/>
            <RelativeLayout android:id="@+id/email_container" android:layout_width="match_parent" android:layout_height="@dimen/merchant_details_email_container_height" android:layout_below="@+id/phone_num_container">
                <com.paytm.utility.RoboTextView android:textSize="@dimen/merchant_detail_contact_heading_text_size" android:textColor="@color/greyish_brown" android:id="@+id/email_literal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/contact_heading_margin_left" android:layout_marginTop="@dimen/dimen_10dp" android:text="@string/email" android:layout_alignParentLeft="true" app:fontType="2"/>
                <com.paytm.utility.RoboTextView android:textSize="@dimen/merchant_detail_contact_num_text_size" android:textColor="@color/merchant_phone_num_color" android:id="@+id/email_id" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/contact_detail_margin_left" android:layout_marginBottom="@dimen/dimen_8dp" android:text="@string/fetching" android:layout_below="@+id/email_literal" android:layout_alignParentLeft="true" app:fontType="1"/>
                <ImageView android:id="@+id/email_button" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginRight="@dimen/merchant_detail_call_button_margin_right" android:src="@drawable/email_icon_blue_ft" android:layout_alignParentRight="true" android:layout_alignParentEnd="true"/>
            </RelativeLayout>
        </RelativeLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/ratings_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/phone_email_container">
            <com.paytm.utility.RoboTextView android:textSize="@dimen/ratings_literal_text_size" android:textColor="@color/color_222222" android:id="@+id/ratings_literal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_13dp" android:layout_marginTop="@dimen/dimen_12dp" android:text="@string/ratings" app:fontType="3"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
