<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:id="@+id/success_pending_detail" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent">
        <FrameLayout android:id="@+id/detail_container" android:background="@drawable/card_like_back" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="20dp">
            <LinearLayout android:orientation="vertical" android:paddingLeft="@dimen/dimen_20dp" android:paddingRight="20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <com.paytm.utility.RoboTextView android:textSize="20sp" android:textStyle="bold" android:textColor="@color/black" android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:id="@+id/card_heading" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_30dp" android:lineSpacingExtra="2sp" android:fontFamily="sans-serif" app:fontType="4"/>
                    <com.paytm.utility.RoboTextView android:textSize="18sp" android:textStyle="normal" android:textColor="@color/black" android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:id="@+id/card_price_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_7dp" android:lineSpacingExtra="4sp" android:fontFamily="sans-serif-light" app:fontType="1"/>
                </LinearLayout>
                <View android:layout_gravity="center_horizontal" android:background="@color/color_e2ebee" android:layout_width="@dimen/dimen_30dp" android:layout_height="2dp" android:layout_margin="@dimen/dimen_20dp"/>
                <com.paytm.utility.RoboTextView android:textSize="12sp" android:textStyle="normal" android:textColor="#666666" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="Use Voucher Code to redeem movie pass" android:fontFamily="sans-serif" app:fontType="2"/>
                <com.paytm.utility.RoboTextView android:textSize="20sp" android:textStyle="normal" android:textColor="#012b72" android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:id="@+id/card_promo_code_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="9dp" android:layout_marginBottom="30dp" android:lineSpacingExtra="-0.5sp" android:fontFamily="sans-serif-medium" app:fontType="3"/>
                <View android:id="@+id/promo_divider" android:background="@color/divider_color" android:visibility="gone" android:layout_width="match_parent" android:layout_height="1dp"/>
                <RelativeLayout android:gravity="center_vertical" android:id="@+id/promo_code_container" android:paddingTop="@dimen/padding_normal" android:paddingBottom="@dimen/padding_normal" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="11sp" android:textStyle="normal" android:textColor="#222222" android:gravity="center" android:id="@+id/promo_code" android:background="@drawable/ic_deal_promo_tag_selector" android:paddingLeft="@dimen/dimen_8dp" android:paddingRight="@dimen/dimen_20dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="@dimen/dimen_70dp" android:maxLines="1" android:layout_centerVertical="true" android:fontFamily="sans-serif-medium"/>
                    <com.paytm.utility.RoboTextView android:textSize="11sp" android:textStyle="normal" android:textColor="#666666" android:id="@+id/promo_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_toRightOf="@+id/promo_code" android:lineSpacingExtra="6dp" android:fontFamily="sans-serif"/>
                </RelativeLayout>
            </LinearLayout>
        </FrameLayout>
        <net.one97.paytm.o2o.movies.common.widgets.CJRExpandableTncView android:id="@+id/tnc_view" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" app:minVisibleLines="3"/>
    </LinearLayout>
    <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="#ffffff" android:gravity="center" android:id="@+id/failure_detail" android:background="@drawable/rounded_corner_3dp_blue" android:visibility="gone" android:layout_width="match_parent" android:layout_height="54dp" android:layout_marginLeft="20dp" android:layout_marginRight="@dimen/dimen_20dp" android:layout_marginBottom="20dp" android:text="Retry now" android:lineSpacingExtra="1sp" android:fontFamily="sans-serif"/>
</FrameLayout>
