<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="horizontal" android:paddingTop="20dp" android:paddingBottom="20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView android:layout_gravity="center" android:id="@+id/notification_icon" android:layout_width="40dp" android:layout_height="40dp" android:layout_marginLeft="15dp" android:layout_marginRight="10dp" android:layout_marginStart="15dp" android:layout_marginEnd="10dp"/>
    <LinearLayout android:layout_gravity="center" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:textSize="14sp" android:textColor="#000000" android:id="@+id/notification_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="7dp"/>
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
            <ImageView android:layout_gravity="center" android:id="@+id/notification_content_icon" android:layout_width="14dp" android:layout_height="14dp" android:layout_marginRight="5dp" android:layout_marginEnd="5dp"/>
            <TextView android:textSize="14sp" android:textColor="#808080" android:ellipsize="end" android:id="@+id/notification_content" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="30dp" android:maxLines="1" android:layout_marginEnd="30dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
