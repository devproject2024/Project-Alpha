<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="6dp">
    <RelativeLayout android:id="@+id/image_holder_iv" android:background="@drawable/about_movie_no_selection_bg" android:layout_width="80dp" android:layout_height="80dp">
        <ImageView android:id="@+id/event_category_iv" android:padding="10dp" android:layout_width="80dp" android:layout_height="80dp" android:scaleType="centerCrop"/>
    </RelativeLayout>
    <com.paytm.utility.RoboTextView android:textSize="12sp" android:textColor="@color/black" android:gravity="center" android:id="@+id/event_category_title_tv" android:layout_width="80dp" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:maxLines="2" android:layout_below="@+id/image_holder_iv" android:layout_centerHorizontal="true" android:fontFamily="@string/font_family_roboto_medium"/>
    <com.paytm.utility.RoboTextView android:textSize="10sp" android:textColor="#999999" android:id="@+id/event_category_count_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:layout_below="@+id/event_category_title_tv" android:layout_centerHorizontal="true" android:fontFamily="@string/font_family_roboto_medium"/>
</RelativeLayout>
