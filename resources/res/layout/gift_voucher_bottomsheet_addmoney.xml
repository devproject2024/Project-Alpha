    <TextView android:textSize="@dimen/dimen_24sp" android:textStyle="bold" android:textColor="@color/color_222222" android:id="@+id/tv_gift_heading" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_25dp" android:layout_marginTop="@dimen/dimen_25dp" android:layout_toLeftOf="@+id/iv_close" android:layout_alignParentLeft="true" android:lineSpacingExtra="10sp" android:fontFamily="@string/font_family_roboto_regular"/>
