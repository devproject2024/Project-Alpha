<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/table_row_1" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/wallet_10_dp" android:layout_marginTop="@dimen/wallet_20_dp">
        <ImageView android:id="@+id/email_img" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginLeft="@dimen/wallet_10_dp" android:layout_marginTop="-2dp" android:src="@drawable/email" android:layout_alignParentLeft="true"/>
        <com.google.android.material.textfield.TextInputLayout android:theme="@style/PaytmEditTextTheme" android:paddingLeft="@dimen/wallet_10_dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toRightOf="@+id/email_img" app:errorEnabled="true">
            <androidx.appcompat.widget.AppCompatEditText android:textSize="@dimen/cart_16sp" android:id="@+id/new_email" android:paddingRight="40dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/email" android:singleLine="true" android:inputType="textNoSuggestions"/>
        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout android:gravity="center" android:padding="3dp" android:visibility="visible" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true">
            <LinearLayout android:gravity="center" android:id="@+id/lyt_verify_email" android:padding="3dp" android:visibility="gone" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true">
                <ImageView android:id="@+id/img_verify_email" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_verify_now"/>
                <TextView android:textStyle="italic" android:layout_gravity="center_vertical" android:id="@+id/text_verify_email" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="3dp" android:text="@string/verify_now"/>
            </LinearLayout>
            <ImageView android:id="@+id/cross_button_email" android:padding="10dp" android:visibility="gone" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/cross_grey" android:layout_centerVertical="true"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/table_row_2" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/wallet_10_dp" android:layout_marginTop="@dimen/wallet_20_dp">
        <ImageView android:id="@+id/contact_img" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginLeft="@dimen/wallet_10_dp" android:src="@drawable/contact_new" android:layout_alignParentLeft="true"/>
        <com.google.android.material.textfield.TextInputLayout android:theme="@style/PaytmEditTextTheme" android:paddingLeft="@dimen/wallet_10_dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toRightOf="@+id/contact_img" app:errorEnabled="true">
            <androidx.appcompat.widget.AppCompatEditText android:textSize="@dimen/cart_16sp" android:id="@+id/new_mobile" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/mobile_no" android:singleLine="true" android:maxLength="10" android:inputType="phone"/>
        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout android:gravity="center" android:padding="3dp" android:visibility="visible" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true">
            <LinearLayout android:gravity="center" android:id="@+id/lyt_verify_mobile" android:padding="3dp" android:visibility="gone" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true">
                <ImageView android:id="@+id/img_verify_mobile" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_verify_now"/>
                <TextView android:textStyle="italic" android:layout_gravity="center_vertical" android:id="@+id/text_verify_mobile" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="3dp" android:text="@string/verify_now"/>
            </LinearLayout>
            <ImageView android:id="@+id/cross_button_mobile" android:padding="10dp" android:visibility="gone" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/cross_grey" android:layout_centerVertical="true"/>
        </LinearLayout>
    </RelativeLayout>
    <View android:id="@+id/row_2_separator" android:background="@color/separators" android:layout_width="match_parent" android:layout_height="1dp" android:layout_below="@+id/row_2_separator"/>
</RelativeLayout>
