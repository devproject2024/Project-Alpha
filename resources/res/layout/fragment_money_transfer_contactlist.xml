<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/rl_contacts" android:background="@color/white" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/parent_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
        <androidx.core.widget.NestedScrollView android:id="@+id/nsv_no_permission_lyt" android:layout_width="match_parent" android:layout_height="match_parent">
            <RelativeLayout android:id="@+id/rly_no_permission" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
                <View android:id="@+id/top_separator" android:background="@color/color_f3f7f8" android:layout_width="match_parent" android:layout_height="10dp"/>
                <TextView android:textSize="@dimen/dimen_21sp" android:textStyle="normal" android:textColor="@color/color_00b9f5" android:gravity="center" android:id="@+id/tv_contact_icon" android:background="@drawable/blue_circle_dashed" android:visibility="visible" android:layout_width="36dp" android:layout_height="36dp" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="@dimen/dimen_12dp" android:layout_marginRight="@dimen/dimen_15dp" android:layout_below="@+id/top_separator" android:fontFamily="@string/font_family_roboto_regular"/>
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_10dp" android:layout_marginTop="@dimen/dimen_10dp" android:src="@drawable/contact" android:layout_alignLeft="@+id/tv_contact_icon" android:layout_alignTop="@+id/tv_contact_icon" android:layout_alignStart="@+id/tv_contact_icon"/>
                <TextView android:textSize="@dimen/dimen_15sp" android:textStyle="normal" android:textColor="@color/color_00b9f5" android:id="@+id/tv_load_contact_no" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_20dp" android:layout_marginRight="@dimen/dimen_15dp" android:text="@string/money_transfer_to_contact" android:layout_toRightOf="@+id/tv_contact_icon" android:layout_below="@+id/top_separator" android:layout_centerVertical="true" android:fontFamily="@string/font_family_roboto_regular"/>
                <View android:id="@+id/divider" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="@dimen/dimen_12dp" android:layout_below="@+id/tv_contact_icon"/>
            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>
        <RelativeLayout android:id="@+id/heading_rl" android:background="@color/color_f3f7f8" android:visibility="visible" android:layout_width="match_parent" android:layout_height="36dp">
            <TextView android:textSize="12sp" android:textStyle="bold" android:textColor="@color/color_999999" android:id="@+id/tv_contacts" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:text="@string/money_transfer_contacts" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:textAllCaps="true" android:fontFamily="@string/font_family_roboto_regular" android:letterSpacing="0.08"/>
            <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="@color/color_00b9f5" android:id="@+id/tv_search" android:padding="@dimen/dimen_5dp" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_15dp" android:text="@string/search" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:textAllCaps="true" android:fontFamily="@string/font_family_roboto_regular"/>
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/contact_list" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/heading_rl"/>
    </RelativeLayout>
    <FrameLayout android:id="@+id/progress_layout_contacts" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
        <include layout="@layout/dummy_contact_list"/>
    </FrameLayout>
</RelativeLayout>
