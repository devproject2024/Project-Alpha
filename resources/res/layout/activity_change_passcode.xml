                        <ImageView android:layout_gravity="center_vertical" android:id="@+id/payment_bank_set_passcode_img_done" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="25dp" android:src="@drawable/availble_click_image"/>
