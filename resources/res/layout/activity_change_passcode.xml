                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/bottomLayout" android:background="@color/white" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/change_passcode_content_RL">
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/passcode_bottom_motif" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" app:layout_constraintBottom_toBottomOf="0"/>
                <include android:id="@+id/view_bottom_lines" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true" layout="@layout/pb_base_bottom_forget_passcode_paytm_line"/>
                <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/bottom_logo_layout" android:background="@drawable/passcode_shield_bottom" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dimen_22dp" android:layout_above="@+id/view_bottom_lines" android:layout_centerInParent="true">
