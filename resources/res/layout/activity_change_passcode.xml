                        <TextView android:textSize="@dimen/cart_17sp" android:textColor="@color/color_222222" android:gravity="center" android:id="@+id/passcode_status_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/succesfull_change_passcode" android:layout_below="@+id/passcode_status_separator" android:layout_centerHorizontal="true"/>
                        <Button android:textColor="@color/white" android:id="@+id/change_passcode_ok_button" android:background="@drawable/button_blue" android:padding="@dimen/dimen_10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/dimen_10dp" android:text="@string/ok" android:layout_below="@+id/passcode_status_text" android:layout_centerHorizontal="true"/>
