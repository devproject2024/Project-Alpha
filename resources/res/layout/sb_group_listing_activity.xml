<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:layout_gravity="top" android:id="@+id/toolbar_start_ap" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentStart="true">
        <ImageView android:gravity="bottom" android:id="@+id/split_back_button" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_15dp" android:layout_marginTop="@dimen/dimen_36dp" android:src="@drawable/back_arrow" android:layout_alignParentLeft="true" android:layout_alignParentStart="true"/>
    </RelativeLayout>
    <TextView android:textSize="21sp" android:textStyle="bold" android:textColor="#222222" android:id="@+id/header_pay_receive" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="10dp" android:text="Your Groups" android:fontFamily="sans-serif" android:letterSpacing="0.02"/>
    <RelativeLayout android:id="@+id/layoutCreateGroup" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="@dimen/dimen_10dp">
        <FrameLayout android:id="@+id/imgCreateGroup" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true">
            <net.one97.paytm.CircularImageView android:id="@+id/home_widget_icon" android:background="@drawable/sb_circular_home_widget" android:layout_width="40dp" android:layout_height="40dp"/>
            <ImageView android:layout_gravity="center" android:background="@drawable/sb_ic_plus_splitbill" android:layout_width="@dimen/dimen_15dp" android:layout_height="@dimen/dimen_15dp"/>
        </FrameLayout>
        <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="#00b9f5" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_16dp" android:text="@string/create_new_group" android:layout_toRightOf="@+id/imgCreateGroup" android:layout_centerVertical="true" android:fontFamily="sans-serif"/>
    </RelativeLayout>
    <View android:id="@+id/line" android:background="#f3f7f8" android:visibility="visible" android:layout_width="match_parent" android:layout_height="@dimen/dimen_1dp" android:layout_marginLeft="@dimen/dimen_16dp" android:layout_marginTop="@dimen/dimen_11dp" android:layout_below="@+id/rl" android:layout_marginStart="@dimen/dimen_58dp"/>
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/grouprecycler" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="10dp" android:nestedScrollingEnabled="false"/>
</LinearLayout>
