<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/color_white" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:paddingBottom="30dp" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true">
        <RelativeLayout android:background="@color/color_white" android:layout_width="match_parent" android:layout_height="match_parent">
            <ImageView android:id="@+id/iv_back_arrow" android:background="?android:attr/selectableItemBackground" android:paddingTop="8dp" android:paddingRight="8dp" android:paddingBottom="8dp" android:layout_width="@dimen/dimen_32dp" android:layout_height="@dimen/dimen_32dp" android:layout_marginLeft="20dp" android:layout_marginTop="15dp" android:src="@drawable/pb_ic_back"/>
            <ImageView android:background="?android:attr/selectableItemBackground" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:src="@drawable/pb_ic_payments_bank_logo" android:layout_centerHorizontal="true"/>
            <ImageView android:id="@+id/iv_motif" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_payment_bank_motif" android:layout_alignParentRight="true"/>
            <TextView android:textSize="18sp" android:textStyle="normal" android:textColor="#222222" android:gravity="center_horizontal" android:id="@+id/tv_bnk_x" android:paddingLeft="20dp" android:paddingRight="20dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="@string/pb_cw_ask_exec_to_scan" android:layout_below="@+id/iv_motif" android:layout_centerHorizontal="true" android:lineSpacingExtra="6sp" android:fontFamily="sans-serif-medium"/>
            <TextView android:textSize="36sp" android:textStyle="bold" android:textColor="#222222" android:gravity="center_horizontal" android:id="@+id/tv_amnt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_12dp" android:text="â‚¹3,400" android:layout_below="@+id/tv_bnk_x" android:layout_centerHorizontal="true" android:fontFamily="sans-serif"/>
            <RelativeLayout android:id="@+id/qr_lyt" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="25dp" android:layout_below="@+id/tv_amnt">
                <ImageView android:id="@+id/iv_qr" android:layout_width="400dp" android:layout_height="400dp" android:layout_centerHorizontal="true"/>
                <ImageView android:id="@+id/iv_qr_fade_view" android:background="#ddffffff" android:visibility="gone" android:layout_width="400dp" android:layout_height="400dp" android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <LinearLayout android:gravity="center_horizontal" android:orientation="horizontal" android:id="@+id/ll_qr_expire_timer" android:background="#fff5e5" android:paddingLeft="14dp" android:paddingTop="10dp" android:paddingRight="16dp" android:paddingBottom="10dp" android:layout_width="200dp" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_below="@+id/qr_lyt" android:layout_centerHorizontal="true">
                <ImageView android:id="@+id/clock_iv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/cash_withdraw_clock"/>
                <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#222222" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:text="@string/pb_cw_valid_for" android:lineSpacingExtra="4sp" android:fontFamily="sans-serif"/>
                <TextView android:textSize="12sp" android:textStyle="bold" android:textColor="#222222" android:id="@+id/tv_min" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="7dp" android:lineSpacingExtra="4sp" android:fontFamily="sans-serif"/>
                <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/tv_min_value" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="1dp" android:text="min" android:lineSpacingExtra="4sp" android:fontFamily="sans-serif"/>
                <TextView android:textSize="12sp" android:textStyle="bold" android:textColor="#222222" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:text=":" android:lineSpacingExtra="4sp" android:fontFamily="sans-serif"/>
                <TextView android:textSize="12sp" android:textStyle="bold" android:textColor="#222222" android:id="@+id/tv_sec" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="00" android:lineSpacingExtra="4sp" android:fontFamily="sans-serif"/>
                <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#222222" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="7dp" android:text="sec" android:lineSpacingExtra="4sp" android:fontFamily="sans-serif"/>
            </LinearLayout>
            <LinearLayout android:gravity="center_horizontal" android:orientation="horizontal" android:id="@+id/ll_qr_expired" android:background="#ffe7e7" android:paddingLeft="14dp" android:paddingTop="10dp" android:paddingRight="16dp" android:paddingBottom="10dp" android:visibility="gone" android:layout_width="200dp" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_below="@+id/qr_lyt" android:layout_centerHorizontal="true">
                <ImageView android:id="@+id/clock_iv_expired" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/cash_withdraw_red_clock"/>
                <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#ff585d" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:text="@string/pb_cw_qr_code_has_expired" android:lineSpacingExtra="4sp" android:fontFamily="sans-serif"/>
            </LinearLayout>
            <TextView android:textSize="17sp" android:textStyle="normal" android:textColor="#ffffff" android:gravity="center_horizontal" android:id="@+id/regenerate_qr_tv" android:background="@color/paytm_blue" android:paddingLeft="15dp" android:paddingTop="11dp" android:paddingRight="15dp" android:paddingBottom="11dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="@string/pb_cw_regenerate_qr" android:layout_below="@+id/ll_qr_expired" android:layout_centerHorizontal="true" android:lineSpacingExtra="0sp" android:fontFamily="sans-serif-medium"/>
            <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#506d85" android:gravity="center_horizontal" android:id="@+id/tv_to_avoid" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="@dimen/dimen_20dp" android:layout_marginRight="20dp" android:text="@string/pb_cw_avoid_misuse" android:layout_below="@+id/ll_qr_expire_timer" android:layout_centerHorizontal="true" android:lineSpacingExtra="5sp" android:fontFamily="sans-serif"/>
            <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#00ade6" android:gravity="center_horizontal" android:id="@+id/tv_clear_qr" android:padding="10dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/pb_cw_clear_qr" android:layout_below="@+id/tv_to_avoid" android:layout_centerHorizontal="true" android:lineSpacingExtra="5sp" android:fontFamily="sans-serif-medium"/>
        </RelativeLayout>
    </ScrollView>
    <RelativeLayout android:id="@+id/rl_loader_wrapper" android:background="@color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <include android:id="@+id/view_bottom_lines" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true" layout="@layout/pb_base_bottom_paytm_line"/>
</RelativeLayout>
