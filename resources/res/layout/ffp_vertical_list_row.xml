<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/rl_qp_container" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/container" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <ImageView android:id="@+id/p2p_profile_iv" android:background="@drawable/circle_grey" android:layout_width="50dp" android:layout_height="50dp" android:layout_marginLeft="8dp" android:layout_marginTop="@dimen/dimen_20dp" android:src="@drawable/profile_logout" android:scaleType="fitXY" android:adjustViewBounds="true" android:layout_alignParentLeft="true" android:layout_marginStart="8dp"/>
        <RelativeLayout android:id="@+id/qp_initial_name_rl" android:layout_width="@dimen/dimen_50dp" android:layout_height="@dimen/dimen_50dp" android:layout_marginLeft="8dp" android:layout_marginTop="@dimen/dimen_20dp" android:layout_alignParentLeft="true" android:layout_marginStart="8dp">
            <TextView android:textSize="16sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/qp_initial_name_tv" android:background="@color/movie_yellow" android:layout_width="@dimen/dimen_50dp" android:layout_height="@dimen/dimen_50dp" android:layout_centerInParent="true" android:fontFamily="Roboto-Regular"/>
            <RelativeLayout android:id="@+id/qp_initial_name_bg_rl" android:background="@drawable/bg_rounded_corner_acc_page" android:layout_width="@dimen/dimen_50dp" android:layout_height="@dimen/dimen_50dp" android:layout_centerInParent="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout android:gravity="center_horizontal" android:id="@+id/ll_pay_container" android:background="@drawable/rectangle_boundary" android:paddingLeft="@dimen/dimen_13dp" android:paddingTop="@dimen/dimen_8dp" android:paddingRight="@dimen/dimen_13dp" android:paddingBottom="@dimen/dimen_8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_20dp" android:layout_marginRight="15dp" android:minWidth="@dimen/dimen_75dp" android:layout_alignParentRight="true" android:layout_marginEnd="15dp">
        <ImageView android:id="@+id/img_qp_tick" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_1dp" android:layout_marginRight="@dimen/dimen_5dp" android:src="@drawable/ic_tick_qp"/>
        <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#00b9f5" android:gravity="center_horizontal" android:id="@+id/tvAmount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:lineSpacingExtra="0sp" android:fontFamily="sans-serif"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/qp_content_view_all" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="@dimen/dimen_20dp" android:layout_toLeftOf="@+id/ll_pay_container" android:layout_toRightOf="@+id/container" android:layout_marginStart="16dp">
        <TextView android:textSize="@dimen/dimen_15dp" android:textStyle="normal" android:textColor="#222222" android:ellipsize="end" android:id="@+id/tvPrimaryIdentifier" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="1" android:fontFamily="sans-serif-medium"/>
        <TextView android:textSize="11sp" android:textStyle="normal" android:textColor="#444444" android:ellipsize="end" android:id="@+id/tvSecondaryIdentifier" android:paddingRight="@dimen/dimen_10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_5dp" android:layout_marginRight="8dp" android:maxLines="1" android:fontFamily="sans-serif" android:layout_marginEnd="8dp" android:letterSpacing="0.05"/>
        <TextView android:textSize="@dimen/dimen_12dp" android:textStyle="normal" android:textColor="#999999" android:id="@+id/last_paid_txt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_9dp" android:layout_marginBottom="@dimen/dimen_10dp" android:fontFamily="sans-serif" android:letterSpacing="0.03"/>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/ll_due_date" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_6dp">
            <ImageView android:id="@+id/ivReminderIcon" android:visibility="gone" android:layout_width="@dimen/dimen_11dp" android:layout_height="@dimen/dimen_12dp" android:layout_marginRight="@dimen/dimen_10dp" android:src="@drawable/reminder"/>
            <TextView android:textSize="11sp" android:textStyle="normal" android:textColor="#222222" android:ellipsize="end" android:id="@+id/tvDueDate" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="1" android:lineSpacingExtra="1sp" android:fontFamily="sans-serif" android:letterSpacing="0.05"/>
        </LinearLayout>
        <TextView android:textSize="@dimen/dimen_10dp" android:textStyle="normal" android:textColor="#222222" android:gravity="center_horizontal" android:id="@+id/qp_reminder_tv" android:background="@drawable/payments_reminder_bg" android:paddingLeft="@dimen/dimen_8dp" android:paddingTop="@dimen/dimen_3dp" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:text="@string/due_today" android:layout_below="@+id/tv_operator" android:fontFamily="sans-serif-medium"/>
    </LinearLayout>
    <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toRightOf="@+id/qp_content_view_all" android:layout_below="@+id/ll_pay_container" android:layout_alignParentRight="true">
        <ImageView android:id="@+id/paid_icon" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="@dimen/dimen_12dp" android:src="@drawable/qp_tick"/>
        <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="@color/color_8f969c" android:gravity="center" android:id="@+id/mark_as_paid_txt" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:layout_marginRight="15dp" android:text="@string/mark_as_paid" android:fontFamily="sans-serif" android:layout_marginEnd="15dp" android:letterSpacing="0"/>
    </FrameLayout>
    <RelativeLayout android:id="@+id/mark_as_paid_lyt" android:visibility="gone" android:clickable="true" android:layout_width="80dp" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_12dp" android:layout_marginRight="10dp" android:layout_below="@+id/ll_pay_container" android:layout_alignParentRight="true">
        <TextView android:textSize="@dimen/dimen_12sp" android:textStyle="normal" android:textColor="@color/color_8f969c" android:id="@+id/mark_as_paid_view" android:paddingBottom="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_4dp" android:text="@string/mark_as_paid" android:layout_centerInParent="true" android:fontFamily="sans-serif"/>
    </RelativeLayout>
    <View android:background="@color/pale_grey" android:layout_width="match_parent" android:layout_height="@dimen/dimen_1dp" android:layout_marginLeft="16dp" android:layout_marginTop="@dimen/dimen_18dp" android:layout_toRightOf="@+id/container" android:layout_below="@+id/qp_content_view_all" android:layout_marginStart="16dp"/>
</RelativeLayout>
