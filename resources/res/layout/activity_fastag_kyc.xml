<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:background="#f3f7f8" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/back_arrow" android:padding="20dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/back_arrow"/>
    </LinearLayout>
    <ScrollView android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
        <LinearLayout android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
            <RelativeLayout android:background="#f3f7f8" android:paddingBottom="20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:orientation="vertical" android:id="@+id/title_layout" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <TextView android:textSize="21sp" android:textStyle="bold" android:textColor="#222222" android:id="@+id/tvFastagName" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="5dp" android:text="FASTag" android:lineSpacingExtra="7sp" android:fontFamily="sans-serif"/>
                    <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="10dp" android:text="Car/Jeep/ Van" android:fontFamily="sans-serif"/>
                    <LinearLayout android:orientation="horizontal" android:id="@+id/amount_ll" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="5dp">
                        <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="#000000" android:id="@+id/discounted_amount_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:fontFamily="sans-serif-medium"/>
                        <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/amount_tv" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:fontFamily="sans-serif-light"/>
                    </LinearLayout>
                    <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#00b9f5" android:id="@+id/view_price_breakup_tv" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="15dp" android:text="@string/view_price_breakup" android:fontFamily="sans-serif" android:letterSpacing="0.04"/>
                </LinearLayout>
                <net.one97.paytm.fastag.widget.RoundedRectangularImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="20dp" android:src="@drawable/ic_fastag_car" android:scaleType="fitXY" android:layout_alignBottom="@+id/title_layout" android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <LinearLayout android:orientation="vertical" android:background="@color/white" android:paddingLeft="@dimen/dimen_20dp" android:paddingTop="@dimen/dimen_40dp" android:paddingRight="@dimen/dimen_20dp" android:paddingBottom="@dimen/dimen_20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <EditText android:theme="@style/PaytmEditTextTheme" android:textSize="@dimen/dimen_17sp" android:textColorHint="#999999" android:id="@+id/vehicle_registration_number_et" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/vehical_registration_number" android:inputType="textCapCharacters"/>
                <TextView android:textSize="15sp" android:textStyle="bold" android:textColor="#222222" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="40dp" android:text="@string/upload_photos_of_rc" android:fontFamily="sans-serif"/>
                <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#222222" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="@string/fastag_rejection_msg" android:lineSpacingExtra="2sp" android:fontFamily="sans-serif"/>
                <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp">
                    <net.one97.paytm.fastag.widget.ImageUploader android:id="@+id/rc_pic_front" android:layout_width="match_parent" android:layout_height="90dp" android:layout_weight="1"/>
                    <net.one97.paytm.fastag.widget.ImageUploader android:id="@+id/rc_pic_back" android:layout_width="match_parent" android:layout_height="90dp" android:layout_weight="1"/>
                </LinearLayout>
                <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_40dp">
                    <com.paytm.utility.RoboTextView android:textSize="@dimen/text_size_15sp" android:textStyle="bold" android:textColor="#222222" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/select_delivery_address" android:fontFamily="sans-serif" app:fontType="4"/>
                    <com.paytm.utility.RoboTextView android:textSize="@dimen/text_size_12sp" android:textStyle="normal" android:textColor="@color/paytm_blue" android:gravity="end" android:id="@+id/tv_add_new" android:padding="@dimen/dimen_5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/add_new" android:layout_alignParentRight="true" android:fontFamily="sans-serif-medium" app:fontType="3"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                <androidx.viewpager.widget.ViewPager android:layout_gravity="center" android:id="@+id/address_view_pager" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/dimen_130dp" android:layout_marginTop="@dimen/dimen_10dp" android:layout_marginBottom="@dimen/dimen_30dp" android:minHeight="@dimen/dimen_130dp"/>
                <LinearLayout android:orientation="vertical" android:id="@+id/loader_ll" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <com.airbnb.lottie.LottieAnimationView android:layout_gravity="center_horizontal" android:id="@+id/address_loader" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="30dp" android:adjustViewBounds="true" app:amount="5" app:animationDirectionbundle="-1" app:circleSize="15" app:duration="@android:integer/config_mediumAnimTime" app:endColor="@color/light_blue_A400" app:startColor="@color/light_blue_A700"/>
                </LinearLayout>
            </LinearLayout>
            <View android:background="@color/color_fafbfb" android:layout_width="match_parent" android:layout_height="@dimen/dimen_10dp"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/catelog_info_layout" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:layout_marginBottom="@dimen/dimen_55dp">
                <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_16sp" android:textColor="@color/color_222222" android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_24dp" android:text="@string/fastag_works" android:lineSpacingExtra="5sp"/>
                <View android:layout_gravity="center_horizontal" android:background="@color/color_f4f4f4" android:layout_width="@dimen/dimen_30dp" android:layout_height="3dp" android:layout_marginTop="@dimen/dimen_20dp"/>
                <LinearLayout android:orientation="vertical" android:id="@+id/fastag_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="@dimen/dimen_25dp" android:layout_marginRight="@dimen/dimen_20dp"/>
                <LinearLayout android:orientation="vertical" android:id="@+id/fastag_description_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="@dimen/dimen_25dp" android:layout_marginRight="@dimen/dimen_20dp"/>
                <LinearLayout android:orientation="vertical" android:id="@+id/catalog_loader_ll" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_120dp">
                    <com.airbnb.lottie.LottieAnimationView android:layout_gravity="center_horizontal" android:id="@+id/catalog_loader" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="30dp" android:adjustViewBounds="true" app:amount="5" app:animationDirectionbundle="-1" app:circleSize="15" app:duration="@android:integer/config_mediumAnimTime" app:endColor="@color/light_blue_A400" app:startColor="@color/light_blue_A700"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_18sp" android:textStyle="normal" android:textColor="#ffffff" android:gravity="center_horizontal" android:id="@+id/tv_preceed_to_pay" android:background="@color/paytm_blue" android:padding="17dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:fontFamily="sans-serif-medium" app:fontType="3"/>
</LinearLayout>
