<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true">
    <RelativeLayout android:orientation="vertical" android:id="@+id/lyt_change_password" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
        <com.paytm.utility.RoboTextView android:id="@+id/txt_description" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp" app:fontType="2"/>
        <RelativeLayout android:id="@+id/lyt_current_password" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/dimen_14dp" android:layout_below="@+id/txt_description">
            <com.google.android.material.textfield.TextInputLayout android:theme="@style/PaytmEditTextTheme" android:id="@+id/tilCurrentPwd" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/current_password">
                <androidx.appcompat.widget.AppCompatEditText android:textSize="21sp" android:id="@+id/current_password" android:layout_width="match_parent" android:layout_height="wrap_content" android:password="true" android:singleLine="true" android:fontFamily="sans-serif"/>
            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout android:gravity="center" android:padding="3dp" android:visibility="visible" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true">
                <ImageView android:id="@+id/cross_button_current_pwd" android:padding="10dp" android:visibility="gone" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/cross_grey" android:layout_centerVertical="true"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/lyt_new_password" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_10dp" android:layout_marginRight="@dimen/dimen_10dp" android:layout_below="@+id/lyt_current_password">
            <com.google.android.material.textfield.TextInputLayout android:theme="@style/PaytmEditTextTheme" android:id="@+id/tilNewPwd" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/new_paytm_password">
                <androidx.appcompat.widget.AppCompatEditText android:textSize="21sp" android:id="@+id/new_password" android:layout_width="match_parent" android:layout_height="wrap_content" android:password="true" android:singleLine="true" android:inputType="textPassword" android:fontFamily="@string/font_family_roboto_regular"/>
            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout android:gravity="center" android:padding="3dp" android:visibility="visible" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true">
                <ImageView android:id="@+id/cross_button_new_pwd" android:padding="10dp" android:visibility="gone" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/cross_grey" android:layout_centerVertical="true"/>
            </LinearLayout>
        </RelativeLayout>
        <net.one97.paytm.oauth.view.PasswordStrengthLayout android:id="@+id/layoutPwdStrength" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_10dp" android:layout_marginRight="@dimen/dimen_10dp" android:layout_below="@+id/lyt_new_password"/>
        <RelativeLayout android:id="@+id/lyt_new_password_check" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/dimen_14dp" android:layout_below="@+id/layoutPwdStrength">
            <com.google.android.material.textfield.TextInputLayout android:theme="@style/PaytmEditTextTheme" android:id="@+id/tilRetypeNewPwd" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/retype_new_password">
                <androidx.appcompat.widget.AppCompatEditText android:textSize="21sp" android:id="@+id/new_password_check" android:layout_width="match_parent" android:layout_height="wrap_content" android:password="true" android:singleLine="true" android:fontFamily="@string/font_family_roboto_regular"/>
            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout android:gravity="center" android:padding="3dp" android:visibility="visible" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true">
                <ImageView android:id="@+id/cross_button_new_pwd_check" android:padding="10dp" android:visibility="gone" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/cross_grey" android:layout_centerVertical="true" android:inputType="textPassword" android:fontFamily="@string/font_family_roboto_regular"/>
            </LinearLayout>
        </RelativeLayout>
        <CheckBox android:id="@+id/checkboxLogOutAllDevices" android:layout_width="match_parent" android:layout_height="wrap_content" android:checked="true" android:layout_below="@+id/lyt_new_password_check" android:lineSpacingExtra="@dimen/dimen_7sp" android:paddingStart="@dimen/dimen_15dp" android:paddingEnd="@dimen/dimen_15dp" android:layout_marginStart="@dimen/dimen_15dp" android:layout_marginEnd="@dimen/dimen_15dp" android:buttonTint="@color/color_00b9f5"/>
        <net.one97.paytm.common.widgets.RoboButton android:textSize="18sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/btn_save" android:background="@drawable/selector_blue_btn" android:padding="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/dimen_20dp" android:text="@string/label_update_password" android:layout_below="@+id/checkboxLogOutAllDevices" android:textAllCaps="false" android:stateListAnimator="@null" app:fontType="2"/>
        <TextView android:textSize="@dimen/text_size_14sp" android:textColor="@color/color_00b9f5" android:id="@+id/forgot_password_txt" android:background="?android:attr/selectableItemBackground" android:padding="10dp" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/forgot_password" android:layout_below="@+id/btn_save" android:layout_centerHorizontal="true"/>
        <View android:layout_gravity="center_horizontal" android:id="@+id/view_separator" android:background="@color/divider_color" android:layout_width="40dp" android:layout_height="2dp" android:layout_marginTop="52dp" android:layout_marginBottom="10dp" android:layout_below="@+id/btn_save" android:layout_centerHorizontal="true"/>
        <RelativeLayout android:id="@+id/lyt_progress_bar" android:background="@android:color/transparent" android:visibility="gone" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent">
            <ProgressBar android:layout_width="wrap_content" android:layout_height="wrap_content" android:indeterminateDrawable="@drawable/progress_large_holo" android:layout_centerInParent="true"/>
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>
