<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/layout_bank_header_bar" android:layout_width="match_parent" android:layout_height="?attr/actionBarSize">
        <include android:layout_width="match_parent" android:layout_height="match_parent" layout="@layout/pdc_item_toolbar_center_title"/>
    </RelativeLayout>
    <androidx.core.widget.NestedScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/bottom_tv" android:layout_below="@+id/layout_bank_header_bar">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginBottom="@dimen/dimen_20dp">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
                <RelativeLayout android:id="@+id/pdc_address_image_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginRight="@dimen/dimen_20dp">
                    <com.paytm.utility.RoboTextView android:textSize="@dimen/wallet_18_sp" android:textColor="@color/color_222222" android:layout_gravity="center_horizontal" android:id="@+id/fragment_pdc_address_select_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/personalised_atm_card" app:fontType="4"/>
                    <com.paytm.utility.RoboTextView android:textSize="@dimen/wallet_12_sp" android:textColor="@color/color_444444" android:layout_gravity="center_horizontal" android:id="@+id/fragment_pdc_address_select_photo_sel_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_8dp" android:text="@string/your_selected_photo_has_been_added" android:layout_below="@+id/fragment_pdc_address_select_title" app:fontType="2"/>
                    <com.paytm.utility.RoboTextView android:textSize="@dimen/wallet_12_sp" android:textColor="@color/blue_button_text" android:id="@+id/fragment_pdc_address_select_change_photo_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/change_photo" android:layout_alignTop="@+id/fragment_pdc_address_select_photo_sel_title" android:layout_alignParentRight="true" app:fontType="3"/>
                </RelativeLayout>
                <net.one97.paytm.paymentsBank.widget.PhysicalDebitCardView android:id="@+id/fragment_pdc_address_select_pdcv" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_23dp" android:layout_marginRight="@dimen/dimen_20dp" android:layout_below="@+id/pdc_address_image_layout" app:showProfileImage="false"/>
                <RelativeLayout android:id="@+id/charges_lyt" android:background="@color/color_fafbfb" android:paddingTop="24dp" android:paddingBottom="24dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="20dp">
                    <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_17sp" android:textColor="@color/color_222222" android:id="@+id/atm_card_issuaces_charges_tv" android:layout_width="240dp" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:text="@string/pb_pdc_atm_card_issuance_charges" app:fontType="4"/>
                    <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_12sp" android:textColor="@color/blue" android:id="@+id/atm_card_charges_tv" android:layout_width="240dp" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="5dp" android:text="@string/pb_pdc_atm_charges" android:layout_below="@+id/atm_card_issuaces_charges_tv" app:fontType="3"/>
                    <com.paytm.utility.RoboTextView android:textSize="17sp" android:textColor="@color/color_222222" android:gravity="center" android:id="@+id/atm_price" android:background="@drawable/pb_bg_round_pdc_amount_buy_atm_card" android:paddingLeft="@dimen/dimen_17dp" android:paddingTop="@dimen/dimen_2dp" android:paddingRight="@dimen/dimen_17dp" android:paddingBottom="@dimen/dimen_2dp" android:layout_width="wrap_content" android:layout_height="29dp" android:layout_marginRight="20dp" android:layout_alignTop="@+id/atm_card_issuaces_charges_tv" android:layout_alignParentRight="true"/>
                </RelativeLayout>
                <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_17sp" android:textColor="@color/color_222222" android:layout_gravity="center_horizontal" android:id="@+id/fragment_pdc_address_select_delivery_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginRight="100dp" android:text="@string/pb_pdc_select_address" android:layout_below="@+id/charges_lyt" android:lineSpacingExtra="6sp" app:fontType="4"/>
                <com.paytm.utility.RoboTextView android:textSize="@dimen/wallet_12_sp" android:textColor="@color/blue_button_text" android:id="@+id/fragment_pdc_address_select_add_new" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_20dp" android:text="@string/add_new" android:layout_alignTop="@+id/fragment_pdc_address_select_delivery_title" android:layout_alignParentRight="true" app:fontType="3"/>
                <androidx.recyclerview.widget.RecyclerView android:id="@+id/fragment_pdc_address_select_rv" android:visibility="visible" android:layout_width="match_parent" android:layout_height="140dp" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="@dimen/wallet_15_dp" android:layout_below="@+id/fragment_pdc_address_select_delivery_title" android:nestedScrollingEnabled="false"/>
                <RelativeLayout android:id="@+id/addressLoaderLyt" android:background="@drawable/pb_ba_round_white_bg" android:layout_width="match_parent" android:layout_height="@dimen/dimen_140dp" android:layout_marginLeft="20dp" android:layout_marginTop="20dp" android:layout_marginRight="20dp" android:layout_below="@+id/fragment_pdc_address_select_delivery_title">
                    <com.airbnb.lottie.LottieAnimationView android:id="@+id/addressLoader" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="30dp" android:layout_centerInParent="true" app:amount="5" app:circleSize="15" app:duration="@android:integer/config_mediumAnimTime" app:endColor="@color/light_blue_A400" app:startColor="@color/light_blue_A700" app:animationDirectionbundle="-1"/>
                </RelativeLayout>
                <RelativeLayout android:id="@+id/no_address_layout" android:background="@drawable/pb_ba_round_white_bg" android:visibility="gone" android:layout_width="match_parent" android:layout_height="140dp" android:layout_marginLeft="20dp" android:layout_marginTop="20dp" android:layout_marginRight="20dp" android:layout_below="@+id/fragment_pdc_address_select_delivery_title">
                    <com.paytm.utility.RoboTextView android:textSize="15sp" android:textColor="@color/black" android:gravity="center" android:id="@+id/no_address_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="45dp" android:text="@string/pb_pdc_no_saved_address" android:layout_centerHorizontal="true" app:fontType="3"/>
                    <com.paytm.utility.RoboTextView android:textSize="12sp" android:textColor="@color/color_00b9f5" android:id="@+id/add_new_btn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="@string/pb_pdc_add_new" android:layout_below="@+id/no_address_tv" android:layout_centerHorizontal="true" app:fontType="3"/>
                </RelativeLayout>
                <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/tnc_lyt" android:paddingTop="119dp" android:paddingBottom="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/fragment_pdc_address_select_rv">
                    <com.paytm.utility.RoboTextView android:textSize="@dimen/wallet_12_sp" android:textColor="@color/color_222222" android:id="@+id/tnc_agree" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_5dp" android:text="@string/pdc_proceed_agree" android:layout_alignTop="@+id/fragment_pdc_address_select_delivery_title" android:layout_alignParentRight="true" app:fontType="2"/>
                    <com.paytm.utility.RoboTextView android:textSize="@dimen/wallet_12_sp" android:textColor="@color/blue_button_text" android:id="@+id/tncTv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_20dp" android:text="@string/pdc_tnc" android:layout_alignTop="@+id/fragment_pdc_address_select_delivery_title" android:layout_alignParentRight="true" app:fontType="2"/>
                </LinearLayout>
                <androidx.appcompat.widget.AppCompatButton android:textSize="@dimen/wallet_17sp" android:textColor="@color/white" android:id="@+id/fragment_pdc_address_select_proceed_btn" android:background="@drawable/pb_button_click" android:layout_width="match_parent" android:layout_height="55dp" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginRight="@dimen/dimen_20dp" android:layout_marginBottom="40dp" android:text="@string/proceed" android:layout_below="@+id/tnc_lyt" android:textAllCaps="false"/>
            </RelativeLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#444444" android:gravity="center_horizontal" android:id="@+id/bottom_tv" android:background="@color/color_f3f7f8" android:paddingLeft="22dp" android:paddingTop="5dp" android:paddingRight="22dp" android:paddingBottom="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/pb_pdc_charges_deduction_bottom_text" android:layout_below="@+id/fragment_pdc_address_select_proceed_btn" android:layout_alignParentBottom="true" android:lineSpacingExtra="5sp" android:fontFamily="sans-serif"/>
</RelativeLayout>
