<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/transparent" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:background="@color/transparent" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="24dp" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:layout_alignParentStart="true">
        <LinearLayout android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
            <ImageView android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:src="@drawable/pre_t_dialog_no_internet_image"/>
            <com.paytm.utility.RoboTextView android:textSize="21sp" android:textColor="#222222" android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:id="@+id/w_custom_dialog_title" android:paddingLeft="10dp" android:paddingTop="15dp" android:paddingRight="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/no_internet_detected" app:fontType="1"/>
            <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="@color/warm_gray" android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:id="@+id/w_custom_dialog_message" android:paddingLeft="20dp" android:paddingTop="15dp" android:paddingRight="20dp" android:paddingBottom="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/please_check_internet_conn" android:maxLines="2" app:fontType="2"/>
            <RelativeLayout android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="30dp">
                <View android:background="#f4f4f4" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="30dp" android:layout_marginRight="30dp" android:layout_centerInParent="true"/>
                <ImageView android:background="@drawable/pre_t_or_icon_circle" android:layout_width="32dp" android:layout_height="32dp" android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <com.paytm.utility.RoboTextView android:textSize="21sp" android:textColor="@color/black" android:gravity="center" android:layout_gravity="center" android:paddingLeft="40dp" android:paddingRight="40dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="12dp" android:layout_marginTop="28dp" android:layout_marginRight="12dp" android:text="@string/pay_using_toll_free" android:maxLines="2" app:fontType="1"/>
            <TextView android:textSize="21sp" android:textColor="@color/blue_dot" android:gravity="center" android:layout_gravity="center" android:id="@+id/call_toll_free" android:paddingLeft="@dimen/dimen_34dp" android:paddingRight="@dimen/dimen_34dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginBottom="34dp" android:text="@string/toll_free_number" android:drawableLeft="@drawable/pre_t_call_nobel" android:drawablePadding="@dimen/dimen_2dp" android:fontFamily="@string/font_family_roboto_regular"/>
            <Button android:textSize="16sp" android:textColor="@color/white" android:gravity="center_horizontal" android:id="@+id/ok_btn" android:background="@drawable/rounded_rectangle_paytmblue" android:paddingTop="15dp" android:paddingBottom="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="15dp" android:text="@string/ok"/>
        </LinearLayout>
    </ScrollView>
    <ImageView android:id="@+id/image_cross" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/pre_t_sign_in_close" android:layout_alignParentTop="true" android:layout_alignParentRight="true"/>
</RelativeLayout>
