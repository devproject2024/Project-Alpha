<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:paddingLeft="@dimen/dimen_20dp" android:paddingTop="16dp" android:paddingRight="@dimen/dimen_20dp" android:paddingBottom="20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal" android:id="@+id/ll_wrapper" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:layout_gravity="center" android:id="@+id/iv_rndm_icon" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="#222222" android:layout_gravity="center" android:id="@+id/tv_transfer" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="@string/pb_transfer" android:lineSpacingExtra="4sp" android:fontFamily="sans-serif"/>
            <TextView android:textSize="14sp" android:textColor="#222222" android:layout_gravity="center" android:id="@+id/tv_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:lineSpacingExtra="4sp" android:fontFamily="sans-serif"/>
        </LinearLayout>
        <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#8f969c" android:id="@+id/tv_interest_earned" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="25dp" android:layout_marginTop="5dp" android:text="@string/fd_interest_earned_item_text" android:layout_below="@+id/ll_wrapper" android:lineSpacingExtra="6sp" android:fontFamily="sans-serif"/>
        <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#8f969c" android:id="@+id/tv_tds" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="25dp" android:layout_marginTop="5dp" android:text="@string/pb_tax_deducted" android:layout_below="@+id/tv_interest_earned" android:lineSpacingExtra="6sp" android:fontFamily="sans-serif"/>
        <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="#222222" android:gravity="end" android:id="@+id/tv_fd_amount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:fontFamily="sans-serif"/>
        <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#8f969c" android:id="@+id/tv_failed_to_transfer" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="25dp" android:layout_marginTop="5dp" android:text="@string/pb_failed_to_transfer" android:layout_below="@+id/tv_tds" android:lineSpacingExtra="6sp" android:fontFamily="sans-serif"/>
        <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#ffa400" android:gravity="end" android:id="@+id/tv_processing" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="@string/pb_processing" android:layout_below="@+id/tv_fd_amount" android:layout_alignParentRight="true" android:fontFamily="sans-serif"/>
        <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#8f969c" android:id="@+id/tv_interest_earned_amount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_below="@+id/tv_processing" android:layout_alignParentRight="true" android:lineSpacingExtra="6sp" android:fontFamily="sans-serif"/>
        <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#8f969c" android:id="@+id/tv_tds_amount" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_below="@+id/tv_interest_earned_amount" android:layout_alignParentRight="true" android:lineSpacingExtra="6sp" android:fontFamily="sans-serif"/>
        <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#fd5c5c" android:gravity="end" android:id="@+id/tv_failed_to_transfer_amount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_below="@+id/tv_tds_amount" android:layout_alignParentRight="true" android:lineSpacingExtra="6sp" android:fontFamily="sans-serif"/>
    </RelativeLayout>
    <View android:background="#f3f7f8" android:layout_width="match_parent" android:layout_height="2dp" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_below="@+id/tv_failed_to_transfer_amount"/>
</LinearLayout>
