<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/rl_outer_container" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:id="@+id/mp_initial_name_rl" android:layout_width="@dimen/dimen_36dp" android:layout_height="@dimen/dimen_36dp" android:layout_centerVertical="true">
            <TextView android:textSize="16sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/mp_initial_name_tv" android:background="@color/movie_yellow" android:layout_width="@dimen/dimen_36dp" android:layout_height="@dimen/dimen_36dp" android:text="D" android:layout_alignParentBottom="true" android:layout_centerInParent="true" android:fontFamily="Roboto-Regular"/>
            <ImageView android:id="@+id/imgTick" android:background="#012b72" android:padding="@dimen/dimen_13dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:layout_centerInParent="true" app:srcCompat="@drawable/sb_ic_selection_tick"/>
            <RelativeLayout android:id="@+id/mp_initial_name_bg_rl" android:background="@drawable/bg_rounded_corner_acc_page" android:layout_width="@dimen/dimen_50dp" android:layout_height="@dimen/dimen_50dp" android:layout_alignParentBottom="true" android:layout_centerInParent="true"/>
        </RelativeLayout>
        <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:id="@+id/tvDetail" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_16dp" android:layout_marginTop="@dimen/dimen_11dp" android:layout_toRightOf="@+id/mp_initial_name_rl">
            <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Anish J Abraham" android:layout_centerVertical="true" android:fontFamily="sans-serif"/>
            <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/balancegroupList" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_5dp" android:text="You, Anish, Arjun, Bispasha &amp; 3 others" android:fontFamily="sans-serif"/>
        </LinearLayout>
    </RelativeLayout>
    <View android:id="@+id/line" android:background="#f3f7f8" android:visibility="visible" android:layout_width="match_parent" android:layout_height="@dimen/dimen_1dp" android:layout_marginLeft="@dimen/dimen_16dp" android:layout_marginTop="@dimen/dimen_11dp" android:layout_below="@+id/rl" android:layout_marginStart="@dimen/dimen_58dp"/>
</LinearLayout>
