<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/lyt_pop_up_root" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <net.one97.paytm.recharge.coupons.widget.StickyScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/lyt_price">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="200dp">
                <net.one97.paytm.common.widgets.SmartViewPager android:id="@+id/pager" android:layout_width="match_parent" android:layout_height="200dp"/>
                <RelativeLayout android:id="@+id/page_indicator_layout" android:background="@android:color/transparent" android:paddingLeft="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true">
                    <net.one97.paytm.common.widgets.CirclePageIndicator android:id="@+id/page_indicator" android:background="@android:color/transparent" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                </RelativeLayout>
                <TextView android:textColor="@android:color/white" android:gravity="right" android:id="@+id/product_order_num" android:background="@drawable/product_orders_num" android:paddingLeft="15dp" android:paddingTop="5dp" android:paddingRight="8dp" android:paddingBottom="5dp" android:visibility="gone" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:layout_alignParentTop="true" android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/product_detail_desc_lyt" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="70dp"/>
        </LinearLayout>
    </net.one97.paytm.recharge.coupons.widget.StickyScrollView>
    <LinearLayout android:gravity="center" android:id="@+id/lyt_price" android:background="@drawable/bg_btn_blue" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="60dp" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:layout_marginBottom="15dp" android:layout_alignParentBottom="true">
        <com.paytm.utility.RoboTextView android:textSize="16sp" android:textColor="@color/white" android:id="@+id/text_price" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="3dp" android:text="Free" app:fontType="4"/>
    </LinearLayout>
</RelativeLayout>
