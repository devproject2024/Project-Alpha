<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent" app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_14sp" android:textColor="#222222" android:id="@+id/tvConnectionStatus" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_8dp" android:text="Connected to" android:includeFontPadding="false" android:paddingStart="@dimen/dimen_25dp" android:paddingEnd="@dimen/dimen_16dp" app:fontType="2"/>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_20sp" android:textStyle="bold" android:textColor="@color/color_222222" android:id="@+id/tvTitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/on_demand_Wifi" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:paddingStart="@dimen/dimen_25dp" android:paddingEnd="@dimen/dimen_16dp" android:layout_alignParentStart="true" app:fontType="4"/>
                <com.paytm.utility.RoboTextView android:textSize="12sp" android:textStyle="normal" android:textColor="#00b9f5" android:id="@+id/btnDisconnect" android:paddingTop="@dimen/dimen_8dp" android:paddingBottom="@dimen/dimen_8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="25dp" android:text="@string/disconnect" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_alignParentEnd="true" app:fontType="3"/>
            </RelativeLayout>
            <FrameLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="@dimen/dimen_25dp">
                <LinearLayout android:orientation="vertical" android:id="@+id/rootContentLayout" android:layout_width="match_parent" android:layout_height="match_parent">
                    <androidx.cardview.widget.CardView android:id="@+id/data_card" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="8dp" app:cardCornerRadius="@dimen/dimen_8dp">
                        <LinearLayout android:gravity="center" android:orientation="vertical" android:padding="20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                            <com.paytm.utility.RoboTextView android:textSize="21sp" android:textStyle="bold" android:textColor="#222222" android:id="@+id/totalDataTv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginBottom="8dp" android:lineSpacingExtra="5sp" app:fontType="4"/>
                            <ProgressBar android:id="@+id/progress_bar" android:visibility="visible" android:layout_width="match_parent" android:layout_height="5dp" android:layout_marginTop="8dp" android:progress="50" android:indeterminate="false" android:indeterminateTint="@color/color_high_data" android:indeterminateTintMode="src_atop" style="?android:attr/progressBarStyleHorizontal"/>
                            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp">
                                <com.paytm.utility.RoboTextView android:textSize="12sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/remainingDataTv" android:visibility="visible" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_weight="1" android:layout_below="@+id/progres_bar" android:layout_alignParentLeft="true" android:layout_alignParentStart="true" app:fontType="2"/>
                                <com.paytm.utility.RoboTextView android:textSize="12sp" android:textStyle="normal" android:textColor="#222222" android:gravity="end" android:id="@+id/timeRemainingTv" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_weight="2" android:layout_below="@+id/progres_bar" android:layout_alignParentRight="true" android:layout_alignParentEnd="true" app:fontType="2"/>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp">
                        <androidx.cardview.widget.CardView android:id="@+id/time_card" android:layout_width="0dp" android:layout_height="match_parent" android:layout_margin="8dp" android:layout_weight="1" app:cardCornerRadius="@dimen/dimen_8dp">
                            <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="12dp">
                                <com.paytm.utility.RoboTextView android:textSize="11sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/tv_timing" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/wifi_timing" android:layout_alignParentLeft="true" android:layout_alignParentStart="true" app:fontType="2"/>
                                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_wifi_timing" android:layout_alignParentRight="true" android:layout_alignParentEnd="true"/>
                                <ImageView android:id="@+id/iv_wifi_vendor" android:background="@drawable/wifi_bg_grey_outline_circle" android:padding="10dp" android:layout_width="64dp" android:layout_height="64dp" android:layout_marginTop="30dp" android:layout_below="@+id/tv_timing"/>
                                <com.paytm.utility.RoboTextView android:textSize="14sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/timingTv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_below="@+id/iv_wifi_vendor" app:fontType="2"/>
                                <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#b8c2cb" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:layout_marginBottom="4dp" android:text="Mon - Sun" android:layout_below="@+id/timingTv" android:fontFamily="sans-serif-medium"/>
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView android:id="@+id/speed_card" android:layout_width="0dp" android:layout_height="match_parent" android:layout_margin="8dp" android:layout_weight="1" app:cardCornerRadius="@dimen/dimen_8dp">
                            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="12dp">
                                <com.paytm.utility.RoboTextView android:textSize="11sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/tv_speed" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/wifi_speed" android:layout_alignParentLeft="true" android:layout_alignParentStart="true" app:fontType="2"/>
                                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_wifi_speed" android:layout_alignParentRight="true" android:layout_alignParentEnd="true"/>
                                <ImageView android:id="@+id/iv_wifi_speed_graph" android:layout_width="104dp" android:layout_height="35dp" android:layout_marginTop="57dp" android:src="@drawable/ic_wifi_speed_graph" android:layout_below="@+id/tv_speed"/>
                                <com.paytm.utility.RoboTextView android:textSize="14sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/averageSpeedTv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_below="@+id/iv_wifi_speed_graph" app:fontType="2"/>
                                <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#b8c2cb" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:layout_marginBottom="4dp" android:text="Average" android:layout_below="@+id/averageSpeedTv" android:fontFamily="sans-serif-medium"/>
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <net.one97.paytm.common.widgets.RoboButton android:textSize="@dimen/text_size_16sp" android:textColor="@color/white" android:gravity="center" android:layout_gravity="center" android:id="@+id/btnExtendPlan" android:background="@drawable/bg_btn_blue" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_40dp" android:text="Extend Plan" android:textAllCaps="false" app:fontType="3"/>
                    <com.paytm.utility.RoboTextView android:textSize="12sp" android:textStyle="normal" android:textColor="#00b9f5" android:gravity="center" android:id="@+id/btnConnectNewHotspot" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_20dp" android:text="@string/connect_to_new_internet" app:fontType="2"/>
                    <FrameLayout android:id="@+id/progressRootLayout" android:padding="@dimen/dimen_16dp" android:focusable="true" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <com.airbnb.lottie.LottieAnimationView android:layout_gravity="center" android:id="@+id/loaderView" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="30dp" android:adjustViewBounds="true" app:amount="5" app:circleSize="15" app:duration="@android:integer/config_mediumAnimTime" app:endColor="@color/light_blue_A400" app:startColor="@color/light_blue_A700" app:animationDirectionbundle="-1"/>
                    </FrameLayout>
                </LinearLayout>
                <FrameLayout android:id="@+id/mainProgressLayout" android:background="@color/white" android:padding="@dimen/dimen_16dp" android:focusable="true" android:visibility="gone" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent">
                    <com.airbnb.lottie.LottieAnimationView android:layout_gravity="center" android:id="@+id/mainLoaderView" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="30dp" android:adjustViewBounds="true" app:amount="5" app:circleSize="15" app:duration="@android:integer/config_mediumAnimTime" app:endColor="@color/light_blue_A400" app:startColor="@color/light_blue_A700" app:animationDirectionbundle="-1"/>
                </FrameLayout>
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
