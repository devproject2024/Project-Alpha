<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="#00000000" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:gravity="center" android:background="@drawable/upi_white_rounded_bg_12dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/dimen_25dp" android:layout_centerInParent="true">
        <ImageView android:id="@+id/iv_close" android:layout_width="24dp" android:layout_height="24dp" android:layout_margin="@dimen/dimen_18dp" android:layout_alignParentRight="true" android:layout_alignParentEnd="true" app:srcCompat="@drawable/ic_blue_close"/>
        <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="#1d252d" android:id="@+id/tv_header" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_24dp" android:layout_marginTop="@dimen/dimen_32dp" android:text="@string/upi_now_scan_any" android:lineSpacingExtra="4sp" android:fontFamily="sans-serif"/>
        <ImageView android:id="@+id/tick_1" android:layout_width="17dp" android:layout_height="17dp" android:layout_marginLeft="@dimen/dimen_24dp" android:layout_marginTop="@dimen/dimen_22dp" android:src="@drawable/ic_tick" android:layout_below="@+id/tv_header"/>
        <TextView android:textSize="17sp" android:textStyle="normal" android:textColor="#1d252d" android:id="@+id/tv_paytm_wallet" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_12dp" android:layout_marginTop="@dimen/dimen_18dp" android:text="@string/upi_paytm_wallet" android:maxLines="1" android:layout_toLeftOf="@+id/iv_qr" android:layout_toRightOf="@+id/tick_1" android:layout_below="@+id/tv_header" android:fontFamily="sans-serif"/>
        <ImageView android:id="@+id/tick_2" android:layout_width="17dp" android:layout_height="17dp" android:layout_marginLeft="@dimen/dimen_24dp" android:layout_marginTop="@dimen/dimen_22dp" android:src="@drawable/ic_tick" android:layout_below="@+id/tick_1"/>
        <TextView android:textSize="17sp" android:textStyle="normal" android:textColor="#1d252d" android:id="@+id/tv_any_bank" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_12dp" android:layout_marginTop="@dimen/dimen_18dp" android:text="@string/upi_use_any_bank_account" android:maxLines="1" android:layout_toLeftOf="@+id/iv_qr" android:layout_toRightOf="@+id/tick_2" android:layout_below="@+id/tick_1" android:fontFamily="sans-serif"/>
        <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#506d85" android:id="@+id/tv_no_kyc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_8dp" android:text="@string/upi_no_kyc_required" android:maxLines="1" android:layout_toLeftOf="@+id/iv_qr" android:layout_below="@+id/tv_any_bank" android:fontFamily="sans-serif" android:layout_alignStart="@+id/tv_any_bank"/>
        <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#26d07c" android:id="@+id/tv_upi_offer" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:layout_marginBottom="@dimen/dimen_18dp" android:maxLines="2" android:layout_toLeftOf="@+id/iv_qr" android:layout_below="@+id/tv_no_kyc" android:fontFamily="sans-serif" android:layout_alignStart="@+id/tv_any_bank"/>
        <ImageView android:id="@+id/iv_qr" android:layout_width="124dp" android:layout_height="146dp" android:layout_marginTop="@dimen/dimen_38dp" android:layout_marginRight="@dimen/dimen_5dp" android:layout_below="@+id/tv_header" android:layout_alignParentRight="true" app:srcCompat="@drawable/ic_ill_scan_pay"/>
        <TextView android:textSize="@dimen/dimen_16sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/tv_scan_now" android:background="@drawable/upi_bg_rect_light_blue" android:layout_width="match_parent" android:layout_height="@dimen/dimen_55dp" android:layout_marginLeft="@dimen/dimen_24dp" android:layout_marginRight="@dimen/dimen_24dp" android:layout_marginBottom="@dimen/dimen_30dp" android:text="@string/cash_back_pay_now" android:layout_below="@+id/iv_qr" android:fontFamily="@string/font_family_roboto_medium" android:letterSpacing="0.04"/>
        <View android:id="@+id/view_1" android:background="@drawable/bottom_light_blue_drawable" android:layout_width="match_parent" android:layout_height="8dp" android:layout_below="@+id/tv_scan_now"/>
        <View android:id="@+id/view" android:background="@drawable/bottom_blue_line_drawable" android:layout_width="match_parent" android:layout_height="8dp" android:layout_below="@+id/view_1"/>
    </RelativeLayout>
</RelativeLayout>
