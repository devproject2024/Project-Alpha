<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/black" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:id="@+id/close" android:layout_width="@dimen/dimen_40dp" android:layout_height="@dimen/dimen_40dp" android:layout_centerHorizontal="true" app:srcCompat="@drawable/pb_ic_clear_crop"/>
    <TextView android:textSize="@dimen/dimen_15sp" android:textColor="@color/white" android:id="@+id/done_crop_tv" android:padding="@dimen/dimen_8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_13dp" android:text="@string/done" android:layout_alignParentRight="true" android:lineSpacingExtra="@dimen/dimen_4sp" android:fontFamily="sans-serif-medium" app:srcCompat="@drawable/pb_ic_clear_crop"/>
    <RelativeLayout android:id="@+id/rl_crop_view" android:background="@color/white" android:layout_width="match_parent" android:layout_height="@dimen/dimen_60dp" android:layout_alignParentBottom="true">
        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/rel_center_crop" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_20dp" android:layout_centerInParent="true">
            <ImageView android:id="@+id/img_crop" android:layout_width="@dimen/dimen_20dp" android:layout_height="@dimen/dimen_20dp" app:srcCompat="@drawable/pb_ic_crop"/>
            <TextView android:textColor="@color/paytm_dark_blue" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Crop" android:layout_below="@+id/img_crop"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/rel_left_crop" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_alignParentLeft="true" android:layout_centerInParent="true">
            <ImageView android:id="@+id/img_left_rotate" android:layout_width="@dimen/dimen_20dp" android:layout_height="@dimen/dimen_20dp" app:srcCompat="@drawable/pb_crop_rotate_left"/>
            <TextView android:textColor="@color/paytm_dark_blue" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Left" android:layout_below="@+id/img_left_rotate" android:layout_alignParentLeft="true"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/rel_ryt_crop" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_20dp" android:layout_alignParentRight="true" android:layout_centerInParent="true">
            <ImageView android:id="@+id/img_ryt_rotate" android:layout_width="@dimen/dimen_20dp" android:layout_height="@dimen/dimen_20dp" app:srcCompat="@drawable/pb_crop_rotate_right"/>
            <TextView android:textColor="@color/paytm_dark_blue" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Right" android:layout_below="@+id/img_ryt_rotate"/>
        </LinearLayout>
    </RelativeLayout>
    <net.one97.paytm.paymentsBank.widget.croptool.PBCropImageView android:id="@+id/cropImageView" android:background="@color/black" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/rl_crop_view" android:layout_below="@+id/close"/>
</RelativeLayout>
