<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/row_container" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/rly_selectbank_container" android:paddingLeft="@dimen/accordion_category_text_margin_left" android:layout_width="match_parent" android:layout_height="@dimen/accordion_row_group_height">
        <TextView android:textColor="#000000" android:id="@+id/catalog_cell_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:textIsSelectable="false"/>
        <ImageView android:id="@+id/catalog_plus_image" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/accordion_row_drop_down_padding_right" android:src="@drawable/plus_icon" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:contentDescription="@string/app_name"/>
        <ImageView android:id="@+id/catalog_minus_image" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/accordion_row_drop_down_padding_right" android:src="@drawable/minus_icon" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:contentDescription="@string/app_name"/>
        <ImageView android:id="@+id/arrow_down" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/accordion_row_drop_down_padding_right" android:src="@drawable/expand_down_arrow" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:contentDescription="@string/app_name"/>
        <ImageView android:id="@+id/arrow_up" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/accordion_row_drop_down_padding_right" android:src="@drawable/expand_up_arrow" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:contentDescription="@string/app_name"/>
        <View android:id="@+id/separator" android:background="@color/separators" android:focusable="false" android:visibility="gone" android:clickable="false" android:layout_width="match_parent" android:layout_height="1px" android:layout_alignParentTop="true"/>
    </RelativeLayout>
</RelativeLayout>
