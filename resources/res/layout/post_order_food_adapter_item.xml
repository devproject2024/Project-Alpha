<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="horizontal" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
    <FrameLayout android:id="@+id/top_img_lyt" android:layout_width="100dp" android:layout_height="100dp" android:layout_marginLeft="20dp" android:layout_marginTop="22dp" android:layout_marginBottom="22dp">
        <ImageView android:id="@+id/id_food_img" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="fitXY"/>
        <ImageView android:layout_gravity="top|right|center_vertical|center_horizontal|center" android:id="@+id/id_veg_food" android:paddingTop="@dimen/dimen_2dp" android:paddingRight="@dimen/dimen_2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:scaleType="fitXY"/>
    </FrameLayout>
    <RelativeLayout android:id="@+id/id_food_specs_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_14dp" android:layout_marginTop="22dp" android:layout_marginRight="@dimen/dimen_20dp" android:layout_marginBottom="22dp" android:layout_toRightOf="@+id/top_img_lyt">
        <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="@color/color_222222" android:id="@+id/food_price" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_alignParentRight="true" app:fontType="3"/>
        <com.paytm.utility.RoboTextView android:textSize="11sp" android:textColor="@color/color_999999" android:id="@+id/food_mrp_price" android:paddingTop="@dimen/dimen_3dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/food_price" android:layout_alignParentRight="true" app:fontType="3"/>
        <com.paytm.utility.RoboTextView android:textSize="11sp" android:textColor="@color/color_ffa400" android:id="@+id/food_discount" android:paddingTop="@dimen/dimen_3dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/food_mrp_price" android:layout_alignParentRight="true" app:fontType="3"/>
        <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="@color/color_222222" android:ellipsize="end" android:id="@+id/food_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="50dp" android:maxLines="3" android:includeFontPadding="false" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" app:fontType="2"/>
        <com.paytm.utility.RoboTextView android:textSize="13sp" android:textColor="@color/color_999999" android:ellipsize="end" android:id="@+id/food_item_description" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_3dp" android:layout_marginRight="50dp" android:maxLines="2" android:includeFontPadding="false" android:layout_below="@+id/food_name" app:fontType="2"/>
        <RelativeLayout android:id="@+id/id_add_item" android:background="@drawable/bg_hollow_blue_btn" android:layout_width="96dp" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:layout_below="@+id/food_item_description">
            <com.paytm.utility.RoboTextView android:textSize="12sp" android:textColor="@color/color_00b9f5" android:gravity="center" android:id="@+id/id_add_text" android:paddingTop="@dimen/dimen_5dp" android:paddingBottom="@dimen/dimen_5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/add" app:fontType="3"/>
        </RelativeLayout>
        <LinearLayout android:gravity="center_vertical" android:id="@+id/id_food_add_sub_linlayout" android:visibility="gone" android:layout_width="@dimen/dimen_100dp" android:layout_height="50dp" android:layout_below="@+id/food_item_description">
            <RelativeLayout android:id="@+id/minus_icon" android:clickable="true" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_remove_24_dp_skyblue" android:layout_centerVertical="true"/>
            </RelativeLayout>
            <com.paytm.utility.RoboTextView android:textSize="12sp" android:textColor="@color/text_color_collection_heading" android:gravity="center" android:id="@+id/food_quantity" android:layout_width="0dp" android:layout_height="match_parent" android:text="1" android:layout_weight="1"/>
            <RelativeLayout android:id="@+id/plus_icon" android:clickable="true" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_add_circle_24_dp_skyblue" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
