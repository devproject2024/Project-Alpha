<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content">
    <View android:id="@+id/deals_seperator" android:background="#ebebeb" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="20dp"/>
    <RelativeLayout android:id="@+id/deals_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="15dp" android:layout_marginRight="15dp" android:layout_below="@+id/deals_seperator">
        <RelativeLayout android:id="@+id/thumbnail_deals_recharge" android:layout_width="50dp" android:layout_height="50dp" android:layout_marginLeft="5dp" android:layout_marginRight="10dp" android:layout_centerVertical="true">
            <ProgressBar android:layout_gravity="center" android:id="@+id/loading_recharge" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:indeterminateDrawable="@drawable/progress_large_holo" android:layout_centerInParent="true"/>
            <net.one97.paytm.common.widgets.RoundedImageView android:id="@+id/deals_icon" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="center"/>
        </RelativeLayout>
        <com.paytm.utility.RoboTextView android:textSize="16sp" android:textColor="#ffffff" android:gravity="left" android:id="@+id/deals_action_text" android:background="@drawable/summary_inner_button_background" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_alignParentRight="true" android:layout_centerVertical="true" app:fontType="3"/>
        <com.paytm.utility.RoboTextView android:textSize="16sp" android:textColor="@android:color/black" android:ellipsize="end" android:id="@+id/deals_title_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="2" android:layout_toLeftOf="@+id/deals_action_text" android:layout_toRightOf="@+id/thumbnail_deals_recharge" android:layout_centerVertical="true" app:fontType="3"/>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="75dp" android:layout_marginRight="15dp" android:layout_marginBottom="15dp" android:layout_below="@+id/deals_layout">
        <com.paytm.utility.RoboTextView android:textSize="13sp" android:textColor="#909090" android:gravity="left" android:id="@+id/deals_name_text" android:layout_width="wrap_content" android:layout_height="wrap_content" app:fontType="3"/>
        <com.paytm.utility.RoboTextView android:textSize="16sp" android:textColor="@android:color/black" android:gravity="left" android:id="@+id/deals_amount_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" app:fontType="3"/>
        <com.paytm.utility.RoboTextView android:textSize="13sp" android:textColor="@android:color/holo_blue_light" android:gravity="left" android:id="@+id/deals_view_details_text" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="View Details" app:fontType="4"/>
    </LinearLayout>
</RelativeLayout>
