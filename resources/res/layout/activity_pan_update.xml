<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <include android:id="@+id/lyt_bank_header" android:visibility="gone" layout="@layout/layout_bank_header"/>
    <ScrollView android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:orientation="vertical" android:id="@+id/pan_details_lyt" android:padding="@dimen/dimen_20dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.paytm.utility.RoboTextView android:textSize="24sp" android:textStyle="bold" android:textColor="#222222" android:layout_gravity="left" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/update_pan_title" android:fontFamily="sans-serif"/>
                <com.paytm.utility.RoboTextView android:textSize="@dimen/cart_15sp" android:textColor="@color/black" android:gravity="center" android:layout_gravity="center_horizontal" android:padding="@dimen/dimen_10dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:text="@string/pan_required_bank"/>
                <View android:layout_gravity="center_horizontal" android:background="@color/divider_color" android:visibility="gone" android:layout_width="@dimen/dimen_30dp" android:layout_height="@dimen/dimen_3dp" android:layout_marginTop="@dimen/dimen_25dp"/>
                <com.google.android.material.textfield.TextInputLayout android:theme="@style/PaytmEditTextTheme" android:id="@+id/layout_pan_number" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_30dp" android:hint="@string/pan_number">
                    <com.google.android.material.textfield.TextInputEditText android:textSize="@dimen/dimen_16sp" android:textColor="@android:color/black" android:textColorHint="@color/color_999999" android:id="@+id/edit_pan_number" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true" android:maxLength="10" android:digits="1234567890ABCDEFGHIJKLMNOPQRSTUVWXYZ" android:inputType="textNoSuggestions"/>
                </com.google.android.material.textfield.TextInputLayout>
                <CheckBox android:textSize="14sp" android:gravity="left" android:id="@+id/activity_pan_update_checkbox" android:paddingLeft="@dimen/dimen_10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_20dp" android:layout_marginRight="@dimen/dimen_10dp" android:layout_marginBottom="@dimen/dimen_20dp" android:checked="false" android:button="@drawable/kyc_checkbox" android:text="@string/aadhaar_pan_consent"/>
                <com.paytm.utility.RoboTextView android:textSize="17sp" android:textColor="@color/white" android:gravity="center_horizontal" android:id="@+id/pan_submit" android:background="@color/color_00b9f5" android:padding="@dimen/dimen_10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:text="@string/submit"/>
                <com.paytm.utility.RoboTextView android:textSize="@dimen/text_size_12sp" android:textColor="@color/color_222222" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_15dp" android:text="@string/update_pan_text" app:fontType="2"/>
                <View android:background="@color/color_f3f7f8" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/dimen_10dp" android:layout_marginTop="@dimen/dimen_20dp"/>
                <RelativeLayout android:id="@+id/dont_have_pan_lyt" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_30dp">
                    <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_17sp" android:textColor="@color/color_222222" android:id="@+id/dontHavePanTitle" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/dont_have_pan" android:includeFontPadding="false" app:fontType="4"/>
                    <com.paytm.utility.RoboTextView android:textSize="@dimen/text_size_15sp" android:textColor="@color/color_444444" android:id="@+id/form_60_subText" android:paddingTop="@dimen/dimen_12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/update_form_60" android:includeFontPadding="false" android:layout_below="@+id/dontHavePanTitle" app:fontType="2"/>
                    <androidx.appcompat.widget.AppCompatImageView android:id="@+id/update_form_60_arrow" android:paddingLeft="@dimen/dimen_15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true" app:srcCompat="@drawable/ic_forward_right_black"/>
                </RelativeLayout>
            </LinearLayout>
            <RelativeLayout android:orientation="vertical" android:id="@+id/pan_postdetails_lyt" android:padding="@dimen/dimen_20dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.paytm.utility.RoboTextView android:textSize="24sp" android:textStyle="bold" android:textColor="@color/color_222222" android:id="@+id/title_pan_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/pan_title_verified" android:layout_toLeftOf="@+id/pan_success_tick_iv" android:layout_alignParentLeft="true" android:lineSpacingExtra="8sp" android:fontFamily="@string/font_family_roboto_medium"/>
                <ImageView android:id="@+id/pan_success_tick_iv" android:layout_width="@dimen/dimen_24dp" android:layout_height="@dimen/dimen_24dp" android:layout_marginLeft="@dimen/dimen_15dp" android:layout_marginTop="@dimen/dimen_5dp" android:layout_marginRight="@dimen/dimen_45dp" android:src="@drawable/ic_tick" android:layout_alignParentRight="true"/>
                <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_15sp" android:textStyle="normal" android:textColor="@color/color_222222" android:gravity="left" android:layout_gravity="center_horizontal" android:id="@+id/middle_pan_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:text="@string/aadhar_pan_middle_pending" android:layout_below="@+id/title_pan_text" android:lineSpacingExtra="2sp" android:fontFamily="sans-serif-medium"/>
                <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_15sp" android:textColor="@color/color_222222" android:gravity="left" android:id="@+id/bottom_pan_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_25dp" android:text="@string/pan_bottom_pending" android:layout_below="@+id/middle_pan_text" android:lineSpacingExtra="@dimen/dimen_8sp" android:fontFamily="@string/font_family_roboto_light"/>
                <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="@color/color_00b9f5" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/pan_home_button" android:background="@drawable/rounded_rectangle_whiteblue" android:padding="@dimen/dimen_10dp" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_30dp" android:text="@string/kyc_go_to_home" android:layout_below="@+id/bottom_pan_text" android:textAllCaps="false"/>
                <LinearLayout android:orientation="vertical" android:id="@+id/pan_other_item_update" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/pan_home_button">
                    <View android:background="@color/color_f4f4f4" android:layout_width="match_parent" android:layout_height="@dimen/dimen_5dp" android:layout_marginTop="@dimen/dimen_20dp"/>
                    <ImageView android:layout_gravity="center_horizontal" android:padding="@dimen/dimen_10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_20dp" android:src="@drawable/ic_aadhar_logo"/>
                    <com.paytm.utility.RoboTextView android:textSize="15sp" android:textColor="@color/color_222222" android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:id="@+id/pan_adhar_updte" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/complete_aadhar_updte" android:fontFamily="@string/font_family_roboto_light"/>
                    <com.paytm.utility.RoboTextView android:textSize="17sp" android:textColor="@color/white" android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:id="@+id/pan_update_now" android:background="@color/color_00b9f5" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/dimen_10dp" android:text="@string/update_now"/>
                    <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="@color/color_00b9f5" android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:id="@+id/pan_will_do_later" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/dimen_10dp" android:text="@string/will_do_later"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
