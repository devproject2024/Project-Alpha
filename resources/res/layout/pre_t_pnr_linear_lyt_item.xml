<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/header_container" android:paddingLeft="20dp" android:paddingTop="20dp" android:paddingRight="20dp" android:paddingBottom="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="20dp" android:paddingEnd="20dp">
        <com.paytm.utility.RoboTextView android:textSize="@dimen/cart_18sp" android:textColor="@color/color_000000" android:gravity="center_vertical" android:id="@+id/source_city" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="BANGALORE CITY" app:fontType="2"/>
        <ImageButton android:id="@+id/image_arrow" android:background="@android:color/transparent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginTop="8dp" android:layout_marginRight="5dp" android:src="@drawable/pre_t_forward_arrow" android:layout_toRightOf="@+id/source_city" android:layout_above="@+id/date_label_1" android:layout_marginStart="3dp" android:layout_marginEnd="3dp" android:layout_toEndOf="@+id/source_city"/>
        <com.paytm.utility.RoboTextView android:textSize="@dimen/cart_18sp" android:textColor="@color/color_000000" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/dest_city" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="CHENNAI" android:maxLines="1" android:layout_toRightOf="@+id/image_arrow" android:layout_toEndOf="@+id/image_arrow" app:fontType="2"/>
        <com.paytm.utility.RoboTextView android:textSize="13sp" android:textColor="@color/dark_gray" android:gravity="center_vertical" android:id="@+id/boarding" android:paddingTop="3dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Boarding:" android:layout_below="@+id/source_city" app:fontType="2"/>
        <com.paytm.utility.RoboTextView android:textSize="13sp" android:textColor="@color/dark_gray" android:gravity="center_vertical" android:id="@+id/boarding_point" android:paddingLeft="3dp" android:paddingTop="3dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Bangalore City Jn at 23:40" android:layout_toRightOf="@+id/boarding" android:layout_below="@+id/source_city" app:fontType="2"/>
    </RelativeLayout>
    <View android:id="@+id/dotted_sep" android:background="@drawable/pre_t_train_dotted" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="6dp" android:layout_marginRight="6dp" android:layout_below="@+id/header_container"/>
    <com.paytm.utility.RoboTextView android:textSize="16sp" android:textColor="@color/color_000000" android:id="@+id/train_name" android:paddingLeft="20dp" android:paddingTop="20dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="166022 Kaveri Express" android:layout_below="@+id/dotted_sep" app:fontType="2"/>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:weightSum="1" android:layout_below="@+id/train_name">
        <LinearLayout android:orientation="vertical" android:paddingLeft="20dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="0.35" android:paddingStart="20dp">
            <LinearLayout android:gravity="left" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.paytm.utility.RoboTextView android:textSize="11sp" android:textColor="@color/color_000000" android:id="@+id/train_name_code" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="BLR" android:includeFontPadding="false" app:fontType="3"/>
                <com.paytm.utility.RoboTextView android:textSize="20sp" android:textColor="@color/color_000000" android:id="@+id/train_dep_time" android:paddingLeft="-1dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="05.00" android:includeFontPadding="false" android:paddingStart="-1dp" app:fontType="2"/>
            </LinearLayout>
            <com.paytm.utility.RoboTextView android:textSize="11sp" android:textColor="@color/color_000000" android:gravity="left" android:id="@+id/traint_dep_date" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:text="Wen 09 SEP" app:fontType="1"/>
            <com.paytm.utility.RoboTextView android:textSize="11sp" android:gravity="left" android:id="@+id/train_city" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:text="Bangalore" app:fontType="2"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:layout_marginTop="20dp" android:layout_marginRight="2dp" android:layout_weight="0.3">
            <ImageView android:background="@drawable/pre_t_train_gray_line" android:layout_width="wrap_content" android:layout_height="1dp" android:layout_weight="0.05"/>
            <com.paytm.utility.RoboTextView android:textSize="@dimen/cart_12sp" android:textColor="#797979" android:id="@+id/text_elapsedtime" android:background="@drawable/pre_t_train_train_rounded_corner" android:paddingLeft="10dp" android:paddingTop="4dp" android:paddingRight="10dp" android:paddingBottom="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="02h 05m" android:paddingStart="10dp" android:paddingEnd="10dp" app:fontType="2"/>
            <ImageView android:background="@drawable/pre_t_train_gray_line" android:layout_width="wrap_content" android:layout_height="1dp" android:layout_weight="0.05"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:paddingRight="20dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="0.35" android:paddingEnd="20dp">
            <LinearLayout android:gravity="right" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.paytm.utility.RoboTextView android:textSize="11sp" android:textColor="@color/color_000000" android:id="@+id/train_name_code_to" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="CHN" android:includeFontPadding="false" app:fontType="3"/>
                <com.paytm.utility.RoboTextView android:textSize="20sp" android:textColor="@color/color_000000" android:id="@+id/train_time_to" android:paddingRight="1dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="05.00" android:includeFontPadding="false" android:paddingEnd="1dp" app:fontType="2"/>
            </LinearLayout>
            <com.paytm.utility.RoboTextView android:textSize="11sp" android:textColor="@color/color_000000" android:gravity="right" android:id="@+id/train_dep_date_to" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:text="Wen 09 SEP" app:fontType="1"/>
            <com.paytm.utility.RoboTextView android:textSize="11sp" android:gravity="right" android:id="@+id/train_city_to" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:text="Bangalore" app:fontType="2"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
