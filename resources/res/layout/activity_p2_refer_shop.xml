    <ScrollView android:paddingTop="@dimen/dimen_5dp" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:orientation="vertical" android:id="@+id/main_content" android:paddingLeft="@dimen/dimen_18dp" android:paddingRight="@dimen/dimen_18dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="21sp" android:textStyle="normal" android:textColor="@color/color_222222" android:paddingLeft="3dp" android:paddingRight="3dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/uni_shop_not_accepting_paytm" android:contentDescription="@string/tb_uni_shop_not_accepting_paytm" android:fontFamily="@string/font_family_roboto_medium"/>
                <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#222222" android:paddingLeft="3dp" android:paddingRight="3dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_5dp" android:text="@string/uni_p2p_help_them" android:contentDescription="@string/tb_uni_p2p_help_them" android:fontFamily="@string/font_family_roboto_regular"/>
                <com.google.android.material.textfield.TextInputLayout android:theme="@style/PaytmEditTextTheme" android:id="@+id/shopkeeper_number_til" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_35dp">
                    <androidx.appcompat.widget.AppCompatEditText android:textSize="@dimen/dimen_17sp" android:textStyle="normal" android:textColor="#222222" android:textColorHint="#999999" android:id="@+id/shopkeeper_number_et" android:paddingRight="@dimen/dimen_10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/uni_p2p_shopkeeper_s_mobile_number" android:singleLine="true" android:maxLength="10" android:drawableRight="@drawable/contact" android:drawablePadding="@dimen/dimen_5dp" android:lineSpacingExtra="6sp" android:inputType="number" android:imeOptions="actionDone" android:drawableEnd="@drawable/contact" android:paddingEnd="@dimen/dimen_10dp" android:letterSpacing="0.03"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout android:theme="@style/PaytmEditTextTheme" android:id="@+id/shop_name_til" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_35dp">
                    <androidx.appcompat.widget.AppCompatEditText android:textSize="@dimen/dimen_17sp" android:textStyle="normal" android:textColor="#222222" android:textColorHint="#999999" android:id="@+id/shop_name_et" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/uni_p2p_shop_name_optional" android:singleLine="true" android:maxLength="30" android:digits="@string/upi_alphanumeric_string" android:lineSpacingExtra="6sp" android:inputType="text" android:imeOptions="actionDone" android:letterSpacing="0.03"/>
                </com.google.android.material.textfield.TextInputLayout>
                <TextView android:textSize="17sp" android:textStyle="normal" android:textColor="#00bdf2" android:id="@+id/add_address_tv" android:paddingTop="@dimen/dimen_10dp" android:paddingBottom="@dimen/dimen_10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_30dp" android:text="@string/refer_add_address" android:fontFamily="sans-serif" android:letterSpacing="-0.01"/>
                <Button android:textSize="@dimen/dimen_17sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/proceed_btn" android:background="@drawable/bg_btn_blue" android:layout_width="match_parent" android:layout_height="@dimen/dimen_60dp" android:layout_marginTop="@dimen/dimen_40dp" android:text="@string/recent_not_accepting_link" android:textAllCaps="false" android:stateListAnimator="@null"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_30dp" android:layout_below="@+id/main_content" android:layout_alignParentBottom="true">
                <ImageView android:layout_gravity="bottom" android:layout_width="match_parent" android:layout_height="113dp" android:scaleType="fitXY" android:contentDescription="TODO" app:srcCompat="@drawable/p2p_refer_shop_bg"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>
