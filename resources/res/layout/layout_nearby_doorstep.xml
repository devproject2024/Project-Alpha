    </LinearLayout>
    <View android:background="@color/light_grey" android:layout_width="wrap_content" android:layout_height="@dimen/dimen_8dp"/>
    <RelativeLayout android:orientation="vertical" android:padding="@dimen/dimen_16dp" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="2">
