        <ImageView android:id="@+id/iv_home_fingerprint" android:layout_width="@dimen/dimen_64dp" android:layout_height="@dimen/dimen_64dp" android:layout_marginTop="@dimen/dimen_15dp" android:layout_alignParentEnd="true" app:srcCompat="@drawable/ic_home_finger"/>
        <Button android:textSize="@dimen/dimen_14sp" android:textStyle="bold" android:textColor="@color/white" android:id="@+id/btn_request_agent_visit" android:background="@drawable/bg_kyc_blue_btn" android:padding="1dp" android:layout_width="@dimen/dimen_180dp" android:layout_height="@dimen/dimen_36dp" android:layout_marginTop="@dimen/dimen_10dp" android:text="@string/request_agent_visit" android:layout_below="@+id/tv_comp_desc" android:textAllCaps="false"/>
    </RelativeLayout>
</LinearLayout>
