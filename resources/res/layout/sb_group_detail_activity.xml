<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/activity_container" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:id="@+id/ll_outer_most_container" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:layout_gravity="top" android:id="@+id/toolbar_start_ap" android:background="@color/color_f3f7f8" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentStart="true">
            <ImageView android:gravity="bottom" android:id="@+id/split_back_button" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_17dp" android:layout_marginTop="@dimen/dimen_20dp" android:layout_marginBottom="@dimen/dimen_20dp" android:src="@drawable/back_arrow" android:layout_alignParentLeft="true"/>
            <androidx.appcompat.widget.AppCompatImageView android:gravity="bottom" android:id="@+id/tint" android:padding="@dimen/dimen_5dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_20dp" android:layout_marginRight="@dimen/dimen_18dp" android:layout_marginBottom="@dimen/dimen_20dp" android:layout_alignParentRight="true" app:srcCompat="@drawable/sb_ic_more_vert"/>
        </RelativeLayout>
        <LinearLayout android:orientation="vertical" android:background="@color/color_f3f7f8" android:layout_width="match_parent" android:layout_height="wrap_content">
            <RelativeLayout android:orientation="horizontal" android:paddingTop="@dimen/dimen_10dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <RelativeLayout android:id="@+id/iconLayout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:animateLayoutChanges="true">
                    <TextView android:textSize="14sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/beneficiary_circle_txt" android:background="#2cce86" android:layout_width="48dp" android:layout_height="48dp" android:text="A" android:fontFamily="@string/font_family_roboto_medium"/>
                    <RelativeLayout android:id="@+id/layer_contact_list_backgrnd" android:background="@drawable/bg_rounded_corner_acc_page" android:layout_width="48dp" android:layout_height="48dp"/>
                    <net.one97.paytm.CircularImageView android:id="@+id/beneficiary_circle_img" android:background="#012b72" android:visibility="gone" android:layout_width="48dp" android:layout_height="48dp" android:layout_centerInParent="true"/>
                </RelativeLayout>
                <com.paytm.utility.RoboTextView android:textSize="21sp" android:textStyle="bold" android:textColor="@color/color_222222" android:id="@+id/group_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:text="Vietnam Trip" android:layout_toRightOf="@+id/iconLayout" android:fontFamily="sans-serif" android:letterSpacing="0.02" app:fontType="2"/>
                <com.paytm.utility.RoboTextView android:textSize="12sp" android:textStyle="normal" android:textColor="#444444" android:id="@+id/group_member" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="9dp" android:text="You, Anish, Arjun, Bispasha, and 3 others" android:layout_toRightOf="@+id/iconLayout" android:layout_below="@+id/group_name" android:lineSpacingExtra="6sp" android:fontFamily="sans-serif" app:fontType="2"/>
                <ImageView android:id="@+id/split_arrow" android:background="@drawable/arrow_left" android:layout_width="10dp" android:layout_height="10dp" android:layout_marginTop="40dp" android:rotation="180" android:layout_marginEnd="20dp" android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <LinearLayout android:orientation="horizontal" android:background="@color/color_f3f7f8" android:layout_width="match_parent" android:layout_height="@dimen/dimen_36dp" android:layout_marginTop="@dimen/dimen_24dp" android:layout_marginBottom="@dimen/dimen_24dp">
                <Button android:textSize="12sp" android:textStyle="normal" android:textColor="#ffffff" android:gravity="center" android:id="@+id/settle_up" android:background="@drawable/blue_btn_bg_rounded" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:text="@string/settle_up" android:layout_weight="1" android:textAllCaps="false" android:fontFamily="sans-serif-medium" app:fontType="3"/>
                <Button android:textSize="12sp" android:textStyle="normal" android:textColor="#ffffff" android:gravity="center" android:id="@+id/tvAddNewBill" android:background="@drawable/blue_btn_bg_rounded" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_21dp" android:layout_marginRight="@dimen/dimen_20dp" android:text="@string/add_a_new_bill" android:layout_weight="1" android:textAllCaps="false" android:fontFamily="sans-serif-medium" app:fontType="3"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:background="@color/color_ffffff" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:id="@+id/total_rev" android:paddingLeft="@dimen/dimen_20dp" android:paddingTop="@dimen/dimen_30dp" android:paddingBottom="@dimen/dimen_15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1">
                <com.paytm.utility.RoboTextView android:textSize="12sp" android:textStyle="normal" android:textColor="#21c17a" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/total_receivable" android:fontFamily="sans-serif-medium" android:letterSpacing="0.08" app:fontType="3"/>
                <com.paytm.utility.RoboTextView android:textSize="17sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/total_recev" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_8dp" android:text="₹890" android:fontFamily="sans-serif-light" app:fontType="4"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:paddingLeft="@dimen/dimen_20dp" android:paddingTop="@dimen/dimen_30dp" android:paddingBottom="@dimen/dimen_15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="0.8">
                <com.paytm.utility.RoboTextView android:textSize="12sp" android:textStyle="normal" android:textColor="#fd5c5c" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/total_payable" android:fontFamily="sans-serif-medium" android:letterSpacing="0.08" app:fontType="3"/>
                <com.paytm.utility.RoboTextView android:textSize="17sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/total_paid" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_8dp" android:text="₹700" android:fontFamily="sans-serif-light" app:fontType="4"/>
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatImageView android:id="@+id/arrow_button" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_30dp" android:layout_marginRight="@dimen/dimen_18dp" android:layout_alignParentRight="true" app:srcCompat="@drawable/sb_ic_expand_toggle"/>
        </LinearLayout>
        <View android:background="@color/color_f3f7f8" android:layout_width="match_parent" android:layout_height="1dp"/>
        <RelativeLayout android:paddingLeft="@dimen/dimen_20dp" android:paddingTop="45dp" android:paddingRight="@dimen/dimen_20dp" android:paddingBottom="@dimen/dimen_20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.paytm.utility.RoboTextView android:textSize="17sp" android:textStyle="bold" android:textColor="#222222" android:id="@+id/bills_for_group_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Bills for Vietnam Trip" android:fontFamily="sans-serif"/>
            <androidx.appcompat.widget.AppCompatImageView android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" app:srcCompat="@drawable/sb_ic_send_rev_img"/>
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/transactionrecycler" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>
