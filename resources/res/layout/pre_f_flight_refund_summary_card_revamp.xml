<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/refund_detail_linear_layout" android:background="@color/white" android:paddingLeft="20dp" android:paddingRight="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp">
    <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="@color/color_000000" android:id="@+id/lbl_card_title" android:paddingTop="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dimen_5dp" android:text="@string/flight_refund_summary"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/refundSummary_parent" android:paddingLeft="10dp" android:paddingRight="10dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:id="@+id/flight_refund_summary_card_revamp_parent" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <RelativeLayout android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="21dp">
            <TextView android:textSize="14sp" android:textColor="@color/color_666666" android:id="@+id/cancel_text" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/cancellation_charges" android:layout_alignParentLeft="true" android:layout_centerHorizontal="true" android:layout_centerVertical="true"/>
            <LinearLayout android:gravity="right|center_vertical|center_horizontal|center" android:orientation="horizontal" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toRightOf="@+id/cancel_text" android:layout_alignParentRight="true" android:layout_centerHorizontal="true" android:layout_centerVertical="true">
                <TextView android:textSize="14sp" android:textColor="#ff20bf7a" android:id="@+id/flight_order_refund_cp_cancellation_charges" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=""/>
                <RelativeLayout android:layout_gravity="right" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <TextView android:textSize="14sp" android:textColor="@color/color_666666" android:id="@+id/flight_order_refund_cancellation_charges" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_12dp" android:text=""/>
                    <View android:id="@+id/cancel_charge_cross_line" android:background="#cc666666" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="1dp" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="10dp" android:layout_alignLeft="@+id/flight_order_refund_cancellation_charges" android:layout_alignRight="@+id/flight_order_refund_cancellation_charges"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
        <View android:id="@+id/separator1" android:background="@color/color_ebebeb" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginBottom="10dp"/>
        <TextView android:textSize="14sp" android:textColor="@color/color_00b9f5" android:gravity="center" android:id="@+id/order_summary_link" android:padding="5dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="5dp" android:text="@string/flight_detail_refund_summary" android:layout_alignParentRight="true"/>
        <TextView android:textSize="10sp" android:textColor="@color/color_666666" android:gravity="center" android:id="@+id/order_summary_link_desc" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:text="@string/refund_summary_ticket_wise" android:layout_alignParentRight="true"/>
    </LinearLayout>
    <TextView android:textSize="13sp" android:textColor="#666666" android:id="@+id/refund_messege" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_marginBottom="@dimen/dimen_10dp"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/fails_refundcard" android:background="#ffffff" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:id="@+id/refundsummary_payment_info_parent" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <View android:id="@+id/separator2" android:background="#ebebeb" android:layout_width="match_parent" android:layout_height="1dp"/>
            <TextView android:textSize="13sp" android:textColor="#00b9f5" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/wallet_statement" android:padding="@dimen/dimen_10dp" android:visibility="gone" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dimen_20dp" android:text="@string/wallet_statement_title"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout android:id="@+id/flight_refund_summary_refund_notes" android:background="#f1f6fc" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dimen_20dp">
        <ImageView android:id="@+id/refund_notes_place_holder" android:padding="@dimen/dimen_2dp" android:layout_width="@dimen/dimen_20dp" android:layout_height="@dimen/dimen_20dp" android:layout_marginLeft="@dimen/dimen_10dp" android:layout_marginTop="@dimen/dimen_10dp" android:layout_alignParentLeft="true"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/refund_notes_layout" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_toRightOf="@+id/refund_notes_place_holder"/>
    </RelativeLayout>
</LinearLayout>
