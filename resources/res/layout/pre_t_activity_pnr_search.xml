<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/white" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center" android:id="@+id/close_icon_lyt" android:layout_width="@dimen/dimen_30dp" android:layout_height="@dimen/dimen_30dp" android:layout_marginTop="@dimen/dimen_15dp" android:layout_marginRight="@dimen/dimen_15dp" android:layout_alignParentRight="true">
        <ImageView android:id="@+id/close_icon" android:layout_width="@dimen/dimen_15dp" android:layout_height="@dimen/dimen_15dp"/>
    </LinearLayout>
    <RelativeLayout android:id="@+id/search_lyt" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_15dp" android:layout_marginTop="@dimen/dimen_15dp" android:layout_marginRight="@dimen/dimen_15dp" android:layout_marginBottom="@dimen/dimen_25dp" android:layout_below="@+id/close_icon_lyt">
        <com.google.android.material.textfield.TextInputLayout android:theme="@style/train_pnr_search_theme" android:textColorHint="@color/color_adadad" android:id="@+id/text_input_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_6dp">
            <EditText android:textSize="@dimen/dimen_17sp" android:textStyle="normal" android:textColor="@color/black" android:ellipsize="end" android:id="@+id/search_box" android:background="@drawable/pre_t_train_transparent_border" android:paddingTop="@dimen/dimen_8dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/pnrhint" android:singleLine="true" android:maxLength="10" android:digits="0123456789" android:inputType="number" android:imeOptions="actionDone" android:textCursorDrawable="@drawable/pre_t_train_train_box_cursor" android:fontFamily="sans-serif-light"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_15sp" android:textStyle="normal" android:textColor="@color/paytm_blue" android:ellipsize="end" android:id="@+id/pnr_check_txt" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_31dp" android:layout_marginBottom="@dimen/dimen_4dp" android:text="Check" android:layout_alignParentRight="true"/>
        <View android:background="@color/color_ebebeb" android:layout_width="match_parent" android:layout_height="@dimen/dimen_1dp" android:layout_marginTop="@dimen/dimen_12dp" android:layout_below="@+id/text_input_layout"/>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/non_suggested_lyt" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginBottom="@dimen/dimen_15dp" android:layout_below="@+id/search_lyt">
        <LinearLayout android:orientation="vertical" android:id="@+id/recent_searches_lyt" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_15dp">
            <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_12sp" android:textStyle="normal" android:textColor="@color/color_9b9b9b" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_15dp" android:text="@string/train_ls_search_recent_searches" android:fontFamily="sans-serif"/>
            <androidx.recyclerview.widget.RecyclerView android:id="@+id/recent_searches_list" android:background="@color/transparent" android:layout_width="match_parent" android:layout_height="wrap_content" android:divider="@color/transparent" android:dividerHeight="0dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/suggested_lyt" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_15dp" android:layout_marginBottom="@dimen/dimen_15dp" android:layout_below="@+id/search_lyt">
        <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_12sp" android:textStyle="normal" android:textColor="@color/color_9b9b9b" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_15dp" android:text="@string/train_ls_search_suggested_pnr" android:fontFamily="sans-serif"/>
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/suggested_list" android:background="@color/transparent" android:layout_width="match_parent" android:layout_height="wrap_content" android:divider="@color/transparent" android:dividerHeight="0dp"/>
    </LinearLayout>
</RelativeLayout>
