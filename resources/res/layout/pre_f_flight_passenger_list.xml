        <ImageView android:id="@+id/traveler_icon" android:visibility="gone" android:layout_width="@dimen/dimen_30dp" android:layout_height="@dimen/dimen_30dp" android:layout_marginRight="15dp" app:srcCompat="@drawable/flight_child_male_revamp_img"/>
