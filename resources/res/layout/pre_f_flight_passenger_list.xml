        <LinearLayout android:orientation="vertical" android:id="@+id/addPaxInfo" android:visibility="gone" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_12dp"/>
    </LinearLayout>
</LinearLayout>
