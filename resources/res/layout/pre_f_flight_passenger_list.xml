            <RadioButton android:textSize="@dimen/dimen_14sp" android:textStyle="normal" android:textColor="@color/color_999999" android:id="@+id/radio_ms" android:paddingLeft="@dimen/radio_padding" android:layout_width="@dimen/dimen_0dp" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:button="@drawable/btn_radio_holo_light" android:text="@string/flights_ms" android:layout_weight="1" android:fontFamily="sans-serif"/>
