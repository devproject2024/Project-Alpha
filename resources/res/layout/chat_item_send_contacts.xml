<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:paddingTop="8dp" android:paddingBottom="8dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/cl_pic_bg" android:layout_width="48dp" android:layout_height="48dp" android:layout_marginLeft="12dp" android:layout_marginStart="12dp">
        <com.paytm.android.chat.view.ChatHeadView android:layout_gravity="center_vertical" android:id="@+id/img_item_send_invite" android:layout_width="36dp" android:layout_height="36dp" android:layout_marginLeft="4dp" android:layout_centerVertical="true" android:layout_marginStart="4dp"/>
    </RelativeLayout>
    <TextView android:textSize="14sp" android:textColor="@color/black" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/tv_item_send_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="16dp" android:layout_marginRight="72dp" android:maxLines="1" android:layout_toRightOf="@+id/cl_pic_bg" android:layout_marginStart="10dp" android:layout_marginEnd="72dp" android:layout_toEndOf="@+id/cl_pic_bg"/>
