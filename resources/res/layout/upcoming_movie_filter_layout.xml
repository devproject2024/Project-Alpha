<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/upcoming_filters_toolbar" android:layout_width="match_parent" android:layout_height="56dp" android:layout_marginTop="10dp" android:elevation="5dp">
        <TextView android:textSize="24sp" android:textStyle="bold" android:textColor="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="@string/upcoming_filters" android:layout_centerVertical="true" android:fontFamily="sans-serif"/>
        <ImageView android:id="@+id/upcoming_filters_cross" android:background="@drawable/ripple_grey_white_bkgrnd" android:padding="14dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true" app:srcCompat="@drawable/ic_light_grey_close"/>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/filter_recycler_view" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/upcoming_filters_footer" android:layout_below="@+id/upcoming_filters_toolbar"/>
    <LinearLayout android:layout_gravity="bottom" android:orientation="vertical" android:id="@+id/upcoming_filters_footer" android:layout_width="match_parent" android:layout_height="56dp" android:layout_alignParentBottom="true">
        <View android:background="#f4f4f4" android:layout_width="match_parent" android:layout_height="1dp"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="55dp" android:layout_weight="1">
            <TextView android:textSize="17sp" android:textStyle="normal" android:textColor="#00b9f5" android:gravity="center" android:id="@+id/upcoming_filters_clearall" android:background="@drawable/ripple_blue" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/clear_all" android:layout_weight="0.5" android:fontFamily="sans-serif-medium" android:letterSpacing="0.03"/>
            <TextView android:textSize="17sp" android:textStyle="normal" android:textColor="#ffffff" android:gravity="center" android:id="@+id/upcoming_filters_apply" android:background="@color/paytm_blue" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/apply" android:layout_weight="0.5" android:fontFamily="sans-serif-medium" android:letterSpacing="0.03"/>
        </LinearLayout>
    </LinearLayout>
    <ProgressBar android:id="@+id/filter_progress_bar" android:visibility="gone" android:clickable="true" android:layout_width="@dimen/dimen_50dp" android:layout_height="@dimen/dimen_50dp" android:indeterminateDrawable="@drawable/movie_progress_large_holo" android:layout_centerInParent="true"/>
</RelativeLayout>
