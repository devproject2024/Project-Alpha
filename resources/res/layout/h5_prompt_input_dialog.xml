<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/dialog_bg" android:background="@drawable/h5_au_dialog_bg" android:paddingLeft="20dp" android:paddingTop="16dp" android:paddingRight="20dp" android:paddingBottom="8dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="20dp" android:textColor="#000000" android:gravity="left" android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView android:textSize="16dp" android:textColor="#000000" android:gravity="left" android:id="@+id/message" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_below="@+id/title"/>
    <EditText android:textSize="16dp" android:textColor="#000000" android:id="@+id/inputContent" android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:singleLine="true" android:layout_below="@+id/message"/>
    <ImageView android:id="@+id/edit_line" android:background="#1284d6" android:layout_width="match_parent" android:layout_height="2px" android:layout_marginTop="2.8dp" android:layout_below="@+id/inputContent"/>
    <LinearLayout android:id="@+id/bottom_ll" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginRight="-6dp" android:layout_below="@+id/edit_line" android:layout_alignParentRight="true">
        <Button android:id="@+id/cancel" android:layout_marginRight="8dp" android:text="@string/h5_default_cancel" style="@style/h5_prompt_dialogButtonStyle"/>
        <Button android:id="@+id/ensure" android:text="@string/h5_default_confirm" style="@style/h5_prompt_dialogButtonStyle"/>
    </LinearLayout>
</RelativeLayout>
