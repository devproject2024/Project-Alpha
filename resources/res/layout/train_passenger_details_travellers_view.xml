<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/rv_travellers_container" android:layout_width="match_parent" android:layout_height="wrap_content">
    <View android:id="@+id/divider" android:background="@color/color_ebebeb" android:layout_width="match_parent" android:layout_height="5dp"/>
    <com.paytm.utility.RoboTextView android:textSize="15dp" android:textStyle="bold" android:textColor="@color/color_000000" android:id="@+id/traveller_detail_heading" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="11dp" android:layout_marginRight="15dp" android:text="@string/traveller_info_heading" android:layout_below="@+id/divider" app:fontType="3"/>
    <LinearLayout android:id="@+id/msgLyt" android:background="@color/color_f1f6fc" android:paddingTop="@dimen/dimen_10dp" android:paddingBottom="@dimen/dimen_10dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="7dp" android:layout_below="@+id/traveller_detail_heading">
        <ImageView android:layout_width="@dimen/dimen_13dp" android:layout_height="@dimen/dimen_18dp" android:layout_marginLeft="15dp" android:src="@drawable/pre_t_ic_note_icon"/>
        <com.paytm.utility.RoboTextView android:textSize="11sp" android:textColor="@color/color_666666" android:layout_gravity="center_vertical" android:id="@+id/msgBox" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="15dp" android:text="@string/adult_traveller_msg" android:lineSpacingExtra="2sp" android:letterSpacing="0.02" app:fontType="2"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/passenger_add_layout" android:paddingLeft="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:layout_below="@+id/msgLyt"/>
    <com.paytm.utility.RoboTextView android:textSize="15dp" android:textStyle="bold" android:textColor="@color/color_000000" android:id="@+id/child_traveller_detail_heading" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="11dp" android:layout_marginRight="15dp" android:text="@string/train_child_traveller_info_heading" android:layout_below="@+id/passenger_add_layout" app:fontType="3"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/child_msg_lyt" android:background="@color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_below="@+id/child_traveller_detail_heading">
        <View android:background="@color/color_ebebeb" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="@dimen/dimen_15dp" android:layout_marginRight="@dimen/dimen_15dp"/>
        <LinearLayout android:orientation="horizontal" android:background="@color/white" android:paddingTop="@dimen/dimen_7dp" android:paddingBottom="@dimen/dimen_7dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/child_traveller_detail_heading">
            <ImageView android:layout_width="@dimen/dimen_13dp" android:layout_height="@dimen/dimen_18dp" android:layout_marginLeft="15dp" android:src="@drawable/pre_t_ic_note_icon"/>
            <com.paytm.utility.RoboTextView android:textSize="11sp" android:textColor="@color/color_666666" android:layout_gravity="center_vertical" android:id="@+id/child_msg_box" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="9dp" android:layout_marginRight="15dp" android:text="@string/child_train_traveller_info_msg" android:lineSpacingExtra="2sp" android:letterSpacing="0.02" app:fontType="2"/>
        </LinearLayout>
        <View android:background="@color/color_ebebeb" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="@dimen/dimen_15dp" android:layout_marginRight="@dimen/dimen_15dp"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/add_infants_lyt" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_15dp" android:layout_marginTop="7dp" android:layout_below="@+id/child_msg_lyt"/>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/extra_traveller_container" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_28dp" android:layout_marginTop="17dp" android:layout_marginRight="@dimen/dimen_28dp" android:layout_marginBottom="@dimen/dimen_16dp" android:layout_below="@+id/add_infants_lyt">
        <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="@color/train_add_extra_text_color" android:gravity="center_horizontal" android:layout_gravity="left|center_vertical|center_horizontal|center" android:id="@+id/add_extra_infants" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_marginBottom="@dimen/dimen_4dp" android:text="@string/add_childrens" android:layout_weight="1" app:fontType="3"/>
        <View android:background="@color/color_ebebeb" android:layout_width="1dp" android:layout_height="match_parent"/>
        <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="@color/train_add_extra_text_color" android:gravity="center_horizontal" android:layout_gravity="right|center_vertical|center_horizontal|center" android:id="@+id/add_extra_traveller" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_marginBottom="@dimen/dimen_4dp" android:text="@string/add_traveller_text" android:layout_weight="1" app:fontType="3"/>
    </LinearLayout>
    <View android:id="@+id/end_divider" android:background="@color/color_ebebeb" android:layout_width="match_parent" android:layout_height="5dp" android:layout_below="@+id/extra_traveller_container"/>
</RelativeLayout>
