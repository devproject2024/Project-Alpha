<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent" app:behavior_hideable="false">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="40dp" android:layout_marginBottom="40dp">
        <ImageView android:id="@+id/image_status" android:layout_width="30dp" android:layout_height="30dp" android:layout_marginLeft="20dp" android:layout_marginRight="15dp" android:layout_alignParentLeft="true"/>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toRightOf="@+id/image_status">
            <com.paytm.utility.RoboTextView android:textSize="15sp" android:textColor="#222222" android:id="@+id/status" android:layout_width="wrap_content" android:layout_height="wrap_content" app:fontType="4"/>
            <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/message_no_internet" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/lang_pack_internet_message" android:layout_below="@+id/status" android:lineSpacingExtra="7sp" android:fontFamily="sans-serif"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
