    </RelativeLayout>
    <net.lucode.hackware.magicindicator.MagicIndicator android:id="@+id/magic_indicator" android:background="@color/white_ffffff" android:layout_width="match_parent" android:layout_height="@dimen/gp_magicindicator_hight" android:layout_marginLeft="@dimen/gp_padding_right"/>
