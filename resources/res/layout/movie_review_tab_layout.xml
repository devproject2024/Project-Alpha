            <LinearLayout android:orientation="horizontal" android:id="@+id/llRatingLayout" android:background="#f3f7f8" android:paddingTop="20dp" android:paddingBottom="@dimen/dimen_20dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="3">
                <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/ratingOne" android:paddingLeft="@dimen/dimen_20dp" android:paddingRight="@dimen/dimen_20dp" android:layout_width="@dimen/dimen_0dp" android:layout_height="wrap_content" android:layout_weight="1">
                    <TextView android:textSize="16dp" android:textStyle="bold" android:textColor="@color/black" android:id="@+id/txtValueRatingOne" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="2" app:fontType="4"/>
                    <TextView android:textSize="12dp" android:textColor="#989898" android:ellipsize="end" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/txtSourceRatingOne" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_4dp" android:maxLines="2" app:fontType="2"/>
                </LinearLayout>
                <View android:background="#e0ebee" android:layout_width="1dp" android:layout_height="match_parent"/>
                <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/ratingtwo" android:paddingLeft="@dimen/dimen_20dp" android:paddingRight="@dimen/dimen_20dp" android:layout_width="@dimen/dimen_0dp" android:layout_height="wrap_content" android:layout_weight="1">
                    <TextView android:textSize="16dp" android:textStyle="bold" android:textColor="@color/black" android:id="@+id/txtValueRatingTwo" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="2" app:fontType="4"/>
                    <TextView android:textSize="12dp" android:textColor="#989898" android:ellipsize="end" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/txtSourceRatingTwo" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_4dp" android:maxLines="2" app:fontType="2"/>
                </LinearLayout>
                <View android:background="#e0ebee" android:layout_width="1dp" android:layout_height="match_parent"/>
                <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/ratingthree" android:paddingLeft="@dimen/dimen_20dp" android:paddingRight="@dimen/dimen_20dp" android:layout_width="@dimen/dimen_0dp" android:layout_height="wrap_content" android:layout_weight="1">
                    <TextView android:textSize="16dp" android:textStyle="bold" android:textColor="@color/black" android:id="@+id/txtValueRatingThree" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="2" app:fontType="4"/>
                    <TextView android:textSize="12dp" android:textColor="#989898" android:ellipsize="end" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/txtSourceRatingThree" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_4dp" android:maxLines="2" app:fontType="2"/>
                </LinearLayout>
            </LinearLayout>
            <View android:id="@+id/view_divider" android:background="#e0ebee" android:layout_width="match_parent" android:layout_height="@dimen/dimen_1dp" android:layout_below="@+id/llRatingLayout"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/llReviewLayout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/view_divider">
                <TextView android:textSize="18dp" android:textStyle="bold" android:textColor="@color/black" android:id="@+id/txtCriticsReviewLabel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="@dimen/dimen_25dp" android:layout_marginRight="@dimen/dimen_20dp" android:text="@string/critic_reviews" android:lines="1" app:fontType="4"/>
                <androidx.recyclerview.widget.RecyclerView android:id="@+id/criticRecylerView" android:layout_width="match_parent" android:layout_height="wrap_content" android:nestedScrollingEnabled="false"/>
            </LinearLayout>
        </RelativeLayout>
        <ProgressBar android:id="@+id/movie_review_progress_bar" android:visibility="gone" android:layout_width="@dimen/dimen_50dp" android:layout_height="@dimen/dimen_50dp" android:layout_marginTop="@dimen/dimen_140dp" android:indeterminateDrawable="@drawable/movie_progress_large_holo" android:layout_below="@+id/rlContentLayout" android:layout_centerHorizontal="true"/>
