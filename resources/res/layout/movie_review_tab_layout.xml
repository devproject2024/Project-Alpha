            <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#000000" android:gravity="center_horizontal" android:id="@+id/txt_no_result" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:text="@string/no_reviews_yet" android:layout_below="@+id/image_no_result" android:layout_centerHorizontal="true" android:lineSpacingExtra="10sp" android:fontFamily="sans-serif-medium"/>
        </RelativeLayout>
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>
