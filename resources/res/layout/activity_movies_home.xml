<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <net.one97.paytm.o2o.movies.slidingPanel.SlidingUpPanelLayout android:gravity="bottom" android:id="@+id/sliding_layout" android:background="#99000000" android:layout_width="match_parent" android:layout_height="match_parent" app:umanoDragView="@+id/dragView" app:umanoOverlay="false" app:umanoPanelHeight="80dp" app:umanoParallaxOffset="0dp" app:umanoShadowHeight="0dp">
        <RelativeLayout android:id="@+id/innerRootLayout" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:orientation="vertical" android:id="@+id/rooLayout" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
                <RelativeLayout android:id="@+id/root_search_lyt" android:visibility="gone" android:layout_width="match_parent" android:layout_height="55dp">
                    <ImageButton android:id="@+id/back_button" android:background="@drawable/ripple_simple_gray" android:paddingLeft="14dp" android:paddingRight="10dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/back_arrow" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
                    <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/movie_location_lyt" android:background="@drawable/ripple_simple_gray" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_toLeftOf="@+id/movie_search_icon_lyt" android:layout_toRightOf="@+id/back_button" android:layout_centerInParent="true">
                        <com.paytm.utility.RoboTextView android:textSize="17sp" android:textColor="@color/black" android:ellipsize="end" android:id="@+id/movie_location" android:layout_width="wrap_content" android:layout_height="wrap_content" android:lines="1" app:fontType="4"/>
                        <androidx.appcompat.widget.AppCompatImageView android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" app:srcCompat="@drawable/ic_movie_down_arrow"/>
                    </LinearLayout>
                    <androidx.appcompat.widget.AppCompatImageView android:id="@+id/movie_search_icon_lyt" android:background="@drawable/ripple_simple_gray" android:paddingLeft="5dp" android:paddingRight="14dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_alignParentRight="true" android:layout_centerVertical="true" app:srcCompat="@drawable/ic_movie_search"/>
                </RelativeLayout>
                <androidx.coordinatorlayout.widget.CoordinatorLayout android:id="@+id/id_coord_layout" android:layout_width="match_parent" android:layout_height="match_parent">
                    <com.google.android.material.appbar.AppBarLayout android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" android:id="@+id/id_movie_home_appbar" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" app:elevation="0dp"> //banner viewpager with movie-pass banner 
                        <include layout="@layout/movies_home_page_top_banner_lyt"/> //Language 
                        <HorizontalScrollView android:id="@+id/id_lang_scroll" android:layout_width="match_parent" android:layout_height="wrap_content">
                            <LinearLayout android:orientation="horizontal" android:id="@+id/id_language_ll" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dimen_20dp"/>
                        </HorizontalScrollView>
                    </com.google.android.material.appbar.AppBarLayout>
                    <net.one97.paytm.o2o.movies.common.widgets.CJRCustomRecyclerView android:id="@+id/movie_home_page_list" android:clipToPadding="true" android:layout_width="match_parent" android:layout_height="match_parent" app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
                </androidx.coordinatorlayout.widget.CoordinatorLayout>
            </LinearLayout>
            <RelativeLayout android:id="@+id/lyt_progress_bar" android:background="@android:color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
                <include layout="@layout/view_dummy_movies_banner"/>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/next_page_loading_progress" android:background="@color/ordersummary_btn_click" android:focusable="true" android:visibility="gone" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent">
                <ProgressBar android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true"/>
            </RelativeLayout>
            <ProgressBar android:id="@+id/transparent_bg_progressbar" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:indeterminateDrawable="@drawable/movie_progress_large_holo" android:layout_centerInParent="true"/>
            <include layout="@layout/movies_no_network_layout"/>
        </RelativeLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/dragView" android:background="@drawable/rounded_bottom_sheet_top_corner" android:focusable="false" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content">
            <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <RelativeLayout android:id="@+id/parentContainerForUpcommingBooking" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <net.one97.paytm.o2o.movies.utils.DynamicHeightViewPager android:id="@+id/upcommingBookingViewPager" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                    <net.one97.paytm.common.widgets.CirclePageIndicator android:id="@+id/upcomming_booking_indicator" android:background="@android:color/transparent" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="16dp" android:layout_below="@+id/upcommingBookingViewPager"/>
                </RelativeLayout>
                <LinearLayout android:orientation="vertical" android:id="@+id/upcommingMovieBottomLayout" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:layout_gravity="center_horizontal" android:background="@drawable/rectangle_round_corner" android:layout_width="60dp" android:layout_height="4dp" android:layout_marginLeft="8dp" android:layout_marginTop="12dp" android:layout_marginRight="8dp"/>
                    <TextView android:textSize="17sp" android:textStyle="bold" android:textColor="#222222" android:gravity="center_horizontal" android:id="@+id/tv_upcomming_booking_movie_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:maxLines="1" android:lineSpacingExtra="5sp" android:fontFamily="sans-serif" app:fontType="4"/>
                    <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="@color/color_222222" android:gravity="center_horizontal" android:id="@+id/tv_upcomming_booking_date_time" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:maxLines="1" android:fontFamily="sans-serif" app:fontType="2"/>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </net.one97.paytm.o2o.movies.slidingPanel.SlidingUpPanelLayout>
    <ImageView android:id="@+id/zoomed_qr_image" android:background="@color/movie_fnb_background" android:focusable="true" android:visibility="gone" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent"/>
</FrameLayout>
