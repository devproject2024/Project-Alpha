            <com.paytm.utility.RoboTextView android:textSize="12sp" android:textColor="@color/color_222222" android:gravity="center" android:id="@+id/passcodeTitle" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_30dp" android:layout_marginTop="7dp" android:layout_marginRight="@dimen/dimen_30dp" android:layout_centerHorizontal="true"/>
