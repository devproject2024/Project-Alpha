<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="@dimen/dimen_16sp" android:textStyle="bold" android:textColor="#222222" android:id="@+id/tv_kyc_perm_address_label" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/kyc_permanent_address" android:fontFamily="sans-serif"/>
    <TextView android:textSize="@dimen/dimen_14sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/tv_kyc_perm_address" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:fontFamily="sans-serif-medium"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/layout_kyc_contact_lyt_no_open_data" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_25dp">
        <TextView android:textSize="@dimen/dimen_16sp" android:textStyle="bold" android:textColor="@color/color_747474" android:layout_gravity="center_horizontal" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/your_contact_details"/>
        <TextView android:textSize="@dimen/dimen_16sp" android:textStyle="bold" android:textColor="@color/color_222222" android:layout_gravity="left" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/kyc_correspondence_address"/>
        <TextView android:textSize="@dimen/dimen_14sp" android:textColor="@color/color_747474" android:id="@+id/kyc_contact_detail_address_type" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:text="@string/correspondence_same_as_aadhaar_card"/>
        <RadioGroup android:orientation="horizontal" android:id="@+id/layout_kyc_contact_details_rg_address" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp">
            <RadioButton android:textSize="@dimen/dimen_14sp" android:id="@+id/yes" android:paddingLeft="@dimen/dimen_5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="true" android:button="@drawable/btn_radio_holo_light" android:text="@string/yes"/>
            <RadioButton android:textSize="@dimen/dimen_14sp" android:id="@+id/no" android:paddingLeft="@dimen/dimen_5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:button="@drawable/btn_radio_holo_light" android:text="@string/no"/>
        </RadioGroup>
        <LinearLayout android:orientation="vertical" android:id="@+id/layout_kyc_contact_details_lyt_extra" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/dimen_14sp" android:textColor="@color/color_000000" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:text="@string/address_type"/>
            <RadioGroup android:orientation="horizontal" android:id="@+id/layout_kyc_contact_details_rg_address_type" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp">
                <RadioButton android:textSize="@dimen/dimen_14sp" android:id="@+id/residential" android:paddingLeft="@dimen/dimen_5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="true" android:button="@drawable/btn_radio_holo_light" android:text="@string/residential"/>
                <RadioButton android:textSize="@dimen/dimen_14sp" android:id="@+id/profession_business" android:paddingLeft="@dimen/dimen_5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:button="@drawable/btn_radio_holo_light" android:text="@string/profession_business"/>
            </RadioGroup>
            <LinearLayout android:orientation="vertical" android:id="@+id/lyt_address" android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputLayout android:theme="@style/PaytmEditTextTheme" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_5dp" android:hint="@string/house_building_apartment">
                    <com.google.android.material.textfield.TextInputEditText android:textSize="16sp" android:textColor="@android:color/black" android:textColorHint="@color/color_222222" android:id="@+id/layout_kyc_contact_details_et_house" android:focusable="true" android:longClickable="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true" android:maxLength="150" android:digits="A BCDEFGHIJKLMNOPQRSTUVWXYZ0123456789, -/#()" android:layout_centerHorizontal="true"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout android:theme="@style/PaytmEditTextTheme" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/street_name">
                    <com.google.android.material.textfield.TextInputEditText android:textSize="16sp" android:textColor="@android:color/black" android:textColorHint="@color/color_222222" android:id="@+id/layout_kyc_contact_details_et_area" android:focusable="true" android:longClickable="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true" android:maxLength="150" android:digits="A BCDEFGHIJKLMNOPQRSTUVWXYZ0123456789, -/#()" android:layout_centerHorizontal="true"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout android:theme="@style/PaytmEditTextTheme" android:id="@+id/layout_kyc_contact_details_lyt_address3" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/area_locality_sector">
                    <com.google.android.material.textfield.TextInputEditText android:textSize="16sp" android:textColor="@android:color/black" android:textColorHint="@color/color_222222" android:id="@+id/layout_kyc_contact_details_et_address3" android:focusable="true" android:longClickable="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true" android:maxLength="150" android:digits="A BCDEFGHIJKLMNOPQRSTUVWXYZ0123456789, -/#()" android:layout_centerHorizontal="true"/>
                </com.google.android.material.textfield.TextInputLayout>
                <TextView android:textSize="@dimen/dimen_14sp" android:textColor="@color/widget_labelled_spinner_error" android:id="@+id/tv_error_address_three" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            </LinearLayout>
            <com.google.android.material.textfield.TextInputLayout android:theme="@style/PaytmEditTextTheme" android:id="@+id/layout_kyc_contact_details_lyt_pincode" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/pin_code">
                <com.google.android.material.textfield.TextInputEditText android:textSize="16sp" android:textColor="@android:color/black" android:textColorHint="@color/color_222222" android:id="@+id/layout_kyc_contact_details_et_pincode" android:focusable="true" android:longClickable="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true" android:maxLength="6" android:layout_centerHorizontal="true" android:inputType="number"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout android:theme="@style/PaytmEditTextTheme" android:id="@+id/layout_kyc_contact_details_lyt_city" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/kyc_city">
                <AutoCompleteTextView android:textSize="16sp" android:id="@+id/layout_kyc_contact_details_et_city" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true" android:imeOptions="actionNext"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout android:theme="@style/PaytmEditTextTheme" android:id="@+id/layout_kyc_contact_details_lyt_state" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/kyc_state">
                <com.google.android.material.textfield.TextInputEditText android:textSize="16sp" android:textColor="@android:color/black" android:textColorHint="@color/color_222222" android:id="@+id/layout_kyc_contact_details_et_state" android:focusable="true" android:longClickable="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true" android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789" android:layout_centerHorizontal="true" android:textAllCaps="true"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
