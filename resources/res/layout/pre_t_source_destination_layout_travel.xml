<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/home_screen_lyt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="32dp">
    <RelativeLayout android:id="@+id/source_station" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_above="@+id/city_sep">
        <com.paytm.utility.RoboTextView android:textSize="18sp" android:textStyle="normal" android:textColor="@color/color_222222" android:textColorHint="@color/color_adadad" android:id="@+id/source_station_textview" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:hint="@string/source_metro_station" android:layout_centerVertical="true" android:fontFamily="sans-serif-light"/>
        <RelativeLayout android:id="@+id/source_selected" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <com.paytm.utility.RoboTextView android:textSize="17sp" android:textStyle="bold" android:textColor="#222222" android:gravity="center" android:id="@+id/source_station_code" android:background="@drawable/pre_t_train_train_station_bg" android:layout_width="@dimen/dimen_55dp" android:layout_height="@dimen/dimen_28dp" android:fontFamily="sans-serif"/>
            <com.paytm.utility.RoboTextView android:textSize="17sp" android:textStyle="bold" android:textColor="#222222" android:id="@+id/source" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_12dp" android:text="Bengaluru - All Stations" android:layout_toRightOf="@+id/source_city_code" android:layout_centerVertical="true" android:textAllCaps="false" android:fontFamily="sans-serif"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/city_sep" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <ImageView android:layout_width="match_parent" android:layout_height="1dp" android:src="@color/light_grey_divider" android:layout_centerVertical="true"/>
        <RelativeLayout android:gravity="center" android:background="@drawable/pre_t_train_swap_train_bg" android:layout_width="@dimen/dimen_35dp" android:layout_height="@dimen/dimen_35dp" android:layout_marginRight="15dp" android:layout_alignParentRight="true">
            <ImageView android:id="@+id/change_station_imageview" android:paddingLeft="10.5dp" android:paddingTop="10.5dp" android:paddingRight="10.5dp" android:paddingBottom="10.5dp" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/pre_t_down_black_arrow"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/destination_station" android:layout_width="match_parent" android:layout_height="wrap_content">
        <com.paytm.utility.RoboTextView android:textSize="18sp" android:textStyle="normal" android:textColor="@color/color_222222" android:textColorHint="@color/color_adadad" android:id="@+id/destination_station_textview" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:hint="@string/destination_metro_station" android:layout_centerVertical="true" android:fontFamily="sans-serif-light"/>
        <RelativeLayout android:id="@+id/dest_selected" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.paytm.utility.RoboTextView android:textSize="17sp" android:textStyle="bold" android:textColor="#222222" android:gravity="center" android:id="@+id/dest_station_code" android:background="@drawable/pre_t_train_train_station_bg" android:layout_width="@dimen/dimen_55dp" android:layout_height="@dimen/dimen_28dp" android:fontFamily="sans-serif"/>
            <com.paytm.utility.RoboTextView android:textSize="17sp" android:textStyle="bold" android:textColor="#222222" android:id="@+id/destination" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_12dp" android:layout_toRightOf="@+id/dest_city_code" android:layout_centerVertical="true" android:textAllCaps="false" android:fontFamily="sans-serif"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
