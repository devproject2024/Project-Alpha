<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/constraintLayout" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:id="@+id/line" android:background="@drawable/rectangle_round_corner" android:layout_width="60dp" android:layout_height="4dp" android:layout_marginLeft="8dp" android:layout_marginTop="12dp" android:layout_marginRight="8dp" android:layout_centerHorizontal="true" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"/>
    <RelativeLayout android:id="@+id/viewLayout" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="17sp" android:textStyle="bold" android:textColor="#222222" android:id="@+id/tv_movie_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="36dp" android:layout_toLeftOf="@+id/frameLayout" android:layout_alignParentLeft="true" android:lineSpacingExtra="5sp" android:fontFamily="sans-serif" android:layout_marginStart="20dp" app:fontType="4"/>
        <TextView android:textSize="11sp" android:textStyle="normal" android:textColor="@color/color_444444" android:id="@+id/tv_language" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="5dp" android:layout_marginRight="20dp" android:layout_below="@+id/tv_movie_name" android:fontFamily="sans-serif" app:fontType="2"/>
        <FrameLayout android:id="@+id/frameLayout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="36dp" android:layout_marginRight="20dp" android:layout_alignParentRight="true">
            <LinearLayout android:orientation="vertical" android:id="@+id/ll_no_qr_code" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="@color/color_002e6e" android:gravity="center_horizontal" android:id="@+id/tv_bookingId" android:background="@color/color_effbff" android:paddingLeft="12.5dp" android:paddingTop="9dp" android:paddingRight="12.5dp" android:paddingBottom="9dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:fontFamily="sans-serif"/>
                <TextView android:textSize="11sp" android:textStyle="normal" android:textColor="#444444" android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="Booking ID" android:fontFamily="sans-serif"/>
            </LinearLayout>
            <RelativeLayout android:orientation="vertical" android:id="@+id/ll_qr_code" android:visibility="visible" android:layout_width="60dp" android:layout_height="wrap_content">
                <ProgressBar android:id="@+id/loading_qr" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:indeterminateDrawable="@drawable/movie_progress_large_holo" android:layout_centerInParent="true"/>
                <ImageView android:id="@+id/iv_qr_code" android:visibility="visible" android:layout_width="60dp" android:layout_height="60dp" android:layout_alignParentRight="true"/>
                <com.paytm.utility.RoboTextView android:textSize="11sp" android:textColor="@color/color_999999" android:id="@+id/tv_zoom_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:text="@string/zoom" android:drawableLeft="@drawable/selector_movie_zoom" android:layout_below="@+id/iv_qr_code" android:layout_centerHorizontal="true" android:lineSpacingExtra="5sp"/>
            </RelativeLayout>
        </FrameLayout>
        <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="@color/color_222222" android:id="@+id/tv_date_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="15dp" android:layout_below="@+id/tv_language" android:fontFamily="sans-serif" app:fontType="2"/>
        <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="@color/color_222222" android:id="@+id/tv_no_of_seat" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="7dp" android:layout_below="@+id/tv_date_time" android:fontFamily="sans-serif" android:layout_marginStart="20dp" app:fontType="2"/>
        <View android:id="@+id/view20" android:background="@color/color_e2ebee" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="20dp" android:layout_marginTop="15dp" android:layout_marginRight="20dp" android:layout_below="@+id/tv_no_of_seat"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="13dp" android:layout_marginRight="20dp" android:layout_marginBottom="20dp" android:layout_below="@+id/view20">
            <TextView android:textSize="13sp" android:textStyle="normal" android:textColor="@color/color_222222" android:id="@+id/tv_cinema" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:layout_weight="1.4" android:fontFamily="sans-serif" app:fontType="2"/>
            <RelativeLayout android:id="@+id/layout_get_direction" android:visibility="gone" android:layout_width="0dp" android:layout_height="30dp" android:layout_weight="1">
                <com.paytm.utility.RoboTextView android:textSize="12sp" android:textStyle="normal" android:textColor="@color/paytm_blue" android:id="@+id/id_movie_summary_cinema_location" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:text="@string/get_direction" android:layout_alignParentEnd="true" app:fontType="3"/>
                <ImageView android:layout_width="23dp" android:layout_height="23dp" android:layout_marginEnd="5dp" android:layout_toStartOf="@+id/id_movie_summary_cinema_location" app:srcCompat="@drawable/ic_direction_blue"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
