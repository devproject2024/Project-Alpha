<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:tag="layout/multiple_item_dynamic_module_loader_0" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_30dp" android:layout_marginRight="@dimen/dimen_30dp">
    <ImageView android:id="@+id/iv_icon" android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_paytm_logo"/>
    <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/tv_download_percent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignBaseline="@+id/tv_title" android:layout_alignParentRight="true" android:lineSpacingExtra="6sp" android:fontFamily="sans-serif" android:letterSpacing="0.02"/>
    <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/tv_title" android:paddingRight="@dimen/dimen_25dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_10dp" android:layout_toLeftOf="@+id/tv_retry" android:layout_toRightOf="@+id/iv_icon" android:fontFamily="sans-serif-medium"/>
    <TextView android:textSize="15sp" android:textColor="#00b9f5" android:gravity="center" android:id="@+id/tv_retry" android:padding="2dp" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/lbl_retry" android:drawableLeft="@drawable/ic_retry" android:drawablePadding="4dp" android:layout_alignParentRight="true" android:lineSpacingExtra="3sp"/>
