    <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#ffa400" android:id="@+id/tv_failed" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_10dp" android:text="@string/lbl_installation_failed" android:layout_toRightOf="@+id/iv_icon" android:layout_below="@+id/pb_download" android:lineSpacingExtra="8sp" android:fontFamily="sans-serif"/>
</RelativeLayout>
