<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/white" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="match_parent" app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/recycler_time_slot_movie" android:background="@color/white" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/long_press_hint" android:layout_below="@+id/format_lower_border" app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
    <androidx.core.widget.NestedScrollView android:id="@+id/root_filter_no_result_found" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/long_press_hint" android:layout_below="@+id/format_lower_border" android:layout_centerInParent="true" app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <RelativeLayout android:id="@+id/root_filter_no_result_found" android:paddingBottom="@dimen/dimen_10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_30dp" android:layout_centerInParent="true" android:isScrollContainer="true">
            <RelativeLayout android:id="@+id/root_img_no_result" android:background="@drawable/drawable_colored_circle" android:padding="@dimen/dimen_20dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_15dp" android:layout_centerHorizontal="true">
                <ImageView android:id="@+id/image_no_result" android:layout_width="wrap_content" android:layout_height="wrap_content" app:srcCompat="@drawable/ic_bulb_no_result"/>
            </RelativeLayout>
            <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#000000" android:gravity="center_horizontal" android:id="@+id/txt_no_result" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:text="@string/no_result_found" android:layout_below="@+id/root_img_no_result" android:layout_centerHorizontal="true" android:lineSpacingExtra="10sp" android:fontFamily="sans-serif-medium"/>
            <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#00b9f5" android:gravity="center_horizontal" android:id="@+id/btn_clear_filters" android:background="@drawable/bg_blue_rectangle_border" android:paddingLeft="@dimen/dimen_22dp" android:paddingTop="@dimen/dimen_10dp" android:paddingRight="@dimen/dimen_22dp" android:paddingBottom="@dimen/dimen_10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="21dp" android:text="@string/clear_all_filters" android:layout_below="@+id/txt_no_result" android:layout_centerHorizontal="true" android:fontFamily="sans-serif-medium"/>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
    <RelativeLayout android:id="@+id/long_press_hint" android:background="@color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="36dp" android:layout_alignParentBottom="true">
        <RelativeLayout android:orientation="horizontal" android:id="@+id/close_container" android:layout_width="match_parent" android:layout_height="wrap_content">
            <View android:id="@+id/divider" android:background="@color/movie_separator" android:layout_width="match_parent" android:layout_height="1dp" android:layout_centerVertical="true"/>
            <ImageView android:id="@+id/cancel_hint" android:background="@drawable/ripple_simple_gray" android:paddingRight="@dimen/dimen_10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/cross_icon_with_circle" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <TextView android:textSize="11sp" android:textColor="@color/movie_long_press_message" android:id="@+id/long_press_hint" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginRight="6dp" android:layout_marginBottom="8dp" android:text="@string/movies_long_press_hint" android:includeFontPadding="false" android:layout_below="@+id/close_container"/>
    </RelativeLayout>
    <ProgressBar android:id="@+id/movie_detail_progress_bar" android:visibility="gone" android:clickable="true" android:layout_width="@dimen/dimen_50dp" android:layout_height="@dimen/dimen_50dp" android:indeterminateDrawable="@drawable/movie_progress_large_holo" android:layout_centerInParent="true"/>
</RelativeLayout>
