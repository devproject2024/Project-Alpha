    <TextView android:textSize="12sp" android:textColor="#666666" android:id="@+id/tv_expiryView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_toRightOf="@+id/tv_validityView" android:layout_below="@+id/tv_channel_number" android:lineSpacingExtra="-1.4sp"/>
</RelativeLayout>
