        <TextView android:textSize="@dimen/wallet_15_dp" android:gravity="center" android:id="@+id/error_no_location_msg" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/dimen_30dp" android:text="@string/error_location_off" android:layout_below="@+id/error_no_location_heading" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <Button android:textColor="@color/white" android:id="@+id/btn_locationsetting" android:background="@color/paytm_blue" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/wallet_20_dp" android:layout_marginBottom="@dimen/dimen_10dp" android:minHeight="@dimen/wallet_50_dp" android:text="@string/open_stng_btn" android:layout_alignParentBottom="true" android:onClick="openLocationSetting"/>
</RelativeLayout>
