<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/white" android:paddingTop="@dimen/dimen_16dp" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:textSize="@dimen/dimen_13sp" android:textStyle="bold" android:textColor="@color/color_444444" android:gravity="center_vertical" android:id="@+id/tv_date_header" android:background="@color/color_f3f7f8" android:paddingLeft="@dimen/dimen_20dp" android:layout_width="match_parent" android:layout_height="@dimen/dimen_50dp" android:fontFamily="@string/font_family_roboto_regular"/>
    <RelativeLayout android:id="@+id/rl_section_header" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/dimen_40dp">
        <TextView android:textSize="@dimen/dimen_18sp" android:textStyle="bold" android:textColor="@color/color_222222" android:id="@+id/tv_section_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:text="Payment Requests" android:layout_centerVertical="true" android:fontFamily="sans-serif"/>
        <TextView android:textSize="@dimen/dimen_14sp" android:textColor="@color/color_00b9f5" android:id="@+id/tv_view_all" android:padding="@dimen/dimen_10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_20dp" android:text="@string/upi_view_all" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:fontFamily="@string/font_family_roboto_medium"/>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/rv_upi_transactions" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/rl_section_header"/>
    <LinearLayout android:id="@+id/ll_no_transaction" android:background="@color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/rl_section_header">
        <RelativeLayout android:paddingBottom="@dimen/dimen_10dp" android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView android:textSize="@dimen/dimen_15sp" android:textColor="@color/color_222222" android:ellipsize="end" android:id="@+id/tv_no_transaction" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="40dp" android:layout_marginRight="@dimen/dimen_20dp" android:text="@string/upi_no_payment_request" android:maxLines="3" android:layout_toLeftOf="@+id/iv_no_transaction" android:lineSpacingExtra="7sp" android:fontFamily="@string/font_family_roboto_regular"/>
            <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="@color/color_00b9f5" android:id="@+id/tv_view_request" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="@dimen/dimen_10dp" android:layout_marginRight="@dimen/dimen_20dp" android:text="@string/upi_view_requests" android:layout_toLeftOf="@+id/iv_no_transaction" android:layout_below="@+id/tv_no_transaction" android:fontFamily="sans-serif"/>
            <ImageView android:id="@+id/iv_no_transaction" android:layout_width="@dimen/dimen_40dp" android:layout_height="@dimen/dimen_110dp" android:layout_marginRight="@dimen/dimen_20dp" android:layout_alignParentRight="true" android:layout_centerVertical="true" app:srcCompat="@drawable/ic_upi_empty_payment_requests"/>
        </RelativeLayout>
    </LinearLayout>
    <include android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="match_parent" layout="@layout/layout_wallet_loader"/>
</RelativeLayout>
