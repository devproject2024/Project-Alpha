        <TextView android:textColor="@color/paytm_blue" android:id="@+id/snackbar_neutral_action" android:padding="@dimen/dimen_10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/snackbar_negative_action" android:layout_below="@+id/message_snackbar"/>
        <TextView android:textColor="@color/paytm_blue" android:id="@+id/snackbar_positive_action" android:padding="@dimen/dimen_10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/snackbar_neutral_action" android:layout_below="@+id/message_snackbar"/>
    </RelativeLayout>
</RelativeLayout>
