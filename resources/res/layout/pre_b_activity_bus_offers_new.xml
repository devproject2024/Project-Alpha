<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/color_fafafa" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar android:id="@+id/toolbar_offers_new" android:background="@color/white" android:layout_width="match_parent" android:layout_height="@dimen/dimen_50dp" android:layout_alignParentTop="true">
        <LinearLayout android:gravity="center_vertical" android:layout_gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="1">
            <androidx.appcompat.widget.AppCompatImageView android:id="@+id/toolbar_btn_back" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_marginRight="8dp" app:srcCompat="@drawable/bus_back_arrow"/>
            <com.paytm.utility.RoboTextView android:textSize="@dimen/text_size_18sp" android:textStyle="bold" android:textColor="@color/dark_black" android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@+id/title" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginStart="@dimen/dimen_20dp" app:fontType="4"/>
            <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_14sp" android:textColor="@color/flight_blue" android:id="@+id/doneButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginEnd="5dp" app:fontType="4"/>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
    <View android:id="@+id/toolbar_divider" android:background="@color/movie_location_bgrd" android:layout_width="match_parent" android:layout_height="1dp" android:layout_below="@+id/toolbar_offers_new"/>
    <RelativeLayout android:id="@+id/offers_layout" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/toolbar_divider">
        <RelativeLayout android:id="@+id/promocode_lyt" android:background="@color/white" android:layout_width="match_parent" android:layout_height="60dp" android:paddingStart="15dp">
            <RelativeLayout android:id="@+id/promocode_input_lyt" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerVertical="true">
                <RelativeLayout android:id="@+id/apply_btn_lyt" android:background="@color/bus_paytm_blue" android:paddingLeft="20dp" android:paddingRight="20dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_alignParentEnd="true">
                    <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/apply" android:layout_centerHorizontal="true" android:layout_centerVertical="true" app:fontType="2"/>
                </RelativeLayout>
                <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_toStartOf="@+id/apply_btn_lyt" android:layout_alignParentStart="true">
                    <androidx.appcompat.widget.AppCompatImageView android:id="@+id/promo_remove_image" android:padding="10dp" android:focusable="true" android:visibility="gone" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true" android:layout_centerVertical="true" android:layout_marginEnd="5dp" android:layout_alignParentEnd="true" app:srcCompat="@drawable/cross_grey"/>
                    <EditText android:textSize="14sp" android:id="@+id/edit_txt_promocode" android:background="@null" android:layout_width="wrap_content" android:layout_height="wrap_content" android:hint="@string/have_a_promo_code_enter_here" android:singleLine="true" android:layout_centerVertical="true" android:layout_marginEnd="5dp" android:layout_toStartOf="@+id/promo_remove_image" android:layout_alignParentStart="true" app:fontType="2"/>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/promocode_success_lyt" android:background="@color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="60dp" android:layout_centerInParent="true" android:layout_centerVertical="true" android:paddingEnd="15dp">
                <com.paytm.utility.RoboTextView android:textSize="16sp" android:textColor="@color/green_train" android:id="@+id/success_promo_code" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:singleLine="true" android:layout_centerInParent="true" android:layout_marginStart="@dimen/dimen_12dp" android:layout_marginEnd="@dimen/dimen_5dp" android:layout_toStartOf="@+id/txt_applied_text" app:fontType="2"/>
                <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="@color/green_train" android:id="@+id/txt_applied_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/applied_text" android:maxLines="2" android:layout_centerVertical="true" android:layout_marginEnd="15dp" android:layout_toStartOf="@+id/apply_tick_image" app:fontType="2"/>
                <androidx.appcompat.widget.AppCompatImageView android:id="@+id/apply_tick_image" android:layout_width="@dimen/dimen_20dp" android:layout_height="@dimen/dimen_25dp" android:layout_centerInParent="true" android:layout_alignParentEnd="true" app:srcCompat="@drawable/cross_grey"/>
            </RelativeLayout>
        </RelativeLayout>
        <View android:id="@+id/view_divider" android:background="@color/light_grey" android:layout_width="match_parent" android:layout_height="1dp" android:layout_below="@+id/promocode_lyt"/>
        <com.paytm.utility.RoboTextView android:textSize="11sp" android:textColor="@color/color_000000" android:id="@+id/promo_status_message" android:paddingLeft="15dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:layout_marginBottom="5dp" android:maxLines="2" android:layout_below="@+id/view_divider" app:fontType="2"/>
        <com.paytm.utility.RoboTextView android:textSize="13sp" android:textColor="@color/payment_success_text_grey" android:id="@+id/choose_offer_header" android:paddingLeft="15dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:layout_marginBottom="15dp" android:text="@string/choose_from_the_offer_below" android:layout_below="@+id/promo_status_message" app:fontType="2"/>
        <View android:id="@+id/second_view_divider" android:background="@color/separators" android:layout_width="match_parent" android:layout_height="1dp" android:layout_below="@+id/choose_offer_header"/>
        <RelativeLayout android:id="@+id/offers_list_lyt" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/offer_txt_lyt" android:layout_below="@+id/second_view_divider">
            <androidx.recyclerview.widget.RecyclerView android:id="@+id/offers_list" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginStart="15dp"/>
        </RelativeLayout>
        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/no_offers_layout" android:background="@android:color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_above="@+id/offer_txt_lyt" android:layout_below="@+id/promo_status_message">
            <TextView android:textSize="18sp" android:gravity="center_horizontal" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:text="@string/no_offers_screen"/>
            <androidx.appcompat.widget.AppCompatImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/padding_profile_separator" app:srcCompat="@drawable/travel_res_bus_no_offers_image"/>
            <TextView android:textSize="16sp" android:textColor="#868686" android:gravity="center_horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/padding_profile_separator"/>
        </LinearLayout>
        <RelativeLayout android:orientation="vertical" android:id="@+id/offer_txt_lyt" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
            <View android:background="@color/passbook_separators" android:layout_width="match_parent" android:layout_height="0.5dp"/>
            <com.paytm.utility.RoboTextView android:textSize="11sp" android:textColor="@color/train_txt_gray" android:id="@+id/cash_back_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="15dp" android:text="@string/hotel_offers_cash_back_info" app:fontType="2"/>
            <View android:id="@+id/cash_back_offer_divider" android:background="@color/passbook_separators" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_below="@+id/cash_back_text"/>
            <com.paytm.utility.RoboTextView android:textSize="11sp" android:textColor="@color/train_txt_gray" android:id="@+id/wallet_loyality_cash_back_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="15dp" android:layout_below="@+id/cash_back_offer_divider" app:fontType="2"/>
        </RelativeLayout>
    </RelativeLayout>
    <com.airbnb.lottie.LottieAnimationView android:id="@+id/update_progress_bar_offers" android:visibility="gone" android:layout_width="@dimen/dimen_80dp" android:layout_height="@dimen/dimen_25dp" android:layout_centerInParent="true" app:amount="5" app:animationDirectionbundle="-1" app:circleSize="12" app:duration="@android:integer/config_mediumAnimTime" app:lottie_autoPlay="true" app:lottie_fileName="Payments-Loader.json" app:lottie_loop="true"/>
    <include android:layout_width="match_parent" android:layout_height="match_parent" layout="@layout/bus_no_network_layout"/>
</RelativeLayout>
