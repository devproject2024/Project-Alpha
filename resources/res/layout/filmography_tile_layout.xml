<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/upcoming_movies_info_lyt" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <ImageView android:id="@+id/tileIv" android:layout_width="160dp" android:layout_height="200dp" android:foreground="@drawable/ripple_simple_gray" android:src="@drawable/ic_movie_portrait_placeholder" android:scaleType="fitXY" app:srcCompat="@drawable/ic_movie_portrait_placeholder"/>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/imdbRatingLL" android:background="@drawable/imdb_rating_bg" android:paddingLeft="@dimen/dimen_5dp" android:paddingTop="@dimen/dimen_5dp" android:paddingRight="@dimen/dimen_10dp" android:paddingBottom="@dimen/dimen_5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignLeft="@+id/tileIv" android:layout_alignBottom="@+id/tileIv">
        <ImageView android:layout_width="18dp" android:layout_height="18dp" android:foreground="@drawable/ripple_simple_gray" android:scaleType="fitXY" app:srcCompat="@drawable/ic_imdb_star"/>
        <com.paytm.utility.RoboTextView android:textSize="14sp" android:textStyle="bold" android:textColor="@color/white" android:id="@+id/imdbRatingTv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_3dp" app:fontType="3"/>
        <com.paytm.utility.RoboTextView android:textSize="12sp" android:textColor="@color/white" android:id="@+id/imdbRatingTv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=" /10 IMDb" app:fontType="3"/>
    </LinearLayout>
    <com.paytm.utility.RoboTextView android:textSize="14sp" android:textStyle="bold" android:textColor="#000000" android:id="@+id/titleTv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:layout_below="@+id/tileIv" android:layout_alignLeft="@+id/tileIv" android:layout_alignRight="@+id/tileIv" app:fontType="3"/>
    <com.paytm.utility.RoboTextView android:textSize="12sp" android:textColor="#666666" android:id="@+id/subtitleTv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:maxLines="1" android:layout_below="@+id/titleTv" android:layout_alignLeft="@+id/titleTv" android:layout_alignRight="@+id/titleTv" app:fontType="2"/>
    <com.paytm.utility.RoboTextView android:textSize="12sp" android:textColor="#999999" android:id="@+id/releaseTv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:maxLines="1" android:layout_below="@+id/subtitleTv" android:layout_alignLeft="@+id/titleTv" android:layout_alignRight="@+id/titleTv" app:fontType="2"/>
</RelativeLayout>
