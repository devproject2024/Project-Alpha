<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:layout_gravity="center_vertical" android:id="@+id/iv_back" android:padding="@dimen/dimen_20dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/upi_ic_back"/>
    <ImageView android:layout_gravity="center_horizontal" android:layout_width="70dp" android:layout_height="22dp" android:layout_marginTop="@dimen/dimen_25dp" android:src="@drawable/paytm_logo" android:layout_centerHorizontal="true"/>
    <ImageView android:id="@+id/motif_iv" android:layout_width="100dp" android:layout_height="100dp" android:src="@drawable/ic_motif_classic" android:layout_alignParentRight="true"/>
    <ScrollView android:background="@color/transparent" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="@dimen/dimen_30dp" android:fillViewport="true" android:layout_above="@+id/ll_bottom_layout" android:layout_below="@+id/iv_back">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="#26d07c" android:id="@+id/tv_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginRight="@dimen/dimen_20dp" android:text="@string/upi_congratulations" android:fontFamily="@string/font_family_roboto_regular"/>
            <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#1d252d" android:id="@+id/tv_desc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="@dimen/dimen_10dp" android:layout_marginRight="@dimen/dimen_20dp" android:text="@string/upi_congrats_subtext" android:layout_below="@+id/tv_title" android:lineSpacingExtra="8sp" android:fontFamily="sans-serif"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/ll_options" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_32dp" android:layout_below="@+id/tv_desc">
                <include layout="@layout/upi_congratulations_error_layout"/>
                <RelativeLayout android:id="@+id/rl_money_transfer" android:paddingTop="@dimen/dimen_15dp" android:paddingBottom="@dimen/dimen_15dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <ImageView android:id="@+id/iv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_alignParentLeft="true" android:layout_centerInParent="true" app:srcCompat="@drawable/ic_money_transfer"/>
                    <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="#222222" android:gravity="center_vertical" android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:text="@string/first_money_transfer" android:layout_toLeftOf="@+id/arrow" android:layout_toRightOf="@+id/iv" android:layout_centerVertical="true" android:fontFamily="sans-serif"/>
                    <ImageView android:id="@+id/arrow" android:background="@drawable/ic_forward_right" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="16dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                </RelativeLayout>
                <View android:id="@+id/border_1" android:background="#f3f7f8" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="1dp" android:layout_marginLeft="@dimen/dimen_65dp" android:layout_marginTop="@dimen/dimen_5dp"/>
                <RelativeLayout android:id="@+id/rl_recharge" android:paddingTop="@dimen/dimen_15dp" android:paddingBottom="@dimen/dimen_15dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <ImageView android:id="@+id/iv_1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_22dp" android:layout_alignParentLeft="true" android:layout_centerInParent="true" app:srcCompat="@drawable/ic_mobile"/>
                    <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="#222222" android:gravity="center_vertical" android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_25dp" android:text="@string/first_mobile_recharge" android:layout_toLeftOf="@+id/arrow_2" android:layout_toRightOf="@+id/iv_1" android:layout_centerVertical="true" android:fontFamily="sans-serif"/>
                    <ImageView android:id="@+id/arrow_2" android:background="@drawable/ic_forward_right" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="16dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                </RelativeLayout>
                <View android:id="@+id/border_2" android:background="#f3f7f8" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="1dp" android:layout_marginLeft="@dimen/dimen_65dp" android:layout_marginTop="@dimen/dimen_5dp"/>
                <RelativeLayout android:id="@+id/rl_explore" android:paddingTop="@dimen/dimen_15dp" android:paddingBottom="@dimen/dimen_15dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <ImageView android:id="@+id/iv_2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_alignParentLeft="true" android:layout_centerInParent="true" app:srcCompat="@drawable/ic_explore"/>
                    <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="#222222" android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@+id/tv_option_2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_24dp" android:text="@string/explore_all_services_on_paytm" android:layout_toLeftOf="@+id/arrow_1" android:layout_toRightOf="@+id/iv_2" android:layout_centerVertical="true" android:fontFamily="sans-serif"/>
                    <ImageView android:id="@+id/arrow_1" android:background="@drawable/ic_forward_right" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="16dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                </RelativeLayout>
            </LinearLayout>
            <FrameLayout android:id="@+id/invite_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_40dp" android:layout_below="@+id/ll_options"/>
            <ImageView android:id="@+id/paytm_square" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_40dp" android:layout_marginTop="@dimen/dimen_50dp" android:layout_marginBottom="@dimen/dimen_50dp" android:scaleType="center" android:layout_below="@+id/ll_options" app:layout_constraintBottom_toBottomOf="0" app:srcCompat="@drawable/mt_paytm_stamp"/>
            <TextView android:textSize="@dimen/text_size_12sp" android:textColor="@color/color_666666" android:id="@+id/paytm_trust_tv" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_16dp" android:layout_marginTop="@dimen/dimen_50dp" android:layout_marginRight="@dimen/dimen_40dp" android:text="@string/paytm_trust_text_new" android:layout_toRightOf="@+id/paytm_square" android:layout_below="@+id/ll_options" android:lineSpacingExtra="4sp" android:fontFamily="@string/font_family_roboto_regular"/>
        </RelativeLayout>
    </ScrollView>
    <LinearLayout android:orientation="vertical" android:id="@+id/ll_bottom_layout" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <include layout="@layout/upi_bottom_bar_layout"/>
    </LinearLayout>
</RelativeLayout>
