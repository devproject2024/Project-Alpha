<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="60dp" android:layout_marginBottom="60dp">
    <ScrollView android:scrollbarAlwaysDrawVerticalTrack="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="7" android:fadeScrollbars="false">
        <TextView android:textSize="14dp" android:textColor="@android:color/black" android:layout_gravity="top" android:id="@+id/txt_dia" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="match_parent"/>
