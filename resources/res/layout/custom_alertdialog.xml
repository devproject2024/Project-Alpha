        <TextView android:textStyle="bold" android:textColor="#a8b2bb" android:id="@+id/cancelBtn" android:background="@android:color/white" android:padding="7dp" android:layout_width="wrap_content" android:layout_height="40dp" android:layout_marginRight="10dp" android:text="@string/cancel" android:layout_toLeftOf="@+id/okBtn" android:layout_centerVertical="true" android:textAllCaps="true"/>
