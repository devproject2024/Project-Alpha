    <com.paytm.utility.RoboTextView android:textSize="12sp" android:textColor="@color/label_color" android:paddingLeft="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginBottom="8dp" android:text="@string/nationality"/>
