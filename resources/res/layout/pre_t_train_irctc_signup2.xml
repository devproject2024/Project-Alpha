        <com.google.android.material.textfield.TextInputLayout android:theme="@style/train_login_dialog_theme" android:id="@+id/mobile_text" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:hint="@string/mobile" android:layout_weight="3">
