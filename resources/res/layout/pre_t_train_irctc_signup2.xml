        <EditText android:textSize="15sp" android:textStyle="normal" android:textColor="@color/color_222222" android:id="@+id/monthEdit" android:layout_width="30dp" android:layout_height="wrap_content" android:text="04" android:layout_toRightOf="@+id/sl1" android:lineSpacingExtra="4.6sp" android:inputType="number" android:fontFamily="sans-serif" android:backgroundTint="@color/color_efefef"/>
