    <View android:id="@+id/last_name_view" android:background="@color/payment_success_line_grey" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="15dp" android:layout_marginTop="13dp" android:layout_marginRight="15dp"/>
    <com.paytm.utility.RoboTextView android:textColor="@color/cart_oos_text" android:id="@+id/last_name_error" android:paddingLeft="15dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" app:fontType="3"/>
