    </LinearLayout>
    <View android:id="@+id/email_below_view" android:background="@color/payment_success_line_grey" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="15dp" android:layout_marginTop="13dp" android:layout_marginRight="15dp"/>
    <com.paytm.utility.RoboTextView android:textColor="@color/cart_oos_text" android:id="@+id/email_not_avilable" android:paddingLeft="15dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:text="@string/email_used_error" app:fontType="3"/>
