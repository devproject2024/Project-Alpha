        <com.google.android.material.textfield.TextInputLayout android:theme="@style/train_login_dialog_theme" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/email" android:layout_weight="3">
