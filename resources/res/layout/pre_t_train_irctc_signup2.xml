    <View android:id="@+id/marital_view" android:background="@color/train_regreat_color" android:visibility="gone" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="15dp" android:layout_marginTop="13dp" android:layout_marginRight="15dp"/>
