        <RadioButton android:gravity="center" android:layout_gravity="center" android:id="@+id/unmarried_btn" android:background="@android:color/transparent" android:paddingLeft="7dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_25dp" android:button="@android:color/transparent" android:text="@string/unmarried_text" android:drawableTop="@drawable/pre_t_train_traveller_train_selector_unmarried_male" android:drawablePadding="@dimen/dimen_5dp"/>
