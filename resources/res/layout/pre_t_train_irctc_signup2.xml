        </com.google.android.material.textfield.TextInputLayout>
        <ImageView android:layout_gravity="center" android:id="@+id/last_name_clear" android:visibility="gone" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:layout_marginRight="15dp" android:src="@drawable/pre_t_cross_grey"/>
