                    <com.paytm.utility.RoboTextView android:textSize="@dimen/next_step_seller_address_heading_text_size" android:textColor="@color/seller_address_complete_color" android:gravity="center_vertical" android:id="@+id/seller_address" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_3dp" app:fontType="3"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
