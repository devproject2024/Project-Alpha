<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/color_fafafa" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:id="@+id/topLayout" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="@dimen/text_size_21sp" android:textStyle="bold" android:textColor="#222222" android:id="@+id/payment_bank_set_passcode_tv_title" android:paddingLeft="@dimen/dimen_25dp" android:paddingRight="@dimen/dimen_25dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:lineSpacingExtra="8sp" android:fontFamily="sans-serif"/>
        <TextView android:textSize="@dimen/wallet_12_sp" android:textColor="#aaa" android:id="@+id/tv_passcode_desc" android:paddingLeft="@dimen/dimen_25dp" android:paddingRight="@dimen/dimen_25dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp"/>
        <LinearLayout android:orientation="vertical" android:background="@color/white" android:paddingLeft="@dimen/dimen_25dp" android:paddingRight="@dimen/dimen_25dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_29dp">
            <TextView android:textSize="@dimen/dimen_14sp" android:textStyle="normal" android:textColor="@color/color_506d85" android:id="@+id/hint_tv" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_25dp" android:text="@string/pb_set_passcode_sub_heading_v2" android:fontFamily="sans-serif"/>
            <net.one97.paytm.bankCommon.widget.NonSwipeableViewPager android:layout_gravity="left" android:id="@+id/payment_bank_set_passcode_pager_passcode" android:paddingRight="20dp" android:layout_width="match_parent" android:layout_height="70dp" android:layout_marginTop="@dimen/dimen_11dp"/>
            <TextView android:textSize="@dimen/dimen_12sp" android:textColor="@color/error_color" android:gravity="center" android:id="@+id/set_passcode_tv_error_msg" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_5dp" android:text="@string/passcode_mismatch" android:fontFamily="@string/font_family_roboto_regular"/>
            <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="#00b9f5" android:id="@+id/tv_forgot_passcode" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_8dp" android:layout_marginBottom="@dimen/dimen_10dp" android:text="@string/forgot_passcode" android:fontFamily="sans-serif"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout android:gravity="bottom|center_vertical|center_horizontal|center" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/topLayout">
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/passcode_bottom_motif" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/bottom_logo_layout" android:background="@drawable/passcode_shield_bottom" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dimen_22dp" android:layout_above="@+id/view_bottom_lines" android:layout_centerHorizontal="true">
            <androidx.appcompat.widget.AppCompatImageView android:layout_gravity="center_horizontal" android:id="@+id/iv_bottom" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" app:srcCompat="@drawable/paytmshield_v2"/>
            <TextView android:textSize="@dimen/dimen_10sp" android:textStyle="normal" android:textColor="@color/color_8ba6c1" android:gravity="center_vertical" android:paddingRight="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_10dp" android:text="@string/paytm_security" android:fontFamily="sans-serif-medium"/>
        </LinearLayout>
        <include android:id="@+id/view_bottom_lines" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true" layout="@layout/pb_base_bottom_forget_passcode_paytm_line"/>
    </RelativeLayout>
</RelativeLayout>
