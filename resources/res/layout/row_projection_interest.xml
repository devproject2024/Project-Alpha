<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
        <View android:id="@+id/v_line_mid" android:background="#e2ebee" android:visibility="gone" android:layout_width="1dp" android:layout_height="100dp" android:layout_centerInParent="true"/>
        <View android:id="@+id/v_line_below" android:background="#e2ebee" android:visibility="visible" android:layout_width="1dp" android:layout_height="45dp" android:layout_below="@+id/v_gb_1" android:layout_centerHorizontal="true"/>
        <View android:id="@+id/v_line_above" android:background="#e2ebee" android:visibility="gone" android:layout_width="1dp" android:layout_height="45dp" android:layout_centerHorizontal="true"/>
        <View android:id="@+id/v_gb_1" android:background="@drawable/pb_grey_ball" android:layout_width="11dp" android:layout_height="11dp" android:layout_marginTop="45dp"/>
    </RelativeLayout>
    <FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp">
        <RelativeLayout android:background="@drawable/pb_proj_rectangle" android:padding="@dimen/dimen_20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/tv_days" android:paddingLeft="@dimen/dimen_10dp" android:paddingTop="@dimen/dimen_10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="10days" android:fontFamily="sans-serif"/>
            <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#999999" android:gravity="end" android:id="@+id/tv_maturity_date" android:paddingTop="@dimen/dimen_10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:layout_marginTop="2dp" android:layout_toRightOf="@+id/tv_days" android:lineSpacingExtra="6sp" android:fontFamily="sans-serif"/>
            <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#999999" android:id="@+id/tv_interest_rate" android:paddingLeft="@dimen/dimen_10dp" android:paddingBottom="@dimen/dimen_10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_below="@+id/tv_days" android:lineSpacingExtra="6sp" android:fontFamily="sans-serif"/>
            <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="#222222" android:gravity="end" android:id="@+id/tv_interest_amount" android:paddingTop="@dimen/dimen_10dp" android:paddingRight="@dimen/dimen_10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="10days" android:layout_alignParentRight="true" android:fontFamily="sans-serif"/>
            <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#999999" android:gravity="end" android:id="@+id/tv_hd_interest_amount" android:paddingRight="@dimen/dimen_10dp" android:paddingBottom="@dimen/dimen_10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_below="@+id/tv_interest_amount" android:layout_alignParentRight="true" android:lineSpacingExtra="6sp" android:fontFamily="sans-serif"/>
        </RelativeLayout>
        <TextView android:textSize="11sp" android:textStyle="normal" android:textColor="#ffffff" android:gravity="center" android:id="@+id/tv_you_are_here" android:background="@drawable/pb_blue_info_chip" android:paddingLeft="6dp" android:paddingTop="2dp" android:paddingRight="6dp" android:paddingBottom="3dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="25dp" android:text="You are here" android:fontFamily="sans-serif"/>
    </FrameLayout>
</RelativeLayout>
