                <TextView android:textSize="@dimen/cart_12sp" android:textStyle="normal" android:textColor="@color/color_8c8c8c" android:id="@+id/opt_out_detail_txt" android:paddingLeft="@dimen/dimen_29dp" android:paddingTop="@dimen/dimen_7dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/opt_out_radio_button" android:fontFamily="sans-serif"/>
                <View android:background="@color/color_efefef" android:layout_width="match_parent" android:layout_height="@dimen/dimen_1dp" android:layout_marginLeft="@dimen/dimen_29dp" android:layout_marginTop="@dimen/dimen_12dp" android:layout_below="@+id/opt_out_detail_txt"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
