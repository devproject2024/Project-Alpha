                                <com.paytm.utility.RoboTextView android:textSize="16sp" android:textColor="@color/color_000000" android:id="@+id/next_due_recharge" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:layout_below="@+id/automatic_success_desc" android:layout_alignLeft="@+id/automatic_success_desc" android:layout_centerVertical="true" android:layout_alignStart="@+id/automatic_success_desc" app:fontType="2"/>
