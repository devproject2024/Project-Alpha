<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/store_search_layout" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RadioGroup android:orientation="horizontal" android:id="@+id/store_select_radio_group" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_16dp" android:layout_marginTop="@dimen/dimen_13dp" android:layout_marginRight="@dimen/dimen_16dp" android:layout_marginBottom="@dimen/dimen_13dp" android:weightSum="2">
            <RadioButton android:textSize="@dimen/cart_12sp" android:textColor="@drawable/mall_paytm_vs_white_selector" android:id="@+id/radio_button_1" android:background="@drawable/mall_search_store_left_selector" android:padding="@dimen/dimen_5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="true" android:button="@null" android:layout_weight="1" android:textAlignment="center"/>
            <RadioButton android:textSize="@dimen/cart_12sp" android:textColor="@drawable/mall_paytm_vs_white_selector" android:id="@+id/radio_button_2" android:background="@drawable/mall_search_store_right_selector" android:padding="@dimen/dimen_5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="false" android:button="@null" android:layout_weight="1" android:textAlignment="center"/>
        </RadioGroup>
    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/store_search_layout">
        <ListView android:id="@+id/listView" android:layout_width="match_parent" android:layout_height="wrap_content" android:listSelector="@drawable/mall_list_selector" android:cacheColorHint="@color/transparent" android:divider="@null" android:choiceMode="singleChoice"/>
        <ScrollView android:id="@+id/no_search_results_view" android:background="@color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:layout_gravity="center_horizontal" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
                <ImageView android:layout_gravity="center_horizontal" android:paddingTop="@dimen/dimen_20dp" android:layout_width="wrap_content" android:layout_height="wrap_content" app:srcCompat="@drawable/mall_search_no_result_mall"/>
                <TextView android:textSize="@dimen/cart_16sp" android:textColor="@color/greyish_brown" android:gravity="center" android:id="@+id/no_result_txt_view" android:paddingLeft="@dimen/dimen_30dp" android:paddingTop="@dimen/dimen_16dp" android:paddingRight="@dimen/dimen_30dp" android:paddingBottom="@dimen/dimen_16dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/search_sorry_no_result_found"/>
                <TextView android:textSize="@dimen/cart_14sp" android:textColor="@color/greyish_brown" android:gravity="center_horizontal" android:id="@+id/search_suggestion_keywords_tv" android:paddingBottom="@dimen/dimen_10dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                <com.paytmmall.artifact.widget.RoboTextView android:textSize="16sp" android:textColor="@color/paytm_blue" android:gravity="center_horizontal" android:id="@+id/search_across_tv" android:paddingBottom="@dimen/dimen_10dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="24dp" android:text="@string/search_across_txt" app:fontType="2"/>
                <TextView android:textSize="@dimen/cart_16sp" android:textColor="@color/greyish_brown" android:gravity="center" android:id="@+id/shopping_offers_header" android:background="@color/color_f4f4f4" android:paddingTop="@dimen/dimen_16dp" android:paddingBottom="@dimen/dimen_16dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/shopping_offers_for_you"/>
                <androidx.recyclerview.widget.RecyclerView android:id="@+id/shopping_offers_rv" android:background="@color/color_f4f4f4" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                <TextView android:textSize="@dimen/cart_16sp" android:textColor="@color/greyish_brown" android:gravity="center" android:id="@+id/recently_viewed_header_tv" android:background="@color/color_f4f4f4" android:paddingTop="@dimen/dimen_10dp" android:paddingBottom="@dimen/dimen_16dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/your_recently_viewed"/>
                <androidx.recyclerview.widget.RecyclerView android:id="@+id/recently_viewed_rv" android:background="@color/color_f4f4f4" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            </LinearLayout>
        </ScrollView>
        <RelativeLayout android:id="@+id/lyt_search_progress_bar" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
            <ProgressBar android:layout_width="wrap_content" android:layout_height="wrap_content" android:indeterminateDrawable="@drawable/mall_progress_large_holo" android:layout_centerInParent="true"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
