<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:layout_gravity="center_vertical" android:id="@+id/iv_back" android:padding="@dimen/dimen_16dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_8dp" android:src="@drawable/upi_ic_back"/>
    <ImageView android:id="@+id/motif_iv" android:background="@drawable/ic_payment_bank_large_motif" android:layout_width="106dp" android:layout_height="136dp" android:layout_alignParentRight="true"/>
    <TextView android:textSize="14sp" android:textColor="#1d252d" android:id="@+id/skip_tv" android:background="@drawable/white_rounded_bg" android:paddingLeft="@dimen/dimen_20dp" android:paddingTop="@dimen/dimen_6dp" android:paddingRight="@dimen/dimen_20dp" android:paddingBottom="@dimen/dimen_6dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_20dp" android:layout_marginRight="@dimen/dimen_20dp" android:text="@string/upi_skip" android:layout_alignParentRight="true"/>
    <ScrollView android:background="@color/transparent" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="@dimen/dimen_10dp" android:fillViewport="true" android:layout_above="@+id/bottomLayout" android:layout_below="@+id/iv_back">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="@color/black" android:id="@+id/tv_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginRight="@dimen/dimen_20dp" android:text="@string/upi_verify_mobile_number_title_new" android:lineSpacingExtra="4sp" android:fontFamily="@string/font_family_roboto_regular"/>
            <TextView android:textSize="14sp" android:textColor="@color/black" android:id="@+id/tv_desc" android:background="@color/transparent" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="@dimen/dimen_10dp" android:layout_marginRight="@dimen/dimen_20dp" android:text="@string/upi_no_kyc_needed" android:layout_below="@+id/tv_title" android:lineSpacingExtra="8sp" android:fontFamily="@string/font_family_roboto_regular" android:letterSpacing="0.03"/>
            <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#26d07c" android:id="@+id/tv_upi_offer" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="@dimen/dimen_12dp" android:layout_marginRight="@dimen/dimen_20dp" android:layout_below="@+id/tv_desc" android:lineSpacingExtra="8sp" android:fontFamily="sans-serif"/>
            <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#8ba6c1" android:id="@+id/tv_operator_charges_warning" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="@dimen/dimen_10dp" android:layout_marginRight="@dimen/dimen_20dp" android:layout_marginBottom="@dimen/dimen_20dp" android:text="@string/upi_signup_send_sms_text" android:layout_above="@+id/tv_re_activate_account" android:layout_centerHorizontal="true" android:lineSpacingExtra="6sp" android:fontFamily="@string/font_family_roboto_regular"/>
            <TextView android:textSize="@dimen/dimen_16sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/tv_re_activate_account" android:background="@drawable/upi_bg_rect_light_blue" android:layout_width="match_parent" android:layout_height="@dimen/dimen_55dp" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginRight="@dimen/dimen_20dp" android:layout_marginBottom="@dimen/dimen_30dp" android:text="@string/proceed" android:layout_alignParentBottom="true" android:fontFamily="@string/font_family_roboto_medium"/>
            <RelativeLayout android:id="@+id/rl_multi_sim" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginRight="@dimen/dimen_20dp" android:layout_below="@+id/tv_upi_offer">
                <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#1d252d" android:id="@+id/tv_error_desc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_12dp" android:text="@string/upi_new_device_binding_message" android:lineSpacingExtra="6sp" android:fontFamily="sans-serif" android:letterSpacing="0.04"/>
                <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="@color/new_black" android:id="@+id/tv_select_sim_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_32dp" android:text="@string/select_sim_with_mobile_number" android:layout_below="@+id/tv_error_desc" android:lineSpacingExtra="6sp" android:fontFamily="@string/font_family_roboto_medium"/>
                <include android:id="@+id/simSelection" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/tv_select_sim_title" layout="@layout/upi_dual_sim_tile_layout"/>
                <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="@color/color_999999" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/upi_operator_charges" android:layout_below="@+id/simSelection" android:lineSpacingExtra="10sp" android:fontFamily="sans-serif"/>
            </RelativeLayout>
            <ImageView android:id="@+id/iv_logo" android:visibility="visible" android:layout_width="175dp" android:layout_height="167dp" android:layout_centerInParent="true" app:srcCompat="@drawable/ic_ill_add_bank"/>
        </RelativeLayout>
    </ScrollView>
    <RelativeLayout android:id="@+id/bottomLayout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <include android:layout_width="match_parent" android:layout_height="wrap_content" layout="@layout/bottom_paytm_line"/>
        <include android:id="@+id/accountSwitch" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" layout="@layout/upi_account_change_bottom_bar"/>
    </RelativeLayout>
</RelativeLayout>
