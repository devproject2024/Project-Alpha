<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:background="@color/light_grey" android:padding="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/color_666666" android:layout_gravity="left" android:id="@+id/payment_mode_header_left" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/payment_mode" android:layout_alignParentLeft="true"/>
        <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/color_666666" android:layout_gravity="right" android:id="@+id/payment_mode_header_right" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/convenience_fee" android:layout_alignParentRight="true"/>
        <TextView android:textSize="12sp" android:layout_gravity="right" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/inclusive_of_tax_braces" android:layout_below="@+id/payment_mode_header_right" android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <ListView android:id="@+id/payment_mode_list" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:divider="@null" android:dividerHeight="0dp"/>
</LinearLayout>
