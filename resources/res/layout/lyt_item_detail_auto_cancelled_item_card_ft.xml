    <View android:id="@+id/view_detail_seperator" android:background="@color/color_ebebeb" android:layout_width="match_parent" android:layout_height="@dimen/dimen_1dp" android:layout_marginLeft="12dp" android:layout_marginTop="@dimen/dimen_16dp" android:layout_marginRight="12dp"/>
