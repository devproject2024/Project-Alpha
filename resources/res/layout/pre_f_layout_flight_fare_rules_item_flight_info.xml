<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/flight_info_layout" android:background="@color/white" android:paddingLeft="@dimen/dimen_15dp" android:paddingTop="@dimen/dimen_7dp" android:paddingRight="@dimen/dimen_15dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:id="@+id/layout_src_dest" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_19dp" android:layout_marginRight="@dimen/dimen_10dp">
        <ImageView android:id="@+id/flight_icon" android:layout_width="@dimen/dimen_19dp" android:layout_height="@dimen/dimen_19dp" android:layout_marginRight="@dimen/dimen_5dp" android:layout_alignParentLeft="true" app:srcCompat="@drawable/pre_f_flight_rectangle_background_more_seller"/>
        <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_13sp" android:textStyle="normal" android:textColor="@color/color_222222" android:ellipsize="end" android:id="@+id/origin_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxWidth="@dimen/dimen_90dp" android:maxLines="1" android:fontFamily="sans-serif"/>
        <ImageView android:layout_gravity="center" android:id="@+id/trip_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/dimen_4dp" android:layout_toRightOf="@+id/origin_text" android:layout_centerVertical="true" app:srcCompat="@drawable/pre_f_actionbar_roundtrip_arrow"/>
        <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_13sp" android:textStyle="normal" android:textColor="@color/color_222222" android:ellipsize="end" android:id="@+id/destination_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxWidth="@dimen/dimen_90dp" android:maxLines="1" android:layout_toRightOf="@+id/trip_icon" android:fontFamily="sans-serif"/>
    </LinearLayout>
    <RelativeLayout android:gravity="right|center_vertical|center_horizontal|center" android:id="@+id/refundable_status_lyt" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_19dp" android:layout_toRightOf="@+id/layout_src_dest" android:layout_alignParentRight="true">
        <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_13sp" android:textColor="@color/white" android:id="@+id/refundable_status_text" android:background="@drawable/pre_f_flight_rounded_rect_with_4dp_radius" android:paddingLeft="@dimen/dimen_5dp" android:paddingTop="@dimen/dimen_2dp" android:paddingRight="@dimen/dimen_5dp" android:paddingBottom="@dimen/dimen_2dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="2dp" android:text="Partial Refundable" android:layout_alignParentRight="true" app:fontType="2"/>
        <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_13sp" android:textStyle="normal" android:textColor="@color/color_222222" android:gravity="center_horizontal" android:id="@+id/route_header_note_txt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/flight_cancellation_fee_per_person" android:layout_below="@+id/refundable_status_text" android:layout_alignParentRight="true" android:lineSpacingExtra="2.5sp" android:fontFamily="sans-serif" app:fontType="2"/>
    </RelativeLayout>
    <View android:background="@color/color_efefef" android:layout_width="match_parent" android:layout_height="@dimen/dimen_1dp" android:layout_marginTop="@dimen/dimen_18dp" android:layout_marginBottom="@dimen/dimen_15dp" android:layout_below="@+id/refundable_status_lyt"/>
</RelativeLayout>
