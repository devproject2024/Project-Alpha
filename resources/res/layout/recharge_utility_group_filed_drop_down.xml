<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <View android:id="@+id/root_layout" android:background="@color/transparent" android:layout_width="match_parent" android:layout_height="15dp" android:layout_marginLeft="20dp" android:layout_marginRight="20dp">
        <requestFocus/>
    </View>
    <RelativeLayout android:id="@+id/parent_relative_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp">
        <RelativeLayout android:id="@+id/location_layout" android:layout_width="match_parent" android:layout_height="50dp">
            <com.google.android.material.textfield.TextInputLayout android:id="@+id/text_input_layout_utility" android:layout_width="match_parent" android:layout_height="50dp" app:theme="@style/recharge_text_input_layout_mobile_theme">
                <AutoCompleteTextView android:textSize="17sp" android:textStyle="normal" android:textColorHint="#999999" android:ellipsize="end" android:layout_gravity="center_vertical" android:id="@+id/group_field_textview" android:background="@null" android:paddingTop="@dimen/dimen_12dp" android:focusable="false" android:longClickable="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true" android:editable="false" android:dropDownSelector="@drawable/list_selector" android:popupBackground="@drawable/recharge_mobile_dropdown_view" android:layout_toLeftOf="@+id/contact_picker" android:lineSpacingExtra="4sp" android:inputType="number" android:dropDownWidth="match_parent" android:dropDownAnchor="@+id/text_input_layout_utility" android:imeOptions="actionNext" android:dropDownVerticalOffset="60dp" android:fontFamily="sans-serif-medium" app:fontType="3"/>
            </com.google.android.material.textfield.TextInputLayout>
            <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#00b9f5" android:gravity="end" android:id="@+id/change_operator" android:paddingBottom="@dimen/dimen_10dp" android:visibility="gone" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/change_city" android:layout_alignParentRight="true" android:layout_alignParentBottom="true" android:lineSpacingExtra="9sp" android:fontFamily="sans-serif-medium" android:letterSpacing="0.01"/>
            <LinearLayout android:gravity="right|center_vertical|center_horizontal|center" android:orientation="vertical" android:id="@+id/convenience_fee_lyt" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true">
                <TextView android:textSize="12sp" android:textColor="#999999" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/convenience_fee" android:includeFontPadding="false"/>
                <TextView android:textSize="13sp" android:textColor="@color/black" android:gravity="right" android:layout_gravity="right" android:id="@+id/convenience_fee_text" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <TextView android:textSize="12sp" android:textColor="#999999" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/inclusive_of_tax_braces" android:includeFontPadding="false"/>
            </LinearLayout>
            <ProgressBar android:id="@+id/pg_op_detection" android:visibility="gone" android:layout_width="20dp" android:layout_height="20dp" android:indeterminateDrawable="@drawable/progress_large_holo" android:layout_alignParentRight="true" android:layout_centerInParent="true" android:layout_centerVertical="true"/>
            <com.paytm.utility.RoboTextView android:textSize="12sp" android:textStyle="normal" android:textColor="@color/paytm_blue" android:ellipsize="end" android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@+id/txt_option_param1" android:padding="5dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="3dp" android:text="@string/view_sample_bill" android:singleLine="true" android:layout_alignBottom="@+id/text_input_layout_utility" android:layout_alignParentRight="true" app:fontType="3"/>
        </RelativeLayout>
    </RelativeLayout>
    <View android:id="@+id/group_field_separator" android:background="@color/bg_grid_grey" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_below="@+id/location_layout">
        <requestFocus/>
    </View>
    <com.paytm.utility.RoboTextView android:textSize="12sp" android:textColor="@color/gray" android:id="@+id/group_message_input_field" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" app:fontType="2"/>
</LinearLayout>
