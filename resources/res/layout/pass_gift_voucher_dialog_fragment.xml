<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@drawable/pass_passbook_filter_sheet_bg" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:id="@+id/gv_success_anim_layout" android:visibility="gone" android:layout_width="300dp" android:layout_height="150dp" android:layout_alignParentTop="true">
        <com.airbnb.lottie.LottieAnimationView android:id="@+id/gv_success_animation_view" android:visibility="visible" android:layout_width="300dp" android:layout_height="150dp" app:animationDirectionbundle="-1" app:duration="@android:integer/config_shortAnimTime"/>
    </LinearLayout>
    <RelativeLayout android:id="@+id/gvMainLayout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="20dp" android:layout_marginRight="20dp">
        <com.paytm.utility.RoboTextView android:textSize="@dimen/text_size_21sp" android:textStyle="bold" android:textColor="@color/color_222222" android:id="@+id/title_tv_confirm" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/gv_redeem_header" android:layout_centerVertical="true" android:lineSpacingExtra="-6sp" android:fontFamily="sans-serif" app:fontType="4"/>
        <com.paytm.utility.RoboTextView android:textSize="21sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/title_tv_failed" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/gv_failed" android:drawableLeft="@drawable/pass_ic_pending_copy" android:drawablePadding="@dimen/dimen_15dp" android:fontFamily="sans-serif-medium"/>
        <com.paytm.utility.RoboTextView android:textSize="21sp" android:textStyle="normal" android:textColor="#21c17a" android:id="@+id/title_tv_success" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:text="@string/gv_success" android:fontFamily="sans-serif-medium"/>
        <ImageView android:id="@+id/iv_close" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" app:srcCompat="@drawable/pass_gift_ic_close"/>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/gvConfirmLayout" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/gvMainLayout">
        <com.paytm.utility.RoboTextView android:textSize="15sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/tvGvFrom" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="@dimen/dimen_4dp" android:text="@string/gv_from" android:layout_below="@+id/title_tv" android:fontFamily="sans-serif"/>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="@dimen/dimens_30dp" android:layout_marginRight="@dimen/dimen_20dp">
            <include layout="@layout/pass_gift_voucher_dialog_card"/>
            <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#444444" android:id="@+id/tvGvVoucherCode" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_17dp" android:text="Voucher Code: PYTM 5674 8754 3467" android:fontFamily="sans-serif-medium"/>
            <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#999999" android:id="@+id/tvGvExpiryDate" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_16dp" android:text="Expiry: 25 Sep 2021" android:lineSpacingExtra="-2sp" android:fontFamily="sans-serif" android:letterSpacing="0.03"/>
        </LinearLayout>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="@dimen/dimen_16dp" android:layout_marginRight="@dimen/dimen_20dp" android:layout_alignParentBottom="true">
            <Button android:textSize="@dimen/dimen_18sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/gvConfirmBtn" android:background="@drawable/pass_blue_background_corner" android:layout_width="match_parent" android:layout_height="60dp" android:text="@string/gv_confirm" android:layout_centerInParent="true" android:textAllCaps="false"/>
            <RelativeLayout android:gravity="center" android:id="@+id/loading_threedots_view" android:background="@drawable/pass_proceed_animation_bg" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/dimen_60dp">
                <com.airbnb.lottie.LottieAnimationView android:layout_gravity="center" android:id="@+id/loading_threedots_lav" android:layout_width="60dp" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_12dp" android:layout_marginBottom="@dimen/dimen_12dp" android:layout_centerInParent="true"/>
            </RelativeLayout>
        </RelativeLayout>
        <View android:layout_width="match_parent" android:layout_height="20dp"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/gvSuccessLayout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="@dimen/dimen_40dp" android:layout_below="@+id/gvMainLayout">
        <com.paytm.utility.RoboTextView android:textSize="24sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/tvSuccessAmount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="â‚¹2,500" android:lineSpacingExtra="3sp" android:fontFamily="sans-serif-medium" android:letterSpacing="-0.02" app:fontType="3"/>
        <com.paytm.utility.RoboTextView android:textSize="15sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/gvAddedText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/gv_added" android:lineSpacingExtra="12sp" android:fontFamily="sans-serif" android:letterSpacing="-0.02"/>
        <View android:layout_width="match_parent" android:layout_height="50dp"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/gvFailedLayout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="@dimen/dimen_35dp" android:layout_marginRight="@dimen/dimen_20dp" android:layout_below="@+id/gvMainLayout">
        <com.paytm.utility.RoboTextView android:textSize="15sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/gvFailedLayoutText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/gv_fail_status" android:lineSpacingExtra="8sp" android:fontFamily="sans-serif" android:letterSpacing="-0.02"/>
        <View android:layout_width="match_parent" android:layout_height="20dp"/>
    </LinearLayout>
</RelativeLayout>
