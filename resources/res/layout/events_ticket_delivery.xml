<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/events_courier_toolbar" android:background="@color/color_status_bar" android:layout_width="match_parent" android:layout_height="56dp">
        <ImageView android:id="@+id/events_courier_back" android:background="@drawable/ripple_grey_white_bkgrnd" android:padding="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/back_arrow" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <androidx.core.widget.NestedScrollView android:id="@+id/movie_detail_scroll_view" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/event_delivery_continue" android:layout_below="@+id/events_courier_toolbar">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <RelativeLayout android:layout_gravity="bottom" android:id="@+id/event_review_relative" android:background="@color/color_status_bar" android:paddingBottom="20dp" android:fitsSystemWindows="true" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="21sp" android:textStyle="bold" android:textColor="#000000" android:id="@+id/event_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:maxLines="3" android:layout_toLeftOf="@+id/event_imgvw" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:fontFamily="sans-serif"/>
                <ImageView android:id="@+id/event_imgvw" android:layout_width="75dp" android:layout_height="75dp" android:layout_marginRight="20dp" android:layout_marginBottom="20dp" android:src="@drawable/android_amusement_park_placeholder_bg" android:scaleType="fitXY" android:layout_alignParentTop="true" android:layout_alignParentRight="true"/>
                <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/event_date_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="8dp" android:layout_below="@+id/event_title" android:fontFamily="sans-serif"/>
            </RelativeLayout>
            <LinearLayout android:id="@+id/delivery_pickup_selector" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="20dp" android:layout_marginRight="20dp" android:weightSum="1">
                <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="0.5">
                    <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#ffffff" android:gravity="center" android:layout_gravity="right" android:id="@+id/delivery_option" android:background="@drawable/selector_event_courier_left_tooltip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/ticket_delivered" android:fontFamily="sans-serif-medium"/>
                    <View android:id="@+id/delivery_empty_view" android:background="@color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="8dp"/>
                </LinearLayout>
                <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="0.5">
                    <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="@color/paytm_blue" android:gravity="center" android:id="@+id/pickup_option" android:background="@drawable/selector_event_courier_right_bg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/boxoffice_pickup" android:fontFamily="sans-serif-medium"/>
                    <View android:id="@+id/pickup_empty_view" android:background="@color/white" android:layout_width="match_parent" android:layout_height="8dp"/>
                </LinearLayout>
            </LinearLayout>
            <TextView android:textSize="13sp" android:textColor="#222222" android:id="@+id/event_courier_description" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="22dp" android:layout_marginTop="10dp" android:text="@string/event_delivery_charges" android:maxLines="3" android:layout_toRightOf="@+id/delivery_radio_btn" android:layout_below="@+id/delivery_header_txt" android:fontFamily="@string/font_family_roboto_regular"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/event_ticket_delivery_lyt" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="20dp" android:layout_marginRight="20dp"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/pickup_details_lyt" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:orientation="vertical" android:background="@drawable/gray_rounded_border" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="13dp" android:layout_marginRight="20dp">
                    <TextView android:textSize="14sp" android:textColor="#222222" android:id="@+id/pickup_location" android:padding="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="8" android:fontFamily="@string/font_family_roboto_regular"/>
                    <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#00b9f5" android:id="@+id/pickup_direction" android:background="@color/color_status_bar" android:padding="10dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="15dp" android:layout_marginBottom="15dp" android:text="@string/event_get_directions" android:drawableLeft="@drawable/events_get_direction_selector" android:drawablePadding="5dp" android:fontFamily="sans-serif-medium"/>
                </LinearLayout>
                <RelativeLayout android:id="@+id/tnc_rel_layout" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="16dp" android:layout_marginRight="20dp">
                    <TextView android:textSize="13sp" android:textStyle="normal" android:textColor="@color/paytm_blue" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/view_terms_conditions" android:fontFamily="@string/font_family_roboto_medium"/>
                    <ImageView android:id="@+id/event_delivery_tnc_expand_collapse" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/down" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                </RelativeLayout>
                <TextView android:textSize="13sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/pickup_terms" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="55dp" android:layout_marginTop="5dp" android:layout_marginRight="20dp" android:maxLines="50" android:fontFamily="@string/font_family_roboto_regular"/>
                <RelativeLayout android:id="@+id/ticket_pickup_user_info" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="20dp" android:layout_marginTop="17dp" android:layout_marginRight="20dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <Button android:textSize="17sp" android:textStyle="bold" android:textColor="@color/white" android:id="@+id/event_delivery_continue" android:background="@color/blue" android:layout_width="match_parent" android:layout_height="@dimen/dimen_56dp" android:text="@string/continue_label" android:layout_alignParentBottom="true" android:textAllCaps="false" android:fontFamily="@string/font_family_roboto_regular"/>
    <RelativeLayout android:id="@+id/event_ticket_delivery_progressbar" android:background="@color/transparent" android:visibility="gone" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent">
        <ProgressBar android:layout_width="@dimen/dimen_50dp" android:layout_height="@dimen/dimen_50dp" android:indeterminateDrawable="@drawable/progress_large_holo" android:layout_centerInParent="true"/>
    </RelativeLayout>
</RelativeLayout>
