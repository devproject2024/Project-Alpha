<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <include android:id="@+id/activity_upgrade_kyc_lyt_bank_header" android:visibility="gone" layout="@layout/layout_bank_header"/>
    <ScrollView android:id="@+id/upgrade_kyc_lyt_parent_sv" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true">
        <RelativeLayout android:id="@+id/container" android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:orientation="vertical" android:id="@+id/activity_upgrade_kyc_non_kyc_layout" android:padding="@dimen/dimen_20dp" android:visibility="visible" android:fitsSystemWindows="true" android:layout_width="match_parent" android:layout_height="match_parent">
                <include android:id="@+id/lyt_identification_header" android:visibility="gone" layout="@layout/kyc_processing_title_layout"/>
                <TextView android:textSize="24sp" android:textStyle="bold" android:textColor="#222222" android:id="@+id/complete_kyc_heading_tv" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/aadhaar_page_heading" android:fontFamily="sans-serif"/>
                <TextView android:textSize="@dimen/dimen_15sp" android:textStyle="normal" android:textColor="#00b9f5" android:gravity="end" android:id="@+id/upgrade_kyc_know_more_tv" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/know_more_kyc" android:fontFamily="sans-serif"/>
                <TextView android:textSize="21sp" android:textColor="@color/black" android:id="@+id/activity_upgrade_kyc_tv_heading" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/dimen_25dp" android:text="@string/enter_aadhaar_open_bank_acc"/>
                <LinearLayout android:orientation="vertical" android:id="@+id/rel_input" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_20dp">
                    <com.google.android.material.textfield.TextInputLayout android:theme="@style/PaytmEditTextTheme" android:id="@+id/activity_upgrade_kyc_lyt_et_aadhaar_no" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/enter_your_12_digit_aadhaar_no">
                        <com.google.android.material.textfield.TextInputEditText android:textSize="16sp" android:textColor="@android:color/black" android:textColorHint="@color/color_222222" android:id="@+id/activity_upgrade_kyc_et_aadhaar_no" android:focusable="true" android:longClickable="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLength="19" android:digits="0123456789-" android:layout_centerHorizontal="true" android:inputType="number" android:imeOptions="actionNext"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <TextView android:textSize="@dimen/dimen_2sp" android:textColor="@color/paytm_light_blue" android:layout_gravity="right" android:id="@+id/activity_upgrade_kyc_tv_find_aadhaar" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dimen_5dp" android:text="@string/find_aadhaar_number"/>
                    <com.google.android.material.textfield.TextInputLayout android:theme="@style/PaytmEditTextTheme" android:id="@+id/activity_upgrade_kyc_lyt_et_aadhaar_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:hint="@string/your_name_as_on_aadhaar_card" android:layout_below="@+id/activity_upgrade_kyc_lyt_et_aadhaar_no" app:errorEnabled="true">
                        <com.google.android.material.textfield.TextInputEditText android:textSize="16sp" android:textColor="@android:color/black" android:textColorHint="@color/color_222222" android:id="@+id/activity_upgrade_kyc_et_aadhaar_name" android:focusable="true" android:longClickable="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true" android:maxLength="60" android:digits="A BCDEFGHIJKLMNOPQRSTUVWXYZ0123456789" android:layout_centerHorizontal="true" android:inputType="textCapCharacters"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <RelativeLayout android:id="@+id/term_condition_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_25dp" android:layout_above="@+id/activity_upgrade_kyc_button_proceed" android:layout_centerHorizontal="true">
                        <CheckBox android:textSize="14sp" android:gravity="top" android:id="@+id/activity_upgrade_kyc_terms_checkbox" android:paddingLeft="@dimen/dimen_8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="false" android:button="@drawable/kyc_checkbox"/>
                        <TextView android:textSize="14sp" android:textColor="@color/black" android:id="@+id/activity_upgrade_kyc_terms_text" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/activity_upgrade_kyc_terms_checkbox"/>
                        <TextView android:textSize="14sp" android:textColor="@color/black" android:id="@+id/activity_upgrade_kyc_terms_text_complete" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_30dp" android:text="@string/aadhaar_tnc_complete_new" android:layout_below="@+id/activity_upgrade_kyc_terms_text"/>
                    </RelativeLayout>
                    <Button android:textSize="16sp" android:textStyle="normal" android:textColor="@android:color/white" android:id="@+id/activity_upgrade_kyc_button_proceed" android:background="@drawable/button_click" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_40dp" android:text="@string/proceed" android:layout_above="@+id/activity_upgrade_kyc_doc_heading" android:textAllCaps="false"/>
                    <LinearLayout android:orientation="vertical" android:id="@+id/dont_have_aadhaar_lyt" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <TextView android:textSize="17sp" android:textStyle="bold" android:textColor="@color/color_515151" android:layout_gravity="left" android:id="@+id/activity_upgrade_kyc_doc_heading" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_30dp" android:layout_marginBottom="-5dp" android:text="@string/not_have_aadhaar_card" android:layout_above="@+id/activity_upgrade_kyc_using_doc" android:fontFamily="sans-serif"/>
                        <ImageView android:layout_gravity="end" android:id="@+id/upgrade_kyc_right_arrow_iv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/arrow_right_black"/>
                        <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="#444444" android:layout_gravity="left" android:id="@+id/activity_upgrade_kyc_using_doc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="-5dp" android:layout_marginBottom="30dp" android:text="@string/create_account_using_doc" android:layout_alignParentBottom="true" android:fontFamily="sans-serif"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <com.airbnb.lottie.LottieAnimationView android:id="@+id/wallet_loader" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="30dp" android:layout_centerInParent="true" app:amount="5" app:animationDirectionbundle="-1" app:circleSize="15" app:duration="@android:integer/config_mediumAnimTime" app:endColor="@color/light_blue_A400" app:startColor="@color/light_blue_A700"/>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>
