<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="bottom" android:orientation="vertical" android:id="@+id/transparent_lyt" android:background="#80000000" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:background="@drawable/pre_t_train_top_left_right_round_dialog_bg" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:id="@+id/ids" android:layout_width="wrap_content" android:layout_height="@dimen/dimen_40dp" android:layout_marginTop="@dimen/dimen_20dp">
            <com.paytm.utility.RoboTextView android:textSize="16sp" android:textColor="@color/train_search_list_color" android:id="@+id/irctc_heading" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="@string/irctc_login_heading" android:layout_centerVertical="true" app:fontType="3"/>
            <RelativeLayout android:id="@+id/dialog_close" android:layout_width="100dp" android:layout_height="match_parent" android:layout_alignParentRight="true">
                <ImageView android:background="@drawable/pre_t_cross" android:paddingLeft="4dp" android:paddingRight="4dp" android:layout_width="25dp" android:layout_height="25dp" android:layout_marginRight="20dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            </RelativeLayout>
        </RelativeLayout>
        <ScrollView android:id="@+id/scroll_view" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/ids">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
                <LinearLayout android:id="@+id/id_verification_progress" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="8">
                    <View android:id="@+id/mobile_verification_progress" android:background="@color/available_text_color" android:layout_width="0dp" android:layout_height="5dp" android:layout_weight="4"/>
                    <View android:id="@+id/email_verification_progress" android:background="@color/train_not_confirmed_otp" android:layout_width="0dp" android:layout_height="5dp" android:layout_weight="4"/>
                </LinearLayout>
                <LinearLayout android:orientation="vertical" android:id="@+id/irctc_login_lyt" android:background="@drawable/pre_t_train_top_left_right_round_dialog_bg" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent">
                    <ImageView android:layout_gravity="center_horizontal" android:id="@+id/img_forgot_id" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <com.paytm.utility.RoboTextView android:textSize="12sp" android:textColor="@color/train_search_list_color" android:id="@+id/irctc_sub_heading" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="10dp" android:layout_marginRight="20dp" app:fontType="2"/>
                    <com.paytm.utility.RoboTextView android:textSize="10sp" android:textStyle="normal" android:textColor="#adadad" android:id="@+id/user_id_heading" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="6dp" android:text="Recently used IRCTC IDs" android:fontFamily="sans-serif"/>
                    <HorizontalScrollView android:id="@+id/user_id_scroll" android:visibility="visible" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="15dp">
                        <LinearLayout android:orientation="horizontal" android:id="@+id/user_id_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_12dp"/>
                    </HorizontalScrollView>
                    <RelativeLayout android:id="@+id/user_id_lyt" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_16dp">
                        <com.google.android.material.textfield.TextInputLayout android:theme="@style/train_login_dialog_theme" android:id="@+id/user_text_id" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:hint="@string/irctct_user_id_text" android:layout_toLeftOf="@+id/remove_user_id_close_btn" android:layout_alignParentLeft="true" android:layout_centerVertical="true">
                            <EditText android:textSize="14sp" android:textColor="@color/bus_time_color" android:id="@+id/irctc_user_id" android:background="@android:color/transparent" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true" android:maxLength="35" app:fontType="2"/>
                        </com.google.android.material.textfield.TextInputLayout>
                        <ImageView android:id="@+id/remove_user_id_close_btn" android:paddingBottom="10dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="20dp" android:src="@drawable/pre_t_cross_grey" android:layout_alignParentRight="true" android:layout_alignParentBottom="true"/>
                    </RelativeLayout>
                    <View android:id="@+id/user_id_below_view1" android:background="@color/bg_grid_grey" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="20dp" android:layout_marginRight="20dp"/>
                    <com.paytm.utility.RoboTextView android:textSize="10sp" android:textColor="@color/irctc_verification_error" android:id="@+id/error_text" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="3dp" android:layout_marginRight="20dp" app:fontType="3"/>
                    <LinearLayout android:orientation="vertical" android:id="@+id/otp_verify_lyt" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <include layout="@layout/pre_t_irctc_otp_view"/>
                    </LinearLayout>
                    <com.paytm.utility.RoboTextView android:textSize="10sp" android:textColor="@color/irctc_verification_error" android:id="@+id/verification_instruction" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="3dp" android:text="@string/verification_instruction_text" app:fontType="3"/>
                    <RelativeLayout android:id="@+id/email_mobile_lyt" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputLayout android:theme="@style/train_login_dialog_theme" android:id="@+id/mobile_email_parent" android:paddingTop="@dimen/dimen_3dp" android:paddingBottom="@dimen/dimen_3dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="30dp" android:hint="@string/irctc_mobile_email_number">
                            <EditText android:textSize="14sp" android:textColor="@color/color_000000" android:id="@+id/mobile_email" android:background="@android:color/transparent" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true" android:inputType="textEmailAddress"/>
                        </com.google.android.material.textfield.TextInputLayout>
                        <ImageView android:id="@+id/mobile_clear_button" android:paddingBottom="@dimen/dimen_10dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_20dp" android:src="@drawable/pre_t_cross_grey" android:layout_above="@+id/user_id_below_view2" android:layout_alignEnd="@+id/mobile_email_parent"/>
                        <View android:id="@+id/user_id_below_view2" android:background="@color/bg_grid_grey" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_below="@+id/mobile_email_parent"/>
                        <com.paytm.utility.RoboTextView android:textSize="10sp" android:textColor="@color/irctc_verification_error" android:id="@+id/mobile_number_error" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="3dp" android:text="sample" android:layout_below="@+id/user_id_below_view2" app:fontType="3"/>
                    </RelativeLayout>
                    <LinearLayout android:orientation="vertical" android:id="@+id/date_of_birth_lyt" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="35dp">
                        <TextView android:textSize="13dp" android:textColor="@color/gray" android:id="@+id/date_of_birth_heading" android:paddingLeft="20dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="8dp" android:text="@string/date_of_birth"/>
                        <TextView android:textSize="14sp" android:textColor="@color/dark_black" android:textColorHint="@color/payment_success_text_grey" android:id="@+id/date_of_birth" android:paddingLeft="20dp" android:paddingRight="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/enter_dob" app:fontType="2"/>
                        <View android:background="@color/bg_grid_grey" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="20dp" android:layout_marginTop="13dp" android:layout_marginRight="20dp"/>
                        <com.paytm.utility.RoboTextView android:textSize="10sp" android:textColor="@color/irctc_verification_error" android:id="@+id/dob_error" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="3dp" android:text="sample" app:fontType="3"/>
                    </LinearLayout>
                    <RelativeLayout android:id="@+id/forgot_id_password_lyt" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp">
                        <com.paytm.utility.RoboTextView android:textSize="12sp" android:textStyle="normal" android:textColor="@color/flight_tab_blue" android:id="@+id/forgot_password_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="16dp" android:text="@string/forgot_irctc_password" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:fontFamily="sans-serif" app:fontType="2"/>
                        <com.paytm.utility.RoboTextView android:textSize="12sp" android:textStyle="normal" android:textColor="@color/flight_tab_blue" android:id="@+id/forgot_userid_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="15dp" android:text="@string/forgot_user_id" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:fontFamily="sans-serif" app:fontType="2"/>
                    </RelativeLayout>
                    <com.paytm.utility.RoboTextView android:textSize="15sp" android:textColor="@color/flight_tab_blue" android:gravity="end" android:id="@+id/submit_btn" android:paddingRight="20dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="60dp" android:layout_marginBottom="25dp" android:text="@string/submit" app:fontType="3"/>
                    <com.paytm.utility.RoboTextView android:textSize="15sp" android:textColor="@color/flight_tab_blue" android:gravity="end" android:id="@+id/get_password" android:paddingRight="20dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginBottom="10dp" android:text="@string/continue_text" app:fontType="3"/>
                    <com.paytm.utility.RoboTextView android:textSize="15sp" android:textStyle="bold" android:textColor="@color/flight_tab_blue" android:gravity="end" android:id="@+id/continue_txt" android:paddingRight="20dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:layout_marginBottom="25dp" android:text="@string/continue_text" app:fontType="3"/>
                    <LinearLayout android:gravity="right" android:layout_gravity="right" android:id="@+id/verify_btn_lyt" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="25dp" android:layout_marginRight="@dimen/dimen_20dp" android:layout_marginBottom="30dp">
                        <com.paytm.utility.RoboTextView android:textSize="15sp" android:textColor="@color/flight_tab_blue" android:gravity="end" android:id="@+id/verify_btn" android:paddingLeft="20dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/proceed" app:fontType="3"/>
                        <com.paytm.utility.RoboTextView android:textSize="15sp" android:textColor="@color/flight_tab_blue" android:gravity="center" android:id="@+id/cancel_btn" android:paddingLeft="20dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/create_account" app:fontType="3"/>
                    </LinearLayout>
                    <LinearLayout android:orientation="vertical" android:id="@+id/button_lyt" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="17dp" android:layout_marginBottom="18dp">
                        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_alignParentRight="true" android:layout_centerVertical="true">
                            <RelativeLayout android:layout_gravity="end" android:id="@+id/irctc_login" android:background="@color/paytm_blue" android:visibility="visible" android:layout_width="match_parent" android:layout_height="44dp">
                                <com.paytm.utility.RoboTextView android:textSize="15sp" android:textStyle="bold" android:textColor="@color/white" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/proceed" android:layout_centerHorizontal="true" android:layout_centerVertical="true"/>
                            </RelativeLayout>
                        </LinearLayout>
                        <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="@color/black" android:gravity="center" android:id="@+id/question_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="@string/account_text" app:fontType="3"/>
                        <com.paytm.utility.RoboTextView android:textSize="13sp" android:gravity="center" android:id="@+id/irctc_create_account_txt" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="@string/create_account" app:fontType="2"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout android:orientation="vertical" android:id="@+id/irctc_success_lyt" android:background="@color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
                    <RelativeLayout android:background="@color/irctc_successfull_image" android:layout_width="match_parent" android:layout_height="65dp">
                        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/pre_t_success_image" android:layout_centerInParent="true"/>
                    </RelativeLayout>
                    <com.paytm.utility.RoboTextView android:textSize="16sp" android:textColor="@color/train_city_search_value" android:gravity="center" android:id="@+id/irctc_create_account_txt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="17dp" android:text="@string/congratuation_text" app:fontType="3"/>
                    <com.paytm.utility.RoboTextView android:textSize="13sp" android:textColor="@color/train_city_search_value" android:gravity="center" android:id="@+id/irctc_create_account_txt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="8dp" android:text="@string/booking_confirmation_text" app:fontType="3"/>
                    <com.paytm.utility.RoboTextView android:textSize="13sp" android:textColor="@color/payment_success_text_grey" android:id="@+id/irctc_create_account_txt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="19dp" android:text="@string/irctc_booking_note" app:fontType="3"/>
                    <com.paytm.utility.RoboTextView android:textSize="15sp" android:textColor="@color/flight_tab_blue" android:gravity="end" android:id="@+id/irctc_continue_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="14dp" android:layout_marginRight="20dp" android:layout_marginBottom="20dp" android:text="@string/continue_text" app:fontType="3"/>
                </LinearLayout>
            </RelativeLayout>
        </ScrollView>
        <LinearLayout android:id="@+id/lottieLL" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="220dp" android:layout_marginTop="2dp" android:layout_below="@+id/ids" android:layout_centerVertical="true">
            <com.airbnb.lottie.LottieAnimationView android:layout_gravity="center" android:id="@+id/lottie_in_reset_password" android:visibility="visible" android:layout_width="match_parent" android:layout_height="@dimen/dimen_23dp" app:amount="5" app:animationDirectionbundle="-1" app:circleSize="10" app:duration="@android:integer/config_mediumAnimTime"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
