<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/date_text_layout" android:background="@color/paytm_blue" android:layout_width="match_parent" android:layout_height="70dp" android:layout_alignParentTop="true">
        <TextView android:textSize="28sp" android:textColor="@color/white" android:ellipsize="marquee" android:id="@+id/custom_date_picker_date_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:layout_centerInParent="true" android:marqueeRepeatLimit="marquee_forever" android:textAlignment="center"/>
    </RelativeLayout>
    <DatePicker android:id="@+id/custom_date_picker_dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/date_text_layout" android:layout_centerHorizontal="true" android:calendarViewShown="false" android:datePickerMode="spinner"/>
    <TextView android:textSize="@dimen/dimen_15sp" android:textColor="@color/paytm_blue" android:id="@+id/custom_date_picker_done_tv" android:paddingRight="20dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="30dp" android:text="@string/done" android:layout_below="@+id/custom_date_picker_dp" android:layout_alignParentRight="true"/>
    <TextView android:textSize="@dimen/dimen_15sp" android:textColor="@color/paytm_blue" android:id="@+id/custom_date_picker_cancel_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="30dp" android:layout_marginBottom="30dp" android:text="@string/cancel" android:layout_toLeftOf="@+id/custom_date_picker_done_tv" android:layout_below="@+id/custom_date_picker_dp"/>
</RelativeLayout>
