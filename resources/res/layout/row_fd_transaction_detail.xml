<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
    <View android:id="@+id/v_divider" android:background="#f3f7f8" android:layout_width="match_parent" android:layout_height="1dp"/>
    <ImageView android:id="@+id/iv_fd_trans_status" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_23dp" android:layout_marginTop="19dp"/>
    <RelativeLayout android:id="@+id/rl_header_wrapper" android:paddingTop="12dp" android:paddingRight="20dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toRightOf="@+id/iv_fd_trans_status" android:layout_below="@+id/v_divider">
        <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#ffa400" android:id="@+id/tv_trans_status" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="11dp" android:lineSpacingExtra="4sp" android:fontFamily="sans-serif-medium"/>
        <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#8f969c" android:id="@+id/tv_fd_no" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="11dp" android:layout_marginTop="2dp" android:layout_below="@+id/tv_trans_status" android:lineSpacingExtra="6sp" android:fontFamily="sans-serif"/>
        <ImageView android:id="@+id/iv_open_arrow" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="-5dp" android:src="@drawable/pb_fd_down_arrow" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/rl_fd_interest_detail" android:paddingTop="@dimen/dimen_20dp" android:paddingRight="@dimen/dimen_20dp" android:paddingBottom="17dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toRightOf="@+id/iv_fd_trans_status" android:layout_below="@+id/rl_header_wrapper">
        <TextView android:textSize="12sp" android:textStyle="bold" android:textColor="#222222" android:id="@+id/tv_requested_amount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="11dp" android:text="@string/pb_requested_amount" android:fontFamily="sans-serif"/>
        <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/tv_interest_earned" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="11dp" android:layout_marginTop="12dp" android:layout_below="@+id/tv_requested_amount" android:fontFamily="sans-serif"/>
        <TextView android:textSize="12sp" android:textStyle="bold" android:textColor="#222222" android:gravity="end" android:id="@+id/tv_requested_amount_value" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:fontFamily="sans-serif"/>
        <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/tv_tax_deducted" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="11dp" android:layout_marginTop="12dp" android:text="@string/pb_fd_tax_deducted" android:layout_below="@+id/tv_interest_earned" android:fontFamily="sans-serif"/>
        <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#222222" android:gravity="end" android:id="@+id/tv_tax_deducted_value" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:layout_below="@+id/tv_interest_earned_value" android:layout_alignParentRight="true" android:fontFamily="sans-serif"/>
        <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#222222" android:gravity="end" android:id="@+id/tv_interest_earned_value" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:layout_below="@+id/tv_requested_amount_value" android:layout_alignParentRight="true" android:fontFamily="sans-serif"/>
    </RelativeLayout>
</RelativeLayout>
