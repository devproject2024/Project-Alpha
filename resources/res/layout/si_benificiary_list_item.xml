<?xml version="1.0" encoding="utf-8"?>
<net.one97.paytm.paymentsBank.utils.swipe.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/swipe_layout_2" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="match_parent">
        <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#ffffff" android:gravity="center" android:id="@+id/set_reminder_tv" android:background="#21c17a" android:layout_width="95dp" android:layout_height="match_parent" android:text="Set Reminder" android:fontFamily="sans-serif-medium" android:letterSpacing="0.06"/>
        <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#ffffff" android:gravity="center" android:id="@+id/delete_tv" android:background="#fd5c5c" android:layout_width="90dp" android:layout_height="match_parent" android:text="@string/delete" android:fontFamily="sans-serif-medium" android:letterSpacing="0.06"/>
    </LinearLayout>
    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:id="@+id/beneficiary_item" android:background="@color/white" android:paddingLeft="@dimen/dimen_20dp" android:paddingTop="@dimen/dimen_10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:animateLayoutChanges="true" android:elevation="0dp">
            <RelativeLayout android:id="@+id/iconLayout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_15dp" android:layout_centerVertical="true" android:animateLayoutChanges="true">
                <TextView android:textSize="21sp" android:gravity="center" android:id="@+id/beneficiary_circle" android:background="@drawable/pb_bg_white_circular_stroke" android:visibility="visible" android:layout_width="36dp" android:layout_height="36dp" android:fontFamily="@string/font_family_roboto_medium"/>
                <ImageView android:layout_gravity="center" android:id="@+id/beneficiary_no_name_icon" android:background="@drawable/pb_bg_white_circular_stroke" android:padding="5dp" android:visibility="visible" android:layout_width="36dp" android:layout_height="36dp" android:src="@drawable/pb_ic_bank_sbi"/>
                <ImageView android:layout_gravity="right" android:id="@+id/selected_icon" android:background="@drawable/pb_bg_white_circular_stroke" android:visibility="gone" android:layout_width="36dp" android:layout_height="36dp" android:src="@drawable/pb_tick_transparent" android:alpha="0.9"/>
                <TextView android:textSize="10sp" android:textStyle="normal" android:textColor="#999999" android:ellipsize="end" android:gravity="center_horizontal" android:layout_gravity="bottom|right|center_vertical|center_horizontal|center|end" android:id="@+id/headerBankLogoName" android:visibility="gone" android:layout_width="75dp" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginRight="10dp" android:maxLines="1" android:layout_below="@+id/beneficiary_no_name_icon" android:fontFamily="sans-serif"/>
            </RelativeLayout>
            <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="#222222" android:ellipsize="end" android:id="@+id/beneficiary_number" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_20dp" android:maxLines="1" android:layout_toRightOf="@+id/iconLayout" android:fontFamily="@string/font_family_roboto_regular"/>
            <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#999999" android:ellipsize="end" android:id="@+id/beneficiary_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginRight="@dimen/dimen_20dp" android:maxLines="1" android:layout_toRightOf="@+id/iconLayout" android:layout_below="@+id/beneficiary_number" android:fontFamily="@string/font_family_roboto_regular"/>
            <TextView android:textSize="11sp" android:textStyle="normal" android:textColor="#999999" android:ellipsize="end" android:id="@+id/date_tv" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_15dp" android:text="@string/money_transfer_successfully" android:maxLines="1" android:lineSpacingExtra="0sp" android:fontFamily="@string/font_family_roboto_regular"/>
            <View android:background="@color/color_f3f7f8" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="@dimen/dimen_10dp" android:layout_toRightOf="@+id/iconLayout" android:layout_below="@+id/beneficiary_name"/>
        </RelativeLayout>
    </FrameLayout>
</net.one97.paytm.paymentsBank.utils.swipe.SwipeRevealLayout>
