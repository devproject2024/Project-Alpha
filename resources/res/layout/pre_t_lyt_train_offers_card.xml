<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/offer_container" android:background="@android:color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_5dp" android:layout_marginBottom="@dimen/dimen_5dp">
    <LinearLayout android:orientation="vertical" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="@dimen/dimen_15dp" android:layout_marginRight="@dimen/dimen_15dp">
        <com.paytm.utility.RoboTextView android:textSize="15sp" android:textColor="@color/color_222222" android:id="@+id/txt_offers_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:text="@string/offers" app:fontType="3"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/lyt_offers_list_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_12dp"/>
        <Button android:textSize="@dimen/cart_14sp" android:textColor="@color/paytm_blue" android:layout_gravity="center_horizontal" android:id="@+id/btn_more" android:background="@android:color/transparent" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/have_promocode_text_str" android:textAllCaps="false"/>
    </LinearLayout>
    <RelativeLayout android:id="@+id/review_iteneray_train_offer_lyt" android:background="@android:color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp">
        <RelativeLayout android:paddingLeft="15dp" android:paddingRight="13dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginBottom="10dp">
            <com.paytm.utility.RoboTextView android:textSize="15sp" android:textColor="@color/black" android:id="@+id/applied_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dimen_12dp" android:text="Applied Promocode" app:fontType="3"/>
            <com.paytm.utility.RoboTextView android:textSize="11sp" android:textColor="@color/movies_promo_text_color" android:gravity="center_vertical" android:id="@+id/review_iteneray_train_offer_tag" android:background="@drawable/movie_promo_bg" android:paddingTop="6dp" android:paddingBottom="6dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/applied_title"/>
            <ImageView android:id="@+id/review_iteneray_train_promo_txt_close" android:padding="10dp" android:visibility="visible" android:layout_width="@dimen/dimen_15dp" android:layout_height="@dimen/dimen_15dp" android:layout_marginLeft="8dp" android:layout_marginTop="@dimen/dimen_3dp" android:layout_below="@+id/applied_title" android:layout_alignParentRight="true"/>
            <com.paytm.utility.RoboTextView android:textSize="9sp" android:textColor="@color/color_909090" android:id="@+id/review_iteneray_train_offer_txt" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:layout_marginTop="@dimen/dimen_3dp" android:layout_toLeftOf="@+id/review_iteneray_train_promo_txt_close" android:layout_toRightOf="@+id/review_iteneray_train_offer_tag" android:layout_below="@+id/applied_title" app:fontType="2"/>
        </RelativeLayout>
        <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="@color/color_33b5e5" android:gravity="center" android:id="@+id/review_iteneray_train_promo_txt" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:layout_marginBottom="15dp" android:text="@string/have_a_promocode" app:fontType="3"/>
        <View android:background="@color/color_ebebeb" android:visibility="gone" android:layout_width="match_parent" android:layout_height="5dp" android:layout_below="@+id/review_iteneray_train_promo_txt"/>
    </RelativeLayout>
</LinearLayout>
