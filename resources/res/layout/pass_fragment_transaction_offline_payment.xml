<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/parent_layout" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:background="#f3f7f8" android:paddingLeft="21dp" android:paddingTop="28dp" android:paddingBottom="28dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:id="@+id/back_arrow_imv" android:paddingRight="20dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/pass_back_arrow" android:layout_alignParentLeft="true"/>
            <ImageView android:id="@+id/share_imv" android:paddingLeft="20dp" android:paddingRight="21dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/pass_sahre_filled" android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <TextView android:textSize="21sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/status_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="35dp" android:text="@string/money_sent_successful" android:fontFamily="sans-serif-medium"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/amount_ll" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_below="@+id/status_tv">
            <TextView android:textSize="36sp" android:textStyle="normal" android:textColor="#222222" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/rupee_symbol" android:fontFamily="sans-serif-light"/>
            <TextView android:textSize="36sp" android:textStyle="bold" android:textColor="#222222" android:id="@+id/amount_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="2,500" android:fontFamily="sans-serif"/>
        </LinearLayout>
        <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#ffffff" android:id="@+id/tagTv" android:background="#79222222" android:paddingLeft="10dp" android:paddingTop="4dp" android:paddingRight="10dp" android:paddingBottom="4dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="Business" android:layout_below="@+id/amount_ll" android:fontFamily="sans-serif-medium"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_below="@+id/tagTv">
            <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#666666" android:id="@+id/date_time_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="12:30 pm, 20 Mar 2018" android:fontFamily="sans-serif"/>
            <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#666666" android:id="@+id/deviderClosingBalance" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_2dp" android:text="|" android:fontFamily="sans-serif" android:letterSpacing="0.09"/>
            <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#666666" android:id="@+id/tvClosingBalance" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_6dp" android:text="Closing Balance: â‚¹6,150" android:fontFamily="sans-serif" android:letterSpacing="0.09"/>
        </LinearLayout>
        <ImageView android:id="@+id/status_icon" android:paddingRight="21dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/pass_ic_tick" android:layout_alignBottom="@+id/amount_ll" android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <net.one97.paytm.passbook.utility.InteractiveScrollView android:id="@+id/scroll_view" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                <RelativeLayout android:id="@+id/top_container_rl" android:paddingLeft="20dp" android:paddingTop="30dp" android:paddingRight="20dp" android:paddingBottom="30dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <net.one97.paytm.passbook.customview.CircularImageView android:id="@+id/imv1" android:padding="4dp" android:layout_width="48dp" android:layout_height="48dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                    <androidx.appcompat.widget.AppCompatImageView android:id="@+id/imv3" android:padding="4dp" android:visibility="gone" android:layout_width="48dp" android:layout_height="48dp" android:layout_alignParentRight="true"/>
                    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:layout_toLeftOf="@+id/imv1">
                        <TextView android:textSize="11sp" android:textStyle="normal" android:textColor="#999999" android:id="@+id/title1_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/sent_to" android:textAllCaps="true" android:fontFamily="sans-serif-medium" android:letterSpacing="0.09"/>
                        <TextView android:textSize="17sp" android:textStyle="bold" android:textColor="#222222" android:ellipsize="end" android:id="@+id/txt1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="9dp" android:text="Anish J Abraham" android:fontFamily="sans-serif"/>
                        <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/txt2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Vasant Kunj, Delhi" android:fontFamily="sans-serif"/>
                        <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/txt3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:text="Order ID: 1624 6129 4886 0909\10Order ID: 1624 6129 4886 0909" android:lineSpacingExtra="4dp" android:fontFamily="sans-serif-light"/>
                    </LinearLayout>
                </RelativeLayout>
                <View android:id="@+id/seprator_view" android:background="#f3f7f8" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="20dp" android:layout_marginRight="20dp"/>
                <RelativeLayout android:paddingLeft="20dp" android:paddingTop="30dp" android:paddingRight="20dp" android:paddingBottom="30dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <ImageView android:id="@+id/imv2" android:background="@drawable/pass_circle" android:padding="10dp" android:layout_width="48dp" android:layout_height="48dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:layout_toLeftOf="@+id/imv2">
                        <TextView android:textSize="11sp" android:textStyle="normal" android:textColor="#999999" android:id="@+id/title2_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/sent_from" android:textAllCaps="true" android:fontFamily="sans-serif-medium" android:letterSpacing="0.09"/>
                        <TextView android:textSize="17sp" android:textStyle="bold" android:textColor="#222222" android:ellipsize="end" android:id="@+id/txt4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="9dp" android:text="Paytm Wallet" android:fontFamily="sans-serif"/>
                        <LinearLayout android:orientation="vertical" android:id="@+id/transaction_details_layout" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                        <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#222222" android:ellipsize="end" android:id="@+id/txt5" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:text="98110 98110" android:lineSpacingExtra="25sp" android:fontFamily="sans-serif-light"/>
                        <LinearLayout android:orientation="vertical" android:id="@+id/txnReversalLayout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_35dp" android:layout_marginBottom="35dp"/>
                        <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#222222" android:ellipsize="end" android:id="@+id/txt6" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="14dp" android:text="Wallet Txn ID: 8023 2123 3312 " android:lineSpacingExtra="25sp" android:fontFamily="sans-serif-light" android:layout_marginStart="1dp"/>
                    </LinearLayout>
                </RelativeLayout>
                <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#00b9f5" android:gravity="center_horizontal" android:id="@+id/on_hold_tv" android:background="@drawable/pass_bg_blue_rectangle_border_passbook" android:paddingLeft="20dp" android:paddingTop="12dp" android:paddingRight="20dp" android:paddingBottom="12dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="20dp" android:layout_marginRight="10dp" android:layout_marginBottom="20dp" android:text="@string/passbook_on_hold_txn_text" android:fontFamily="sans-serif-medium"/>
                <LinearLayout android:orientation="vertical" android:id="@+id/bottom_btn_ll" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <View android:background="#f3f7f8" android:layout_width="match_parent" android:layout_height="10dp"/>
                    <RelativeLayout android:id="@+id/repeat_payment_rl" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <ImageView android:id="@+id/repeat_payment_iv" android:padding="20dp" android:layout_width="60dp" android:layout_height="wrap_content" android:layout_centerVertical="true" app:srcCompat="@drawable/pass_ic_repeat_payment_vector"/>
                        <ImageView android:id="@+id/repeat_payment_txn_arrow_imv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="20dp" android:src="@drawable/pass_arrow_forward_postcard" android:tint="#999999" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                        <TextView android:textSize="15dp" android:textStyle="normal" android:textColor="#444444" android:id="@+id/repeat_payment_tv_1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/pass_repeat_payment" android:layout_toLeftOf="@+id/repeat_payment_txn_arrow_imv" android:layout_toRightOf="@+id/repeat_payment_iv" android:layout_centerVertical="true" android:lineSpacingExtra="-2sp" android:fontFamily="sans-serif"/>
                        <View android:id="@+id/viewDividerRepeatPayment" android:background="#f3f7f8" android:layout_width="wrap_content" android:layout_height="2dp" android:layout_below="@+id/repeat_payment_iv" android:layout_alignStart="@+id/repeat_payment_tv_1"/>
                    </RelativeLayout>
                    <RelativeLayout android:id="@+id/recent_transaction_rl" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <ImageView android:id="@+id/icon2" android:padding="20dp" android:layout_width="60dp" android:layout_height="wrap_content" android:src="@drawable/pass_passbook_ic_recent_tx" android:layout_centerVertical="true"/>
                        <ImageView android:id="@+id/rc_txn_arrow_imv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="20dp" android:src="@drawable/pass_arrow_forward_postcard" android:tint="#999999" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                        <TextView android:textSize="15dp" android:textStyle="normal" android:textColor="#444444" android:id="@+id/recent_transaction_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/passbook_recent_transaction_with" android:layout_toLeftOf="@+id/rc_txn_arrow_imv" android:layout_toRightOf="@+id/icon2" android:layout_centerVertical="true" android:lineSpacingExtra="-2sp" android:fontFamily="sans-serif"/>
                        <View android:background="#f3f7f8" android:layout_width="wrap_content" android:layout_height="2dp" android:layout_below="@+id/icon2" android:layout_alignStart="@+id/recent_transaction_tv"/>
                    </RelativeLayout>
                    <RelativeLayout android:id="@+id/need_help_rl" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <ImageView android:id="@+id/icon1" android:padding="20dp" android:layout_width="60dp" android:layout_height="wrap_content" android:src="@drawable/pass_help_24_7" android:layout_centerVertical="true"/>
                        <TextView android:textSize="15dp" android:textStyle="normal" android:textColor="#444444" android:id="@+id/need_help_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/need_help_text_re" android:layout_toRightOf="@+id/icon1" android:layout_centerVertical="true" android:lineSpacingExtra="-2sp" android:fontFamily="sans-serif"/>
                        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="20dp" android:src="@drawable/pass_arrow_forward_postcard" android:tint="#999999" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                    </RelativeLayout>
                    <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#00b9f5" android:gravity="center_horizontal" android:id="@+id/repeat_payment_tv" android:background="@drawable/pass_bg_blue_rectangle_border_passbook" android:paddingTop="12dp" android:paddingBottom="12dp" android:visibility="gone" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="@string/repeat_payment" android:layout_weight="1" android:fontFamily="sans-serif-medium"/>
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="35dp"/>
                <View android:layout_width="1dp" android:layout_height="1dp"/>
            </LinearLayout>
        </net.one97.paytm.passbook.utility.InteractiveScrollView>
        <RelativeLayout android:id="@+id/loader_contianer" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
            <com.airbnb.lottie.LottieAnimationView android:id="@+id/loader" android:layout_width="wrap_content" android:layout_height="30dp" android:layout_centerInParent="true"/>
        </RelativeLayout>
    </FrameLayout>
</LinearLayout>
