<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/ll_promo_root" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/dimen_20dp">
        <RadioButton android:id="@+id/rb_offer" android:layout_width="wrap_content" android:layout_height="wrap_content" android:buttonTint="@color/mall_orange"/>
        <ImageView android:id="@+id/img_offer" android:layout_width="@dimen/dimen_35dp" android:layout_height="@dimen/dimen_35dp" android:layout_marginLeft="@dimen/dimen_15dp" android:layout_toRightOf="@+id/rb_offer"/>
        <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:id="@+id/ll_promo" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_10dp" android:layout_toRightOf="@+id/img_offer" android:layout_alignTop="@+id/img_offer">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="@dimen/dimen_15sp" android:textStyle="bold" android:textColor="@color/black" android:id="@+id/txv_promo_heading" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/lyt_flash_sale"/>
                <include android:id="@+id/lyt_flash_sale" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" layout="@layout/lyt_flash_sale"/>
                <TextView android:id="@+id/txv_promo" android:background="@drawable/grey_background_with_border" android:paddingLeft="@dimen/dimen_2dp" android:paddingRight="@dimen/dimen_2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_5dp" android:layout_marginRight="@dimen/dimen_10dp" android:layout_toLeftOf="@+id/lyt_flash_sale" android:layout_below="@+id/txv_promo_heading" android:layout_alignLeft="@+id/txv_promo_heading"/>
                <TextView android:textColor="@color/red" android:id="@+id/promo_error" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_5dp" android:layout_below="@+id/txv_promo"/>
                <TextView android:textColor="@color/green" android:id="@+id/txv_promo_count" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_5dp" android:layout_below="@+id/promo_error"/>
            </RelativeLayout>
        </LinearLayout>
        <TextView android:textColor="@color/black" android:id="@+id/txv_comment" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_15dp" android:layout_below="@+id/ll_promo" android:layout_alignLeft="@+id/ll_promo"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/ll_gratifications" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:layout_marginBottom="@dimen/dimen_10dp" android:layout_below="@+id/txv_comment" android:layout_alignLeft="@+id/txv_comment"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/lyt_freebie" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_20dp" android:layout_below="@+id/ll_gratifications" android:layout_alignLeft="@+id/ll_gratifications">
            <LinearLayout android:orientation="horizontal" android:id="@+id/ll_single_fb" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <ImageView android:id="@+id/img_freebie" android:background="@drawable/fb_carousal_grey_border" android:padding="@dimen/dimen_1dp" android:layout_width="@dimen/dimen_80dp" android:layout_height="@dimen/dimen_80dp"/>
                <TextView android:layout_gravity="center_vertical" android:id="@+id/txv_freebie_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_15dp"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView android:id="@+id/rv_fb_carousal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:layout_marginEnd="@dimen/dimen_10dp" android:nestedScrollingEnabled="false"/>
            <TextView android:textColor="@color/mall_orange" android:id="@+id/txv_view_freebie" android:paddingTop="@dimen/dimen_5dp" android:paddingBottom="@dimen/dimen_5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/view_freebie"/>
        </LinearLayout>
        <TextView android:textSize="@dimen/dimen_12sp" android:id="@+id/txv_tnc" android:padding="@dimen/dimen_5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_15dp" android:text="@string/mall_terms_n_condition" android:layout_below="@+id/lyt_freebie" android:layout_alignLeft="@+id/lyt_freebie"/>
    </RelativeLayout>
    <View android:id="@+id/bottom_view" android:background="@color/light_grey" android:layout_width="wrap_content" android:layout_height="1dp" android:layout_marginTop="@dimen/dimen_8dp"/>
</LinearLayout>
