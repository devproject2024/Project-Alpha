<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:background="#90000000" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:background="@drawable/bottom_sheet_curve_add_beneficiary" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:id="@+id/main_content" android:layout_width="match_parent" android:layout_height="wrap_content">
            <RelativeLayout android:id="@+id/progress_bar_lyt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_24dp">
                <ProgressBar android:id="@+id/circularProgressbar" android:layout_width="100dp" android:layout_height="47dp" android:secondaryProgress="100" android:indeterminate="false" android:progressDrawable="@drawable/circular_progress" style="?android:attr/progressBarStyleHorizontal"/>
                <TextView android:textSize="@dimen/dimen_18sp" android:textStyle="bold" android:textColor="@color/color_1d252d" android:gravity="center_horizontal" android:id="@+id/timer_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="1" android:layout_centerInParent="true" android:fontFamily="sans-serif" android:letterSpacing="0.08"/>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/error_lyt" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_30dp" android:layout_marginStart="@dimen/dimen_25dp" android:layout_marginEnd="@dimen/dimen_25dp">
                <TextView android:textSize="@dimen/dimen_14sp" android:textColor="@color/color_1d252d" android:id="@+id/error_textview" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/scp_repeat_payment_error_text" android:lineSpacingExtra="@dimen/dimen_5dp"/>
                <Button android:textSize="@dimen/dimen_14sp" android:textStyle="bold" android:textColor="@color/white" android:id="@+id/error_button" android:background="@drawable/pay_button_rounded_corners" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_30dp" android:text="@string/ok" android:layout_below="@+id/error_textview" android:textAllCaps="true" android:fontFamily="@string/font_family_roboto_regular"/>
            </RelativeLayout>
            <LinearLayout android:id="@+id/tv_processing_state" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_15dp" android:layout_below="@+id/progress_bar_lyt" android:layout_marginStart="@dimen/dimen_27dp">
                <TextView android:textSize="@dimen/dimen_14sp" android:textStyle="bold" android:textColor="@color/color_1d252d" android:id="@+id/conn_with_bank" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/connecting_with_your_bank" android:lineSpacingExtra="@dimen/dimen_4sp" android:fontFamily="sans-serif" android:letterSpacing="0.04"/>
                <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/validaing_details" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <TextView android:textSize="@dimen/dimen_14sp" android:textStyle="bold" android:textColor="@color/color_1d252d" android:id="@+id/validaing_details_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/validating_payment_details_with" android:lineSpacingExtra="@dimen/dimen_4sp" android:fontFamily="sans-serif" android:letterSpacing="0.04"/>
                    <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="@dimen/dimen_8dp">
                        <ImageView android:layout_width="@dimen/dimen_30dp" android:layout_height="@dimen/dimen_5dp" app:srcCompat="@drawable/ic_visa_flag_blue"/>
                        <ImageView android:layout_width="@dimen/dimen_28dp" android:layout_height="@dimen/dimen_15dp" app:srcCompat="@drawable/ic_visa_logo_blue"/>
                        <ImageView android:layout_width="@dimen/dimen_30dp" android:layout_height="@dimen/dimen_5dp" app:srcCompat="@drawable/ic_visa_flag_gold"/>
                    </LinearLayout>
                </LinearLayout>
                <TextView android:textSize="@dimen/dimen_14sp" android:textStyle="bold" android:textColor="@color/color_1d252d" android:id="@+id/redirecting" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/redirecting_you_to_bank_page" android:lineSpacingExtra="@dimen/dimen_4sp" android:fontFamily="sans-serif" android:letterSpacing="0.04"/>
            </LinearLayout>
        </RelativeLayout>
        <ImageView android:id="@+id/iv_bottom_strip" android:background="@drawable/splash_bottom_strip" android:visibility="visible" android:layout_width="match_parent" android:layout_height="@dimen/dimen_15dp" android:layout_marginTop="@dimen/dimen_24dp" android:layout_below="@+id/main_content"/>
    </RelativeLayout>
</RelativeLayout>
