<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/lyt_option_close_view" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/lyt_filter_root">
        <ImageView android:background="@drawable/pre_t_train_close" android:layout_width="40dp" android:layout_height="40dp" android:layout_marginBottom="20dp" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/lyt_filter_root" android:background="@color/white" android:paddingLeft="@dimen/dimen_22dp" android:paddingTop="@dimen/dimen_24dp" android:paddingRight="@dimen/dimen_22dp" android:paddingBottom="@dimen/dimen_24dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <ImageView android:id="@+id/waitlist_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true"/>
        <TextView android:textSize="17sp" android:textColor="#000000" android:id="@+id/txt_oops" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="Oops!" android:layout_below="@+id/waitlist_icon" android:layout_centerHorizontal="true" android:fontFamily="sans-serif-medium"/>
        <TextView android:textSize="11sp" android:textColor="#666666" android:gravity="center" android:id="@+id/txt_waitlist_detail" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="13dp" android:text="@string/train_waiting_list_msg" android:layout_below="@+id/txt_oops" android:layout_centerHorizontal="true" android:lineSpacingExtra="5sp" android:fontFamily="sans-serif-light"/>
        <net.one97.paytm.common.widgets.RoboButton android:textSize="17sp" android:textColor="@color/bus_ticket_white" android:id="@+id/confirm_btn" android:background="@drawable/bg_btn_blue" android:layout_width="match_parent" android:layout_height="58dp" android:layout_marginLeft="@dimen/dimen_78dp" android:layout_marginTop="@dimen/dimen_27dp" android:layout_marginRight="@dimen/dimen_78dp" android:text="Yes" android:layout_below="@+id/txt_waitlist_detail" android:layout_centerHorizontal="true" android:textAllCaps="false" android:stateListAnimator="@null"/>
        <TextView android:textSize="14sp" android:textColor="#00b9f5" android:id="@+id/another_selection_txt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_28dp" android:text="No, I want to make another selection" android:layout_below="@+id/confirm_btn" android:layout_centerHorizontal="true" android:fontFamily="sans-serif"/>
    </RelativeLayout>
</RelativeLayout>
