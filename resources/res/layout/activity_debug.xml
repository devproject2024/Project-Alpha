<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:padding="16dp" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:text="@string/domain_change_option_desc"/>
    <GridLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:columnCount="3">
        <CheckBox android:id="@+id/sslPinning" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="6dp" android:checked="false" android:button="@drawable/check_box" android:layout_column="0" android:text="@string/ssl_pinning" android:layout_row="0"/>
        <CheckBox android:id="@+id/prefCrash" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginBottom="6dp" android:checked="false" android:button="@drawable/check_box" android:layout_column="1" android:text="@string/prefCrash" android:layout_row="0" android:layout_columnSpan="2"/>
        <Button android:id="@+id/add_rule" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="5dp" android:layout_column="0" android:text="@string/add_rule" android:layout_row="1"/>
        <Button android:id="@+id/add_docker_rule" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="5dp" android:layout_column="1" android:text="@string/add_docker_rule" android:layout_row="1"/>
        <Button android:id="@+id/remove_all_rules" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_column="2" android:text="@string/remove_all_rules" android:layout_row="1"/>
        <Button android:id="@+id/mute_all_rules" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="5dp" android:layout_column="0" android:text="@string/mute_all_rules" android:layout_row="2"/>
        <Button android:id="@+id/unmute_all_rules" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="5dp" android:layout_column="1" android:text="@string/unmute_all_rules" android:layout_row="2"/>
        <Button android:id="@+id/set_default_rules" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_column="2" android:text="@string/set_default_rules" android:layout_row="2"/>
        <Button android:id="@+id/set_recharge_utility_rules" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_column="0" android:text="@string/set_recharge_utility_rules" android:layout_row="3" android:layout_columnSpan="3"/>
    </GridLayout>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:layout_marginBottom="10dp" android:text="@string/rule_list_label"/>
    <ListView android:id="@+id/rule_list" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
</LinearLayout>
