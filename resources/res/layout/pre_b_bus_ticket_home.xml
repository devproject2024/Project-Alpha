<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:orientation="vertical" android:id="@+id/bus_ticket_home_container" android:background="@android:color/white" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:id="@+id/bus_home" android:layout_width="match_parent" android:layout_height="match_parent">
                <androidx.constraintlayout.widget.ConstraintLayout android:background="@drawable/travel_res_bus_bg_white_grey_border" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_25dp">
                    <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_16sp" android:textStyle="normal" android:textColor="@color/bus_text" android:ellipsize="end" android:id="@+id/source" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_15dp" android:layout_marginTop="@dimen/dimen_14dp" android:layout_marginRight="@dimen/dimen_15dp" android:hint="@string/bus_origin_txt" android:maxLines="2" android:fontFamily="sans-serif-medium" android:layout_marginStart="@dimen/dimen_15dp" android:layout_marginEnd="@dimen/dimen_15dp" app:layout_constraintEnd_toEndOf="0" app:layout_constraintHorizontal_bias="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0"/>
                    <View android:id="@+id/view" android:background="@color/tp_gray_line_1" android:layout_width="0dp" android:layout_height="1dp" android:layout_marginLeft="15dp" android:layout_marginTop="14dp" android:layout_marginStart="15dp" app:fontType="2" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/source"/>
                    <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_16sp" android:textStyle="normal" android:textColor="@color/bus_text" android:ellipsize="end" android:id="@+id/destination" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="14dp" android:layout_marginRight="8dp" android:layout_marginBottom="14dp" android:hint="@string/bus_destination_txt" android:maxLines="2" android:fontFamily="sans-serif-medium" android:layout_marginStart="15dp" android:layout_marginEnd="8dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0" app:layout_constraintHorizontal_bias="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/view"/>
                    <androidx.appcompat.widget.AppCompatImageView android:id="@+id/sep_route" android:background="@drawable/travel_res_bus_bg_white_grey_border" android:padding="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:rotation="-90" android:layout_marginEnd="15dp" app:layout_constraintBottom_toTopOf="@+id/view" app:layout_constraintEnd_toEndOf="0" app:layout_constraintTop_toTopOf="@+id/view" app:srcCompat="@drawable/bus_between_arrow"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <RelativeLayout android:orientation="horizontal" android:id="@+id/journey_date" android:focusable="true" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="4">
                    <LinearLayout android:orientation="vertical" android:id="@+id/journey_date_view_container" android:layout_width="wrap_content" android:layout_height="wrap_content">
                        <com.paytm.utility.RoboTextView android:textSize="13sp" android:textColor="@color/bus_from_to_color" android:id="@+id/label_depart_on" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/bus_journey_date_txt" app:fontType="2"/>
                        <com.paytm.utility.RoboTextView android:textSize="15sp" android:textColor="@color/color_000000" android:ellipsize="end" android:id="@+id/source_date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="@string/bus_pick_date" android:lines="1" app:fontType="2"/>
                        <RelativeLayout android:gravity="center" android:id="@+id/date_selection_layout" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content">
                            <com.paytm.utility.RoboTextView android:textSize="@dimen/text_size_32sp" android:textStyle="normal" android:textColor="@color/color_323232" android:id="@+id/source_date_text_view" android:layout_width="wrap_content" android:layout_height="wrap_content" android:includeFontPadding="false" android:fontFamily="sans-serif" android:paddingEnd="@dimen/dimen_3dp" app:fontType="2"/>
                            <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_12sp" android:textStyle="normal" android:textColor="@color/color_323232" android:id="@+id/source_month_text_view" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_5dp" android:includeFontPadding="false" android:fontFamily="sans-serif" android:layout_toEndOf="@+id/source_date_text_view" app:fontType="2"/>
                            <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_12sp" android:textStyle="bold" android:textColor="@color/color_323232" android:id="@+id/source_week_text_view" android:paddingBottom="@dimen/dimen_3dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:includeFontPadding="false" android:layout_below="@+id/source_month_text_view" android:fontFamily="sans-serif" android:layout_toEndOf="@+id/source_date_text_view" app:fontType="4"/>
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_alignParentBottom="true" android:layout_alignParentEnd="true">
                        <com.paytm.utility.RoboTextView android:textSize="13sp" android:textColor="@color/color_9b9b9b" android:id="@+id/txt_today_date" android:paddingLeft="5dp" android:paddingTop="5dp" android:paddingRight="5dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/label_today" app:fontType="3"/>
                        <View android:background="@color/train_frm_andto_txt" android:layout_width="1dp" android:layout_height="15dp" android:layout_marginLeft="6dp" android:layout_marginTop="6dp" android:layout_marginRight="6dp"/>
                        <com.paytm.utility.RoboTextView android:textSize="13sp" android:textColor="@color/color_9b9b9b" android:id="@+id/txt_tomorrow_date" android:paddingLeft="5dp" android:paddingTop="5dp" android:paddingRight="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/label_tomorrow" app:fontType="3"/>
                    </LinearLayout>
                    <LinearLayout android:layout_gravity="bottom" android:orientation="horizontal" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content">
                        <RelativeLayout android:gravity="center_horizontal" android:id="@+id/lyt_today_date" android:background="@drawable/travel_res_bus_tomorrow_normal" android:paddingLeft="8dp" android:paddingRight="8dp" android:layout_width="wrap_content" android:layout_height="30dp" android:layout_marginTop="8dp" android:layout_marginEnd="14dp">
                            <com.paytm.utility.RoboTextView android:textSize="16sp" android:textColor="@color/gray" android:id="@+id/txt_today_date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/bus_today_btn" android:layout_centerVertical="true" app:fontType="2"/>
                        </RelativeLayout>
                        <RelativeLayout android:gravity="center_horizontal" android:id="@+id/lyt_tomorrow_date" android:background="@drawable/travel_res_bus_tomorrow_normal" android:paddingLeft="8dp" android:paddingRight="8dp" android:layout_width="wrap_content" android:layout_height="30dp" android:layout_marginTop="8dp">
                            <com.paytm.utility.RoboTextView android:textSize="16sp" android:textColor="@color/gray" android:id="@+id/txt_tomorrow_date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/bus_tomorrow_btn" android:layout_centerVertical="true" app:fontType="2"/>
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>
                <androidx.appcompat.widget.AppCompatImageView android:visibility="visible" android:layout_width="match_parent" android:layout_height="1dp" app:srcCompat="@color/passbook_separators"/>
                <RelativeLayout android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <com.paytm.utility.RoboTextView android:textSize="12sp" android:textColor="@color/bus_paytm_blue" android:id="@+id/passengers_label" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/bus_no_of_seats_txt" app:fontType="2"/>
                    <RadioGroup android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:weightSum="17" android:layout_below="@+id/passengers_label">
                        <RadioButton android:textSize="14sp" android:textStyle="bold" android:textColor="@drawable/travel_res_bus_passenger_no_text_selector" android:gravity="center" android:id="@+id/passenger_one" android:background="@drawable/travel_res_bus_passenger_no_selector" android:layout_width="@dimen/passenger_no" android:layout_height="@dimen/passenger_no_height" android:checked="true" android:button="@android:color/transparent" android:text="1" android:layout_weight="1"/>
                        <View android:layout_width="40dp" android:layout_height="match_parent" android:layout_weight="3"/>
                        <RadioButton android:textSize="14sp" android:textStyle="bold" android:textColor="@drawable/travel_res_bus_passenger_no_text_selector" android:gravity="center" android:background="@drawable/travel_res_bus_passenger_no_selector" android:layout_width="@dimen/passenger_no" android:layout_height="@dimen/passenger_no_height" android:checked="false" android:button="@android:color/transparent" android:text="2" android:layout_weight="1"/>
                        <View android:layout_width="40dp" android:layout_height="match_parent" android:layout_weight="3"/>
                        <RadioButton android:textSize="14sp" android:textStyle="bold" android:textColor="@drawable/travel_res_bus_passenger_no_text_selector" android:gravity="center" android:background="@drawable/travel_res_bus_passenger_no_selector" android:layout_width="@dimen/passenger_no" android:layout_height="@dimen/passenger_no_height" android:checked="false" android:button="@android:color/transparent" android:text="3" android:layout_weight="1"/>
                        <View android:layout_width="40dp" android:layout_height="match_parent" android:layout_weight="3"/>
                        <RadioButton android:textSize="14sp" android:textStyle="bold" android:textColor="@drawable/travel_res_bus_passenger_no_text_selector" android:gravity="center" android:background="@drawable/travel_res_bus_passenger_no_selector" android:layout_width="@dimen/passenger_no" android:layout_height="@dimen/passenger_no_height" android:checked="false" android:button="@android:color/transparent" android:text="4" android:layout_weight="1"/>
                        <View android:layout_width="40dp" android:layout_height="match_parent" android:layout_weight="3"/>
                        <RadioButton android:textSize="14sp" android:textStyle="bold" android:textColor="@drawable/travel_res_bus_passenger_no_text_selector" android:gravity="center" android:background="@drawable/travel_res_bus_passenger_no_selector" android:layout_width="@dimen/passenger_no" android:layout_height="@dimen/passenger_no_height" android:checked="false" android:button="@android:color/transparent" android:text="5" android:layout_weight="1"/>
                    </RadioGroup>
                </RelativeLayout>
                <RelativeLayout android:id="@+id/lyt_bus_type_check_box_container" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <CheckBox android:textSize="16sp" android:background="@android:color/transparent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="false" android:button="@android:color/transparent" android:text="@string/luxury_buses_only" android:drawableLeft="@drawable/travel_res_bus_check_box" android:drawablePadding="10dp" app:fontType="2"/>
                </RelativeLayout>
                <RelativeLayout android:id="@+id/lyt_proceed_btn" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:layout_marginBottom="20dp" android:layout_below="@+id/lyt_bus_type_check_box_container">
                    <net.one97.paytm.common.widgets.RoboButton android:textSize="18sp" android:typeface="normal" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/proceed_btn" android:background="@drawable/travel_res_bus_bg_btn_blue" android:layout_width="match_parent" android:layout_height="58dp" android:text="@string/search_buses_btn" android:textAllCaps="false" app:fontType="2"/>
                </RelativeLayout>
                <include android:layout_gravity="center_horizontal" android:id="@+id/carousal_list" android:visibility="gone" android:drawingCacheQuality="auto" android:layout_width="match_parent" android:layout_height="wrap_content" layout="@layout/pre_b_view_pager_layout"/>
                <RelativeLayout android:id="@+id/view_pager_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="20dp" android:layout_below="@+id/flight_home">
                    <net.one97.paytm.common.widgets.CJRHorizontalListView android:id="@+id/carousel_horizontal_list" android:drawingCacheQuality="auto" android:layout_width="match_parent" android:layout_height="@dimen/carousel_horizontal_list_height" android:divider="@android:color/transparent"/>
                </RelativeLayout>
            </LinearLayout>
            <FrameLayout android:id="@+id/framelayout_storefront" android:background="@color/gray" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout android:id="@+id/lyt_maintenance_view" android:background="@android:color/white" android:padding="10dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
            <TextView android:textSize="14sp" android:textColor="@android:color/black" android:gravity="center" android:paddingBottom="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/bus_maintenance_error_title"/>
            <androidx.appcompat.widget.AppCompatImageView android:paddingBottom="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:contentDescription="@string/app_name"/>
            <TextView android:textSize="14sp" android:textColor="@android:color/black" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/bus_maintenance_error_description"/>
        </LinearLayout>
    </RelativeLayout>
    <include android:layout_width="match_parent" android:layout_height="match_parent" layout="@layout/pre_b_lyt_lottie_progress_bar"/>
    <include layout="@layout/no_network_layout"/>
</RelativeLayout>
