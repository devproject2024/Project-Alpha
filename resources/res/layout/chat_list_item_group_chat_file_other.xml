<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="8dp">
    <include layout="@layout/chat_view_chat_time"/>
    <RelativeLayout android:id="@+id/card_group_chat_message" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp">
        <LinearLayout android:orientation="horizontal" android:id="@+id/group_chat_message_container" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="15dp" android:layout_alignParentStart="true">
            <ImageView android:id="@+id/arrow" android:layout_width="wrap_content" android:layout_height="wrap_content" app:srcCompat="@drawable/chat_bubble_arrow_other"/>
            <LinearLayout android:id="@+id/group_chat_bubble" android:background="@drawable/chat_shape_chat_other_bg" android:layout_width="282dp" android:layout_height="wrap_content">
                <RelativeLayout android:id="@+id/layout_group_chat_file_message" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="10dp">
                    <ImageView android:gravity="center" android:id="@+id/image_group_chat_file_type" android:background="@null" android:layout_width="29dp" android:layout_height="35dp" android:src="@drawable/chat_icon_file_pdf" android:scaleType="fitXY"/>
                    <TextView android:textSize="14sp" android:textColor="@color/groupChatTextOther" android:ellipsize="end" android:id="@+id/text_group_chat_file_name" android:background="@null" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="2dp" android:text="File Name.xls" android:singleLine="true" android:layout_toRightOf="@+id/image_group_chat_file_type" android:layout_marginStart="10dp"/>
                    <TextView android:textSize="10sp" android:textColor="@color/groupChatTextOther" android:id="@+id/text_group_chat_file_size" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="652kb" android:layout_below="@+id/text_group_chat_file_name" android:layout_centerVertical="true" android:alpha="0.5" android:layout_marginStart="10dp" android:layout_toEndOf="@+id/image_group_chat_file_type"/>
                    <LinearLayout android:orientation="horizontal" android:id="@+id/ll_time_status_container" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignBottom="@+id/text_group_chat_file_size" android:layout_alignParentEnd="true">
                        <TextView android:textSize="10sp" android:textColor="@color/chat_color_4D000000" android:layout_gravity="center" android:id="@+id/chat_msg_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="12:00 PM" android:fontFamily="sans-serif-medium" android:layout_marginEnd="2dp"/>
                        <ImageView android:layout_gravity="center" android:id="@+id/image_group_chat_read_receipt" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/chat_icon_group_chat_message_state_send"/>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <View android:id="@+id/view_select_view" android:background="@color/chat_select_bg" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignTop="@+id/group_chat_message_container" android:layout_alignBottom="@+id/group_chat_message_container"/>
    </RelativeLayout>
</LinearLayout>
