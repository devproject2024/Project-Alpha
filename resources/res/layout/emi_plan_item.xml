<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="center" android:orientation="vertical" android:id="@+id/rl_container" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:paddingTop="@dimen/dimen_10dp" android:paddingBottom="@dimen/dimen_10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TableRow android:id="@+id/title" android:layout_width="match_parent" android:layout_height="wrap_content">
            <RadioButton android:id="@+id/radio_button_selector" android:background="@drawable/selector_radio_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:button="@android:color/transparent"/>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="5dp" android:weightSum="4" android:layout_marginStart="10dp">
                <TextView android:textSize="13sp" android:textStyle="normal" android:textColor="@color/black" android:gravity="start" android:id="@+id/tv_duration" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:fontFamily="sans-serif-medium"/>
                <LinearLayout android:gravity="start" android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                    <TextView android:textSize="13sp" android:textStyle="normal" android:textColor="@color/black" android:id="@+id/tv_emi_per_month" android:layout_width="wrap_content" android:layout_height="wrap_content" android:fontFamily="sans-serif-medium"/>
                </LinearLayout>
                <LinearLayout android:gravity="start" android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                    <TextView android:textSize="13sp" android:textStyle="normal" android:textColor="@color/black" android:id="@+id/tv_interest_per_annum" android:layout_width="wrap_content" android:layout_height="wrap_content" android:fontFamily="sans-serif-medium"/>
                </LinearLayout>
                <TextView android:textSize="13sp" android:textStyle="normal" android:textColor="@color/black" android:gravity="center" android:id="@+id/tv_total" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:fontFamily="sans-serif-medium"/>
            </LinearLayout>
        </TableRow>
    </RelativeLayout>
</RelativeLayout>
