<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/rv_left" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_18dp">
        <View android:id="@+id/v_line_mid" android:background="#e2ebee" android:visibility="gone" android:layout_width="1dp" android:layout_height="100dp" android:layout_centerInParent="true"/>
        <View android:id="@+id/v_line_below" android:background="#e2ebee" android:visibility="visible" android:layout_width="1dp" android:layout_height="45dp" android:layout_below="@+id/v_gb_1" android:layout_centerHorizontal="true"/>
        <View android:id="@+id/v_line_above" android:background="#e2ebee" android:visibility="gone" android:layout_width="1dp" android:layout_height="45dp" android:layout_centerHorizontal="true"/>
        <View android:id="@+id/v_gb_1" android:background="@drawable/pb_grey_ball" android:layout_width="11dp" android:layout_height="11dp" android:layout_marginTop="45dp"/>
    </RelativeLayout>
    <RelativeLayout android:background="@drawable/pb_proj_rectangle" android:padding="@dimen/dimen_20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_10dp" android:layout_toRightOf="@+id/rv_left">
        <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/tv_days" android:paddingLeft="@dimen/dimen_10dp" android:paddingTop="@dimen/dimen_10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="10days" android:fontFamily="sans-serif"/>
        <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#999999" android:gravity="end" android:id="@+id/tv_maturity_date" android:paddingTop="@dimen/dimen_10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:layout_marginTop="2dp" android:layout_toRightOf="@+id/tv_days" android:lineSpacingExtra="6sp" android:fontFamily="sans-serif"/>
        <TextView android:textSize="11sp" android:textStyle="normal" android:textColor="#444444" android:id="@+id/tv_interest_rate" android:paddingLeft="@dimen/dimen_10dp" android:paddingBottom="@dimen/dimen_10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_below="@+id/tv_days" android:lineSpacingExtra="7sp" android:fontFamily="sans-serif"/>
        <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="#222222" android:gravity="end" android:id="@+id/tv_interest_amount" android:paddingTop="@dimen/dimen_10dp" android:paddingRight="@dimen/dimen_10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="10days" android:layout_alignParentRight="true" android:fontFamily="sans-serif"/>
        <TextView android:textSize="11sp" android:textStyle="normal" android:textColor="#444444" android:gravity="end" android:id="@+id/tv_hd_interest_amount" android:paddingRight="@dimen/dimen_10dp" android:paddingBottom="@dimen/dimen_10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_below="@+id/tv_interest_amount" android:layout_alignParentRight="true" android:lineSpacingExtra="6sp" android:fontFamily="sans-serif"/>
    </RelativeLayout>
</RelativeLayout>
