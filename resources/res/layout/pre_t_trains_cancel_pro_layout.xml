<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/cancellation_container" android:background="@android:color/white" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content">
    <View android:background="@color/color_ebebeb" android:layout_width="match_parent" android:layout_height="@dimen/dimen_5dp"/>
    <RelativeLayout android:paddingLeft="15dp" android:paddingRight="@dimen/dimen_15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_15dp">
        <CheckBox android:textSize="15sp" android:textStyle="normal" android:textColor="#000000" android:gravity="center" android:id="@+id/cancel_insurance_checkbox" android:background="@android:color/transparent" android:paddingLeft="@dimen/dimen_10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:button="@drawable/pre_t_train_cancel_train_check" android:text="Free Cancelleation" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:fontFamily="sans-serif-medium" android:layout_alignParentStart="true"/>
        <com.paytm.utility.RoboTextView android:textSize="10sp" android:textStyle="normal" android:textColor="#00b9f5" android:id="@+id/view_txt" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:fontFamily="sans-serif"/>
    </RelativeLayout>
    <RelativeLayout android:paddingLeft="15dp" android:paddingRight="@dimen/dimen_15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_15dp">
        <ImageView android:id="@+id/cancel_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/pre_t_train_cancellation_new_icon" android:layout_centerVertical="true"/>
        <com.paytm.utility.RoboTextView android:textSize="13sp" android:textStyle="normal" android:textColor="#323232" android:id="@+id/description_view" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="19dp" android:layout_toRightOf="@+id/cancel_icon" android:layout_centerVertical="true" android:lineSpacingExtra="5sp" android:fontFamily="sans-serif"/>
    </RelativeLayout>
    <View android:id="@+id/description_divider" android:background="@color/divider_color" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="15dp" android:layout_marginTop="@dimen/dimen_15dp" android:layout_marginRight="15dp"/>
    <LinearLayout android:id="@+id/tip_container" android:paddingLeft="@dimen/dimen_15dp" android:paddingTop="@dimen/dimen_10dp" android:paddingRight="@dimen/dimen_15dp" android:paddingBottom="@dimen/dimen_10dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:layout_width="@dimen/dimen_16dp" android:layout_height="@dimen/dimen_18dp" android:layout_marginRight="5dp" android:src="@drawable/pre_t_train_bulb_bigger_image"/>
        <com.paytm.utility.RoboTextView android:textSize="11sp" android:textStyle="normal" android:textColor="@color/color_666666" android:gravity="center_vertical" android:id="@+id/tip_message_view" android:paddingTop="@dimen/dimen_2dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="title" android:lineSpacingExtra="@dimen/trains_ff_body_spacing" app:fontType="2"/>
    </LinearLayout>
    <View android:background="@color/color_ebebeb" android:layout_width="match_parent" android:layout_height="@dimen/dimen_5dp" android:layout_marginTop="@dimen/dimen_15dp"/>
</LinearLayout>
