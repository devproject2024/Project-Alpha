<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <com.paytm.utility.RoboTextView android:textSize="@dimen/text_size_24sp" android:textColor="@color/color_222222" android:id="@+id/titleText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="@dimen/dimen_20dp" android:layout_marginRight="@dimen/dimen_20dp" android:text="@string/status_kyc_request" app:fontType="4"/>
        <RelativeLayout android:id="@+id/firstStep" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="@dimen/dimen_32dp" android:layout_marginRight="@dimen/dimen_20dp">
            <LinearLayout android:orientation="vertical" android:id="@+id/layout_state" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatImageView android:id="@+id/e_status_image" android:layout_width="@dimen/dimen_24dp" android:layout_height="@dimen/dimen_24dp" android:layout_alignParentTop="true" app:srcCompat="@drawable/kyc_ic_timeline_done"/>
                <View android:layout_gravity="center_horizontal" android:id="@+id/e_state" android:background="@drawable/kyc_ac_opening_dot_rectangle" android:layout_width="@dimen/dimen_2dp" android:layout_height="@dimen/dimen_75dp"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_toRightOf="@+id/layout_state">
                <com.paytm.utility.RoboTextView android:textSize="@dimen/cart_17sp" android:textColor="@color/black" android:id="@+id/e_title_first" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/kyc_agent_visit" android:lines="1" android:layout_alignParentTop="true" app:fontType="3"/>
                <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#444444" android:id="@+id/details_collected_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:lineSpacingExtra="5sp" android:fontFamily="sans-serif"/>
