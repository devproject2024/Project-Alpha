                <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_12sp" android:textStyle="normal" android:textColor="#444444" android:id="@+id/sub_title_two_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:text="@string/status_screen_second_step_subtitle" android:lineSpacingExtra="5sp" android:fontFamily="sans-serif" app:fontType="2"/>
                <Button android:textSize="16sp" android:textStyle="normal" android:textColor="@android:color/white" android:id="@+id/apply_kyc_again_btn" android:background="@drawable/round_blue_bg" android:paddingTop="8dp" android:paddingBottom="8dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:layout_marginBottom="@dimen/dimen_15dp" android:text="@string/apply_for_kyc_again" android:textAllCaps="false"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/thirdStep" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginRight="@dimen/dimen_20dp">
            <LinearLayout android:orientation="vertical" android:id="@+id/layout_state_step_two" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatImageView android:id="@+id/e_status_image_step_two" android:layout_width="@dimen/dimen_24dp" android:layout_height="@dimen/dimen_24dp" app:srcCompat="@drawable/circle"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_toRightOf="@+id/layout_state_step_two" android:layout_marginStart="@dimen/dimen_20dp" android:layout_toEndOf="@+id/layout_state_step_two">
                <com.paytm.utility.RoboTextView android:textSize="@dimen/cart_17sp" android:textColor="@color/color_222222" android:id="@+id/e_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/kyc_completed" android:lines="1" app:fontType="3"/>
                <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#444444" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:text="@string/you_will_be_notified" android:lineSpacingExtra="5sp" android:fontFamily="sans-serif"/>
            </LinearLayout>
        </RelativeLayout>
        <View android:id="@+id/status_kyc_seperator_view" android:background="@color/color_f3f7f8" android:visibility="visible" android:layout_width="match_parent" android:layout_height="@dimen/dimen_10dp" android:layout_marginTop="@dimen/dimen_32dp"/>
        <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/need_help_lyt" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_20dp">
            <androidx.constraintlayout.widget.Guideline android:orientation="vertical" android:id="@+id/min_kyc_left_guideline" android:layout_width="wrap_content" android:layout_height="wrap_content" app:layout_constraintGuide_begin="@dimen/dimen_20dp"/>
            <androidx.constraintlayout.widget.Guideline android:orientation="vertical" android:id="@+id/min_kyc_right_guideline" android:layout_width="wrap_content" android:layout_height="wrap_content" app:layout_constraintGuide_end="@dimen/dimen_20dp"/>
            <androidx.constraintlayout.widget.Guideline android:orientation="horizontal" android:id="@+id/min_kyc_upper_guideline" android:layout_width="wrap_content" android:layout_height="wrap_content" app:layout_constraintGuide_begin="@dimen/dimen_20dp"/>
            <androidx.constraintlayout.widget.Guideline android:orientation="horizontal" android:id="@+id/min_kyc_bottom_guideline" android:layout_width="wrap_content" android:layout_height="wrap_content" app:layout_constraintGuide_end="@dimen/dimen_20dp"/>
            <ImageView android:id="@+id/help_iv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:contentDescription="@string/kyc_need_help" app:layout_constraintLeft_toLeftOf="@+id/min_kyc_left_guideline" app:layout_constraintTop_toTopOf="0" app:srcCompat="@drawable/kyc_need_help_iv"/>
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_forward_right_black" android:contentDescription="@string/kyc_need_help" app:layout_constraintBottom_toBottomOf="@+id/help_tv" app:layout_constraintRight_toRightOf="@+id/min_kyc_right_guideline" app:layout_constraintTop_toTopOf="@+id/help_tv"/>
            <TextView android:textSize="@dimen/dimen_15sp" android:textColor="@color/black" android:id="@+id/help_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:text="@string/kyc_need_help" android:layout_marginStart="@dimen/dimen_20dp" app:layout_constraintBottom_toBottomOf="@+id/help_iv" app:layout_constraintLeft_toRightOf="@+id/help_iv" app:layout_constraintTop_toTopOf="@+id/help_iv" app:layout_constraintVertical_bias="0.45"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</ScrollView>
