<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@drawable/bottom_sheet_background" android:paddingTop="16dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="#222222" android:id="@+id/tv_bs_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/activity_margin_left" android:layout_marginTop="20dp" android:text="@string/promo_pg_select_credit_card" android:layout_toLeftOf="@+id/img_cancel" android:lineSpacingExtra="8sp" android:fontFamily="sans-serif"/>
    <ImageView android:id="@+id/img_cancel" android:padding="@dimen/activity_margin_left" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_alignParentRight="true" android:layout_alignParentEnd="true" app:srcCompat="@drawable/ic_close_promo_sheet"/>
    <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/tvOfferText" android:background="#1900aced" android:paddingLeft="8dp" android:paddingTop="6dp" android:paddingRight="8dp" android:paddingBottom="6dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/activity_margin_left" android:layout_marginTop="14dp" android:layout_marginRight="@dimen/activity_margin_left" android:layout_below="@+id/tv_bs_title" android:lineSpacingExtra="4sp" android:fontFamily="sans-serif"/>
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/rv_promo_pay_options" android:paddingBottom="115dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/activity_margin_left" android:layout_marginTop="@dimen/dimen_21dp" android:layout_marginRight="@dimen/activity_margin_left" android:layout_below="@+id/tvOfferText"/>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignBottom="@+id/rv_promo_pay_options">
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/llApplyOffer" android:background="@drawable/nativesdk_button_click" android:padding="@dimen/dimen_20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_10dp" android:layout_marginTop="20dp" android:layout_marginRight="@dimen/dimen_10dp">
            <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="#ffffff" android:gravity="center_horizontal" android:id="@+id/tvApplyOffer" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/apply_Offer" android:lineSpacingExtra="-1sp" android:fontFamily="sans-serif"/>
            <com.airbnb.lottie.LottieAnimationView android:id="@+id/ltv_loading" android:visibility="gone" android:layout_width="@dimen/width_lottie_button" android:layout_height="@dimen/height_lottie_button" app:layout_constraintBottom_toBottomOf="@+id/tvPayOtherModeSubText" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toTopOf="@+id/tvPayOtherModeText"/>
        </LinearLayout>
        <View android:id="@+id/bottomSeparator1" android:background="#00b9f5" android:visibility="visible" android:layout_width="match_parent" android:layout_height="10dp" android:layout_marginTop="@dimen/activity_margin_left" app:layout_constraintLeft_toLeftOf="0"/>
        <View android:id="@+id/bottomSeparator2" android:background="#012b72" android:visibility="visible" android:layout_width="match_parent" android:layout_height="10dp"/>
    </LinearLayout>
    <FrameLayout android:id="@+id/disableClickView" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignTop="@+id/tvOfferText" android:layout_alignBottom="@+id/rv_promo_pay_options"/>
</RelativeLayout>
