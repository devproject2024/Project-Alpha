<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/color_fafafa" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar android:id="@+id/toolbar_offers_new" android:background="@color/white" android:layout_width="match_parent" android:layout_height="@dimen/dimen_50dp" android:layout_alignParentTop="true">
        <LinearLayout android:gravity="center_vertical" android:layout_gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="1">
            <ImageView android:id="@+id/toolbar_btn_back" android:background="@drawable/back_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_marginRight="8dp" android:layout_centerVertical="true"/>
            <com.paytm.utility.RoboTextView android:textSize="@dimen/text_size_18sp" android:textStyle="bold" android:textColor="@color/textColor_222222" android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@+id/title" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_weight="1" app:fontType="4"/>
            <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_14sp" android:textColor="@color/color_00B0DE" android:id="@+id/doneButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="5dp" app:fontType="4"/>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
    <View android:id="@+id/toolbar_divider" android:background="@color/color_e8e8e8" android:layout_width="match_parent" android:layout_height="1dp" android:layout_below="@+id/toolbar_offers_new"/>
    <RelativeLayout android:id="@+id/offers_layout" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/toolbar_divider">
        <RelativeLayout android:id="@+id/promocode_lyt" android:background="@color/white" android:paddingLeft="15dp" android:layout_width="match_parent" android:layout_height="60dp">
            <RelativeLayout android:id="@+id/promocode_input_lyt" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerVertical="true">
                <RelativeLayout android:id="@+id/apply_btn_lyt" android:background="@color/paytm_blue" android:paddingLeft="20dp" android:paddingRight="20dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_alignParentRight="true">
                    <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/apply" android:layout_centerHorizontal="true" android:layout_centerVertical="true" app:fontType="2"/>
                </RelativeLayout>
                <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/apply_btn_lyt" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:layout_toStartOf="@+id/apply_btn_lyt">
                    <ImageView android:id="@+id/promo_remove_image" android:padding="10dp" android:visibility="gone" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="5dp" android:layout_alignParentRight="true" android:layout_centerInParent="true" android:layout_centerVertical="true"/>
                    <EditText android:textSize="14sp" android:id="@+id/edit_txt_promocode" android:background="@null" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="5dp" android:hint="@string/have_a_promo_code_enter_here" android:singleLine="true" android:layout_toLeftOf="@+id/promo_remove_image" android:layout_alignParentLeft="true" android:layout_centerVertical="true" app:fontType="2"/>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/promocode_success_lyt" android:background="@color/white" android:paddingRight="15dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="60dp" android:layout_centerInParent="true" android:layout_centerVertical="true">
                <com.paytm.utility.RoboTextView android:textSize="16sp" android:textColor="@color/color_2EAD6F" android:id="@+id/success_promo_code" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_below="@+id/promocode_lyt" android:layout_centerInParent="true" app:fontType="2"/>
                <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="@color/color_2EAD6F" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="15dp" android:text="Applied successfully" android:maxLines="2" android:layout_toLeftOf="@+id/apply_tick_image" android:layout_centerVertical="true" android:layout_toStartOf="@+id/apply_tick_image" app:fontType="2"/>
                <ImageView android:id="@+id/apply_tick_image" android:layout_width="@dimen/dimen_20dp" android:layout_height="@dimen/dimen_25dp" android:layout_alignParentRight="true" android:layout_centerInParent="true"/>
            </RelativeLayout>
        </RelativeLayout>
        <View android:id="@+id/view_divider" android:background="@color/light_grey" android:layout_width="match_parent" android:layout_height="1dp" android:layout_below="@+id/promocode_lyt"/>
        <com.paytm.utility.RoboTextView android:textSize="11sp" android:textColor="@color/color_000000" android:id="@+id/promo_status_message" android:paddingLeft="15dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:layout_marginBottom="5dp" android:maxLines="2" android:layout_below="@+id/view_divider" app:fontType="2"/>
        <com.paytm.utility.RoboTextView android:textSize="13sp" android:textColor="@color/color_909090" android:id="@+id/choose_offer_header" android:paddingLeft="15dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:layout_marginBottom="15dp" android:text="@string/choose_from_the_offer_below" android:layout_below="@+id/promo_status_message" app:fontType="2"/>
        <View android:id="@+id/second_view_divider" android:background="@color/separators" android:layout_width="match_parent" android:layout_height="1dp" android:layout_below="@+id/choose_offer_header"/>
        <RelativeLayout android:id="@+id/offers_list_lyt" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/offer_txt_lyt" android:layout_below="@+id/second_view_divider">
            <androidx.recyclerview.widget.RecyclerView android:id="@+id/offers_list" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="15dp"/>
        </RelativeLayout>
        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/no_offers_layout" android:background="@android:color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_above="@+id/offer_txt_lyt" android:layout_below="@+id/promo_status_message">
            <TextView android:textSize="18sp" android:gravity="center_horizontal" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:text="@string/no_valid_offers"/>
            <ImageView android:id="@+id/banner_image" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dimen_10dp"/>
            <TextView android:textSize="16sp" android:textColor="#868686" android:gravity="center_horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dimen_10dp"/>
        </LinearLayout>
        <RelativeLayout android:orientation="vertical" android:id="@+id/offer_txt_lyt" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
            <View android:background="@color/passbook_separators" android:layout_width="match_parent" android:layout_height="0.5dp"/>
            <com.paytm.utility.RoboTextView android:textSize="11sp" android:textColor="@color/color_909090" android:id="@+id/cash_back_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="15dp" android:text="@string/tp_offers_cash_back_info" app:fontType="2"/>
            <View android:id="@+id/cash_back_offer_divider" android:background="@color/passbook_separators" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_below="@+id/cash_back_text"/>
            <com.paytm.utility.RoboTextView android:textSize="11sp" android:textColor="@color/color_909090" android:id="@+id/wallet_loyality_cash_back_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="15dp" android:layout_below="@+id/cash_back_offer_divider" app:fontType="2"/>
        </RelativeLayout>
    </RelativeLayout>
    <com.airbnb.lottie.LottieAnimationView android:id="@+id/update_progress_bar_offers" android:visibility="gone" android:layout_width="@dimen/dimen_80dp" android:layout_height="@dimen/dimen_25dp" android:layout_centerInParent="true" app:lottie_autoPlay="true" app:lottie_fileName="Payments-Loader.json" app:lottie_loop="true"/>
    <include android:layout_width="match_parent" android:layout_height="match_parent" layout="@layout/pre_tp_no_network_layout"/>
</RelativeLayout>
