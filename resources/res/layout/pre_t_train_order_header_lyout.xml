            <TextView android:textSize="12sp" android:textColor="@color/color_666666" android:gravity="center" android:id="@+id/booking_confirmation_text_desc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_15dp" android:text="@string/booking_confirmed" android:layout_centerHorizontal="true" app:fontType="3"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/lv_action_container" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
