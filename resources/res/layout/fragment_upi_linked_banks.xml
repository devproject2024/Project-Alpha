<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/parentContainer" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView android:id="@+id/scroll_view" android:layout_width="match_parent" android:layout_height="wrap_content" android:fillViewport="true">
        <RelativeLayout android:orientation="vertical" android:id="@+id/title_layout_lnr" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/dimen_18sp" android:textStyle="bold" android:textColor="@color/color_222222" android:id="@+id/tv_heading" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginRight="@dimen/dimen_20dp" android:text="@string/money_transfer_linked_accounts" android:lineSpacingExtra="8sp" android:fontFamily="@string/font_family_roboto_regular"/>
            <RelativeLayout android:id="@+id/link_account_header" android:background="@color/color_f3f7f8" android:paddingLeft="@dimen/dimen_20dp" android:paddingRight="@dimen/dimen_20dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/dimen_36dp">
                <TextView android:textSize="@dimen/dimen_12sp" android:textColor="@color/color_999999" android:gravity="center" android:id="@+id/tv_saved_cards_label" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/money_transfer_linked_accounts" android:layout_alignParentLeft="true" android:textAllCaps="true" android:fontFamily="sans-serif-medium"/>
                <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="@color/bright_sky_blue" android:gravity="center" android:id="@+id/tv_header_add_bank" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/add_new_bank" android:layout_alignParentRight="true" android:textAllCaps="true" android:fontFamily="sans-serif-medium" android:letterSpacing="0.04"/>
            </RelativeLayout>
            <TextView android:textSize="@dimen/dimen_15sp" android:textStyle="normal" android:textColor="@color/color_222222" android:id="@+id/tv_vpa" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="@dimen/dimen_30dp" android:layout_marginRight="@dimen/dimen_20dp" android:layout_below="@+id/link_account_header" android:lineSpacingExtra="7sp" android:fontFamily="@string/font_family_roboto_regular"/>
            <RelativeLayout android:orientation="vertical" android:id="@+id/top_banks_card" android:paddingLeft="20dp" android:paddingRight="20dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_20dp" android:layout_marginBottom="@dimen/dimen_20dp" android:layout_below="@+id/tv_vpa">
                <include layout="@layout/saved_card_favorite_banks"/>
            </RelativeLayout>
            <androidx.recyclerview.widget.RecyclerView android:id="@+id/bank_account_list" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_20dp" android:layout_below="@+id/tv_vpa" android:nestedScrollingEnabled="true"/>
            <TextView android:textSize="@dimen/dimen_15sp" android:textStyle="normal" android:textColor="@color/color_00b9f5" android:id="@+id/tv_add_bank_account" android:padding="@dimen/dimen_10dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="@dimen/dimen_20dp" android:layout_marginRight="@dimen/dimen_20dp" android:text="@string/money_transfer_link_bank_account_with_plus" android:layout_below="@+id/bank_account_list" android:fontFamily="@string/font_family_roboto_regular"/>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>
