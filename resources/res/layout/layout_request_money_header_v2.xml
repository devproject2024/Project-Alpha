        <TextView android:textSize="21sp" android:textStyle="bold" android:textColor="@color/color_222222" android:ellipsize="end" android:id="@+id/tv_receiver_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_5dp" android:maxLines="1" android:layout_alignParentLeft="true" android:fontFamily="sans-serif"/>
