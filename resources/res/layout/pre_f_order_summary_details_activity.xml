<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="#fff0f0f0" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar android:gravity="left" android:id="@+id/toolbar" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:gravity="left" android:id="@+id/toolbar_layout" android:layout_width="match_parent" android:layout_height="wrap_content">
            <RelativeLayout android:gravity="left" android:id="@+id/toolbar_btn_layout" android:layout_width="30dp" android:layout_height="48dp" android:layout_alignParentLeft="true" android:layout_centerVertical="true">
                <ImageView android:id="@+id/back_btn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:scaleType="fitXY" android:layout_centerInParent="true" android:layout_centerVertical="true"/>
            </RelativeLayout>
            <com.paytm.utility.RoboTextView android:textSize="16sp" android:textColor="@color/dark_black" android:id="@+id/activity_header" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/summary" android:singleLine="true" android:layout_toRightOf="@+id/toolbar_btn_layout" android:layout_centerVertical="true" app:fontType="3"/>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    <View android:id="@+id/view1" android:background="@color/light_grey_divider" android:layout_width="match_parent" android:layout_height="1dp" android:layout_below="@+id/toolbar"/>
    <ScrollView android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:id="@+id/onward_details" android:background="@color/white" android:paddingLeft="@dimen/cart_16sp" android:paddingRight="@dimen/cart_16sp" android:paddingBottom="@dimen/dimen_20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/view1">
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/title_container" android:paddingLeft="@dimen/dimen_15dp" android:paddingTop="@dimen/dimen_15dp" android:paddingRight="@dimen/dimen_15dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="#ff000000" android:gravity="center_vertical" android:id="@+id/onward_source_hops" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="BLR" android:singleLine="true" app:fontType="2"/>
                    <ImageView android:layout_gravity="center_vertical" android:id="@+id/img_arrow_hops" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_6dp" android:layout_marginRight="@dimen/dimen_6dp" app:srcCompat="@drawable/pre_f_flight_arrow_right_black"/>
                    <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="#ff000000" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/onward_destination_hops" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="CCU" android:maxLines="1" app:fontType="2"/>
                </LinearLayout>
                <com.paytm.utility.RoboTextView android:textSize="9sp" android:textColor="#ff000000" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/onward_date" android:paddingLeft="@dimen/dimen_15dp" android:paddingRight="@dimen/dimen_15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Wednesday, 26th April 2017" android:maxLines="1" app:fontType="2"/>
                <View android:background="#ffefefef" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="@dimen/dimen_15dp" android:layout_marginTop="@dimen/dimen_7dp" android:layout_marginRight="@dimen/dimen_15dp"/>
                <LinearLayout android:orientation="vertical" android:id="@+id/order_summary_ancillary_details_continer_onward" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/view1"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/return_details" android:background="@color/white" android:paddingLeft="@dimen/cart_16sp" android:paddingRight="@dimen/cart_16sp" android:paddingBottom="@dimen/dimen_20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp">
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:paddingLeft="@dimen/dimen_15dp" android:paddingTop="@dimen/dimen_15dp" android:paddingRight="@dimen/dimen_15dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="#ff000000" android:gravity="center_vertical" android:id="@+id/return_source_hops" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="BLR" android:singleLine="true" app:fontType="2"/>
                    <ImageView android:layout_gravity="center" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_6dp" android:layout_marginRight="@dimen/dimen_6dp" app:srcCompat="@drawable/pre_f_flight_arrow_right_black"/>
                    <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="#ff000000" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/return_destination_hops" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="CCU" android:maxLines="1" app:fontType="2"/>
                </LinearLayout>
                <com.paytm.utility.RoboTextView android:textSize="9sp" android:textColor="#ff000000" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/return_date" android:paddingLeft="@dimen/dimen_15dp" android:paddingRight="@dimen/dimen_15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Wednesday, 26th April 2017" android:maxLines="1" app:fontType="2"/>
                <View android:background="#ffefefef" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="@dimen/dimen_15dp" android:layout_marginTop="@dimen/dimen_7dp" android:layout_marginRight="@dimen/dimen_15dp"/>
                <LinearLayout android:orientation="vertical" android:id="@+id/order_summary_ancillary_details_continer_return" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/view1"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
