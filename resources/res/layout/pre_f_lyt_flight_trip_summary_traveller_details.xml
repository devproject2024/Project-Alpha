            <TextView android:textSize="@dimen/dimen_15sp" android:textStyle="normal" android:textColor="@color/color_323232" android:gravity="end" android:layout_gravity="end" android:id="@+id/traveller_last_name" android:paddingLeft="@dimen/dimen_2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:lineSpacingExtra="2.3sp" android:fontFamily="sans-serif"/>
