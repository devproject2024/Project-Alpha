            <RelativeLayout android:layout_gravity="center_horizontal" android:id="@+id/rl_uni_selected_payment_inst" android:background="@color/white" android:paddingTop="@dimen/dimen_30dp" android:paddingBottom="@dimen/dimen_20dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="@color/color_666666" android:ellipsize="end" android:gravity="center" android:id="@+id/transfered_from" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxWidth="250dp" android:text="@string/money_transfer_from_" android:maxLines="2" android:lineSpacingExtra="3sp" android:fontFamily="@string/font_family_roboto_regular" android:letterSpacing="-0.04"/>
