        <View android:id="@+id/v_uni_et_sep_2" android:background="@color/color_00b9f5" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="1.3dp" android:layout_marginTop="-5dp"/>
        <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="@color/error_separator_view_color" android:id="@+id/comments_error_tv" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_5dp" android:layout_marginBottom="@dimen/dimen_40dp" android:text="@string/uni_p2p_rupees" android:fontFamily="@string/font_family_roboto_regular"/>
