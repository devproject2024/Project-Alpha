<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@drawable/pre_t_train_train_city_selection" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:gravity="center_vertical" android:id="@+id/header_lyt" android:paddingTop="20dp" android:paddingBottom="13dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <com.paytm.utility.RoboTextView android:textSize="12sp" android:textColor="@color/color_999999" android:id="@+id/header_txt" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_15dp" android:text="Recent searches" android:fontFamily="sans-serif" app:fontType="2"/>
        <TextView android:textSize="11sp" android:textColor="#03b8f5" android:gravity="end" android:layout_gravity="right" android:id="@+id/close_icon" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_15dp" android:src="@drawable/pre_t_train_claer_recent" android:text="CLEAR" android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/item_container" android:layout_width="match_parent" android:layout_height="@dimen/train_station_item_height" android:layout_marginLeft="@dimen/dimen_15dp" android:layout_below="@+id/header_lyt">
        <ImageView android:id="@+id/station_type_icon" android:visibility="visible" android:layout_width="@dimen/dimen_20dp" android:layout_height="@dimen/dimen_20dp" android:layout_marginRight="@dimen/dimen_15dp"/>
        <RelativeLayout android:id="@+id/station_details_container" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <RelativeLayout android:id="@+id/station_name_container" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <com.paytm.utility.RoboTextView android:textSize="13sp" android:textStyle="normal" android:textColor="@color/train_city_search_value" android:ellipsize="end" android:id="@+id/station_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Bangalore" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:lineSpacingExtra="5.2sp" android:fontFamily="sans-serif-medium"/>
                <com.paytm.utility.RoboTextView android:textSize="7sp" android:textStyle="normal" android:textColor="#ffffff" android:ellipsize="end" android:gravity="center_horizontal" android:id="@+id/most_popular" android:background="@drawable/pre_t_black_gradient_background" android:paddingLeft="4dp" android:paddingTop="2dp" android:paddingRight="4dp" android:paddingBottom="2dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:text="Most Popular" android:layout_toRightOf="@+id/station_name" android:layout_centerVertical="true" android:lineSpacingExtra="10sp" android:textAllCaps="true" android:fontFamily="sans-serif-medium" android:letterSpacing="0.03"/>
                <ImageView android:id="@+id/arrow" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:src="@drawable/pre_t_forward_arrow" android:layout_toRightOf="@+id/station_name" android:layout_centerVertical="true"/>
                <com.paytm.utility.RoboTextView android:textSize="13sp" android:textStyle="normal" android:textColor="@color/train_city_search_value" android:ellipsize="end" android:id="@+id/station_name_dest" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="Bangalore" android:layout_toRightOf="@+id/arrow" android:layout_centerVertical="true" android:lineSpacingExtra="5.2sp" android:fontFamily="sans-serif-medium"/>
            </RelativeLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="1dp" android:layout_below="@+id/station_name_container">
                <com.paytm.utility.RoboTextView android:textSize="13sp" android:textStyle="normal" android:textColor="@color/color_909090" android:ellipsize="end" android:layout_gravity="center_vertical" android:id="@+id/station_zone_name" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Ajmeri Gate" android:maxLines="1" android:fontFamily="sans-serif"/>
                <ImageView android:layout_gravity="center_vertical" android:id="@+id/city_circle" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:src="@drawable/pre_t_train_circle_train_city"/>
                <com.paytm.utility.RoboTextView android:textSize="13sp" android:textStyle="normal" android:textColor="@color/color_666666" android:ellipsize="end" android:layout_gravity="center_vertical" android:id="@+id/station_distance" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="10 kms from Paharganj" android:maxLines="1" android:fontFamily="sans-serif"/>
                <com.paytm.utility.RoboTextView android:textSize="13sp" android:textColor="@color/color_666666" android:ellipsize="end" android:id="@+id/tv_popular_txt" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/popular"/>
            </LinearLayout>
            <LinearLayout android:gravity="right" android:orientation="horizontal" android:id="@+id/station_type_lyt" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_15dp" android:layout_alignParentRight="true" android:layout_centerVertical="true">
                <com.paytm.utility.RoboTextView android:textSize="12sp" android:textColor="@color/color_909090" android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@+id/station_type" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="City"/>
                <ImageView android:gravity="center_vertical" android:layout_gravity="center_vertical" android:layout_width="8dp" android:layout_height="8dp" android:layout_marginLeft="5dp" android:src="@drawable/card_forward_arrow"/>
            </LinearLayout>
            <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/stationCode" android:background="@drawable/pre_t_grey_no_fill_background" android:padding="6dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_15dp" android:text="NDLS" android:layout_alignParentRight="true" android:textAllCaps="true" android:fontFamily="sans-serif-medium"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/no_station_container" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/item_container">
        <View android:background="@color/movie_seat_separator_bg" android:layout_width="match_parent" android:layout_height="1dp" android:layout_below="@+id/station_details_container"/>
        <TextView android:textSize="12sp" android:textColor="@color/color_9b9b9b" android:id="@+id/tv_no_station_text" android:background="@android:color/transparent" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_15dp" android:layout_marginTop="@dimen/dimen_8dp" android:layout_marginRight="@dimen/dimen_15dp" android:layout_marginBottom="@dimen/dimen_10dp" android:layout_centerVertical="true"/>
    </LinearLayout>
    <View android:id="@+id/seperator" android:background="@color/light_grey" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="16dp" android:layout_below="@+id/item_container"/>
</RelativeLayout>
