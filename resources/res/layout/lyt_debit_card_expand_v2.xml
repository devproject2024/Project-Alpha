<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/rl_card" android:layout_width="match_parent" android:layout_height="match_parent">
    <include android:id="@+id/lyt_instrument_info" layout="@layout/lyt_instrument_info_v2"/>
    <RelativeLayout android:id="@+id/lyt_emi_plan" android:background="@color/grey_pale" android:padding="10dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp">
        <RelativeLayout android:id="@+id/rl_emi_plan" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="@dimen/dimen_10dp">
            <ImageView android:id="@+id/iv_cancel" android:background="@drawable/ic_close_cst_feedback" android:layout_width="15dp" android:layout_height="15dp" android:contentDescription="TODO" android:layout_alignParentEnd="true"/>
            <TextView android:textSize="@dimen/cart_15sp" android:textStyle="bold" android:textColor="@color/color_222222" android:id="@+id/tv_emi_plan_detail" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="EMI of ₹500 for 6 months @ 14% p.a. " android:fontFamily="sans-serif" android:textAlignment="textStart" android:layout_marginEnd="10dp" android:layout_toStartOf="@+id/iv_cancel" android:letterSpacing="0.02"/>
        </RelativeLayout>
        <TextView android:textSize="@dimen/dimen_12sp" android:textColor="@color/color_444444" android:id="@+id/tv_total_emi_value" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_5dp" android:text="Total ₹5,000" android:layout_below="@+id/rl_emi_plan" android:layout_marginStart="@dimen/dimen_10dp"/>
        <TextView android:textSize="13sp" android:textStyle="normal" android:textColor="#00b9f5" android:id="@+id/tv_change_plan" android:padding="@dimen/dimen_2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:text="Change Plan" android:layout_below="@+id/tv_total_emi_value" android:fontFamily="sans-serif" android:layout_marginStart="@dimen/dimen_10dp" android:letterSpacing="0.04"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/rl_cvv_layout" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp">
        <LinearLayout android:gravity="center" android:id="@+id/cvv_container" android:background="@drawable/events_rectangle_gray_stroke" android:paddingTop="@dimen/dimen_12dp" android:paddingBottom="12dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingStart="@dimen/dimen_15dp" android:paddingEnd="@dimen/dimen_15dp" android:layout_marginStart="@dimen/dimen_35dp">
            <EditText android:textSize="15sp" android:textStyle="normal" android:textColor="#222222" android:textColorHint="@color/color_b8c2cb" android:id="@+id/et_cvv" android:background="@null" android:layout_width="wrap_content" android:layout_height="wrap_content" android:hint="@string/enter_cvv" android:inputType="numberPassword" android:textCursorDrawable="@drawable/cursor_edittext" android:fontFamily="sans-serif-medium"/>
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:contentDescription="TODO" android:layout_marginStart="@dimen/dimen_42dp" app:srcCompat="@drawable/ic_cvv_v2"/>
        </LinearLayout>
        <TextView android:textSize="11sp" android:textStyle="bold" android:textColor="@color/color_00b9f5" android:id="@+id/tv_cvv_help" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_14dp" android:layout_marginRight="@dimen/dimen_1dp" android:text="@string/help1" android:layout_alignParentRight="true" android:layout_marginEnd="@dimen/dimen_1dp" android:layout_alignParentEnd="true"/>
        <RelativeLayout android:id="@+id/rl_proceed_to_pay" android:background="@drawable/rectangle_blue_filled_round_corner" android:focusable="true" android:visibility="gone" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_below="@+id/cvv_container">
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:paddingLeft="12.5dp" android:paddingTop="10dp" android:paddingRight="12.5dp" android:paddingBottom="11dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_secure_cta" android:contentDescription="TODO"/>
                <TextView android:textSize="16sp" android:textColor="@color/white" android:id="@+id/tv_pay" android:paddingTop="6.5dp" android:paddingBottom="5.5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5.5dp" android:text="@string/pay_securely" android:singleLine="true" android:fontFamily="sans-serif-medium" android:layout_marginStart="5.5dp"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout android:layout_gravity="center" android:id="@+id/lyt_scp_enabled" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_5dp">
        <TextView android:textSize="@dimen/dimen_12sp" android:textColor="#26d07c" android:gravity="center" android:id="@+id/scp_enabled_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/one_click_payment_enabled_tv" android:layout_centerVertical="true" android:lineSpacingExtra="@dimen/dimen_3dp" android:fontFamily="sans-serif" android:layout_marginStart="@dimen/dimen_35dp"/>
        <androidx.appcompat.widget.AppCompatImageView android:id="@+id/scp_enabled_info_cta" android:padding="@dimen/dimen_5dp" android:layout_width="@dimen/dimen_24dp" android:layout_height="@dimen/dimen_24dp" android:contentDescription="TODO" android:layout_marginStart="@dimen/dimen_8dp" android:layout_toEndOf="@+id/scp_enabled_tv" app:srcCompat="@drawable/ic_visa_one_click_info_icon"/>
    </RelativeLayout>
    <include android:id="@+id/ll_visa_one_click" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:layout_marginStart="@dimen/dimen_35dp" layout="@layout/visa_one_click_layout"/>
    <View android:id="@+id/divider" android:background="@color/color_f4f4f4" android:layout_width="match_parent" android:layout_height="@dimen/dimen_1dp" android:layout_marginTop="@dimen/dimen_15dp" android:layout_marginStart="@dimen/dimen_40dp"/>
</LinearLayout>
