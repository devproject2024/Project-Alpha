<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@drawable/rounded_bottom_sheet" android:paddingTop="20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView android:id="@+id/ivErrorIcon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/activity_margin_left" android:layout_marginTop="16dp" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintTop_toTopOf="0" app:srcCompat="@drawable/native_ic_ill_timeout1"/>
    <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="#222222" android:id="@+id/tvErrorTitle" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="16dp" android:text="@string/bank_transaction_error_title" android:lineSpacingExtra="2sp" android:fontFamily="sans-serif" app:layout_constraintLeft_toRightOf="@+id/ivErrorIcon" app:layout_constraintRight_toLeftOf="@+id/ivClose" app:layout_constraintTop_toTopOf="0"/>
    <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/tvErrorMsg" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="9dp" android:layout_marginRight="16dp" android:text="@string/default_bank_transaction_error" android:lineSpacingExtra="0sp" android:fontFamily="sans-serif" app:layout_constraintLeft_toRightOf="@+id/ivErrorIcon" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toBottomOf="@+id/tvErrorTitle"/>
    <ImageView android:id="@+id/ivClose" android:padding="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:layout_marginRight="4dp" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toTopOf="0" app:srcCompat="@drawable/native_ic_close"/>
    <LinearLayout android:orientation="horizontal" android:id="@+id/llRetryOptions" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/activity_margin_left" android:layout_marginTop="32dp" android:layout_marginRight="@dimen/activity_margin_left" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintTop_toBottomOf="@+id/tvErrorMsg">
        <RelativeLayout android:id="@+id/rlAnotherOffer" android:background="@drawable/bg_button_yes" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginRight="11dp" android:layout_weight="1">
            <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#00aced" android:gravity="center_horizontal" android:id="@+id/tvApplyOtherOffer" android:paddingTop="14dp" android:paddingBottom="14dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Apply Another Offer" android:fontFamily="sans-serif" android:letterSpacing="0.04"/>
            <com.airbnb.lottie.LottieAnimationView android:id="@+id/ltv_loading_another_offer" android:visibility="gone" android:layout_width="@dimen/width_lottie_button" android:layout_height="@dimen/height_lottie_button" android:layout_centerInParent="true"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/rlRetryPayment" android:background="@drawable/nativesdk_button_click" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
            <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#ffffff" android:gravity="center_horizontal" android:id="@+id/paysecurely" android:paddingTop="14dp" android:paddingBottom="14dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Retry Payment" android:fontFamily="sans-serif" android:letterSpacing="0.04"/>
            <com.airbnb.lottie.LottieAnimationView android:id="@+id/ltv_loading" android:visibility="gone" android:layout_width="@dimen/width_lottie_button" android:layout_height="@dimen/height_lottie_button" android:layout_centerInParent="true"/>
        </RelativeLayout>
    </LinearLayout>
    <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#fd5c5c" android:id="@+id/tvPromoError" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/activity_margin_left" android:layout_marginTop="12dp" android:layout_marginRight="@dimen/activity_margin_left" android:text="@string/apply_another_offer_error" android:lineSpacingExtra="2sp" android:fontFamily="sans-serif" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintTop_toBottomOf="@+id/llRetryOptions"/>
    <View android:id="@+id/separator" android:background="@color/color_f3f7f8" android:layout_width="match_parent" android:layout_height="10dp" android:layout_marginTop="32dp" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintTop_toBottomOf="@+id/tvPromoError"/>
    <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/otherPayModes" android:paddingLeft="@dimen/activity_margin_left" android:paddingTop="24dp" android:paddingRight="@dimen/activity_margin_left" android:paddingBottom="44dp" android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintTop_toBottomOf="@+id/separator">
        <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/tvPayOtherModeText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Use Other Payment Modes" android:fontFamily="sans-serif" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintTop_toTopOf="0"/>
        <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#444444" android:id="@+id/tvPayOtherModeSubText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="Applied offer will be removed" android:fontFamily="sans-serif" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintTop_toBottomOf="@+id/tvPayOtherModeText"/>
        <ImageView android:id="@+id/ivRightArrow" android:layout_width="wrap_content" android:layout_height="wrap_content" app:layout_constraintBottom_toBottomOf="@+id/tvPayOtherModeSubText" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toTopOf="@+id/tvPayOtherModeText" app:srcCompat="@drawable/native_ic_collapse"/>
        <com.airbnb.lottie.LottieAnimationView android:id="@+id/ltv_loading1" android:visibility="gone" android:layout_width="@dimen/width_lottie_button" android:layout_height="@dimen/height_lottie_button" app:layout_constraintBottom_toBottomOf="@+id/tvPayOtherModeSubText" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toTopOf="@+id/tvPayOtherModeText"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <FrameLayout android:id="@+id/disableClickView" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="50dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
