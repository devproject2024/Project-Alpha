<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/header" android:layout_width="match_parent" android:layout_height="55dp">
        <ImageButton android:id="@+id/back_button" android:background="?attr/selectableItemBackgroundBorderless" android:paddingLeft="8dp" android:paddingRight="15dp" android:clickable="true" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="@dimen/dimen_12dp" android:src="@drawable/back_arrow" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
        <TextView android:textSize="22sp" android:textStyle="bold" android:textColor="#000000" android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/upcoming_filters" android:layout_toRightOf="@+id/back_button" android:layout_centerVertical="true" android:fontFamily="sans-serif"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/footer" android:layout_width="match_parent" android:layout_height="@dimen/dimen_55dp" android:layout_alignParentBottom="true">
        <View android:id="@+id/divider" android:background="#ebebeb" android:layout_width="match_parent" android:layout_height="1dp"/>
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/divider">
            <FrameLayout android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1">
                <TextView android:textSize="17sp" android:textStyle="normal" android:textColor="@color/color_00b9f5" android:gravity="center" android:id="@+id/btn_clear_all" android:background="?attr/selectableItemBackgroundBorderless" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/clear_all" android:fontFamily="sans-serif-medium"/>
            </FrameLayout>
            <FrameLayout android:id="@+id/root_apply_btn" android:background="@color/separators" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1">
                <TextView android:textSize="17sp" android:textStyle="normal" android:textColor="@color/white" android:gravity="center" android:id="@+id/btn_apply" android:background="?attr/selectableItemBackgroundBorderless" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/apply" android:fontFamily="sans-serif-medium"/>
            </FrameLayout>
        </LinearLayout>
    </RelativeLayout>
    <androidx.core.widget.NestedScrollView android:id="@+id/nestedScrollView" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_above="@+id/footer" android:layout_below="@+id/header" android:overScrollMode="never" app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <include android:id="@+id/premiumLy" layout="@layout/movie_filter_adapter_premium_view"/>
            <include android:id="@+id/movie_formatLy" layout="@layout/view_type_movie_format_item"/>
            <include android:id="@+id/price_sliderLy" layout="@layout/view_type_price_slider_item"/>
            <include android:id="@+id/show_sliderLy" layout="@layout/view_type_showtime_slider_item"/>
            <include android:id="@+id/cinemaChain_Ly" layout="@layout/view_type_cinema_item"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <ProgressBar android:id="@+id/loading" android:visibility="gone" android:layout_width="@dimen/dimen_50dp" android:layout_height="@dimen/dimen_50dp" android:indeterminate="true" android:indeterminateDrawable="@drawable/movie_progress_large_holo" android:layout_centerInParent="true"/>
</RelativeLayout>
