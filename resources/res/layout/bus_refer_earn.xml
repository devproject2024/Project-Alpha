<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/container" android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_18dp" android:layout_marginTop="0dp" android:layout_marginBottom="@dimen/dimen_25dp" android:layout_above="@+id/bottom_layout" android:layout_alignParentTop="true">
            <ImageView android:id="@+id/back_button" android:padding="@dimen/dimen_5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_20dp" android:src="@drawable/back_arrow" android:layout_alignParentLeft="true" android:layout_alignParentTop="true"/>
            <ImageView android:id="@+id/refer_icon" android:layout_width="@dimen/dimen_100dp" android:layout_height="@dimen/dimen_30dp" android:layout_marginTop="@dimen/dimen_35dp" android:scaleType="centerInside" android:layout_below="@+id/back_button" android:layout_alignParentLeft="true"/>
            <ImageView android:id="@+id/motif_icon" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_alignParentRight="true"/>
            <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_20sp" android:textStyle="normal" android:textColor="@color/color_222222" android:id="@+id/invite_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_17dp" android:text="" android:layout_below="@+id/refer_icon" android:layout_alignParentLeft="true" android:lineSpacingExtra="@dimen/dimen_2sp" android:fontFamily="sans-serif-medium" app:fontType="4"/>
            <ImageView android:id="@+id/refer_logo" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="@dimen/dimen_32dp" android:scaleType="centerCrop" android:layout_below="@+id/invite_text" android:layout_alignParentLeft="true"/>
        </RelativeLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/bottom_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_18dp" android:layout_marginRight="@dimen/dimen_30dp" android:layout_alignParentBottom="true">
            <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_15sp" android:textStyle="normal" android:textColor="#506d85" android:id="@+id/referel_desc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:lineSpacingExtra="@dimen/dimen_2sp" app:fontType="2"/>
            <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_13sp" android:textStyle="normal" android:textColor="@color/color_00b9f5" android:id="@+id/terms_condition" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_18dp" android:layout_marginBottom="@dimen/dimen_25dp" android:text="" android:lineSpacingExtra="@dimen/dimen_2sp" android:fontFamily="sans-serif-medium" app:fontType="3"/>
            <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dimen_15dp" android:layout_alignTop="@+id/bottom_layout" android:layout_alignParentBottom="true">
                <ImageView android:id="@+id/whats_icon" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_20dp"/>
                <ImageView android:id="@+id/facebook_icon" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_20dp"/>
                <ImageView android:id="@+id/twitter_icon" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_20dp"/>
                <ImageView android:id="@+id/share_more" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_20dp"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <com.airbnb.lottie.LottieAnimationView android:id="@+id/lottie_progress_bar" android:layout_width="@dimen/dimen_80dp" android:layout_height="@dimen/dimen_25dp" android:layout_centerInParent="true" app:amount="5" app:animationDirectionbundle="-1" app:circleSize="12" app:duration="@android:integer/config_mediumAnimTime" app:lottie_autoPlay="true" app:lottie_fileName="Payments-Loader.json" app:lottie_loop="true"/>
    <RelativeLayout android:id="@+id/error_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="@dimen/dimen_18dp">
        <ImageView android:id="@+id/back_button_retry" android:padding="@dimen/dimen_5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_20dp" android:src="@drawable/back_arrow" android:layout_alignParentLeft="true" android:layout_alignParentTop="true"/>
        <ImageView android:id="@+id/motif_icon_overlay" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_alignParentRight="true"/>
        <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_15sp" android:textStyle="normal" android:textColor="#506d85" android:gravity="center" android:id="@+id/something_went_wrong" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:layout_marginRight="@dimen/dimen_18dp" android:text="@string/something_went_wrong_refer" android:layout_centerInParent="true" android:lineSpacingExtra="@dimen/dimen_2sp" android:fontFamily="sans-serif-medium" app:fontType="3"/>
        <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_15sp" android:textStyle="normal" android:textColor="@color/paytm_blue" android:gravity="center" android:id="@+id/retry_button" android:background="@drawable/button_blue_disabled" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_20dp" android:text="@string/retry" android:layout_below="@+id/something_went_wrong" android:layout_centerInParent="true" android:lineSpacingExtra="@dimen/dimen_2sp" android:fontFamily="sans-serif-medium" app:fontType="3"/>
    </RelativeLayout>
</RelativeLayout>
