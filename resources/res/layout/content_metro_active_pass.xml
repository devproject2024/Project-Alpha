<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@drawable/shape_card_bg_recharge_need_help_bottom_sheet" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:id="@+id/scroll_view" android:layout_width="match_parent" android:layout_height="0dp" android:fillViewport="true" android:layout_weight="1">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <RelativeLayout android:orientation="vertical" android:id="@+id/upper_layout" android:paddingLeft="@dimen/dimen_25dp" android:paddingRight="@dimen/dimen_20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_50dp">
                <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/txt_heading" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/metro_pass_available_balance" android:fontFamily="sans-serif-medium"/>
                <net.one97.paytm.recharge.common.widget.CJRAmountView android:textSize="36sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/txt_available_balance" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_4dp" android:layout_below="@+id/txt_heading" android:lineSpacingExtra="6.5sp" android:fontFamily="sans-serif-light" app:displayRupee="true" app:enableDecimalFormat="true" app:rupeeLetterSpacing="1"/>
                <ImageView android:id="@+id/pass_icon" android:layout_width="@dimen/dimen_48dp" android:layout_height="@dimen/dimen_48dp" android:layout_alignTop="@+id/txt_available_balance" android:layout_alignBottom="@+id/txt_available_balance" android:layout_alignParentRight="true" app:srcCompat="@drawable/ic_metro_cancel_ticket"/>
                <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/txt_validity" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_8dp" android:layout_marginBottom="@dimen/dimen_4dp" android:layout_below="@+id/txt_available_balance" android:lineSpacingExtra="0sp" android:fontFamily="sans-serif"/>
                <LinearLayout android:orientation="horizontal" android:id="@+id/tv_metro_station" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_8dp" android:layout_marginBottom="@dimen/dimen_6dp" android:layout_below="@+id/txt_validity">
                    <TextView android:textSize="@dimen/dimen_15sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/source" android:layout_width="wrap_content" android:layout_height="wrap_content" android:lineSpacingExtra="0sp" android:fontFamily="sans-serif-medium"/>
                    <ImageView android:id="@+id/icon" android:layout_width="@dimen/dimen_15dp" android:layout_height="@dimen/dimen_15dp" android:layout_marginLeft="@dimen/dimen_8dp" android:layout_marginTop="@dimen/dimen_3dp" android:layout_marginRight="@dimen/dimen_8dp" android:layout_centerVertical="true" app:srcCompat="@drawable/ic_metro_tp_journey"/>
                    <TextView android:textSize="@dimen/dimen_15sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/destination" android:layout_width="wrap_content" android:layout_height="wrap_content" android:lineSpacingExtra="0sp" android:fontFamily="sans-serif-medium"/>
                </LinearLayout>
                <View android:id="@+id/divider" android:background="@drawable/rounded_corner_divider_metro_ticket" android:layout_width="@dimen/dimen_30dp" android:layout_height="@dimen/dimen_3dp" android:layout_marginTop="@dimen/dimen_20dp" android:layout_marginBottom="@dimen/dimen_20dp" android:layout_below="@+id/tv_metro_station"/>
                <TextView android:textSize="11sp" android:textStyle="normal" android:textColor="#999999" android:id="@+id/txt_reference_id" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dimen_7dp" android:layout_below="@+id/divider" android:lineSpacingExtra="5sp" android:fontFamily="sans-serif"/>
                <TextView android:textSize="11sp" android:textStyle="normal" android:textColor="#999999" android:id="@+id/txt_trip_id" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/txt_reference_id" android:lineSpacingExtra="5sp" android:fontFamily="sans-serif"/>
            </RelativeLayout>
            <LinearLayout android:layout_gravity="center" android:orientation="vertical" android:id="@+id/generate_divider" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_33dp" android:layout_marginBottom="@dimen/dimen_7dp" android:layout_below="@+id/upper_layout">
                <View android:id="@+id/divider2" android:background="#f3f7f8" android:layout_width="match_parent" android:layout_height="@dimen/dimen_10dp"/>
                <TextView android:textSize="17sp" android:textStyle="normal" android:textColor="#222222" android:paddingLeft="@dimen/dimen_25dp" android:paddingRight="@dimen/dimen_25dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_40dp" android:text="@string/metro_generate_qr_ticket_text" android:lineSpacingExtra="5sp" android:fontFamily="sans-serif-medium"/>
            </LinearLayout>
            <TextView android:textSize="17sp" android:textColor="@android:color/white" android:gravity="center_horizontal" android:id="@+id/txt_generate_ticket" android:background="@drawable/shape_recharge_rounded_corner_3dp_blue" android:paddingLeft="30dp" android:paddingTop="17.5dp" android:paddingRight="30dp" android:paddingBottom="17.5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_25dp" android:layout_marginTop="@dimen/dimen_33dp" android:layout_marginRight="@dimen/dimen_25dp" android:layout_marginBottom="@dimen/dimen_46dp" android:text="@string/metro_generate_tickets" android:fontFamily="@string/font_family_roboto_medium"/>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout android:layout_gravity="bottom" android:id="@+id/cancel_tickets" android:paddingBottom="@dimen/dimen_38dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
        <View android:id="@+id/divider2" android:background="#e0ebee" android:layout_width="match_parent" android:layout_height="1dp"/>
        <ImageView android:id="@+id/cancel_icon" android:paddingTop="9dp" android:paddingBottom="9dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_15dp" android:layout_marginTop="@dimen/dimen_16dp" android:layout_below="@+id/divider2" android:layout_alignParentLeft="true" app:srcCompat="@drawable/ic_metro_cancel_ticket"/>
        <TextView android:textSize="@dimen/dimen_15sp" android:textStyle="normal" android:textColor="#444444" android:id="@+id/txt_cancel_ticket" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_10dp" android:layout_marginTop="@dimen/dimen_26dp" android:layout_toRightOf="@+id/cancel_icon" android:lineSpacingExtra="-2sp" android:fontFamily="sans-serif"/>
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_26dp" android:layout_marginRight="@dimen/dimen_12dp" android:layout_alignParentRight="true" app:srcCompat="@drawable/ic_metro_qr_right_arrow"/>
    </RelativeLayout>
</LinearLayout>
