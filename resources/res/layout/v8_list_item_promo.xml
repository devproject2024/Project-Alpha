<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/offerContainer" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_12dp" android:layout_marginBottom="15dp" android:weightSum="5">
    <LinearLayout android:orientation="vertical" android:id="@+id/promoOfferView" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="3.5">
        <TextView android:textSize="16sp" android:textStyle="normal" android:textColor="@color/color_222222" android:id="@+id/tv_offer_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_22dp" android:layout_marginRight="22dp" android:lineSpacingExtra="4sp" android:fontFamily="sans-serif" app:fontType="4"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/ll_offer_des" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/tv_offer_title">
            <TextView android:textSize="@dimen/dimen_12sp" android:textColor="#222222" android:id="@+id/tv_offer_desc" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_22dp" android:layout_marginTop="@dimen/dimen_7dp" android:layout_marginRight="@dimen/dimen_16dp" android:layout_weight="3.5" android:layout_toLeftOf="@+id/img_tick" android:layout_below="@+id/tv_offer_title" android:layout_alignParentLeft="true" android:fontFamily="sans-serif-light"/>
        </LinearLayout>
        <TextView android:textSize="11sp" android:textColor="#999999" android:id="@+id/txt_term_condition" android:paddingLeft="@dimen/dimen_22dp" android:paddingTop="@dimen/dimen_9dp" android:paddingRight="@dimen/dimen_22dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/ll_offer_des" app:fontType="2"/>
        <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#fd5c5c" android:id="@+id/promo_error" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_22dp" android:layout_marginTop="8dp" android:layout_marginRight="@dimen/dimen_20dp" android:layout_below="@+id/txt_term_condition" android:lineSpacingExtra="3sp" android:fontFamily="sans-serif-medium"/>
    </LinearLayout>
    <RelativeLayout android:layout_gravity="center" android:id="@+id/animation_button" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1.5">
        <net.one97.paytm.recharge.widgets.widget.CJRRechargeLottieAnimationView android:id="@+id/img_tick" android:visibility="visible" android:layout_width="100dp" android:layout_height="64dp" android:layout_centerInParent="true"/>
        <TextView android:textSize="@dimen/dimen_14sp" android:textStyle="normal" android:textColor="#00b9f5" android:id="@+id/txt_copy" android:background="@drawable/v8_shape_promo_action_btn" android:paddingLeft="@dimen/dimen_17dp" android:paddingTop="@dimen/dimen_9dp" android:paddingRight="@dimen/dimen_17dp" android:paddingBottom="@dimen/dimen_9dp" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true" android:fontFamily="sans-serif-medium"/>
        <RelativeLayout android:layout_gravity="center" android:id="@+id/progress" android:background="@drawable/v8_shape_promo_action_btn_disabled" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_alignLeft="@+id/txt_copy" android:layout_alignTop="@+id/txt_copy" android:layout_alignRight="@+id/txt_copy" android:layout_alignBottom="@+id/txt_copy">
            <ProgressBar android:layout_width="23dp" android:layout_height="19dp" android:layout_centerInParent="true"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
