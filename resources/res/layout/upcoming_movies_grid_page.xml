<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:background="@color/white" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="56dp">
            <ImageView android:id="@+id/upcoming_movies_back" android:background="@drawable/ripple_grey_white_bkgrnd" android:padding="14dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:src="@drawable/back_arrow" android:layout_centerVertical="true"/>
            <TextView android:textSize="17sp" android:textStyle="bold" android:textColor="#000000" android:ellipsize="end" android:gravity="center" android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/upcoming_movies" android:maxLines="1" android:layout_toLeftOf="@+id/upcoming_movies_filter" android:layout_toRightOf="@+id/upcoming_movies_back" android:layout_centerInParent="true" android:fontFamily="@string/font_family_roboto_regular"/>
            <LinearLayout android:id="@+id/upcoming_movies_filter" android:background="@drawable/ripple_grey_white_bkgrnd" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_alignParentRight="true" android:layout_centerVertical="true">
                <ImageView android:layout_gravity="center" android:layout_width="28dp" android:layout_height="28dp" app:srcCompat="@drawable/selector_upcoming_filter"/>
                <View android:id="@+id/upcoming_filter_applied" android:background="@drawable/circle_filled" android:visibility="gone" android:layout_width="6dp" android:layout_height="6dp" android:layout_marginTop="10dp" android:backgroundTint="@color/paytm_blue"/>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/upcoming_movies_container" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent">
            <EditText android:textSize="15sp" android:textStyle="normal" android:textColor="#b8c2cb" android:textColorHint="#b8c2cb" android:id="@+id/upcoming_movies_serach" android:background="#f3f7f8" android:paddingLeft="10dp" android:layout_width="match_parent" android:layout_height="55dp" android:layout_marginLeft="18dp" android:layout_marginTop="8dp" android:layout_marginRight="14dp" android:layout_marginBottom="7dp" android:hint="@string/movie_grid_query_hint" android:maxLines="1" android:singleLine="true" android:drawablePadding="10dp" android:imeOptions="actionDone" android:drawableStart="@drawable/selector_search_upcoming_movies" android:fontFamily="@string/font_family_roboto_regular"/>
            <View android:background="@drawable/gradient_upcoming_elevation" android:layout_width="match_parent" android:layout_height="10dp" android:elevation="8dp"/>
            <androidx.core.widget.NestedScrollView android:id="@+id/upcoming_movies_nestedscroll" android:layout_width="match_parent" android:layout_height="match_parent">
                <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
                    <androidx.recyclerview.widget.RecyclerView android:id="@+id/upcoming_movies_grid_recycler" android:layout_width="match_parent" android:layout_height="wrap_content" android:nestedScrollingEnabled="false"/>
                    <LinearLayout android:gravity="top" android:orientation="vertical" android:id="@+id/no_suggestion_lyt" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="@dimen/dimen_20dp">
                        <ImageView android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/movie_error_icon"/>
                        <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="@color/color_000000" android:gravity="center" android:layout_gravity="center" android:id="@+id/error_text_quote" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="13dp" android:text="@string/movies_err_msg" android:lineSpacingExtra="3dp"/>
                        <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="@color/cart_oos_text" android:gravity="center" android:id="@+id/error_text" android:paddingTop="10dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/movie_search_error_msg"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>
        <RelativeLayout android:id="@+id/no_upcoming_movies_lyt" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:layout_centerInParent="true">
                <ImageView android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" app:srcCompat="@drawable/ic_no_upcoming_movies"/>
                <TextView android:textSize="16sp" android:textStyle="normal" android:textColor="#000000" android:gravity="center_horizontal" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:text="@string/no_upcoming_movies" android:maxLines="3" android:fontFamily="sans-serif"/>
                <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="#ffffff" android:gravity="center" android:layout_gravity="center" android:id="@+id/upcoming_change_filters" android:background="@drawable/rounded_corner_3dp_blue" android:layout_width="170dp" android:layout_height="48dp" android:layout_marginTop="30dp" android:text="@string/change_filters" android:fontFamily="sans-serif"/>
                <TextView android:textSize="16sp" android:textStyle="normal" android:textColor="#00b9f5" android:gravity="center_horizontal" android:layout_gravity="center" android:id="@+id/upcoming_clear_filters" android:background="@drawable/ripple_blue" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:text="@string/clear_all" android:fontFamily="sans-serif"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <ProgressBar android:id="@+id/movie_grid_page_progress_bar" android:visibility="gone" android:clickable="true" android:layout_width="@dimen/dimen_50dp" android:layout_height="@dimen/dimen_50dp" android:indeterminateDrawable="@drawable/movie_progress_large_holo" android:layout_centerInParent="true"/>
</RelativeLayout>
