<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent" app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <com.paytm.utility.RoboTextView android:textSize="@dimen/text_size_20sp" android:textColor="@color/color_222222" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:text="@string/on_demand_Wifi" app:fontType="3"/>
        <com.paytm.utility.RoboTextView android:textSize="@dimen/text_size_14sp" android:textColor="@color/color_666666" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="@dimen/dimen_11dp" android:layout_marginRight="@dimen/dimen_30dp" android:text="@string/title_wifi_home" app:fontType="2"/>
        <FrameLayout android:id="@+id/noWifiFrame" android:background="@color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <ImageView android:layout_width="125dp" android:layout_height="125dp" app:srcCompat="@drawable/ic_group_wifi"/>
                <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="#4a4a4a" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="25dp" android:text="No Available Wifi" app:fontType="3"/>
                <net.one97.paytm.common.widgets.RoboButton android:textSize="@dimen/text_size_15sp" android:textColor="@color/white" android:id="@+id/btnTryAgain" android:background="@drawable/bg_btn_blue" android:paddingLeft="48dp" android:paddingTop="14dp" android:paddingRight="48dp" android:paddingBottom="14dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_24dp" android:text="Try Again" android:textAllCaps="false" app:fontType="3"/>
            </LinearLayout>
        </FrameLayout>
        <FrameLayout android:id="@+id/wifiTurnOffFrame" android:background="@color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <ImageView android:layout_width="125dp" android:layout_height="125dp" app:srcCompat="@drawable/ic_group_wifi"/>
                <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="#4a4a4a" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="25dp" android:text="Device Wifi is Off" app:fontType="3"/>
                <net.one97.paytm.common.widgets.RoboButton android:textSize="@dimen/text_size_15sp" android:textColor="@color/white" android:id="@+id/btnTurnOnWifi" android:background="@drawable/bg_btn_blue" android:paddingLeft="48dp" android:paddingTop="14dp" android:paddingRight="48dp" android:paddingBottom="14dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_24dp" android:text="Turn On Wifi" android:textAllCaps="false" app:fontType="3"/>
            </LinearLayout>
        </FrameLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/connectedConnection" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_16dp" android:layout_marginBottom="10dp">
            <com.paytm.utility.RoboTextView android:textSize="@dimen/text_size_12sp" android:textColor="@color/color_444444" android:gravity="center_vertical" android:background="@color/color_fafbfb" android:paddingLeft="@dimen/dimen_22dp" android:paddingTop="@dimen/dimen_11dp" android:paddingBottom="@dimen/dimen_10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/active_wifi_network" app:fontType="3"/>
            <RelativeLayout android:id="@+id/activeConnectionView" android:background="@color/white" android:paddingLeft="@dimen/dimen_20dp" android:paddingTop="@dimen/dimen_20dp" android:paddingRight="@dimen/dimen_20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.paytm.utility.RoboTextView android:textSize="@dimen/text_size_16sp" android:textColor="@color/color_222222" android:id="@+id/name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/on_demand_Wifi" android:includeFontPadding="false" app:fontType="3"/>
                <androidx.appcompat.widget.AppCompatImageView android:layout_width="@dimen/dimen_35dp" android:layout_height="@dimen/dimen_35dp" android:layout_alignParentRight="true" android:layout_centerVertical="true" app:srcCompat="@drawable/ic_black_full_strength_wifi_symbol"/>
                <com.paytm.utility.RoboTextView android:textSize="@dimen/text_size_12sp" android:textColor="@color/color_444444" android:id="@+id/time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_8dp" android:text="Open" android:includeFontPadding="false" android:layout_below="@+id/name" app:fontType="2"/>
                <com.paytm.utility.RoboTextView android:textSize="@dimen/text_size_11sp" android:textColor="@color/color_09ac63" android:id="@+id/tvConnectionStatus" android:background="@drawable/wifi_bg_green_rounded_rect_outline" android:paddingLeft="@dimen/dimen_10dp" android:paddingTop="@dimen/dimen_3dp" android:paddingRight="@dimen/dimen_10dp" android:paddingBottom="@dimen/dimen_3dp" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_8dp" android:text="@string/wifi_connected" android:includeFontPadding="false" android:layout_below="@+id/time" app:fontType="2"/>
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout android:id="@+id/progressBarLayout" android:background="@android:color/white" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <com.airbnb.lottie.LottieAnimationView android:id="@+id/loaderView" android:visibility="visible" android:layout_width="120dp" android:layout_height="25dp" android:adjustViewBounds="true" app:amount="5" app:circleSize="12" app:duration="@android:integer/config_mediumAnimTime" app:endColor="@color/light_blue_A400" app:startColor="@color/light_blue_A700" app:animationDirectionbundle="-1"/>
        </RelativeLayout>
        <RelativeLayout android:gravity="center_vertical" android:orientation="horizontal" android:background="@color/color_fafbfb" android:paddingLeft="@dimen/dimen_22dp" android:paddingRight="@dimen/dimen_15dp" android:layout_width="match_parent" android:layout_height="@dimen/dimen_47dp" android:layout_marginTop="10dp">
            <com.paytm.utility.RoboTextView android:textSize="@dimen/text_size_13sp" android:textColor="@color/color_444444" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/avaliable_wifi" android:layout_centerVertical="true" app:fontType="4"/>
            <net.one97.paytm.common.widgets.RoboButton android:textSize="@dimen/text_size_13sp" android:textColor="@color/color_00b9f5" android:id="@+id/btnRefresh" android:padding="@dimen/dimen_8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/wifi_refresh" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:textAllCaps="false" app:fontType="4" style="?android:attr/borderlessButtonStyle"/>
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/wifiList" android:background="@color/white" android:paddingLeft="@dimen/dimen_22dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <FrameLayout android:id="@+id/refreshFeedback" android:background="@color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <ImageView android:layout_width="75dp" android:layout_height="75dp" app:srcCompat="@drawable/ic_group_wifi"/>
                <com.paytm.utility.RoboTextView android:textSize="10sp" android:textColor="#4a4a4a" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="No other Paytm Partner Wifi available" app:fontType="3"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
