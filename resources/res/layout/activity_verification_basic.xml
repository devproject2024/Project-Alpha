<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/top_toolbar_rl" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/iv_back_button" android:padding="@dimen/dimen_15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_back" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:layout_alignParentStart="true"/>
    </RelativeLayout>
    <ScrollView android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:padding="@dimen/dimen_10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="23sp" android:textStyle="bold" android:textColor="#222222" android:id="@+id/selection_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:lineSpacingExtra="7sp" android:fontFamily="sans-serif"/>
            <RadioGroup android:id="@+id/radio_group_verifier" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp"/>
            <TextView android:textSize="19sp" android:textColor="#ffffff" android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:id="@+id/proceed" android:background="@drawable/rounded_corner_button" android:padding="@dimen/dimen_12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_30dp" android:layout_marginBottom="@dimen/dimen_30dp" android:backgroundTint="@color/paytm_blue" android:letterSpacing="0.03"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
