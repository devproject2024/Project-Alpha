<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/rl_main_row" android:background="@color/white" android:paddingTop="@dimen/dimen_5dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/tableRow" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <RelativeLayout android:id="@+id/p2p_profile_RL" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <RelativeLayout android:id="@+id/layer_contact_list_logo_rl" android:layout_width="50dp" android:layout_height="50dp" android:layout_margin="10dp" android:layout_alignParentLeft="true" android:layout_centerVertical="true">
                <TextView android:textSize="16sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/layer_contact_list_initials" android:background="@color/movie_yellow" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent" android:fontFamily="Roboto-Regular"/>
                <ImageView android:id="@+id/layer_contact_list_img" android:background="@color/gplus_color_2" android:padding="12dp" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/ptop_mobile_icon" android:adjustViewBounds="true" android:layout_centerVertical="true"/>
                <RelativeLayout android:id="@+id/layer_contact_list_backgrnd" android:background="@drawable/bg_rounded_corner_acc_page" android:layout_width="match_parent" android:layout_height="match_parent"/>
            </RelativeLayout>
            <net.one97.paytm.common.widgets.CircularImageView android:id="@+id/p2p_profile_iv" android:background="@drawable/gold_profile_img" android:layout_width="@dimen/dimen_50dp" android:layout_height="@dimen/dimen_50dp" android:layout_margin="@dimen/dimen_10dp" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/p2m_profile_rl" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="10dp">
            <FrameLayout android:gravity="center" android:id="@+id/imageLayout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_centerInParent="true">
                <net.one97.paytm.common.widgets.CJRVolleyImageView android:layout_gravity="center" android:id="@+id/p2m_profile_iv" android:padding="2dp" android:visibility="gone" android:layout_width="40dp" android:layout_height="40dp"/>
                <com.paytm.utility.RoboTextView android:textSize="21sp" android:gravity="center" android:layout_gravity="center" android:id="@+id/p2m_image_name_tv" android:background="@drawable/transparent_gray_circle" android:layout_width="@dimen/dimen_50dp" android:layout_height="@dimen/dimen_50dp" android:fontFamily="@string/font_family_roboto_medium"/>
            </FrameLayout>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/info_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_10dp" android:layout_marginBottom="@dimen/dimen_10dp" android:layout_toRightOf="@+id/tableRow" android:layout_centerVertical="true">
        <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="@color/color_4a4a4a" android:ellipsize="end" android:id="@+id/layer_contact_name" android:paddingLeft="@dimen/dimen_5dp" android:paddingTop="@dimen/dimen_5dp" android:paddingRight="@dimen/dimen_5dp" android:paddingBottom="@dimen/dimen_1dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true" android:lineSpacingExtra="0sp" android:fontFamily="SanFranciscoText-Regular" android:letterSpacing="0.03"/>
        <TextView android:textSize="13sp" android:textStyle="normal" android:textColor="@color/color_9b9b9b" android:id="@+id/layer_contact_number" android:paddingLeft="@dimen/dimen_5dp" android:paddingTop="@dimen/dimen_1dp" android:paddingRight="@dimen/dimen_5dp" android:paddingBottom="@dimen/dimen_5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:lineSpacingExtra="0sp" android:fontFamily="SanFranciscoText-Regular" android:letterSpacing="0.03"/>
        <TextView android:textSize="13sp" android:textStyle="normal" android:textColor="#9b9b9b" android:id="@+id/layer_amount_timestamp" android:paddingLeft="@dimen/dimen_5dp" android:paddingTop="@dimen/dimen_1dp" android:paddingRight="@dimen/dimen_5dp" android:paddingBottom="@dimen/dimen_5dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:lineSpacingExtra="0sp" android:fontFamily="SanFranciscoText-Regular" android:letterSpacing="0.03"/>
    </LinearLayout>
    <View android:layout_gravity="bottom" android:background="@color/color_e2ebee" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="@dimen/dimen_5dp" android:layout_below="@+id/info_layout" android:layout_alignLeft="@+id/info_layout"/>
</RelativeLayout>
