<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/location_layout" android:layout_width="match_parent" android:layout_height="60dp" android:layout_marginLeft="20dp" android:layout_marginRight="20dp">
        <com.google.android.material.textfield.TextInputLayout android:id="@+id/text_input_layout_utility_amount" android:paddingTop="10dp" android:layout_width="match_parent" android:layout_height="60dp" android:hint="@string/Enter_amount" android:layout_toLeftOf="@+id/contact_picker" android:layout_alignParentLeft="true" app:theme="@style/recharge_text_input_layout_theme">
            <net.one97.paytm.recharge.mobile_v3.widget.CJRRechargeEditText android:textSize="16sp" android:textColor="@android:color/black" android:textColorHint="#999999" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/edit_no" android:background="@null" android:paddingTop="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="1" android:includeFontPadding="false" android:inputType="phone" android:imeOptions="actionNone" android:fontFamily="sans-serif-medium" app:isMobile="true"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.paytm.utility.RoboTextView android:textSize="12sp" android:textStyle="normal" android:textColor="@color/paytm_blue" android:ellipsize="end" android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@+id/sample_bill" android:background="@drawable/transparent_border" android:padding="5dp" android:visibility="gone" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="5dp" android:text="@string/view_sample_bill" android:singleLine="true" android:layout_alignParentRight="true" android:layout_alignParentBottom="true" app:fontType="3"/>
        <ImageView android:ellipsize="end" android:id="@+id/info" android:padding="5dp" android:visibility="gone" android:clickable="true" android:layout_width="32dp" android:layout_height="32dp" android:layout_marginTop="@dimen/dimen_23dp" android:layout_alignParentRight="true" app:fontType="3" app:srcCompat="@drawable/ic_lpg_info"/>
        <ImageView android:id="@+id/contact_picker" android:paddingLeft="@dimen/dimen_8dp" android:paddingRight="@dimen/dimen_8dp" android:paddingBottom="10dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dimen_6dp" android:src="@drawable/contact" android:scaleType="fitXY" android:layout_alignParentRight="true" android:layout_alignParentBottom="true" android:contentDescription="@string/app_name"/>
    </RelativeLayout>
    <View android:id="@+id/number_sep_1" android:background="@color/bg_grid_grey" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_below="@+id/location_layout" android:contentDescription="@string/app_name"/>
    <com.paytm.utility.RoboTextView android:textSize="12sp" android:textColor="@color/gray" android:id="@+id/message_input_field" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_below="@+id/number_sep_1" app:fontType="2"/>
</RelativeLayout>
