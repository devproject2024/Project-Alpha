<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/toolbar" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/backArrowImv" android:padding="18dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/back_arrow" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/action_bar_logo" android:layout_centerHorizontal="true" android:layout_centerVertical="true"/>
        <ImageView android:id="@+id/shareImv" android:padding="18dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_share_black" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <androidx.core.widget.NestedScrollView android:id="@+id/scrollView" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginBottom="@dimen/w10_dp" android:fillViewport="true" android:layout_above="@+id/lyt_bottom_tab_bar" android:layout_below="@+id/toolbar">
        <LinearLayout android:orientation="vertical" android:id="@+id/scrollViewContainer" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="match_parent">
            <FrameLayout android:id="@+id/fl_transaction_details" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <FrameLayout android:id="@+id/fl_passbook_navigation_controller" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <FrameLayout android:id="@+id/fl_deals_container" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <include android:id="@+id/dummyview" android:layout_width="match_parent" android:layout_height="wrap_content" layout="@layout/p2b_dummy_bottom_navigation"/>
            <RelativeLayout android:gravity="bottom" android:layout_width="match_parent" android:layout_height="0dp" android:layout_marginLeft="48dp" android:layout_marginTop="33dp" android:layout_marginRight="48dp" android:layout_weight="1">
                <ImageView android:id="@+id/sealOfTrustImv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/p2b_seal_nobel" android:layout_centerVertical="true"/>
                <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#666666" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:text="At Paytm your trust is foremost. Your money is yours until you get what you paid for." android:layout_toRightOf="@+id/sealOfTrustImv" android:layout_centerVertical="true" android:lineSpacingExtra="4sp" android:fontFamily="sans-serif" android:letterSpacing="0.04"/>
            </RelativeLayout>
            <View android:background="#00b9f5" android:visibility="gone" android:layout_width="match_parent" android:layout_height="10dp" android:layout_marginTop="24dp"/>
            <View android:background="#012b72" android:visibility="gone" android:layout_width="match_parent" android:layout_height="10dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <include android:id="@+id/lyt_bottom_tab_bar" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/dimen_10dp" android:layout_alignParentBottom="true" layout="@layout/button_home_layout"/>
</RelativeLayout>
