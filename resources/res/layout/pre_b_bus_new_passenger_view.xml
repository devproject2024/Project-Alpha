<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:background="#f7f7f7" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/lyt_proceed_btn" android:background="@drawable/travel_res_bus_bg_blue_background" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <Button android:textSize="18sp" android:textColor="#ffffff" android:gravity="center" android:id="@+id/proceed_btn" android:background="@drawable/travel_res_bus_bg_blue_background" android:layout_width="match_parent" android:layout_height="52dp" android:text="@string/proceed_to_book_str" android:onClick="onProceedClick" android:textAllCaps="false"/>
    </RelativeLayout>
    <ScrollView android:id="@+id/traveller_container_scroll" android:descendantFocusability="blocksDescendants" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="false" android:layout_above="@+id/lyt_proceed_btn" android:layout_alignParentTop="true">
        <LinearLayout android:orientation="vertical" android:paddingTop="5dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.paytm.utility.RoboTextView android:textSize="15sp" android:textColor="#000000" android:paddingLeft="15dp" android:paddingTop="12dp" android:paddingRight="15dp" android:paddingBottom="8dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/traveller_info_heading" app:fontType="3"/>
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/msgLyt" android:background="#f1f6fc" android:layout_width="match_parent" android:layout_height="38dp" android:layout_marginLeft="@dimen/dimen_15dp" android:layout_marginRight="@dimen/dimen_15dp">
                    <androidx.appcompat.widget.AppCompatImageView android:id="@+id/passenger_id_card" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginStart="@dimen/dimen_5dp"/>
                    <com.paytm.utility.RoboTextView android:textSize="11sp" android:textColor="#222222" android:gravity="center_vertical" android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/name_as_gov_id" android:layout_marginStart="2dp" app:fontType="2"/>
                </LinearLayout>
                <LinearLayout android:orientation="vertical" android:id="@+id/passenger_details_view" android:paddingLeft="15dp" android:paddingRight="15dp" android:paddingBottom="15dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            </LinearLayout>
            <include android:id="@+id/insurance_option_view" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginBottom="5dp" layout="@layout/pre_b_lyt_insurance_options_view"/>
            <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/clBusinessUser" android:background="@color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="46dp" android:layout_marginTop="10dp" android:layout_marginBottom="10dp">
                <CheckBox android:textColor="@color/color_999999" android:id="@+id/cbBusinessUser" android:paddingLeft="@dimen/dimen_15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_15dp" android:button="@drawable/travel_res_bus_check_box" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintTop_toTopOf="0"/>
                <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="@color/color_000000" android:id="@+id/tvIamBusinessUser" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/business_user_text" app:fontType="3" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintLeft_toRightOf="@+id/cbBusinessUser" app:layout_constraintTop_toTopOf="0"/>
                <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="@color/color_999999" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:text="@string/optinal_text" app:fontType="2" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintLeft_toRightOf="@+id/tvIamBusinessUser" app:layout_constraintTop_toTopOf="0"/>
                <ImageButton android:id="@+id/ibArrowBusinessUser" android:background="@drawable/ic_movie_right_black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginEnd="@dimen/dimen_15dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toTopOf="0"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout android:orientation="vertical" android:background="@android:color/white" android:padding="15dp" android:paddingBottom="30dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.paytm.utility.RoboTextView android:textSize="15sp" android:textColor="#000000" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/contact_information" app:fontType="3"/>
                <com.paytm.utility.RoboTextView android:textSize="11sp" android:textColor="#9b9b9b" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:text="@string/bus_ticket_send_message" app:fontType="2"/>
                <com.google.android.material.textfield.TextInputLayout android:theme="@style/recharge_text_input_layout_theme" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:layout_marginTop="10dp" android:hint="@string/Mobile" android:layout_alignParentBottom="true" app:hintAnimationEnabled="false">
                    <androidx.appcompat.widget.AppCompatEditText android:textSize="13sp" android:textColor="@android:color/black" android:textColorHint="#adadad" android:gravity="center_vertical" android:id="@+id/traveller_mobile_edittext" android:background="@null" android:paddingTop="10dp" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:includeFontPadding="false" android:digits="1234567890" android:popupBackground="#b3000000" android:inputType="phone" android:imeOptions="actionDone"/>
                </com.google.android.material.textfield.TextInputLayout>
                <View android:background="@color/color_efefef" android:layout_width="match_parent" android:layout_height="2dp" android:layout_marginLeft="2dp" android:layout_marginTop="11dp"/>
                <com.google.android.material.textfield.TextInputLayout android:theme="@style/recharge_text_input_layout_theme" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:layout_marginTop="10dp" android:hint="@string/Email" android:layout_alignParentBottom="true" app:hintAnimationEnabled="false">
                    <androidx.appcompat.widget.AppCompatEditText android:textSize="13sp" android:textColor="@android:color/black" android:textColorHint="#adadad" android:gravity="center_vertical" android:id="@+id/traveller_email_edittext" android:background="@null" android:paddingTop="10dp" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:includeFontPadding="false" android:popupBackground="#b3000000" android:inputType="textEmailAddress" android:imeOptions="actionDone"/>
                </com.google.android.material.textfield.TextInputLayout>
                <View android:background="@color/color_efefef" android:layout_width="match_parent" android:layout_height="2dp" android:layout_marginLeft="2dp" android:layout_marginTop="11dp"/>
                <LinearLayout android:orientation="horizontal" android:paddingTop="@dimen/dimen_3dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="11sp" android:textStyle="normal" android:textColor="#4a4a4a" android:id="@+id/termscondition_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/terms_and_condtions_travellers_page" android:fontFamily="sans-serif"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:layout_gravity="center_vertical" android:orientation="horizontal" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginBottom="15dp" android:layout_marginStart="15dp">
                <CheckBox android:gravity="center_horizontal" android:id="@+id/terms_conditions_option" android:background="@drawable/travel_res_bus_insurance_check_box" android:padding="0dp" android:paddingTop="@dimen/insurance_margin" android:layout_width="@dimen/checkbox_size" android:layout_height="@dimen/checkbox_size" android:layout_marginTop="@dimen/insurance_text_margin" android:layout_marginRight="@dimen/insurance_margin" android:layout_marginBottom="@dimen/insurance_margin" android:button="@android:color/transparent" android:drawablePadding="0dp"/>
                <com.paytm.utility.RoboTextView android:textSize="10sp" android:textColor="@color/greyish_brown" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:text="@string/i_agree_to_all_the" android:layout_marginStart="2dp" app:fontType="2"/>
                <com.paytm.utility.RoboTextView android:textSize="10sp" android:textColor="@color/bus_paytm_blue" android:id="@+id/busbook_terms_conditions_edittext" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:text="@string/view_terms_and_condtions_str" android:layout_marginStart="2dp" app:fontType="2"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <include android:layout_width="match_parent" android:layout_height="match_parent" layout="@layout/pre_b_lyt_lottie_progress_bar"/>
</RelativeLayout>
