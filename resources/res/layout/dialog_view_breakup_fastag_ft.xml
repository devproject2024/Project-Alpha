<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="25dp" android:layout_marginTop="40dp" android:layout_marginRight="25dp">
        <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="#222222" android:id="@+id/title1_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/car_jeep_van_fastag" android:lineSpacingExtra="-2sp" android:fontFamily="sans-serif"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_below="@+id/title1_tv">
            <TextView android:textSize="21sp" android:textStyle="bold" android:textColor="#222222" android:id="@+id/discounted_amount_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:lineSpacingExtra="0sp" android:fontFamily="sans-serif"/>
            <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/actual_amount_tv" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="7dp" android:fontFamily="sans-serif-light"/>
        </LinearLayout>
        <ImageView android:id="@+id/iv_close" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/pdp_close_icon_ft" android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <View android:background="#f3f7f8" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="25dp" android:layout_marginTop="20dp" android:layout_marginRight="25dp" android:layout_marginBottom="20dp"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="25dp" android:layout_marginRight="25dp">
        <TextView android:textSize="15sp" android:textColor="#000000" android:gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Tag price" android:lineSpacingExtra="0sp"/>
        <TextView android:textSize="15sp" android:textColor="#000000" android:gravity="end" android:id="@+id/tag_price_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="₹ 100.00" android:layout_alignParentRight="true" android:lineSpacingExtra="0sp"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="25dp" android:layout_marginTop="20dp" android:layout_marginRight="25dp">
        <TextView android:textSize="15sp" android:textColor="#000000" android:gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Refundable Security Deposit " android:lineSpacingExtra="0sp"/>
        <TextView android:textSize="15sp" android:textColor="#000000" android:gravity="end" android:id="@+id/refundable_amount_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="₹ 250.00" android:layout_alignParentRight="true" android:lineSpacingExtra="0sp"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="25dp" android:layout_marginTop="20dp" android:layout_marginRight="25dp">
        <TextView android:textSize="15sp" android:textColor="#000000" android:gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Minimum Balance to maintain" android:lineSpacingExtra="0sp"/>
        <TextView android:textSize="15sp" android:textColor="#000000" android:gravity="end" android:id="@+id/min_balance_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="₹ 150.00" android:layout_alignParentRight="true" android:lineSpacingExtra="0sp"/>
    </RelativeLayout>
    <include android:id="@+id/paytm_strip" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="40dp" layout="@layout/bottom_paytm_line_ft"/>
</LinearLayout>
