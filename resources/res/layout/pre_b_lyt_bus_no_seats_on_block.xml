<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_above="@+id/btn_show" android:layout_alignParentBottom="true">
        <androidx.appcompat.widget.AppCompatImageView android:id="@+id/select_seat_close" android:background="@drawable/travel_res_bus_train_close" android:layout_width="40dp" android:layout_height="40dp" android:layout_marginTop="15dp" android:layout_marginBottom="@dimen/dimen_30dp" android:layout_centerHorizontal="true"/>
        <RelativeLayout android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/select_seat_close" android:layout_alignParentLeft="true" android:layout_alignParentStart="true">
            <androidx.appcompat.widget.AppCompatImageView android:id="@+id/bus_img" android:layout_width="wrap_content" android:layout_height="100dp" android:layout_marginLeft="@dimen/dimen_70dp" android:layout_marginTop="@dimen/dimen_40dp" android:layout_marginRight="@dimen/dimen_70dp" android:scaleType="fitCenter" android:layout_centerHorizontal="true" app:srcCompat="@drawable/bus_sold_out_img"/>
            <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_17sp" android:textColor="@color/black" android:id="@+id/txt_aw_snap" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_18dp" android:text="@string/txt_aw_snap" android:layout_below="@+id/bus_img" android:layout_centerHorizontal="true" app:fontType="3"/>
            <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_12sp" android:textColor="@color/color_666666" android:id="@+id/txt_error_descrip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_12dp" android:text="@string/txt_bus_block_description" android:layout_below="@+id/txt_aw_snap" android:layout_centerHorizontal="true" android:textAlignment="center" app:fontType="1"/>
            <Button android:textSize="14sp" android:textColor="@color/white" android:id="@+id/btn_change_bus" android:background="@drawable/travel_res_bus_bg_btn_blue_background" android:layout_width="200dp" android:layout_height="@dimen/dimen_48dp" android:layout_marginTop="@dimen/dimen_22dp" android:layout_marginBottom="@dimen/dimen_30dp" android:text="@string/change_bus" android:layout_below="@+id/txt_error_descrip" android:layout_centerHorizontal="true" android:textAllCaps="false"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
