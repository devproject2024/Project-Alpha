<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content">
    <View android:id="@+id/view_line" android:background="@color/color_efefef" android:layout_width="match_parent" android:layout_height="1dp" android:layout_below="@+id/promo_container"/>
    <RelativeLayout android:id="@+id/checkout_lyt" android:background="@color/white" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/view_line">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_15dp" android:layout_marginTop="@dimen/wallet_7_dp" android:layout_marginRight="@dimen/dimen_15dp" android:layout_marginBottom="@dimen/dimen_7dp">
            <Button android:enabled="true" android:textSize="@dimen/dimen_17sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/proceed_to_book_btn_review" android:background="@drawable/pre_t_train_bg_btn_blue_background" android:paddingLeft="@dimen/dimen_15dp" android:paddingRight="@dimen/dimen_15dp" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxWidth="@dimen/dimen_200dp" android:text="Proceed to pay" android:maxLines="1" android:singleLine="true" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:lineSpacingExtra="2.2sp" android:textAllCaps="false" android:stateListAnimator="@null" app:fontType="4"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/lv_fare_amount_container" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dimen_10dp" android:layout_toLeftOf="@+id/proceed_to_book_btn_review" android:layout_alignParentLeft="true" android:layout_centerVertical="true">
                <TextView android:textSize="@dimen/dimen_24sp" android:textColor="@color/color_323232" android:id="@+id/fare_amount_total" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_12sp" android:textStyle="bold" android:textColor="@color/color_00b9f5" android:id="@+id/view_txt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="View Fare Breakup" android:fontFamily="sans-serif"/>
                    <ImageView android:id="@+id/view_fare_arrow" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_9dp" android:src="@drawable/pre_t_flight_review_see_details" android:layout_toRightOf="@+id/view_txt" android:layout_centerVertical="true"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/fare_change_lyt" android:background="@color/white" android:padding="@dimen/dimen_15dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/view_line">
        <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_12sp" android:textStyle="normal" android:textColor="@color/warm_grey" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_10dp" android:text="@string/train_fare_change_text" android:layout_toLeftOf="@+id/change_proceed_btn" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:fontFamily="sans-serif"/>
        <Button android:enabled="true" android:textSize="@dimen/dimen_14sp" android:textColor="@color/white" android:id="@+id/change_proceed_btn" android:background="@drawable/pre_t_train_bg_btn_blue_background" android:padding="@dimen/dimen_10dp" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/save_proceed" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:lineSpacingExtra="2.2sp" android:textAllCaps="false" android:stateListAnimator="@null" app:fontType="4"/>
    </RelativeLayout>
</RelativeLayout>
