<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/location_layout" android:layout_width="match_parent" android:layout_height="60dp" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginRight="@dimen/dimen_20dp">
        <com.google.android.material.textfield.TextInputLayout android:id="@+id/text_input_layout_utility_amount" android:paddingTop="10dp" android:layout_width="match_parent" android:layout_height="60dp" android:hint="@string/Enter_amount" app:theme="@style/recharge_text_input_layout_theme">
            <EditText android:textSize="16sp" android:textColor="@android:color/black" android:textColorHint="#999999" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/edit_no" android:background="@null" android:paddingTop="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="1" android:includeFontPadding="false" android:dropDownSelector="@drawable/list_selector" android:popupBackground="#b3000000" android:inputType="phone" android:dropDownWidth="match_parent" android:dropDownAnchor="@+id/text_input_layout_utility_amount" android:imeOptions="actionDone" android:dropDownVerticalOffset="60dp" android:fontFamily="sans-serif-medium" app:isMobile="true"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.paytm.utility.RoboTextView android:textSize="12sp" android:textStyle="normal" android:textColor="@color/paytm_blue" android:ellipsize="end" android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@+id/sample_bill" android:background="@drawable/transparent_border" android:padding="5dp" android:visibility="gone" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="5dp" android:text="@string/view_sample_bill" android:singleLine="true" android:layout_alignParentRight="true" android:layout_alignParentBottom="true" app:fontType="3"/>
        <LinearLayout android:gravity="right|center_vertical|center_horizontal|center" android:orientation="vertical" android:id="@+id/multiple_months_amount_lyt" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true">
            <TextView android:textSize="12sp" android:textColor="@color/color_999999" android:id="@+id/months_label" android:paddingTop="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/months" android:includeFontPadding="false" android:fontFamily="@string/font_family_roboto_regular"/>
            <TextView android:textSize="12sp" android:textColor="@color/color_222222" android:gravity="right" android:layout_gravity="right" android:id="@+id/months_value_text" android:paddingTop="12dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:fontFamily="@string/font_family_roboto_regular"/>
        </LinearLayout>
        <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_alignParentBottom="true">
            <TextView android:textSize="12sp" android:textColor="@color/paytm_blue" android:ellipsize="end" android:id="@+id/browse_plan" android:background="@drawable/transparent_border" android:padding="5dp" android:visibility="gone" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/browse_plans_txt" android:singleLine="true" android:layout_above="@+id/for_operator_text" android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <com.paytm.utility.RoboTextView android:textSize="12sp" android:textStyle="normal" android:textColor="@color/paytm_blue" android:ellipsize="end" android:id="@+id/extra_link_textview" android:background="@drawable/transparent_border" android:padding="5dp" android:visibility="gone" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dimen_8dp" android:singleLine="true" android:layout_alignParentRight="true" android:layout_alignParentBottom="true" app:fontType="3"/>
    </RelativeLayout>
    <View android:id="@+id/number_sep_1" android:background="@color/bg_grid_grey" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginRight="@dimen/dimen_20dp" android:layout_below="@+id/location_layout" android:contentDescription="@string/app_name"/>
    <com.paytm.utility.RoboTextView android:textSize="12sp" android:textColor="@color/gray" android:id="@+id/message_input_field" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_below="@+id/number_sep_1" app:fontType="2"/>
</RelativeLayout>
