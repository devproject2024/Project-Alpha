<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/color_ffffff" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp">
    <RelativeLayout android:id="@+id/lyt_select" android:layout_width="match_parent" android:layout_height="75dp" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginRight="@dimen/dimen_20dp">
        <net.one97.paytm.recharge.common.widget.CJRAmountView android:textSize="18sp" android:textStyle="bold" android:textColor="@color/color_222222" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/price_Text" android:background="@drawable/grey_oval" android:paddingLeft="@dimen/dimen_16dp" android:paddingTop="@dimen/dimen_8dp" android:paddingRight="@dimen/dimen_18dp" android:paddingBottom="@dimen/dimen_7dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="@dimen/dimen_75dp" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
        <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:id="@+id/talktime_with_validity_layout" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="32dp" android:layout_toLeftOf="@+id/selectText" android:layout_toRightOf="@+id/price_Text">
            <TextView android:textSize="@dimen/dimen_14sp" android:textStyle="normal" android:textColor="@color/color_222222" android:ellipsize="end" android:id="@+id/full_talktime_title" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="3" android:fontFamily="sans-serif"/>
            <TextView android:textSize="@dimen/dimen_11sp" android:textStyle="normal" android:textColor="@color/color_999999" android:id="@+id/full_talktime_validity" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_8dp" android:fontFamily="sans-serif"/>
        </LinearLayout>
        <com.paytm.utility.RoboTextView android:textSize="12sp" android:textColor="#222222" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/talk_timeValidity_without_title" android:paddingRight="5dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="32dp" android:layout_toLeftOf="@+id/selectText" android:layout_toRightOf="@+id/price_Text" android:layout_centerVertical="true" android:fontFamily="sans-serif" app:fontType="2"/>
        <TextView android:textSize="14sp" android:textColor="@color/selector_text_color_browseplan_v8" android:gravity="center" android:layout_gravity="right" android:id="@+id/selectText" android:background="@drawable/selector_browse_plan_offer_v8" android:layout_width="80dp" android:layout_height="40dp" android:layout_marginLeft="@dimen/dimen_5dp" android:text="@string/select" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View android:id="@+id/divider" android:background="#f3f7f8" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginBottom="13dp"/>
    <LinearLayout android:orientation="horizontal" android:id="@+id/type_2_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/dimen_57dp" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginRight="@dimen/dimen_20dp" android:weightSum="3">
        <LinearLayout android:orientation="vertical" android:id="@+id/data_layout" android:visibility="gone" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
            <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <ImageView android:layout_gravity="top" android:id="@+id/dataImage" android:layout_width="20dp" android:layout_height="20dp" app:srcCompat="@drawable/icon_data"/>
                <TextView android:textSize="12sp" android:textColor="#8f969c" android:gravity="center_vertical" android:id="@+id/dataText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="@string/browse_plan_data"/>
            </LinearLayout>
            <TextView android:textSize="12sp" android:textColor="@color/color_222222" android:id="@+id/dataValidityText" android:paddingRight="5dp" android:layout_width="wrap_content" android:layout_height="30dp"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/talktime_layout" android:visibility="gone" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1.2">
            <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <ImageView android:layout_gravity="left" android:id="@+id/talktimeImage" android:layout_width="20dp" android:layout_height="20dp" app:srcCompat="@drawable/icon_talktime"/>
                <TextView android:textSize="12sp" android:textColor="#8f969c" android:gravity="center_vertical" android:id="@+id/talktimeText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="@string/browse_plan_talktime"/>
            </LinearLayout>
            <TextView android:textSize="12sp" android:textColor="@color/color_222222" android:id="@+id/full_talk_time_value2" android:paddingLeft="@dimen/dimen_4dp" android:paddingRight="5dp" android:layout_width="wrap_content" android:layout_height="30dp"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/sms_layout" android:visibility="gone" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.8">
            <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <ImageView android:layout_gravity="center" android:id="@+id/smsImage" android:layout_width="20dp" android:layout_height="20dp" app:srcCompat="@drawable/icon_sms"/>
                <TextView android:textSize="12sp" android:textColor="#8f969c" android:gravity="center_vertical" android:id="@+id/smsText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="@string/SMS_txt"/>
            </LinearLayout>
            <TextView android:textSize="12sp" android:textColor="@color/color_222222" android:id="@+id/smsValidityText" android:paddingRight="5dp" android:layout_width="wrap_content" android:layout_height="30dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/layout_only_description" android:paddingBottom="@dimen/dimen_11dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal" android:paddingBottom="2sp" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="2">
            <com.paytm.utility.RoboTextView android:textSize="12sp" android:textStyle="normal" android:textColor="#222222" android:ellipsize="end" android:id="@+id/description" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:maxLines="2" android:layout_weight="1.7" android:lineSpacingExtra="4sp" android:fontFamily="sans-serif" app:fontType="2"/>
            <ImageView android:layout_gravity="center" android:id="@+id/forward_arrow_img" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/arrow_icon_right" android:layout_weight="0.3"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
