            <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#1d252d" android:id="@+id/tvDesc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="@string/add_money_risk_desc" android:lineSpacingExtra="6sp" android:fontFamily="sans-serif" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/tvTitle"/>
            <RelativeLayout android:id="@+id/rlAmtCard" android:background="#f5f8fa" android:padding="@dimen/dimen_16dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_24dp" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/tvDesc">
                <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#1d252d" android:id="@+id/tvBaseAmtText" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/add_money_to_wallet" android:layout_toLeftOf="@+id/tvBaseAmt" android:lineSpacingExtra="6sp" android:fontFamily="sans-serif"/>
                <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#1d252d" android:gravity="end" android:id="@+id/tvBaseAmt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:lineSpacingExtra="6sp" android:fontFamily="sans-serif"/>
                <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#1d252d" android:id="@+id/tvChargesText" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_8dp" android:layout_toLeftOf="@+id/tvChargesAmt" android:layout_below="@+id/tvBaseAmtText" android:lineSpacingExtra="6sp" android:fontFamily="sans-serif"/>
                <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#1d252d" android:gravity="end" android:id="@+id/tvChargesAmt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_8dp" android:layout_below="@+id/tvBaseAmt" android:layout_alignParentRight="true" android:lineSpacingExtra="6sp" android:fontFamily="sans-serif"/>
