<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:paddingTop="20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:paddingLeft="@dimen/dimen_movie_left_space" android:paddingBottom="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="15dp">
        <com.paytm.utility.RoboTextView android:textSize="21sp" android:textStyle="bold" android:textColor="@color/black" android:id="@+id/event_summary_event_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="10dp" app:fontType="4"/>
        <com.paytm.utility.RoboTextView android:textSize="15sp" android:textColor="@color/black" android:id="@+id/event_summary_event_ticket_summary" android:paddingLeft="@dimen/dimen_1dp" android:layout_width="wrap_content" android:layout_height="wrap_content" app:fontType="2"/>
        <com.paytm.utility.RoboTextView android:textSize="15sp" android:textColor="@color/black" android:id="@+id/event_orderId" android:paddingLeft="@dimen/dimen_1dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" app:fontType="2"/>
        <com.paytm.utility.RoboTextView android:textSize="15sp" android:textColor="@color/black" android:id="@+id/redemption_code" android:paddingLeft="@dimen/dimen_1dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" app:fontType="2"/>
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/event_summary_show_time_layout" android:paddingLeft="@dimen/dimen_movie_left_space" android:paddingBottom="18dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <View android:id="@+id/id_screen_sep" android:background="@color/color_e8f1f4" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="77dp" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintTop_toTopOf="0"/>
        <androidx.appcompat.widget.AppCompatImageView android:id="@+id/id_calendar_img" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="11dp" android:layout_marginTop="20dp" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintTop_toTopOf="@+id/id_screen_sep" app:srcCompat="@drawable/movie_calender"/>
        <com.paytm.utility.RoboTextView android:textSize="10sp" android:textColor="@color/warm_grey" android:id="@+id/id_show_time_txt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="82dp" android:text="@string/event_time" android:textAllCaps="true" app:fontType="3" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintTop_toTopOf="@+id/id_calendar_img"/>
        <com.paytm.utility.RoboTextView android:textSize="15sp" android:textColor="@color/black" android:id="@+id/id_event_summary_date_time" android:layout_width="wrap_content" android:layout_height="wrap_content" app:fontType="2" app:layout_constraintLeft_toLeftOf="@+id/id_show_time_txt" app:layout_constraintTop_toBottomOf="@+id/id_show_time_txt"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/event_summary_cinema_location_layout" android:paddingLeft="@dimen/dimen_movie_left_space" android:paddingBottom="20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <View android:id="@+id/id_screen_sep" android:background="@color/color_e8f1f4" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="77dp" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintTop_toTopOf="0"/>
        <androidx.appcompat.widget.AppCompatImageView android:id="@+id/id_location_img" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="11dp" android:layout_marginTop="20dp" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintTop_toBottomOf="@+id/id_screen_sep" app:srcCompat="@drawable/ic_movie_summary_location"/>
        <com.paytm.utility.RoboTextView android:textSize="15sp" android:textColor="@color/black" android:id="@+id/id_event_summary_address_name" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="82dp" android:layout_marginRight="@dimen/dimen_movie_right_space" app:fontType="2" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toTopOf="@+id/id_location_img"/>
        <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="@color/warm_grey" android:id="@+id/id_event_summary_address" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_movie_right_space" app:fontType="2" app:layout_constraintLeft_toLeftOf="@+id/id_event_summary_address_name" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toBottomOf="@+id/id_event_summary_address_name"/>
        <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="@color/paytm_blue" android:id="@+id/id_event_summary_event_direction" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="@string/button_get_directions" app:fontType="3" app:layout_constraintLeft_toLeftOf="@+id/id_event_summary_address_name" app:layout_constraintTop_toBottomOf="@+id/id_event_summary_address"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View android:background="@color/color_e8f1f4" android:layout_width="match_parent" android:layout_height="1dp"/>
    <LinearLayout android:id="@+id/event_cashback_summary_lyt" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="20dp"/>
</LinearLayout>
