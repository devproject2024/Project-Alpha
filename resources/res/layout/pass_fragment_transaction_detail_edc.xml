<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/parent_layout" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:background="#f3f7f8" android:paddingLeft="21dp" android:paddingTop="28dp" android:paddingBottom="28dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:id="@+id/back_arrow_imv" android:paddingRight="20dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/pass_back_arrow" android:layout_alignParentLeft="true"/>
            <ImageView android:id="@+id/share_imv" android:paddingLeft="20dp" android:paddingRight="21dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/pass_sahre_filled" android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <TextView android:textSize="21sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/status_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="35dp" android:text="@string/money_paid" android:fontFamily="sans-serif-medium"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/amount_ll" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_below="@+id/status_tv">
            <TextView android:textSize="36sp" android:textStyle="normal" android:textColor="#222222" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/rupee_symbol" android:fontFamily="sans-serif-light"/>
            <TextView android:textSize="36sp" android:textStyle="bold" android:textColor="#222222" android:id="@+id/amount_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="2,500" android:fontFamily="sans-serif"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_below="@+id/amount_ll">
            <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#666666" android:id="@+id/date_time_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="12:30 pm, 20 Mar 2018" android:fontFamily="sans-serif"/>
            <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#666666" android:id="@+id/deviderClosingBalance" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_2dp" android:text="|" android:fontFamily="sans-serif" android:letterSpacing="0.09"/>
            <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#666666" android:id="@+id/tvClosingBalance" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_6dp" android:text="Closing Balance: â‚¹6,150" android:fontFamily="sans-serif" android:letterSpacing="0.09"/>
        </LinearLayout>
        <ImageView android:id="@+id/status_icon" android:paddingRight="21dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/pass_ic_tick" android:layout_alignBottom="@+id/amount_ll" android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <net.one97.paytm.passbook.utility.InteractiveScrollView android:id="@+id/scroll_view" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                <RelativeLayout android:paddingLeft="20dp" android:paddingTop="30dp" android:paddingRight="20dp" android:paddingBottom="30dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <net.one97.paytm.passbook.customview.CircularImageView android:id="@+id/imv1" android:background="@drawable/pass_circle" android:layout_width="48dp" android:layout_height="48dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:layout_toLeftOf="@+id/imv1">
                        <TextView android:textSize="11sp" android:textStyle="normal" android:textColor="#999999" android:id="@+id/title1_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/to" android:textAllCaps="true" android:fontFamily="sans-serif-medium" android:letterSpacing="0.09"/>
                        <TextView android:textSize="17sp" android:textStyle="bold" android:textColor="#222222" android:ellipsize="end" android:id="@+id/txt1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="9dp" android:text="Anish J Abraham" android:fontFamily="sans-serif"/>
                        <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="#222222" android:ellipsize="end" android:id="@+id/txt2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="Paytm Wallet linked to " android:lineSpacingExtra="25sp" android:fontFamily="sans-serif-light"/>
                    </LinearLayout>
                </RelativeLayout>
                <View android:id="@+id/seprator_view" android:background="#f3f7f8" android:visibility="gone" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="20dp" android:layout_marginRight="20dp"/>
                <RelativeLayout android:paddingLeft="20dp" android:paddingTop="30dp" android:paddingRight="20dp" android:paddingBottom="30dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <ImageView android:id="@+id/imv2" android:background="@drawable/pass_circle" android:padding="10dp" android:layout_width="48dp" android:layout_height="48dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:layout_toLeftOf="@+id/imv2">
                        <TextView android:textSize="11sp" android:textStyle="normal" android:textColor="#999999" android:id="@+id/title2_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/from_your" android:textAllCaps="true" android:fontFamily="sans-serif-medium" android:letterSpacing="0.09"/>
                        <TextView android:textSize="17sp" android:textStyle="bold" android:textColor="#222222" android:ellipsize="end" android:id="@+id/txt3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="9dp" android:text="Paytm Wallet" android:fontFamily="sans-serif"/>
                        <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="#222222" android:ellipsize="end" android:id="@+id/txt4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="98110 98110" android:lineSpacingExtra="25sp" android:fontFamily="sans-serif-light"/>
                        <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#222222" android:ellipsize="end" android:id="@+id/txt8" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="Transaction ID: 8023 2123 3312 " android:lineSpacingExtra="25sp" android:fontFamily="sans-serif-light"/>
                    </LinearLayout>
                </RelativeLayout>
                <View android:background="#f3f7f8" android:layout_width="30dp" android:layout_height="2dp" android:layout_marginLeft="20dp"/>
                <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#444444" android:id="@+id/reference_no_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="28dp" android:fontFamily="sans-serif"/>
                <LinearLayout android:orientation="vertical" android:id="@+id/bottom_btn_ll" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="50dp">
                    <View android:background="#f3f7f8" android:layout_width="match_parent" android:layout_height="10dp"/>
                    <RelativeLayout android:id="@+id/download_receipt_rl" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <ImageView android:id="@+id/icon2" android:padding="20dp" android:layout_width="60dp" android:layout_height="wrap_content" android:src="@drawable/pass_ic_edc_download" android:layout_centerVertical="true"/>
                        <TextView android:textSize="18dp" android:textStyle="normal" android:textColor="#444444" android:id="@+id/download_receipt_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/download_receipt" android:layout_toRightOf="@+id/icon2" android:layout_centerVertical="true" android:lineSpacingExtra="-2sp" android:fontFamily="sans-serif"/>
                        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="20dp" android:src="@drawable/pass_arrow_forward_postcard" android:tint="#999999" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                        <View android:background="#f3f7f8" android:layout_width="wrap_content" android:layout_height="2dp" android:layout_below="@+id/icon2" android:layout_alignStart="@+id/download_receipt_tv"/>
                    </RelativeLayout>
                    <RelativeLayout android:id="@+id/need_help_rl" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <ImageView android:id="@+id/icon1" android:padding="20dp" android:layout_width="60dp" android:layout_height="wrap_content" android:src="@drawable/pass_help_24_7" android:layout_centerVertical="true"/>
                        <TextView android:textSize="18dp" android:textStyle="normal" android:textColor="#444444" android:id="@+id/need_help_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/need_help_text_re" android:layout_toRightOf="@+id/icon1" android:layout_centerVertical="true" android:lineSpacingExtra="-2sp" android:fontFamily="sans-serif"/>
                        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="20dp" android:src="@drawable/pass_arrow_forward_postcard" android:tint="#999999" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                    </RelativeLayout>
                </LinearLayout>
                <View android:layout_width="1dp" android:layout_height="1dp"/>
            </LinearLayout>
        </net.one97.paytm.passbook.utility.InteractiveScrollView>
        <RelativeLayout android:id="@+id/loader_contianer" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
            <com.airbnb.lottie.LottieAnimationView android:id="@+id/loader" android:layout_width="wrap_content" android:layout_height="30dp" android:layout_centerInParent="true"/>
        </RelativeLayout>
    </FrameLayout>
</LinearLayout>
