<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:background="#99000000" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:background="@drawable/curve_pop_lyt" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="@color/new_black" android:id="@+id/tv_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="@dimen/dimen_30dp" android:layout_marginRight="@dimen/dimen_20dp" android:text="@string/upi_select_bank_for_pin" android:lineSpacingExtra="8sp" android:fontFamily="sans-serif"/>
            <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="@color/new_black" android:id="@+id/tv_subtitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="@dimen/dimen_8dp" android:layout_marginRight="@dimen/dimen_20dp" android:text="@string/upi_setup_pin_desc" android:layout_below="@+id/tv_title" android:lineSpacingExtra="8sp" android:fontFamily="sans-serif"/>
            <ImageView android:id="@+id/iv_close" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/dimen_16dp" android:layout_alignParentRight="true" app:srcCompat="@drawable/ic_blue_close"/>
            <androidx.recyclerview.widget.RecyclerView android:id="@+id/rv_bank_account_list" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_16dp" android:layout_below="@+id/tv_subtitle"/>
            <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#506d85" android:id="@+id/tv_imp_note" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="@dimen/dimen_10dp" android:layout_marginRight="@dimen/dimen_80dp" android:layout_marginBottom="@dimen/dimen_18dp" android:text="@string/upi_keep_card_handy" android:layout_below="@+id/rv_bank_account_list" android:lineSpacingExtra="6sp" android:fontFamily="@string/font_family_roboto_medium"/>
            <CheckBox android:textSize="@dimen/dimen_14sp" android:textColor="@color/new_black" android:ellipsize="marquee" android:id="@+id/checkbox" android:paddingLeft="@dimen/dimen_15dp" android:fadingEdge="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_22dp" android:layout_marginRight="@dimen/dimen_26dp" android:layout_marginBottom="@dimen/dimen_20dp" android:checked="false" android:button="@drawable/upi_new_checkbox_selector" android:text="@string/upi_do_not_show_this_again" android:scrollHorizontally="true" android:layout_below="@+id/tv_imp_note" android:marqueeRepeatLimit="marquee_forever" android:fontFamily="@string/font_family_roboto_regular"/>
            <TextView android:textSize="@dimen/dimen_18sp" android:textStyle="bold" android:textColor="@color/white" android:gravity="center" android:id="@+id/tv_set_pin" android:background="@drawable/upi_bg_rect_light_blue" android:layout_width="match_parent" android:layout_height="52dp" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginRight="@dimen/dimen_20dp" android:layout_marginBottom="@dimen/dimen_26dp" android:text="@string/upi_proceed_set_mpin" android:layout_below="@+id/checkbox" android:fontFamily="@string/font_family_roboto_regular"/>
            <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#00aced" android:gravity="center_horizontal" android:id="@+id/tv_do_later" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_15dp" android:layout_marginRight="@dimen/dimen_15dp" android:text="@string/upi_do_it_later_from_mt" android:layout_below="@+id/tv_set_pin" android:layout_centerHorizontal="true" android:fontFamily="sans-serif" android:letterSpacing="0.04"/>
            <ImageView android:id="@+id/iv_set_pin_banner" android:layout_width="match_parent" android:layout_height="wrap_content" android:scaleType="fitXY" android:layout_below="@+id/tv_do_later" app:srcCompat="@drawable/ic_set_pin"/>
            <View android:id="@+id/view_1" android:background="#00b9f5" android:layout_width="match_parent" android:layout_height="8dp" android:layout_below="@+id/iv_set_pin_banner"/>
            <View android:id="@+id/view" android:background="#012b72" android:layout_width="match_parent" android:layout_height="8dp" android:layout_below="@+id/view_1"/>
        </RelativeLayout>
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>
