<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="#99000000" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:orientation="vertical" android:id="@+id/lyt_otp" android:background="@drawable/bottom_sheet_curve_add_beneficiary" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:orientation="horizontal" android:id="@+id/title" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:id="@+id/iv_cancel" android:layout_width="24dp" android:layout_height="24dp" android:layout_marginTop="16dp" android:layout_marginRight="16dp" android:layout_alignParentRight="true" android:contentDescription="TODO" android:layout_marginEnd="16dp" android:layout_alignParentEnd="true" app:srcCompat="@drawable/wallet_add_beneficiary_ic_close"/>
            <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="@color/black" android:id="@+id/tv_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="30dp" android:layout_marginRight="50dp" android:text="Confirm OTP to add account as a beneficiary" android:layout_toLeftOf="@+id/iv_cancel" android:layout_alignParentLeft="true" android:fontFamily="sans-serif" android:layout_marginStart="16dp" android:layout_marginEnd="50dp" android:layout_toStartOf="@+id/iv_cancel" android:layout_alignParentStart="true"/>
        </RelativeLayout>
        <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#8ba6c1" android:id="@+id/tv_label_mobile_number" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="32dp" android:text="6 Digit OTP has been sent to XX 9876" android:layout_below="@+id/title" android:lineSpacingExtra="0sp" android:fontFamily="sans-serif" android:layout_marginStart="16dp"/>
        <TextView android:textColor="@color/red" android:id="@+id/tv_otp_error" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="10dp" android:text="Please enter a valid OTP" android:layout_below="@+id/tv_label_mobile_number" android:layout_marginStart="16dp"/>
        <RelativeLayout android:gravity="center" android:id="@+id/lyt_txt_pin_entry" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/tv_otp_error">
            <net.one97.paytm.wallet.newdesign.addbeneficiary.PinEntryEditText android:textSize="20sp" android:textColor="@color/black" android:id="@+id/txt_pin_entry" android:tag="binding_1" android:paddingTop="@dimen/dimen_10dp" android:paddingBottom="@dimen/dimen_10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="14dp" android:layout_marginRight="16dp" android:maxLength="6" android:inputType="number" android:imeOptions="actionDone" app:lineColor="@color/paytm_blue" app:paytmsdkCircleRadius="25"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/lyt_tv_resend_otp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="19dp" android:layout_below="@+id/lyt_txt_pin_entry">
            <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#00ade6" android:id="@+id/tv_resend_otp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:text="Resend OTP" android:layout_alignParentLeft="true" android:lineSpacingExtra="0sp" android:fontFamily="sans-serif-medium" android:layout_marginStart="16dp" android:layout_alignParentStart="true"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/rl_lyt" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/lyt_tv_resend_otp">
            <Button android:textSize="16sp" android:textStyle="bold" android:textColor="#ffffff" android:gravity="center" android:id="@+id/btn_confirm_otp" android:background="@drawable/add_bene_rounded_blue_button" android:layout_width="match_parent" android:layout_height="52dp" android:layout_marginLeft="15dp" android:layout_marginTop="30dp" android:layout_marginRight="15dp" android:layout_marginBottom="30dp" android:text="Proceed" android:textAllCaps="false" android:fontFamily="sans-serif" android:stateListAnimator="@null" android:letterSpacing="0.03"/>
            <com.airbnb.lottie.LottieAnimationView android:id="@+id/lav_lottie_loader" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="30dp" android:layout_centerInParent="true" app:amount="5" app:animationDirectionbundle="-1" app:circleSize="15" app:duration="@android:integer/config_mediumAnimTime" app:endColor="@color/light_blue_A400" app:startColor="@color/light_blue_A700"/>
        </RelativeLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/rl_lyt">
            <View android:background="#00aced" android:layout_width="match_parent" android:layout_height="10dp"/>
            <View android:background="#002f6c" android:layout_width="match_parent" android:layout_height="10dp"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
