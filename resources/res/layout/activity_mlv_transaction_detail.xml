<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/rootLayout" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:background="#f5f8fa" android:paddingLeft="21dp" android:paddingTop="28dp" android:paddingBottom="28dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:id="@+id/toolbar" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:id="@+id/back_arrow_imv" android:paddingRight="20dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/pass_back_arrow" android:layout_alignParentLeft="true"/>
            <ImageView android:id="@+id/shareImv" android:paddingLeft="20dp" android:paddingRight="21dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/pass_sahre_filled" android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="#222222" android:id="@+id/status_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="35dp" android:fontFamily="sans-serif"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/amount_ll" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="7dp" android:layout_below="@+id/status_tv">
            <TextView android:textSize="@dimen/wallet_36sp" android:textStyle="bold" android:textColor="@color/color_1d252d" android:id="@+id/amount_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:fontFamily="sans-serif"/>
        </LinearLayout>
        <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#ffffff" android:id="@+id/tagTv" android:background="#79222222" android:paddingLeft="10dp" android:paddingTop="4dp" android:paddingRight="10dp" android:paddingBottom="4dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="Business" android:layout_below="@+id/amount_ll" android:fontFamily="sans-serif-medium"/>
        <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="@color/color_506d85" android:id="@+id/date_time_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="19dp" android:layout_below="@+id/tagTv" android:fontFamily="sans-serif"/>
    </RelativeLayout>
    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <net.one97.paytm.passbook.utility.InteractiveScrollView android:id="@+id/scroll_view" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                <RelativeLayout android:id="@+id/reciever_one_layout" android:paddingLeft="20dp" android:paddingTop="30dp" android:paddingRight="20dp" android:paddingBottom="30dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <net.one97.paytm.passbook.customview.CircularImageView android:id="@+id/imv1" android:background="@drawable/pass_circle_border" android:padding="@dimen/dimen_5dp" android:layout_width="48dp" android:layout_height="48dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                    <ImageView android:id="@+id/imv1_cash" android:background="@drawable/pass_circle_border" android:padding="@dimen/dimen_8dp" android:visibility="gone" android:layout_width="48dp" android:layout_height="48dp" android:layout_alignParentRight="true" android:layout_centerVertical="true" app:srcCompat="@drawable/pass_ic_loyalty"/>
                    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:layout_toLeftOf="@+id/imv1">
                        <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="@color/color_506d85" android:id="@+id/title1_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textAllCaps="true" android:fontFamily="sans-serif-medium" android:letterSpacing="0.04"/>
                        <TextView android:textSize="16sp" android:textStyle="normal" android:textColor="@color/color_1d252d" android:ellipsize="end" android:id="@+id/txt1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:fontFamily="sans-serif"/>
                        <TextView android:textSize="14sp" android:textColor="@color/color_1d252d" android:id="@+id/txt2" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:fontFamily="sans-serif"/>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout android:orientation="vertical" android:id="@+id/recievertwo_layout" android:paddingLeft="20dp" android:paddingTop="6dp" android:paddingRight="20dp" android:paddingBottom="30dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/imv2">
                    <ImageView android:id="@+id/imv2_cash" android:background="@drawable/pass_circle_border" android:padding="@dimen/dimen_8dp" android:visibility="gone" android:layout_width="48dp" android:layout_height="48dp" android:layout_below="@+id/title2_tv" android:layout_alignParentRight="true" android:layout_centerVertical="true" app:srcCompat="@drawable/pass_ic_loyalty"/>
                    <net.one97.paytm.passbook.customview.CircularImageView android:id="@+id/imv2" android:background="@drawable/pass_circle_border" android:padding="4dp" android:visibility="visible" android:layout_width="48dp" android:layout_height="48dp" android:layout_marginTop="6dp" android:layout_below="@+id/title2_tv" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                    <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="@color/color_506d85" android:id="@+id/title2_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textAllCaps="true" android:fontFamily="sans-serif-medium" android:letterSpacing="0.04"/>
                    <TextView android:textSize="16sp" android:textStyle="normal" android:textColor="@color/color_1d252d" android:ellipsize="end" android:id="@+id/txt4" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:layout_marginRight="@dimen/dimen_10dp" android:layout_below="@+id/title2_tv" android:fontFamily="sans-serif" android:layout_toStartOf="@+id/imv2"/>
                    <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#1d252d" android:ellipsize="end" android:id="@+id/txt5" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginRight="@dimen/dimen_10dp" android:text="9811098110" android:layout_below="@+id/txt4" android:lineSpacingExtra="@dimen/dimen_2dp" android:fontFamily="sans-serif" android:layout_toStartOf="@+id/imv2"/>
                    <View android:id="@+id/view_sep" android:background="#dde5ed" android:layout_width="30dp" android:layout_height="2dp" android:layout_marginTop="31dp" android:layout_below="@+id/txt5"/>
                    <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#506d85" android:id="@+id/transactionIdTv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="31dp" android:layout_marginBottom="20dp" android:layout_below="@+id/view_sep" android:fontFamily="sans-serif"/>
                </RelativeLayout>
                <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#00b9f5" android:gravity="center_horizontal" android:id="@+id/on_hold_tv" android:background="@drawable/pass_bg_blue_rectangle_border_passbook" android:paddingLeft="20dp" android:paddingTop="12dp" android:paddingRight="20dp" android:paddingBottom="12dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="20dp" android:layout_marginRight="10dp" android:layout_marginBottom="20dp" android:text="@string/passbook_on_hold_txn_text" android:fontFamily="sans-serif-medium"/>
                <LinearLayout android:orientation="vertical" android:id="@+id/bottom_btn_ll" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <View android:id="@+id/separator" android:background="#f3f7f8" android:layout_width="match_parent" android:layout_height="10dp"/>
                    <RelativeLayout android:id="@+id/recent_transaction_rl" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <ImageView android:id="@+id/icon2" android:padding="20dp" android:layout_width="60dp" android:layout_height="wrap_content" android:src="@drawable/pass_passbook_ic_recent_tx" android:layout_centerVertical="true"/>
                        <ImageView android:id="@+id/rc_txn_arrow_imv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="20dp" android:src="@drawable/pass_arrow_forward_postcard" android:tint="#999999" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                        <TextView android:textSize="15dp" android:textStyle="normal" android:textColor="#444444" android:id="@+id/recent_transaction_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/passbook_recent_transaction_with" android:layout_toLeftOf="@+id/rc_txn_arrow_imv" android:layout_toRightOf="@+id/icon2" android:layout_centerVertical="true" android:lineSpacingExtra="-2sp" android:fontFamily="sans-serif"/>
                        <View android:background="#f3f7f8" android:layout_width="wrap_content" android:layout_height="2dp" android:layout_below="@+id/icon2" android:layout_alignStart="@+id/recent_transaction_tv"/>
                    </RelativeLayout>
                    <RelativeLayout android:id="@+id/needHelpRl" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <ImageView android:id="@+id/icon1" android:padding="20dp" android:layout_width="60dp" android:layout_height="wrap_content" android:src="@drawable/pass_help_24_7" android:layout_centerVertical="true"/>
                        <TextView android:textSize="@dimen/dimen_16sp" android:textStyle="normal" android:textColor="#444444" android:id="@+id/need_help_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/need_help_text_re" android:layout_toRightOf="@+id/icon1" android:layout_centerVertical="true" android:lineSpacingExtra="-2sp" android:fontFamily="sans-serif"/>
                        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="20dp" android:src="@drawable/pass_arrow_forward_postcard" android:tint="#999999" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                    </RelativeLayout>
                    <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#00b9f5" android:gravity="center_horizontal" android:id="@+id/repeat_payment_tv" android:background="@drawable/pass_bg_blue_rectangle_border_passbook" android:paddingTop="12dp" android:paddingBottom="12dp" android:visibility="gone" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="@string/repeat_payment" android:layout_weight="1" android:fontFamily="sans-serif-medium"/>
                </LinearLayout>
            </LinearLayout>
        </net.one97.paytm.passbook.utility.InteractiveScrollView>
        <RelativeLayout android:id="@+id/loader_contianer" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
            <com.airbnb.lottie.LottieAnimationView android:id="@+id/loader" android:layout_width="wrap_content" android:layout_height="30dp" android:layout_centerInParent="true"/>
        </RelativeLayout>
    </FrameLayout>
</LinearLayout>
