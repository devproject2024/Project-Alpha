<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar android:gravity="top" android:id="@+id/toolbar" android:background="@color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_collapseMode="1" app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:id="@+id/back_arrow" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_centerVertical="true" app:srcCompat="@drawable/sales_back_button"/>
            <TextView android:textSize="@dimen/dimen_16sp" android:textStyle="bold" android:textColor="@color/color_222222" android:gravity="center" android:id="@+id/header_tv" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/share_icon" android:layout_toRightOf="@+id/back_arrow" android:layout_centerInParent="true"/>
            <ImageView android:id="@+id/share_icon" android:layout_width="@dimen/dimen_22dp" android:layout_height="@dimen/dimen_22dp" android:layout_marginRight="@dimen/dimen_12dp" android:layout_alignParentRight="true" app:srcCompat="@drawable/sales_share"/>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    <View android:id="@+id/shadow_separator" android:background="@drawable/td_toolbar_dropshadow" android:visibility="gone" android:layout_width="match_parent" android:layout_height="3dp" android:layout_below="@+id/toolbar"/>
    <androidx.core.widget.NestedScrollView android:id="@+id/info_scrollview" android:background="@color/color_f6f8fc" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/shadow_separator">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
            <RelativeLayout android:id="@+id/camp_content_view" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dimen_10dp">
                <RelativeLayout android:id="@+id/media_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_16dp" android:layout_marginTop="@dimen/dimen_20dp" android:layout_marginRight="@dimen/dimen_16dp">
                    <com.google.android.material.card.MaterialCardView android:layout_width="match_parent" android:layout_height="@dimen/dimen_183dp" android:layout_margin="5dp" android:layout_marginTop="@dimen/dimen_20dp" android:layout_marginBottom="@dimen/dimen_16dp" app:cardCornerRadius="8dp" app:cardElevation="3dp" app:cardUseCompatPadding="false">
                        <ImageView android:id="@+id/camp_img" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="fitXY"/>
                        <ImageView android:layout_gravity="center" android:id="@+id/play_img" android:visibility="gone" android:layout_width="@dimen/dimen_50dp" android:layout_height="@dimen/dimen_50dp" app:srcCompat="@drawable/sales_play"/>
                    </com.google.android.material.card.MaterialCardView>
                </RelativeLayout>
                <RelativeLayout android:id="@+id/campaign_detail_container" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/media_container">
                    <TextView android:textSize="@dimen/cart_14sp" android:textStyle="bold" android:textColor="@color/color_303030" android:id="@+id/registered_status" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_16dp" android:layout_marginTop="@dimen/dimen_20dp" android:layout_marginRight="@dimen/dimen_16dp" android:layout_marginBottom="@dimen/dimen_17dp" android:text="Thanks for registration!"/>
                    <RelativeLayout android:id="@+id/user_count_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_16dp" android:layout_marginTop="@dimen/dimen_12dp" android:layout_marginRight="@dimen/dimen_16dp" android:layout_marginBottom="@dimen/dimen_16dp">
                        <ImageView android:id="@+id/user_count_image" android:layout_width="@dimen/dimen_50dp" android:layout_height="@dimen/dimen_50dp"/>
                        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_18dp" android:layout_toRightOf="@+id/user_count_image" android:layout_centerVertical="true">
                            <TextView android:textSize="@dimen/dimen_14sp" android:textColor="@color/color_536e92" android:id="@+id/title_tv" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/sales_reg_user_title"/>
                            <TextView android:textSize="@dimen/cart_14sp" android:textStyle="bold" android:textColor="@color/color_222222" android:id="@+id/user_count_tv" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_4dp"/>
                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout android:id="@+id/camp_date_info" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_16dp" android:layout_marginRight="@dimen/dimen_16dp" android:layout_marginBottom="@dimen/dimen_16dp" android:layout_below="@+id/user_count_container">
                        <ImageView android:id="@+id/calender_image" android:layout_width="@dimen/dimen_50dp" android:layout_height="@dimen/dimen_50dp"/>
                        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_18dp" android:weightSum="2" android:layout_toRightOf="@+id/calender_image">
                            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1" android:layout_centerVertical="true">
                                <TextView android:textSize="@dimen/dimen_14sp" android:textColor="@color/color_536e92" android:id="@+id/start_title_tv" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                                <TextView android:textSize="@dimen/cart_14sp" android:textStyle="bold" android:textColor="@color/color_222222" android:id="@+id/start_date_tv" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_4dp"/>
                            </LinearLayout>
                            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1" android:layout_centerVertical="true">
                                <TextView android:textSize="@dimen/dimen_14sp" android:textColor="@color/color_536e92" android:id="@+id/end_title_tv" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                                <TextView android:textSize="@dimen/cart_14sp" android:textStyle="bold" android:textColor="@color/color_222222" android:id="@+id/end_date_tv" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_4dp"/>
                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>
                    <com.travel.sale.CalendarView android:id="@+id/custom_calendar_view" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/camp_date_info"/>
                    <RelativeLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/register_btn" android:background="@drawable/travel_button_rounded_corner" android:layout_width="match_parent" android:layout_height="@dimen/dimen_52dp" android:layout_marginLeft="@dimen/dimen_16dp" android:layout_marginTop="@dimen/dimen_30dp" android:layout_marginRight="@dimen/dimen_16dp" android:layout_marginBottom="@dimen/dimen_16dp" android:layout_below="@+id/custom_calendar_view" android:foregroundGravity="center">
                        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
                            <ImageView android:layout_gravity="center" android:id="@+id/registered_icon" android:visibility="gone" android:layout_width="@dimen/dimen_15dp" android:layout_height="@dimen/dimen_15dp" app:srcCompat="@drawable/thumb_up"/>
                            <TextView android:textSize="@dimen/dimen_16sp" android:textStyle="bold" android:textColor="@color/white" android:layout_gravity="center" android:id="@+id/register_btn_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_10dp" android:text="@string/sales_register" android:textAllCaps="false"/>
                        </LinearLayout>
                    </RelativeLayout>
                    <com.travel.sale.ShareView android:id="@+id/share_button" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/register_btn"/>
                </RelativeLayout>
                <com.travel.sale.LiveSaleView android:id="@+id/live_sale_view" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/media_container"/>
            </RelativeLayout>
            <FrameLayout android:id="@+id/frag_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/camp_content_view"/>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
    <include android:id="@+id/empty_view" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/shadow_separator" layout="@layout/sales_empty_screen_view"/>
    <include android:id="@+id/empty_image_view" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/shadow_separator" layout="@layout/sales_empty_screen_image_view"/>
    <androidx.core.widget.ContentLoadingProgressBar android:id="@+id/progressbar" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true" style="?android:attr/progressBarStyle"/>
</RelativeLayout>
