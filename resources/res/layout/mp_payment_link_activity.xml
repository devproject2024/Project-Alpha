            <com.business.common_module.view.widget.CustomTextView android:textSize="15sp" android:textColor="@color/paytm_blue" android:gravity="center" android:id="@+id/payment_link_copy" android:padding="@dimen/dimen_10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/mp_copy_link" android:drawableLeft="@drawable/mp_ic_content_copy" android:drawablePadding="-10dp" android:layout_toLeftOf="@+id/align_ll" android:layout_below="@+id/separator_view" android:layout_alignLeft="@+id/payment_link_txt" android:layout_toStartOf="@+id/align_ll" android:layout_alignStart="@+id/payment_link_txt" app:mp_font_name="1"/>
            <com.business.common_module.view.widget.CustomTextView android:textSize="15sp" android:textColor="@color/paytm_blue" android:gravity="center" android:id="@+id/payment_link_share" android:padding="@dimen/dimen_10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/mp_share_link" android:drawableLeft="@drawable/mp_share_icon_blue" android:drawablePadding="-10dp" android:layout_toRightOf="@+id/align_ll" android:layout_below="@+id/separator_view" android:layout_alignLeft="@+id/align_ll" android:layout_alignRight="@+id/payment_link_txt" android:layout_toEndOf="@+id/align_ll" android:layout_alignStart="@+id/align_ll" android:layout_alignEnd="@+id/payment_link_txt" app:mp_font_name="1"/>
        </RelativeLayout>
        <com.business.common_module.view.widget.CustomTextView android:textSize="12sp" android:textColor="#00b9f5" android:gravity="center_horizontal" android:layout_gravity="center" android:id="@+id/preview_link_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dimen_24dp" android:text="@string/mp_preview_link" android:lineSpacingExtra="4sp" app:mp_font_name="2"/>
        <com.business.common_module.view.widget.CustomTextView android:textSize="12sp" android:textColor="#7b93b4" android:id="@+id/recycler_view_title" android:background="@color/color_f6f8fc" android:padding="@dimen/dimen_10dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_16dp" android:text="@string/mp_payment_received" android:lineSpacingExtra="4sp" android:textAllCaps="true" android:letterSpacing="0.07" app:mp_font_name="3"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/tv_no_payment_received" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:layout_gravity="center" android:padding="@dimen/dimen_10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_20dp" android:src="@drawable/mp_ic_no_data_image_tab"/>
            <com.business.common_module.view.widget.CustomTextView android:textSize="14sp" android:textColor="#86a0c2" android:gravity="center_horizontal" android:padding="@dimen/dimen_10dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/mp_no_payment_received_for_link" android:lineSpacingExtra="4sp"/>
