<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:layout_gravity="center_horizontal" android:orientation="vertical" android:id="@+id/payment_link_activity_container" android:background="@color/color_white" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
        <ImageView android:id="@+id/back_button_pl" android:paddingTop="@dimen/dimen_10dp" android:paddingRight="@dimen/dimen_10dp" android:paddingBottom="@dimen/dimen_10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_16dp" android:layout_marginTop="@dimen/dimen_10dp" android:layout_alignParentLeft="true" app:srcCompat="@drawable/mp_back_arrow"/>
        <com.business.common_module.view.widget.CustomTextView android:textSize="26sp" android:textColor="#182233" android:id="@+id/payment_details_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_16dp" android:layout_marginTop="@dimen/dimen_8dp" android:layout_marginRight="@dimen/dimen_16dp" android:lineSpacingExtra="1sp" app:mp_font_name="3"/>
        <com.business.common_module.view.widget.CustomTextView android:textSize="24sp" android:textStyle="bold" android:textColor="#29394f" android:id="@+id/amount_txt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_16dp" android:layout_marginTop="@dimen/dimen_10dp" android:layout_marginRight="@dimen/dimen_16dp" android:lineSpacingExtra="4sp" app:mp_font_name="3"/>
        <RelativeLayout android:layout_gravity="center_horizontal" android:id="@+id/link_copy_share_rl" android:background="@drawable/mp_grey_border_rect" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_15dp" android:layout_marginTop="@dimen/dimen_16dp" android:layout_marginRight="@dimen/dimen_15dp" android:layout_marginBottom="@dimen/dimen_20dp">
            <com.business.common_module.view.widget.CustomTextView android:textSize="16sp" android:textColor="#182233" android:gravity="center" android:id="@+id/payment_link_txt" android:background="#f6f8fc" android:paddingTop="@dimen/dimen_16dp" android:paddingBottom="@dimen/dimen_16dp" android:layout_width="343dp" android:layout_height="wrap_content" android:layout_marginLeft="1dp" android:layout_marginTop="1dp" android:layout_marginRight="1dp" android:minWidth="340dp" android:layout_alignParentLeft="true" android:layout_alignParentRight="true" android:layout_centerHorizontal="true" android:lineSpacingExtra="6sp" android:textIsSelectable="true" app:mp_font_name="4"/>
            <View android:id="@+id/separator_view" android:background="@color/color_e6ebf3" android:layout_width="wrap_content" android:layout_height="1dp" android:layout_below="@+id/payment_link_txt" android:layout_alignParentLeft="true" android:layout_alignParentRight="true" android:layout_alignParentStart="true" android:layout_alignParentEnd="true"/>
