        <androidx.recyclerview.widget.RecyclerView android:orientation="vertical" android:id="@+id/payment_list_rv" android:visibility="gone" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="match_parent"/>
    </LinearLayout>
    <ProgressBar android:id="@+id/progress_bar" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true"/>
</RelativeLayout>
