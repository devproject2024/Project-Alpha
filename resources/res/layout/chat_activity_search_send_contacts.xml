<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:id="@+id/rl_new_message_title" android:layout_width="match_parent" android:layout_height="52dp" android:layout_marginTop="24dp">
            <TextView android:textSize="21sp" android:textColor="@color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="32dp" android:text="@string/chat_module_select_contacts" android:layout_centerVertical="true" android:layout_marginStart="32dp"/>
            <TextView android:textSize="12sp" android:textColor="@color/color_00B9F5" android:id="@+id/tv_select_contacts" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="32dp" android:text="@string/chat_module_cancel" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginEnd="32dp"/>
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/rv_selected_contacts" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:layout_marginTop="8dp" android:layout_marginRight="12dp" android:layout_marginStart="12dp" android:layout_marginEnd="12dp"/>
        <View android:id="@+id/view_divider" android:background="@color/color_F2F2F2" android:visibility="gone" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="16dp"/>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/friend_search_lin" android:background="@drawable/chat_shape_contaxt_search" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="50dp" android:layout_marginLeft="32dp" android:layout_marginTop="10dp" android:layout_marginRight="32dp" android:layout_marginStart="32dp" android:layout_marginEnd="32dp">
            <ImageView android:id="@+id/img_friend_search" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginLeft="16dp" android:layout_marginStart="16dp" app:srcCompat="@drawable/chat_icon_friend_search_default"/>
            <TextView android:textSize="14sp" android:textColor="@color/black" android:id="@+id/tv_friend_search" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:text="@string/chat_module_to" android:layout_marginStart="16dp"/>
            <EditText android:textColor="@color/color_181C20" android:textColorHint="@color/color_808080" android:id="@+id/friend_search_edit" android:background="@null" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="8dp" android:hint="@string/chat_module_friend_search_hint" android:singleLine="true" android:textCursorDrawable="@drawable/chat_shape_get_focus" android:layout_marginStart="8dp"/>
        </LinearLayout>
        <TextView android:textSize="12sp" android:textColor="@color/color_808080" android:id="@+id/tv_after_the_search" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="30dp" android:layout_marginTop="30dp" android:text="@string/chat_module_contacts" android:layout_marginStart="30dp"/>
        <RelativeLayout android:descendantFocusability="blocksDescendants" android:layout_width="match_parent" android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView android:id="@+id/recycler_group_channel_search_list" android:background="@color/white" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="10dp"/>
            <TextView android:textSize="30sp" android:textColor="@color/zhihu_album_empty_view" android:gravity="center" android:layout_gravity="center" android:id="@+id/empty_view_content" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="80dp" android:text="@string/chat_module_chat_picker_empty_contact_text" android:drawableTop="@drawable/chat_ic_empty_contact" android:drawablePadding="37dp" android:layout_centerInParent="true" android:fontFamily="sans-serif-thin"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/btn_messages_next" android:background="@drawable/chat_shape_messages_say_hi_btn_bg" android:visibility="gone" android:layout_width="match_parent" android:layout_height="50dp" android:layout_marginLeft="20dp" android:layout_marginTop="34dp" android:layout_marginRight="20dp" android:layout_marginBottom="20dp" android:layout_alignParentBottom="true" android:layout_marginStart="20dp" android:layout_marginEnd="20dp">
        <TextView android:textSize="16sp" android:textColor="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:text="@string/chat_module_next" android:layout_marginStart="12dp"/>
    </LinearLayout>
</RelativeLayout>
