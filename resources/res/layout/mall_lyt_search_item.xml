<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/white" android:paddingLeft="@dimen/dimen_24dp" android:paddingRight="@dimen/dimen_20dp" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/single_keyword_container" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:id="@+id/search_item_view" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/keyword_image" android:layout_centerVertical="true">
            <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="16sp" android:textColor="@color/black" android:ellipsize="end" android:layout_gravity="center_vertical" android:id="@+id/search_item_text" android:paddingTop="14dp" android:paddingBottom="14dp" android:layout_width="0dp" android:layout_height="wrap_content" android:singleLine="true" android:layout_weight="1"/>
                <TextView android:textSize="16sp" android:textColor="@color/black" android:id="@+id/search_item_count" android:paddingTop="14dp" android:paddingBottom="14dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/search_item_text"/>
            </LinearLayout>
        </RelativeLayout>
        <ImageView android:id="@+id/keyword_image" android:paddingLeft="5dp" android:paddingRight="12dp" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerHorizontal="true" android:layout_centerVertical="true" app:srcCompat="@drawable/mall_select_suggest"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/keyword_cat_container" android:paddingTop="14dp" android:paddingBottom="14dp" android:visibility="gone" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_centerVertical="true">
        <LinearLayout android:orientation="horizontal" android:id="@+id/horizontal_container" android:paddingRight="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="16sp" android:textColor="@color/black" android:ellipsize="end" android:id="@+id/search_item_main_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:layout_weight="2"/>
            <TextView android:textSize="16sp" android:textColor="@color/black" android:id="@+id/search_item_cat_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/search_item_cat_text"/>
        </LinearLayout>
        <TextView android:textSize="16sp" android:textColor="@color/paytm_blue" android:ellipsize="end" android:id="@+id/search_item_cat_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_1dp" android:singleLine="true" android:layout_weight="1" android:layout_below="@+id/horizontal_container"/>
        <ImageView android:id="@+id/cat_keyword_image" android:paddingLeft="5dp" android:paddingRight="12dp" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerHorizontal="true" android:layout_centerVertical="true" app:srcCompat="@drawable/mall_select_suggest"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/product_container" android:visibility="gone" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent">
        <ImageView android:gravity="center" android:layout_gravity="center" android:id="@+id/imgview" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_centerHorizontal="true" android:layout_centerVertical="true"/>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toRightOf="@+id/imgview" android:layout_centerVertical="true">
            <TextView android:textSize="16sp" android:textColor="@color/black" android:id="@+id/search_item_product_text" android:paddingTop="14dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="asdasd"/>
            <TextView android:textSize="16sp" android:textColor="@color/black" android:id="@+id/txt_price_product" android:paddingBottom="14dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/search_item_product_text"/>
        </RelativeLayout>
    </RelativeLayout>
    <com.paytmmall.artifact.search.utils.VerticalCirclePageIndicator android:background="@color/color_f4f4f4" android:layout_width="match_parent" android:layout_height="@dimen/dimen_1dp" android:layout_alignParentBottom="true"/>
</RelativeLayout>
