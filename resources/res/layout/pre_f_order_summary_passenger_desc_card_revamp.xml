<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
    <View android:background="@color/color_f4f4f4" android:layout_width="match_parent" android:layout_height="@dimen/dimen_10dp"/>
    <FrameLayout android:layout_width="match_parent" android:layout_height="83dp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent">
            <ImageView android:id="@+id/source_image_view" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="fitXY" android:layout_weight="1"/>
        </LinearLayout>
        <RelativeLayout android:id="@+id/rl_station_container" android:layout_width="match_parent" android:layout_height="match_parent">
            <RelativeLayout android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="@dimen/dimen_20dp">
                <com.paytm.utility.RoboTextView android:textSize="31sp" android:textColor="@color/white" android:id="@+id/text_origin_city_code" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="-5dp" android:text="DEL" android:includeFontPadding="false" android:textAllCaps="true" app:fontType="1"/>
                <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_12sp" android:textColor="@color/white" android:id="@+id/text_origin_city_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_1dp" android:text="New Delhi" android:layout_below="@+id/text_origin_city_code" android:textAllCaps="true" app:fontType="3"/>
            </RelativeLayout>
            <ImageView android:layout_width="@dimen/dimen_30dp" android:layout_height="@dimen/dimen_30dp" android:layout_centerInParent="true" app:srcCompat="@drawable/pre_f_flight_icon_new"/>
            <RelativeLayout android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginRight="@dimen/dimen_20dp">
                <com.paytm.utility.RoboTextView android:textSize="31sp" android:textColor="@color/white" android:id="@+id/text_destination_city_code" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="-5dp" android:text="BLR" android:includeFontPadding="false" android:layout_alignParentRight="true" android:textAllCaps="true" app:fontType="1"/>
                <com.paytm.utility.RoboTextView android:textSize="12sp" android:textColor="@color/white" android:id="@+id/text_destination_city_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_1dp" android:text="Bangalore" android:layout_below="@+id/text_destination_city_code" android:layout_alignParentRight="true" android:textAllCaps="true" app:fontType="3"/>
            </RelativeLayout>
        </RelativeLayout>
    </FrameLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/passenger_desc_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_marginBottom="10dp"/>
    <RelativeLayout android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/wallet_30_dp">
        <com.paytm.utility.RoboTextView android:textSize="@dimen/wallet_10_sp" android:textColor="@color/color_222222" android:gravity="left" android:id="@+id/lbl_boarding_point" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:text="Boarding Point" app:fontType="1"/>
        <com.paytm.utility.RoboTextView android:textSize="@dimen/wallet_12_sp" android:textColor="@color/color_222222" android:gravity="left" android:id="@+id/boarding_point" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:text="Marathalli, Oppo Kala Mandir" android:layout_below="@+id/lbl_boarding_point" app:fontType="2"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="@dimen/dimen_5dp" android:layout_marginRight="20dp" android:layerType="software">
        <RelativeLayout android:id="@+id/pnr_text_layout" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dimen_10dp">
            <com.paytm.utility.RoboTextView android:textSize="13sp" android:textColor="#909090" android:ellipsize="end" android:id="@+id/pnr_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="PNR" android:layout_centerVertical="true" android:textAllCaps="true" app:fontType="1"/>
            <com.paytm.utility.RoboTextView android:textSize="13sp" android:textColor="@color/color_222222" android:gravity="right" android:id="@+id/lbl_tkt_id" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_5dp" android:text="" android:layout_toRightOf="@+id/pnr_text" android:layout_centerVertical="true" app:fontType="3"/>
        </RelativeLayout>
        <com.paytm.utility.RoboTextView android:textSize="11sp" android:textColor="#00b8f8" android:gravity="right" android:id="@+id/cancel_text" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/cancellation_baggage_policy" android:layout_alignParentRight="true" android:layout_centerVertical="true" app:fontType="1"/>
    </RelativeLayout>
    <ImageView android:id="@+id/dash_seperator" android:layout_width="match_parent" android:layout_height="5dp" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layerType="software" app:srcCompat="@drawable/pre_f_flight_dotted_shape"/>
    <RelativeLayout android:id="@+id/passanger_container" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <com.paytm.utility.RoboTextView android:textSize="@dimen/wallet_10_sp" android:textColor="@color/color_666666" android:gravity="left" android:id="@+id/lbl_bus_type" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="@dimen/wallet_15_dp" android:text="Bus Type" app:fontType="1"/>
        <com.paytm.utility.RoboTextView android:textSize="@dimen/wallet_12_sp" android:textColor="@color/color_222222" android:gravity="left" android:id="@+id/bus_type" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:text="A/C Seater@ sleeper(2+1)" android:layout_below="@+id/lbl_bus_type" app:fontType="1"/>
        <com.paytm.utility.RoboTextView android:textSize="@dimen/wallet_12_sp" android:textColor="@color/color_fd5c5c" android:gravity="right" android:id="@+id/lbl_refund_status" android:background="@drawable/pre_f_flight_bg_rounded_rectangle_3dp_radius" android:padding="@dimen/dimen_5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/wallet_15_dp" android:layout_marginRight="@dimen/dimen_20dp" android:text="NON-REFUNDABLE" android:layout_alignParentRight="true" app:fontType="3"/>
        <com.paytm.utility.RoboTextView android:textSize="@dimen/wallet_10_sp" android:textColor="@color/color_666666" android:gravity="left" android:id="@+id/lbl_passanger" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="@dimen/wallet_30_dp" android:text="Passangers" android:layout_below="@+id/bus_type" app:fontType="1"/>
        <com.paytm.utility.RoboTextView android:textSize="@dimen/wallet_10_sp" android:textColor="@color/color_666666" android:gravity="left" android:id="@+id/lbl_seat_no" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/wallet_30_dp" android:layout_marginRight="@dimen/dimen_20dp" android:text="Seat No." android:layout_below="@+id/bus_type" android:layout_alignParentRight="true" app:fontType="1"/>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/passenger_info_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_marginBottom="20dp">
        <TextView android:textSize="10sp" android:textColor="@color/color_666666" android:id="@+id/layover_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/flight_passengers"/>
    </LinearLayout>
</LinearLayout>
