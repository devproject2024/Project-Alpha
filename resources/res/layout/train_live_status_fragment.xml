<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/nested_scroll_view" android:background="@color/color_ffffff" android:focusable="true" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="10dp" android:fillViewport="true">
    <LinearLayout android:orientation="vertical" android:id="@+id/lv_container" android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#222222" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_15dp" android:layout_marginTop="@dimen/dimen_10dp" android:text="Find the current location of any train" android:lineSpacingExtra="13sp" android:fontFamily="sans-serif-medium"/>
        <RelativeLayout android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_20dp">
            <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/train_info_lyt" android:background="@drawable/pre_t_train_grey_border_with_corner_radius" android:layout_width="match_parent" android:layout_height="60dp" android:layout_marginLeft="@dimen/dimen_15dp" android:layout_marginRight="@dimen/dimen_15dp">
                <TextView android:textSize="16sp" android:textStyle="normal" android:textColor="#323232" android:id="@+id/looking_for_trains_txt" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/train_ls_home_tell_train_number" android:alpha="0.2" android:fontFamily="sans-serif"/>
                <TextView android:textSize="17.5sp" android:textStyle="bold" android:textColor="#222222" android:id="@+id/train_no_txt" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:lineSpacingExtra="-0.2sp" android:fontFamily="sans-serif"/>
                <TextView android:textSize="13sp" android:textStyle="normal" android:textColor="#9b9b9b" android:id="@+id/train_name_txt" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:lineSpacingExtra="4.3sp" android:fontFamily="sans-serif"/>
            </LinearLayout>
            <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/boarding_point_info_lyt" android:background="@drawable/pre_t_train_grey_border_with_corner_radius" android:layout_width="match_parent" android:layout_height="60dp" android:layout_marginLeft="@dimen/dimen_15dp" android:layout_marginTop="15dp" android:layout_marginRight="@dimen/dimen_15dp" android:layout_marginBottom="18dp" android:layout_below="@+id/train_info_lyt">
                <TextView android:textSize="17.5sp" android:textStyle="bold" android:textColor="#222222" android:id="@+id/boarding_point_txt" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:fontFamily="sans-serif"/>
                <TextView android:textSize="16sp" android:textStyle="normal" android:textColor="#323232" android:id="@+id/tell_us_your_boarding_point_txt" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/train_ls_home_tell_bp" android:alpha="0.2" android:fontFamily="sans-serif"/>
            </LinearLayout>
            <View android:id="@+id/view1" android:background="@color/color_ebebeb" android:layout_width="50dp" android:layout_height="1.5dp" android:layout_marginBottom="17dp" android:layout_below="@+id/boarding_point_info_lyt" android:layout_centerHorizontal="true"/>
            <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/dates_lyt" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:layout_below="@+id/view1">
                <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#b0b0b0" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/train_ls_home_choose_boarding_date" android:lineSpacingExtra="1.5sp" android:fontFamily="sans-serif"/>
                <androidx.recyclerview.widget.RecyclerView android:orientation="horizontal" android:id="@+id/dates_recyler_view" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/lyt_proceed_btn" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_15dp" android:layout_marginTop="@dimen/dimen_12dp" android:layout_marginRight="@dimen/dimen_15dp" android:layout_below="@+id/trainTypeFilter">
            <net.one97.paytm.common.widgets.RoboButton android:textSize="17sp" android:textColor="@color/bus_ticket_white" android:gravity="center" android:id="@+id/proceed_btn" android:background="@drawable/pre_t_train_bg_btn_train_blue" android:layout_width="match_parent" android:layout_height="56dp" android:text="@string/search_trains" android:textAllCaps="false" app:fontType="2"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/thin_banner_container_live_status" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/thin_banner_height" android:layout_marginTop="@dimen/dimen_20dp">
            <androidx.viewpager.widget.ViewPager android:layout_gravity="center" android:id="@+id/view_pager_banner_live_status" android:paddingLeft="@dimen/dimen_24dp" android:paddingRight="@dimen/dimen_14dp" android:clipToPadding="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true"/>
        </RelativeLayout>
        <FrameLayout android:id="@+id/framelayout_storefront_train_ls" android:background="@color/gray" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
