<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/toolbar_layout" android:background="@color/white" android:layout_width="match_parent" android:layout_height="56dp" android:animateLayoutChanges="true">
        <ImageView android:id="@+id/iv_back_button" android:padding="@dimen/dimen_20dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_back" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/toolbar_layout">
        <LinearLayout android:orientation="vertical" android:paddingLeft="@dimen/wallet_25_dp" android:paddingRight="@dimen/wallet_25_dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="24sp" android:textStyle="bold" android:textColor="#222222" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/find_ifsc" android:fontFamily="@string/font_family_roboto_regular"/>
            <com.google.android.material.textfield.TextInputLayout android:theme="@style/MoneyTransferEditTextTheme" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/wallet_15_dp" app:hintAnimationEnabled="false">
                <EditText android:textSize="17sp" android:textStyle="bold" android:textColorHint="@color/edittext_hint_color" android:id="@+id/txt_select_bank" android:focusable="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/select_bank" android:singleLine="true" android:fontFamily="@string/font_family_roboto_regular"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout android:theme="@style/MoneyTransferEditTextTheme" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/wallet_15_dp" app:hintAnimationEnabled="false">
                <EditText android:textSize="17sp" android:textStyle="bold" android:textColorHint="@color/edittext_hint_color" android:id="@+id/txt_select_state" android:focusable="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/select_state" android:singleLine="true" android:fontFamily="@string/font_family_roboto_regular"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout android:theme="@style/MoneyTransferEditTextTheme" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/wallet_15_dp" app:hintAnimationEnabled="false">
                <EditText android:textSize="17sp" android:textStyle="bold" android:textColorHint="@color/edittext_hint_color" android:id="@+id/txt_select_city" android:focusable="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/select_city_ifsc" android:singleLine="true" android:fontFamily="@string/font_family_roboto_regular"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout android:theme="@style/MoneyTransferEditTextTheme" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/wallet_15_dp" app:hintAnimationEnabled="false">
                <EditText android:textSize="17sp" android:textStyle="bold" android:textColorHint="@color/edittext_hint_color" android:id="@+id/txt_select_branch" android:focusable="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/select_branch" android:singleLine="true" android:fontFamily="@string/font_family_roboto_regular"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.paytm.utility.RoboTextView android:textSize="16sp" android:textColor="@color/color_c13100" android:id="@+id/txt_error" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_5dp" app:fontType="3"/>
            <RelativeLayout android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:id="@+id/ifsc_layout" android:background="@drawable/blue_bg_with_blue_border" android:paddingLeft="@dimen/dimen_20dp" android:paddingTop="@dimen/dimen_10dp" android:paddingRight="@dimen/dimen_20dp" android:paddingBottom="@dimen/dimen_10dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="30dp">
                <com.paytm.utility.RoboTextView android:textSize="15sp" android:textStyle="normal" android:textColor="#999999" android:id="@+id/ifsc_code_heading" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/ifsc_code" android:layout_centerHorizontal="true" android:fontFamily="sans-serif"/>
                <com.paytm.utility.RoboTextView android:textSize="21sp" android:textStyle="bold" android:textColor="#222222" android:id="@+id/ifsc_value" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="7dp" android:layout_below="@+id/ifsc_code_heading" android:layout_centerHorizontal="true" android:fontFamily="sans-serif" android:letterSpacing="0.07"/>
            </RelativeLayout>
            <Button android:textSize="17sp" android:textColor="#ffffff" android:gravity="center" android:id="@+id/btn_continue" android:background="@drawable/universal_money_transfer_button_bg" android:visibility="gone" android:layout_width="match_parent" android:layout_height="55dp" android:layout_marginTop="@dimen/dimen_30dp" android:layout_marginBottom="@dimen/dimen_20dp" android:text="@string/money_transfer_continue" android:layout_alignParentBottom="true" android:textAllCaps="false" android:fontFamily="@string/font_family_roboto_medium" android:textAlignment="center" android:stateListAnimator="@null"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
