    </RelativeLayout>
    <View android:background="@color/color_f3f7f8" android:layout_width="match_parent" android:layout_height="@dimen/dimen_1dp" android:layout_marginTop="@dimen/dimen_16dp" android:layout_below="@+id/middleLayout"/>
</RelativeLayout>
