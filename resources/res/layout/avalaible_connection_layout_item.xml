    </RelativeLayout>
    <RelativeLayout android:id="@+id/middleLayout" android:paddingRight="@dimen/dimen_23dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_4dp" android:layout_below="@+id/topLayout">
