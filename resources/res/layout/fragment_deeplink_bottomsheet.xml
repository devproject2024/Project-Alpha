<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@drawable/bg_upi_rounded_top_white" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="24dp">
        <ImageView android:id="@+id/imageView" android:background="@drawable/paytm_upi_bhim_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginBottom="26dp"/>
        <ImageView android:id="@+id/crossIcon" android:visibility="gone" android:layout_width="24dp" android:layout_height="24dp" android:layout_marginRight="20dp" android:src="@drawable/ic_close_minkyc" android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <TextView android:textSize="@dimen/dimen_15sp" android:textColor="@color/color_222222" android:id="@+id/tv_processing" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="@string/upi_intent_loading_text" android:lineSpacingMultiplier="1.2" android:fontFamily="sans-serif"/>
    <RelativeLayout android:id="@+id/networkErrorLayout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_marginBottom="20dp">
        <TextView android:textSize="17sp" android:textStyle="bold" android:textColor="@color/color_222222" android:id="@+id/nwErrorTitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/something_went_wrong" android:layout_toLeftOf="@+id/nwErrorImage" android:layout_alignParentLeft="true" android:fontFamily="sans-serif"/>
        <TextView android:textSize="15sp" android:textColor="@color/color_222222" android:id="@+id/nwErrorMessage" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:text="@string/something_went_wrong" android:layout_toLeftOf="@+id/nwErrorImage" android:layout_below="@+id/nwErrorTitle" android:layout_alignParentLeft="true" android:fontFamily="sans-serif"/>
        <ImageView android:id="@+id/nwErrorImage" android:background="@drawable/ill_no_internet" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <include android:id="@+id/loader" android:background="@android:color/transparent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="14dp" android:layout_marginTop="14dp" android:layout_marginBottom="16dp" layout="@layout/layout_upi_deeplink_loader"/>
    <RelativeLayout android:orientation="vertical" android:id="@+id/errorLayout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp">
        <TextView android:textSize="17sp" android:textStyle="bold" android:textColor="@color/color_222222" android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:fontFamily="sans-serif"/>
        <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="@color/color_222222" android:id="@+id/message" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:layout_marginBottom="@dimen/dimen_22dp" android:layout_toLeftOf="@+id/status_image" android:layout_below="@+id/title" android:layout_alignParentLeft="true" android:fontFamily="sans-serif"/>
        <Button android:textColor="@color/white" android:id="@+id/ok" android:background="@drawable/button_blue1" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dimen_24dp" android:text="@string/ok" android:layout_below="@+id/message"/>
        <ImageView android:id="@+id/status_image" android:visibility="gone" android:layout_width="36dp" android:layout_height="36dp" android:layout_marginTop="@dimen/dimen_8dp" android:layout_alignParentRight="true" app:srcCompat="@drawable/upi_success"/>
        <TextView android:textSize="12sp" android:textColor="@color/color_666666" android:gravity="left" android:layout_gravity="center_vertical" android:id="@+id/tip" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="18dp" android:drawableLeft="@drawable/ic_tip" android:drawablePadding="12dp" android:layout_below="@+id/ok"/>
    </RelativeLayout>
    <View android:id="@+id/view" android:background="#00b9f5" android:layout_width="match_parent" android:layout_height="10dp"/>
    <View android:background="#012b72" android:layout_width="match_parent" android:layout_height="10dp"/>
</LinearLayout>
