<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/parent_layout" android:background="@android:color/white" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/scrollview" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:id="@+id/add_new_Address_tittle_layout" android:layout_width="match_parent" android:layout_height="50dp">
            <ImageView android:id="@+id/back_iv" android:layout_width="@dimen/dimen_24dp" android:layout_height="@dimen/dimen_24dp" android:layout_marginLeft="15dp" android:src="@drawable/back_arrow_order_detail_ft" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
            <TextView android:textSize="@dimen/select_address_text_size" android:textColor="@color/black" android:id="@+id/add_new_address_tittle" android:padding="@dimen/dimen_9dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/add_new_address_text" android:layout_toRightOf="@+id/back_iv" android:layout_centerVertical="true" android:lineSpacingExtra="6sp" android:fontFamily="sans-serif"/>
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/add_current_location_container" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/margin_right" android:layout_alignParentRight="true" android:layout_centerVertical="true">
                <ImageView android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/add_current_location_ft"/>
                <TextView android:textSize="@dimen/add_address_text_size" android:textColor="@color/add_current_location_text_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/margin_right" android:text="@string/add_current_location"/>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/error_layout" android:background="@drawable/error_layout_border_ft" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/add_new_Address_tittle_layout">
            <TextView android:textSize="@dimen/edit_address_text_size" android:textColor="@color/color_222222" android:gravity="center_vertical" android:id="@+id/error_text" android:background="@android:color/transparent" android:padding="@dimen/error_padding" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/error_margin_left" android:layout_weight="9" android:layout_centerInParent="true"/>
            <ImageView android:layout_gravity="center" android:id="@+id/error_message_image" android:padding="@dimen/error_padding" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/error_margin_right" android:src="@drawable/cross_icon_exchange_ft" android:layout_alignParentRight="true" android:layout_centerInParent="true"/>
        </LinearLayout>
        <ScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true" android:layout_below="@+id/error_layout" android:isScrollContainer="true">
            <RelativeLayout android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_alignParentLeft="true">
                <View android:id="@+id/top_view" android:background="@color/hint_color" android:layout_width="match_parent" android:layout_height="0.5dp"/>
                <LinearLayout android:orientation="vertical" android:id="@+id/animation_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/address_left_margin" android:layout_marginRight="@dimen/address_left_margin" android:layout_below="@+id/top_view">
                    <com.google.android.material.textfield.TextInputLayout android:theme="@style/fastag_text_input_layout_theme" android:id="@+id/txt_input_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_8dp" app:hintAnimationEnabled="false">
                        <EditText android:textSize="@dimen/edit_address_text_size" android:textColor="@android:color/black" android:textColorHint="@color/edit_hint_color" android:id="@+id/name" android:background="@android:color/transparent" android:padding="@dimen/dimen_9dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dimen_5dp" android:hint="@string/full_name" android:singleLine="true"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <include layout="@layout/address_separator_layout_ft"/>
                    <com.google.android.material.textfield.TextInputLayout android:theme="@style/fastag_text_input_layout_theme" android:id="@+id/txt_input_phone" android:padding="@dimen/dimen_9dp" android:paddingLeft="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_8dp" android:layout_marginBottom="@dimen/dimen_5dp" app:hintAnimationEnabled="false">
                        <EditText android:textSize="@dimen/edit_address_text_size" android:textColor="@android:color/black" android:textColorHint="@color/edit_hint_color" android:id="@+id/phone" android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/Phone" android:singleLine="true"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <include layout="@layout/address_separator_layout_ft"/>
                    <com.google.android.material.textfield.TextInputLayout android:theme="@style/fastag_text_input_layout_theme" android:id="@+id/txt_input_zip" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_8dp" app:hintAnimationEnabled="false">
                        <EditText android:textSize="@dimen/edit_address_text_size" android:textColor="@android:color/black" android:textColorHint="@color/edit_hint_color" android:id="@+id/zip" android:background="@android:color/transparent" android:padding="@dimen/dimen_9dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dimen_5dp" android:hint="@string/Zip" android:singleLine="true" android:maxLength="6" android:inputType="number"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <include layout="@layout/address_separator_layout_ft"/>
                    <com.google.android.material.textfield.TextInputLayout android:theme="@style/fastag_text_input_layout_theme" android:id="@+id/txt_input_address" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_8dp" app:hintAnimationEnabled="false">
                        <EditText android:textSize="@dimen/edit_address_text_size" android:textColor="@android:color/black" android:textColorHint="@color/edit_hint_color" android:id="@+id/address" android:background="@android:color/transparent" android:padding="@dimen/dimen_9dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dimen_5dp" android:hint="@string/address_1" android:singleLine="true"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <include layout="@layout/address_separator_layout_ft"/>
                    <com.google.android.material.textfield.TextInputLayout android:theme="@style/fastag_text_input_layout_theme" android:id="@+id/txt_input_address2" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_8dp" app:hintAnimationEnabled="false">
                        <EditText android:textSize="@dimen/edit_address_text_size" android:textColor="@android:color/black" android:textColorHint="@color/edit_hint_color" android:id="@+id/address2" android:background="@android:color/transparent" android:padding="@dimen/dimen_9dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dimen_5dp" android:hint="@string/address_2" android:singleLine="true"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <include layout="@layout/address_separator_layout_ft"/>
                    <com.google.android.material.textfield.TextInputLayout android:theme="@style/fastag_text_input_layout_theme" android:id="@+id/txt_input_city_widget" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_8dp" app:hintAnimationEnabled="false">
                        <EditText android:textSize="@dimen/edit_address_text_size" android:textColor="@android:color/black" android:textColorHint="@color/edit_hint_color" android:id="@+id/city" android:background="@android:color/transparent" android:padding="@dimen/dimen_9dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dimen_5dp" android:hint="@string/City" android:singleLine="true"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <include layout="@layout/address_separator_layout_ft"/>
                    <LinearLayout android:orientation="vertical" android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputLayout android:theme="@style/fastag_text_input_layout_theme" android:id="@+id/txt_input_city" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_8dp" app:hintAnimationEnabled="false">
                            <AutoCompleteTextView android:textSize="@dimen/edit_address_text_size" android:textColor="@android:color/black" android:textColorHint="@color/edit_hint_color" android:id="@+id/state" android:background="@android:color/transparent" android:padding="@dimen/dimen_9dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dimen_5dp" android:hint="@string/state" android:inputType="none|text|textCapWords|textNoSuggestions"/>
                        </com.google.android.material.textfield.TextInputLayout>
                        <include layout="@layout/address_separator_layout_ft"/>
                    </LinearLayout>
                    <include layout="@layout/address_separator_layout_ft"/>
                    <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="@color/color_222222" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_20dp" android:text="@string/address_type_title" android:fontFamily="sans-serif-medium"/>
                    <RadioGroup android:orientation="horizontal" android:id="@+id/radio_group_address_type" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_15sp">
                        <RadioButton android:textSize="@dimen/dimen_18sp" android:textColor="@color/color_999999" android:id="@+id/radio_home" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/address_home" android:buttonTint="@drawable/nearby_radio_button_color_state_list_mall_ft"/>
                        <RadioButton android:textSize="@dimen/dimen_18sp" android:textColor="@color/color_999999" android:id="@+id/radio_office" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:text="@string/address_office" android:buttonTint="@drawable/nearby_radio_button_color_state_list_mall_ft"/>
                    </RadioGroup>
                    <RelativeLayout android:layout_gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_8dp" android:layout_marginBottom="@dimen/dimen_5dp">
                        <TextView android:textSize="@dimen/dimen_18sp" android:textColor="@color/hotel_comment_grey" android:id="@+id/set_default_text" android:background="@android:color/transparent" android:paddingLeft="@dimen/dimen_9dp" android:paddingTop="15dp" android:paddingRight="10dp" android:paddingBottom="20dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/set_default_text" android:layout_centerVertical="true"/>
                        <RelativeLayout android:id="@+id/switch_button_layout" android:paddingTop="@dimen/dimen_10dp" android:paddingRight="@dimen/dimen_10dp" android:paddingBottom="@dimen/dimen_10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout android:gravity="bottom" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="@dimen/address_left_margin" android:layout_marginRight="@dimen/address_left_margin" android:layout_below="@+id/animation_layout">
                    <Button android:textSize="14sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/save_address" android:background="@color/paytm_blue" android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginRight="@dimen/address_left_margin" android:text="@string/save" android:layout_alignParentLeft="true" android:textAllCaps="false"/>
                    <TextView android:textSize="14sp" android:textColor="@color/paytm_blue" android:gravity="center" android:id="@+id/cancel_address" android:padding="@dimen/address_save_text_padding" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="@dimen/address_left_margin" android:text="@string/cancel" android:layout_alignParentLeft="true"/>
                    <LinearLayout android:orientation="vertical" android:id="@+id/delete_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="20dp">
                        <include layout="@layout/address_separator_layout_ft"/>
                        <TextView android:textSize="@dimen/edit_address_text_size" android:textColor="@android:color/holo_red_light" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/delete_text" android:background="@android:color/transparent" android:padding="@dimen/address_left_margin" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/delete_address_text"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>
