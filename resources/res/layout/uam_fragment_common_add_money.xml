<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/rootLayout" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:id="@+id/bankMotifIV" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_motif_classic" android:layout_alignParentRight="true"/>
    <androidx.appcompat.widget.AppCompatImageView android:id="@+id/payments_bank_info_btn_close" android:padding="2dp" android:layout_width="32dp" android:layout_height="32dp" android:layout_marginLeft="10dp" android:layout_marginTop="10dp" android:layout_marginRight="10dp" android:layout_marginBottom="10dp" android:layout_alignParentLeft="true" app:srcCompat="@drawable/uam_back_arrow"/>
    <TextView android:textSize="15sp" android:textColor="@color/color_222222" android:ellipsize="end" android:id="@+id/toolbarTitle" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:maxLines="1" android:layout_toRightOf="@+id/payments_bank_info_btn_close" android:fontFamily="sans-serif"/>
    <TextView android:textSize="15sp" android:textColor="@color/color_222222" android:id="@+id/toolbarSubTitle" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:layout_marginRight="23dp" android:maxLines="1" android:layout_below="@+id/toolbarTitle" android:layout_alignLeft="@+id/toolbarTitle" android:fontFamily="sans-serif"/>
    <androidx.core.widget.NestedScrollView android:id="@+id/scrollview" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/payments_bank_info_btn_close">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <RelativeLayout android:id="@+id/editTextLayout" android:paddingLeft="30dp" android:paddingRight="26dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:animateLayoutChanges="true">
                <TextView android:textSize="15sp" android:textColor="#222222" android:id="@+id/tv_addmoney_to" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/text_addmoney_to" android:fontFamily="sans-serif"/>
                <TextView android:textSize="@dimen/uam_text_size_21sp" android:textStyle="bold" android:textColor="@color/color_222222" android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_3dp" android:text="@string/savings_bank_account" android:layout_below="@+id/tv_addmoney_to" android:fontFamily="@string/font_family_roboto_regular" android:letterSpacing="0.03"/>
                <LinearLayout android:orientation="horizontal" android:id="@+id/acc_ly" android:paddingRight="@dimen/dimen_5dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_8dp" android:layout_below="@+id/title">
                    <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/tv_acc_no" android:layout_width="wrap_content" android:layout_height="wrap_content" android:fontFamily="sans-serif" android:letterSpacing="0.07"/>
                    <ImageView android:layout_gravity="center_vertical" android:id="@+id/img_collapse" android:paddingRight="@dimen/dimen_5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_5dp" android:src="@drawable/collapse"/>
                </LinearLayout>
                <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/tv_ifsc_code" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_6dp" android:layout_below="@+id/acc_ly" android:fontFamily="sans-serif"/>
                <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#000000" android:id="@+id/balanceTv" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_below="@+id/tv_ifsc_code" android:fontFamily="sans-serif"/>
                <TextView android:textSize="13sp" android:textColor="@color/color_00b9f5" android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@+id/tv_add_cash_wallet" android:paddingTop="@dimen/dimen_5dp" android:paddingRight="@dimen/dimen_5dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_15dp" android:text="@string/uam_ppb_cash_point_text" android:drawableLeft="@drawable/ic_ac_balance" android:drawableRight="@drawable/card_forward_nearby_addmoney" android:drawablePadding="@dimen/dimen_10dp" android:layout_below="@+id/balanceTv" android:layout_centerVertical="true" android:fontFamily="@string/font_family_roboto_regular"/>
                <RelativeLayout android:id="@+id/amountEditableLayout" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_70dp" android:layout_below="@+id/tv_add_cash_wallet">
                    <net.one97.paytm.addmoney.utils.CustomAmountTextInputEditText android:textSize="@dimen/uam_text_size_36sp" android:textColor="@color/color_222222" android:textColorHint="@color/color_b8c2cb" android:id="@+id/amount_et" android:background="#00000000" android:paddingLeft="25dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/amount" android:singleLine="true" android:layout_toLeftOf="@+id/rl_uam_promo_code" android:inputType="none|text|textCapWords|textNoSuggestions|number|numberDecimal|phone" android:imeOptions="actionDone" android:textCursorDrawable="@drawable/color_cursor" android:fontFamily="@string/font_family_roboto_medium"/>
                    <TextView android:textSize="@dimen/uam_text_size_36sp" android:textColor="@color/color_b8c2cb" android:id="@+id/rupee_beside_et" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/uam_rupee_symbol" android:layout_alignTop="@+id/amount_et"/>
                    <View android:id="@+id/v_uni_et_sep_1" android:background="@color/color_00b9f5" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="@dimen/dimen_10dp" android:layout_below="@+id/amount_et"/>
                    <TextView android:textSize="12sp" android:textColor="@color/red" android:id="@+id/tv_error_message" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_below="@+id/v_uni_et_sep_1"/>
                    <com.paytm.utility.RoboTextView android:textSize="@dimen/uam_text_size_36sp" android:textColor="@color/black" android:id="@+id/nonEditableAmountTV" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/uam_rupee_symbol" android:layout_alignTop="@+id/rupee_beside_et" app:fontType="4"/>
                    <TextView android:textSize="@dimen/uam_text_size_15sp" android:textColor="@color/black" android:id="@+id/nonEditableTitleTV" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/uam_ppb_add_money_title_non_edit" android:layout_below="@+id/nonEditableAmountTV" android:fontFamily="@string/font_family_roboto_regular"/>
                    <RelativeLayout android:id="@+id/rl_uam_promo_code" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_15dp" android:layout_alignParentRight="true">
                        <TextView android:textSize="12sp" android:textColor="@drawable/bg_clickable_text_view_addmoney" android:id="@+id/uam_have_a_promo_code_tv" android:padding="@dimen/dimen_5dp" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/have_a_promocode_addmoney" android:fontFamily="@string/font_family_roboto_regular"/>
                        <LinearLayout android:orientation="horizontal" android:id="@+id/lnr_promo_applied" android:background="@drawable/bg_selected_filtered_list_addmoney" android:padding="6dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content">
                            <TextView android:textSize="12sp" android:ellipsize="end" android:layout_gravity="center_vertical" android:id="@+id/uam_promo_code_label_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true"/>
                            <ImageView android:layout_gravity="center_vertical" android:id="@+id/uam_promo_code_clear_iv" android:paddingLeft="8dp" android:paddingTop="5dp" android:paddingRight="8dp" android:paddingBottom="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/close_filter_addmoney"/>
                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>
                <androidx.appcompat.widget.AppCompatImageView android:id="@+id/bank_icon" android:background="@drawable/uam_bg_blue_circular_stroke" android:padding="15dp" android:visibility="gone" android:layout_width="@dimen/dimen_60dp" android:layout_height="@dimen/dimen_60dp" android:layout_marginTop="@dimen/dimen_25dp" android:layout_alignParentRight="true" app:srcCompat="@drawable/uam_ppb_header_icon"/>
            </RelativeLayout>
            <com.paytm.utility.RoboTextView android:textStyle="bold" android:textColor="@color/black" android:gravity="center_vertical" android:id="@+id/add_money_from_tv" android:background="@color/white" android:paddingLeft="30dp" android:layout_width="match_parent" android:layout_height="50dp" android:text="@string/uam_add_money_from" android:fontFamily="sans-serif"/>
            <RelativeLayout android:id="@+id/open_item_header" android:background="@color/white" android:paddingBottom="15dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatImageView android:id="@+id/open_item_header_icon" android:layout_width="24dp" android:layout_height="24dp" android:layout_marginLeft="25dp" android:layout_marginRight="15dp" app:srcCompat="@drawable/uam_upi_source_list_icon"/>
                <com.paytm.utility.RoboTextView android:textSize="16sp" android:textColor="@color/color_222222" android:id="@+id/open_item_header_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/uam_add_money_from" android:maxLines="1" android:layout_toRightOf="@+id/open_item_header_icon" app:fontType="4"/>
                <com.paytm.utility.RoboTextView android:textSize="12sp" android:textColor="@color/color_666666" android:id="@+id/open_item_header_subtitle" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8.5dp" android:layout_marginRight="22dp" android:text="@string/uam_add_money_from" android:layout_below="@+id/open_item_header_title" android:layout_alignLeft="@+id/open_item_header_title" app:fontType="2"/>
            </RelativeLayout>
            <LinearLayout android:id="@+id/open_item_layout" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <com.airbnb.lottie.LottieAnimationView android:layout_gravity="center_horizontal" android:id="@+id/content_loader" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="20dp" android:adjustViewBounds="true" app:amount="5" app:animationDirectionbundle="-1" app:circleSize="15" app:duration="@android:integer/config_mediumAnimTime" app:endColor="@color/light_blue_A400" app:startColor="@color/light_blue_A700"/>
            <androidx.recyclerview.widget.RecyclerView android:orientation="vertical" android:id="@+id/sourceCardRV" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>
