    <com.paytm.utility.RoboTextView android:textSize="24sp" android:paddingLeft="20dp" android:paddingRight="20dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/food_n_bevs" app:fontType="4"/>
