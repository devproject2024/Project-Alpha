<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:id="@+id/lyt_boarding_drop" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:id="@+id/lyt_boarding_point_detail" android:paddingLeft="@dimen/dimen_18dp" android:paddingTop="11dp" android:paddingRight="@dimen/dimen_18dp" android:paddingBottom="11dp" android:visibility="gone" android:layout_width="180dp" android:layout_height="73dp" android:layout_weight="1">
            <com.paytm.utility.RoboTextView android:textSize="12sp" android:textStyle="bold" android:textColor="@color/passbook_calendar_blue_underline" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/boarding" app:fontType="4"/>
            <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_13sp" android:textStyle="bold" android:textColor="@color/brownish_grey" android:id="@+id/text_boarding_time_detail" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="07:45 PM" app:fontType="4"/>
            <com.paytm.utility.RoboTextView android:textSize="11sp" android:textColor="@color/brownish_grey" android:ellipsize="end" android:id="@+id/text_boarding_point_detail" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/bus_order_summary_boarding_points" android:singleLine="true"/>
        </LinearLayout>
        <com.paytm.utility.RoboTextView android:textSize="18sp" android:textStyle="bold" android:gravity="center" android:id="@+id/text_boarding_dropping_point" android:paddingTop="@dimen/dimen_23dp" android:paddingBottom="@dimen/dimen_23dp" android:layout_width="180dp" android:layout_height="73dp" android:text="@string/boarding" android:layout_weight="1"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/lyt_drop_point_detail" android:paddingLeft="@dimen/dimen_18dp" android:paddingTop="11dp" android:paddingRight="@dimen/dimen_18dp" android:paddingBottom="11dp" android:visibility="gone" android:layout_width="180dp" android:layout_height="73dp" android:layout_weight="1">
            <com.paytm.utility.RoboTextView android:textSize="12sp" android:textStyle="bold" android:textColor="@color/passbook_calendar_blue_underline" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/dropping" app:fontType="4"/>
            <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_13sp" android:textStyle="bold" android:textColor="@color/brownish_grey" android:id="@+id/text_dropping_time_detail" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="07:45 PM" app:fontType="4"/>
            <com.paytm.utility.RoboTextView android:textSize="11sp" android:textColor="@color/brownish_grey" android:ellipsize="end" android:id="@+id/text_dropping_point_detail" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/bus_order_summary_boarding_points" android:singleLine="true"/>
        </LinearLayout>
        <com.paytm.utility.RoboTextView android:textSize="18sp" android:textStyle="bold" android:gravity="center" android:id="@+id/text_drop_point" android:paddingTop="@dimen/dimen_23dp" android:paddingBottom="@dimen/dimen_23dp" android:layout_width="180dp" android:layout_height="73dp" android:text="@string/dropping" android:layout_weight="1"/>
    </LinearLayout>
    <com.paytm.utility.RoboTextView android:textSize="13sp" android:textColor="#d0011b" android:gravity="center" android:id="@+id/error_text" android:padding="@dimen/dimen_10dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/bus_boarding_point_alert_message" android:layout_weight="1" android:layout_below="@+id/lyt_boarding_drop"/>
    <RelativeLayout android:id="@+id/find_nearest_boarding_lyt" android:background="@drawable/travel_res_bus_bg_find_nearest_boarding_point" android:padding="@dimen/dimen_10dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_10dp" android:layout_marginTop="@dimen/dimen_8dp" android:layout_marginRight="@dimen/dimen_10dp" android:layout_below="@+id/error_text">
        <androidx.appcompat.widget.AppCompatImageView android:id="@+id/boarding_location_ic" android:layout_width="@dimen/dimen_20dp" android:layout_height="@dimen/dimen_25dp" android:layout_marginLeft="@dimen/dimen_5dp" android:layout_centerVertical="true" app:srcCompat="@drawable/travel_res_bus_boarding_location"/>
        <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_13sp" android:textStyle="bold" android:textColor="@color/color_999999" android:id="@+id/text_find_nearest" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="@dimen/dimen_5dp" android:layout_marginRight="@dimen/dimen_10dp" android:text="" android:layout_toRightOf="@+id/boarding_location_ic" app:fontType="3"/>
        <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_11sp" android:textColor="@color/color_999999" android:id="@+id/text_find_nearest_address" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginRight="@dimen/dimen_10dp" android:layout_marginBottom="@dimen/dimen_5dp" android:text="@string/your_area_street_landmark" android:layout_toRightOf="@+id/boarding_location_ic" android:layout_below="@+id/text_find_nearest" app:fontType="2"/>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/frg_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/find_nearest_boarding_lyt"/>
</RelativeLayout>
