<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@drawable/pb_bank_tab_header_option_bg" android:paddingLeft="@dimen/dimen_20dp" android:paddingTop="40dp" android:paddingBottom="30dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/ll_name" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="22sp" android:textStyle="bold" android:textColor="#ffffff" android:ellipsize="end" android:id="@+id/tv_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="2" android:layout_toLeftOf="@+id/iv_forward_arrow" android:layout_alignParentLeft="true" android:lineSpacingExtra="4sp" android:fontFamily="sans-serif" android:layout_toStartOf="@+id/iv_forward_arrow" android:layout_alignParentStart="true"/>
        <ImageView android:id="@+id/iv_forward_arrow" android:layout_width="@dimen/dimen_20dp" android:layout_height="@dimen/dimen_20dp" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:src="@drawable/bank_drawer_card_forward_copy_28" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <net.one97.paytm.common.widgets.CircularImageView android:layout_gravity="center" android:id="@+id/iv_profile" android:visibility="gone" android:layout_width="50dp" android:layout_height="50dp" android:layout_marginTop="25dp" android:layout_below="@+id/ll_name"/>
    <RelativeLayout android:id="@+id/switch_acc_lyt" android:paddingTop="5dp" android:paddingBottom="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_0dp" android:layout_toRightOf="@+id/iv_profile" android:layout_below="@+id/ll_name" android:layout_alignTop="@+id/iv_profile">
        <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="#ffffff" android:gravity="center" android:id="@+id/tv_acc_type" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="- - - - -" android:lineSpacingExtra="6sp" android:fontFamily="sans-serif"/>
    </RelativeLayout>
    <androidx.appcompat.widget.AppCompatImageView android:id="@+id/arrow_iv" android:padding="3dp" android:layout_width="18dp" android:layout_height="18dp" android:layout_marginLeft="4dp" android:layout_marginTop="7dp" android:layout_toRightOf="@+id/switch_acc_lyt" android:layout_alignTop="@+id/switch_acc_lyt" app:srcCompat="@drawable/pb_drawer_down_svg"/>
    <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#ffffff" android:id="@+id/tv_acc_no" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_5dp" android:text="- - - - -" android:layout_below="@+id/switch_acc_lyt" android:layout_alignLeft="@+id/switch_acc_lyt" android:lineSpacingExtra="6sp" android:fontFamily="sans-serif"/>
    <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#ffffff" android:id="@+id/tv_ifsc_code" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:text="- - - - -" android:layout_below="@+id/tv_acc_no" android:layout_alignLeft="@+id/switch_acc_lyt" android:lineSpacingExtra="6sp" android:fontFamily="sans-serif"/>
    <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#ffffff" android:id="@+id/share_tv" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:text="Share Details" android:layout_below="@+id/tv_ifsc_code" android:layout_alignLeft="@+id/switch_acc_lyt" android:fontFamily="sans-serif"/>
    <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#ffffff" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="- - - - - - - - - - -" android:layout_below="@+id/share_tv" android:layout_alignLeft="@+id/switch_acc_lyt" android:fontFamily="sans-serif"/>
    <androidx.appcompat.widget.AppCompatImageView android:id="@+id/tooltip_arrow" android:visibility="gone" android:layout_width="18dp" android:layout_height="18dp" android:layout_marginBottom="-7dp" android:layout_below="@+id/arrow_iv" android:layout_alignLeft="@+id/arrow_iv" app:srcCompat="@drawable/pb_tooltip_triangle_svg"/>
    <RelativeLayout android:id="@+id/tooltip_lyt" android:background="@drawable/rounded_white_background" android:padding="16dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="@dimen/dimen_20dp" android:layout_below="@+id/tooltip_arrow">
        <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#1d252d" android:id="@+id/tooltip_tv_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="6dp" android:text="@string/pb_tooltip_switch_acc" android:lineSpacingExtra="4sp" android:fontFamily="sans-serif"/>
        <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#00aced" android:id="@+id/tooltip_btn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/pb_tooltip_ok" android:layout_below="@+id/tooltip_tv_title" android:lineSpacingExtra="4sp" android:fontFamily="sans-serif"/>
    </RelativeLayout>
</RelativeLayout>
