<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/beneficiary_item" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:weightSum="4" android:layout_marginStart="20dp">
        <LinearLayout android:orientation="horizontal" android:layout_width="0dp" android:layout_height="wrap_content" android:baselineAligned="false" android:layout_weight="3" android:layout_alignParentLeft="true" android:layout_alignParentStart="true">
            <FrameLayout android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:layout_marginEnd="10dp">
                <com.paytm.utility.RoboTextView android:textSize="21sp" android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/beneficiary_circle" android:background="@drawable/circle_grey" android:layout_width="50dp" android:layout_height="50dp" android:fontFamily="@string/font_family_roboto_medium"/>
                <ImageView android:layout_gravity="center" android:id="@+id/beneficiary_no_name_icon" android:visibility="gone" android:layout_width="50dp" android:layout_height="50dp" android:src="@drawable/ic_no_name" android:contentDescription="TODO"/>
            </FrameLayout>
            <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:paddingRight="3dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="3" android:layout_alignParentLeft="true" android:paddingEnd="3dp" android:layout_alignParentStart="true">
                <com.paytm.utility.RoboTextView android:textSize="15sp" android:textColor="@color/black" android:id="@+id/beneficiary_name" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <com.paytm.utility.RoboTextView android:textSize="11sp" android:textColor="#909090" android:id="@+id/beneficiary_bank_name" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp"/>
                <com.paytm.utility.RoboTextView android:textSize="11sp" android:textColor="#909090" android:id="@+id/beneficiary_number" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp"/>
            </LinearLayout>
        </LinearLayout>
        <com.paytm.utility.RoboTextView android:textSize="14sp" android:textStyle="bold" android:textColor="@color/excl_color_00b9f5" android:gravity="center" android:layout_gravity="center" android:id="@+id/beneficiary_amount" android:background="@drawable/recent_amount_bg" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginRight="20dp" android:layout_weight="1" android:layout_alignParentRight="true" android:layout_marginEnd="20dp" android:layout_alignParentEnd="true"/>
    </LinearLayout>
    <View android:background="@color/bg_grid_grey" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="20dp" android:layout_marginTop="20dp" android:layout_marginBottom="20dp" android:layout_marginStart="20dp"/>
</LinearLayout>
