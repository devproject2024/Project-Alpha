<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@drawable/park_rectangle_drawable" android:paddingLeft="8dp" android:paddingTop="16dp" android:paddingRight="16dp" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView android:textSize="@dimen/dimen_14sp" android:textStyle="bold" android:textColor="@color/event_text_color_black" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/event_review_and_pay" app:fontType="3"/>
        <TextView android:textSize="13sp" android:textColor="@color/event_text_color_black" android:id="@+id/events_fare_breakup_title_textview" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_16dp" android:text="@string/event_fare_breakup" app:fontType="3"/>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="24dp">
            <TextView android:textSize="14sp" android:textColor="@color/event_text_gray_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/review_base_fare" android:layout_alignParentLeft="true" app:fontType="2"/>
            <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="@color/event_text_color_black" android:id="@+id/event_review_pay_base_fare" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" app:fontType="2"/>
        </RelativeLayout>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="9dp">
            <TextView android:textSize="14sp" android:textColor="@color/event_text_gray_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/event_taxes_and_convenience_fee" android:layout_alignParentLeft="true" app:fontType="2"/>
            <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="@color/event_text_color_black" android:id="@+id/event_review_pay_taxes" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" app:fontType="2"/>
        </RelativeLayout>
        <RelativeLayout android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="9dp">
            <TextView android:textSize="14sp" android:textColor="@color/event_text_gray_color" android:id="@+id/events_convenience_fee_title_textview" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/event_convenience_fee" android:layout_alignParentLeft="true" app:fontType="2"/>
            <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="@color/event_text_color_black" android:id="@+id/event_review_pay_convenience_fee" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" app:fontType="2"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/events_delivery_rel_lyt" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="9dp">
            <TextView android:textSize="14sp" android:textColor="@color/event_text_gray_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/shipping_charge" android:includeFontPadding="false" android:layout_alignParentLeft="true" app:fontType="2"/>
            <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="@color/event_text_color_black" android:id="@+id/event_delivery_price_fee" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" app:fontType="2"/>
        </RelativeLayout>
        <View android:id="@+id/horizontal_divider_event_booking_review_pay" android:background="@color/event_divider_color" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="9dp" android:layout_marginTop="25dp" android:layout_marginRight="7dp"/>
        <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="@color/event_blue_color" android:gravity="center" android:id="@+id/events_promo_code" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="@string/event_have_a_promo_code" app:fontType="3"/>
        <RelativeLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/lyt_events_promo_applied" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_marginBottom="8dp">
            <com.paytm.utility.RoboTextView android:textSize="11sp" android:textColor="@color/movies_promo_text_color" android:gravity="center_vertical" android:id="@+id/txt_events_applied_promo_info" android:background="@drawable/movie_promo_bg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" app:fontType="3"/>
            <TextView android:textSize="11sp" android:textColor="@color/movie_cashback_color" android:ellipsize="end" android:id="@+id/txt_events_cash_back_info" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/img_events_remove_promo" android:layout_toRightOf="@+id/txt_events_applied_promo_info" android:layout_centerVertical="true"/>
            <ImageView android:id="@+id/img_events_remove_promo" android:paddingLeft="7dp" android:paddingRight="7dp" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/movie_seat_promo_close" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <Button android:textSize="18sp" android:textColor="@color/white" android:id="@+id/events_review_and_pay_button" android:background="@drawable/bg_btn_blue" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="24dp" android:layout_marginRight="4dp" android:layout_marginBottom="20dp" android:text="@string/event_proceed_to_book" android:textAllCaps="false" app:fontType="4" style="?android:attr/borderlessButtonStyle"/>
    </LinearLayout>
</RelativeLayout>
