<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:textSize="@dimen/dimen_13sp" android:textStyle="bold" android:textColor="@color/color_444444" android:gravity="center_vertical" android:id="@+id/tv_date_header" android:background="@color/color_f3f7f8" android:paddingLeft="@dimen/dimen_15dp" android:layout_width="match_parent" android:layout_height="@dimen/dimen_50dp" android:layout_below="@+id/rl_header" android:fontFamily="@string/font_family_roboto_regular"/>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/tv_date_header">
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/rv_upi_transactions" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:layout_below="@+id/tv_date_header"/>
        <RelativeLayout android:id="@+id/rv_loader" android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
            <com.airbnb.lottie.LottieAnimationView android:id="@+id/bottom_page_loader" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="30dp" android:layout_centerInParent="true" app:amount="5" app:animationDirectionbundle="-1" app:circleSize="15" app:duration="@android:integer/config_mediumAnimTime" app:endColor="@color/light_blue_A400" app:startColor="@color/light_blue_A700"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/ll_no_transaction" android:background="@color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/tv_date_header">
        <ImageView android:id="@+id/iv_no_transaction" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true" app:srcCompat="@drawable/ic_no_upi_transactions"/>
        <TextView android:textSize="@dimen/cart_18sp" android:textColor="@color/color_222222" android:gravity="center_horizontal" android:id="@+id/tv_no_transaction" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_60dp" android:layout_marginTop="@dimen/dimen_35dp" android:layout_marginRight="@dimen/dimen_60dp" android:layout_marginBottom="@dimen/dimen_40dp" android:text="@string/upi_no_transaction" android:layout_centerHorizontal="true" android:fontFamily="@string/font_family_roboto_medium"/>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/ll_error_container" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/tv_date_header" android:layout_centerInParent="true">
        <ImageView android:id="@+id/iv_error_image" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ill_no_internet"/>
        <TextView android:textSize="@dimen/wallet_16_sp" android:textColor="@color/color_222222" android:gravity="center" android:id="@+id/tv_error_msg" android:padding="@dimen/dimen_16dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/no_internet_message" android:lineSpacingMultiplier="1.2"/>
        <TextView android:textSize="@dimen/wallet_18_sp" android:textColor="@color/color_00b9f5" android:id="@+id/tv_retry" android:background="@drawable/blue_rounded_border" android:padding="@dimen/dimen_16dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_24dp" android:text="@string/retry"/>
    </LinearLayout>
    <include android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="match_parent" layout="@layout/layout_wallet_loader"/>
</RelativeLayout>
