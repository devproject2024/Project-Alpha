<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="@dimen/fnb_card_width" android:layout_height="wrap_content">
    <ImageView android:id="@+id/id_food_img" android:layout_width="0dp" android:layout_height="100dp" android:layout_marginLeft="15dp" android:layout_marginTop="20dp" android:layout_marginBottom="20dp" android:layout_marginStart="20dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintDimensionRatio="w,72:100" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0"/>
    <ImageView android:id="@+id/food_type_indicator" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_veg_12_dp_green" app:layout_constraintStart_toStartOf="@+id/id_food_img" app:layout_constraintTop_toTopOf="@+id/id_food_img"/> //name 
    <LinearLayout android:orientation="vertical" android:id="@+id/name_container" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginRight="16dp" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toEndOf="@+id/id_food_img" app:layout_constraintTop_toTopOf="@+id/id_food_img">
        <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="@color/black" android:ellipsize="end" android:id="@+id/food_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="2" android:layout_toRightOf="@+id/id_food_img" android:layout_alignParentTop="true" android:fontFamily="sans-serif-medium" app:fontType="3"/>
        <com.paytm.utility.RoboTextView android:textSize="12sp" android:textColor="@color/color_444444" android:ellipsize="end" android:id="@+id/food_name" android:paddingLeft="0dp" android:paddingTop="@dimen/dimen_3dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="1dp" android:maxLines="2" android:includeFontPadding="false" android:fontFamily="sans-serif" app:fontType="2"/>
    </LinearLayout> //price 
    <com.paytm.utility.RoboTextView android:textSize="16sp" android:textColor="@color/color_000000" android:id="@+id/food_price" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" app:fontType="3" app:layout_constraintBottom_toBottomOf="@+id/id_food_img" app:layout_constraintStart_toEndOf="@+id/id_food_img"/>
    <com.paytm.utility.RoboTextView android:textSize="12sp" android:textColor="@color/color_999999" android:id="@+id/food_mrp_price" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_below="@+id/food_price" app:fontType="2" app:layout_constraintBottom_toTopOf="@+id/food_price" app:layout_constraintStart_toEndOf="@+id/id_food_img"/>
    <com.paytm.utility.RoboTextView android:textSize="10sp" android:textColor="@color/color_21c17a" android:id="@+id/food_discount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/food_mrp_price" android:layout_marginStart="3dp" app:fontType="3" app:layout_constraintBottom_toBottomOf="@+id/food_mrp_price" app:layout_constraintStart_toEndOf="@+id/food_mrp_price" app:layout_constraintTop_toTopOf="@+id/food_mrp_price"/> //Add 
    <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="@color/color_00b9f5" android:gravity="center" android:id="@+id/id_add_item" android:background="@drawable/round_rect" android:paddingLeft="16dp" android:paddingTop="6dp" android:paddingRight="16dp" android:paddingBottom="6dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/add_item" android:layout_marginEnd="14dp" app:fontType="3" app:layout_constraintBottom_toBottomOf="@+id/id_food_img" app:layout_constraintEnd_toEndOf="0"/> // +- 
    <LinearLayout android:orientation="horizontal" android:id="@+id/id_food_add_sub_linlayout" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="24dp" android:layout_marginEnd="14dp" app:layout_constraintBottom_toBottomOf="@+id/id_food_img" app:layout_constraintEnd_toEndOf="0">
        <androidx.appcompat.widget.AppCompatImageView android:id="@+id/minus_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" app:srcCompat="@drawable/ic_minus_active_blue_movie"/>
        <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="@color/text_color_collection_heading" android:gravity="center" android:id="@+id/food_quantity" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginStart="16dp" android:layout_marginEnd="16dp" app:fontType="3"/>
        <androidx.appcompat.widget.AppCompatImageView android:id="@+id/plus_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" app:srcCompat="@drawable/ic_add_active_blue_large_movies"/>
    </LinearLayout>
    <View android:id="@+id/separator" android:background="@color/color_ebebeb" android:visibility="gone" android:layout_width="0dp" android:layout_height="1dp" android:layout_marginLeft="14dp" android:layout_marginRight="14dp" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0"/>
</androidx.constraintlayout.widget.ConstraintLayout>
