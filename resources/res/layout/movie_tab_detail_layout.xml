<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/white" android:paddingBottom="50dp" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:background="@color/white" android:paddingBottom="@dimen/dimen_15dp" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:id="@+id/id_intereseted_like_container" android:layout_width="match_parent" android:layout_height="wrap_content"> // content-page interested layout 
            <RelativeLayout android:orientation="horizontal" android:id="@+id/llInteresteLayout" android:background="@color/white" android:paddingLeft="@dimen/dimen_20dp" android:paddingTop="@dimen/dimen_21" android:paddingBottom="@dimen/dimen_25dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/llInterestedCTALayout" android:layout_alignParentLeft="true"> //Release layout 
                <LinearLayout android:orientation="vertical" android:id="@+id/llReleaseTextLayout" android:background="@color/white" android:paddingRight="@dimen/dimen_50dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true">
                    <ImageView android:id="@+id/releaseTextIcon" android:layout_width="@dimen/dimen_28dp" android:layout_height="@dimen/dimen_28dp" android:src="@drawable/event"/>
                    <TextView android:textSize="16dp" android:textStyle="normal" android:textColor="@color/color_222222" android:gravity="center_vertical" android:id="@+id/txt_releaseDate" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_7dp" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:fontFamily="sans-serif-medium" app:fontType="3"/>
                    <TextView android:textSize="12dp" android:textStyle="normal" android:textColor="@color/color_666666" android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_4dp" android:text="@string/releasedate" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:fontFamily="sans-serif-medium" app:fontType="3"/>
                </LinearLayout> //thumbs-up 
                <include layout="@layout/movie_content_interested"/> // interested CTA 
                <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/llInterestedCTALayout" android:background="@drawable/grey_movies_rounded_border" android:visibility="gone" android:layout_width="116dp" android:layout_height="@dimen/dimen_40dp" android:layout_marginRight="@dimen/dimen_20dp" android:layout_marginBottom="@dimen/dimen_24dp" android:layout_alignParentBottom="true" android:layout_alignParentEnd="true">
                    <ImageView android:id="@+id/interestedCTAIcon" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginRight="10dp" android:src="@drawable/interested_count"/>
                    <TextView android:textSize="14dp" android:textColor="#222222" android:gravity="center" android:layout_gravity="center" android:id="@+id/interestedCTAText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/interested" android:fontFamily="@string/font_family_roboto_regular" app:fontType="3"/>
                </LinearLayout>
            </RelativeLayout> // about-movie interested layout 
            <include android:id="@+id/id_about_movie_like_cont" android:visibility="gone" layout="@layout/movie_content_like_dislike"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/movie_summary_layout" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/id_intereseted_like_container">
            <RelativeLayout android:id="@+id/title_header" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_16dp">
                <TextView android:textSize="18sp" android:textStyle="normal" android:textColor="@color/color_222222" android:gravity="center_vertical" android:id="@+id/title_detail_summary" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginRight="@dimen/dimen_16dp" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:fontFamily="sans-serif-medium" app:fontType="3"/>
            </RelativeLayout>
            <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="@color/dark_grey" android:ellipsize="end" android:id="@+id/movie_detail_summary" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="@dimen/dimen_15dp" android:layout_marginRight="@dimen/dimen_20dp" android:layout_below="@+id/title_header" android:lineSpacingExtra="8dp" android:fontFamily="sans-serif-light" app:fontType="2"/>
            <RelativeLayout android:id="@+id/movie_detail_ReadMoreLayout" android:padding="@dimen/dimen_3dp" android:visibility="gone" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:layout_marginBottom="9dp" android:layout_below="@+id/movie_detail_summary" android:layout_centerHorizontal="true">
                <com.paytm.utility.RoboTextView android:textSize="12sp" android:textColor="@color/color_00b9f5" android:ellipsize="end" android:layout_gravity="left" android:id="@+id/movie_detail_read_more" android:padding="0dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/read_more" android:maxLines="1" android:singleLine="true" android:fontFamily="sans-serif" app:fontType="2"/>
                <ImageView android:id="@+id/readMoreArrow" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_6dp" android:src="@drawable/blue_down_arrow" android:scaleType="fitXY" android:layout_toRightOf="@+id/movie_detail_read_more" android:layout_centerVertical="true"/>
            </RelativeLayout>
        </RelativeLayout>
        <View android:id="@+id/synopsis_divider" android:background="#ebebeb" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/dimen_1dp" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="@dimen/dimen_30dp" android:layout_marginRight="@dimen/dimen_20dp" android:layout_below="@+id/movie_summary_layout"/>
        <RelativeLayout android:id="@+id/videoLayout" android:background="@color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/synopsis_divider">
            <TextView android:textSize="18sp" android:textStyle="normal" android:textColor="@color/color_222222" android:id="@+id/video_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="@dimen/dimen_30dp" android:fontFamily="sans-serif-medium" app:fontType="3"/>
            <androidx.recyclerview.widget.RecyclerView android:id="@+id/videoList" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_16dp" android:layout_marginBottom="@dimen/dimen_8dp" android:layout_below="@+id/video_title"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/galleryLayout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/videoLayout">
            <TextView android:textSize="18sp" android:textStyle="normal" android:textColor="@color/color_222222" android:id="@+id/gallery_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="@dimen/dimen_24dp" android:fontFamily="sans-serif-medium" app:fontType="3"/>
            <androidx.recyclerview.widget.RecyclerView android:id="@+id/galleryList" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_16dp" android:layout_marginBottom="@dimen/dimen_24dp" android:layout_below="@+id/gallery_title"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/entertainment_layout" android:background="#f3f7f8" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/galleryLayout">
            <TextView android:textSize="18sp" android:textStyle="normal" android:textColor="@color/color_222222" android:id="@+id/entertainment_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="@dimen/dimen_24dp" android:fontFamily="sans-serif-medium" app:fontType="3"/>
            <androidx.recyclerview.widget.RecyclerView android:id="@+id/entertainmentList" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_16dp" android:layout_marginBottom="@dimen/dimen_24dp" android:layout_below="@+id/entertainment_title"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/castLayout" android:background="@color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/entertainment_layout">
            <TextView android:textSize="18sp" android:textStyle="normal" android:textColor="@color/color_222222" android:id="@+id/castTitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="@dimen/dimen_24dp" android:fontFamily="sans-serif-medium" app:fontType="3"/>
            <androidx.recyclerview.widget.RecyclerView android:id="@+id/castList" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_16dp" android:layout_marginBottom="@dimen/dimen_8dp" android:layout_below="@+id/castTitle"/>
        </RelativeLayout>
        <ProgressBar android:id="@+id/movie_detail_progress_bar" android:visibility="gone" android:clickable="true" android:layout_width="@dimen/dimen_50dp" android:layout_height="@dimen/dimen_50dp" android:indeterminateDrawable="@drawable/movie_progress_large_holo" android:layout_centerInParent="true"/>
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>
