<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="center_horizontal" android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:gravity="center" android:id="@+id/container_logo" android:padding="1dp" android:layout_width="48dp" android:layout_height="48dp">
        <ImageView android:id="@+id/img_default" android:layout_width="48dp" android:layout_height="48dp" android:scaleType="fitXY" android:layout_centerInParent="true" app:srcCompat="@drawable/iocl_pending_ft"/>
    </RelativeLayout>
    <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_21sp" android:textStyle="normal" android:textColor="@color/color_222222" android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:id="@+id/tv_pending_payemnt_msg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_35dp" android:layout_marginTop="@dimen/dimen_18dp" android:layout_marginRight="@dimen/dimen_35dp" android:text="Payment confirmation pending with ICICI Bank" android:lineSpacingExtra="5sp" android:fontFamily="sans-serif-medium" app:fontType="3"/>
    <com.paytm.utility.RoboTextView android:textSize="@dimen/text_size_12sp" android:textStyle="normal" android:textColor="@color/color_999999" android:gravity="end" android:layout_gravity="center_horizontal" android:id="@+id/txt_order_date_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_9dp" android:text="12:30 pm, 17 Oct 2017" android:lineSpacingExtra="8sp" android:fontFamily="sans-serif" app:fontType="2"/>
    <RelativeLayout android:orientation="horizontal" android:background="@drawable/yellow_rectangle" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_25dp" android:layout_marginTop="@dimen/dimen_25dp" android:layout_marginRight="@dimen/dimen_25dp">
        <ImageView android:id="@+id/iv_tip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/dimen_15dp" android:src="@drawable/tip" android:layout_centerVertical="true"/>
        <com.paytm.utility.RoboTextView android:textSize="@dimen/text_size_12sp" android:textStyle="normal" android:textColor="@color/color_222222" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_12dp" android:layout_marginBottom="@dimen/dimen_14dp" android:text="@string/fastag_tip" android:layout_toRightOf="@+id/iv_tip" android:layout_centerVertical="true" android:lineSpacingExtra="5sp" android:fontFamily="sans-serif"/>
    </RelativeLayout>
    <com.paytm.utility.RoboTextView android:textSize="@dimen/text_size_12sp" android:textStyle="normal" android:textColor="@color/color_444444" android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:id="@+id/tv_my_order_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_17dp" android:text="@string/fastag_payment_confirmaton" android:lineSpacingExtra="4sp" android:fontFamily="sans-serif" app:fontType="2"/>
    <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_14sp" android:textStyle="normal" android:textColor="@color/color_00b9f5" android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:id="@+id/btn_money_deducted" android:background="@drawable/rectangle_blue_stroke_transparent_filled_ft" android:padding="@dimen/dimen_15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_18dp" android:text="@string/fastag_money_dedcted" android:lineSpacingExtra="-2sp" android:fontFamily="sans-serif-medium"/>
    <ProgressBar android:id="@+id/pb" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:indeterminateOnly="true" android:indeterminateDuration="1000" android:indeterminateBehavior="cycle" android:layout_centerInParent="true"/>
</LinearLayout>
