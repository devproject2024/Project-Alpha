<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/newCardContainer" android:paddingTop="17dp" android:paddingBottom="17dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RadioButton android:enabled="false" android:textSize="15sp" android:textStyle="bold" android:textColor="#222222" android:id="@+id/radio_button" android:background="@color/transparent" android:paddingLeft="@dimen/dimen_10dp" android:paddingRight="@dimen/dimen_10dp" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:button="@drawable/radio_drawable" android:fontFamily="sans-serif"/>
    <TextView android:textSize="15sp" android:textStyle="bold" android:textColor="#222222" android:id="@+id/tvNewCardTitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/native_new_credit_card_title" android:layout_toRightOf="@+id/radio_button" android:fontFamily="sans-serif"/>
    <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#b8c2cb" android:id="@+id/cardInputTitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:text="@string/native_enter_card_number" android:layout_below="@+id/tvNewCardTitle" android:fontFamily="sans-serif-medium"/>
    <androidx.appcompat.widget.AppCompatEditText android:textSize="18sp" android:textStyle="bold" android:textColor="#222222" android:id="@+id/etCardNumber" android:background="@drawable/edit_text_blue_line" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/native_enter_card_number" android:singleLine="true" android:maxLength="23" android:digits="0123456789-" android:layout_below="@+id/cardInputTitle" android:inputType="phone" android:textCursorDrawable="@drawable/paytm_cursor_blue" android:fontFamily="sans-serif"/>
    <ImageView android:id="@+id/iv_card_logo" android:visibility="gone" android:layout_width="24dp" android:layout_height="24dp" android:layout_marginLeft="@dimen/activity_margin_left" android:layout_marginBottom="10dp" android:layout_alignBottom="@+id/etCardNumber" android:layout_alignParentRight="true" android:layout_alignParentEnd="true"/>
    <ImageView android:id="@+id/iv_cross" android:padding="@dimen/dimen_5dp" android:visibility="gone" android:layout_width="@dimen/dimen_32dp" android:layout_height="@dimen/dimen_32dp" android:layout_marginLeft="@dimen/dimen_10dp" android:layout_marginBottom="7dp" android:layout_toLeftOf="@+id/iv_card_logo" android:layout_alignBottom="@+id/etCardNumber" android:layout_alignWithParentIfMissing="true" android:layout_toStartOf="@+id/iv_card_logo" app:srcCompat="@drawable/nativesdk_close"/>
    <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#1d252d" android:id="@+id/tvEmiText" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="@string/emi_option_available" android:layout_below="@+id/etCardNumber" android:fontFamily="sans-serif"/>
    <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#fd5c5c" android:id="@+id/tvInputError" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:layout_below="@+id/tvEmiText" android:fontFamily="sans-serif"/>
    <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/tvErrorMessage" android:background="#fff5e5" android:padding="8dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:layout_below="@+id/tvEmiText" android:lineSpacingExtra="4sp" android:fontFamily="sans-serif-medium"/>
</RelativeLayout>
