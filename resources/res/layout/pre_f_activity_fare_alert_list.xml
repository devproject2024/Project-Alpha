<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/actionbar_fare_alerts" android:layout_width="match_parent" android:layout_height="57dp">
        <ImageView android:id="@+id/img_alert_list_back" android:padding="@dimen/dimen_12dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView android:textSize="15sp" android:textStyle="bold" android:textColor="@color/title_blue" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/fare_alerts" android:layout_centerInParent="true"/>
        <TextView android:textSize="@dimen/cart_13sp" android:textColor="@color/flight_tab_blue" android:id="@+id/txt_fare_alert_list_add_alert" android:padding="@dimen/dimen_12dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/add_alert" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View android:id="@+id/action_bar_divider" android:background="@color/color_dcdcdc" android:layout_width="match_parent" android:layout_height="@dimen/dimen_1dp" android:layout_below="@+id/actionbar_fare_alerts"/>
    <RelativeLayout android:id="@+id/lyt_note_subscribed" android:background="@color/color_f2f7fc" android:visibility="visible" android:layout_width="match_parent" android:layout_height="@dimen/dimen_50dp" android:layout_marginTop="@dimen/dimen_1dp" android:layout_below="@+id/action_bar_divider">
        <ImageView android:id="@+id/img_fare_alert_list_bell" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_12dp" android:layout_marginTop="3dp" android:layout_alignTop="@+id/txt_fare_alert_subscribed"/>
        <ImageView android:id="@+id/img_fare_alert_list_close" android:layout_width="@dimen/dimen_10dp" android:layout_height="@dimen/dimen_10dp" android:layout_marginTop="5dp" android:layout_marginRight="@dimen/dimen_15dp" android:layout_alignTop="@+id/txt_fare_alert_subscribed" android:layout_alignParentRight="true"/>
        <TextView android:textSize="12sp" android:textColor="@color/color_666666" android:id="@+id/txt_fare_alert_subscribed" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_9dp" android:layout_marginRight="@dimen/dimen_10dp" android:text="@string/note_fare_alert_subscribed" android:layout_toLeftOf="@+id/img_fare_alert_list_close" android:layout_toRightOf="@+id/img_fare_alert_list_bell" android:layout_centerVertical="true" android:lineSpacingExtra="2sp"/>
    </RelativeLayout>
    <TextView android:textSize="10sp" android:textStyle="normal" android:textColor="@color/title_blue" android:id="@+id/txt_fare_alert_list_terms" android:padding="@dimen/dimen_15dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/terms_and_conditions" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" android:fontFamily="sans-serif"/>
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/recycler_view_fare_alert" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_5dp" android:layout_above="@+id/txt_fare_alert_list_terms" android:layout_below="@+id/lyt_note_subscribed"/>
    <RelativeLayout android:id="@+id/lyt_fare_alert_list_edit" android:background="#80000000" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
            <TextView android:textSize="@dimen/dimen_14sp" android:textColor="@color/color_909090" android:gravity="center_vertical" android:id="@+id/txt_fare_alert_list_edit" android:background="@color/white" android:paddingLeft="@dimen/dimen_15dp" android:layout_width="match_parent" android:layout_height="@dimen/dimen_50dp" android:text="@string/edit"/>
            <TextView android:textSize="@dimen/dimen_14sp" android:textColor="@color/color_fd5c5c" android:gravity="center_vertical" android:id="@+id/txt_fare_alert_list_delete" android:background="@color/white" android:paddingLeft="@dimen/dimen_15dp" android:layout_width="match_parent" android:layout_height="@dimen/dimen_50dp" android:text="@string/delete"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
