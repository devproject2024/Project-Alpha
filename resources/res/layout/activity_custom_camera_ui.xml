<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/pictureLayout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
        <ImageView android:id="@+id/selfie_img" android:layout_width="match_parent" android:layout_height="match_parent"/>
        <androidx.appcompat.widget.AppCompatImageView android:id="@+id/backImg" android:padding="20dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0" app:srcCompat="@drawable/selfie_back_arrow"/>
        <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="30dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0">
            <androidx.appcompat.widget.AppCompatImageView android:id="@+id/iv_selfie_upload" android:layout_width="wrap_content" android:layout_height="wrap_content" app:srcCompat="@drawable/selfie_upload"/>
            <androidx.appcompat.widget.AppCompatImageView android:id="@+id/iv_selfie_decline" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="48dp" android:layout_toRightOf="@+id/iv_selfie_upload" app:srcCompat="@drawable/selfie_decline"/>
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/cameraLayout" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent">
        <net.one97.paytm.upgradeKyc.camera.AutoFitTextureView android:id="@+id/camera_view" android:visibility="visible" android:layout_width="0dp" android:layout_height="0dp" android:adjustViewBounds="true" android:keepScreenOn="true" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0"/>
        <androidx.appcompat.widget.AppCompatImageView android:id="@+id/crossImg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="26dp" android:layout_marginRight="21dp" app:layout_constraintEnd_toEndOf="0" app:layout_constraintTop_toTopOf="0" app:srcCompat="@drawable/selfie_cross"/>
        <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/bottomLayout" android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintStart_toStartOf="0">
            <androidx.appcompat.widget.AppCompatImageView android:id="@+id/iv_capture_image" android:padding="20dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="10dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:srcCompat="@drawable/selfie_click"/>
            <androidx.appcompat.widget.AppCompatImageView android:id="@+id/iv_rotate_camera" android:padding="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="55dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0" app:srcCompat="@drawable/camera_rotation"/>
            <androidx.appcompat.widget.AppCompatImageView android:id="@+id/iv_flash_camera" android:padding="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="55dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0" app:layout_constraintTop_toTopOf="0" app:srcCompat="@drawable/flash_auto"/>
            <TextView android:textSize="12sp" android:textColor="#ffffff" android:id="@+id/tv_auto" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="40dp" android:text="Auto" android:fontFamily="sans-serif-medium" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintRight_toLeftOf="@+id/iv_flash_camera" app:layout_constraintTop_toTopOf="0"/>
            <TextView android:textSize="12sp" android:textColor="#ffffff" android:id="@+id/tv_off" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="40dp" android:text="Off" android:fontFamily="sans-serif-medium" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintRight_toLeftOf="@+id/tv_auto" app:layout_constraintTop_toTopOf="0"/>
            <TextView android:textSize="12sp" android:textColor="#ffffff" android:id="@+id/tv_on" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="40dp" android:text="On" android:fontFamily="sans-serif-medium" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintRight_toLeftOf="@+id/tv_off" app:layout_constraintTop_toTopOf="0"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="#ffffff" android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="58dp" android:text="Take a Selfie" android:fontFamily="sans-serif" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0"/>
        <TextView android:textSize="14sp" android:textColor="#ffffff" android:id="@+id/descp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="Keep your face inside the box" android:fontFamily="sans-serif" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/title"/>
        <ImageView android:id="@+id/rounrect" android:background="@drawable/selfie_bg_rount_rect_grey" android:visibility="gone" android:layout_width="match_parent" android:layout_height="0dp" android:layout_marginLeft="35dp" android:layout_marginTop="49dp" android:layout_marginRight="35dp" android:layout_marginBottom="100dp" app:layout_constraintBottom_toTopOf="@+id/bottomLayout" app:layout_constraintTop_toBottomOf="@+id/descp"/>
        <View android:id="@+id/lineViewone" android:visibility="invisible" android:layout_width="0dp" android:layout_height="1dp" android:layout_marginTop="25dp" app:layout_constraintEnd_toEndOf="@+id/rounrect" app:layout_constraintStart_toStartOf="@+id/rounrect" app:layout_constraintTop_toTopOf="@+id/rounrect"/>
        <androidx.appcompat.widget.AppCompatImageView android:id="@+id/top_left_img" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="25dp" app:layout_constraintBottom_toTopOf="@+id/lineViewone" app:layout_constraintStart_toStartOf="0" app:srcCompat="@drawable/top_left"/>
        <androidx.appcompat.widget.AppCompatImageView android:id="@+id/top_right_img" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="25dp" app:layout_constraintBottom_toTopOf="@+id/lineViewone" app:layout_constraintEnd_toEndOf="0" app:srcCompat="@drawable/top_right"/>
        <View android:id="@+id/lineViewtwo" android:visibility="invisible" android:layout_width="0dp" android:layout_height="1dp" android:layout_marginBottom="25dp" app:layout_constraintBottom_toBottomOf="@+id/rounrect" app:layout_constraintEnd_toEndOf="@+id/rounrect" app:layout_constraintStart_toStartOf="@+id/rounrect"/>
        <androidx.appcompat.widget.AppCompatImageView android:id="@+id/bottom_left_img" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="25dp" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="@+id/lineViewtwo" app:srcCompat="@drawable/bottom_left"/>
        <androidx.appcompat.widget.AppCompatImageView android:id="@+id/bottom_right_img" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="25dp" app:layout_constraintEnd_toEndOf="0" app:layout_constraintTop_toTopOf="@+id/lineViewtwo" app:srcCompat="@drawable/bottom_right"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
