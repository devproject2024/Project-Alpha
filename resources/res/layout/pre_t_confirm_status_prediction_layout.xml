<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="#ffffff" android:layout_width="270dp" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/confirm_tkt_label" android:layout_width="wrap_content" android:layout_height="22.5dp" android:layout_marginLeft="20dp" android:layout_marginTop="25dp" android:layout_marginRight="20dp">
        <com.paytm.utility.RoboTextView android:textSize="16sp" android:textColor="#0a0a0a" android:id="@+id/irctc_heading" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Confirm Status Prediction" app:fontType="3"/>
        <ImageView android:id="@+id/dialog_close" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/pre_t_close_grey" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <com.paytm.utility.RoboTextView android:textSize="13sp" android:textColor="#393939" android:id="@+id/prediction_message" android:background="@color/instruction_bg" android:paddingLeft="10dp" android:paddingTop="6.5dp" android:paddingRight="10dp" android:paddingBottom="6.5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="23dp" android:layout_marginRight="20dp" android:text="There is a 30% chance of this ticket getting confirmed before travel date." android:layout_below="@+id/confirm_tkt_label" android:layout_centerInParent="true" app:fontType="2"/>
    <RelativeLayout android:orientation="horizontal" android:id="@+id/status_info" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="28dp" android:layout_marginRight="20dp" android:layout_below="@+id/prediction_message">
        <com.paytm.utility.RoboTextView android:textSize="13sp" android:textColor="#909090" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Current Status" android:layout_alignParentLeft="true" app:fontType="2"/>
        <com.paytm.utility.RoboTextView android:textSize="13sp" android:textColor="#0a0a0a" android:id="@+id/current_status" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" app:fontType="2"/>
    </RelativeLayout>
    <View android:id="@+id/divider" android:background="#ebebeb" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="20dp" android:layout_marginTop="17.5dp" android:layout_marginRight="20dp" android:layout_below="@+id/status_info"/>
    <ImageView android:id="@+id/powered_by_icon" android:layout_width="50dp" android:layout_height="40dp" android:layout_marginTop="20.4dp" android:layout_marginRight="20dp" android:layout_marginBottom="13dp" android:layout_below="@+id/divider" android:layout_alignParentRight="true"/>
</RelativeLayout>
