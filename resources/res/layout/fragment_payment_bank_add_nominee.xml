<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/toolbarLayout" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/add_nominee_img_close" android:padding="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/back_arrow" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
        <ImageView android:paddingTop="15dp" android:paddingBottom="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/pb_ic_payments_bank_logo" android:layout_centerInParent="true"/>
    </RelativeLayout>
    <View android:id="@+id/view_toolbar" android:background="#ebebeb" android:layout_width="match_parent" android:layout_height="1dp"/>
    <androidx.core.widget.NestedScrollView android:id="@+id/add_nominee_sv_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/add_nominee_tv_title">
        <LinearLayout android:orientation="vertical" android:id="@+id/ll_nominee_view" android:padding="@dimen/dimen_20dp" android:layout_width="match_parent" android:layout_height="match_parent">
            <com.paytm.utility.RoboTextView android:textSize="21sp" android:textColor="@android:color/black" android:id="@+id/add_nominee_tv_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/please_fill_your_nominee_detail" android:layout_below="@+id/separator" android:layout_alignParentTop="true" app:fontType="4"/>
            <com.google.android.material.textfield.TextInputLayout android:theme="@style/PBPaytmEditTextTheme" android:id="@+id/add_nominee_til_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="11dp">
                <com.google.android.material.textfield.TextInputEditText android:id="@+id/add_nominee_edt_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/bank_nominee_name" android:singleLine="true" android:maxLength="40" android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789" android:inputType="textCapWords" android:imeOptions="actionNext"/>
            </com.google.android.material.textfield.TextInputLayout>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp">
                <com.google.android.material.textfield.TextInputLayout android:theme="@style/PBPaytmEditTextTheme" android:layout_gravity="center_vertical" android:id="@+id/add_nominee_til_dob" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputEditText android:id="@+id/add_nominee_edt_dob" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/date_of_birth" android:singleLine="true" android:maxLength="10" android:inputType="number" android:imeOptions="actionNext"/>
                </com.google.android.material.textfield.TextInputLayout>
                <ImageView android:id="@+id/add_nominee_img_dob_info" android:paddingLeft="10dp" android:paddingTop="20dp" android:paddingRight="10dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/pb_ic_info" android:layout_alignParentTop="true" android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <com.google.android.material.textfield.TextInputLayout android:theme="@style/PBPaytmEditTextTheme" android:id="@+id/add_nominee_til_relationship" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp">
                <com.google.android.material.textfield.TextInputEditText android:id="@+id/add_nominee_edt_relationship" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/relationship" android:singleLine="true" android:editable="false" android:imeOptions="actionNext"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout android:theme="@style/PBPaytmEditTextTheme" android:id="@+id/add_nominee_til_address_line1" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp">
                <com.google.android.material.textfield.TextInputEditText android:id="@+id/add_nominee_edt_address_line1" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/house_building_apartment" android:singleLine="true" android:maxLength="50" android:inputType="textCapWords" android:imeOptions="actionNext"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout android:theme="@style/PBPaytmEditTextTheme" android:id="@+id/add_nominee_til_address_line2" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp">
                <com.google.android.material.textfield.TextInputEditText android:id="@+id/add_nominee_edt_address_line2" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/street_name" android:singleLine="true" android:maxLength="50" android:inputType="textCapWords" android:imeOptions="actionNext"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout android:theme="@style/PBPaytmEditTextTheme" android:id="@+id/add_nominee_til_address_line3" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp">
                <com.google.android.material.textfield.TextInputEditText android:id="@+id/add_nominee_edt_address_line3" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/area_locality_sector" android:singleLine="true" android:maxLength="50" android:inputType="textCapWords" android:imeOptions="actionNext"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout android:theme="@style/PBPaytmEditTextTheme" android:id="@+id/add_nominee_til_pincode" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp">
                <com.google.android.material.textfield.TextInputEditText android:id="@+id/add_nominee_edt_pincode" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/pin" android:singleLine="true" android:maxLength="6" android:inputType="number" android:imeOptions="actionNext"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout android:theme="@style/PBPaytmEditTextTheme" android:id="@+id/add_nominee_til_city_town" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp">
                <AutoCompleteTextView android:id="@+id/add_nominee_edt_city" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/city" android:singleLine="true" android:imeOptions="actionNext"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout android:theme="@style/PBPaytmEditTextTheme" android:id="@+id/add_nominee_til_state" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp">
                <com.google.android.material.textfield.TextInputEditText android:id="@+id/add_nominee_edt_state" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/state" android:singleLine="true" android:editable="false" android:imeOptions="actionNext"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout android:theme="@style/PBPaytmEditTextTheme" android:id="@+id/add_nominee_til_email_address" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp">
                <com.google.android.material.textfield.TextInputEditText android:id="@+id/add_nominee_edt_email" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/email_address_optional" android:singleLine="true" android:maxLength="50" android:editable="false" android:inputType="textEmailAddress" android:imeOptions="actionNext"/>
            </com.google.android.material.textfield.TextInputLayout>
            <FrameLayout android:id="@+id/fragment_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_20dp"/>
            <Button android:textSize="20sp" android:textColor="@android:color/white" android:id="@+id/paytments_bank_add_nominee_btn_submit" android:background="@drawable/pb_button_click" android:padding="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginBottom="20dp" android:text="@string/submit" android:textAllCaps="false"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
