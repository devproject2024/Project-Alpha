<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:tag="layout/feed_feedback_action_layout_0" android:padding="@dimen/feed_bottomsheet_padding" android:layout_width="match_parent" android:layout_height="match_parent" android:animateLayoutChanges="true">
    <TextView android:textSize="20sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/feedback_header" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_marginRight="15dp" android:text="@string/feed_feedback_header" android:fontFamily="sans-serif-medium"/>
    <ImageView android:id="@+id/close" android:layout_width="24dp" android:layout_height="24dp" android:layout_marginTop="2dp" android:layout_alignTop="@+id/feedback_header" android:layout_alignParentRight="true" android:layout_alignParentEnd="true" app:srcCompat="@drawable/feed_ic_close_round"/>
    <TextView android:textSize="16sp" android:textStyle="normal" android:textColor="#444444" android:id="@+id/feedback_info" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="38dp" android:text="@string/feed_feedback_info" android:layout_toLeftOf="@+id/close" android:layout_below="@+id/feedback_header" android:lineSpacingExtra="4sp" android:fontFamily="sans-serif"/>
    <androidx.core.widget.NestedScrollView android:id="@+id/scrollview" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="150dp" android:layout_marginTop="20dp" android:layout_marginBottom="20dp" android:layout_below="@+id/feedback_info">
        <net.one97.paytm.feed.utility.FlowLayout android:id="@+id/flowlayout" android:layout_width="match_parent" android:layout_height="120dp" app:feedflChildSpacing="4dp" app:feedflChildSpacingForLastRow="20dp" app:feedflRowSpacing="8dp"/>
    </androidx.core.widget.NestedScrollView>
    <TextView android:textSize="14sp" android:textColor="@color/feed_white" android:gravity="center" android:id="@+id/sendfeedback" android:background="@drawable/feed_bg_blue_round_rect" android:padding="@dimen/feed_padding_bottomsheet_button" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="20dp" android:text="@string/feed_send" android:layout_below="@+id/scrollview" android:fontFamily="sans-serif-medium"/>
</RelativeLayout>
