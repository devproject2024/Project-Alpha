<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:gravity="center_horizontal" android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/close_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dimen_16dp" android:src="@drawable/close_icon"/>
    </LinearLayout>
    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
        <com.paytm.utility.RoboTextView android:textSize="@dimen/merchant_detail_title_text_size" android:textColor="@color/greyish_brown" android:gravity="center_horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_14dp" android:text="@string/extend_dispatch_time" app:fontType="2"/>
        <com.paytm.utility.RoboTextView android:textSize="@dimen/merchant_details_rating_text_size" android:textColor="@color/color_909090" android:gravity="center_horizontal" android:id="@+id/current_date" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_4dp" app:fontType="2"/>
        <com.paytm.utility.RoboTextView android:textSize="@dimen/merchant_details_rating_text_size" android:textColor="@color/greyish_brown" android:gravity="center_horizontal" android:id="@+id/extended_date" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_23dp" app:fontType="4"/>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:weightSum="100">
            <View android:layout_gravity="top" android:background="@color/extend_dispatch_arrow_view_color" android:layout_width="0dp" android:layout_height="@dimen/dimen_1dp" android:layout_weight="49"/>
            <ImageView android:layout_width="0dp" android:layout_height="@dimen/dimen_5dp" android:src="@drawable/arrow_down" android:layout_weight="2"/>
            <View android:layout_gravity="top" android:background="@color/extend_dispatch_arrow_view_color" android:layout_width="0dp" android:layout_height="@dimen/dimen_1dp" android:layout_weight="49"/>
        </LinearLayout>
        <androidx.viewpager.widget.ViewPager android:id="@+id/date_view_pager" android:layout_width="match_parent" android:layout_height="80dp" android:layout_marginTop="@dimen/dimen_8dp"/>
        <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_12sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/done_button" android:background="@color/cst_order_select_txt_color" android:layout_width="match_parent" android:layout_height="@dimen/dimen_45dp" android:layout_marginLeft="@dimen/dimen_13dp" android:layout_marginRight="@dimen/dimen_13dp" android:layout_marginBottom="@dimen/dimen_13dp" android:text="@string/done" app:fontType="4"/>
    </LinearLayout>
</LinearLayout>
