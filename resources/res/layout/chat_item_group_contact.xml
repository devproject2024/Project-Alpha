<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:id="@+id/header_container" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textStyle="bold" android:textColor="#1d2f54" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:text="Contacts" android:layout_marginStart="15dp"/>
        <View android:background="#e8edf3" android:layout_width="match_parent" android:layout_height="@dimen/dimen_1dp" android:layout_marginTop="12dp"/>
    </LinearLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <com.paytm.android.chat.view.ChatHeadView android:id="@+id/image_group_channel_list_cover" android:layout_width="@dimen/dimen_48dp" android:layout_height="@dimen/dimen_48dp" android:layout_marginTop="13dp" android:layout_marginBottom="13dp" android:layout_centerVertical="true" android:layout_marginStart="15dp" android:layout_marginEnd="12dp"/>
        <TextView android:textSize="14sp" android:textColor="@color/groupChatTopic" android:ellipsize="end" android:layout_gravity="center" android:id="@+id/text_group_contact_name" android:background="@null" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:layout_centerVertical="true" android:layout_marginEnd="15dp" android:layout_toEndOf="@+id/image_group_channel_list_cover"/>
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginEnd="15dp" android:layout_alignParentEnd="true" app:srcCompat="@drawable/chat_chevron_right"/>
    </RelativeLayout>
</LinearLayout>
