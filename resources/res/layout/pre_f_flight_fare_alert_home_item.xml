<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/lyt_delete_background" android:background="@color/color_ff203b" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/lyt_delete_left" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_15dp" android:layout_alignParentLeft="true" android:layout_centerVertical="true">
            <ImageView android:id="@+id/delete_icon_left" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:textSize="10sp" android:textStyle="normal" android:textColor="#ffffff" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="@string/delete" android:lineSpacingExtra="3.4sp" android:fontFamily="sans-serif"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/lyt_delete_right" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_15dp" android:layout_alignParentRight="true" android:layout_centerVertical="true">
            <ImageView android:id="@+id/delete_icon_right" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:textSize="10sp" android:textStyle="normal" android:textColor="#ffffff" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="@string/delete" android:lineSpacingExtra="3.4sp" android:fontFamily="sans-serif"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/whole_item_container" android:background="@color/white" android:paddingLeft="15dp" android:visibility="visible" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/img_blue_bell" android:paddingLeft="@dimen/dimen_10dp" android:paddingRight="@dimen/dimen_15dp" android:paddingBottom="@dimen/dimen_10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true"/>
        <LinearLayout android:gravity="right" android:orientation="vertical" android:id="@+id/lyt_price_trend_item" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/img_blue_bell">
            <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_5dp">
                <TextView android:textSize="@dimen/dimen_9sp" android:textColor="@color/flight_tab_blue" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="-3.5dp" android:text="@string/rupee_symbol"/>
                <TextView android:textSize="@dimen/dimen_14sp" android:textColor="@color/flight_tab_blue" android:id="@+id/txt_fare_alert_item_price" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_2dp" android:text=""/>
            </LinearLayout>
            <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp">
                <ImageView android:id="@+id/img_fare_alert_item_trend" android:layout_width="wrap_content" android:layout_height="wrap_content" app:srcCompat="@drawable/pre_f_arrow_down_trend"/>
                <TextView android:textSize="@dimen/dimen_7dp" android:textColor="@color/green_fare_alert" android:id="@+id/txt_fare_alert_item_rupee" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_5dp" android:layout_marginTop="-1dp" android:text="@string/rupee_symbol"/>
                <TextView android:textSize="11sp" android:textColor="@color/green_fare_alert" android:id="@+id/txt_fare_alert_item_trend_price" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_1dp" android:text=""/>
            </LinearLayout>
            <TextView android:textSize="9sp" android:textColor="@color/warm_grey" android:id="@+id/txt_fare_alert_item_duration" android:paddingBottom="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/src_dest_value_container" android:paddingTop="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_10dp" android:layout_toLeftOf="@+id/lyt_price_trend_item">
            <com.paytm.utility.RoboTextView android:textSize="15sp" android:textColor="#ff323232" android:id="@+id/flight_recent_tab_source_city_name" android:layout_width="wrap_content" android:layout_height="wrap_content" app:fontType="2"/>
            <ImageView android:layout_gravity="center_vertical" android:id="@+id/flight_recent_tab_image_view_junry_type" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" app:srcCompat="@drawable/pre_f_actionbar_right_arrow"/>
            <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="#ff323232" android:id="@+id/flight_recent_tab_destination_city_name" android:layout_width="wrap_content" android:layout_height="wrap_content" app:fontType="2"/>
        </LinearLayout>
        <com.paytm.utility.RoboTextView android:textSize="11sp" android:textColor="#4a4a4a" android:id="@+id/flight_recent_tab_date_of_travel" android:paddingTop="1dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_10dp" android:layout_below="@+id/src_dest_value_container" app:fontType="2"/>
        <TextView android:textSize="10sp" android:textStyle="normal" android:textColor="#909090" android:paddingTop="3dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_10dp" android:text="@string/default_traveller_count" android:layout_below="@+id/flight_recent_tab_date_of_travel" android:fontFamily="sans-serif"/>
        <View android:id="@+id/seperator" android:background="@color/passbook_separators" android:layout_width="match_parent" android:layout_height="1dp" android:layout_below="@+id/lyt_price_trend_item" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</FrameLayout>
