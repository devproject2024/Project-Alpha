        <ImageView android:id="@+id/imgSearch" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_2dp" android:layout_centerVertical="true" android:layout_marginStart="@dimen/dimen_2dp" app:srcCompat="@drawable/ic_search_icon"/>
