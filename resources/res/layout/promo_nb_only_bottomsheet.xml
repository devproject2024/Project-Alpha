        <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/llApplyOffer" android:background="@drawable/promo_pay_button_click" android:padding="@dimen/dimen_20dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_10dp" android:layout_marginRight="@dimen/dimen_10dp" android:layout_marginBottom="32dp" app:layout_constraintBottom_toTopOf="@+id/bottomSeparator1" app:layout_constraintLeft_toLeftOf="0">
            <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="#ffffff" android:gravity="center_horizontal" android:id="@+id/tvApplyOffer" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/apply_Offer" android:lineSpacingExtra="-1sp" android:fontFamily="sans-serif"/>
