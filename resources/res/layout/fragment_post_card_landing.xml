<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/rl_landing_header" android:background="@drawable/postcard_landing_scr_bg" android:padding="@dimen/dimen_20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/iv_back_button" android:layout_width="24dp" android:layout_height="24dp" android:layout_marginTop="@dimen/dimen_15dp" android:src="@drawable/ic_arrow_back_white_24dp" android:contentDescription="TODO"/>
        <FrameLayout android:id="@+id/lifafaimageLayout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_alignParentEnd="true">
            <ImageView android:id="@+id/iv_envelope" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/lifafa_star_img" android:contentDescription="TODO"/>
            <ImageView android:layout_gravity="bottom|left|center_vertical|center_horizontal|center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dimen_5dp" android:src="@drawable/ic_lifafa_beta" android:contentDescription="TODO"/>
        </FrameLayout>
        <com.paytm.utility.RoboTextView android:textSize="17sp" android:textStyle="bold" android:textColor="#ffffff" android:id="@+id/tv_spread_happiness" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_20dp" android:text="@string/postcard_spread_happiness" android:layout_below="@+id/iv_back_button" android:lineSpacingExtra="7sp" android:fontFamily="sans-serif"/>
        <com.paytm.utility.RoboTextView android:textSize="15sp" android:textStyle="normal" android:textColor="#ffffff" android:id="@+id/tv_send_lucky_money" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:layout_marginRight="@dimen/dimen_110dp" android:text="@string/send_lucky_money_to_fmaily" android:layout_below="@+id/tv_spread_happiness" android:lineSpacingExtra="7sp" android:fontFamily="sans-serif-light" android:layout_marginEnd="@dimen/dimen_110dp"/>
        <RelativeLayout android:id="@+id/rl_send_lucky_lifafa_btn" android:background="@drawable/background_send_lucky_lifafa" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_20dp" android:layout_below="@+id/tv_send_lucky_money">
            <com.paytm.utility.RoboTextView android:textSize="15sp" android:textStyle="normal" android:textColor="@color/bright_sky_blue" android:padding="@dimen/dimen_13dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/send_a_lucky_lifafa" android:maxLines="1" android:drawableRight="@drawable/arrow_right_blue" android:drawablePadding="@dimen/dimen_5dp" android:layout_centerInParent="true" android:lineSpacingExtra="2sp" android:drawableEnd="@drawable/arrow_right_blue" android:fontFamily="sans-serif-medium"/>
        </RelativeLayout>
        <com.paytm.utility.RoboTextView android:textSize="15sp" android:textStyle="normal" android:textColor="#ffffff" android:id="@+id/tvSendLifafa" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_5dp" android:layout_marginTop="@dimen/dimen_15dp" android:text="@string/or_send_lifafa_to_a_friend" android:drawableRight="@drawable/arrow_right" android:drawablePadding="@dimen/dimen_5dp" android:layout_below="@+id/rl_send_lucky_lifafa_btn" android:lineSpacingExtra="7sp" android:drawableEnd="@drawable/arrow_right" android:fontFamily="sans-serif-light" android:layout_marginStart="@dimen/dimen_5dp"/>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/rl_landing_header">
        <com.google.android.material.tabs.TabLayout android:id="@+id/tabs" android:background="@color/color_fafbfb" android:layout_width="match_parent" android:layout_height="wrap_content" app:tabBackground="@color/color_fafbfb" app:tabGravity="0" app:tabIndicatorColor="@color/bright_sky_blue" app:tabMode="1" app:tabPaddingEnd="@dimen/dimen_5dp" app:tabPaddingStart="@dimen/dimen_5dp" app:tabSelectedTextColor="#002e6e" app:tabTextAppearance="@style/TextAppearance.Widget.TabWidget" app:tabTextColor="@color/bright_sky_blue"/>
        <androidx.viewpager.widget.ViewPager android:id="@+id/mypostcards_pager" android:layout_width="match_parent" android:layout_height="match_parent"/>
    </LinearLayout>
</RelativeLayout>
