<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <com.paytm.utility.RoboTextView android:textSize="12sp" android:textColor="@color/color_d0021b" android:id="@+id/common_error" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="10dp" android:layout_marginRight="@dimen/dimen_20dp" android:text="@string/irctc_mobile_wrong_otp" android:layout_below="@+id/mobile_otp_divider" app:fontType="2"/>
    <RelativeLayout android:id="@+id/irctc_mobile_otp_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="15dp" android:layout_marginRight="@dimen/dimen_20dp">
        <com.google.android.material.textfield.TextInputLayout android:theme="@style/train_login_dialog_theme" android:id="@+id/irctc_mobile_otp_edit_parent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:hint="@string/otp_on_mobile" android:layout_toLeftOf="@+id/lv_mobile_resend_container" android:layout_alignParentLeft="true">
            <EditText android:textSize="15sp" android:textColor="@color/color_000000" android:id="@+id/irctc_mobile_otp_edit" android:background="@android:color/transparent" android:paddingTop="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true" android:inputType="number"/>
        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout android:gravity="center_vertical" android:id="@+id/lv_mobile_resend_container" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:layout_above="@+id/mobile_otp_divider" android:layout_alignParentRight="true">
            <ImageView android:id="@+id/iv_mobile_otp_clear" android:visibility="gone" android:layout_width="@dimen/dimen_16dp" android:layout_height="@dimen/dimen_16dp" android:layout_marginRight="@dimen/dimen_2dp" android:src="@drawable/pre_t_cross_grey"/>
            <com.paytm.utility.RoboTextView android:textSize="11sp" android:textColor="@color/train_view_sep" android:id="@+id/resend_mobile_otp_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_3dp" android:text="@string/resend_otp" app:fontType="3"/>
        </LinearLayout>
        <View android:id="@+id/mobile_otp_divider" android:background="@color/bg_grid_grey" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="@dimen/dimen_10dp" android:layout_below="@+id/irctc_mobile_otp_edit_parent"/>
        <com.paytm.utility.RoboTextView android:textSize="9sp" android:textColor="@color/color_d0021b" android:id="@+id/mobile_otp_error_text" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:text="@string/irctc_mobile_wrong_otp" android:layout_below="@+id/mobile_otp_divider" app:fontType="1"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/irctc_email_otp_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="20dp" android:layout_marginRight="@dimen/dimen_20dp">
        <com.google.android.material.textfield.TextInputLayout android:theme="@style/train_login_dialog_theme" android:id="@+id/irctc_email_otp_edit_parent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:hint="Enter email OTP" android:layout_toLeftOf="@+id/lv_email_resend_container" android:layout_alignParentLeft="true">
            <EditText android:textSize="15sp" android:textColor="@color/color_000000" android:id="@+id/irctc_email_otp_edit" android:background="@android:color/transparent" android:paddingTop="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true" android:inputType="number"/>
        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout android:gravity="center_vertical" android:id="@+id/lv_email_resend_container" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:layout_above="@+id/otp_divider" android:layout_alignParentRight="true">
            <ImageView android:id="@+id/iv_email_otp_clear" android:visibility="gone" android:layout_width="@dimen/dimen_16dp" android:layout_height="@dimen/dimen_16dp" android:layout_marginRight="@dimen/dimen_2dp" android:src="@drawable/pre_t_cross_grey"/>
            <com.paytm.utility.RoboTextView android:textSize="11sp" android:textColor="@color/train_view_sep" android:id="@+id/resend_email_otp_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_3dp" android:text="@string/resend_otp" app:fontType="3"/>
        </LinearLayout>
        <View android:id="@+id/otp_divider" android:background="@color/bg_grid_grey" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="@dimen/dimen_10dp" android:layout_below="@+id/irctc_email_otp_edit_parent"/>
        <com.paytm.utility.RoboTextView android:textSize="9sp" android:textColor="@color/color_d0021b" android:id="@+id/email_otp_error_text" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:text="@string/irctc_email_wrong_otp" android:layout_below="@+id/otp_divider" app:fontType="1"/>
    </RelativeLayout>
</LinearLayout>
