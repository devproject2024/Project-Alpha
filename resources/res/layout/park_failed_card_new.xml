<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/color_fafafa" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:layout_gravity="center" android:id="@+id/recharge_failed_card_view" android:background="@color/color_fafafa" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:gravity="center" android:orientation="vertical" android:background="@color/text_color_proceed_button" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="14dp">
            <ImageView android:id="@+id/failed_order_status_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:src="@drawable/order_failed" android:scaleType="center" android:layout_centerHorizontal="true"/>
            <com.paytm.utility.RoboTextView android:textSize="16sp" android:textColor="@android:color/white" android:gravity="center" android:layout_gravity="center" android:id="@+id/failed_recharge_badge" android:background="@drawable/summary_failed_background" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginBottom="5dp" android:text="@string/event_booking_failed" android:layout_below="@+id/failed_order_status_icon" android:layout_centerHorizontal="true" app:fontType="3"/>
            <com.paytm.utility.RoboTextView android:textSize="12sp" android:textColor="#9b9b9b" android:textColorLink="@color/blue_button_text" android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="20dp" android:layout_marginRight="20dp" android:text="@string/movie_order_failed_status" android:layout_below="@+id/failed_recharge_badge" android:layout_centerHorizontal="true" app:fontType="2"/>
            <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="@color/event_blue_color" android:gravity="center" android:id="@+id/try_again_btn" android:padding="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="25dp" android:layout_marginBottom="25dp" android:text="@string/event_error_try_again" app:fontType="3"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
