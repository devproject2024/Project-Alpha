<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="#99000000" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:background="@drawable/curve_pop_lyt" android:padding="@dimen/dimen_25dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TableRow android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp">
            <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                <TextView android:textSize="21sp" android:textStyle="bold" android:textColor="@color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Change Bank Account" android:fontFamily="@string/font_family_roboto_regular"/>
                <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/delete_message" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/refund_change_bank_account_desc_1" android:lineSpacingExtra="7sp" android:fontFamily="@string/font_family_roboto_regular"/>
                <View android:background="@color/color_f3f7f8" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="@dimen/dimen_20dp"/>
                <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="#222222" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="25dp" android:text="@string/refund_change_bank_account_desc_2" android:lineSpacingExtra="7sp" android:fontFamily="@string/font_family_roboto_regular"/>
            </LinearLayout>
        </TableRow>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp">
            <TextView android:textSize="15sp" android:textStyle="bold" android:textColor="#222222" android:id="@+id/bank_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:fontFamily="sans-serif"/>
            <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/bank_no" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="7dp" android:layout_below="@+id/bank_name" android:fontFamily="sans-serif"/>
        </RelativeLayout>
        <TextView android:textSize="17sp" android:textStyle="bold" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/recent_delete_btn" android:background="@drawable/universal_money_transfer_button_bg" android:layout_width="match_parent" android:layout_height="55dp" android:layout_marginTop="@dimen/dimen_30dp" android:text="@string/confirm" android:textAllCaps="false" android:fontFamily="@string/font_family_roboto_regular"/>
        <TextView android:textSize="17sp" android:textStyle="normal" android:textColor="@color/color_00b9f5" android:gravity="center" android:id="@+id/recent_cancel_btn" android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="@dimen/dimen_55dp" android:layout_marginTop="@dimen/dimen_5dp" android:text="@string/cancel" android:textAllCaps="false" android:fontFamily="@string/font_family_roboto_regular"/>
    </LinearLayout>
</LinearLayout>
