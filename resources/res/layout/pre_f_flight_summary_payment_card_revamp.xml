<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/white" android:paddingTop="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp">
    <RelativeLayout android:paddingLeft="20dp" android:paddingRight="20dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1">
        <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="@color/dark_black" android:ellipsize="end" android:gravity="left" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Payment Details" android:singleLine="true" android:layout_centerVertical="true" app:fontType="3"/>
        <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="@color/color_00b9f5" android:ellipsize="end" android:gravity="right" android:id="@+id/order_summary_show_more" android:padding="5dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="-5dp" android:text="@string/flight_show_more" android:singleLine="true" android:layout_alignParentRight="true" android:layout_centerVertical="true" app:fontType="2"/>
    </RelativeLayout>
    <View android:id="@+id/divider_end" android:background="@color/flight_line_color" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="15dp"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/lyt_fare_details" android:paddingLeft="20dp" android:paddingRight="20dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_20dp" android:layout_marginBottom="@dimen/dimen_20dp" android:layout_alignParentTop="true"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/lyt_payment_from_bank" android:paddingLeft="20dp" android:paddingRight="20dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentTop="true"/>
    <LinearLayout android:orientation="horizontal" android:id="@+id/total_booking_layout_amount" android:paddingLeft="20dp" android:paddingRight="20dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp">
        <com.paytm.utility.RoboTextView android:textSize="@dimen/cart_13sp" android:textColor="@color/color_666666" android:gravity="left" android:id="@+id/lbl_total_amount_2" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/flight_amount_paid_txt" android:layout_weight="1" app:fontType="3"/>
        <com.paytm.utility.RoboTextView android:textSize="@dimen/cart_13sp" android:textColor="@color/color_666666" android:gravity="right" android:id="@+id/text_total_fare_text" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1" app:fontType="2"/>
    </LinearLayout>
    <RelativeLayout android:gravity="center_vertical" android:layout_gravity="center_vertical" android:orientation="horizontal" android:id="@+id/promocode_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="50dp" android:layout_marginLeft="12dp" android:layout_marginTop="20dp" android:layout_marginRight="12dp">
        <com.paytm.utility.RoboTextView android:textSize="10sp" android:textColor="@color/event_seat_type_color" android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@+id/flight_promocode" android:background="@drawable/movie_promo_bg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:layout_centerVertical="true" app:fontType="3"/>
        <com.paytm.utility.RoboTextView android:textSize="@dimen/cart_14sp" android:textColor="@color/flight_review_base_fare" android:gravity="center_vertical" android:id="@+id/paytm_cashback_value" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="" android:layout_toRightOf="@+id/flight_promocode" android:layout_centerVertical="true" app:fontType="2"/>
    </RelativeLayout>
    <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="@color/color_00b9f5" android:ellipsize="end" android:gravity="right" android:layout_gravity="center" android:id="@+id/order_summary_show_more_minimized" android:padding="5dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="14dp" android:text="@string/flight_show_more" android:singleLine="true" android:layout_alignParentRight="true" android:layout_centerVertical="true" app:fontType="2"/>
    <TextView android:textSize="14sp" android:textColor="@color/color_00b9f5" android:gravity="center" android:id="@+id/wallet_statement" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dimen_20dp" android:text="@string/wallet_statement_title" android:layout_weight="1"/>
</LinearLayout>
