<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/color_fafafa" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/offers_layout" android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:id="@+id/promocode_lyt" android:background="@color/white" android:paddingLeft="15dp" android:layout_width="match_parent" android:layout_height="60dp">
            <RelativeLayout android:id="@+id/promocode_input_lyt" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerVertical="true">
                <EditText android:textSize="14sp" android:textColorHint="@color/movie_conv_info_separator" android:id="@+id/edit_txt_promocode" android:background="@null" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="5dp" android:hint="@string/have_a_promo_code_enter_here" android:singleLine="true" android:layout_toLeftOf="@+id/apply_btn_lyt" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:layout_toStartOf="@+id/apply_btn_lyt" app:fontType="2"/>
                <RelativeLayout android:id="@+id/apply_btn_lyt" android:background="@color/paytm_blue" android:paddingLeft="20dp" android:paddingRight="20dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_alignParentTop="true" android:layout_alignParentRight="true" android:layout_alignParentEnd="true">
                    <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/apply" android:layout_centerHorizontal="true" android:layout_centerVertical="true" app:fontType="2"/>
                </RelativeLayout>
                <ImageView android:id="@+id/promo_remove_image" android:padding="10dp" android:visibility="gone" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="5dp" android:src="@drawable/pre_t_train_claer_recent" android:layout_alignParentRight="true" android:layout_centerInParent="true"/>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/promocode_success_lyt" android:background="@color/white" android:paddingRight="15dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="60dp" android:layout_centerInParent="true" android:layout_centerVertical="true">
                <com.paytm.utility.RoboTextView android:textSize="16sp" android:textColor="@color/green_train" android:id="@+id/success_promo_code" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_below="@+id/promocode_lyt" android:layout_centerInParent="true" app:fontType="2"/>
                <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="@color/green_train" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="15dp" android:text="@string/applied_succesfully_txt" android:maxLines="2" android:layout_toLeftOf="@+id/apply_tick_image" android:layout_centerVertical="true" android:layout_toStartOf="@+id/apply_tick_image" app:fontType="2"/>
                <ImageView android:id="@+id/apply_tick_image" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/pre_t_tick_applied" android:layout_alignParentRight="true" android:layout_centerInParent="true"/>
            </RelativeLayout>
        </RelativeLayout>
        <View android:id="@+id/view_divider" android:background="@color/light_grey" android:layout_width="match_parent" android:layout_height="1dp" android:layout_below="@+id/promocode_lyt"/>
        <com.paytm.utility.RoboTextView android:textSize="11sp" android:textColor="@color/color_000000" android:id="@+id/promo_status_message" android:paddingLeft="15dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:layout_marginBottom="5dp" android:maxLines="2" android:layout_below="@+id/view_divider" app:fontType="2"/>
        <com.paytm.utility.RoboTextView android:textSize="13sp" android:textColor="@color/payment_success_text_grey" android:id="@+id/choose_offer_header" android:paddingLeft="15dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:layout_marginBottom="10dp" android:text="@string/choose_from_the_offer_below" android:layout_below="@+id/promo_status_message" app:fontType="2"/>
        <View android:id="@+id/second_view_divider" android:background="@color/separators" android:layout_width="match_parent" android:layout_height="1dp" android:layout_below="@+id/choose_offer_header"/>
        <RelativeLayout android:id="@+id/offers_list_lyt" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="10dp" android:layout_above="@+id/offer_txt_lyt" android:layout_below="@+id/second_view_divider">
            <androidx.recyclerview.widget.RecyclerView android:id="@+id/offers_list" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="15dp"/>
        </RelativeLayout>
        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/no_offers_layout" android:background="@android:color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_above="@+id/offer_txt_lyt" android:layout_below="@+id/promo_status_message">
            <TextView android:textSize="15sp" android:gravity="center_horizontal" android:id="@+id/no_valid_offer_title" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:text="@string/no_valid_offers"/>
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/padding_profile_separator" android:src="@drawable/pre_t_no_offers_image"/>
            <TextView android:textSize="16sp" android:textColor="#868686" android:gravity="center_horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/padding_profile_separator"/>
        </LinearLayout>
        <RelativeLayout android:orientation="vertical" android:id="@+id/offer_txt_lyt" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
            <View android:background="@color/passbook_separators" android:layout_width="match_parent" android:layout_height="0.5dp"/>
            <com.paytm.utility.RoboTextView android:textSize="11sp" android:textColor="@color/train_txt_gray" android:id="@+id/cash_back_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="15dp" android:text="@string/hotel_offers_cash_back_info" app:fontType="2"/>
            <View android:id="@+id/cash_back_offer_divider" android:background="@color/passbook_separators" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_below="@+id/cash_back_text"/>
            <com.paytm.utility.RoboTextView android:textSize="11sp" android:textColor="@color/train_txt_gray" android:id="@+id/wallet_loyality_cash_back_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="15dp" android:layout_below="@+id/cash_back_offer_divider" app:fontType="2"/>
        </RelativeLayout>
    </RelativeLayout>
    <ProgressBar android:id="@+id/update_progress_bar_offers" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:indeterminate="false" android:layout_centerInParent="true"/>
    <include android:layout_width="match_parent" android:layout_height="match_parent" layout="@layout/pre_t_no_network_layout"/>
</RelativeLayout>
