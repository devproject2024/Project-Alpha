<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@drawable/postcard_landing_scr_bg" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:id="@+id/ll_header" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_25dp">
        <ImageView android:id="@+id/iv_back_button" android:paddingLeft="@dimen/dimen_15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_arrow_back_white_24dp" android:contentDescription="TODO" android:paddingStart="@dimen/dimen_15dp"/>
    </LinearLayout>
    <RelativeLayout android:background="@drawable/envlope_open" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="50dp" android:layout_marginTop="@dimen/dimen_60dp" android:layout_marginRight="50dp" android:layout_marginBottom="120dp" android:minHeight="400dp" android:layout_alignParentBottom="true" android:transitionName="@string/envolopeTransition"/>
    <RelativeLayout android:id="@+id/rl_card_bg" android:background="@color/white" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="@dimen/dimen_30dp" android:layout_marginTop="@dimen/dimen_10dp" android:layout_marginRight="@dimen/dimen_30dp" android:layout_marginBottom="150dp" android:layout_below="@+id/ll_header" android:transitionName="@string/envolopeOpenTransition">
        <RelativeLayout android:id="@+id/rl_content" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/dimen_30dp">
            <TextView android:textSize="17sp" android:textStyle="bold" android:textColor="@color/color_222222" android:id="@+id/tv_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/to_our_heroes_coma"/>
            <TextView android:textSize="17sp" android:textStyle="italic" android:textColor="@color/color_222222" android:id="@+id/tv_description" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:text="@string/independence_day_message" android:maxLength="100" android:layout_below="@+id/tv_title"/>
            <TextView android:textSize="50sp" android:textStyle="bold" android:textColor="@color/color_5b62fa" android:id="@+id/tv_amount" android:paddingTop="@dimen/dimen_20dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true"/>
            <TextView android:textSize="15sp" android:textColor="@color/color_222222" android:id="@+id/tv_from" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/from" android:layout_above="@+id/tv_from_name"/>
            <TextView android:textSize="15sp" android:textStyle="bold" android:textColor="@color/color_222222" android:id="@+id/tv_from_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentBottom="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:layout_alignParentBottom="true">
        <com.paytm.utility.RoboTextView android:textSize="15sp" android:textColor="#ffffff" android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:id="@+id/tv_postcard_status" android:paddingLeft="20dp" android:paddingRight="20dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/send_another_postcard" android:drawableRight="@drawable/postcard_arrow_right" android:drawablePadding="@dimen/dimen_5dp" android:drawableEnd="@drawable/postcard_arrow_right" android:fontFamily="@string/font_family_roboto_medium"/>
        <View android:layout_gravity="center_horizontal" android:id="@+id/divider1_lbl_psbk_dtl" android:background="@color/bg_grey" android:layout_width="@dimen/dimen_30dp" android:layout_height="@dimen/dimen_1dp" android:layout_marginTop="15dp"/>
        <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="#ffffff" android:gravity="center_horizontal" android:id="@+id/tv_expiry" android:paddingLeft="20dp" android:paddingRight="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="7dp" android:text="@string/we_will_contribute_message" android:fontFamily="@string/font_family_roboto_light"/>
    </LinearLayout>
</RelativeLayout>
