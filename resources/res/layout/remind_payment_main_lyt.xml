<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/rl_reminder" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="@dimen/dimen_18dp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/txt_remind_payment" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_20dp" android:text="@string/qp_when_to_pay" android:lineSpacingExtra="6sp" android:fontFamily="sans-serif-medium"/>
        <LinearLayout android:id="@+id/remind_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_20dp" android:layout_below="@+id/txt_remind_payment">
            <RadioGroup android:orientation="horizontal" android:id="@+id/date_day_group" android:layout_width="match_parent" android:layout_height="wrap_content">
                <RadioButton android:textSize="@dimen/dimen_15dp" android:textStyle="bold" android:textColor="#222222" android:id="@+id/monthly_radio_button" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:button="@drawable/btn_radio_holo_light" android:text="Monthly" android:layout_weight="1"/>
                <RadioButton android:textSize="@dimen/dimen_15dp" android:textColor="#222222" android:id="@+id/weekly_radio_button" android:padding="@dimen/dimen_10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:button="@drawable/btn_radio_holo_light" android:text="Weekly" android:layout_weight="1"/>
            </RadioGroup>
            <RelativeLayout android:id="@+id/monthly_container" android:background="@drawable/monthly_reminder_selector" android:layout_width="@dimen/dimen_100dp" android:layout_height="@dimen/dimen_36dp">
                <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#ffffff" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Monthly" android:layout_centerInParent="true" android:fontFamily="sans-serif-medium" android:letterSpacing="0.04"/>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/weekly_container" android:background="@drawable/monthly_reminder_selector" android:layout_width="@dimen/dimen_100dp" android:layout_height="@dimen/dimen_36dp" android:layout_marginLeft="@dimen/dimen_10dp">
                <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#00b9f5" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Weekly" android:layout_centerInParent="true" android:fontFamily="sans-serif-medium" android:letterSpacing="0.04"/>
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_20dp" android:layout_marginRight="@dimen/dimen_20dp" android:layout_below="@+id/remind_container">
            <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="#222222" android:id="@+id/day_moth_txt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:fontFamily="sans-serif" android:letterSpacing="-0.02"/>
            <TextView android:textSize="@dimen/dimen_12dp" android:textStyle="normal" android:textColor="#00b9f5" android:gravity="end" android:id="@+id/picker" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_6dp" android:text="@string/change" android:layout_alignParentRight="true" android:fontFamily="sans-serif"/>
            <View android:background="#e2ebee" android:layout_width="match_parent" android:layout_height="@dimen/dimen_1dp" android:layout_marginTop="@dimen/dimen_15dp" android:layout_below="@+id/day_moth_txt"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/ll_reminder_v2" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_20dp">
        <TextView android:textSize="@dimen/dimen_18dp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/txt_remind_payment_v2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/qp_when_to_pay" android:layout_alignParentTop="true" android:lineSpacingExtra="6sp" android:fontFamily="sans-serif-medium"/>
        <ImageView android:id="@+id/calender_img" android:layout_width="@dimen/dimen_20dp" android:layout_height="@dimen/dimen_20dp" android:layout_marginTop="@dimen/dimen_20dp" android:src="@drawable/calendar_qp" android:layout_below="@+id/txt_remind_payment_v2"/>
        <TextView android:textSize="@dimen/dimen_16dp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/txt_selected_date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_10dp" android:layout_marginTop="@dimen/dimen_20dp" android:layout_toRightOf="@+id/calender_img" android:layout_below="@+id/txt_remind_payment_v2" android:fontFamily="sans-serif" android:letterSpacing="0"/>
        <TextView android:textSize="@dimen/dimen_15dp" android:textStyle="normal" android:textColor="#00b9f5" android:gravity="end" android:id="@+id/txt_change_date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_8dp" android:layout_marginTop="@dimen/dimen_20dp" android:text="@string/change" android:layout_toRightOf="@+id/txt_selected_date" android:layout_below="@+id/txt_remind_payment_v2" android:fontFamily="sans-serif" android:letterSpacing="0"/>
    </RelativeLayout>
</LinearLayout>
