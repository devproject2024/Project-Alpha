<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
        <FrameLayout android:id="@+id/activity_manage_debit_atm_card_lyt" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:transitionName="@string/bank_pdc_transition_name"/>
        <RelativeLayout android:gravity="center_vertical" android:id="@+id/blockBtnLayout" android:background="@color/white" android:paddingTop="@dimen/dimen_5dp" android:paddingBottom="@dimen/dimen_5dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:layout_below="@+id/activity_manage_debit_atm_card_lyt">
            <com.paytm.utility.RoboTextView android:textSize="@dimen/wallet_15sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/switchTitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="@string/pb_dc_active_for_use" android:layout_toLeftOf="@+id/switch_toggle" android:layout_alignParentLeft="true" android:lineSpacingExtra="2sp" android:layout_marginStart="20dp" android:layout_alignParentStart="true" android:letterSpacing="0.02" app:fontType="3"/>
            <com.paytm.utility.RoboTextView android:textSize="11sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/switchSubtitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="8dp" android:layout_marginBottom="5dp" android:text="@string/pb_dc_active_for_use_all_payment" android:layout_toLeftOf="@+id/switch_toggle" android:layout_below="@+id/switchTitle" android:layout_alignParentLeft="true" android:lineSpacingExtra="8sp" android:layout_marginStart="20dp" android:layout_alignParentStart="true" android:letterSpacing="0.02" app:fontType="1"/>
            <net.one97.paytm.paymentsBank.widget.SwitchPlus android:id="@+id/switch_toggle" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="40dp" android:layout_marginRight="@dimen/dimen_20dp" android:height="50dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/> /&gt; 
        </RelativeLayout>
        <RelativeLayout android:id="@+id/permanently_block_layout" android:paddingLeft="20dp" android:paddingTop="15dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="50dp" android:layout_below="@+id/blockBtnLayout">
            <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#00bdf2" android:id="@+id/permanently_block_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/pb_block_permanently_title" android:fontFamily="sans-serif-medium" android:letterSpacing="0.03"/>
        </RelativeLayout>
        <View android:id="@+id/marginView" android:background="@color/color_fafbfb" android:layout_width="match_parent" android:layout_height="10dp" android:layout_below="@+id/permanently_block_layout"/>
        <LinearLayout android:id="@+id/loaderView" android:background="@color/white" android:paddingTop="@dimen/dimen_40dp" android:paddingBottom="@dimen/dimen_40dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/marginView">
            <include android:gravity="center" android:layout_width="match_parent" android:layout_height="match_parent" layout="@layout/pb_si_layout_wallet_loader"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/atm_states_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/marginView">
            <LinearLayout android:id="@+id/atm_state_1" android:background="@color/color_fafbfb" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
                <include android:id="@+id/request_atm_btn" android:layout_width="match_parent" android:layout_height="wrap_content" layout="@layout/request_phy_debit_card_button_layout"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/atm_state_2" android:background="@color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
                <net.one97.paytm.paymentsBank.widget.FacilitiesView android:id="@+id/atm_order_status_btn" android:layout_width="match_parent" android:layout_height="wrap_content" app:layoutFile="@layout/phy_debit_card_options_list_row" app:rightIcon="@drawable/pb_svg_phy_db_card_order_status" app:subTitleColor="@color/color_21c17a" app:subtitle="" app:title="@string/atm_card_order_status"/>
                <View android:id="@+id/order_status_below_view" android:background="@color/light_grey" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="@dimen/dimen_25dp"/>
                <net.one97.paytm.paymentsBank.widget.FacilitiesView android:id="@+id/activate_atm_layout" android:layout_width="match_parent" android:layout_height="wrap_content" app:layoutFile="@layout/phy_debit_card_options_list_row" app:rightIcon="@drawable/pb_svg_activate_atm" app:subTitleColor="@color/color_ffa400" app:subtitle="@string/activate_your_atm_card_once" app:title="@string/activate_atm_card"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/atm_state_3" android:background="@color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
                <net.one97.paytm.paymentsBank.widget.FacilitiesView android:id="@+id/change_atm_pin" android:layout_width="match_parent" android:layout_height="wrap_content" app:layoutFile="@layout/phy_debit_card_options_list_row" app:rightIcon="@drawable/pb_svg_phy_db_card_order_status" app:subtitle="" app:title="@string/change_atm_card_pin"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/pdc_about_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/atm_states_layout">
            <View android:id="@+id/lineAboveBenefitsAbout" android:background="@color/light_grey" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="@dimen/dimen_26dp"/>
            <net.one97.paytm.paymentsBank.widget.FacilitiesView android:id="@+id/about_db_card" android:layout_width="match_parent" android:layout_height="wrap_content" app:layoutFile="@layout/phy_debit_card_options_list_row" app:rightIcon="@drawable/pb_pdc_card_offer" app:subTitleColor="@color/color_ffa400" app:title="@string/pb_pdc_view_benefits_and_offer"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/atm_state_4" android:background="@color/color_fafbfb" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/pdc_about_layout">
            <View android:id="@+id/lineAboveReqAgainBtn" android:background="@color/light_grey" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="@dimen/dimen_26dp"/>
            <include android:id="@+id/request_again_atm_btn" android:layout_width="match_parent" android:layout_height="wrap_content" layout="@layout/request_again_pdc_button_layout"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/cst_issue_lyt" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/atm_state_4">
            <View android:id="@+id/lineAboveBenefits" android:background="@color/light_grey" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="@dimen/dimen_26dp"/>
            <net.one97.paytm.paymentsBank.widget.FacilitiesView android:id="@+id/cst_issue_tv" android:layout_width="match_parent" android:layout_height="wrap_content" app:layoutFile="@layout/phy_debit_card_options_list_row" app:rightIcon="@drawable/pb_contact_us_icon_new" app:subTitleColor="@color/color_ffa400" app:title="@string/pb_fg_need_help"/>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
