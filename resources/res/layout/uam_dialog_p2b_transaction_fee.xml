<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:background="@drawable/uam_white_round_border" android:padding="25dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="21sp" android:textStyle="bold" android:textColor="@color/color_222222" android:id="@+id/tv_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:text="@string/uam_dialog_fee_title" android:maxLines="2" android:layout_toLeftOf="@+id/iv_close" android:lineSpacingExtra="7sp" android:fontFamily="sans-serif"/>
    <ImageView android:id="@+id/iv_close" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_close_minkyc" android:layout_alignParentRight="true"/>
    <TextView android:textSize="@dimen/dimen_15sp" android:textStyle="normal" android:textColor="@color/color_222222" android:id="@+id/tv_fee_desc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:layout_marginRight="@dimen/dimen_10dp" android:text="@string/uam_dialog_fee_desc" android:layout_below="@+id/tv_title" android:lineSpacingExtra="6sp" android:fontFamily="sans-serif"/>
    <View android:id="@+id/v_divider_1" android:background="@color/color_f3f7f8" android:layout_width="match_parent" android:layout_height="@dimen/dimen_1dp" android:layout_marginTop="@dimen/dimen_30dp" android:layout_below="@+id/tv_fee_desc"/>
    <LinearLayout android:orientation="horizontal" android:id="@+id/ll_amount" android:paddingTop="15dp" android:paddingBottom="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/v_divider_1">
        <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_10dp" android:layout_weight="0.7">
            <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#222222" android:ellipsize="end" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/uam_wallet_balance" android:maxLines="2" android:lines="2" android:lineSpacingExtra="3sp" android:fontFamily="sans-serif"/>
            <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/tv_paytm_balance" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:text="@string/uam_rs_amount" android:fontFamily="sans-serif-medium"/>
        </LinearLayout>
        <com.paytm.utility.RoboTextView android:textSize="10sp" android:textColor="#222222" android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/tv_plus_minus" android:background="@drawable/uam_p2b_circle" android:padding="0dp" android:layout_width="15dp" android:layout_height="15dp" android:layout_marginTop="@dimen/dimen_15dp" android:text="@string/uam_minus" android:layout_toRightOf="@+id/tv_amount" android:fontFamily="@string/font_family_roboto_medium"/>
        <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_10dp" android:layout_marginRight="@dimen/dimen_10dp" android:layout_weight="0.6">
            <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#222222" android:ellipsize="end" android:id="@+id/tv_fee_label" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/uam_fee" android:maxLines="2" android:lines="2" android:lineSpacingExtra="3sp" android:fontFamily="sans-serif"/>
            <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/tv_transaction_fee" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/uam_rs_amount" android:fontFamily="sans-serif-medium"/>
        </LinearLayout>
        <com.paytm.utility.RoboTextView android:textSize="10sp" android:textColor="#222222" android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/tv_equals" android:background="@drawable/uam_p2b_circle" android:padding="0dp" android:layout_width="15dp" android:layout_height="15dp" android:layout_marginTop="@dimen/dimen_15dp" android:text="@string/uam_equals" android:layout_toRightOf="@+id/tv_amount" android:layout_below="@+id/tv_header" android:fontFamily="@string/font_family_roboto_medium"/>
        <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_10dp" android:layout_weight="0.8">
            <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#222222" android:ellipsize="end" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/uam_title_available_for_transfer" android:maxLines="2" android:lines="2" android:lineSpacingExtra="3sp" android:fontFamily="sans-serif"/>
            <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/tv_available_for_transfer" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/uam_rs_amount" android:fontFamily="sans-serif-medium"/>
        </LinearLayout>
    </LinearLayout>
    <View android:id="@+id/v_divider_2" android:background="@color/color_f3f7f8" android:layout_width="match_parent" android:layout_height="@dimen/dimen_1dp" android:layout_below="@+id/ll_amount"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_20dp" android:layout_below="@+id/v_divider_2">
        <ImageView android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginRight="@dimen/dimen_10dp" android:src="@drawable/tip"/>
        <TextView android:textSize="@dimen/dimen_11sp" android:textStyle="normal" android:textColor="@color/color_666666" android:id="@+id/tv_tip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/uam_dialog_fee_tip" android:lineSpacingExtra="4.5sp" android:fontFamily="sans-serif"/>
    </LinearLayout>
</RelativeLayout>
