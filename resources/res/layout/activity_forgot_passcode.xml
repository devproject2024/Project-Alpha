<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/activity_ajrforgot_passcode" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:id="@+id/iv_motif" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_payment_bank_motif" android:layout_alignParentRight="true"/>
    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:src="@drawable/pb_ic_payments_bank_logo" android:layout_centerHorizontal="true"/>
    <ImageView android:id="@+id/iv_back" android:background="?android:attr/selectableItemBackground" android:padding="@dimen/dimen_8dp" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:layout_marginTop="16dp" android:src="@drawable/pb_ic_back"/>
    <TextView android:textSize="21sp" android:textStyle="bold" android:textColor="#222222" android:gravity="left" android:id="@+id/forgot_passcode_title_text" android:paddingTop="@dimen/dimen_10dp" android:paddingBottom="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="30dp" android:layout_marginTop="30dp" android:layout_marginRight="30dp" android:layout_marginBottom="@dimen/dimen_20dp" android:text="@string/pb_ovd_set_your_passcode" android:layout_below="@+id/iv_back" android:lineSpacingExtra="7sp" android:fontFamily="sans-serif"/>
    <RelativeLayout android:id="@+id/forgot_passcode_passcode_layout" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/forgot_passcode_title_text">
        <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="#666666" android:id="@+id/subTitleTv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="30dp" android:layout_marginRight="30dp" android:text="@string/pb_ovd_change_pscd_desc" android:lineSpacingExtra="5sp" android:fontFamily="sans-serif"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/forgot_passcode_edt_ll" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="60dp" android:layout_below="@+id/subTitleTv" android:layout_alignLeft="@+id/subTitleTv">
            <net.one97.paytm.bankCommon.utils.PinEntryView android:id="@+id/otpView" android:layout_width="wrap_content" android:layout_height="wrap_content" app:digitBackground="@drawable/pb_passcode_edt_bg" app:digitHeight="45dp" app:digitSpacing="14dp" app:digitTextColor="@color/color_222222" app:digitTextSize="21sp" app:digitWidth="45dp" app:mask="*" app:numDigits="4"/>
            <ImageView android:layout_gravity="center_vertical" android:id="@+id/payment_bank_set_passcode_img_done" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="25dp" android:src="@drawable/availble_click_image"/>
        </LinearLayout>
        <TextView android:textSize="@dimen/wallet_11_sp" android:textColor="@color/color_fd5c5c" android:id="@+id/forgot_passcode_not_match_passcode" android:padding="@dimen/dimen_5dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="10dp" android:layout_marginRight="@dimen/dimen_20dp" android:text="@string/passcode_does_not_match" android:layout_below="@+id/forgot_passcode_edt_ll"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/forgot_passcode_password_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:layout_below="@+id/forgot_passcode_passcode_layout">
        <LinearLayout android:gravity="bottom" android:orientation="horizontal" android:id="@+id/ll_password" android:background="@drawable/pb_passcode_edt_bg" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp">
            <net.one97.paytm.common.widgets.PasscodeEditText android:theme="@style/PBPaytmInputTextLabel" android:textSize="18sp" android:textColor="@android:color/black" android:id="@+id/payment_bank_edt_password" android:background="@android:color/transparent" android:padding="@dimen/dimen_5dp" android:layout_width="0dp" android:layout_height="wrap_content" android:hint="@string/password" android:maxLines="1" android:layout_weight="1" android:layout_toLeftOf="@+id/text_show" android:inputType="textPassword" android:fontFamily="sans-serif" android:layout_toStartOf="@+id/text_show"/>
            <TextView android:textSize="18sp" android:textColor="@color/warm_gray" android:gravity="center" android:id="@+id/text_show" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/show" android:layout_alignBottom="@+id/payment_bank_edt_password" android:layout_alignParentRight="true"/>
        </LinearLayout>
        <TextView android:textSize="@dimen/cart_12sp" android:textColor="@color/color_fd5c5c" android:layout_gravity="center_horizontal" android:id="@+id/forgot_passcode_ErrorText" android:padding="@dimen/dimen_10dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_5dp" android:text="@string/forgot_passcode_invalid_password" android:layout_below="@+id/ll_password" android:layout_centerHorizontal="true"/>
        <TextView android:textSize="18sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/forgot_passcode_ok_button" android:background="@drawable/button_blue" android:padding="@dimen/dimen_10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="20dp" android:layout_marginRight="@dimen/dimen_20dp" android:text="@string/proceed" android:layout_below="@+id/forgot_passcode_ErrorText" android:layout_centerHorizontal="true" android:textAllCaps="false"/>
        <TextView android:textSize="@dimen/cart_12sp" android:textStyle="bold" android:textColor="@color/bright_sky_blue" android:layout_gravity="center_horizontal" android:id="@+id/forgot_passcode_forgot_password" android:padding="@dimen/dimen_10dp" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_5dp" android:text="@string/bank_forgot_password" android:layout_below="@+id/forgot_passcode_ok_button" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/forgot_passcode_success_fail_RL" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/wallet_50_dp" android:layout_below="@+id/forgot_passcode_password_layout" android:layout_centerHorizontal="true">
        <ImageView android:id="@+id/forgot_passcode_success_fail_img" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/pb_passcode_success" android:layout_centerHorizontal="true"/>
        <View android:id="@+id/forgot_passcode_status_separator" android:background="@color/color_ededed" android:layout_width="@dimen/dimen_100dp" android:layout_height="@dimen/dimen_2dp" android:layout_marginTop="@dimen/dimen_20dp" android:layout_marginBottom="@dimen/dimen_20dp" android:layout_below="@+id/forgot_passcode_success_fail_img" android:layout_centerHorizontal="true"/>
        <TextView android:textSize="@dimen/cart_17sp" android:textColor="@color/color_222222" android:gravity="center" android:id="@+id/forgot_passcode_status_text" android:padding="@dimen/dimen_10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/succesfull_change_passcode" android:layout_below="@+id/forgot_passcode_status_separator" android:layout_centerHorizontal="true"/>
        <Button android:textColor="@color/white" android:id="@+id/forgot_passcode_finish_button" android:background="@drawable/button_blue" android:padding="@dimen/dimen_10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/dimen_10dp" android:text="@string/ok" android:layout_below="@+id/forgot_passcode_status_text" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</RelativeLayout>
