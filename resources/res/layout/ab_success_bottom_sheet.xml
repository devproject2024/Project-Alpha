<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="#99000000" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:background="@drawable/bottom_sheet_curve_add_beneficiary" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/iv_failed" android:layout_width="36dp" android:layout_height="36dp" android:layout_marginTop="30dp" android:layout_marginRight="16dp" android:layout_alignParentRight="true" android:contentDescription="TODO" android:layout_marginEnd="16dp" android:layout_alignParentEnd="true" app:srcCompat="@drawable/wallet_add_bene_ic_success_tick"/>
        <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="#26d07c" android:gravity="start" android:id="@+id/tv_success_message" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="30dp" android:layout_marginRight="30dp" android:text="Added Anish J Abraham as a beneficiary" android:layout_toLeftOf="@+id/iv_failed" android:lineSpacingExtra="6sp" android:fontFamily="sans-serif" android:layout_marginStart="16dp" android:layout_marginEnd="30dp" android:layout_toStartOf="@+id/iv_failed" android:letterSpacing="0.03"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/lyt_important_msg" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="16dp" android:layout_marginRight="16dp" android:layout_below="@+id/tv_success_message">
            <TextView android:textSize="12sp" android:textColor="#506d85" android:id="@+id/tv_message_cool_off_period" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/add_bene_success_message" android:lineSpacingExtra="@dimen/dimen_3dp"/>
        </LinearLayout>
        <RelativeLayout android:gravity="center" android:id="@+id/lyt_payment_setting" android:background="#f5f8fa" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="32dp" android:layout_below="@+id/lyt_important_msg">
            <TextView android:textSize="13sp" android:textColor="#444444" android:id="@+id/footer_txt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="26dp" android:layout_marginTop="12dp" android:layout_marginBottom="12dp" android:text="@string/you_can_manage_your_beneficiaries_from" android:lineSpacingExtra="@dimen/dimen_3dp" android:layout_marginStart="26dp"/>
        </RelativeLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/lyt_payment_setting">
            <View android:background="#00aced" android:layout_width="match_parent" android:layout_height="10dp"/>
            <View android:background="#002f6c" android:layout_width="match_parent" android:layout_height="10dp"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
