<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@android:color/white" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="16sp" android:textColor="@android:color/black" android:gravity="center" android:layout_gravity="center" android:id="@+id/txt_title" android:padding="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/p2b_enter_otp" android:fontFamily="sans-serif-medium"/>
    <View android:background="@color/p2b_paytm_blue" android:layout_width="match_parent" android:layout_height="1dp"/>
    <TextView android:textSize="16sp" android:textColor="@color/p2b_dark_gray" android:id="@+id/txt_msg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="15dp" android:layout_marginRight="10dp" android:text="@string/p2b_wallet_otp_message" android:layout_centerVertical="true" android:fontFamily="sans-serif"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="15dp" android:layout_marginRight="10dp">
        <EditText android:textSize="16sp" android:id="@+id/edit_otp" android:background="@drawable/p2b_transparent_border" android:paddingLeft="10dp" android:paddingRight="10dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/p2b_enter_otp" android:singleLine="true" android:layout_toLeftOf="@+id/txt_resend_otp" android:layout_centerVertical="true" android:inputType="number" android:layout_toStartOf="@+id/txt_resend_otp"/>
        <TextView android:textSize="12sp" android:textColor="@drawable/p2b_bg_clickable_text_view" android:gravity="right|center_vertical|center_horizontal|center" android:id="@+id/txt_resend_otp" android:paddingRight="5dp" android:paddingBottom="5dp" android:focusable="true" android:visibility="visible" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/p2b_resend_otp" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:fontFamily="sans-serif" android:paddingEnd="5dp" android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <View android:id="@+id/otp_separator" android:background="@drawable/p2b_edit_view_divider" android:layout_width="match_parent" android:layout_height="6dp" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:contentDescription="@string/app_name"/>
    <TextView android:textSize="14sp" android:textColor="@color/p2b_red" android:id="@+id/txt_error_msg" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="15dp" android:layout_marginRight="10dp" android:fontFamily="sans-serif"/>
    <LinearLayout android:orientation="horizontal" android:background="@color/p2b_light_grey" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:weightSum="1">
        <Button android:textSize="18sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/btn_cancel" android:background="@drawable/p2b_bg_square_btn_blue" android:padding="8dp" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginRight="0.1dp" android:text="@string/p2b_cancel" android:layout_weight="0.5" android:textAllCaps="false" android:layout_marginEnd="0.1dp"/>
        <Button android:textSize="18sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/btn_verify" android:background="@drawable/p2b_bg_square_btn_blue" android:padding="8dp" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/p2b_verify" android:layout_weight="0.5" android:textAllCaps="false"/>
    </LinearLayout>
</LinearLayout>
