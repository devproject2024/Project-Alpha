    <LinearLayout android:orientation="horizontal" android:id="@+id/tagSavedLl" android:background="#21c17a" android:paddingLeft="20dp" android:paddingTop="15dp" android:paddingRight="20dp" android:paddingBottom="15dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
