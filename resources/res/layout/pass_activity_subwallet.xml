        </androidx.appcompat.widget.Toolbar>
        <LinearLayout android:orientation="vertical" android:id="@+id/sub_wallet_container" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginBottom="65dp" app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
