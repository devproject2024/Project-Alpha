<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true">
    <RelativeLayout android:background="@color/white" android:paddingLeft="@dimen/dimen_20dp" android:paddingTop="@dimen/dimen_25dp" android:paddingRight="@dimen/dimen_20dp" android:paddingBottom="@dimen/dimen_25dp" android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView android:textSize="@dimen/dimen_16dp" android:textStyle="bold" android:textColor="@color/black" android:id="@+id/txtLabelRating" android:padding="@dimen/dimen_2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/critic_rating" android:layout_alignParentLeft="true" app:fontType="4"/>
        <ImageView android:id="@+id/ivRatingStar" android:padding="@dimen/dimen_4dp" android:layout_width="@dimen/dimen_25dp" android:layout_height="@dimen/dimen_25dp" android:layout_toRightOf="@+id/txtLabelRating" android:layout_alignBottom="@+id/txtLabelRating" app:srcCompat="@drawable/ic_rating_star"/>
