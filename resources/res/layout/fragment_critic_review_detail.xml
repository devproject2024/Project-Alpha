        <TextView android:textSize="@dimen/dimen_12dp" android:textColor="#999999" android:id="@+id/tvReviewer" android:paddingLeft="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="5dp" android:layout_below="@+id/txtLabelRating" app:fontType="2"/>
        <TextView android:textSize="@dimen/dimen_12dp" android:textColor="#999999" android:id="@+id/tvDate" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/tvReviewer" android:layout_below="@+id/txtLabelRating" app:fontType="2"/>
        <TextView android:textSize="@dimen/dimen_16dp" android:textStyle="bold" android:textColor="@color/black" android:id="@+id/txtLabelReview" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_16dp" android:text="@string/review" android:layout_below="@+id/tvReviewer" app:fontType="4"/>
        <TextView android:textSize="@dimen/dimen_14dp" android:textColor="#444444" android:id="@+id/txtReview" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_6dp" android:layout_below="@+id/txtLabelReview" app:fontType="2"/>
    </RelativeLayout>
</ScrollView>
