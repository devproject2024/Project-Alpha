<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="horizontal" android:background="@color/white" android:paddingLeft="17dp" android:paddingTop="24dp" android:paddingRight="17dp" android:paddingBottom="24dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/imageLayout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true">
        <ImageView android:id="@+id/circularImageView" android:layout_width="@dimen/dimen_48dp" android:layout_height="@dimen/dimen_48dp" android:src="@drawable/circular_facility_icon_bg_addmoney" android:layout_centerInParent="true"/>
        <androidx.appcompat.widget.AppCompatImageView android:id="@+id/icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true" android:layout_centerVertical="true" app:srcCompat="@drawable/svg_ill_withdraw_addmoney"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_toLeftOf="@+id/detail_imv" android:layout_toRightOf="@+id/imageLayout">
        <com.paytm.utility.RoboTextView android:textSize="18sp" android:textStyle="normal" android:textColor="@color/color_222222" android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/to_paytm_wallet" android:fontFamily="sans-serif-medium" app:fontType="3"/>
        <com.paytm.utility.RoboTextView android:textSize="12sp" android:textStyle="normal" android:textColor="@color/color_444444" android:id="@+id/description" android:visibility="visible" android:layout_width="262dp" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_5dp" android:layout_marginRight="10dp" android:text="@string/uam_wallet_desc" android:layout_below="@+id/title" android:lineSpacingExtra="4.5sp" android:fontFamily="sans-serif" android:letterSpacing="-0.02"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/subtitleLayout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/description">
            <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="@color/color_444444" android:id="@+id/subTitle" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_5dp" android:layout_marginRight="10dp" android:layout_below="@+id/title" android:lineSpacingExtra="5sp" android:fontFamily="sans-serif" android:letterSpacing="-0.02"/>
            <com.paytm.utility.RoboTextView android:textSize="11sp" android:textStyle="normal" android:textColor="@color/paytm_blue" android:id="@+id/viewBalanceButton" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_5dp" android:text="@string/view_balance" android:layout_below="@+id/subTitle" android:layout_alignLeft="@+id/title" android:layout_alignWithParentIfMissing="true" android:lineSpacingExtra="5sp" android:letterSpacing="-0.02" app:fontType="3"/>
            <com.airbnb.lottie.LottieAnimationView android:layout_gravity="center" android:id="@+id/wallet_loader" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="@dimen/dimen_15dp" android:layout_marginTop="@dimen/dimen_5dp" android:layout_below="@+id/subTitle" android:layout_alignWithParentIfMissing="true" app:amount="5" app:animationDirectionbundle="-1" app:circleSize="15" app:duration="@android:integer/config_mediumAnimTime" app:endColor="@color/light_blue_A400" app:startColor="@color/light_blue_A700"/>
        </LinearLayout>
        <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="@color/paytm_blue" android:id="@+id/actionKnowMore" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_5dp" android:text="@string/know_more" android:layout_below="@+id/description" android:layout_alignLeft="@+id/title" android:layout_alignWithParentIfMissing="true" android:lineSpacingExtra="5sp" android:fontFamily="sans-serif" android:letterSpacing="-0.02"/>
        <TextView android:textSize="12sp" android:textColor="#222222" android:id="@+id/tv_ppb_account_status" android:background="#ffe9c1" android:paddingLeft="8dp" android:paddingTop="5dp" android:paddingRight="8dp" android:paddingBottom="5dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:layout_below="@+id/subtitleLayout" android:lineSpacingExtra="4.5sp" android:fontFamily="sans-serif" android:letterSpacing="-0.02"/>
    </RelativeLayout>
    <ImageView android:layout_gravity="center_vertical" android:id="@+id/detail_imv" android:layout_width="24dp" android:layout_height="24dp" android:layout_marginLeft="10dp" android:layout_marginTop="20dp" android:src="@drawable/ic_forward_arrow" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
</RelativeLayout>
