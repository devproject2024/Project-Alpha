<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/scrollview" android:background="@color/white" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true">
    <RelativeLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:animateLayoutChanges="true">
        <RelativeLayout android:id="@+id/toolbar_layout" android:background="@color/color_f3f7f8" android:layout_width="match_parent" android:layout_height="60dp">
            <ImageView android:id="@+id/iv_back_button" android:padding="@dimen/dimen_20dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/upi_ic_back" android:layout_centerVertical="true"/>
            <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:id="@+id/title_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_toRightOf="@+id/iv_back_button">
                <TextView android:textSize="17sp" android:textStyle="bold" android:textColor="#222222" android:id="@+id/toolbar_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/money_transfer" android:layout_centerVertical="true" android:fontFamily="sans-serif"/>
                <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/toolbar_subtitle" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/iv_back_button" android:layout_below="@+id/toolbar_title" android:fontFamily="sans-serif"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/lnr_details_layout" android:background="@color/color_f3f7f8" android:paddingLeft="@dimen/dimen_20dp" android:paddingRight="@dimen/dimen_20dp" android:paddingBottom="@dimen/dimen_35dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/toolbar_layout" android:animateLayoutChanges="true">
            <TextView android:textSize="21sp" android:textStyle="normal" android:textColor="@color/color_222222" android:ellipsize="end" android:id="@+id/tv_receiver_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:layout_alignParentLeft="true" android:fontFamily="@string/font_family_roboto_medium"/>
        </RelativeLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/normal_linear" android:background="#ffffff" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="@dimen/dimen_30dp" android:layout_marginRight="@dimen/dimen_20dp" android:layout_below="@+id/lnr_details_layout" android:animateLayoutChanges="true">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputLayout android:theme="@style/MoneyTransferEditTextTheme" android:id="@+id/account_til" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatEditText android:textSize="17sp" android:textStyle="bold" android:textColor="#222222" android:textColorHint="@color/edittext_hint_color" android:id="@+id/account_number_et" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/mt_trnsfr_upi_bank_acc_adhaar" android:singleLine="true" android:lineSpacingExtra="6sp" android:inputType="none|text|textNoSuggestions|textUri|textPassword|textVisiblePassword" android:imeOptions="actionDone" android:fontFamily="@string/font_family_roboto_regular" android:letterSpacing="0.02"/>
                </com.google.android.material.textfield.TextInputLayout>
                <ImageView android:id="@+id/cross_iv" android:padding="6dp" android:visibility="gone" android:layout_width="32dp" android:layout_height="32dp" android:layout_marginTop="@dimen/dimen_15dp" android:src="@drawable/ic_close_minkyc" android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <RelativeLayout android:gravity="center_vertical" android:id="@+id/lyt_p2b_ifsc_code" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="25dp" android:animateLayoutChanges="true">
                <com.google.android.material.textfield.TextInputLayout android:theme="@style/MoneyTransferEditTextTheme" android:id="@+id/float_p2b_ifsc_code" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatEditText android:textSize="17sp" android:textStyle="bold" android:textColor="@color/color_222222" android:gravity="center_vertical" android:id="@+id/edit_p2b_ifsc_code" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/money_transfer_ifsc_code" android:singleLine="true" android:maxLength="11" android:digits="@string/upi_alphanumeric_string" android:layout_centerVertical="true" android:inputType="textNoSuggestions" android:imeOptions="actionDone" android:fontFamily="@string/font_family_roboto_regular"/>
                </com.google.android.material.textfield.TextInputLayout>
                <ImageView android:id="@+id/ifsc_verified_image" android:padding="6dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ifsc_verified_image" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                <TextView android:textSize="12sp" android:textColor="@color/color_blue_ifsc" android:gravity="right" android:id="@+id/txt_p2b_ifsc_code_state" android:background="@drawable/upi_layout_selector" android:padding="6dp" android:focusable="true" android:visibility="visible" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:text="@string/money_transfer_find_ifsc" android:layout_alignParentRight="true" android:fontFamily="@string/font_family_roboto_regular"/>
                <RelativeLayout android:id="@+id/ifsc_value_rl" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <TextView android:textSize="12sp" android:textStyle="bold" android:textColor="@color/edittext_hint_color" android:id="@+id/hint" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:text="@string/money_transfer_ifsc_code" android:fontFamily="@string/font_family_roboto_regular"/>
                    <TextView android:textSize="17sp" android:textStyle="bold" android:textColor="#222222" android:id="@+id/ifsc_verified_value" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:layout_marginTop="@dimen/dimen_8dp" android:layout_below="@+id/hint" android:imeOptions="actionDone" android:fontFamily="@string/font_family_roboto_regular"/>
                    <TextView android:textSize="13sp" android:textColor="#222222" android:id="@+id/bank_verified_value" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:layout_marginTop="@dimen/dimen_5dp" android:layout_below="@+id/ifsc_verified_value" android:imeOptions="actionDone" android:fontFamily="@string/font_family_roboto_light"/>
                    <View android:background="#ebebeb" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="@dimen/dimen_4dp" android:layout_marginTop="5dp" android:layout_marginBottom="5dp" android:layout_below="@+id/bank_verified_value"/>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/account_number_type_rl" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_5dp" android:layout_marginTop="25dp" android:layout_marginBottom="@dimen/dimen_5dp">
                <TextView android:textSize="12sp" android:textColor="@color/edittext_hint_color" android:id="@+id/radio_group_label" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/hint_acc_number_type"/>
                <RadioGroup android:orientation="horizontal" android:id="@+id/radioGroup_account_type_p2b" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:weightSum="2" android:layout_below="@+id/radio_group_label">
                    <RadioButton android:textSize="15sp" android:textStyle="bold" android:textColor="#222222" android:id="@+id/send_money_wallet_bank_radio" android:paddingLeft="10dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginRight="12dp" android:checked="true" android:button="@drawable/btn_radio_holo_light" android:text="@string/money_transfer_radio_bank_ac" android:maxLines="1" android:singleLine="false" android:layout_weight="1" android:fontFamily="@string/font_family_roboto_regular"/>
                    <RadioButton android:textSize="15sp" android:textColor="@color/color_222222" android:id="@+id/aadhar_number_radio" android:paddingLeft="10dp" android:layout_width="0dp" android:layout_height="wrap_content" android:button="@drawable/btn_radio_holo_light" android:text="@string/aadhar_number" android:maxLines="1" android:singleLine="false" android:layout_weight="1" android:fontFamily="@string/font_family_roboto_regular"/>
                </RadioGroup>
            </RelativeLayout>
            <com.google.android.material.textfield.TextInputLayout android:theme="@style/MoneyTransferEditTextTheme" android:id="@+id/account_name_til" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="25dp">
                <androidx.appcompat.widget.AppCompatEditText android:textSize="17sp" android:textStyle="bold" android:textColor="#222222" android:textColorHint="@color/edittext_hint_color" android:id="@+id/account_name_et" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/mt_account_holders_name" android:singleLine="true" android:lineSpacingExtra="6sp" android:inputType="textNoSuggestions" android:imeOptions="actionDone" android:letterSpacing="0.03"/>
            </com.google.android.material.textfield.TextInputLayout>
            <RelativeLayout android:id="@+id/bank_name_rl" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:layout_marginTop="35dp">
                <TextView android:textSize="17sp" android:textStyle="bold" android:textColor="@color/color_222222" android:textColorHint="@color/edittext_hint_color" android:gravity="center_vertical" android:id="@+id/edit_p2b_bank_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/bank_name_optional" android:singleLine="true"/>
                <View android:background="#efefef" android:layout_width="match_parent" android:layout_height="@dimen/wallet_1_dp" android:layout_marginTop="5dp" android:layout_below="@+id/edit_p2b_bank_name"/>
            </RelativeLayout>
            <TextView android:textSize="17sp" android:textStyle="bold" android:textColor="#ffffff" android:gravity="center" android:id="@+id/proceedbutton" android:background="@drawable/universal_money_transfer_button_bg" android:visibility="gone" android:layout_width="match_parent" android:layout_height="55dp" android:layout_marginTop="@dimen/dimen_30dp" android:text="@string/proceed" android:fontFamily="@string/font_family_roboto_regular" android:textAlignment="center"/>
        </LinearLayout>
        <ImageView android:id="@+id/motif_iv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_motif_classic" android:layout_alignParentRight="true"/>
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>
