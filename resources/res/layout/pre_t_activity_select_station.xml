<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/select_train_lyt" android:background="#80000000" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:background="@drawable/pre_t_train_train_rounded_corner" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:layout_gravity="center_vertical" android:orientation="horizontal" android:id="@+id/rv_action_bar" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="1">
            <ImageView android:id="@+id/back_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/dimen_20dp" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <RelativeLayout android:orientation="vertical" android:id="@+id/searched_item_container" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:id="@+id/station_type_icon" android:layout_width="@dimen/dimen_20dp" android:layout_height="@dimen/dimen_20dp" android:layout_marginLeft="@dimen/dimen_15dp" android:layout_centerVertical="true"/>
            <TextView android:textSize="13sp" android:textColor="@color/color_0a0a0a" android:id="@+id/station_name" android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_12dp" android:layout_toLeftOf="@+id/station_type" android:layout_toRightOf="@+id/station_type_icon" android:layout_centerVertical="true"/>
            <TextView android:textSize="13sp" android:textColor="@color/color_909090" android:id="@+id/station_type" android:background="@android:color/transparent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_12dp" android:layout_marginRight="@dimen/dimen_15dp" android:text="@string/no_station" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            <TextView android:textSize="12sp" android:textColor="@color/color_9b9b9b" android:id="@+id/tv_no_station_text" android:background="@android:color/transparent" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_47dp" android:layout_marginTop="@dimen/dimen_25dp" android:layout_marginRight="@dimen/dimen_15dp" android:layout_marginBottom="@dimen/dimen_10dp" android:layout_below="@+id/station_name"/>
        </RelativeLayout>
        <View android:background="@color/movie_seat_separator_bg" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="@dimen/dimen_15dp" android:layout_below="@+id/tv_no_station_text"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/title_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/tv_no_station_text"/>
        <RelativeLayout android:background="@color/paytm_default" android:layout_width="match_parent" android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView android:id="@+id/recycler_view_station" android:background="@color/white" android:paddingBottom="10dp" android:visibility="visible" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="match_parent"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
