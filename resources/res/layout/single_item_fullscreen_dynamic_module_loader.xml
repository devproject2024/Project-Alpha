<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/root" android:tag="layout/single_item_fullscreen_dynamic_module_loader_0" android:paddingTop="@dimen/dimen_40dp" android:paddingBottom="@dimen/dimen_40dp" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:id="@+id/iv_icon" android:layout_width="80dp" android:layout_height="80dp" android:layout_marginLeft="@dimen/dimen_25dp" android:layout_marginTop="100dp" android:src="@drawable/ic_paytm_logo"/>
    <TextView android:textSize="24sp" android:textStyle="bold" android:textColor="#222222" android:id="@+id/tv_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_25dp" android:layout_marginTop="@dimen/dimen_20dp" android:layout_marginRight="@dimen/dimen_25dp" android:layout_marginBottom="@dimen/dimen_40dp" android:layout_below="@+id/iv_icon" android:fontFamily="sans-serif" app:fontType="4"/>
    <RelativeLayout android:id="@+id/rl_success" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_25dp" android:layout_marginTop="@dimen/dimen_24dp" android:layout_marginRight="@dimen/dimen_25dp" android:layout_below="@+id/tv_title">
        <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/tv_status" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/lbl_setting_up_your_experience" android:fontFamily="sans-serif-medium"/>
        <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/tv_download_percent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:fontFamily="sans-serif" android:letterSpacing="0.02"/>
        <ProgressBar android:id="@+id/pb_download" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:max="100" android:progress="89" android:layout_below="@+id/tv_status" android:progressTint="@color/color_00b9f5" android:indeterminateTint="@color/color_00b9f5" style="?android:attr/progressBarStyleHorizontal"/>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/ll_failed" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_25dp" android:layout_marginTop="4dp" android:layout_below="@+id/tv_title">
        <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="#ffa400" android:id="@+id/tv_failed" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/lbl_installation_failed" android:fontFamily="sans-serif-medium"/>
        <TextView android:textSize="15sp" android:textColor="#00b9f5" android:id="@+id/tv_retry" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_24dp" android:text="@string/lbl_retry" android:drawableLeft="@drawable/ic_retry" android:drawablePadding="4dp"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/ll_back" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_25dp" android:layout_alignParentBottom="true">
        <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#00aced" android:id="@+id/tv_back" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/lbl_go_back" android:fontFamily="sans-serif-medium"/>
        <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#8ba6c1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/lbl_dd_info" android:fontFamily="sans-serif"/>
    </LinearLayout>
</RelativeLayout>
