<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:id="@+id/bene_bank_ll" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputLayout android:theme="@style/PaytmEditTextTheme" android:id="@+id/layout_account_number" android:padding="@dimen/wallet_5_dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/dimen_5dp">
                <androidx.appcompat.widget.AppCompatEditText android:textSize="@dimen/cart_16sp" android:textColor="@android:color/black" android:textColorHint="@color/grey_phone" android:id="@+id/edit_account_number" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/account_number" android:singleLine="true" android:maxLength="18" android:digits="1234567890" android:inputType="none|text|textNoSuggestions|number|phone"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout android:theme="@style/PaytmEditTextTheme" android:id="@+id/layout_account_holder_name" android:padding="@dimen/wallet_5_dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/dimen_5dp">
                <androidx.appcompat.widget.AppCompatEditText android:textSize="@dimen/cart_16sp" android:textColor="@android:color/black" android:textColorHint="@color/grey_phone" android:id="@+id/edit_account_holeder_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/account_holders_name" android:singleLine="true" android:maxLength="50" android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ .abcdefghijklmnopqrstuvwxyz" android:inputType="textNoSuggestions"/>
            </com.google.android.material.textfield.TextInputLayout>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputLayout android:theme="@style/PaytmEditTextTheme" android:id="@+id/layout_ifsc_code" android:padding="@dimen/wallet_5_dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/dimen_5dp">
                    <androidx.appcompat.widget.AppCompatEditText android:textSize="@dimen/cart_16sp" android:textColor="@android:color/black" android:textColorHint="@color/grey_phone" android:id="@+id/edit_ifsc_code" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/ifsc_code" android:singleLine="true" android:maxLength="11" android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789" android:inputType="textNoSuggestions"/>
                </com.google.android.material.textfield.TextInputLayout>
                <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5dp" android:layout_alignParentRight="true" android:layout_centerVertical="true">
                    <ProgressBar android:id="@+id/beneficiary_ifsc_progress" android:visibility="gone" android:layout_width="@dimen/dimen_15dp" android:layout_height="@dimen/dimen_15dp" android:layout_marginRight="@dimen/dimen_10dp" android:layout_centerVertical="true"/>
                    <TextView android:textColor="@color/paytm_blue" android:id="@+id/tv_find_ifsc_code" android:paddingLeft="@dimen/dimen_10dp" android:paddingTop="@dimen/dimen_10dp" android:paddingRight="@dimen/dimen_10dp" android:paddingBottom="@dimen/dimen_25dp" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5dp" android:text="@string/find_ifsc" android:layout_toLeftOf="@+id/ifsc_verified_image" android:layout_centerVertical="true"/>
                    <ImageView android:id="@+id/ifsc_verified_image" android:padding="5dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ifsc_verified_image" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
        <View android:background="#f3f7f8" android:layout_width="match_parent" android:layout_height="10dp" android:layout_marginTop="20dp"/>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="40dp">
            <TextView android:textSize="17sp" android:textStyle="normal" android:textColor="#222222" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="@string/enable_money_from" android:fontFamily="sans-serif-medium"/>
            <TableRow android:id="@+id/bank_bank_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="20dp">
                <CheckBox android:id="@+id/bank_bank_cb" android:layout_width="wrap_content" android:layout_height="wrap_content" android:onClick="onCheckboxClicked" android:buttonTint="@color/paytm_blue"/>
                <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp">
                    <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#222222" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/title_payment_bank" android:fontFamily="sans-serif-medium"/>
                    <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#999999" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="7dp" android:text="@string/bene_allows_you_to_add_bank" android:lineSpacingExtra="5sp" android:fontFamily="sans-serif"/>
                    <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="@color/color_909090" android:id="@+id/bene_bank_bank_setting_tv" android:paddingTop="5dp" android:paddingBottom="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="@string/advanced_settings" android:lineSpacingExtra="5sp" android:fontFamily="sans-serif-medium" android:letterSpacing="0.02"/>
                </LinearLayout>
            </TableRow>
            <View android:background="#f3f7f8" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="20dp" android:layout_marginTop="20dp"/>
            <TableRow android:id="@+id/bank_wallet_cb_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="20dp">
                <CheckBox android:id="@+id/bank_wallet_cb" android:layout_width="wrap_content" android:layout_height="wrap_content" android:onClick="onCheckboxClicked" android:buttonTint="@color/paytm_blue"/>
                <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp">
                    <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#222222" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/accept_payment_paytm_wallet" android:fontFamily="sans-serif-medium"/>
                    <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#999999" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="7dp" android:text="@string/bene_allows_you_to_add_wallet" android:lineSpacingExtra="5sp" android:fontFamily="sans-serif"/>
                    <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="@color/color_909090" android:id="@+id/bene_bank_wallet_setting_tv" android:paddingTop="5dp" android:paddingBottom="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="@string/advanced_settings" android:lineSpacingExtra="5sp" android:fontFamily="sans-serif-medium" android:letterSpacing="0.02"/>
                </LinearLayout>
            </TableRow>
            <View android:id="@+id/below_wallet_cb_line" android:background="#f3f7f8" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="20dp" android:layout_marginTop="20dp"/>
            <TextView android:textSize="16sp" android:textStyle="normal" android:textColor="#ffffff" android:gravity="center_horizontal" android:layout_gravity="center" android:id="@+id/bene_bank_add_tv" android:background="@drawable/rounded_rectangle_paytmblue" android:padding="@dimen/dimen_15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="40dp" android:layout_marginRight="20dp" android:layout_marginBottom="@dimen/dimen_30dp" android:text="@string/add_beneficiary" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" android:lineSpacingExtra="5sp" android:fontFamily="sans-serif-medium"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
