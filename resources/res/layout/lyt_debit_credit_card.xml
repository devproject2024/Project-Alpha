<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:id="@+id/ll" android:background="@drawable/grey_background_with_border" android:padding="@dimen/dimen_20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dimen_15dp">
        <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_12sp" android:textColor="@color/color_444444" android:id="@+id/tv_enter_card_number" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/enter_card_number" android:fontFamily="sans-serif" app:fontType="2"/>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="7.5dp">
            <EditText android:textSize="@dimen/dimen_16sp" android:textColor="@color/brandstore_tab_selected_color" android:id="@+id/editText" android:background="@drawable/white_background_with_border" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:inputType="phone" android:textCursorDrawable="@drawable/cursor_edittext" android:letterSpacing="0.03"/>
            <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_alignParentEnd="true">
                <ImageView android:layout_gravity="center_vertical" android:id="@+id/iv_clear" android:padding="@dimen/dimen_10dp" android:visibility="gone" android:layout_width="@dimen/dimen_30dp" android:layout_height="@dimen/dimen_30dp" android:src="@drawable/close_msg" android:contentDescription="TODO"/>
                <ImageView android:layout_gravity="center_vertical" android:id="@+id/iv_card_logo" android:visibility="gone" android:layout_width="@dimen/dimen_25dp" android:layout_height="@dimen/dimen_25dp" android:contentDescription="TODO" android:layout_marginEnd="@dimen/dimen_7dp"/>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="17dp" android:layout_marginBottom="2dp" android:baselineAligned="false" android:weightSum="2">
            <LinearLayout android:orientation="vertical" android:layout_width="@dimen/dimen_0dp" android:layout_height="wrap_content" android:layout_weight="1">
                <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_12sp" android:textColor="@color/color_444444" android:id="@+id/tv_expiry_validity" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/expiry_validity_date" android:fontFamily="sans-serif" app:fontType="2"/>
                <net.one97.paytm.wallet.entity.CardExpiryEditText android:textSize="@dimen/dimen_16sp" android:textColorHint="#999999" android:id="@+id/et_expiry_validity" android:background="@drawable/white_background_with_border" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_8dp" android:hint="@string/format_mm_yy" android:inputType="none|text|textNoSuggestions|number|phone" android:textCursorDrawable="@drawable/cursor_edittext" android:fontFamily="sans-serif"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/ll_new_card_cvv" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginStart="@dimen/dimen_20dp">
                <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                    <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_12sp" android:textColor="@color/color_444444" android:id="@+id/tv_enter_cvv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/cvv" android:fontFamily="sans-serif"/>
                    <com.paytm.utility.RoboTextView android:textSize="11sp" android:textStyle="bold" android:textColor="@color/paytm_blue" android:id="@+id/tv_cvv_help" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/help1" android:layout_alignParentRight="true" android:fontFamily="sans-serif" android:layout_alignParentEnd="true"/>
                </RelativeLayout>
                <EditText android:textSize="16dp" android:textColorHint="#999999" android:id="@+id/et_new_card_cvv" android:background="@drawable/white_background_with_border" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:inputType="numberPassword" android:textCursorDrawable="@drawable/cursor_edittext"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView android:id="@+id/tv_low_success" android:background="@color/color_fdfbd3" android:paddingLeft="12dp" android:paddingTop="12.5dp" android:paddingRight="6.5dp" android:paddingBottom="16dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="25dp" android:text="dummy success text" android:paddingStart="12dp" android:paddingEnd="6.5dp"/>
    <RelativeLayout android:layout_gravity="center" android:id="@+id/lyt_scp_enabled" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dimen_10dp">
        <TextView android:textSize="@dimen/dimen_12sp" android:textColor="#26d07c" android:gravity="center" android:id="@+id/scp_enabled_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/one_click_payment_enabled_tv" android:layout_centerVertical="true" android:lineSpacingExtra="@dimen/dimen_3dp" android:fontFamily="sans-serif"/>
        <androidx.appcompat.widget.AppCompatImageView android:id="@+id/scp_enabled_info_cta" android:padding="@dimen/dimen_5dp" android:layout_width="@dimen/dimen_24dp" android:layout_height="@dimen/dimen_24dp" android:contentDescription="TODO" android:layout_marginStart="@dimen/dimen_8dp" android:layout_toEndOf="@+id/scp_enabled_tv" app:srcCompat="@drawable/ic_visa_one_click_info_icon"/>
    </RelativeLayout>
    <include android:id="@+id/ll_visa_one_click" android:visibility="gone" layout="@layout/visa_one_click_layout"/>
    <LinearLayout android:id="@+id/lyt_card_auto_saved" android:focusable="true" android:visibility="visible" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dimen_10dp">
        <ImageView android:id="@+id/shield_icon" android:layout_width="@dimen/dimen_18dp" android:layout_height="@dimen/dimen_18dp" app:srcCompat="@drawable/auto_save_shield"/>
        <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_13sp" android:textColor="@color/color_506d85" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/this_card_will_be_saved_for_faster_payments" android:fontFamily="sans-serif" android:layout_marginStart="@dimen/dimen_15dp" app:fontType="2"/>
    </LinearLayout>
    <LinearLayout android:id="@+id/ll_save_card_for_future" android:focusable="true" android:visibility="gone" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dimen_10dp">
        <CheckBox android:layout_gravity="center" android:id="@+id/cb_save_card" android:background="@drawable/offline_check_box" android:layout_width="@dimen/dimen_18dp" android:layout_height="@dimen/dimen_18dp" android:checked="true" android:button="@android:color/transparent"/>
        <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_13sp" android:textColor="@color/color_506d85" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/save_this_card_for_future_payment" android:fontFamily="sans-serif" android:layout_marginStart="@dimen/dimen_15dp" app:fontType="2"/>
    </LinearLayout>
    <RelativeLayout android:id="@+id/rl_proceed_to_pay" android:background="@drawable/rectangle_blue_filled_round_corner" android:focusable="true" android:visibility="gone" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp">
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:paddingLeft="12.5dp" android:paddingTop="@dimen/dimen_10dp" android:paddingRight="12.5dp" android:paddingBottom="@dimen/dimen_11dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_secure_cta" android:contentDescription="TODO"/>
            <TextView android:textSize="16sp" android:textColor="@color/white" android:id="@+id/tv_pay" android:paddingTop="6.5dp" android:paddingBottom="5.5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/pay_securely" android:singleLine="true" android:fontFamily="sans-serif-medium" android:layout_marginStart="5.5dp"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
