<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/promo_view" android:background="@color/white" android:visibility="visible" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar android:id="@+id/id_movie_promo_toolbar" android:background="@color/white" android:layout_width="match_parent" android:layout_height="?attr/actionBarSize" app:layout_collapseMode="1">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:id="@+id/id_movie_promo_activiy_back_btn" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/back_arrow" android:layout_centerVertical="true"/>
            <com.paytm.utility.RoboTextView android:textSize="16sp" android:textColor="@color/color_000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="@string/apply_promo_code" android:layout_toRightOf="@+id/id_movie_promo_activiy_back_btn" android:layout_centerVertical="true" app:fontType="3"/>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    <RelativeLayout android:id="@+id/offers_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/id_movie_promo_toolbar">
        <RelativeLayout android:id="@+id/promocode_lyt" android:background="@color/white" android:paddingLeft="15dp" android:layout_width="match_parent" android:layout_height="60dp">
            <RelativeLayout android:id="@+id/promocode_input_lyt" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerVertical="true">
                <RelativeLayout android:id="@+id/apply_btn_lyt" android:background="@color/paytm_blue" android:paddingLeft="20dp" android:paddingRight="20dp" android:visibility="gone" android:clickable="true" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_alignParentRight="true">
                    <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/apply" android:layout_centerHorizontal="true" android:layout_centerVertical="true" app:fontType="2"/>
                </RelativeLayout>
                <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/apply_btn_lyt" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:layout_toStartOf="@+id/apply_btn_lyt">
                    <ImageView android:id="@+id/promo_remove_image" android:padding="10dp" android:visibility="gone" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="5dp" android:src="@drawable/claer_recent" android:layout_alignParentRight="true" android:layout_centerInParent="true" android:layout_centerVertical="true"/>
                    <EditText android:textSize="14sp" android:id="@+id/edit_txt_promocode" android:background="@null" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="5dp" android:hint="@string/have_a_promo_code_enter_here" android:singleLine="true" android:layout_toLeftOf="@+id/promo_remove_image" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:inputType="text" android:imeOptions="actionDone" app:fontType="2"/>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/promocode_success_lyt" android:background="@color/white" android:paddingRight="15dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="60dp" android:layout_centerInParent="true" android:layout_centerVertical="true">
                <com.paytm.utility.RoboTextView android:textSize="16sp" android:textColor="@color/green_train" android:id="@+id/success_promo_code" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="5dp" android:layout_below="@+id/promocode_lyt" android:layout_centerVertical="true" app:fontType="2"/>
                <ImageView android:id="@+id/apply_tick_image" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:src="@drawable/tick_applied" android:layout_toRightOf="@+id/success_promo_code" android:layout_centerVertical="true"/>
                <ImageView android:id="@+id/promo_applied_success_remove_image" android:padding="10dp" android:visibility="visible" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="5dp" android:src="@drawable/claer_recent" android:layout_alignParentRight="true" android:layout_centerInParent="true" android:layout_centerVertical="true"/>
            </RelativeLayout>
        </RelativeLayout>
        <View android:id="@+id/view_divider" android:background="@color/light_grey" android:layout_width="match_parent" android:layout_height="1dp" android:layout_below="@+id/promocode_lyt"/>
        <com.paytm.utility.RoboTextView android:textSize="11sp" android:textColor="@color/color_000000" android:id="@+id/promo_status_message" android:paddingLeft="15dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:layout_marginBottom="5dp" android:maxLines="2" android:layout_below="@+id/view_divider" app:fontType="2"/>
        <com.paytm.utility.RoboTextView android:textSize="13sp" android:textColor="@color/payment_success_text_grey" android:id="@+id/choose_offer_header" android:paddingLeft="15dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:layout_marginBottom="10dp" android:text="@string/movies_choose_from_offer_below" android:layout_below="@+id/promo_status_message" app:fontType="4"/>
        <View android:id="@+id/second_view_divider" android:background="@color/separators" android:layout_width="match_parent" android:layout_height="1dp" android:layout_below="@+id/choose_offer_header"/>
        <RelativeLayout android:id="@+id/offers_list_lyt" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="10dp" android:layout_above="@+id/offer_txt_lyt" android:layout_below="@+id/second_view_divider">
            <androidx.recyclerview.widget.RecyclerView android:id="@+id/offers_list" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="15dp"/>
        </RelativeLayout>
        <RelativeLayout android:orientation="vertical" android:id="@+id/offer_txt_lyt" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
            <View android:id="@+id/offer_divider" android:background="@color/passbook_separators" android:layout_width="match_parent" android:layout_height="0.5dp"/>
            <com.paytm.utility.RoboTextView android:textSize="11sp" android:textColor="@color/train_txt_gray" android:id="@+id/cash_back_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="15dp" android:text="@string/hotel_offers_cash_back_info" app:fontType="2"/>
            <View android:id="@+id/cash_back_offer_divider" android:background="@color/passbook_separators" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_below="@+id/cash_back_text"/>
            <com.paytm.utility.RoboTextView android:textSize="11sp" android:textColor="@color/train_txt_gray" android:id="@+id/wallet_loyality_cash_back_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="15dp" android:text="@string/wallet_cash_back_loyality_txt" android:layout_below="@+id/cash_back_offer_divider" app:fontType="2"/>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/no_offers_layout" android:background="@android:color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/id_movie_promo_toolbar">
        <TextView android:textSize="18sp" android:gravity="center_horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:text="@string/no_offers_screen"/>
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/padding_profile_separator" android:src="@drawable/no_offers_image"/>
        <TextView android:textSize="16sp" android:textColor="#868686" android:gravity="center_horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/padding_profile_separator"/>
    </LinearLayout>
    <ProgressBar android:id="@+id/update_progress_bar_offers" android:layout_width="wrap_content" android:layout_height="wrap_content" android:indeterminate="false" android:indeterminateDrawable="@drawable/movie_progress_large_holo" android:layout_centerInParent="true"/>
    <include android:layout_width="match_parent" android:layout_height="match_parent" layout="@layout/movies_no_network_layout"/>
</RelativeLayout>
