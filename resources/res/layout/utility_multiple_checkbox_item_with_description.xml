<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
        <CheckBox android:theme="@style/BlueCheckBoxTheme" android:textSize="13sp" android:textColor="@color/paytm_blue" android:id="@+id/utility_check_box" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_8dp">
            <TextView android:textSize="16sp" android:textStyle="normal" android:textColor="@color/black" android:id="@+id/name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_8dp" android:layout_toLeftOf="@+id/txt_rupee_symbol" android:layout_alignParentLeft="true"/>
            <TextView android:textSize="16sp" android:textColor="@color/black" android:id="@+id/txt_rupee_symbol" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/rupees" android:layout_toLeftOf="@+id/price_ll"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/price_ll" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/arrow_hide_show">
                <EditText android:textSize="16sp" android:textColor="@color/black" android:id="@+id/price_edit_text_view" android:paddingTop="0dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/arrow_hide_show" android:inputType="numberDecimal"/>
                <TextView android:textSize="16sp" android:textColor="@color/black" android:id="@+id/price_text_view" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/rupees" android:layout_toLeftOf="@+id/price"/>
            </LinearLayout>
            <ImageView android:id="@+id/arrow_hide_show" android:padding="@dimen/dimen_8dp" android:layout_width="@dimen/dimen_32dp" android:layout_height="@dimen/dimen_32dp" android:layout_marginLeft="@dimen/dimen_8dp" android:layout_marginRight="@dimen/dimen_16dp" android:src="@drawable/down_arrow_hide" android:layout_alignParentRight="true"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/description_layout" android:paddingBottom="@dimen/dimen_4dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_16dp" android:layout_below="@+id/name"/>
        </RelativeLayout>
    </LinearLayout>
    <View android:id="@+id/divider" android:background="@color/bg_grid_grey" android:layout_width="match_parent" android:layout_height="@dimen/dimen_1dp" android:layout_marginLeft="@dimen/dimen_8dp" android:layout_marginTop="@dimen/dimen_20dp" android:layout_marginBottom="@dimen/dimen_20dp"/>
</LinearLayout>
