<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/lyt_delete_background" android:background="@color/color_ff203b" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/lyt_delete_right" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_15dp" android:layout_alignParentRight="true" android:layout_centerVertical="true">
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/dustbin"/>
            <TextView android:textSize="10sp" android:textStyle="normal" android:textColor="#ffffff" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="@string/delete" android:lineSpacingExtra="3.4sp" android:fontFamily="sans-serif"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/whole_item_container" android:background="@color/white" android:paddingLeft="@dimen/dimen_15dp" android:paddingRight="@dimen/dimen_15dp" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:gravity="right" android:orientation="vertical" android:id="@+id/lyt_price_trend_item" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true">
            <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:textSize="12sp" android:textColor="@color/black" android:gravity="top" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginTop="4dp" android:text="@string/rupee_symbol"/>
                <TextView android:textSize="@dimen/dimen_22sp" android:textColor="@color/black" android:id="@+id/txt_fare_alert_item_price" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_2dp"/>
            </LinearLayout>
            <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_2dp">
                <TextView android:textSize="16sp" android:textColor="@color/green_fare_alert" android:id="@+id/txt_fare_alert_item_rupee" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_5dp" android:layout_marginTop="-1dp" android:text="@string/rupee_symbol"/>
                <TextView android:textSize="16sp" android:textColor="@color/green_fare_alert" android:id="@+id/txt_fare_alert_item_trend_price" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_1dp"/>
                <ImageView android:id="@+id/img_fare_alert_item_trend" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="3dp" android:src="@drawable/arrow_down_trend"/>
                <TextView android:textSize="12sp" android:textColor="@color/color_8c8c8c" android:id="@+id/txt_fare_alert_item_duration" android:paddingTop="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_5dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/src_dest_value_container" android:paddingTop="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:layout_toLeftOf="@+id/lyt_price_trend_item">
            <com.paytm.utility.RoboTextView android:textSize="15sp" android:textColor="#323232" android:id="@+id/flight_recent_tab_source_city_name" android:layout_width="wrap_content" android:layout_height="wrap_content" app:fontType="4"/>
            <ImageView android:layout_gravity="center_vertical" android:id="@+id/flight_recent_tab_image_view_junry_type" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <com.paytm.utility.RoboTextView android:textSize="15sp" android:textColor="#323232" android:id="@+id/flight_recent_tab_destination_city_name" android:layout_width="wrap_content" android:layout_height="wrap_content" app:fontType="4"/>
        </LinearLayout>
        <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="#8c8c8c" android:id="@+id/flight_recent_tab_date_of_travel" android:paddingTop="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/src_dest_value_container" app:fontType="2"/>
        <View android:id="@+id/seperator" android:background="@color/passbook_separators" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="15dp" android:layout_below="@+id/lyt_price_trend_item" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</FrameLayout>
