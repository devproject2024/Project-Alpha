<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:background="@color/white" android:padding="@dimen/dimen_20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
            <ImageView android:id="@+id/iv_transaction_icon" android:background="@drawable/circle_border" android:layout_width="@dimen/dimen_36dp" android:layout_height="@dimen/dimen_36dp" android:src="@drawable/upi_merchant_icon" android:scaleType="centerInside"/>
            <TextView android:textSize="12sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/tv_name_initial" android:background="#2cce86" android:layout_width="@dimen/dimen_36dp" android:layout_height="@dimen/dimen_36dp" android:fontFamily="@string/font_family_roboto_medium"/>
            <RelativeLayout android:id="@+id/rl_border" android:background="@drawable/bg_rounded_corner_acc_page" android:layout_width="@dimen/dimen_36dp" android:layout_height="@dimen/dimen_36dp"/>
        </FrameLayout>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/wallet_15_dp">
            <TextView android:textSize="@dimen/dimen_15sp" android:textStyle="normal" android:textColor="@color/color_222222" android:ellipsize="end" android:id="@+id/tv_transaction_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_6dp" android:maxLines="2" android:layout_toLeftOf="@+id/amount_container" android:layout_alignParentLeft="true" android:lineSpacingMultiplier="1.2" android:fontFamily="sans-serif-medium"/>
            <androidx.constraintlayout.widget.ConstraintLayout android:orientation="horizontal" android:id="@+id/amount_container" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true">
                <TextView android:textSize="@dimen/dimen_17sp" android:textStyle="normal" android:textColor="@color/color_222222" android:id="@+id/tv_amount_indicator" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_6dp" android:lineSpacingExtra="-3sp" android:fontFamily="sans-serif" app:layout_constraintBaseline_toBaselineOf="@+id/tv_amount" app:layout_constraintRight_toLeftOf="@+id/tv_amount"/>
                <TextView android:textSize="@dimen/dimen_17sp" android:textColor="@color/color_222222" android:gravity="end" android:id="@+id/tv_amount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_16dp" android:lineSpacingExtra="-3sp" android:fontFamily="sans-serif" app:layout_constraintRight_toLeftOf="@+id/iv_more_icon" app:layout_constraintTop_toTopOf="0" app:layout_goneMarginRight="0dp"/>
                <ImageView android:id="@+id/iv_more_icon" android:visibility="gone" android:layout_width="@dimen/dimen_24dp" android:layout_height="@dimen/dimen_24dp" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toTopOf="0" app:srcCompat="@drawable/ic_more_black"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView android:textSize="@dimen/dimen_12sp" android:textStyle="normal" android:textColor="@color/color_222222" android:id="@+id/tv_upi_address" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/wallet_7_dp" android:maxLines="2" android:layout_below="@+id/tv_transaction_title" android:lineSpacingExtra="7sp" android:fontFamily="sans-serif"/>
            <androidx.constraintlayout.widget.ConstraintLayout android:orientation="horizontal" android:id="@+id/timestamp_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:layout_below="@+id/tv_upi_address">
                <TextView android:textSize="@dimen/wallet_11_sp" android:textColor="#999999" android:id="@+id/tv_timestamp" android:layout_width="0dp" android:layout_height="wrap_content" android:fontFamily="font_family_roboto_regular" android:layout_marginEnd="16dp" app:layout_constraintEnd_toStartOf="@+id/ivStatusIcon" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0"/>
                <ImageView android:id="@+id/ivStatusIcon" android:visibility="gone" android:layout_width="@dimen/dimen_16dp" android:layout_height="@dimen/dimen_16dp" android:layout_marginEnd="@dimen/dimen_8dp" app:layout_constraintEnd_toStartOf="@+id/tv_status" app:layout_constraintTop_toTopOf="0"/>
                <TextView android:textSize="@dimen/dimen_11sp" android:textColor="#b8c2cb" android:gravity="end" android:id="@+id/tv_status" android:layout_width="wrap_content" android:layout_height="wrap_content" android:fontFamily="@string/font_family_roboto_regular" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toTopOf="0"/>
                <ImageView android:id="@+id/recurringStatusIcon" android:layout_width="@dimen/dimen_16dp" android:layout_height="16dp" app:layout_constraintBottom_toBottomOf="@+id/recurringStatus" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="@+id/recurringStatus"/>
                <TextView android:textSize="@dimen/dimen_11sp" android:textColor="#b8c2cb" android:gravity="end" android:id="@+id/recurringStatus" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_8dp" android:fontFamily="@string/font_family_roboto_regular" android:layout_marginStart="@dimen/dimen_8dp" app:layout_constraintStart_toEndOf="@+id/recurringStatusIcon" app:layout_constraintTop_toBottomOf="@+id/tv_timestamp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView android:textSize="@dimen/wallet_11_sp" android:textColor="#9c9c9c" android:id="@+id/tv_note" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/wallet_5_dp" android:layout_marginRight="@dimen/dimen_5dp" android:text="@string/upi_note_string" android:layout_below="@+id/timestamp_container" android:fontFamily="sans-serif"/>
            <TextView android:textSize="@dimen/wallet_11_sp" android:textStyle="normal" android:textColor="@color/color_999999" android:id="@+id/tv_expiry" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/wallet_15_dp" android:layout_marginRight="@dimen/dimen_5dp" android:text="@string/upi_request_expires" android:drawableLeft="@drawable/ic_upi_request_expires" android:drawablePadding="@dimen/dimen_10dp" android:layout_below="@+id/tv_note" android:lineSpacingExtra="-2sp" android:fontFamily="sans-serif"/>
        </RelativeLayout>
    </LinearLayout>
    <View android:id="@+id/v_divider" android:background="@color/color_f3f7f8" android:layout_width="match_parent" android:layout_height="1dp"/>
    <RelativeLayout android:id="@+id/rl_spam_actions" android:background="@color/white" android:padding="@dimen/dimen_10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="@dimen/dimen_12sp" android:textStyle="normal" android:textColor="@color/color_00b9f5" android:id="@+id/tv_delete_spam" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="65dp" android:layout_marginRight="@dimen/dimen_5dp" android:text="@string/upi_delete_request" android:fontFamily="sans-serif"/>
        <TextView android:textSize="@dimen/dimen_12sp" android:textStyle="normal" android:textColor="@color/color_00b9f5" android:id="@+id/tv_remove_spam" android:padding="@dimen/dimen_10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_5dp" android:text="@string/upi_remove_from_spam" android:layout_alignParentRight="true" android:fontFamily="sans-serif"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/rl_received_actions" android:background="@color/white" android:padding="@dimen/dimen_10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="@dimen/dimen_12sp" android:textStyle="normal" android:textColor="@color/color_00b9f5" android:id="@+id/tv_mark_spam" android:padding="@dimen/dimen_10dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_10dp" android:layout_marginRight="@dimen/dimen_5dp" android:text="@string/upi_mark_as_spam" android:fontFamily="sans-serif"/>
        <TextView android:textSize="@dimen/dimen_12sp" android:textStyle="normal" android:textColor="@color/color_00b9f5" android:id="@+id/tv_decline_upi" android:padding="@dimen/dimen_10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_30dp" android:layout_marginRight="@dimen/dimen_30dp" android:text="@string/upi_btn_decline" android:layout_toLeftOf="@+id/tv_pay_upi" android:layout_alignBottom="@+id/tv_pay_upi" android:fontFamily="sans-serif"/>
        <TextView android:textSize="@dimen/dimen_12sp" android:textStyle="normal" android:textColor="@color/white" android:id="@+id/tv_pay_upi" android:background="@drawable/bg_btn_blue_background" android:paddingLeft="@dimen/dimen_30dp" android:paddingTop="@dimen/dimen_10dp" android:paddingRight="@dimen/dimen_30dp" android:paddingBottom="@dimen/dimen_10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/upi_btn_pay" android:layout_alignBottom="@+id/tv_mark_spam" android:layout_alignParentRight="true" android:fontFamily="sans-serif"/>
    </RelativeLayout>
</LinearLayout>
