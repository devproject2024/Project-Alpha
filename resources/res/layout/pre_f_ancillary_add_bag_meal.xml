<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="#fff0f0f0" android:paddingLeft="@dimen/dimen_8dp" android:paddingRight="@dimen/dimen_8dp" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:paddingTop="@dimen/dimen_14dp" android:paddingBottom="@dimen/dimen_10dp" android:layout_width="match_parent" android:layout_height="match_parent">
            <HorizontalScrollView android:visibility="visible" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/title_multiple_hops_container" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            </HorizontalScrollView>
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/single_hop_title_container" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_12dp">
                <ImageView android:layout_gravity="center_vertical" android:id="@+id/img_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" app:srcCompat="@drawable/pre_f_flight_icon_new"/>
                <com.paytm.utility.RoboTextView android:textSize="16sp" android:textColor="@android:color/black" android:gravity="center_vertical" android:id="@+id/source" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_14dp" android:singleLine="true" app:fontType="4" style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"/>
                <ImageView android:layout_gravity="center" android:id="@+id/img_arrow" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_6dp" android:layout_marginRight="@dimen/dimen_6dp" app:srcCompat="@drawable/pre_f_flight_arrow_right_black"/>
                <com.paytm.utility.RoboTextView android:textSize="16sp" android:textColor="@android:color/black" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/destination" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Goa" android:maxLines="1" app:fontType="4" style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"/>
            </LinearLayout>
            <LinearLayout android:id="@+id/hop_noitem_msgLyt" android:background="@color/color_f1f6fc" android:paddingTop="@dimen/dimen_10dp" android:paddingBottom="@dimen/dimen_10dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="7dp">
                <ImageView android:id="@+id/hop_note_icon" android:padding="@dimen/dimen_2dp" android:layout_width="@dimen/dimen_13dp" android:layout_height="@dimen/dimen_18dp" android:layout_marginLeft="15dp"/>
                <com.paytm.utility.RoboTextView android:textSize="11sp" android:textColor="@color/color_666666" android:layout_gravity="center_vertical" android:id="@+id/hop_no_item_message" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="15dp" android:text="" android:lineSpacingExtra="2sp" android:letterSpacing="0.02" app:fontType="2"/>
            </LinearLayout>
            <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="@color/color_666666" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/select_passenger" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_13dp" android:layout_marginTop="@dimen/dimen_16dp" android:text="@string/flight_select_passenger" android:maxLines="1" app:fontType="4" style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/ancillary_add_bag_container" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="@dimen/dimen_16dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
