<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent">
    <View android:background="#80494949" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_above="@+id/train_assist_bottom_laout"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/train_assist_bottom_laout" android:background="#ffffff" android:padding="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_alignParentBottom="true" android:layout_alignParentStart="true">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:id="@+id/train_assist_back_button" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/black" android:gravity="center" android:layout_gravity="center" android:id="@+id/train_assist_title_textview" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/train_assist_reset_password_for" app:fontType="3"/>
        </LinearLayout>
        <TextView android:textSize="14sp" android:textColor="@color/gray_shade1" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="22dp" android:text="@string/irctc_registered_mobile_no_or_email_id" app:fontType="2"/>
        <EditText android:theme="@style/recharge_text_input_layout_theme" android:textSize="14sp" android:textStyle="bold" android:textColor="@color/black" android:id="@+id/train_assist_reset_password_edittext" android:layout_width="match_parent" android:layout_height="wrap_content" app:fontType="3"/>
        <RelativeLayout android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp">
            <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/blue_add_money" android:gravity="center" android:layout_gravity="center" android:id="@+id/train_assist_reset_textview" android:padding="10dp" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Reset" android:layout_alignParentRight="true" app:fontType="3"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/auto_retry_info_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
                <ProgressBar android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <TextView android:gravity="center" android:id="@+id/auto_retry_description_text" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/please_wait_we_re_auto_trying_with_mobile_no_n_s"/>
                <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/blue_add_money" android:gravity="center" android:layout_gravity="center" android:id="@+id/auto_retry_cancel_button" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/cancel" app:fontType="3"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
