<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:orientation="horizontal" android:id="@+id/lv_additional_pref_title_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_15dp" android:layout_marginTop="@dimen/dimen_15dp" android:layout_marginRight="@dimen/dimen_15dp" android:layout_marginBottom="@dimen/dimen_12dp">
        <TextView android:textSize="@dimen/dimen_14sp" android:textStyle="bold" android:textColor="@color/color_222222" android:gravity="center_vertical" android:id="@+id/tv_additional_pref_txt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/train_additional_preference" android:layout_alignParentLeft="true" android:layout_centerInParent="true" app:fontType="3"/>
        <com.paytm.utility.RoboTextView android:textSize="12sp" android:textColor="@color/color_9b9b9b" android:ellipsize="end" android:id="@+id/tv_additional_optional_txt" android:paddingRight="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_5dp" android:text="@string/optional" android:singleLine="true" android:layout_toRightOf="@+id/tv_additional_pref_txt" android:layout_centerVertical="true" app:fontType="2"/>
        <ImageView android:id="@+id/iv_collapse_view" android:layout_width="@dimen/dimen_10dp" android:layout_height="@dimen/dimen_10dp" android:src="@drawable/pre_t_drop" android:layout_alignParentRight="true" android:layout_centerInParent="true"/>
        <com.paytm.utility.RoboTextView android:textSize="13sp" android:textColor="@color/train_add_extra_text_color" android:id="@+id/tv_hide_coach" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_15dp" android:text="@string/hide" android:layout_alignParentRight="true" app:fontType="3"/>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/lv_additional_container" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content">
        <View android:id="@+id/additional_pref_divider" android:background="@color/color_00b9f5" android:layout_width="match_parent" android:layout_height="@dimen/dimen_1_5dp" android:layout_marginBottom="@dimen/dimen_12dp"/>
        <RelativeLayout android:id="@+id/rv_auto_upgrade_container" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_15dp" android:layout_marginTop="5dp" android:layout_marginRight="@dimen/dimen_15dp" android:layout_marginBottom="@dimen/dimen_17dp">
            <CheckBox android:textSize="16sp" android:id="@+id/radio_auto_upgrade" android:background="@drawable/pre_t_train_check_box" android:layout_width="18dp" android:layout_height="18dp" android:button="@android:color/transparent" android:layout_centerVertical="true"/>
            <LinearLayout android:orientation="vertical" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="17dp" android:layout_toRightOf="@+id/radio_auto_upgrade" android:layout_centerVertical="true">
                <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="@color/color_666666" android:id="@+id/autoUpgrade_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/auto_upgrade_text" android:drawablePadding="5dp" app:fontType="2"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/rv_coach_id_checkbox_container" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_15dp" android:layout_marginRight="@dimen/dimen_15dp" android:layout_marginBottom="@dimen/dimen_15dp">
            <CheckBox android:textSize="16sp" android:id="@+id/radio_coach_id" android:background="@drawable/pre_t_train_check_box" android:layout_width="18dp" android:layout_height="18dp" android:button="@android:color/transparent" android:layout_centerVertical="true"/>
            <LinearLayout android:orientation="vertical" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="17dp" android:layout_toRightOf="@+id/radio_coach_id" android:layout_centerVertical="true">
                <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="@color/color_666666" android:id="@+id/lv_coach_id_txt" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/prefered_coach_id_text" android:drawablePadding="5dp" app:fontType="2"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/rv_coach_number_container" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_15dp" android:layout_marginRight="@dimen/dimen_15dp">
            <net.one97.paytm.common.widgets.CJRFloatingLabel android:id="@+id/coach_number_text" android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/entr_coach_number" app:isHintPrefixRequired="false"/>
            <ImageView android:id="@+id/coach_clear" android:visibility="gone" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="13dp" android:src="@drawable/pre_t_cross_grey" android:layout_centerVertical="true" android:layout_alignEnd="@+id/coach_number_text"/>
        </RelativeLayout>
        <View android:id="@+id/coach_view_divider" android:background="@color/payment_success_line_grey" android:visibility="gone" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:layout_marginBottom="@dimen/dimen_15dp"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/coach_number_info_msg" android:paddingBottom="@dimen/dimen_17dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:id="@+id/coach_number_info_icon" android:layout_width="@dimen/dimen_20dp" android:layout_height="@dimen/dimen_15dp" android:layout_marginLeft="15dp"/>
            <com.paytm.utility.RoboTextView android:textSize="11sp" android:textColor="@color/color_666666" android:id="@+id/coach_number_message" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_marginRight="15dp" android:text="@string/preferences_info_msg" android:lineSpacingExtra="4dp" app:fontType="2"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
