<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:paddingBottom="@dimen/dimen_20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView android:id="@+id/cross_iv" android:layout_width="30dp" android:layout_height="30dp" android:layout_marginTop="25dp" android:layout_marginRight="25dp" android:layout_alignParentRight="true" app:srcCompat="@drawable/p2b_ic_close_grey"/>
    <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="#1d252d" android:id="@+id/w_custom_dialog_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="25dp" android:layout_marginTop="25dp" android:layout_marginRight="10dp" android:text="@string/p2b_reenter_account_number" android:layout_toLeftOf="@+id/cross_iv" android:layout_alignParentLeft="true" android:lineSpacingExtra="6sp" android:fontFamily="sans-serif" android:letterSpacing="0.03"/>
    <TextView android:textSize="16sp" android:textStyle="normal" android:textColor="#1d252d" android:ellipsize="end" android:id="@+id/name_tv" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="25dp" android:layout_marginTop="15dp" android:layout_marginRight="5dp" android:maxLines="1" android:layout_toLeftOf="@+id/imageLayout" android:layout_below="@+id/w_custom_dialog_title" android:layout_alignParentLeft="true" android:lineSpacingExtra="5sp" android:fontFamily="sans-serif-medium" android:letterSpacing="0.03"/>
    <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#506d85" android:ellipsize="end" android:id="@+id/bank_ifsc_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="25dp" android:layout_marginTop="8dp" android:maxLines="1" android:layout_toLeftOf="@+id/imageLayout" android:layout_below="@+id/name_tv" android:layout_alignParentLeft="true" android:lineSpacingExtra="6sp" android:fontFamily="@string/font_family_roboto_regular"/>
    <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#506d85" android:id="@+id/bank_name_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="25dp" android:layout_marginTop="5dp" android:layout_toLeftOf="@+id/imageLayout" android:layout_below="@+id/bank_ifsc_tv" android:layout_alignParentLeft="true" android:lineSpacingExtra="4sp" android:fontFamily="@string/font_family_roboto_regular"/>
    <RelativeLayout android:gravity="center_horizontal" android:id="@+id/imageLayout" android:visibility="gone" android:layout_width="75dp" android:layout_height="wrap_content" android:layout_marginRight="15dp" android:layout_alignTop="@+id/name_tv" android:layout_alignParentRight="true">
        <ImageView android:id="@+id/receiver_bank_iv" android:background="@drawable/p2b_bg_white_circular_stroke" android:padding="15dp" android:visibility="visible" android:layout_width="60dp" android:layout_height="60dp" android:layout_centerHorizontal="true" app:srcCompat="@drawable/p2b_ic_default_bank"/>
        <TextView android:textSize="10sp" android:textStyle="normal" android:textColor="#999999" android:ellipsize="end" android:gravity="center_horizontal" android:id="@+id/bankLogoName" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:maxLines="1" android:layout_below="@+id/receiver_bank_iv" android:layout_alignParentRight="true" android:fontFamily="sans-serif"/>
    </RelativeLayout>
    <com.google.android.material.textfield.TextInputLayout android:theme="@style/p2b_amount_theme" android:id="@+id/float_p2b_account_number" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="25dp" android:layout_marginTop="25dp" android:layout_marginRight="25dp" android:layout_marginBottom="10dp" android:hint="@string/p2b_enter_account_number" android:layout_below="@+id/bank_name_tv" app:hintAnimationEnabled="false">
        <EditText android:textSize="17sp" android:textStyle="bold" android:textColor="@color/p2b_color_222222" android:id="@+id/edit_p2b_account_number" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true" android:digits="@string/p2b_mt_alphanumeric_string_without_space" android:inputType="none|text|textNoSuggestions|number|phone" android:imeOptions="actionDone"/>
    </com.google.android.material.textfield.TextInputLayout>
    <CheckBox android:enabled="false" android:textSize="@dimen/dimen_12sp" android:textColor="@color/p2b_color_222222" android:ellipsize="marquee" android:id="@+id/checkbox" android:paddingLeft="@dimen/dimen_15dp" android:visibility="gone" android:fadingEdge="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="25dp" android:layout_marginTop="@dimen/dimen_10dp" android:layout_marginRight="25dp" android:layout_marginBottom="10dp" android:checked="true" android:button="@drawable/p2b_kyc_checkbox" android:text="@string/p2b_add_this_card_to_my_saved_account" android:scrollHorizontally="true" android:layout_below="@+id/float_p2b_account_number" android:marqueeRepeatLimit="marquee_forever" android:fontFamily="@string/font_family_roboto_regular"/>
    <TextView android:textSize="17sp" android:textStyle="bold" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/w_custom_dialog_btn_positive" android:background="@drawable/p2b_btn_background" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="25dp" android:layout_marginTop="@dimen/dimen_30dp" android:layout_marginRight="25dp" android:layout_marginBottom="@dimen/dimen_30dp" android:text="@string/p2b_confirm" android:layout_below="@+id/float_p2b_account_number" android:textAllCaps="false"/>
</RelativeLayout>
