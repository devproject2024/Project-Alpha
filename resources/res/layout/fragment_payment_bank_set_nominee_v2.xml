<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:id="@+id/set_nominee_img_close" android:padding="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/back_arrow" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
            <ImageView android:paddingTop="15dp" android:paddingBottom="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/pb_ic_payments_bank_logo" android:layout_centerInParent="true"/>
        </RelativeLayout>
        <View android:background="#ebebeb" android:layout_width="match_parent" android:layout_height="1dp"/>
        <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_25dp" android:layout_marginRight="@dimen/dimen_25dp">
                <com.paytm.utility.RoboTextView android:textSize="21sp" android:textColor="@android:color/black" android:layout_gravity="left" android:id="@+id/payment_bank_set_nominee_tv_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="25dp" android:text="@string/add_nominee_bank_acc" app:fontType="4"/>
                <com.paytm.utility.RoboTextView android:textSize="12sp" android:textColor="#aaa" android:gravity="left" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/set_nominee_desc" app:fontType="2"/>
                <RelativeLayout android:id="@+id/payment_bank_set_nominee_rl_add_nominee" android:paddingTop="20dp" android:paddingBottom="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_30dp">
                    <RadioButton android:id="@+id/payment_bank_set_nominee_rbtn_add_nominee" android:layout_width="wrap_content" android:layout_height="wrap_content" android:button="@drawable/btn_radio_holo_light" android:layout_centerVertical="true"/>
                    <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="@android:color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="@string/i_want_to_add_a_nominee_now" android:layout_toRightOf="@+id/payment_bank_set_nominee_rbtn_add_nominee" android:layout_centerVertical="true" app:fontType="3"/>
                </RelativeLayout>
                <RelativeLayout android:id="@+id/payment_bank_set_nominee_rl_donot_add_nominee" android:paddingTop="20dp" android:paddingBottom="20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <RadioButton android:id="@+id/payment_bank_set_nominee_rbtn_donot_add_nominee" android:layout_width="wrap_content" android:layout_height="wrap_content" android:button="@drawable/btn_radio_holo_light" android:layout_centerVertical="true"/>
                    <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="@android:color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="@string/i_donot_want_to_add_a_nominee_now" android:layout_toRightOf="@+id/payment_bank_set_nominee_rbtn_donot_add_nominee" android:layout_centerVertical="true" app:fontType="3"/>
                </RelativeLayout>
                <com.paytm.utility.RoboTextView android:textSize="11sp" android:textColor="#fd5c5c" android:gravity="center_horizontal" android:id="@+id/set_nominee_tv_select_one_option" android:paddingLeft="10dp" android:paddingRight="10dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/msg_please_select_one_option" app:fontType="2"/>
                <View android:layout_gravity="center_horizontal" android:background="@color/divider_color" android:layout_width="25dp" android:layout_height="@dimen/dimen_2dp" android:layout_marginTop="15dp"/>
                <LinearLayout android:id="@+id/set_nominee_bottom_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <RelativeLayout android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="25dp" android:layout_marginBottom="25dp">
                        <LinearLayout android:gravity="left" android:layout_gravity="center_horizontal" android:orientation="horizontal" android:id="@+id/payments_bank_intro_tnc_part_1_layout" android:layout_width="match_parent" android:layout_height="wrap_content">
                            <com.paytm.utility.RoboTextView android:textSize="11sp" android:textColor="#aaa" android:id="@+id/payments_bank_intro_tnc_part_1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/by_proceeding_i_accept_the" app:fontType="2"/>
                            <com.paytm.utility.RoboTextView android:textSize="11sp" android:textColor="@color/paytm_blue" android:id="@+id/paytments_bank_intro_btn_tnc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_2dp" android:text="@string/terms_and_conditions" android:layout_toRightOf="@+id/payments_bank_intro_tnc_part_1" app:fontType="3"/>
                        </LinearLayout>
                        <com.paytm.utility.RoboTextView android:textSize="11sp" android:textColor="#aaa" android:gravity="left" android:id="@+id/payments_bank_intro_tnc_part_2" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/bank_tnc_part_2" android:layout_below="@+id/payments_bank_intro_tnc_part_1_layout" app:fontType="2"/>
                    </RelativeLayout>
                    <CheckBox android:textSize="11sp" android:textColor="#aaa" android:gravity="left" android:id="@+id/paytments_bank_set_nominee_checkbox_section_one" android:paddingLeft="@dimen/wallet_10_dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="true" android:button="@drawable/pb_kyc_checkbox"/>
                    <com.paytm.utility.RoboTextView android:textSize="11sp" android:textColor="@color/paytm_blue" android:id="@+id/know_more_tv_section_one" android:paddingTop="3dp" android:paddingBottom="3dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="35dp" android:text="@string/pb_know_more"/>
                    <CheckBox android:textSize="11sp" android:textColor="#aaa" android:gravity="left" android:id="@+id/paytments_bank_set_nominee_checkbox_section_two" android:paddingLeft="@dimen/wallet_10_dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:checked="true" android:button="@drawable/pb_kyc_checkbox"/>
                    <com.paytm.utility.RoboTextView android:textSize="11sp" android:textColor="@color/paytm_blue" android:id="@+id/know_more_tv_section_two" android:paddingTop="3dp" android:paddingBottom="3dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="35dp" android:text="@string/terms_amp_conditions"/>
                </LinearLayout>
                <Button android:textSize="20sp" android:textColor="@android:color/white" android:id="@+id/paytments_bank_set_nominee_btn_proceed" android:background="@drawable/pb_button_click" android:padding="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginBottom="10dp" android:text="@string/proceed" android:layout_alignParentBottom="true" android:textAllCaps="false"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>
