<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/root_view" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar android:id="@+id/tool_bar" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TableRow android:gravity="center_vertical" android:paddingRight="@dimen/dimen_20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:id="@+id/bene_back_arrow_iv" android:paddingLeft="5dp" android:paddingTop="15dp" android:paddingRight="20dp" android:paddingBottom="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/back_arrow" android:layout_centerVertical="true"/>
            <TextView android:textSize="17sp" android:textStyle="normal" android:textColor="#222222" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Advanced Settings" android:fontFamily="sans-serif-medium"/>
        </TableRow>
    </androidx.appcompat.widget.Toolbar>
    <View android:id="@+id/view" android:background="#fafbfb" android:layout_width="match_parent" android:layout_height="1dp" android:layout_below="@+id/tool_bar"/>
    <ScrollView android:id="@+id/scrollView" android:background="@android:color/white" android:padding="@dimen/dimen_10dp" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/view">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputLayout android:theme="@style/PaytmEditTextTheme" android:id="@+id/layout_monthly_fund_transfer" android:padding="@dimen/wallet_5_dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/dimen_5dp">
                    <androidx.appcompat.widget.AppCompatEditText android:textSize="@dimen/dimen_16sp" android:textColor="@android:color/black" android:textColorHint="@color/pb_mb_grey_phone" android:id="@+id/edit_monthly_fund_transfer" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/pb_mb_monthly_money_transfer_limit" android:singleLine="true" android:maxLength="7" android:digits="1234567890" android:inputType="none|text|textNoSuggestions|number|phone"/>
                </com.google.android.material.textfield.TextInputLayout>
                <ImageView android:id="@+id/bene_limit_iv" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginRight="15dp" android:src="@drawable/pb_mb_beneficiary_info_icon" android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputLayout android:theme="@style/PaytmEditTextTheme" android:id="@+id/layout_maximum_transaction" android:padding="@dimen/wallet_5_dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/dimen_5dp">
                    <androidx.appcompat.widget.AppCompatEditText android:textSize="@dimen/dimen_16dp" android:textColor="@android:color/black" android:textColorHint="@color/pb_mb_grey_phone" android:id="@+id/edit_maximum_transaction" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/pb_mb_maximum_number_transaction" android:singleLine="true" android:maxLength="7" android:digits="1234567890" android:inputType="none|text|textNoSuggestions|number|phone"/>
                </com.google.android.material.textfield.TextInputLayout>
                <ImageView android:id="@+id/bene_transaction_iv" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginRight="15dp" android:src="@drawable/pb_mb_beneficiary_info_icon" android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <TextView android:textSize="16sp" android:textStyle="normal" android:textColor="#ffffff" android:gravity="center_horizontal" android:layout_gravity="center" android:id="@+id/wallet_benef_advanced_setting" android:background="@drawable/rounded_rectangle_paytmblue" android:padding="@dimen/dimen_15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="@dimen/dimen_30dp" android:layout_marginRight="@dimen/dimen_10dp" android:layout_marginBottom="@dimen/dimen_30dp" android:text="@string/pb_mb_save" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" android:lineSpacingExtra="5sp" android:fontFamily="sans-serif-medium"/>
            <TableRow android:paddingLeft="@dimen/dimen_20dp" android:paddingRight="@dimen/dimen_20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/tip"/>
                <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/note_advance_setting_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_15dp" android:text="@string/pb_mb_advance_setting_note_wallet" android:lineSpacingExtra="6sp" android:fontFamily="sans-serif"/>
            </TableRow>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
