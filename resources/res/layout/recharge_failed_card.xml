<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="#f8f8f8" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:layout_gravity="center" android:background="#f8f8f8" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:background="@color/text_color_proceed_button" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="14dp">
            <ImageView android:id="@+id/failed_order_status_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:src="@drawable/order_failed" android:scaleType="center" android:layout_centerHorizontal="true"/>
            <com.paytm.utility.RoboTextView android:textSize="16sp" android:textColor="@android:color/white" android:gravity="center" android:layout_gravity="center" android:id="@+id/failed_recharge_badge" android:background="@drawable/summary_failed_background" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginBottom="5dp" android:text="@string/recharge_status_failed" android:layout_below="@+id/failed_order_status_icon" android:layout_centerHorizontal="true" app:fontType="3"/>
            <com.paytm.utility.RoboTextView android:textSize="16sp" android:textColor="@android:color/black" android:textColorLink="@color/blue_button_text" android:ellipsize="end" android:gravity="center" android:id="@+id/failed_header_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="4dp" android:layout_marginRight="20dp" android:maxLines="2" android:layout_below="@+id/failed_recharge_badge" android:layout_centerHorizontal="true" app:fontType="3"/>
            <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="#9b9b9b" android:textColorLink="@color/blue_button_text" android:gravity="center" android:id="@+id/failed_header_desc_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="2dp" android:layout_marginRight="20dp" android:text="@string/recharge_failed_sub_text" android:layout_below="@+id/failed_header_text" android:layout_centerHorizontal="true" app:fontType="2"/>
            <RelativeLayout android:id="@+id/failed_order_cancel_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_below="@+id/failed_header_desc_text" android:layout_centerHorizontal="true">
                <com.paytm.utility.RoboTextView android:textSize="18sp" android:textColor="#ffffff" android:gravity="center" android:layout_gravity="center" android:id="@+id/failed_order_retry_text" android:background="@drawable/recharge_summary_button_selector" android:padding="10dp" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="17dp" android:layout_marginRight="17dp" android:text="@string/recharge_failed_retry" app:fontType="3"/>
            </RelativeLayout>
            <View android:id="@+id/line_grey" android:background="@color/bg_grid_grey" android:layout_width="45dp" android:layout_height="3dp" android:layout_marginTop="20dp" android:layout_below="@+id/failed_order_cancel_layout" android:layout_centerHorizontal="true"/>
            <include android:id="@+id/failed_operator_view" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginBottom="20dp" android:layout_below="@+id/line_grey" android:layout_centerHorizontal="true" layout="@layout/operator_layout"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/deals_inner_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/failed_operator_view"/>
            <View android:id="@+id/seperator" android:background="#ebebeb" android:layout_width="match_parent" android:layout_height="1dp" android:layout_below="@+id/deals_inner_layout"/>
            <com.paytm.utility.RoboTextView android:textSize="18sp" android:textColor="#0db9f5" android:gravity="center" android:layout_gravity="center" android:id="@+id/failure_order_details_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginBottom="20dp" android:text="@string/recharge_order_details" android:layout_below="@+id/seperator" android:layout_centerHorizontal="true" app:fontType="3"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
