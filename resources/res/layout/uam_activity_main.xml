                <include android:id="@+id/activate_wallet_card_layout" android:visibility="gone" layout="@layout/activate_wallet_card"/>
                <androidx.cardview.widget.CardView android:id="@+id/upi_onboarding_card_layout" android:background="@color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="@dimen/dimen_10dp" android:layout_marginRight="@dimen/dimen_10dp" android:layout_marginBottom="10dp" app:cardCornerRadius="@dimen/dimen_6dp" app:cardPreventCornerOverlap="false" app:cardUseCompatPadding="false">
