        <com.airbnb.lottie.LottieAnimationView android:id="@+id/content_loader" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="30dp" android:adjustViewBounds="true" android:layout_centerInParent="true" app:amount="5" app:animationDirectionbundle="-1" app:circleSize="15" app:duration="@android:integer/config_mediumAnimTime" app:endColor="@color/light_blue_A400" app:startColor="@color/light_blue_A700"/>
    </RelativeLayout>
</RelativeLayout>
