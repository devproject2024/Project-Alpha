    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <include android:id="@+id/error_network_issue_ll" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_centerInParent="true" app:layout_scrollFlags="1" layout="@layout/layout_passbook_cannot_connect"/>
