<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@drawable/money_transfer_white_rounded_bg" android:padding="@dimen/dimen_20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="21sp" android:textStyle="bold" android:textColor="@color/color_222222" android:id="@+id/tv_receiver_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/money_transfer_insufficient_bal" android:lineSpacingExtra="7sp" android:fontFamily="sans-serif"/>
    <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="@color/color_222222" android:id="@+id/desc_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_15dp" android:layout_below="@+id/tv_receiver_name" android:lineSpacingExtra="5sp" android:fontFamily="sans-serif"/>
    <RelativeLayout android:orientation="vertical" android:id="@+id/rly_details_view" android:background="#ffffff" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_30dp" android:layout_below="@+id/desc_tv" android:animateLayoutChanges="true">
        <ImageView android:id="@+id/sender_bank_iv" android:background="@drawable/white_circle_white_stroke" android:padding="15dp" android:visibility="visible" android:layout_width="@dimen/dimen_48dp" android:layout_height="@dimen/dimen_48dp" android:layout_marginRight="@dimen/dimen_15dp" android:layout_alignTop="@+id/name_tv" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:animateLayoutChanges="true" app:srcCompat="@drawable/ic_default_bank"/>
        <TextView android:textSize="15sp" android:textColor="#222222" android:id="@+id/source_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/sender_bank_iv" android:lineSpacingExtra="-2sp" android:animateLayoutChanges="true" android:fontFamily="@string/font_family_roboto_medium"/>
        <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/source_balance" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_5dp" android:layout_toRightOf="@+id/sender_bank_iv" android:layout_below="@+id/source_name" android:lineSpacingExtra="3sp" android:animateLayoutChanges="true" android:fontFamily="sans-serif"/>
        <TextView android:textSize="@dimen/cart_12sp" android:textColor="#00b9f5" android:id="@+id/check_balance_tv" android:paddingTop="7dp" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/check_balance" android:layout_toRightOf="@+id/sender_bank_iv" android:layout_below="@+id/source_balance" android:fontFamily="@string/font_family_roboto_regular"/>
        <com.airbnb.lottie.LottieAnimationView android:id="@+id/wallet_loader" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="20dp" android:layout_marginTop="5dp" android:layout_toRightOf="@+id/sender_bank_iv" android:layout_below="@+id/source_balance" app:amount="5" app:animationDirectionbundle="-1" app:circleSize="8" app:duration="@android:integer/config_mediumAnimTime" app:endColor="@color/light_blue_A400" app:startColor="@color/light_blue_A700"/>
    </RelativeLayout>
    <TextView android:textSize="17sp" android:textStyle="bold" android:textColor="#ffffff" android:gravity="center" android:id="@+id/button" android:background="@drawable/universal_money_transfer_button_bg" android:visibility="visible" android:layout_width="match_parent" android:layout_height="55dp" android:layout_marginTop="@dimen/dimen_30dp" android:text="@string/money_transfer_use_other_bank" android:layout_below="@+id/rly_details_view" android:fontFamily="@string/font_family_roboto_regular" android:textAlignment="center"/>
</RelativeLayout>
