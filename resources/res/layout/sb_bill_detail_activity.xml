<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/activity_container" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:id="@+id/ll_outer_most_container" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:layout_gravity="top" android:id="@+id/toolbar_start_ap" android:background="@color/color_f3f7f8" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentLeft="true">
            <ImageView android:gravity="bottom" android:id="@+id/split_back_button" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_17dp" android:layout_marginTop="@dimen/dimen_42dp" android:layout_marginBottom="@dimen/dimen_20dp" android:src="@drawable/back_arrow" android:layout_alignParentLeft="true"/>
            <RelativeLayout android:id="@+id/tint_layout" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_42dp" android:layout_marginRight="@dimen/dimen_20dp" android:layout_marginBottom="@dimen/dimen_20dp" android:layout_alignParentRight="true">
                <ImageView android:background="@drawable/sb_ic_menu" android:layout_width="4dp" android:layout_height="16dp"/>
            </RelativeLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/status_ticker_view" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:layout_alignParentStart="true"/>
        </RelativeLayout>
        <LinearLayout android:orientation="vertical" android:background="@color/color_f3f7f8" android:layout_width="match_parent" android:layout_height="wrap_content">
            <RelativeLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <com.paytm.utility.RoboTextView android:textSize="21sp" android:textStyle="bold" android:textColor="@color/color_222222" android:id="@+id/Bill_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:text="Hanoi Market Shopping" android:fontFamily="sans-serif" android:letterSpacing="0.02" app:fontType="4"/>
                <com.paytm.utility.RoboTextView android:textSize="12sp" android:textStyle="normal" android:textColor="@color/color_222222" android:id="@+id/bill_member" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="9dp" android:layout_marginRight="20dp" android:layout_below="@+id/Bill_name" android:lineSpacingExtra="6sp" android:fontFamily="sans-serif" app:fontType="2"/>
                <com.paytm.utility.RoboTextView android:textSize="21sp" android:textStyle="bold" android:textColor="#222222" android:gravity="end" android:id="@+id/bill_amount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="@dimen/dimen_20dp" android:layout_toRightOf="@+id/Bill_name" android:layout_alignParentRight="true" android:fontFamily="sans-serif" android:layout_alignParentEnd="true" android:letterSpacing="0.02" app:fontType="4"/>
                <com.paytm.utility.RoboTextView android:textSize="12sp" android:textStyle="normal" android:textColor="#999999" android:id="@+id/bill_date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="15dp" android:layout_marginBottom="@dimen/dimen_20dp" android:text="12:30 pm, 20 Mar 2018" android:layout_below="@+id/bill_member" android:lineSpacingExtra="6sp" android:fontFamily="sans-serif" app:fontType="2"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#999999" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="30dp" android:text="People involved" android:layout_alignParentLeft="true" android:textAllCaps="true" android:fontFamily="sans-serif-medium" android:letterSpacing="0.08"/>
                <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#999999" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:layout_marginRight="20dp" android:text="Share" android:layout_alignParentRight="true" android:textAllCaps="true" android:fontFamily="sans-serif-medium" android:letterSpacing="0.08"/>
            </RelativeLayout>
            <androidx.recyclerview.widget.RecyclerView android:id="@+id/billmemberrecycler" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp"/>
        </LinearLayout>
    </LinearLayout>
    <include android:id="@+id/sb_technical_issue_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_centerInParent="true" layout="@layout/sb_technical_issue_layout"/>
</RelativeLayout>
