<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/container_main" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
            <RelativeLayout android:gravity="center" android:id="@+id/container_logo" android:background="@drawable/shape_recharge_replacement_icon_circle" android:padding="1dp" android:layout_width="62dp" android:layout_height="62dp" android:layout_marginTop="@dimen/dimen_40dp">
                <net.one97.paytm.recharge.common.widget.CJRCircleImageViewV8 android:id="@+id/logo" android:layout_width="60dp" android:layout_height="60dp" android:layout_centerInParent="true"/>
                <ImageView android:id="@+id/img_default" android:layout_width="60dp" android:layout_height="60dp" android:scaleType="center" android:layout_centerInParent="true" app:srcCompat="@drawable/ic_deals_default"/>
            </RelativeLayout>
            <TextView android:textSize="21sp" android:textStyle="normal" android:textColor="#222222" android:gravity="center_horizontal" android:id="@+id/txt_recharge_status" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="18dp" android:text="@string/recharge_order_status_success" android:fontFamily="sans-serif-medium"/>
            <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/container_recharge_amount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp">
                <TextView android:textSize="36sp" android:textStyle="bold" android:textColor="@color/color_222222" android:id="@+id/txt_recharge_amount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:lineSpacingExtra="-4sp" android:fontFamily="sans-serif" android:letterSpacing="-0.01"/>
                <ImageView android:id="@+id/img_recharge_amount" android:layout_width="38dp" android:layout_height="38dp" android:layout_marginLeft="8dp" app:srcCompat="@drawable/ic_metro_ticket_status_purchased"/>
            </LinearLayout>
            <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#999999" android:gravity="center_horizontal" android:id="@+id/txt_order_date_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="14dp" android:lineSpacingExtra="3sp" android:fontFamily="sans-serif"/>
            <FrameLayout android:id="@+id/container_frame" android:background="@drawable/rounded_corner_divider_e2ebee" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="@dimen/dimen_31dp" android:layout_marginRight="@dimen/dimen_20dp" android:layout_marginBottom="@dimen/dimen_30dp" android:minWidth="@dimen/dimen_30dp" android:minHeight="@dimen/dimen_2dp"/>
            <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#222222" android:gravity="center_horizontal" android:id="@+id/txt_recharge_operator" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="5dp" android:lineSpacingExtra="3sp" android:fontFamily="sans-serif"/>
            <TextView android:textSize="17sp" android:textStyle="normal" android:textColor="#222222" android:gravity="center_horizontal" android:id="@+id/txt_recharge_number" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_25dp" android:layout_marginRight="@dimen/dimen_25dp" android:lineSpacingExtra="-3sp" android:fontFamily="sans-serif"/>
            <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#00b9f5" android:id="@+id/txt_help" android:paddingLeft="20dp" android:paddingTop="10dp" android:paddingRight="20dp" android:paddingBottom="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_25dp" android:layout_marginBottom="@dimen/dimen_20dp" android:text="@string/recharge_extra_option_need_help" android:lineSpacingExtra="-1sp" android:fontFamily="sans-serif-medium"/>
            <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/container_details" android:background="@color/color_f3f7f8" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <View android:background="@drawable/shape_bg_recharge_footer_strip" android:layout_width="match_parent" android:layout_height="@dimen/dimen_16dp"/>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
