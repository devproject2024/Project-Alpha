<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:paddingLeft="20dp" android:paddingRight="20dp" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:orientation="horizontal" android:id="@+id/ll_theater_info" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:layout_marginRight="6dp">
            <ImageView android:id="@+id/moviePoster" android:layout_width="80dp" android:layout_height="105dp" android:scaleType="centerCrop"/>
            <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="@color/color_de000000" android:id="@+id/txt_theatre_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_toRightOf="@+id/moviePoster" app:fontType="3"/>
            <LinearLayout android:id="@+id/ll_movie_rating" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_below="@+id/txt_theatre_name" android:layout_alignStart="@+id/txt_theatre_name">
                <ImageView android:layout_gravity="center" android:layout_width="@dimen/dimen_10dp" android:layout_height="@dimen/dimen_10dp" android:src="@drawable/cinema_rating_bar_filled_star"/>
                <com.paytm.utility.RoboTextView android:textSize="12sp" android:textColor="@color/color_222222" android:ellipsize="end" android:id="@+id/txt_rating" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:maxLines="1" android:scrollHorizontally="true" app:fontType="2"/>
            </LinearLayout>
            <LinearLayout android:id="@+id/ll_movie_info" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_below="@+id/ll_movie_rating" android:layout_alignStart="@+id/txt_theatre_name">
                <com.paytm.utility.RoboTextView android:textSize="11sp" android:textColor="@color/movie_language_color" android:ellipsize="end" android:id="@+id/txt_Langauage" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:scrollHorizontally="true" app:fontType="2"/>
                <View android:layout_gravity="center" android:id="@+id/txt_Langauage_dot" android:background="@drawable/circle" android:layout_width="4dp" android:layout_height="4dp" android:layout_marginLeft="7dp" android:layout_marginRight="7dp" android:backgroundTint="@color/movie_offline_img_color"/>
                <com.paytm.utility.RoboTextView android:textSize="11sp" android:textColor="@color/movie_language_color" android:ellipsize="end" android:id="@+id/txt_censor" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:scrollHorizontally="true" android:layout_toRightOf="@+id/txt_Langauage" android:layout_alignBaseline="@+id/txt_Langauage" app:fontType="2"/>
                <View android:layout_gravity="center" android:id="@+id/txt_censor_dot" android:background="@drawable/circle" android:layout_width="4dp" android:layout_height="4dp" android:layout_marginLeft="7dp" android:layout_marginRight="7dp" android:backgroundTint="@color/movie_offline_img_color"/>
                <com.paytm.utility.RoboTextView android:textSize="11sp" android:textColor="@color/movie_language_color" android:ellipsize="end" android:id="@+id/txt_duration" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:scrollHorizontally="true" android:layout_toRightOf="@+id/txt_censor" android:layout_alignBaseline="@+id/txt_censor" app:fontType="2"/>
            </LinearLayout>
            <RelativeLayout android:id="@+id/movie_offer_rel_lyt" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/ll_movie_info" android:layout_alignStart="@+id/ll_movie_info">
                <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#ffffff" android:gravity="center_vertical" android:id="@+id/movie_offer_amount" android:background="@drawable/offer_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:fontFamily="sans-serif-medium"/>
                <TextView android:textSize="13sp" android:textStyle="normal" android:textColor="#999999" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/movie_offer_desc" android:layout_width="wrap_content" android:layout_height="40dp" android:layout_marginLeft="5dp" android:maxLines="2" android:layout_toRightOf="@+id/movie_offer_amount" android:fontFamily="sans-serif"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView android:layout_gravity="fill" android:id="@+id/slots_recycler_view" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <View android:id="@+id/line_divider" android:background="@color/movie_separator" android:visibility="gone" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="20dp"/>
    <View android:id="@+id/bottom_space" android:background="@color/transparent_bg" android:visibility="gone" android:layout_width="match_parent" android:layout_height="15dp"/>
</LinearLayout>
