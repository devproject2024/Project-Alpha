<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/transparent" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:background="@drawable/rounded_bottomsheet" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_6dp">
            <ImageView android:id="@+id/cross_btn" android:visibility="invisible" android:layout_width="@dimen/dimen_30dp" android:layout_height="@dimen/dimen_30dp" android:layout_marginRight="@dimen/dimen_19dp" android:layout_alignParentTop="true" android:layout_alignParentRight="true" app:srcCompat="@drawable/pb_ic_close_black_bank"/>
        </RelativeLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="@dimen/dimen_16dp">
                <ImageView android:id="@+id/image_success" android:layout_width="16dp" android:layout_height="16dp" app:srcCompat="@drawable/ic_active_green_tick"/>
                <View android:layout_gravity="center_horizontal" android:background="@color/color_dde5ed" android:layout_width="@dimen/dimen_1dp" android:layout_height="50dp"/>
                <RelativeLayout android:layout_width="16dp" android:layout_height="16dp">
                    <androidx.appcompat.widget.AppCompatImageView android:id="@+id/image_sec_pending" android:visibility="gone" android:layout_width="16dp" android:layout_height="16dp" app:srcCompat="@drawable/pb_cif_orange"/>
                    <ProgressBar android:id="@+id/pb_sec_progress" android:focusable="true" android:visibility="visible" android:clickable="true" android:layout_width="16dp" android:layout_height="16dp" android:indeterminateDrawable="@drawable/pb_paytm_progress_small"/>
                </RelativeLayout>
                <View android:layout_gravity="center_horizontal" android:id="@+id/secondDividerView" android:background="@color/color_dde5ed" android:layout_width="@dimen/dimen_1dp" android:layout_height="46dp"/>
                <RelativeLayout android:layout_width="16dp" android:layout_height="16dp">
                    <ImageView android:id="@+id/image_failed" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/circle_fd_pending"/>
                    <ProgressBar android:id="@+id/pb_progress" android:focusable="true" android:visibility="gone" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent" android:indeterminateDrawable="@drawable/pb_paytm_progress_small"/>
                </RelativeLayout>
            </LinearLayout>
            <RelativeLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginBottom="@dimen/dimen_42dp">
                <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#1d252d" android:id="@+id/header_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/bottom_sheet_header" android:lineSpacingExtra="6sp" android:fontFamily="sans-serif"/>
                <TextView android:textSize="@dimen/dimen_14sp" android:textStyle="bold" android:textColor="@color/color_1d252d" android:id="@+id/register_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_45dp" android:text="@string/fd_botttom_sheet_message_updated" android:layout_below="@+id/header_text" android:fontFamily="sans-serif"/>
                <LinearLayout android:layout_gravity="center" android:id="@+id/lyt_error_message" android:background="@drawable/pb_fd_cif_status_rectangle" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_8dp" android:layout_marginRight="@dimen/dimen_24dp" android:layout_below="@+id/register_text">
                    <TextView android:textSize="@dimen/dimen_12sp" android:textColor="@color/color_1d252d" android:layout_gravity="center" android:id="@+id/error_message" android:padding="@dimen/dimen_10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_5dp" android:layout_marginRight="@dimen/dimen_10dp" android:text="@string/fd_botttom_sheet_error" android:fontFamily="@string/font_family_roboto_regular"/>
                </LinearLayout>
                <TextView android:textSize="@dimen/dimen_14sp" android:textStyle="normal" android:textColor="@color/color_1d252d" android:id="@+id/passbook_message" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_43dp" android:layout_marginRight="@dimen/dimen_30dp" android:text="@string/fd_bootom_sheet_bottom" android:layout_below="@+id/lyt_error_message" android:lineSpacingExtra="6sp" android:fontFamily="sans-serif"/>
            </RelativeLayout>
        </LinearLayout>
        <include android:id="@+id/view_bottom_lines" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/btn_ok" layout="@layout/pb_base_bottom_paytm_line"/>
    </LinearLayout>
</LinearLayout>
