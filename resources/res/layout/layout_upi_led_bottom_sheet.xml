        <TextView android:textSize="15sp" android:textColor="@color/color_00b9f5" android:gravity="center" android:id="@+id/secondary_button" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_25dp" android:layout_marginTop="20dp" android:layout_marginRight="@dimen/dimen_25dp" android:layout_marginBottom="@dimen/dimen_25dp" android:layout_below="@+id/primary_button" android:textAllCaps="false"/>
