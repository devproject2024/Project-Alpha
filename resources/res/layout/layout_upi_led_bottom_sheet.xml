            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_5dp" android:contentDescription="TODO" android:layout_marginEnd="@dimen/dimen_5dp"/>
            <TextView android:textSize="15sp" android:textColor="@color/color_444444" android:gravity="left" android:id="@+id/bottom_message" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_10dp" android:textAllCaps="false" android:layout_marginStart="@dimen/dimen_10dp"/>
        </LinearLayout>
        <RelativeLayout android:id="@+id/rel_bottom" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/bottom_message_layout">
            <RelativeLayout android:id="@+id/rel_light_blue" android:background="@color/excl_color_00b9f5" android:layout_width="match_parent" android:layout_height="@dimen/dimen_8dp" android:layout_alignParentTop="true"/>
            <RelativeLayout android:background="@color/paytm_dark_blue" android:layout_width="match_parent" android:layout_height="@dimen/dimen_8dp" android:layout_below="@+id/rel_light_blue"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
