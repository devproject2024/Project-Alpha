<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="80dp">
    <RelativeLayout android:layout_gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:id="@+id/mp_initial_name_rl" android:layout_width="@dimen/dimen_36dp" android:layout_height="@dimen/dimen_36dp" android:layout_marginLeft="20dp" android:layout_centerVertical="true">
            <TextView android:textSize="@dimen/dimen_15sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/mp_initial_name_tv" android:background="@color/movie_yellow" android:layout_width="@dimen/dimen_36dp" android:layout_height="@dimen/dimen_36dp" android:text="D" android:layout_alignParentBottom="true" android:layout_centerInParent="true" android:fontFamily="Roboto-Regular"/>
            <RelativeLayout android:id="@+id/mp_initial_name_bg_rl" android:background="@drawable/bg_rounded_corner_acc_page" android:layout_width="@dimen/dimen_50dp" android:layout_height="@dimen/dimen_50dp" android:layout_alignParentBottom="true" android:layout_centerInParent="true"/>
        </RelativeLayout>
        <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_15dp" android:text="Anish J Abraham" android:layout_toRightOf="@+id/mp_initial_name_rl" android:layout_centerVertical="true" android:fontFamily="sans-serif"/>
        <TextView android:textSize="17sp" android:textStyle="normal" android:textColor="#222222" android:gravity="end" android:id="@+id/amount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_20dp" android:text="400" android:layout_centerVertical="true" android:fontFamily="sans-serif-medium" android:layout_alignParentEnd="true"/>
        <TextView android:textSize="12sp" android:id="@+id/tv_to_pay_receive" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="25dp" android:layout_marginRight="20dp" android:text="To Receive" android:layout_below="@+id/amount" android:layout_alignParentRight="true"/>
        <View android:id="@+id/line_separator" android:background="#f3f7f8" android:layout_width="match_parent" android:layout_height="@dimen/dimen_1dp" android:layout_marginLeft="@dimen/dimen_51dp" android:layout_marginTop="@dimen/dimen_11dp" android:layout_below="@+id/tv_to_pay_receive"/>
    </RelativeLayout>
</LinearLayout>
