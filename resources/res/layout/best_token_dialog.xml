<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@drawable/best_token_popup_bg" android:paddingBottom="@dimen/dimen_34dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:gravity="center_horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatImageView android:id="@+id/iv_token" android:layout_width="180dp" android:layout_height="180dp" android:scaleType="centerInside" android:contentDescription="@string/app_name" app:srcCompat="@drawable/best_illustration_token"/>
    </LinearLayout>
    <TextView android:textSize="16sp" android:textStyle="normal" android:textColor="#222222" android:gravity="center_horizontal" android:id="@+id/tv_only_one" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="You can only book 1 token at a time" android:fontFamily="@string/font_family_roboto_medium" android:layout_marginStart="@dimen/dimen_56dp" android:layout_marginEnd="@dimen/dimen_56dp"/>
    <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#607087" android:gravity="center_horizontal" android:id="@+id/tv_info" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_16dp" android:text="You already have an active token.  Please cancel your token to proceed with another booking." android:fontFamily="sans-serif" android:layout_marginStart="@dimen/dimen_32dp" android:layout_marginEnd="@dimen/dimen_32dp"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_32dp" android:paddingStart="@dimen/dimen_8dp" android:paddingEnd="@dimen/dimen_8dp">
        <LinearLayout android:id="@+id/llCancelBtnContainer" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="2">
            <Button android:textSize="16sp" android:textStyle="normal" android:textColor="#00b9f5" android:id="@+id/btn_cancel_token" android:background="@drawable/best_cancel_token_button" android:visibility="visible" android:layout_width="0dp" android:layout_height="@dimen/dimen_36dp" android:text="Cancel Token" android:layout_weight="1" android:lineSpacingExtra="1sp" android:textAllCaps="false" android:fontFamily="@string/font_family_roboto_medium" android:layout_marginStart="@dimen/dimen_16dp" android:layout_marginEnd="@dimen/dimen_8dp" style="@style/Widget.AppCompat.Button.Borderless"/>
            <Button android:textSize="16sp" android:textStyle="normal" android:textColor="@color/white" android:id="@+id/btn_go_back" android:background="@drawable/best_token_goback_bg" android:visibility="visible" android:layout_width="0dp" android:layout_height="@dimen/dimen_36dp" android:text="Go Back" android:layout_weight="1" android:lineSpacingExtra="1sp" android:textAllCaps="false" android:fontFamily="@string/font_family_roboto_medium" android:layout_marginStart="@dimen/dimen_8dp" android:layout_marginEnd="@dimen/dimen_16dp" style="@style/Widget.AppCompat.Button.Borderless"/>
        </LinearLayout>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.airbnb.lottie.LottieAnimationView android:id="@+id/lottie_in_token_dialog" android:visibility="gone" android:layout_width="@dimen/dimen_80dp" android:layout_height="@dimen/dimen_36dp" android:layout_centerHorizontal="true" app:amount="5" app:animationDirectionbundle="-1" app:circleSize="12" app:duration="@android:integer/config_mediumAnimTime" app:lottie_autoPlay="true" app:lottie_fileName="Payments-Loader.json" app:lottie_loop="true"/>
            <TextView android:textSize="16sp" android:textStyle="normal" android:textColor="#00b9f5" android:gravity="center" android:id="@+id/btn_ok" android:visibility="gone" android:layout_width="@dimen/dimen_100dp" android:layout_height="36dp" android:text="OK" android:layout_centerHorizontal="true" android:lineSpacingExtra="1sp" android:fontFamily="@string/font_family_roboto_medium"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
