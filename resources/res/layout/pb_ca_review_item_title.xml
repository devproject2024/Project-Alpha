<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:background="@drawable/pb_ca_review_bg" android:padding="16dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp">
        <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="#1d252d" android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:lineSpacingExtra="6sp" android:fontFamily="sans-serif"/>
        <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#00aced" android:id="@+id/edit_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/pb_nominee_edit" android:layout_alignParentRight="true" android:lineSpacingExtra="4sp" android:textAllCaps="true" android:fontFamily="sans-serif-medium"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/review_list_lyt" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/title"/>
    </RelativeLayout>
</LinearLayout>
