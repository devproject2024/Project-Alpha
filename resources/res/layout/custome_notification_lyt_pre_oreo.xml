<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="horizontal" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="60dp">
    <TextView android:textSize="@dimen/cart_16sp" android:textStyle="bold" android:textColor="@android:color/black" android:id="@+id/txt_header" android:padding="@dimen/dimen_10dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Paytm Smart Notification"/>
    <RelativeLayout android:id="@+id/lyt_paytm_home" android:paddingLeft="5dp" android:paddingRight="5dp" android:layout_width="@dimen/dimen_65dp" android:layout_height="match_parent">
        <ImageView android:id="@+id/img_app_logo" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/smart_paytm_logo" android:layout_centerVertical="true"/>
        <TextView android:textSize="8sp" android:textColor="@android:color/black" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Home" android:layout_below="@+id/img_app_logo" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <RelativeLayout android:layout_gravity="center_vertical" android:id="@+id/lyt_icon_1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1">
        <ImageView android:id="@+id/img_icon_1" android:layout_width="@dimen/dimen_24dp" android:layout_height="@dimen/dimen_24dp" android:src="@drawable/mobile_no_selected" android:layout_centerHorizontal="true"/>
        <TextView android:textSize="8sp" android:textColor="@android:color/black" android:id="@+id/txt_icon_1" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Pay/Scan" android:layout_below="@+id/img_icon_1" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <RelativeLayout android:layout_gravity="center_vertical" android:id="@+id/lyt_icon_2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1">
        <ImageView android:id="@+id/img_icon_2" android:layout_width="@dimen/dimen_24dp" android:layout_height="@dimen/dimen_24dp" android:src="@drawable/mobile_no_selected" android:layout_centerHorizontal="true"/>
        <TextView android:textSize="8sp" android:textColor="@android:color/black" android:id="@+id/txt_icon_2" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Electricity" android:layout_below="@+id/img_icon_2" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <RelativeLayout android:layout_gravity="center_vertical" android:id="@+id/lyt_icon_3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1">
        <ImageView android:id="@+id/img_icon_3" android:layout_width="@dimen/dimen_24dp" android:layout_height="@dimen/dimen_24dp" android:src="@drawable/mobile_no_selected" android:layout_centerHorizontal="true"/>
        <TextView android:textSize="8sp" android:textColor="@android:color/black" android:id="@+id/txt_icon_3" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="DTH" android:layout_below="@+id/img_icon_3" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <RelativeLayout android:layout_gravity="center_vertical" android:id="@+id/lyt_icon_4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1">
        <ImageView android:id="@+id/img_icon_4" android:layout_width="@dimen/dimen_24dp" android:layout_height="@dimen/dimen_24dp" android:src="@drawable/mobile_no_selected" android:layout_centerHorizontal="true"/>
        <TextView android:textSize="8sp" android:textColor="@android:color/black" android:id="@+id/txt_icon_4" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Movie" android:layout_below="@+id/img_icon_4" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <RelativeLayout android:gravity="center" android:id="@+id/lyt_cancel" android:background="#fafbfb" android:layout_width="33dp" android:layout_height="match_parent" android:layout_weight="1">
        <ImageView android:id="@+id/img_cancel" android:layout_width="24dp" android:layout_height="wrap_content" android:src="@drawable/ic_close_smart"/>
        <TextView android:textSize="8sp" android:textColor="@android:color/black" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Cancel" android:layout_below="@+id/img_cancel" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</LinearLayout>
