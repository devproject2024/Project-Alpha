<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:gravity="center_horizontal" android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/close_icon" android:background="@drawable/close_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/merchant_detail_x_button_bottom_margin"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:background="@android:color/white" android:paddingLeft="@dimen/item_detail_container_padding" android:paddingTop="@dimen/refund_details_container_padding" android:paddingRight="@dimen/item_detail_container_padding" android:paddingBottom="@dimen/refund_details_container_padding" android:layout_width="match_parent" android:layout_height="wrap_content">
        <com.paytm.utility.RoboTextView android:textSize="@dimen/item_detail_dialog_delivery_name_font_size" android:textColor="@color/item_detail_name_text_color" android:gravity="center_horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/refund_details_text_bottom_margin" android:text="@string/refund_details" app:fontType="2"/>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/refund_amnt_text_bottom_margin">
            <com.paytm.utility.RoboTextView android:textSize="@dimen/item_detail_dialog_refund_src_amnt_text_size" android:textColor="@color/item_detail_refund_amnt_text_color" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/paid_amount" android:layout_weight="1" app:fontType="3"/>
            <com.paytm.utility.RoboTextView android:textSize="@dimen/item_detail_dialog_refund_src_amnt_text_size" android:textColor="@color/item_detail_refund_amnt_text_color" android:id="@+id/paid_amount" android:layout_width="wrap_content" android:layout_height="wrap_content" app:fontType="3"/>
        </LinearLayout>
        <LinearLayout android:id="@+id/cashback_credited_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dimen_20dp">
            <com.paytm.utility.RoboTextView android:textSize="@dimen/item_detail_dialog_refund_src_amnt_text_size" android:textColor="@color/item_detail_refund_amnt_text_color" android:id="@+id/cashback_credited_text" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/cashback_credited" android:layout_weight="1" app:fontType="3"/>
            <com.paytm.utility.RoboTextView android:textSize="@dimen/item_detail_dialog_refund_src_amnt_text_size" android:textColor="@color/item_detail_refund_amnt_text_color" android:id="@+id/cashback_amount" android:layout_width="wrap_content" android:layout_height="wrap_content" app:fontType="3"/>
        </LinearLayout>
        <LinearLayout android:id="@+id/goldback_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dimen_20dp">
            <com.paytm.utility.RoboTextView android:textSize="@dimen/item_detail_dialog_refund_src_amnt_text_size" android:textColor="@color/item_detail_refund_amnt_text_color" android:id="@+id/goldback_credited_text" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/goldback_credited" android:layout_weight="1" app:fontType="3"/>
            <com.paytm.utility.RoboTextView android:textSize="@dimen/item_detail_dialog_refund_src_amnt_text_size" android:textColor="@color/item_detail_refund_amnt_text_color" android:id="@+id/goldback_amount" android:layout_width="wrap_content" android:layout_height="wrap_content" app:fontType="3"/>
        </LinearLayout>
        <LinearLayout android:id="@+id/lifafa_cashback_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dimen_20dp">
            <com.paytm.utility.RoboTextView android:textSize="@dimen/item_detail_dialog_refund_src_amnt_text_size" android:textColor="@color/item_detail_refund_amnt_text_color" android:id="@+id/lifafa_cashback_text" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/lifafa_credited" android:layout_weight="1" app:fontType="3"/>
            <com.paytm.utility.RoboTextView android:textSize="@dimen/item_detail_dialog_refund_src_amnt_text_size" android:textColor="@color/item_detail_refund_amnt_text_color" android:id="@+id/lifafa_amount" android:layout_width="wrap_content" android:layout_height="wrap_content" app:fontType="3"/>
        </LinearLayout>
        <LinearLayout android:id="@+id/lifafa_goldback_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dimen_20dp">
            <com.paytm.utility.RoboTextView android:textSize="@dimen/item_detail_dialog_refund_src_amnt_text_size" android:textColor="@color/item_detail_refund_amnt_text_color" android:id="@+id/lifafa_goldback_text" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/lifafa_goldback_credited" android:layout_weight="1" app:fontType="3"/>
            <com.paytm.utility.RoboTextView android:textSize="@dimen/item_detail_dialog_refund_src_amnt_text_size" android:textColor="@color/item_detail_refund_amnt_text_color" android:id="@+id/lifafa_goldback_amount" android:layout_width="wrap_content" android:layout_height="wrap_content" app:fontType="3"/>
        </LinearLayout>
        <View android:background="@color/item_detail_auto_cancelled_separator_color" android:layout_width="match_parent" android:layout_height="@dimen/dimen_1dp"/>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_15dp" android:layout_marginBottom="@dimen/dimen_15dp">
            <com.paytm.utility.RoboTextView android:textSize="@dimen/item_detail_dialog_total_refund_amnt_text_size" android:textColor="@android:color/black" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/total_refund_amount" android:layout_weight="1" app:fontType="3"/>
            <com.paytm.utility.RoboTextView android:textSize="@dimen/item_detail_dialog_total_refund_amnt_text_size" android:textColor="@android:color/black" android:id="@+id/total_refund_amount" android:layout_width="wrap_content" android:layout_height="wrap_content" app:fontType="3"/>
        </LinearLayout>
        <View android:background="@color/item_detail_auto_cancelled_separator_color" android:layout_width="match_parent" android:layout_height="@dimen/dimen_1dp"/>
        <com.paytm.utility.RoboTextView android:textSize="@dimen/item_detail_dialog_refund_init_src_amnt_text_size" android:textColor="@color/item_detail_refund_amnt_text_color" android:gravity="center" android:id="@+id/total_refund_desc_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/refund_desc_text_top_margin" app:fontType="1"/>
    </LinearLayout>
</LinearLayout>
