<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="center" android:orientation="vertical" android:background="@color/white" android:padding="@dimen/dimen_10dp" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="#222222" android:gravity="center_horizontal" android:id="@+id/mobile_based_tv" android:padding="@dimen/dimen_10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_20dp" android:text="@string/verify_mobile_number" android:lineSpacingExtra="5sp" android:fontFamily="sans-serif-medium"/>
    <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#666666" android:gravity="center_horizontal" android:id="@+id/dialog_message" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/beneficiary_otp_message" android:lineSpacingExtra="8.5sp" android:fontFamily="sans-serif"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="5dp">
        <com.google.android.material.textfield.TextInputLayout android:theme="@style/PaytmEditTextTheme" android:id="@+id/lyt_enter_otp" android:padding="@dimen/dimen_5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/dimen_5dp" android:hint="@string/enter_otp">
            <com.google.android.material.textfield.TextInputEditText android:textSize="@dimen/dimen_16sp" android:textColor="@android:color/black" android:textColorHint="@color/color_999999" android:id="@+id/edit_enter_otp" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true" android:maxLength="6" android:digits="1234567890" android:inputType="none|text|textNoSuggestions|number|phone"/>
        </com.google.android.material.textfield.TextInputLayout>
        <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/dimen_10dp" android:layout_alignParentRight="true">
            <TextView android:textSize="12sp" android:textColor="#00b9f5" android:gravity="end" android:id="@+id/resend_otp_benef" android:paddingTop="@dimen/dimen_15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/kyc_resend_otp" android:layout_centerInParent="true"/>
            <ProgressBar android:id="@+id/digilocker_otp_dialog_progress_resend" android:visibility="gone" android:layout_width="@dimen/dimen_30dp" android:layout_height="@dimen/dimen_30dp" android:indeterminate="true" android:layout_centerInParent="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="#ffffff" android:gravity="center_horizontal" android:id="@+id/confirm_otp_benef" android:background="@drawable/rounded_rectangle_paytmblue" android:paddingLeft="@dimen/dimen_20dp" android:paddingTop="@dimen/dimen_10dp" android:paddingRight="@dimen/dimen_20dp" android:paddingBottom="@dimen/dimen_10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/dimen_12dp" android:text="@string/confirm_otp" android:fontFamily="sans-serif-medium"/>
    <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="#00b8f8" android:gravity="center_horizontal" android:id="@+id/cancel_benef" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginBottom="20dp" android:text="@string/cancel" android:fontFamily="sans-serif-medium"/>
</LinearLayout>
