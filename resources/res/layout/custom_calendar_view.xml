<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/calendar_info_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_12dp" android:layout_marginRight="@dimen/dimen_12dp">
    <LinearLayout android:orientation="horizontal" android:id="@+id/add_calender_container" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
        <CheckBox android:id="@+id/checkbox" android:layout_width="wrap_content" android:layout_height="wrap_content" android:buttonTint="@color/color_0db4ea"/>
        <TextView android:textSize="@dimen/text_size_12sp" android:textStyle="normal" android:textColor="@color/color_8ba6c1" android:id="@+id/calendar_hint_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_16dp"/>
    </LinearLayout>
    <androidx.cardview.widget.CardView android:id="@+id/registered_calender_view" android:layout_width="match_parent" android:layout_height="wrap_content" app:cardBackgroundColor="@color/white" app:cardCornerRadius="8dp" app:cardElevation="3dp" app:cardUseCompatPadding="true">
        <LinearLayout android:orientation="horizontal" android:id="@+id/registered_calender_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="1" android:layout_centerVertical="true">
            <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_15dp" android:layout_marginTop="@dimen/dimen_15dp" android:layout_marginRight="@dimen/dimen_10dp" android:layout_marginBottom="@dimen/dimen_15dp" android:layout_weight="0.6" android:layout_toLeftOf="@+id/custom_checkbox" android:layout_centerVertical="true">
                <TextView android:textSize="@dimen/dimen_14sp" android:textStyle="bold" android:textColor="@color/color_303030" android:id="@+id/calendar_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Add to your Calendar"/>
                <TextView android:textSize="@dimen/text_size_12sp" android:textColor="@color/color_536e92" android:id="@+id/calendar_description" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            </LinearLayout>
            <RelativeLayout android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.4">
                <RelativeLayout android:id="@+id/custom_checkbox" android:background="@drawable/travel_oval_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_20dp" android:layout_alignParentRight="true" android:layout_centerVertical="true">
                    <TextView android:textSize="@dimen/dimen_12sp" android:textStyle="bold" android:textColor="@color/white" android:id="@+id/atc_button_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_29dp" android:layout_marginTop="@dimen/dimen_9dp" android:layout_marginRight="@dimen/dimen_29dp" android:layout_marginBottom="@dimen/dimen_9dp" android:text="@string/tc_add_to_calendar" android:layout_centerInParent="true"/>
                    <ImageView android:id="@+id/success_tick" android:layout_width="20dp" android:layout_height="20dp" android:layout_centerInParent="true" android:alpha="0" app:srcCompat="@drawable/tc_white_tick"/>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
