<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:id="@+id/passenger_top_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="14dp" android:layout_marginBottom="15dp" android:weightSum="3">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
            <com.paytm.utility.RoboTextView android:textSize="12sp" android:textColor="#222222" android:id="@+id/passenger_label_view" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/bus_passenger" app:fontType="2"/>
            <com.paytm.utility.RoboTextView android:textSize="12sp" android:textColor="#999999" android:id="@+id/ladiesReservedText" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/reserved_for_ladies" android:paddingStart="8dp" app:fontType="2"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:layout_gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="2" android:layout_marginEnd="@dimen/dimen_30dp">
            <com.paytm.utility.RoboTextView android:textSize="10sp" android:textColor="#4a4a4a" android:gravity="center" android:id="@+id/onwardTitle" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/onward_text" android:layout_weight="1" app:fontType="2"/>
            <com.paytm.utility.RoboTextView android:textSize="10sp" android:textColor="#4a4a4a" android:gravity="center_horizontal" android:id="@+id/returnTitle" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/return_text" android:layout_weight="1" app:fontType="2"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/lyt_passenger_input_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/passenger_top_container">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="15dp" android:weightSum="3">
            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2">
                <RadioGroup android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/title_radio_group" android:layout_width="match_parent" android:layout_height="45dp">
                    <RadioButton android:textSize="@dimen/bp_passname_input_text_size" android:textColor="@color/black" android:id="@+id/title_mr" android:layout_width="@dimen/dimen_70dp" android:layout_height="match_parent" android:button="@drawable/travel_res_bus_traveller_selector_male" android:text="@string/male" android:layout_marginEnd="@dimen/bp_radio_button_padding"/>
                    <RadioButton android:textSize="@dimen/bp_passname_input_text_size" android:textColor="@color/black" android:id="@+id/title_mrs" android:layout_width="@dimen/dimen_80dp" android:layout_height="match_parent" android:button="@drawable/travel_res_bus_traveller_selector_female" android:text="@string/female" android:layout_marginEnd="@dimen/bp_radio_button_padding"/>
                </RadioGroup>
            </LinearLayout>
            <androidx.constraintlayout.widget.ConstraintLayout android:gravity="center" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginEnd="@dimen/dimen_16dp">
                <androidx.appcompat.widget.AppCompatImageView android:id="@+id/bus_icon_onward" android:layout_width="match_parent" android:layout_height="match_parent" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0" app:srcCompat="@drawable/bus_seat"/>
                <com.paytm.utility.RoboTextView android:textSize="10sp" android:textColor="@color/white" android:gravity="center" android:layout_gravity="center" android:id="@+id/bus_icon_onward_text" android:layout_width="match_parent" android:layout_height="match_parent" android:text="A5" android:fontFamily="@string/font_family_roboto_medium" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
        <com.google.android.material.textfield.TextInputLayout android:theme="@style/recharge_text_input_layout_theme" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:hint="@string/full_name" android:layout_marginStart="2dp">
            <AutoCompleteTextView android:textSize="13sp" android:textColor="@color/cart_black" android:textColorHint="#adadad" android:ellipsize="end" android:id="@+id/passenger_name_input" android:background="@drawable/transparent_border" android:paddingTop="@dimen/dimen_8dp" android:focusable="true" android:longClickable="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true" android:selectAllOnFocus="false" android:editable="true" android:completionThreshold="1" android:dropDownSelector="@drawable/list_selector" android:inputType="none|text|textNoSuggestions|textEmailAddress" android:imeOptions="actionDone" android:dropDownVerticalOffset="8dp" android:textIsSelectable="false"/>
        </com.google.android.material.textfield.TextInputLayout>
        <View android:background="@color/color_efefef" android:layout_width="match_parent" android:layout_height="2dp" android:layout_marginTop="14dp" android:layout_marginStart="2dp"/>
        <com.google.android.material.textfield.TextInputLayout android:theme="@style/recharge_text_input_layout_theme" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:hint="@string/Age" android:layout_marginStart="2dp" app:hintAnimationEnabled="false">
            <androidx.appcompat.widget.AppCompatEditText android:textSize="@dimen/dimen_13sp" android:textColor="@android:color/black" android:textColorHint="#adadad" android:gravity="center_vertical" android:id="@+id/passenger_age_input" android:background="@null" android:paddingTop="5dp" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:includeFontPadding="false" android:maxLength="2" android:digits="1234567890" android:popupBackground="#b3000000" android:inputType="phone" android:imeOptions="actionDone"/>
        </com.google.android.material.textfield.TextInputLayout>
        <View android:background="@color/color_efefef" android:layout_width="match_parent" android:layout_height="@dimen/dimen_2dp" android:layout_marginTop="@dimen/dimen_14dp" android:layout_marginBottom="@dimen/dimen_15dp" android:layout_marginStart="@dimen/dimen_2dp"/>
        <com.google.android.material.textfield.TextInputLayout android:theme="@style/recharge_text_input_layout_theme" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_2dp" android:layout_marginTop="@dimen/dimen_15dp" app:hintAnimationEnabled="false">
            <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_13sp" android:textColor="#adadad" android:id="@+id/concessionText" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/concession_type" app:fontType="2"/>
            <RelativeLayout android:id="@+id/concessionlayout" android:layout_width="match_parent" android:layout_height="wrap_content">
                <Spinner android:id="@+id/concession_categoty" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/dimen_38dp" android:layout_marginTop="@dimen/dimen_2dp" android:popupBackground="@drawable/travel_res_bus_thin_shadow" android:spinnerMode="dropdown" style="@style/SpinnerDropDownForConcession"/>
                <androidx.appcompat.widget.AppCompatImageView android:id="@+id/spinner_dropdown" android:visibility="gone" android:layout_width="@dimen/dimen_12dp" android:layout_height="@dimen/dimen_12dp" android:layout_marginTop="@dimen/dimen_25dp" android:layout_marginStart="@dimen/dimen_4dp" android:layout_marginEnd="@dimen/dimen_4dp" android:layout_alignParentEnd="true" app:srcCompat="@drawable/dropdown_arrow"/>
            </RelativeLayout>
        </com.google.android.material.textfield.TextInputLayout>
        <View android:id="@+id/view_line_conncession" android:background="@color/color_efefef" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/dimen_2dp" android:layout_marginTop="@dimen/dimen_14dp" android:layout_marginBottom="@dimen/dimen_15dp" android:layout_marginStart="@dimen/dimen_2dp"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/concession_layout" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_17dp">
            <com.google.android.material.textfield.TextInputLayout android:theme="@style/recharge_text_input_layout_theme" android:id="@+id/text_input_layout_concession" android:layout_width="285dp" android:layout_height="wrap_content" android:hint="@string/concession_card_number" android:layout_marginStart="@dimen/dimen_2dp" app:hintAnimationEnabled="false">
                <androidx.appcompat.widget.AppCompatEditText android:textSize="@dimen/dimen_13sp" android:textColor="@android:color/black" android:textColorHint="#adadad" android:gravity="center_vertical" android:id="@+id/passenger_concession_card_number" android:background="@null" android:paddingTop="@dimen/dimen_5dp" android:focusableInTouchMode="true" android:layout_width="@dimen/dimen_280dp" android:layout_height="wrap_content" android:includeFontPadding="false" android:digits="1234567890" android:popupBackground="#b3000000" android:inputType="number" android:imeOptions="actionNext"/>
            </com.google.android.material.textfield.TextInputLayout>
            <androidx.appcompat.widget.AppCompatImageView android:layout_gravity="center" android:id="@+id/info_icon" android:padding="@dimen/dimen_5dp" android:layout_width="@dimen/dimen_30dp" android:layout_height="@dimen/dimen_30dp" android:layout_marginLeft="@dimen/dimen_3dp" app:srcCompat="@drawable/travel_res_bus_info_icon"/>
        </LinearLayout>
        <View android:id="@+id/view_line_end" android:background="@color/color_efefef" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/dimen_2dp" android:layout_marginLeft="@dimen/dimen_2dp" android:layout_marginTop="@dimen/dimen_14dp"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/lyt_extra_traveller_details" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputLayout android:theme="@style/recharge_text_input_layout_theme" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_2dp" app:hintAnimationEnabled="false">
                <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_13sp" android:textColor="#adadad" android:id="@+id/lbl_id_type" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/id_card_type" app:fontType="2"/>
                <RelativeLayout android:id="@+id/lyt_id_card_spinner" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <Spinner android:textColor="@color/cart_black" android:id="@+id/id_card_spinner" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_2dp" android:popupBackground="@color/white" android:spinnerMode="dropdown" style="@style/SpinnerDropDown"/>
                    <androidx.appcompat.widget.AppCompatImageView android:id="@+id/spinner_dropdown" android:visibility="gone" android:layout_width="@dimen/dimen_12dp" android:layout_height="@dimen/dimen_12dp" android:layout_marginTop="@dimen/dimen_25dp" android:layout_marginRight="@dimen/dimen_4dp" android:layout_alignParentRight="true" android:layout_marginStart="@dimen/dimen_4dp" android:layout_marginEnd="@dimen/dimen_4dp" app:srcCompat="@drawable/dropdown_arrow"/>
                </RelativeLayout>
            </com.google.android.material.textfield.TextInputLayout>
            <View android:id="@+id/view_line_end_1" android:background="@color/color_efefef" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/dimen_2dp" android:layout_marginLeft="@dimen/dimen_2dp" android:layout_marginTop="@dimen/dimen_14dp" android:layout_marginBottom="@dimen/dimen_15dp"/>
            <LinearLayout android:orientation="horizontal" android:id="@+id/id_card_layout" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_17dp">
                <com.google.android.material.textfield.TextInputLayout android:theme="@style/recharge_text_input_layout_theme" android:id="@+id/text_input_layout_id_card" android:layout_width="285dp" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_2dp" android:hint="@string/id_card" app:hintAnimationEnabled="false">
                    <androidx.appcompat.widget.AppCompatEditText android:textSize="@dimen/dimen_13sp" android:textColor="@android:color/black" android:textColorHint="#adadad" android:gravity="center_vertical" android:id="@+id/id_card_value" android:background="@null" android:paddingTop="@dimen/dimen_5dp" android:focusableInTouchMode="true" android:layout_width="@dimen/dimen_280dp" android:layout_height="wrap_content" android:maxLines="1" android:includeFontPadding="false" android:popupBackground="#b3000000" android:imeOptions="actionNext"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <View android:id="@+id/view_line_end_2" android:background="@color/color_efefef" android:visibility="visible" android:layout_width="match_parent" android:layout_height="@dimen/dimen_2dp" android:layout_marginLeft="@dimen/dimen_2dp" android:layout_marginTop="@dimen/dimen_10dp" android:layout_marginBottom="@dimen/dimen_15dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
