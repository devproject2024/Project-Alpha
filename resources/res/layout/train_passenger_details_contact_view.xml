<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <View android:background="@color/color_ebebeb" android:layout_width="match_parent" android:layout_height="5dp"/>
    <com.paytm.utility.RoboTextView android:textSize="15sp" android:textColor="@color/color_000000" android:id="@+id/contact_info_heading" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="10dp" android:layout_marginRight="15dp" android:text="@string/contact_information" app:fontType="3"/>
    <com.paytm.utility.RoboTextView android:textSize="11sp" android:textColor="@color/cart_grey" android:id="@+id/contact_info_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="1dp" android:layout_marginRight="15dp" android:text="@string/train_email_below_msg" android:layout_below="@+id/contact_info_heading" app:fontType="2"/>
    <RelativeLayout android:id="@+id/mobile_number_view" android:paddingLeft="15dp" android:paddingRight="15dp" android:focusable="true" android:focusableInTouchMode="true" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="17dp" android:layout_below="@+id/contact_info_text">
        <com.paytm.utility.RoboTextView android:textSize="11sp" android:textColor="@color/cart_grey" android:id="@+id/mobile_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dimen_3dp" android:text="@string/mobile" app:fontType="2"/>
        <TextView android:textSize="13sp" android:textColor="@color/train_search_list_color" android:id="@+id/country_code_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="+91" android:layout_below="@+id/mobile_text" android:layout_centerVertical="true"/>
        <EditText android:textSize="13sp" android:textColor="@color/train_search_list_color" android:id="@+id/mobile_edit" android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:hint="@string/mobile_number" android:singleLine="true" android:maxLength="10" android:layout_toRightOf="@+id/country_code_text" android:layout_below="@+id/mobile_text" android:inputType="number"/>
        <View android:id="@+id/mobile_below_view" android:background="@color/payment_success_line_grey" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="11dp" android:layout_below="@+id/mobile_edit"/>
        <com.paytm.utility.RoboTextView android:textSize="@dimen/cart_13sp" android:textColor="@color/cart_oos_text" android:id="@+id/mobile_error" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="@string/enter_mobile_number" android:layout_below="@+id/mobile_below_view" app:fontType="3"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/email_id_lyt" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_below="@+id/mobile_number_view">
        <com.paytm.utility.RoboTextView android:textSize="11sp" android:textColor="@color/cart_grey" android:id="@+id/email_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dimen_5dp" android:text="@string/email" app:fontType="2"/>
        <EditText android:textSize="13sp" android:textColor="@color/train_search_list_color" android:id="@+id/email_edit" android:background="@android:color/transparent" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/email_address" android:singleLine="true" android:layout_below="@+id/email_text"/>
        <View android:id="@+id/email_id_view" android:background="@color/payment_success_line_grey" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="11dp" android:layout_below="@+id/email_edit"/>
        <com.paytm.utility.RoboTextView android:textSize="@dimen/cart_13sp" android:textColor="@color/cart_oos_text" android:id="@+id/email_error" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="@string/enter_email" android:layout_below="@+id/email_id_view" app:fontType="3"/>
    </RelativeLayout>
</LinearLayout>
