<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true">
        <LinearLayout android:orientation="vertical" android:id="@+id/parentLayout" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
            <RelativeLayout android:id="@+id/recharge_group" android:background="#f5f8fa" android:paddingLeft="@dimen/dimen_16dp" android:paddingTop="@dimen/dimen_34dp" android:paddingBottom="@dimen/dimen_24dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="#1d252d" android:ellipsize="end" android:id="@+id/txt_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_16dp" android:maxLines="1" android:layout_toLeftOf="@+id/ic_operator_icon" android:layout_alignParentLeft="true" android:lineSpacingExtra="6sp" android:fontFamily="sans-serif"/>
                <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#1d252d" android:id="@+id/txt_operator_number" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_2dp" android:maxLines="1" android:layout_below="@+id/txt_name" android:lineSpacingExtra="6sp" android:fontFamily="sans-serif-medium"/>
                <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#1d252d" android:id="@+id/txt_operator" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_2dp" android:maxLines="1" android:layout_below="@+id/txt_operator_number" android:lineSpacingExtra="6sp" android:fontFamily="sans-serif-medium"/>
                <ImageView android:id="@+id/ic_operator_icon" android:layout_width="@dimen/dimen_36dp" android:layout_height="@dimen/dimen_36dp" android:layout_alignTop="@+id/txt_name" android:layout_alignParentRight="true" android:layout_marginEnd="@dimen/dimen_24dp"/>
                <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#506d85" android:id="@+id/txt_note" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_16dp" android:text="@string/txt_payment_setup_note" android:layout_below="@+id/txt_operator" android:lineSpacingExtra="4sp" android:fontFamily="sans-serif-medium"/>
            </RelativeLayout>
            <FrameLayout android:id="@+id/lyt_container" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:layout_marginStart="@dimen/dimen_16dp"/>
            <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#506d85" android:id="@+id/txt_note_bottom" android:paddingTop="@dimen/dimen_10dp" android:paddingBottom="@dimen/dimen_16dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/label_note" android:lineSpacingExtra="4sp" android:fontFamily="sans-serif" android:paddingStart="@dimen/dimen_14dp" android:paddingEnd="@dimen/dimen_14dp" android:letterSpacing="0.04"/>
            <include android:id="@+id/double_color_view" android:layout_width="match_parent" android:layout_height="wrap_content" layout="@layout/layout_double_color_lines"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <FrameLayout android:id="@+id/lyt_progress_bar" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
        <ProgressBar android:layout_gravity="center" android:id="@+id/progress_bar" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </FrameLayout>
    <FrameLayout android:id="@+id/offline_lyt_container" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent"/>
</RelativeLayout>
