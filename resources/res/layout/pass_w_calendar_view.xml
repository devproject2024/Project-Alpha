<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/bus_ticket_white" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/header_lyt" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentTop="true">
        <RelativeLayout android:gravity="top|left|center_vertical|center_horizontal|center" android:id="@+id/buttonlayout" android:layout_width="match_parent" android:layout_height="60dp">
            <RelativeLayout android:id="@+id/prevMonthlyt" android:layout_width="90dp" android:layout_height="60dp" android:layout_alignParentLeft="true">
                <ImageView android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="10dp" android:src="@drawable/pass_bus_search_left_arrow_selector" android:layout_centerVertical="true"/>
            </RelativeLayout>
            <com.paytm.utility.RoboTextView android:textAppearance="?android:attr/textAppearanceMedium" android:textSize="19sp" android:textColor="@color/color_000000" android:gravity="center" android:id="@+id/currentMonth" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true" android:layout_centerHorizontal="true" android:inputType="none|text|textCapSentences|textNoSuggestions" app:fontType="2"/>
            <RelativeLayout android:id="@+id/nextMonthlyt" android:layout_width="90dp" android:layout_height="60dp" android:layout_alignParentRight="true">
                <ImageView android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginRight="10dp" android:src="@drawable/pass_bus_search_right_arrow_selector" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            </RelativeLayout>
        </RelativeLayout>
        <View android:background="@color/separators" android:layout_width="match_parent" android:layout_height="1dp" android:layout_below="@+id/buttonlayout"/>
    </RelativeLayout>
    <include android:id="@+id/calendar_header" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/header_lyt" layout="@layout/pass_calender_day_lyt"/>
    <View android:id="@+id/sep_header" android:background="@color/separators" android:layout_width="match_parent" android:layout_height="1dp" android:layout_below="@+id/calendar_header"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/footer_lyt" android:layout_below="@+id/sep_header">
        <GridView android:id="@+id/calendar" android:layout_width="wrap_content" android:layout_height="wrap_content" android:verticalSpacing="5dp" android:numColumns="7"/>
    </RelativeLayout>
</RelativeLayout>
