<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/color_fafafa" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:id="@+id/search_layout" android:background="@color/color_ffffff" android:layout_width="match_parent" android:layout_height="60dp" android:layout_alignParentTop="true" android:elevation="@dimen/dimen_4dp">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent" android:paddingStart="@dimen/dimen_10dp">
                <androidx.appcompat.widget.AppCompatImageView android:id="@+id/back_button" android:paddingLeft="10dp" android:paddingTop="10dp" android:paddingRight="10dp" android:paddingBottom="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:paddingStart="5dp" android:paddingEnd="10dp" android:layout_marginStart="@dimen/dimen_5dp" android:layout_alignParentStart="true" app:srcCompat="@drawable/bus_back_arrow"/>
                <EditText android:id="@+id/search_et" android:background="@null" android:layout_width="match_parent" android:layout_height="match_parent" android:singleLine="true" android:maxLength="25" android:imeOptions="actionSearch" android:paddingStart="@dimen/dimen_5dp" android:paddingEnd="10dp" android:layout_toStartOf="@+id/clear" android:layout_toEndOf="@+id/back_button"/>
                <androidx.appcompat.widget.AppCompatImageView android:layout_gravity="right|center_vertical|center_horizontal|center|end" android:id="@+id/clear" android:padding="10dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginEnd="@dimen/dimen_5dp" android:layout_alignParentEnd="true" app:srcCompat="@drawable/bus_close_normal"/>
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout android:gravity="center_vertical" android:id="@+id/current_location_lyt" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="@dimen/dimen_60dp" android:layout_marginTop="@dimen/dimen_5dp" android:layout_below="@+id/search_layout">
            <androidx.appcompat.widget.AppCompatImageView android:id="@+id/ic_current_location" android:layout_width="@dimen/dimen_21dp" android:layout_height="@dimen/dimen_21dp" android:layout_marginStart="@dimen/dimen_15dp" android:layout_alignParentStart="true"/>
            <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_15dp" android:textStyle="bold" android:textColor="#0a0a0a" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/use_my_location_text" android:layout_marginStart="@dimen/dimen_15dp" android:layout_toEndOf="@+id/ic_current_location" app:fontType="3"/>
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/list_recents" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="@dimen/dimen_8dp" android:layout_below="@+id/current_location_lyt"/>
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/list_search" android:background="@color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/powered_by_google" android:layout_below="@+id/search_layout"/>
        <RelativeLayout android:id="@+id/powered_by_google" android:background="@color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true">
            <androidx.appcompat.widget.AppCompatImageView android:padding="@dimen/dimen_10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:layout_marginBottom="@dimen/dimen_10dp" android:layout_centerHorizontal="true" app:srcCompat="@drawable/powered_by_google_light"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
