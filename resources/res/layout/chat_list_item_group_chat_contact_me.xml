<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <include layout="@layout/chat_view_chat_time"/>
    <RelativeLayout android:id="@+id/card_group_chat_message" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_15dp">
        <LinearLayout android:orientation="horizontal" android:id="@+id/group_chat_message_container" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginEnd="@dimen/dimen_15dp" android:layout_alignParentEnd="true">
            <LinearLayout android:orientation="vertical" android:id="@+id/group_chat_bubble" android:background="@drawable/chat_shape_chat_self_bg" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:textSize="@dimen/dimen_10sp" android:textColor="@color/chat_forwarded_color" android:id="@+id/text_group_chat_list_forward_tip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_10dp" android:layout_marginTop="@dimen/dimen_8dp" android:text="@string/chat_module_forwarded" android:drawableLeft="@drawable/chat_ic_reply_tip" android:drawablePadding="@dimen/dimen_5dp" android:drawableStart="@drawable/chat_ic_reply_tip" android:layout_marginStart="@dimen/dimen_10dp"/>
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/layout_group_chat_contact" android:paddingTop="@dimen/dimen_10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingStart="@dimen/dimen_10dp">
                    <com.paytm.android.chat.view.ChatHeadView android:id="@+id/image_group_chat_contact_image1" android:layout_width="@dimen/dimen_40dp" android:layout_height="@dimen/dimen_40dp"/>
                    <LinearLayout android:gravity="center" android:id="@+id/ll_contact_image2" android:background="@drawable/chat_shape_share_contact_me_bg" android:layout_width="@dimen/dimen_40dp" android:layout_height="@dimen/dimen_40dp" android:layout_marginLeft="-26dp" android:layout_marginStart="-26dp">
                        <com.paytm.android.chat.view.ChatHeadView android:id="@+id/image_group_chat_contact_image2" android:layout_width="@dimen/dimen_36dp" android:layout_height="@dimen/dimen_36dp"/>
                    </LinearLayout>
                    <TextView android:textSize="@dimen/dimen_14sp" android:textColor="@color/groupChatTextMe" android:ellipsize="end" android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@+id/text_group_chat_contact_content" android:layout_width="wrap_content" android:layout_height="wrap_content" android:lines="1" android:layout_marginStart="@dimen/dimen_10dp" android:layout_marginEnd="@dimen/dimen_10dp"/>
                </LinearLayout>
                <LinearLayout android:layout_gravity="end" android:orientation="horizontal" android:id="@+id/ll_time_status_container" android:background="@null" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_10dp" android:layout_marginRight="@dimen/dimen_10dp" android:layout_marginBottom="@dimen/dimen_10dp" android:layout_alignBottom="@+id/group_chat_bubble" android:layout_alignEnd="@+id/group_chat_bubble">
                    <TextView android:textSize="@dimen/dimen_10sp" android:textColor="@color/chat_color_4D000000" android:layout_gravity="center" android:id="@+id/chat_msg_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="12:00 PM" android:fontFamily="sans-serif-medium" android:layout_marginEnd="@dimen/dimen_2dp"/>
                    <ImageView android:layout_gravity="center" android:id="@+id/image_group_chat_read_receipt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/chat_icon_group_chat_message_state_send"/>
                </LinearLayout>
            </LinearLayout>
            <ImageView android:id="@+id/arrow" android:layout_width="wrap_content" android:layout_height="wrap_content" app:srcCompat="@drawable/chat_bubble_arrow_me"/>
        </LinearLayout>
        <View android:id="@+id/view_select_view" android:background="@color/chat_select_bg" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignTop="@+id/group_chat_message_container" android:layout_alignBottom="@+id/group_chat_message_container"/>
    </RelativeLayout>
    <include layout="@layout/chat_layout_group_chat_fail_message_tip"/>
</LinearLayout>
