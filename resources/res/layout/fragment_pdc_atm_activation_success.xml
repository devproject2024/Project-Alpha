<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <include android:id="@+id/layout_bank_header_bar" layout="@layout/pb_layout_bank_header_without_divider"/>
    <RelativeLayout android:id="@+id/bottom_bar" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <include android:id="@+id/lyt_bottom_tab_bar" android:layout_width="match_parent" android:layout_height="60dp" layout="@layout/pb_lyt_main_bottom_tab_bar_new"/>
    </RelativeLayout>
    <ScrollView android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/bottom_bar" android:layout_below="@+id/layout_bank_header_bar">
        <RelativeLayout android:orientation="vertical" android:paddingTop="@dimen/dimen_15dp" android:layout_width="match_parent" android:layout_height="match_parent">
            <androidx.appcompat.widget.AppCompatImageView android:id="@+id/successTickImage" android:layout_width="@dimen/dimen_45dp" android:layout_height="@dimen/dimen_45dp" android:layout_centerHorizontal="true" app:srcCompat="@drawable/pb_svg_success_tick_green"/>
            <com.paytm.utility.RoboTextView android:textSize="@dimen/text_size_21sp" android:textColor="@color/color_222222" android:gravity="center_horizontal" android:id="@+id/paytm_card_success_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_12dp" android:layout_marginTop="@dimen/dimen_20dp" android:layout_marginRight="@dimen/dimen_12dp" android:layout_marginBottom="59dp" android:text="@string/paytm_atm_card_activated_successfully" android:layout_below="@+id/successTickImage" android:layout_centerHorizontal="true" app:fontType="4"/>
            <com.paytm.utility.RoboTextView android:textSize="@dimen/wallet_18_sp" android:textColor="@color/color_222222" android:id="@+id/now_you_can" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_30dp" android:layout_marginBottom="@dimen/dimen_20dp" android:text="@string/now_you_can" android:layout_below="@+id/paytm_card_success_title" app:fontType="4"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/facilityLayout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_25dp" android:layout_marginRight="@dimen/dimen_25dp" android:layout_below="@+id/now_you_can">
                <net.one97.paytm.paymentsBank.widget.FacilitiesView android:id="@+id/help_title_1" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dimen_30dp" app:circleColor="@color/cnap_title_background" app:circleRadius="70dp" app:iconHeight="39.5dp" app:iconLeftMargin="@dimen/dimen_13dp" app:iconTopMargin="@dimen/dimen_23dp" app:iconWidth="56.5dp" app:rightIcon="@drawable/pb_svg_ill_withdraw" app:subtitle="@string/facility_withdraw_subtitle" app:title="@string/facility_withdraw_title"/>
                <net.one97.paytm.paymentsBank.widget.FacilitiesView android:id="@+id/help_title_2" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dimen_30dp" app:circleColor="@color/cnap_title_background" app:circleRadius="70dp" app:iconHeight="39.5dp" app:iconLeftMargin="@dimen/dimen_13dp" app:iconTopMargin="@dimen/dimen_23dp" app:iconWidth="56.5dp" app:rightIcon="@drawable/pb_svg_ill_shop" app:subtitle="@string/facility_shop_subtitle" app:title="@string/facility_shop_title"/>
                <net.one97.paytm.paymentsBank.widget.FacilitiesView android:id="@+id/help_title_3" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dimen_30dp" app:circleColor="@color/cnap_title_background" app:circleRadius="70dp" app:iconHeight="39.5dp" app:iconLeftMargin="@dimen/dimen_13dp" app:iconTopMargin="@dimen/dimen_23dp" app:iconWidth="56.5dp" app:rightIcon="@drawable/pb_svg_ill_show_qr" app:subtitle="@string/facility_qr_subtitle" app:title="@string/facility_qr_title"/>
                <androidx.appcompat.widget.AppCompatButton android:textSize="@dimen/wallet_17sp" android:textColor="@color/white" android:id="@+id/paytments_bank_choose_card_btn" android:background="@drawable/pb_button_click" android:layout_width="match_parent" android:layout_height="55dp" android:layout_marginTop="@dimen/dimen_30dp" android:text="@string/passbook_info_button" android:textAllCaps="false"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/bottom_strip" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:layout_below="@+id/facilityLayout">
                <View android:background="@color/wallet_transfer_bank" android:layout_width="match_parent" android:layout_height="@dimen/dimen_4dp"/>
                <View android:background="@color/paytm_bottom_strip_dark" android:layout_width="match_parent" android:layout_height="@dimen/dimen_4dp"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
