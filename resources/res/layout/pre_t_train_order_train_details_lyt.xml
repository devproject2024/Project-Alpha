<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp">
    <LinearLayout android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="13sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/trip_txt" android:padding="@dimen/dimen_15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:fontFamily="sans-serif-medium"/>
            <TextView android:textSize="11sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/fav_txt" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Mark Favourite" android:layout_toLeftOf="@+id/fav_container" android:layout_centerVertical="true" android:fontFamily="sans-serif-light"/>
            <FrameLayout android:id="@+id/fav_container" android:layout_width="@dimen/dimen_60dp" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true">
                <ImageView android:layout_gravity="center" android:id="@+id/fav_image" android:visibility="gone" android:layout_width="@dimen/dimen_18dp" android:layout_height="@dimen/dimen_17dp" android:layout_marginLeft="10dp" android:layout_marginRight="10dp"/>
                <com.airbnb.lottie.LottieAnimationView android:layout_gravity="center_vertical" android:id="@+id/fav_anim" android:visibility="gone" android:layout_width="match_parent" android:layout_height="40dp" android:scaleType="centerCrop"/>
            </FrameLayout>
        </RelativeLayout>
        <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent">
                <ImageView android:id="@+id/source_image_view" android:background="@color/color_002e6e" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1"/>
            </LinearLayout>
            <RelativeLayout android:paddingLeft="@dimen/dimen_15dp" android:paddingTop="@dimen/dimen_11dp" android:paddingRight="@dimen/dimen_15dp" android:paddingBottom="@dimen/dimen_11dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="15sp" android:textStyle="bold" android:textColor="#ffffff" android:id="@+id/train_num_txt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:fontFamily="sans-serif"/>
                <TextView android:textSize="13sp" android:textStyle="normal" android:textColor="#ffffff" android:id="@+id/train_pnr_txt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:textIsSelectable="true" android:fontFamily="sans-serif-medium"/>
                <TextView android:textSize="11sp" android:textStyle="normal" android:textColor="#9b9b9b" android:id="@+id/train_class_txt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_below="@+id/train_pnr_txt" android:layout_alignParentLeft="true" android:fontFamily="sans-serif"/>
                <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#00b9f5" android:id="@+id/view_route" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="View Route" android:layout_below="@+id/train_class_txt" android:layout_alignParentLeft="true" android:fontFamily="sans-serif"/>
                <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#00b9f5" android:id="@+id/view_coach" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="View Coach" android:layout_below="@+id/train_class_txt" android:layout_alignParentRight="true" android:fontFamily="sans-serif"/>
            </RelativeLayout>
        </FrameLayout>
        <RelativeLayout android:paddingLeft="@dimen/dimen_15dp" android:paddingRight="@dimen/dimen_15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_13dp">
            <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true">
                <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/source_date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:fontFamily="sans-serif"/>
                <TextView android:textSize="23sp" android:textStyle="normal" android:textColor="#222222" android:gravity="center_horizontal" android:id="@+id/source_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:fontFamily="sans-serif"/>
                <TextView android:textSize="11sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/source_station" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:fontFamily="sans-serif"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true">
                <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#222222" android:layout_gravity="end" android:id="@+id/destination_date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:fontFamily="sans-serif"/>
                <TextView android:textSize="23sp" android:textStyle="normal" android:textColor="#222222" android:gravity="center_horizontal" android:layout_gravity="end" android:id="@+id/destination_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:fontFamily="sans-serif"/>
                <TextView android:textSize="11sp" android:textStyle="normal" android:textColor="#222222" android:layout_gravity="end" android:id="@+id/destination_station" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:fontFamily="sans-serif"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_centerHorizontal="true">
                <TextView android:textSize="11sp" android:textStyle="normal" android:textColor="#979797" android:layout_gravity="center" android:id="@+id/duration_txt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:fontFamily="sans-serif"/>
                <View android:layout_gravity="center" android:id="@+id/empty_div" android:background="#d7d7d7" android:layout_width="58dp" android:layout_height="1.5dp" android:layout_marginTop="6dp"/>
                <TextView android:textSize="11sp" android:textStyle="normal" android:textColor="#979797" android:gravity="center_horizontal" android:layout_gravity="center" android:id="@+id/num_of_stops" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:fontFamily="sans-serif"/>
            </LinearLayout>
        </RelativeLayout>
        <TextView android:textSize="11sp" android:textStyle="normal" android:textColor="#00b9f5" android:id="@+id/change_station_button" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_15dp" android:layout_marginTop="8dp" android:fontFamily="sans-serif-light"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/change_station_lyt" android:paddingLeft="@dimen/dimen_15dp" android:paddingRight="@dimen/dimen_15dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_17dp">
            <ImageView android:layout_gravity="center" android:id="@+id/changed_station_icon" android:layout_width="25dp" android:layout_height="@dimen/dimen_25dp" android:src="@drawable/homepage_default_icon" android:scaleType="fitCenter"/>
            <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#9b9b9b" android:layout_gravity="center" android:id="@+id/change_station_txt" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_10dp" android:text="You have changed the boarding station to Hazrat Nizamuddin railway station " android:fontFamily="sans-serif"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/booking_txt_holder_lyt" android:paddingLeft="@dimen/dimen_15dp" android:paddingRight="@dimen/dimen_15dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_17dp">
            <ImageView android:layout_gravity="center" android:id="@+id/txt_holder_icon" android:layout_width="16dp" android:layout_height="@dimen/dimen_16dp" android:scaleType="fitCenter"/>
            <TextView android:textSize="10sp" android:textStyle="normal" android:textColor="#666666" android:layout_gravity="center" android:id="@+id/tx_holder_txt" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_10dp" android:lineSpacingExtra="3sp" android:fontFamily="sans-serif"/>
        </LinearLayout>
        <ImageView android:layout_width="match_parent" android:layout_height="2dp" android:layout_marginTop="@dimen/dimen_12dp" android:src="@drawable/pre_t_train_dotted_grey_line" android:layerType="software"/>
    </LinearLayout>
</LinearLayout>
