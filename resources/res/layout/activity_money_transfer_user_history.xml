<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/root_layout" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/toolbar_layout" android:layout_width="match_parent" android:layout_height="55dp">
        <ImageView android:id="@+id/iv_back_button" android:padding="@dimen/dimen_20dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/upi_ic_back" android:layout_centerVertical="true"/>
        <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:id="@+id/title_layout" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_toRightOf="@+id/iv_back_button">
            <androidx.appcompat.widget.AppCompatTextView android:textSize="15sp" android:textStyle="bold" android:textColor="#222222" android:ellipsize="end" android:id="@+id/toolbar_title" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:layout_centerVertical="true" android:fontFamily="sans-serif"/>
        </LinearLayout>
    </RelativeLayout>
    <androidx.coordinatorlayout.widget.CoordinatorLayout android:id="@+id/parent_coordinator_view" android:background="@color/white" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true" android:layout_below="@+id/toolbar_layout">
        <com.google.android.material.appbar.AppBarLayout android:theme="@style/ThemeOverlay.AppCompat.Light" android:id="@+id/appbar" android:background="@color/transparent" android:fitsSystemWindows="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:elevation="0dp" app:elevation="0dp" app:layout_behavior="net.one97.paytm.common.widgets.FlingBehavior">
            <RelativeLayout android:orientation="vertical" android:id="@+id/parent_layout" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:animateLayoutChanges="true" app:layout_scrollFlags="1">
                <TextView android:textSize="21sp" android:textStyle="normal" android:textColor="@color/color_222222" android:ellipsize="end" android:id="@+id/tv_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginRight="@dimen/dimen_5dp" android:maxLines="1" android:layout_toLeftOf="@+id/bankImageView" android:layout_alignParentLeft="true" android:fontFamily="sans-serif-medium"/>
                <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="@color/color_222222" android:ellipsize="end" android:id="@+id/tv_bank_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="@dimen/dimen_9dp" android:layout_marginRight="@dimen/dimen_5dp" android:maxLines="1" android:layout_toLeftOf="@+id/bankImageView" android:layout_below="@+id/tv_name" android:layout_alignParentLeft="true" android:fontFamily="sans-serif"/>
                <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="@color/color_222222" android:ellipsize="end" android:id="@+id/tv_acc_no" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="@dimen/dimen_7dp" android:layout_marginRight="@dimen/dimen_5dp" android:maxLines="1" android:layout_toLeftOf="@+id/bankImageView" android:layout_below="@+id/tv_bank_name" android:layout_alignParentLeft="true" android:fontFamily="sans-serif"/>
                <ImageView android:id="@+id/bankImageView" android:background="@drawable/white_circle_white_stroke" android:padding="12dp" android:visibility="visible" android:layout_width="@dimen/dimen_48dp" android:layout_height="@dimen/dimen_48dp" android:layout_marginTop="@dimen/dimen_10dp" android:layout_marginRight="@dimen/dimen_20dp" android:layout_alignBottom="@+id/tv_acc_no" android:layout_alignParentRight="true" android:layout_centerHorizontal="true" app:srcCompat="@drawable/ic_default_bank"/>
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_17dp" android:src="@drawable/ic_arrow_right_blue" android:layout_alignBottom="@+id/tv_money_transfer" android:layout_alignParentRight="true"/>
                <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="#00b9f5" android:id="@+id/tv_money_transfer" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="@dimen/dimen_40dp" android:text="@string/mt_transfer_money_title" android:layout_below="@+id/tv_acc_no" android:lineSpacingExtra="1sp" android:fontFamily="sans-serif"/>
                <View android:id="@+id/separator" android:background="@color/color_f3f7f8" android:layout_width="match_parent" android:layout_height="@dimen/dimen_1dp" android:layout_marginLeft="20dp" android:layout_marginTop="@dimen/dimen_15dp" android:layout_below="@+id/tv_money_transfer"/>
                <ImageView android:id="@+id/request_money_iv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_17dp" android:src="@drawable/ic_arrow_right_blue" android:layout_alignBottom="@+id/tv_request_money" android:layout_alignParentRight="true"/>
                <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="#00b9f5" android:id="@+id/tv_request_money" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="@dimen/dimen_15dp" android:text="@string/request_money" android:layout_below="@+id/separator" android:lineSpacingExtra="1sp" android:fontFamily="sans-serif"/>
                <View android:id="@+id/rel_light_blue" android:background="@color/excl_color_00b9f5" android:layout_width="match_parent" android:layout_height="@dimen/wallet_6_dp" android:layout_marginTop="@dimen/dimen_30dp" android:layout_below="@+id/tv_request_money"/>
                <View android:background="@color/paytm_dark_blue" android:layout_width="match_parent" android:layout_height="@dimen/wallet_6_dp" android:layout_below="@+id/rel_light_blue"/>
                <TextView android:textSize="@dimen/dimen_17sp" android:textStyle="normal" android:textColor="#222222" android:ellipsize="end" android:id="@+id/tv_your_txns" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="@dimen/dimen_45dp" android:layout_marginBottom="@dimen/dimen_10dp" android:maxLines="1" android:layout_below="@+id/rel_light_blue" android:lineSpacingExtra="-2sp" android:fontFamily="sans-serif-medium"/>
            </RelativeLayout>
        </com.google.android.material.appbar.AppBarLayout>
        <FrameLayout android:id="@+id/transactions_fragment_container" android:background="#ffffff" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent" android:animateLayoutChanges="true" app:layout_behavior="@string/appbar_scrolling_view_behavior"> &gt; 
        </FrameLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <FrameLayout android:id="@+id/fragmentContainer" android:layout_width="match_parent" android:layout_height="match_parent"/>
</RelativeLayout>
