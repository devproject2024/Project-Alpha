<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/toolbar_rel_lay" android:paddingTop="@dimen/dimen_10dp" android:paddingBottom="@dimen/dimen_10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageButton android:id="@+id/back_button" android:background="@android:color/transparent" android:padding="8dp" android:paddingRight="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_14dp" android:src="@drawable/back_arrow"/>
        <com.paytm.utility.RoboTextView android:textSize="16sp" android:textStyle="bold" android:textColor="#000000" android:ellipsize="end" android:id="@+id/show_pass_in_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_85dp" android:maxLines="1" android:layout_centerHorizontal="true" android:fontFamily="sans-serif" app:fontType="4"/>
        <com.paytm.utility.RoboTextView android:textSize="12sp" android:textStyle="normal" android:textColor="#666666" android:gravity="center_horizontal" android:id="@+id/city_name_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_4dp" android:layout_below="@+id/show_pass_in_text" android:layout_centerHorizontal="true" android:fontFamily="sans-serif" app:fontType="3"/>
    </RelativeLayout>
    <ScrollView android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/ll_proceed_to_pay" android:layout_below="@+id/toolbar_rel_lay">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <net.one97.paytm.o2o.movies.moviepass.widgets.CJRMoviePassCardView android:id="@+id/card_detail_view" android:layout_width="match_parent" android:layout_height="wrap_content" android:transitionName="@string/movie_pass_detail_transition_name"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/summary_lin_lay" android:paddingLeft="@dimen/dimen_15dp" android:paddingRight="@dimen/dimen_15dp" android:paddingBottom="@dimen/dimen_20dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp">
                <com.paytm.utility.RoboTextView android:textSize="16sp" android:textStyle="normal" android:textColor="@color/black" android:id="@+id/summary_head" android:layout_width="wrap_content" android:layout_height="wrap_content" android:lineSpacingExtra="8sp" android:fontFamily="sans-serif-medium" app:fontType="4"/>
                <com.paytm.utility.RoboTextView android:textSize="16sp" android:textStyle="normal" android:textColor="@color/black" android:id="@+id/summary_data" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:lineSpacingExtra="8sp" android:fontFamily="sans-serif" app:fontType="2"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/promocode_ban_linear_lyt" android:layout_width="match_parent" android:layout_height="wrap_content">
                <FrameLayout android:id="@+id/promocode_data_layout" android:background="#dee5e6" android:paddingTop="10dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <include layout="@layout/movie_upfront_promocode_view"/>
                </FrameLayout>
                <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="@color/color_00b9f5" android:gravity="center_horizontal" android:id="@+id/promocodes_bank_offers" android:background="@drawable/bg_movie_review_promocode" android:paddingLeft="14dp" android:paddingTop="@dimen/dimen_20dp" android:paddingRight="14dp" android:paddingBottom="20dp" android:visibility="visible" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/have_a_promocode" android:layout_alignParentRight="true" android:layout_centerVertical="true" app:fontType="3"/>
                <androidx.constraintlayout.widget.ConstraintLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/lyt_promo_applied" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <com.paytm.utility.RoboTextView android:textSize="15sp" android:textColor="@color/color_000000" android:gravity="center_vertical" android:id="@+id/txt_applied_promo_head" android:layout_width="wrap_content" android:layout_height="0dp" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="25dp" android:text="@string/promocode_applied" android:layout_centerVertical="true" android:layout_marginStart="20dp" app:fontType="3" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0"/>
                    <com.paytm.utility.RoboTextView android:textSize="11sp" android:textColor="@color/movies_promo_text_color" android:gravity="center_vertical" android:id="@+id/txt_applied_promo_info" android:background="@drawable/tag" android:paddingLeft="5dp" android:paddingTop="2dp" android:paddingRight="20dp" android:paddingBottom="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="15dp" android:text="" android:layout_centerVertical="true" android:layout_marginStart="20dp" app:fontType="3" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/txt_applied_promo_head"/>
                    <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="@color/color_222222" android:ellipsize="end" android:id="@+id/txt_cash_back_info" android:paddingLeft="4dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_marginRight="8dp" android:text="Promocode applied with the data given" android:maxLines="4" android:layout_toRightOf="@+id/txt_applied_promo_info" android:layout_centerVertical="true" android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:fontType="3" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toEndOf="@+id/txt_applied_promo_info" app:layout_constraintTop_toTopOf="@+id/txt_applied_promo_info"/>
                    <com.paytm.utility.RoboTextView android:textSize="12sp" android:textColor="@color/color_999999" android:ellipsize="end" android:id="@+id/txt_cash_back_desc" android:paddingLeft="4dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginRight="8dp" android:text="Promocode applied with the data given" android:maxLines="4" android:layout_toRightOf="@+id/txt_applied_promo_info" android:layout_centerVertical="true" android:layout_marginEnd="8dp" app:fontType="2" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="@+id/txt_cash_back_info" app:layout_constraintTop_toBottomOf="@+id/txt_cash_back_info"/>
                    <com.paytm.utility.RoboTextView android:textSize="12sp" android:textColor="@color/color_00b9f5" android:id="@+id/txt_cash_back_remove" android:paddingLeft="4dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:layout_marginRight="8dp" android:layout_marginBottom="25dp" android:text="X Remove Promocode" android:layout_toRightOf="@+id/txt_applied_promo_info" android:layout_centerVertical="true" android:lineSpacingExtra="5dp" android:layout_marginEnd="8dp" app:fontType="2" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintStart_toStartOf="@+id/txt_cash_back_desc" app:layout_constraintTop_toBottomOf="@+id/txt_cash_back_desc"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/tnc_lin_lay" android:paddingLeft="@dimen/dimen_15dp" android:paddingRight="@dimen/dimen_15dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_30dp" android:layout_marginBottom="@dimen/dimen_30dp">
                <net.one97.paytm.o2o.movies.common.widgets.CJRExpandableTncView android:id="@+id/tnc_view" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" app:minVisibleLines="3"/>
            </LinearLayout>
            <View android:background="#f3f7f8" android:layout_width="match_parent" android:layout_height="10dp"/>
            <com.paytm.utility.RoboTextView android:textSize="18sp" android:textStyle="bold" android:textColor="@color/black" android:id="@+id/tvPassValidityHeader" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="@dimen/dimen_24dp" android:text="Movie Pass Validity" app:fontType="3"/>
            <RelativeLayout android:id="@+id/rlPassValidityDetails" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="@dimen/dimen_20dp" android:layout_marginRight="@dimen/dimen_20dp" android:layout_marginBottom="@dimen/dimen_10dp">
                <com.paytm.utility.RoboTextView android:textSize="12sp" android:textColor="@color/hint_grey" android:id="@+id/tvStartingDateLabel" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="STARTING FROM" app:fontType="2"/>
                <com.paytm.utility.RoboTextView android:textSize="15sp" android:textStyle="bold" android:textColor="@color/black" android:id="@+id/tvStartingDate" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_5dp" android:layout_below="@+id/tvStartingDateLabel" app:fontType="3"/>
                <com.paytm.utility.RoboTextView android:textSize="12sp" android:textColor="@color/hint_grey" android:id="@+id/tvEndingDateLabel" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="VALID UPTO" android:layout_alignParentRight="true" app:fontType="2"/>
                <com.paytm.utility.RoboTextView android:textSize="15sp" android:textStyle="bold" android:textColor="@color/black" android:id="@+id/tvEndingDate" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_5dp" android:layout_below="@+id/tvEndingDateLabel" android:layout_alignRight="@+id/tvEndingDateLabel" app:fontType="3"/>
                <View android:background="@color/divider_color" android:layout_width="@dimen/dimen_100dp" android:layout_height="@dimen/dimen_1dp" android:layout_marginLeft="33dp" android:layout_marginRight="33dp" android:layout_marginBottom="7sp" android:layout_toLeftOf="@+id/tvEndingDate" android:layout_toRightOf="@+id/tvStartingDate" android:layout_alignParentBottom="true"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout android:orientation="vertical" android:id="@+id/ll_proceed_to_pay" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <View android:background="@drawable/shadow" android:layout_width="match_parent" android:layout_height="8dp"/>
        <LinearLayout android:gravity="center" android:orientation="vertical" android:background="@drawable/shape_rectangle_blue_bg_rounded_corners" android:layout_width="match_parent" android:layout_height="@dimen/dimen_55dp" android:layout_margin="@dimen/dimen_10dp">
            <com.paytm.utility.RoboTextView android:textSize="18sp" android:textStyle="bold" android:textColor="#ffffff" android:id="@+id/mp_proceed_to_pay_btn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true" android:fontFamily="sans-serif" app:fontType="4"/>
            <com.paytm.utility.RoboTextView android:textSize="12sp" android:textColor="@color/white" android:ellipsize="end" android:gravity="center_horizontal" android:id="@+id/txt_proceed_to_pay_promo" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true" android:elevation="5dp" app:fontType="2"/>
        </LinearLayout>
    </LinearLayout>
    <FrameLayout android:id="@+id/mp_detail_fragment_frame_lay" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="0dp" android:layout_alignParentTop="true" android:layout_marginStart="0dp" android:layout_alignParentStart="true"/>
    <RelativeLayout android:id="@+id/mp_loading_progress" android:visibility="gone" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent">
        <ProgressBar android:layout_width="wrap_content" android:layout_height="wrap_content" android:indeterminateDrawable="@drawable/custom_progress_bar_movies" android:layout_centerInParent="true"/>
    </RelativeLayout>
</RelativeLayout>
