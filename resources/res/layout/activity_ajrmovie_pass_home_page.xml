<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:orientation="horizontal" android:id="@+id/toolbar_rel_lay" android:paddingTop="@dimen/dimen_10dp" android:paddingBottom="@dimen/dimen_10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageButton android:id="@+id/back_button" android:background="@android:color/transparent" android:padding="8dp" android:paddingRight="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_14dp" android:src="@drawable/back_arrow"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/mp_city_linLay" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
            <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="#000000" android:id="@+id/city_name_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:fontFamily="sans-serif"/>
            <androidx.appcompat.widget.AppCompatImageView android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_8dp" android:layout_marginTop="@dimen/dimen_2dp" app:srcCompat="@drawable/ic_movie_down_arrow"/>
        </LinearLayout>
    </RelativeLayout>
    <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/toolbar_rel_lay" android:elevation="20dp">
        <include android:visibility="gone" android:layout_below="@+id/toolbar_rel_lay" layout="@layout/view_dummy_mp_card_user"/>
    </FrameLayout>
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/passes_recycler_view" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_below="@+id/toolbar_rel_lay"/>
    <FrameLayout android:id="@+id/mp_not_available_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/passes_recycler_view">
        <include android:visibility="visible" layout="@layout/movie_pass_not_available_in_city_view"/>
    </FrameLayout>
    <RelativeLayout android:id="@+id/mp_loading_progress" android:visibility="gone" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/toolbar_rel_lay">
        <ProgressBar android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true"/>
    </RelativeLayout>
    <include layout="@layout/movies_no_network_layout"/>
</RelativeLayout>
