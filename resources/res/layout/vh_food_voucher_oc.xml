<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:background="@drawable/rounded_drawable_pale_grey" android:layout_width="@dimen/dimen_320dp" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/layout_header" android:layout_width="match_parent" android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView android:id="@+id/img_food_voucher" android:layout_width="@dimen/dimen_50dp" android:layout_height="@dimen/dimen_50dp" android:layout_margin="15dp" app:cardBackgroundColor="@color/azure" app:cardCornerRadius="@dimen/dimen_50dp">
            <ImageView android:layout_gravity="center" android:layout_width="@dimen/dimen_27dp" android:layout_height="@dimen/dimen_27dp" app:srcCompat="@drawable/ic_food_voucher"/>
        </androidx.cardview.widget.CardView>
        <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_18sp" android:textColor="@color/dark" android:id="@+id/txt_food_voucher_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="13dp" android:layout_toEndOf="@+id/img_food_voucher" android:letterSpacing="-0.01" app:fontType="3" app:layout_constraintEnd_toEndOf="0"/>
        <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_14sp" android:textColor="@color/dark_grey_blue" android:layout_gravity="center_vertical" android:id="@+id/txt_food_voucher_coupon" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1" android:layout_below="@+id/txt_food_voucher_name" android:layout_toEndOf="@+id/img_food_voucher" android:letterSpacing="-0.01" app:fontType="3"/>
    </RelativeLayout>
    <View android:id="@+id/view_divider" android:background="@color/pale_grey_2" android:layout_width="match_parent" android:layout_height="@dimen/dimen_1dp" android:layout_below="@+id/layout_header"/>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/layout_food_voucher_coupon" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:layout_marginBottom="8dp" android:layout_below="@+id/view_divider" android:layout_marginEnd="15dp" android:layout_toEndOf="@+id/img_food_voucher" android:layout_alignEnd="@+id/img_arrow">
        <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_12sp" android:textColor="@color/greyblue" android:layout_gravity="center_vertical" android:id="@+id/txt_food_voucher_expiry" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:lineSpacingExtra="5sp" android:layout_marginStart="@dimen/dimen_15dp" android:letterSpacing="-0.01" app:fontType="3"/>
        <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_12sp" android:textColor="@color/dark" android:gravity="end" android:layout_gravity="center_vertical" android:id="@+id/txt_food_voucher_how_to_redeem" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/how_to_redeem_voucher" android:layout_weight="1" android:layout_marginStart="@dimen/dimen_15dp" android:letterSpacing="-0.01" app:fontType="3"/>
        <androidx.appcompat.widget.AppCompatImageView android:id="@+id/img_arrow" android:layout_width="7dp" android:layout_height="wrap_content" android:layout_marginTop="1dp" android:layout_marginStart="15dp" android:layout_marginEnd="15dp" app:srcCompat="@drawable/arrow_right_black" app:tint="@color/black"/>
    </LinearLayout>
</RelativeLayout>
