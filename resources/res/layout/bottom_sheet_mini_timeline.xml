<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@drawable/bg_rounded_top_white_radius_12dp" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView android:textSize="21sp" android:textStyle="bold" android:textColor="#222222" android:id="@+id/title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_32dp" android:text="@string/recurring_payment_history" android:fontFamily="sans-serif" android:layout_marginStart="@dimen/dimen_16dp" android:layout_marginEnd="@dimen/dimen_45dp"/>
        <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/historyFor" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_13dp" android:fontFamily="sans-serif" android:layout_marginStart="@dimen/dimen_16dp" android:letterSpacing="0.03"/>
        <com.airbnb.lottie.LottieAnimationView android:layout_gravity="center" android:id="@+id/loader" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="30dp" app:amount="5" app:animationDirectionbundle="-1" app:circleSize="15" app:duration="@android:integer/config_mediumAnimTime" app:endColor="@color/light_blue_A400" app:startColor="@color/light_blue_A700"/>
        <androidx.recyclerview.widget.RecyclerView android:orientation="vertical" android:id="@+id/historyRecyclerView" android:paddingTop="@dimen/dimen_24dp" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="match_parent" app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" app:layout_constraintVertical_bias="0"/>
    </LinearLayout>
    <ImageView android:layout_gravity="end" android:id="@+id/crossImage" android:layout_width="24dp" android:layout_height="@dimen/dimen_24dp" android:layout_margin="@dimen/dimen_16dp" app:srcCompat="@drawable/mandate_ic_close"/>
</FrameLayout>
