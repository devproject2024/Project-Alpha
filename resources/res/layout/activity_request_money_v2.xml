<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/root_layout" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/toolbar_layout" android:layout_width="match_parent" android:layout_height="60dp">
        <ImageView android:id="@+id/iv_back_button" android:padding="@dimen/dimen_20dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/upi_ic_back" android:layout_centerVertical="true"/>
        <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:id="@+id/title_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_toRightOf="@+id/iv_back_button">
            <TextView android:textSize="17sp" android:textStyle="bold" android:textColor="#222222" android:id="@+id/toolbar_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/request_money" android:layout_centerVertical="true" android:fontFamily="sans-serif"/>
            <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/toolbar_subtitle" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/iv_back_button" android:layout_below="@+id/toolbar_title" android:fontFamily="sans-serif"/>
        </LinearLayout>
    </RelativeLayout>
    <ImageView android:id="@+id/motif_iv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_motif_classic" android:layout_alignParentRight="true"/>
    <include android:id="@+id/searchLayout" android:visibility="gone" layout="@layout/upi_search_layout"/>
    <androidx.coordinatorlayout.widget.CoordinatorLayout android:id="@+id/parent_scroll_view" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true" android:layout_below="@+id/toolbar_layout" android:layout_alignParentLeft="true">
        <com.google.android.material.appbar.AppBarLayout android:theme="@style/ThemeOverlay.AppCompat.Light" android:id="@+id/appbar" android:background="@color/transparent" android:fitsSystemWindows="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:elevation="0dp" app:elevation="0dp" app:layout_behavior="net.one97.paytm.upi.common.FlingBehavior">
            <RelativeLayout android:orientation="vertical" android:id="@+id/parent_layout" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:animateLayoutChanges="true" app:layout_scrollFlags="1">
                <RelativeLayout android:orientation="vertical" android:id="@+id/title_layout_lnr" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <ImageView android:id="@+id/upi_logo_iv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="@dimen/dimen_7dp" android:baselineAlignBottom="true" app:srcCompat="@drawable/mt_upi_logo_upi"/>
                    <TextView android:textSize="@dimen/dimen_21sp" android:textStyle="bold" android:textColor="@color/color_222222" android:id="@+id/tv_heading" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_10dp" android:layout_marginRight="@dimen/dimen_20dp" android:text="@string/request_money_heading" android:layout_toRightOf="@+id/upi_logo_iv" android:lineSpacingExtra="8sp" android:fontFamily="@string/font_family_roboto_regular"/>
                    <TextView android:textSize="@dimen/dimen_12sp" android:textStyle="normal" android:textColor="@color/color_222222" android:id="@+id/tv_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="@dimen/dimen_7dp" android:layout_marginRight="@dimen/dimen_20dp" android:text="@string/request_money_upi_v22" android:layout_below="@+id/tv_heading" android:lineSpacingExtra="7sp" android:fontFamily="@string/font_family_roboto_regular"/>
                </RelativeLayout>
                <LinearLayout android:orientation="vertical" android:id="@+id/normal_linear" android:background="#ffffff" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="@dimen/dimen_30dp" android:layout_marginRight="@dimen/dimen_20dp" android:layout_below="@+id/title_layout_lnr" android:animateLayoutChanges="true">
                    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputLayout android:theme="@style/MoneyTransferEditTextTheme" android:id="@+id/account_til" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/request_money_et_hint" android:layout_toLeftOf="@+id/icon_container" android:layout_toStartOf="@+id/icon_container">
                            <AutoCompleteTextView android:textSize="17sp" android:textStyle="bold" android:textColor="#222222" android:textColorHint="@color/edittext_hint_color" android:id="@+id/account_number_et" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true" android:lineSpacingExtra="6sp" android:inputType="none|text|textNoSuggestions|textUri|textPassword|textVisiblePassword" android:imeOptions="actionDone" android:fontFamily="@string/font_family_roboto_regular" android:letterSpacing="0.02"/>
                        </com.google.android.material.textfield.TextInputLayout>
                        <LinearLayout android:orientation="horizontal" android:id="@+id/icon_container" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true">
                            <ImageView android:id="@+id/phonebook_iv" android:padding="6dp" android:visibility="gone" android:layout_width="32dp" android:layout_height="32dp" android:layout_marginTop="@dimen/dimen_15dp" android:src="@drawable/contact"/>
                            <ImageView android:id="@+id/cross_iv" android:padding="6dp" android:visibility="gone" android:layout_width="32dp" android:layout_height="32dp" android:layout_marginTop="@dimen/dimen_15dp" android:src="@drawable/ic_close_minkyc" android:layout_toLeftOf="@+id/phonebook_iv" android:layout_alignParentRight="true"/>
                            <TextView android:textSize="12sp" android:textColor="@color/color_blue_ifsc" android:gravity="right" android:id="@+id/txt_verify_vpa" android:background="@drawable/upi_layout_selector" android:paddingLeft="@dimen/dimen_10dp" android:paddingTop="@dimen/dimen_5dp" android:paddingBottom="@dimen/dimen_5dp" android:focusable="false" android:visibility="gone" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_20dp" android:text="@string/verify_vpa" android:layout_alignParentRight="true" android:layout_centerInParent="true" android:fontFamily="@string/font_family_roboto_regular"/>
                            <ImageView android:id="@+id/vpa_verified_iv" android:padding="6dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:src="@drawable/ifsc_verified_image" android:layout_alignParentRight="true"/>
                        </LinearLayout>
                    </RelativeLayout>
                    <TextView android:textSize="17sp" android:textStyle="bold" android:textColor="#ffffff" android:gravity="center" android:id="@+id/proceedbutton" android:background="@drawable/universal_money_transfer_button_bg" android:visibility="gone" android:layout_width="match_parent" android:layout_height="55dp" android:layout_marginTop="@dimen/dimen_30dp" android:text="@string/proceed" android:fontFamily="@string/font_family_roboto_regular" android:textAlignment="center"/>
                </LinearLayout>
                <LinearLayout android:orientation="vertical" android:id="@+id/recentBeneficiaryLayout" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_40dp" android:layout_below="@+id/normal_linear">
                    <FrameLayout android:id="@+id/recent_txn_fragment_container" android:background="@color/back_net_banking" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/normal_linear" android:animateLayoutChanges="true"/>
                    <FrameLayout android:id="@+id/recent_fragment_container" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:animateLayoutChanges="true"/>
                </LinearLayout>
            </RelativeLayout>
        </com.google.android.material.appbar.AppBarLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <FrameLayout android:id="@+id/contacts_fragment_container" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent" android:animateLayoutChanges="true"/>
        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <include android:id="@+id/lyt_wallet_loader" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerInParent="true" layout="@layout/layout_wallet_loader"/>
</RelativeLayout>
