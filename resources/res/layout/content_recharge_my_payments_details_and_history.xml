<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/parent" android:background="@android:color/white" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="match_parent">
    <ViewFlipper android:id="@+id/view_flipper_payment_details" android:paddingLeft="@dimen/dimen_20dp" android:paddingTop="@dimen/dimen_43dp" android:paddingRight="@dimen/dimen_23dp" android:paddingBottom="@dimen/dimen_25dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="15sp" android:textStyle="bold" android:textColor="#222222" android:id="@+id/txt_last_bill_date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:lineSpacingExtra="-3sp" android:fontFamily="sans-serif" android:letterSpacing="0.03"/>
            <TextView android:textSize="12sp" android:textStyle="bold" android:textColor="#999999" android:id="@+id/bill_hint" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_8dp" android:layout_below="@+id/txt_last_bill_date" android:lineSpacingExtra="-3sp" android:fontFamily="sans-serif" android:letterSpacing="0.03"/>
            <TextView android:textSize="13sp" android:textStyle="normal" android:textColor="#ffffff" android:id="@+id/btn_pay" android:background="@drawable/shape_recharge_rounded_corner_3dp_blue" android:paddingLeft="@dimen/dimen_23dp" android:paddingTop="@dimen/dimen_10dp" android:paddingRight="@dimen/dimen_23dp" android:paddingBottom="@dimen/dimen_10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:lineSpacingExtra="3sp" android:fontFamily="sans-serif-medium"/>
        </RelativeLayout>
    </ViewFlipper>
    <RelativeLayout android:layout_gravity="center" android:id="@+id/automatic_view" android:background="@color/color_f3f7f8" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_23dp" android:layout_marginRight="@dimen/dimen_23dp" android:layout_marginBottom="@dimen/dimen_20dp">
        <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/automatic_drawable" android:padding="@dimen/dimen_10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/automatic_text" android:drawableLeft="@drawable/ic_paytm_automatic_logo" android:drawablePadding="@dimen/dimen_7dp" android:layout_toLeftOf="@+id/make_automatic" android:layout_alignParentLeft="true" android:lineSpacingExtra="2sp" android:fontFamily="sans-serif" android:letterSpacing="0.03"/>
        <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#00b9f5" android:id="@+id/make_automatic" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_15dp" android:layout_marginRight="@dimen/dimen_10dp" android:text="Make Automatic" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:fontFamily="sans-serif" android:letterSpacing="0.03"/>
    </RelativeLayout>
    <ViewFlipper android:id="@+id/view_flipper_payment_history" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
        <include layout="@layout/content_recharge_my_payments_fetching_history"/>
        <include layout="@layout/content_recharge_my_payments_no_history"/>
        <include layout="@layout/content_recharge_my_payments_history"/>
    </ViewFlipper>
</LinearLayout>
