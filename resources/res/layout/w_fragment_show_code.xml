<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:id="@+id/fragment_show_code_main_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/wallet_17sp" android:textColor="@color/heading_color_show_code_heading" android:gravity="center_horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_10dp" android:layout_marginTop="27dp" android:layout_marginRight="@dimen/dimen_10dp" android:text="@string/offline_show_code_heading_new" android:fontFamily="@string/font_family_roboto_medium"/>
            <TextView android:textSize="@dimen/dimen_14sp" android:textColor="@color/heading_color_show_code_heading" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/fragment_show_code_tv_mobile_text" android:padding="@dimen/dimen_5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="23dp" android:text="@string/fragment_show_code_otp_text" android:contentDescription="@string/tb_fragment_show_code_otp_text"/>
            <TextView android:textSize="32sp" android:textStyle="bold" android:textColor="@color/heading_color_show_code_heading" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/fragment_show_code_tv_mobile_number" android:padding="@dimen/dimen_2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:fontFamily="sans-serif"/>
            <View android:layout_gravity="center_horizontal" android:background="@color/divider_color" android:visibility="gone" android:layout_width="40dp" android:layout_height="3dp" android:layout_marginTop="15dp" android:layout_marginBottom="15dp"/>
            <TextView android:textSize="@dimen/dimen_14sp" android:textColor="@color/heading_color_show_code_heading" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/fragment_show_code_tv_paytm_code" android:padding="@dimen/dimen_5dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/fragment_show_code_instant_payment"/>
            <TextView android:textSize="22sp" android:textStyle="bold" android:textColor="@color/heading_color_show_code_heading" android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:id="@+id/fragment_show_code_tv_offline_otp" android:background="@drawable/otp_orange_dot_rectangle" android:paddingLeft="@dimen/dimen_20dp" android:paddingTop="@dimen/dimen_10dp" android:paddingRight="@dimen/dimen_20dp" android:paddingBottom="@dimen/dimen_10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_12dp"/>
            <TextView android:textSize="13sp" android:textColor="@color/paytm_blue" android:gravity="top" android:layout_gravity="center_horizontal" android:id="@+id/fragment_tv_generate_otp" android:padding="@dimen/dimen_5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8.5dp" android:text="@string/generate_new_otp"/>
            <View android:layout_gravity="center_horizontal" android:id="@+id/separate_divider" android:background="@color/color_e2ebee" android:layout_width="30dp" android:layout_height="@dimen/dimen_4dp" android:layout_marginTop="@dimen/dimen_15dp"/>
            <LinearLayout android:orientation="horizontal" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_15dp" android:layout_marginBottom="@dimen/dimen_15dp">
                <View android:layout_gravity="center" android:background="@color/divider_color" android:layout_width="0dp" android:layout_height="1dp"/>
                <TextView android:textSize="@dimen/dimen_13dp" android:textColor="@android:color/black" android:gravity="center" android:layout_gravity="center" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/or"/>
                <View android:layout_gravity="center" android:background="@color/divider_color" android:layout_width="0dp" android:layout_height="1dp"/>
            </LinearLayout>
            <TextView android:textSize="@dimen/dimen_16sp" android:textColor="@color/heading_color_show_code_heading" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/fragment_show_code_paytm_bar_code" android:padding="@dimen/dimen_5dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/offline_show_code_paytm_bar_code"/>
            <View android:layout_gravity="center_horizontal" android:background="@color/divider_color" android:visibility="gone" android:layout_width="40dp" android:layout_height="3dp" android:layout_marginTop="5dp"/>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
