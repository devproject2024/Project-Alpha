                <ImageView android:id="@+id/fragment_show_code_iv_qr_code" android:layout_width="wrap_content" android:layout_height="wrap_content" android:scaleType="fitXY" android:layout_centerHorizontal="true" android:contentDescription="@string/tb_tap_to_expand_qr" android:transitionName="@string/zoom_transition"/>
                <TextView android:textSize="@dimen/dimen_12sp" android:textColor="@color/color_999999" android:id="@+id/fragment_show_code_tv_tap_qr" android:paddingRight="@dimen/dimen_10dp" android:paddingBottom="@dimen/dimen_10dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/tap_qr_to_expand" android:layout_below="@+id/fragment_show_code_iv_qr_code" android:layout_centerHorizontal="true" android:paddingEnd="@dimen/dimen_10dp"/>
                <ImageView android:id="@+id/fragment_show_code_iv_barcode" android:layout_width="294dp" android:layout_height="60dp" android:layout_marginTop="17dp" android:layout_marginBottom="19dp" android:layout_below="@+id/fragment_show_code_tv_tap_qr" android:layout_centerHorizontal="true" android:contentDescription="@string/tb_tap_to_exapnd_barcode"/>
                <LinearLayout android:orientation="vertical" android:id="@+id/lyt_bottom_lines" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/fragment_show_code_iv_barcode" android:layout_alignParentBottom="true">
                    <View android:background="@color/paytm_blue" android:layout_width="match_parent" android:layout_height="@dimen/dimen_10dp"/>
                    <View android:background="@color/paytm_dark_blue" android:layout_width="match_parent" android:layout_height="@dimen/dimen_10dp"/>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout android:gravity="center" android:layout_gravity="center_horizontal" android:orientation="horizontal" android:background="@color/divider_color" android:padding="@dimen/dimen_10dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp">
                <TextView android:textSize="@dimen/dimen_15sp" android:textColor="@color/heading_color_show_code_text_heading" android:paddingLeft="@dimen/dimen_10dp" android:paddingTop="@dimen/dimen_10dp" android:paddingRight="@dimen/dimen_5dp" android:paddingBottom="@dimen/dimen_10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/offline_auto_updates" android:paddingStart="@dimen/dimen_10dp" android:paddingEnd="@dimen/dimen_5dp"/>
                <TextView android:textSize="@dimen/cart_15sp" android:textColor="@color/black" android:id="@+id/fragment_show_code_tv_timer" android:paddingTop="@dimen/dimen_10dp" android:paddingRight="@dimen/dimen_10dp" android:paddingBottom="@dimen/dimen_10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingEnd="@dimen/dimen_10dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/fragment_show_code_loading_layout" android:padding="14dp" android:layout_width="match_parent" android:layout_height="match_parent">
            <ProgressBar android:layout_gravity="center_horizontal" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:indeterminateOnly="true" style="@style/Widget.AppCompat.ProgressBar"/>
            <TextView android:textSize="@dimen/dimen_15sp" android:textColor="@color/color_000000" android:gravity="center" android:layout_gravity="center" android:id="@+id/fragment_show_code_tv_configuration" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="15dp" android:text="@string/offline_otp_configuration"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/fragment_show_code_empty_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
                <ImageView android:id="@+id/fragment_show_code_empty_iv" android:layout_width="match_parent" android:layout_height="wrap_content" android:src="@drawable/no_show_code" android:contentDescription="TODO"/>
                <TextView android:textSize="16sp" android:textColor="@color/payment_success_text_grey" android:gravity="center" android:id="@+id/fragment_show_code_empty_tv" android:padding="20sp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/login_again" android:layout_centerHorizontal="true"/>
                <Button android:textSize="20sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/fragment_show_code_btn_login" android:background="@drawable/bg_btn_blue" android:layout_width="match_parent" android:layout_height="50dp" android:layout_margin="10dp" android:text="@string/sign_in" android:textAllCaps="false"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
