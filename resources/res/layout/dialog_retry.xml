<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@drawable/bg_retry_dialog" android:padding="@dimen/dimen_36dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView android:id="@+id/iv_error" android:layout_width="@dimen/dimen_25dp" android:layout_height="@dimen/dimen_25dp" android:layout_centerHorizontal="true" android:contentDescription="@null" app:srcCompat="@drawable/native_ic_alert"/>
    <TextView android:textSize="21sp" android:textStyle="bold" android:textColor="#222222" android:gravity="center_horizontal" android:id="@+id/tv_transactionFailed" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:text="@string/native_transaction_failed" android:layout_below="@+id/iv_error" android:layout_centerHorizontal="true" android:lineSpacingExtra="2sp" android:fontFamily="sans-serif"/>
    <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#000000" android:gravity="center_horizontal" android:id="@+id/tv_rejection" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_13dp" android:text="@string/native_due_to_rejecetion" android:layout_below="@+id/tv_transactionFailed" android:layout_centerHorizontal="true" android:lineSpacingExtra="6sp" android:fontFamily="sans-serif"/>
    <View android:id="@+id/v_underline" android:background="@drawable/bg_seperator" android:visibility="gone" android:layout_width="@dimen/dimen_30dp" android:layout_height="@dimen/dimen_3dp" android:layout_marginTop="@dimen/dimen_15dp" android:layout_below="@+id/tv_rejection" android:layout_centerHorizontal="true"/>
    <ImageView android:id="@+id/iv_tip" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignTop="@+id/tv_retry" android:contentDescription="@null" app:srcCompat="@drawable/native_ic_tip"/>
    <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#000000" android:gravity="center_horizontal" android:id="@+id/tv_retry" android:paddingLeft="@dimen/dimen_5dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_20dp" android:text="@string/native_you_can_retry" android:layout_toRightOf="@+id/iv_tip" android:layout_below="@+id/v_underline" android:layout_centerHorizontal="true" android:lineSpacingExtra="6sp" android:fontFamily="sans-serif"/>
    <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="#ffffff" android:gravity="center" android:id="@+id/tv_okGotIt" android:background="@drawable/bg_btn_ok_got_it" android:layout_width="165dp" android:layout_height="@dimen/dimen_50dp" android:layout_marginTop="@dimen/dimen_20dp" android:text="@string/ok_got_it" android:layout_below="@+id/tv_retry" android:layout_centerHorizontal="true" android:lineSpacingExtra="6sp" android:fontFamily="sans-serif"/>
</RelativeLayout>
