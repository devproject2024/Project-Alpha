<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:orientation="vertical" android:id="@+id/toolbar" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:gravity="left" android:orientation="horizontal" android:id="@+id/toolbar_start_ap" android:padding="@dimen/dimen_16dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentStart="true">
            <ImageView android:id="@+id/split_back_button" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_28dp" android:src="@drawable/back_arrow" android:layout_alignParentLeft="true" android:layout_alignParentStart="true"/>
            <com.paytm.utility.RoboTextView android:textSize="17sp" android:textStyle="bold" android:textColor="#222222" android:gravity="center_horizontal" android:id="@+id/tv_toolbar_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/select_contacts" android:layout_toRightOf="@+id/split_back_button" android:fontFamily="sans-serif" android:letterSpacing="0.01" app:fontType="4"/>
            <LinearLayout android:id="@+id/ll_proceed" android:background="@drawable/sb_button_click" android:visibility="gone" android:clickable="true" android:layout_width="@dimen/dimen_79dp" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true">
                <com.paytm.utility.RoboTextView android:textColor="#ffffff" android:gravity="center" android:padding="@dimen/dimen_7dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/proceed" app:fontType="3"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout android:background="@color/color_f3f7f8" android:padding="@dimen/dimen_11dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/dimen_10dp" android:layout_below="@+id/toolbar_start_ap">
            <androidx.appcompat.widget.AppCompatImageView android:id="@+id/search" android:padding="@dimen/dimen_5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_14dp" android:layout_alignParentLeft="true" app:srcCompat="@drawable/sb_ic_search_glyph"/>
            <EditText android:theme="@style/PaytmEditTextTheme" android:textSize="15sp" android:textStyle="normal" android:textColor="@color/color_222222" android:textColorHint="@color/color_8f969c" android:id="@+id/search_text" android:background="@null" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Search" android:singleLine="true" android:maxLength="35" android:layout_toRightOf="@+id/search" android:lineSpacingExtra="-4sp" android:fontFamily="sans-serif" android:colorControlActivated="@color/paytm_blue" android:colorAccent="@color/paytm_blue"/>
            <androidx.appcompat.widget.AppCompatImageView android:id="@+id/search_cross_button" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_15dp" android:layout_alignParentRight="true" app:srcCompat="@drawable/sb_ic_close_splitbill_bottom_sheet"/>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <androidx.recyclerview.widget.RecyclerView android:orientation="horizontal" android:id="@+id/horizontal_recycleview" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_10dp" android:layout_marginTop="@dimen/dimen_12dp" android:layout_marginBottom="5dp"/>
    </LinearLayout>
    <FrameLayout android:id="@+id/frame_container" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="@dimen/dimen_5dp" android:layout_marginBottom="@dimen/dimen_5dp">
        <net.one97.paytm.common.widgets.IndexFastScrollRecyclerView android:id="@+id/rv_contact_list" android:layout_width="match_parent" android:layout_height="match_parent"/>
        <ProgressBar android:layout_gravity="center" android:id="@+id/pb_progress" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <include android:id="@+id/list_empty_layout_container" android:visibility="gone" layout="@layout/list_empty_layout"/>
    </FrameLayout>
</LinearLayout>
