<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:background="@drawable/brand_circular_border" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="12dp">
        <ImageView android:id="@+id/brand_image" android:layout_width="45dp" android:layout_height="45dp" android:layout_margin="1dp" android:scaleType="fitXY" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
        <LinearLayout android:orientation="horizontal" android:id="@+id/brand_title_container" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <com.paytm.utility.RoboTextView android:textSize="16sp" android:textColor="#333333" android:ellipsize="end" android:id="@+id/brand_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="H M Store" android:singleLine="true" app:fontType="3"/>
            <ImageView android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_marginTop="@dimen/dimen_2dp" android:src="@drawable/forward_icon"/>
        </LinearLayout>
        <com.paytm.utility.RoboTextView android:textSize="12sp" android:textColor="#222222" android:ellipsize="end" android:id="@+id/brand_subtitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" app:fontType="2"/>
    </LinearLayout>
    <com.paytm.utility.RoboTextView android:textStyle="bold" android:textColor="#ef4e28" android:id="@+id/right_heading" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="12dp" android:text="@string/view_all" android:maxLines="1" app:fontType="3"/>
</LinearLayout>
