                <View android:background="@color/color_f3f7f8" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/dimen_2dp" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="@dimen/dimen_10dp" android:layout_marginRight="@dimen/dimen_20dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
