<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/root_view" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar android:id="@+id/tool_bar" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TableRow android:gravity="center_vertical" android:paddingRight="@dimen/dimen_20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:id="@+id/bene_back_arrow_iv" android:paddingLeft="5dp" android:paddingTop="15dp" android:paddingRight="20dp" android:paddingBottom="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/back_arrow" android:layout_centerVertical="true"/>
            <TextView android:textSize="17sp" android:textStyle="normal" android:textColor="#222222" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/pb_mb_edit_beneficiary_details" android:fontFamily="sans-serif-medium"/>
        </TableRow>
    </androidx.appcompat.widget.Toolbar>
    <ScrollView android:id="@+id/scrollView" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/tool_bar">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:orientation="vertical" android:background="#fafbfb" android:padding="@dimen/dimen_5dp" android:layout_width="match_parent" android:layout_height="match_parent">
                <TableRow android:padding="20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
                        <TextView android:textSize="17sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/edit_bene_name_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/edit_benef_name" android:lineSpacingExtra="5sp" android:fontFamily="sans-serif-medium"/>
                        <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/edit_bene_acc_no_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:lineSpacingExtra="0sp" android:fontFamily="sans-serif"/>
                        <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/edit_bene_bank_name_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:lineSpacingExtra="0sp" android:fontFamily="sans-serif"/>
                    </LinearLayout>
                    <ImageView android:layout_gravity="center" android:id="@+id/edit_bene_bank_iv" android:layout_width="wrap_content" android:layout_height="wrap_content" app:srcCompat="@drawable/pb_mb_paytm_wallet"/>
                </TableRow>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/bene_edit_wallet_ll" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_20dp">
                <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputLayout android:theme="@style/PaytmEditTextTheme" android:id="@+id/layout_monthly_fund_transfer" android:padding="@dimen/wallet_5_dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/dimen_5dp">
                        <androidx.appcompat.widget.AppCompatEditText android:textSize="@dimen/dimen_16sp" android:textColor="@android:color/black" android:textColorHint="@color/pb_mb_grey_phone" android:id="@+id/edit_monthly_fund_transfer" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/pb_mb_monthly_money_transfer_limit" android:singleLine="true" android:maxLength="7" android:digits="1234567890" android:inputType="none|text|textNoSuggestions|number|phone"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <ImageView android:id="@+id/bene_limit_iv" android:padding="@dimen/dimen_5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_20dp" android:layout_marginRight="@dimen/dimen_15dp" android:src="@drawable/pb_mb_beneficiary_info_icon" android:layout_alignParentRight="true"/>
                </RelativeLayout>
                <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputLayout android:theme="@style/PaytmEditTextTheme" android:id="@+id/layout_maximum_transaction" android:padding="@dimen/wallet_5_dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/dimen_5dp">
                        <androidx.appcompat.widget.AppCompatEditText android:textSize="@dimen/dimen_16sp" android:textColor="@android:color/black" android:textColorHint="@color/pb_mb_grey_phone" android:id="@+id/edit_maximum_transaction" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/pb_mb_maximum_number_transaction" android:singleLine="true" android:maxLength="7" android:digits="1234567890" android:inputType="none|text|textNoSuggestions|number|phone"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <ImageView android:id="@+id/bene_transaction_iv" android:padding="@dimen/dimen_5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_20dp" android:layout_marginRight="@dimen/dimen_15dp" android:src="@drawable/pb_mb_beneficiary_info_icon" android:layout_alignParentRight="true"/>
                </RelativeLayout>
                <TextView android:textSize="16sp" android:textStyle="normal" android:textColor="#ffffff" android:gravity="center_horizontal" android:layout_gravity="center" android:id="@+id/wallet_edit_bene_save_tv" android:background="@drawable/rounded_rectangle_paytmblue" android:padding="@dimen/dimen_15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_10dp" android:layout_marginTop="@dimen/dimen_30dp" android:layout_marginRight="@dimen/dimen_10dp" android:layout_marginBottom="@dimen/dimen_30dp" android:text="@string/pb_mb_save" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" android:lineSpacingExtra="@dimen/dimen_5sp" android:fontFamily="sans-serif-medium"/>
                <TableRow android:gravity="center_vertical" android:paddingLeft="@dimen/dimen_20dp" android:paddingRight="@dimen/dimen_20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/tip"/>
                    <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#222222" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_15dp" android:text="@string/pb_mb_advance_setting_note_wallet" android:lineSpacingExtra="6sp" android:fontFamily="sans-serif"/>
                </TableRow>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/bene_edit_bank_ll" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_20dp">
                <TextView android:textSize="@dimen/dimen_17sp" android:textStyle="normal" android:textColor="@color/color_222222" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="@string/pb_mb_enable_money_from" android:fontFamily="sans-serif-medium"/>
                <TableRow android:id="@+id/bank_bank_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="@dimen/dimen_20dp">
                    <CheckBox android:id="@+id/bank_bank_cb" android:layout_width="wrap_content" android:layout_height="wrap_content" android:onClick="onCheckboxClicked" android:buttonTint="@color/paytm_blue"/>
                    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_10dp">
                        <TextView android:textSize="@dimen/dimen_12sp" android:textStyle="normal" android:textColor="#222222" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/pb_mb_title_payment_bank" android:fontFamily="sans-serif-medium"/>
                        <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="@color/color_999999" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="7dp" android:text="@string/pb_mb_bene_allows_you_to_add_bank" android:lineSpacingExtra="5sp" android:fontFamily="sans-serif"/>
                        <TextView android:textSize="@dimen/dimen_12sp" android:textStyle="normal" android:textColor="@color/color_909090" android:id="@+id/bene_bank_bank_setting_tv" android:paddingTop="@dimen/dimen_5dp" android:paddingBottom="@dimen/dimen_5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="@string/pb_mb_advanced_settings" android:lineSpacingExtra="5sp" android:fontFamily="sans-serif-medium" android:letterSpacing="0.02"/>
                    </LinearLayout>
                </TableRow>
                <View android:background="@color/color_f3f7f8" android:layout_width="match_parent" android:layout_height="@dimen/dimen_1dp" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="@dimen/dimen_20dp"/>
                <TableRow android:id="@+id/bank_wallet_cb_lyt" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="@dimen/dimen_20dp">
                    <CheckBox android:id="@+id/bank_wallet_cb" android:layout_width="wrap_content" android:layout_height="wrap_content" android:onClick="onCheckboxClicked" android:buttonTint="@color/paytm_blue"/>
                    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_10dp">
                        <TextView android:textSize="@dimen/dimen_12sp" android:textStyle="normal" android:textColor="@color/color_222222" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/pb_mb_accept_payment_paytm_wallet" android:fontFamily="sans-serif-medium"/>
                        <TextView android:textSize="@dimen/dimen_12sp" android:textStyle="normal" android:textColor="@color/color_999999" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="7dp" android:text="@string/pb_mb_bene_allows_you_to_add_wallet" android:lineSpacingExtra="5sp" android:fontFamily="sans-serif"/>
                        <TextView android:textSize="@dimen/dimen_12sp" android:textStyle="normal" android:textColor="@color/color_909090" android:id="@+id/bene_bank_wallet_setting_tv" android:paddingTop="@dimen/dimen_5dp" android:paddingBottom="@dimen/dimen_5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="@string/pb_mb_advanced_settings" android:lineSpacingExtra="@dimen/dimen_5sp" android:fontFamily="sans-serif-medium" android:letterSpacing="0.02"/>
                    </LinearLayout>
                </TableRow>
                <View android:id="@+id/bank_wallet_cb_lyt_below_header" android:background="@color/color_f3f7f8" android:layout_width="match_parent" android:layout_height="@dimen/dimen_1dp" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="@dimen/dimen_20dp"/>
                <TextView android:textSize="16sp" android:textStyle="normal" android:textColor="#ffffff" android:gravity="center_horizontal" android:layout_gravity="center" android:id="@+id/edit_bene_save_bank_tv" android:background="@drawable/rounded_rectangle_paytmblue" android:padding="@dimen/dimen_15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="@dimen/dimen_40dp" android:layout_marginRight="@dimen/dimen_20dp" android:layout_marginBottom="@dimen/dimen_30dp" android:text="@string/pb_mb_save" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" android:lineSpacingExtra="@dimen/dimen_5sp" android:fontFamily="sans-serif-medium"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
