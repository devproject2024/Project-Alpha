<?xml version="1.0" encoding="utf-8"?>
<net.one97.paytm.upi.util.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/saved_cards_swipe_reveal" android:layout_width="match_parent" android:layout_height="wrap_content" app:dragEdge="2" app:mode="oneLine">
    <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="match_parent">
        <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#ffffff" android:gravity="center" android:id="@+id/disableOneClick" android:background="#8ba6c1" android:padding="5dp" android:visibility="gone" android:layout_width="95dp" android:layout_height="match_parent" android:text="@string/disable_oc" android:fontFamily="sans-serif" android:letterSpacing="0.06"/>
        <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#ffffff" android:gravity="center" android:id="@+id/deleteCard" android:background="#fd5c5c" android:layout_width="95dp" android:layout_height="match_parent" android:text="@string/delete" android:fontFamily="sans-serif" android:letterSpacing="0.06"/>
    </LinearLayout>
    <RelativeLayout android:background="@android:color/white" android:paddingLeft="8dp" android:paddingTop="@dimen/dimen_16dp" android:paddingRight="8dp" android:paddingBottom="@dimen/dimen_16dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:id="@+id/lyt_outer_container" android:paddingLeft="8dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/saved_card_remove_menu">
            <ImageView android:id="@+id/iv_bank_icon" android:background="@drawable/upi_bg_stroke" android:padding="@dimen/dimen_8dp" android:layout_width="@dimen/dimen_52dp" android:layout_height="@dimen/dimen_52dp" android:src="@drawable/ic_saved_card"/>
            <com.paytm.utility.RoboTextView android:textSize="15sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/txt_card_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_toRightOf="@+id/iv_bank_icon" android:fontFamily="sans-serif-medium"/>
            <com.paytm.utility.RoboTextView android:textSize="17sp" android:textColor="@color/color_222222" android:id="@+id/txt_card_first_4_num" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="@dimen/dimen_10dp" android:layout_toRightOf="@+id/iv_bank_icon" android:layout_below="@+id/txt_card_name" app:fontType="2"/>
            <ImageView android:id="@+id/iv_dot1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="@dimen/dimen_16dp" android:src="@drawable/ic_card_encrypt" android:layout_toRightOf="@+id/txt_card_first_4_num" android:layout_below="@+id/txt_card_name"/>
            <ImageView android:id="@+id/iv_dot2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_16dp" android:layout_marginTop="@dimen/dimen_16dp" android:src="@drawable/ic_card_encrypt" android:layout_toRightOf="@+id/iv_dot1" android:layout_below="@+id/txt_card_name"/>
            <com.paytm.utility.RoboTextView android:textSize="17sp" android:textColor="@color/color_222222" android:id="@+id/txt_card_last_4_num" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_16dp" android:layout_marginTop="@dimen/dimen_10dp" android:layout_toRightOf="@+id/iv_dot2" android:layout_below="@+id/txt_card_name" app:fontType="2"/>
            <com.paytm.utility.RoboTextView android:textSize="12sp" android:textStyle="normal" android:textColor="#26d07c" android:id="@+id/visa_enabled_msg" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="@dimen/dimen_8dp" android:text="@string/visa_oc_enabled" android:layout_toRightOf="@+id/iv_bank_icon" android:layout_below="@+id/txt_card_first_4_num" android:lineSpacingExtra="4sp" android:fontFamily="sans-serif" app:fontType="2"/>
        </RelativeLayout>
        <ImageView android:id="@+id/saved_card_remove_menu" android:padding="@dimen/dimen_6dp" android:visibility="gone" android:layout_width="@dimen/dimen_24dp" android:layout_height="@dimen/dimen_24dp" android:src="@drawable/remove_cart_item" android:layout_alignParentRight="true"/>
        <View android:background="@color/separators" android:visibility="gone" android:layout_width="match_parent" android:layout_height="8dp" android:layout_below="@+id/lyt_outer_container"/>
    </RelativeLayout>
</net.one97.paytm.upi.util.SwipeRevealLayout>
