<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <ImageView android:id="@+id/events_book_time_radio_button_item_imageview" android:paddingTop="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginRight="16dp" android:src="@drawable/events_radio_button_unselected" android:drawablePadding="5dp"/>
        <LinearLayout android:orientation="vertical" android:paddingTop="4dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:textSize="12sp" android:id="@+id/events_time_name_textview" android:layout_width="wrap_content" android:layout_height="wrap_content" app:fontType="3"/>
                <TextView android:textSize="12sp" android:textColor="@color/color_E24913" android:id="@+id/events_time_soldout_textview" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:text="@string/events_sold_out" app:fontType="2"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="24dp"/>
</LinearLayout>
