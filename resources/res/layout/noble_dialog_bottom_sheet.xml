<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent" app:behavior_hideable="true">
    <ScrollView android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/cart_16sp" android:textColor="@color/black" android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:id="@+id/paytm_noble" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_26dp" android:layout_marginBottom="@dimen/dimen_22dp" android:text="@string/paytm_noble" android:fontFamily="@string/font_family_roboto_medium"/>
            <com.android.volley.toolbox.NetworkImageView android:id="@+id/parent_image_view" android:layout_width="match_parent" android:layout_height="@dimen/wallet_150_dp" android:src="@drawable/dialog_no_internet_image"/>
            <TextView android:textSize="@dimen/wallet_13_sp" android:textColor="@color/greyish_brown" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/description_noble" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/wallet_18_dp" android:layout_marginRight="@dimen/wallet_18_dp"/>
            <View android:layout_gravity="center" android:background="@color/white_two" android:layout_width="@dimen/dimen_14dp" android:layout_height="@dimen/dimen_2dp" android:layout_marginTop="@dimen/dimen_14dp" android:layout_marginBottom="@dimen/dimen_14dp"/>
            <TextView android:textSize="@dimen/wallet_13_sp" android:textColor="@color/greyish_brown" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/sub_header_noble" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/wallet_18_dp" android:layout_marginRight="@dimen/wallet_18_dp"/>
            <RelativeLayout android:id="@+id/contribute_layout_success" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/sub_header_noble">
                <TextView android:textSize="@dimen/wallet_14sp" android:textColor="@color/black_balance" android:gravity="center" android:id="@+id/noble_success" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/wallet_22_dp" android:text="@string/success_amount" android:drawableLeft="@drawable/success_nobel" android:layout_below="@+id/divider_noble" android:layout_centerHorizontal="true" android:fontFamily="@string/font_family_roboto_medium"/>
                <TextView android:textSize="@dimen/wallet_17sp" android:textColor="@color/brownish_grey" android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/wallet_11_dp" android:layout_marginBottom="@dimen/wallet_34_dp" android:text="@string/thanks_valued" android:layout_below="@+id/noble_success" android:fontFamily="@string/font_family_roboto_medium"/>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/contribute_layout" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/sub_header_noble">
                <TextView android:textSize="@dimen/cart_16sp" android:textColor="@color/black" android:layout_gravity="center_horizontal" android:id="@+id/noble_contribute" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_14dp" android:text="@string/select_amount" android:layout_centerHorizontal="true" android:fontFamily="@string/font_family_roboto_medium"/>
                <androidx.recyclerview.widget.RecyclerView android:layout_gravity="center_horizontal" android:id="@+id/recycler_slabs" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_14dp" android:layout_marginBottom="@dimen/dimen_24dp" android:layout_below="@+id/noble_contribute" android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
    <Button android:textSize="@dimen/wallet_17_sp" android:textStyle="bold" android:textColor="@color/white" android:gravity="center" android:id="@+id/id_proceed_to_pay" android:background="@color/paytm_blue" android:focusable="true" android:visibility="invisible" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/proceed_to_pay" android:layout_alignParentBottom="true"/>
</RelativeLayout>
