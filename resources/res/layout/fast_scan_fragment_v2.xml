<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/fastscan_parent" android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/capture_layout" android:background="#000000" android:layout_width="match_parent" android:layout_height="match_parent" android:animateLayoutChanges="true">
        <SurfaceView android:layout_gravity="center" android:id="@+id/qrCodeSurfaceView" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent"/>
        <RelativeLayout android:id="@+id/scan_align_rect" android:background="@drawable/scan_blue_rect" android:layout_width="@dimen/dimen_195dp" android:layout_height="@dimen/dimen_195dp" android:layout_centerInParent="true">
            <net.one97.paytm.wallet.newdesign.fastscan.FastScan.ScanAnimationView android:id="@+id/lineAnimationImageView" android:layout_width="match_parent" android:layout_height="60dp" android:layout_margin="2dp" android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <View android:background="@color/qr_scan_overlay" android:layout_width="match_parent" android:layout_height="0dp" android:layout_above="@+id/scan_align_rect" android:layout_alignParentTop="true"/>
        <View android:background="@color/qr_scan_overlay" android:layout_width="match_parent" android:layout_height="0dp" android:layout_below="@+id/scan_align_rect" android:layout_alignParentBottom="true"/>
        <View android:background="@color/qr_scan_overlay" android:layout_width="match_parent" android:layout_height="0dp" android:layout_alignTop="@+id/scan_align_rect" android:layout_alignBottom="@+id/scan_align_rect" android:layout_toStartOf="@+id/scan_align_rect" android:layout_alignParentStart="true"/>
        <View android:background="@color/qr_scan_overlay" android:layout_width="match_parent" android:layout_height="0dp" android:layout_alignTop="@+id/scan_align_rect" android:layout_alignBottom="@+id/scan_align_rect" android:layout_toEndOf="@+id/scan_align_rect" android:layout_alignParentEnd="true"/>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_28dp" android:paddingStart="@dimen/dimen_8dp" android:paddingEnd="@dimen/dimen_8dp">
            <androidx.appcompat.widget.AppCompatImageView android:id="@+id/back_arrow_iv" android:layout_width="@dimen/dimen_24dp" android:layout_height="@dimen/dimen_24dp" android:layout_marginStart="@dimen/dimen_16dp" android:layout_alignParentStart="true" app:srcCompat="@drawable/scan_cross"/>
            <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="#ffffff" android:gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/scan_any_qr_code" android:shadowColor="#cc000000" android:shadowDy="1" android:shadowRadius="2" android:layout_centerInParent="true" android:fontFamily="sans-serif"/>
        </RelativeLayout>
        <com.airbnb.lottie.LottieAnimationView android:layout_gravity="center" android:id="@+id/walletLoader" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="30dp" android:layout_centerInParent="true" app:amount="5" app:animationDirectionbundle="-1" app:circleSize="15" app:duration="@android:integer/config_mediumAnimTime" app:endColor="@color/light_blue_A400" app:startColor="@color/light_blue_A700"/>
        <TextView android:textSize="13sp" android:textStyle="normal" android:textColor="#ffad00" android:gravity="center_horizontal" android:id="@+id/alignQrAlert" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:text="@string/align_qr_code_alert" android:shadowColor="#cc000000" android:shadowDy="2" android:shadowRadius="3" android:layout_below="@+id/scan_align_rect" android:layout_centerHorizontal="true" android:lineSpacingExtra="1sp" android:fontFamily="sans-serif" android:letterSpacing="0.04"/>
        <LinearLayout android:id="@+id/lyt_show_payment_code" android:background="@drawable/rounded_corner_grey_16dp" android:paddingTop="@dimen/dimen_8dp" android:paddingBottom="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dimen_45dp" android:layout_alignParentBottom="true" android:layout_centerInParent="true" android:paddingStart="@dimen/dimen_19dp" android:paddingEnd="@dimen/dimen_19dp">
            <androidx.appcompat.widget.AppCompatTextView android:textSize="14sp" android:textStyle="normal" android:textColor="#00b9f5" android:gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/show_payment_code" android:lineSpacingExtra="1sp" android:fontFamily="sans-serif"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/lyt_side_buttons" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginEnd="@dimen/dimen_16dp" android:layout_alignParentEnd="true">
            <RelativeLayout android:id="@+id/toggle_torch_iv" android:layout_width="@dimen/dimen_40dp" android:layout_height="@dimen/dimen_40dp">
                <androidx.appcompat.widget.AppCompatImageView android:id="@+id/torch_off_iv" android:visibility="visible" android:layout_width="@dimen/dimen_32dp" android:layout_height="@dimen/dimen_32dp" android:layout_centerInParent="true" app:srcCompat="@drawable/ic_flashlight_off"/>
                <androidx.appcompat.widget.AppCompatImageView android:id="@+id/torch_on_iv" android:visibility="gone" android:layout_width="@dimen/dimen_40dp" android:layout_height="@dimen/dimen_40dp" android:layout_centerInParent="true" android:layout_alignParentEnd="true" app:srcCompat="@drawable/ic_flashlight_on"/>
            </RelativeLayout>
            <androidx.appcompat.widget.AppCompatImageView android:layout_gravity="center" android:id="@+id/galley_scan" android:layout_width="@dimen/dimen_32dp" android:layout_height="@dimen/dimen_32dp" android:layout_marginTop="@dimen/dimen_31dp" app:srcCompat="@drawable/ic_gallery_scan"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout android:layout_gravity="center" android:id="@+id/capturePermissionDeniedLayout" android:background="#fafafa" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
        <androidx.appcompat.widget.AppCompatImageView android:id="@+id/lyt_camera_permission_close" android:layout_width="@dimen/dimen_24dp" android:layout_height="@dimen/dimen_24dp" android:layout_marginTop="@dimen/dimen_34dp" android:layout_marginStart="@dimen/dimen_16dp" app:srcCompat="@drawable/ic_scanner_enable_camera_close"/>
        <androidx.appcompat.widget.AppCompatImageView android:id="@+id/image" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="75dp" android:layout_centerHorizontal="true" android:contentDescription="TODO" app:srcCompat="@drawable/ic_scanner_camera_access"/>
        <androidx.appcompat.widget.AppCompatTextView android:textSize="19sp" android:textStyle="bold" android:textColor="#1d252d" android:id="@+id/camera_access" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_8dp" android:text="@string/enable_camera_access" android:layout_below="@+id/image" android:layout_centerHorizontal="true" android:fontFamily="sans-serif"/>
        <androidx.appcompat.widget.AppCompatTextView android:textSize="13.5sp" android:textStyle="normal" android:textColor="#1d252d" android:gravity="center_horizontal" android:id="@+id/empty" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_12dp" android:text="@string/to_make_a_faster_payment_please_enable_your_camera_permission_to_start_scanning_any_qr_code" android:layout_below="@+id/camera_access" android:layout_centerHorizontal="true" android:lineSpacingExtra="6sp" android:fontFamily="sans-serif" android:layout_marginStart="@dimen/dimen_21dp" android:layout_marginEnd="@dimen/dimen_21dp"/>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/captureEnableCameraButton" android:background="@drawable/pay_button_rounded_corners" android:layout_width="203dp" android:layout_height="@dimen/dimen_48dp" android:layout_marginTop="@dimen/dimen_16dp" android:layout_below="@+id/empty" android:layout_centerHorizontal="true">
            <androidx.appcompat.widget.AppCompatImageView android:layout_width="@dimen/dimen_16dp" android:layout_height="@dimen/dimen_16dp" android:layout_marginStart="@dimen/dimen_25dp" app:srcCompat="@drawable/ic_enable_camera_icon"/>
            <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="#ffffff" android:gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/enable_camera" android:fontFamily="sans-serif-medium" android:layout_marginStart="@dimen/dimen_13dp" android:letterSpacing="0.04"/>
        </LinearLayout>
        <LinearLayout android:id="@+id/lyt_permission_show_payment_code" android:background="@drawable/rounded_corner_f5f8fa_with_stroke_16dp" android:paddingTop="@dimen/dimen_8dp" android:paddingBottom="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dimen_40dp" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" android:paddingStart="@dimen/dimen_19dp" android:paddingEnd="@dimen/dimen_19dp">
            <androidx.appcompat.widget.AppCompatTextView android:textSize="13.5sp" android:textStyle="normal" android:textColor="#00b9f5" android:gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/show_payment_code" android:lineSpacingExtra="1sp" android:fontFamily="sans-serif"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/lyt_zoom_bar" android:background="@drawable/rounded_corner_grey_16dp" android:paddingTop="@dimen/dimen_10dp" android:paddingBottom="@dimen/dimen_10dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true" android:layout_marginEnd="@dimen/dimen_15dp" android:layout_alignParentEnd="true">
        <androidx.appcompat.widget.AppCompatImageView android:layout_width="wrap_content" android:layout_height="wrap_content" app:srcCompat="@drawable/ic_zoom_in"/>
        <net.one97.paytm.common.widget.VerticalSeekBar android:theme="@style/SeekBarColor" android:layout_gravity="center_horizontal" android:id="@+id/zoom_seek_bar" android:clickable="false" android:layout_width="wrap_content" android:layout_height="180dp"/>
        <androidx.appcompat.widget.AppCompatImageView android:layout_width="wrap_content" android:layout_height="wrap_content" app:srcCompat="@drawable/ic_zoom_out"/>
    </LinearLayout>
    <View android:id="@+id/viewScreenCover" android:background="@color/black" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent"/>
</RelativeLayout>
