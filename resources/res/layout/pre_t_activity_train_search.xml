<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/main_container" android:layout_width="match_parent" android:layout_height="match_parent">
    <include android:gravity="top" android:id="@+id/toolbar" android:layout_width="match_parent" android:layout_height="wrap_content" layout="@layout/pre_t_train_tool_bar_layout"/>
    <View android:id="@+id/view_separator_bottom" android:background="@color/flight_line_color" android:layout_width="match_parent" android:layout_height="1dp" android:layout_below="@+id/toolbar"/>
    <include android:id="@+id/promo_container" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/view_separator_bottom" layout="@layout/promotion_textview"/>
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/quick_book_list" android:background="@color/color_f9f9f9" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/promo_container"/>
    <include android:id="@+id/color_code_info" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/dimen_5dp" android:layout_below="@+id/quick_book_list" layout="@layout/pre_t_color_code_train_layout"/>
    <FrameLayout android:id="@+id/view_frame_train_search" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/lyt_bottom_tab" android:layout_below="@+id/color_code_info"/>
    <ProgressBar android:id="@+id/progressBar_trainlist" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true" android:layout_centerVertical="true"/>
    <View android:background="@color/train_tab_divider" android:visibility="gone" android:layout_width="match_parent" android:layout_height="1dp" android:layout_above="@+id/lyt_bottom_tab"/>
    <RelativeLayout android:id="@+id/ac_trains_hidden_lyt" android:background="@color/color_f2f7fc" android:paddingLeft="@dimen/dimen_15dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="40dp" android:layout_above="@+id/lyt_bottom_tab">
        <ImageView android:layout_gravity="center_vertical" android:id="@+id/bulb_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_7dp" android:src="@drawable/pre_t_train_bulb_bigger_image"/>
        <com.paytm.utility.RoboTextView android:textSize="10sp" android:textStyle="normal" android:textColor="@color/action_msg_color" android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@+id/train_filter_popup_txt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_8dp" android:text="@string/opted_for_non_ac" android:layout_toLeftOf="@+id/close_ac_trains_hidden_icon" android:layout_toRightOf="@+id/bulb_icon" android:layout_centerVertical="true"/>
        <RelativeLayout android:id="@+id/close_ac_trains_hidden_icon" android:layout_width="@dimen/dimen_25dp" android:layout_height="@dimen/dimen_30dp" android:layout_marginTop="@dimen/dimen_4dp" android:layout_marginRight="@dimen/dimen_7dp" android:layout_alignParentRight="true">
            <ImageView android:background="@drawable/pre_t_train_filter_close" android:paddingBottom="@dimen/dimen_7dp" android:layout_width="@dimen/dimen_10dp" android:layout_height="@dimen/dimen_10dp" android:layout_centerInParent="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <include android:id="@+id/lyt_bottom_tab" android:visibility="visible" android:layout_width="match_parent" android:layout_height="@dimen/dimen_55dp" android:layout_alignParentBottom="true" layout="@layout/pre_t_lyt_train_bottom_tab"/>
    <FrameLayout android:id="@+id/booking_layout" android:background="@color/transparent" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/toolbar"/>
    <FrameLayout android:gravity="top" android:id="@+id/error_layout" android:background="@color/color_ff585d" android:focusableInTouchMode="true" android:visibility="gone" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="@dimen/dimen_15sp" android:textStyle="normal" android:textColor="@color/white" android:layout_gravity="left" android:id="@+id/action_bar_error_txt" android:padding="@dimen/dimen_10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:fontFamily="sans-serif" android:layout_marginStart="@dimen/dimen_20dp" android:layout_marginEnd="@dimen/dimen_60dp"/>
        <ImageView android:layout_gravity="right|center_vertical|center_horizontal|center" android:id="@+id/error_close_icon" android:layout_width="@dimen/dimen_15dp" android:layout_height="@dimen/dimen_15dp" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginRight="@dimen/dimen_20dp" android:tint="@color/white"/>
    </FrameLayout>
    <FrameLayout android:id="@+id/clickable_layout" android:background="#9b9b9b" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/booking_layout" android:alpha="0.7"/>
</RelativeLayout>
