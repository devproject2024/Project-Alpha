<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:background="#f3f7f8" android:paddingTop="28dp" android:paddingBottom="28dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="21dp">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatImageView android:id="@+id/back_arrow_imv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/pass_back_arrow" android:paddingEnd="20dp" android:layout_alignParentStart="true"/>
            <androidx.appcompat.widget.AppCompatImageView android:id="@+id/share_imv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/pass_sahre_filled" android:paddingStart="20dp" android:paddingEnd="21dp" android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <TextView android:textSize="21sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/status_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="35dp" android:text="@string/money_added_successful" android:fontFamily="sans-serif-medium"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/amount_ll" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_below="@+id/status_tv">
            <TextView android:textSize="36sp" android:textStyle="normal" android:textColor="#222222" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/rupee_symbol" android:fontFamily="sans-serif-light"/>
            <TextView android:textSize="36sp" android:textStyle="bold" android:textColor="#222222" android:id="@+id/amount_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:fontFamily="sans-serif" android:layout_marginStart="5dp"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_below="@+id/amount_ll">
            <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#666666" android:id="@+id/date_time_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="12:30 pm, 20 Mar 2018" android:fontFamily="sans-serif"/>
            <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#666666" android:id="@+id/deviderClosingBalance" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_2dp" android:text="|" android:fontFamily="sans-serif" android:letterSpacing="0.09"/>
            <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#666666" android:id="@+id/tvClosingBalance" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_6dp" android:text="Closing Balance: â‚¹6,150" android:fontFamily="sans-serif" android:letterSpacing="0.09"/>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatImageView android:id="@+id/status_icon" android:layout_width="40dp" android:layout_height="40dp" android:layout_alignBottom="@+id/amount_ll" android:layout_marginEnd="21dp" android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <ScrollView android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <RelativeLayout android:id="@+id/descSubHeaderLayout" android:paddingLeft="20dp" android:paddingTop="30dp" android:paddingRight="20dp" android:paddingBottom="30dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatImageView android:id="@+id/imv1" android:padding="10dp" android:layout_width="50dp" android:layout_height="50dp" android:layout_centerVertical="true" android:layout_alignParentEnd="true"/>
                <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginEnd="10dp" android:layout_toStartOf="@+id/imv1">
                    <TextView android:textSize="11sp" android:textStyle="normal" android:textColor="#999999" android:id="@+id/title1_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/money_added_in" android:textAllCaps="true" android:fontFamily="sans-serif-medium" android:letterSpacing="0.09"/>
                    <TextView android:textSize="17sp" android:textStyle="bold" android:textColor="#222222" android:ellipsize="end" android:id="@+id/txt1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="9dp" android:fontFamily="sans-serif"/>
                    <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#222222" android:ellipsize="end" android:gravity="left" android:id="@+id/txt3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="14dp" android:lineSpacingExtra="25sp" android:fontFamily="sans-serif-light"/>
                </LinearLayout>
            </RelativeLayout>
            <View android:id="@+id/seprator_view" android:background="#f3f7f8" android:layout_width="match_parent" android:layout_height="1dp" android:layout_below="@+id/descSubHeaderLayout" android:layout_marginStart="20dp" android:layout_marginEnd="20dp"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/rl_paytmwallet_info" android:paddingLeft="20dp" android:paddingTop="30dp" android:paddingRight="20dp" android:paddingBottom="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/seprator_view">
                <TextView android:textSize="11sp" android:textStyle="normal" android:textColor="#999999" android:id="@+id/title2_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/sent_from" android:textAllCaps="true" android:fontFamily="sans-serif-medium" android:letterSpacing="0.09"/>
                <LinearLayout android:orientation="vertical" android:id="@+id/extendedTxnInfoLayout2" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="8dp"/>
                <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/extendedTxnInfoLayout1" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/title2_tv">
                    <TextView android:textSize="17sp" android:textStyle="bold" android:textColor="#222222" android:ellipsize="end" android:id="@+id/extendedInfoText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="9dp" android:fontFamily="sans-serif" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0"/>
                    <androidx.appcompat.widget.AppCompatImageView android:id="@+id/extendedInfoIcon" android:padding="10dp" android:layout_width="50dp" android:layout_height="50dp" android:layout_centerVertical="true" android:layout_alignParentEnd="true" app:layout_constraintBottom_toBottomOf="@+id/extendedInfoText" app:layout_constraintEnd_toEndOf="0" app:layout_constraintTop_toTopOf="@+id/extendedInfoText"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#222222" android:ellipsize="end" android:id="@+id/txt7" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/extendedTxnInfoLayout1" android:lineSpacingExtra="25sp" android:fontFamily="sans-serif-light"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/bottom_btn_ll" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/rl_paytmwallet_info">
                <View android:id="@+id/bottom_view" android:background="#f3f7f8" android:visibility="visible" android:layout_width="match_parent" android:layout_height="10dp"/>
                <RelativeLayout android:id="@+id/need_help_rl" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <ImageView android:id="@+id/icon1" android:padding="20dp" android:layout_width="60dp" android:layout_height="wrap_content" android:src="@drawable/pass_help_24_7" android:layout_centerVertical="true"/>
                    <TextView android:textSize="15dp" android:textStyle="normal" android:textColor="#444444" android:id="@+id/need_help_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/need_help_text_re" android:layout_toRightOf="@+id/icon1" android:layout_centerVertical="true" android:lineSpacingExtra="-2sp" android:fontFamily="sans-serif"/>
                    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="20dp" android:src="@drawable/pass_arrow_forward_postcard" android:tint="#999999" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>
