<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/rv_train_details_container" android:background="@android:color/white" android:paddingLeft="@dimen/dimen_15dp" android:paddingTop="15dp" android:paddingRight="@dimen/dimen_15dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="16sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/review_iteneray_train_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Bangalore Exp (15032)" android:layout_alignParentLeft="true" android:fontFamily="sans-serif-medium"/>
        <LinearLayout android:gravity="center" android:id="@+id/txt_train_price_lyt" android:paddingLeft="@dimen/dimen_15dp" android:paddingTop="6dp" android:paddingRight="@dimen/dimen_15dp" android:paddingBottom="6dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true">
            <com.paytm.utility.RoboTextView android:textSize="11.5sp" android:textStyle="normal" android:gravity="center" android:layout_gravity="center" android:id="@+id/review_iteneray_train_status" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="PQWL - 9" android:singleLine="true" android:fontFamily="sans-serif"/>
        </LinearLayout>
        <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#9b9b9b" android:id="@+id/review_iteneray_train_class" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="Sleeper | General" android:layout_below="@+id/review_iteneray_train_name" android:layout_alignParentLeft="true" android:fontFamily="sans-serif-medium"/>
        <View android:background="@color/divider_color" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="10dp" android:layout_below="@+id/review_iteneray_train_class"/>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_17dp">
            <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true">
                <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/review_iteneray_train_source_date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:fontFamily="sans-serif"/>
                <TextView android:textSize="23sp" android:textStyle="normal" android:textColor="#222222" android:gravity="center_horizontal" android:id="@+id/review_iteneray_train_source_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:fontFamily="sans-serif"/>
                <TextView android:textSize="11sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/review_iteneray_train_source_brd_point" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:fontFamily="sans-serif"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/dest_lyt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true">
                <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#222222" android:layout_gravity="end" android:id="@+id/review_iteneray_train_destination_date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:fontFamily="sans-serif"/>
                <TextView android:textSize="23sp" android:textStyle="normal" android:textColor="#222222" android:gravity="center_horizontal" android:layout_gravity="end" android:id="@+id/review_iteneray_train_destination_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:fontFamily="sans-serif"/>
                <TextView android:textSize="11sp" android:textStyle="normal" android:textColor="#222222" android:layout_gravity="end" android:id="@+id/review_iteneray_train_destination_brd_point" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:fontFamily="sans-serif"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true">
                <TextView android:textSize="11sp" android:textStyle="normal" android:textColor="#979797" android:layout_gravity="center" android:id="@+id/review_iteneray_train_duration" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="24 hrs" android:fontFamily="sans-serif"/>
                <View android:layout_gravity="center" android:id="@+id/empty_div" android:background="#d7d7d7" android:layout_width="58dp" android:layout_height="1.5dp" android:layout_marginTop="6dp"/>
                <TextView android:textSize="11sp" android:textStyle="normal" android:textColor="#979797" android:gravity="center_horizontal" android:layout_gravity="center" android:id="@+id/num_of_stops" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:fontFamily="sans-serif"/>
            </LinearLayout>
            <View android:background="@color/divider_color" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="19dp" android:layout_below="@+id/dest_lyt"/>
        </RelativeLayout>
        <LinearLayout android:paddingTop="@dimen/dimen_11dp" android:paddingBottom="@dimen/dimen_11dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/traveller_detail_heading">
            <ImageView android:layout_width="@dimen/dimen_15dp" android:layout_height="@dimen/dimen_15dp" android:src="@drawable/pre_t_ic_exemetory_mark"/>
            <com.paytm.utility.RoboTextView android:textSize="10sp" android:textStyle="normal" android:textColor="@color/color_666666" android:id="@+id/seat_selection_alert" android:paddingLeft="10dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/select_seat_alert_message" android:fontFamily="sans-serif" app:fontType="2"/>
        </LinearLayout>
        <RelativeLayout android:paddingLeft="@dimen/dimen_15dp" android:paddingRight="@dimen/dimen_15dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp">
            <com.paytm.utility.RoboTextView android:textSize="12sp" android:textColor="@color/train_txt_gray" android:id="@+id/review_iteneray_train_boarding_point_txt" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/boarding_station" app:fontType="2"/>
            <com.paytm.utility.RoboTextView android:textSize="12sp" android:textColor="@android:color/black" android:id="@+id/review_iteneray_train_boarding_point" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:drawablePadding="10dp" android:layout_alignParentRight="true" app:fontType="2"/>
            <Spinner android:id="@+id/review_iteneray_boarding_point_spinner" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_toRightOf="@+id/review_iteneray_train_boarding_point_txt" android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <RelativeLayout android:paddingLeft="@dimen/dimen_15dp" android:paddingRight="@dimen/dimen_15dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:layout_marginBottom="10dp">
            <com.paytm.utility.RoboTextView android:textSize="12sp" android:textColor="@color/train_txt_gray" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/boarding_time" app:fontType="2"/>
            <com.paytm.utility.RoboTextView android:textSize="12sp" android:textColor="@android:color/black" android:id="@+id/review_iteneray_train_boarding_time" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:drawablePadding="10dp" android:layout_alignParentRight="true" app:fontType="2"/>
        </RelativeLayout>
        <com.paytm.utility.RoboTextView android:textSize="12sp" android:textColor="@color/train_itenarary_city_name" android:ellipsize="end" android:paddingLeft="@dimen/dimen_15dp" android:paddingRight="@dimen/dimen_15dp" android:paddingBottom="@dimen/dimen_10dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" app:fontType="1"/>
    </LinearLayout>
</LinearLayout>
