<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:id="@+id/card_view_event" android:padding="0dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="14dp" android:layout_marginTop="14dp" android:layout_marginRight="14dp">
        <LinearLayout android:orientation="vertical" android:id="@+id/container_linear_lyt" android:background="@drawable/rounded_corner_ampark" android:padding="0dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="0dp" android:layout_centerHorizontal="true">
            <ImageView android:id="@+id/park_thumb_nail" android:layout_width="match_parent" android:layout_height="@dimen/list_detail_image_height_size" android:layout_marginLeft="0.5dp" android:layout_marginRight="0.5dp" android:scaleType="centerCrop"/>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="@color/color_000000" android:ellipsize="end" android:id="@+id/park_name" android:paddingLeft="10dp" android:paddingTop="10dp" android:paddingRight="12dp" android:paddingBottom="12dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="110dp" android:maxLines="2" android:includeFontPadding="false" app:fontType="3"/>
                <com.paytm.utility.RoboTextView android:textSize="12sp" android:textColor="@color/color_9c9c9c" android:ellipsize="end" android:gravity="bottom" android:id="@+id/park_address" android:paddingLeft="12dp" android:paddingTop="12dp" android:paddingRight="12dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="110dp" android:maxLines="2" android:includeFontPadding="false" android:layout_below="@+id/park_name" android:layout_alignParentLeft="true" android:layout_alignParentBottom="true" app:fontType="3"/>
                <RelativeLayout android:id="@+id/divider_view" android:background="@color/color_eeeeee" android:layout_width="1dp" android:layout_height="70dp" android:layout_marginRight="110dp" android:layout_alignParentRight="true" android:layout_centerInParent="true"/>
                <RelativeLayout android:layout_width="110dp" android:layout_height="match_parent" android:layout_alignParentRight="true" android:layout_centerVertical="true">
                    <com.paytm.utility.RoboTextView android:textSize="12sp" android:textColor="@color/color_000000" android:ellipsize="end" android:gravity="center" android:id="@+id/park_price" android:paddingRight="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true" android:layout_centerInParent="true" app:fontType="4"/>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
