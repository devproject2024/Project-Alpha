<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/color_fafafa" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:id="@+id/root_search_lyt" android:background="#ffffff" android:paddingTop="@dimen/dimen_9dp" android:paddingRight="@dimen/dimen_10dp" android:paddingBottom="@dimen/dimen_9dp" android:layout_width="match_parent" android:layout_height="55dp">
            <ImageView android:id="@+id/back_arrow" android:background="@android:color/transparent" android:paddingLeft="5dp" android:paddingRight="15dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/back_arrow" android:layout_alignParentLeft="true"/>
            <RelativeLayout android:id="@+id/event_search_icon_lyt" android:background="@drawable/park_bg_rounded_corner_movie_search" android:paddingLeft="@dimen/dimen_8dp" android:paddingTop="@dimen/dimen_5dp" android:paddingBottom="@dimen/dimen_5dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_toLeftOf="@+id/locaion_layout" android:layout_toRightOf="@+id/back_arrow" android:layout_centerVertical="true">
                <ImageView android:id="@+id/search_icon" android:background="@android:color/transparent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/park_ic_icon_search" android:layout_centerVertical="true" android:foregroundGravity="center_vertical"/>
                <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="#999999" android:ellipsize="end" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/event_search_txt" android:paddingRight="@dimen/dimen_20dp" android:paddingBottom="@dimen/dimen_1dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_5dp" android:text="@string/event_home_search_hint" android:lines="1" android:layout_toRightOf="@+id/search_icon" android:layout_centerVertical="true"/>
            </RelativeLayout>
            <LinearLayout android:orientation="horizontal" android:id="@+id/locaion_layout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_10dp" android:layout_alignParentRight="true" android:layout_centerVertical="true">
                <ImageView android:layout_gravity="center_vertical" android:id="@+id/iv_sort" android:background="@drawable/ripple_grey_white_bkgrnd" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:src="@drawable/park_sort"/>
                <LinearLayout android:orientation="horizontal" android:id="@+id/lineat_city_location" android:background="@drawable/ripple_grey_white_bkgrnd" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true">
                    <ImageView android:layout_gravity="right|center_vertical|center_horizontal|center" android:id="@+id/location_img" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="5dp" android:src="@drawable/events_location_icon" android:layout_centerVertical="true"/>
                    <TextView android:textSize="14sp" android:textColor="@color/color_ff002e6e" android:ellipsize="end" android:gravity="right" android:layout_gravity="right|center_vertical|center_horizontal|center" android:id="@+id/txtview_event_location" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxWidth="80dp" android:maxLines="1" android:layout_toRightOf="@+id/location_img" android:layout_centerVertical="true"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/recycler_parent_container" android:background="@color/color_fafafa" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/root_search_lyt"/>
        <RelativeLayout android:id="@+id/no_park" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/root_search_lyt">
            <com.paytm.utility.RoboTextView android:textSize="17sp" android:textColor="@android:color/black" android:gravity="center" android:layout_gravity="center" android:id="@+id/no_movie_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:text="@string/no_park_title" android:layout_centerInParent="true" app:fontType="2"/>
            <com.paytm.utility.RoboTextView android:textSize="15sp" android:textColor="@android:color/black" android:gravity="center" android:layout_gravity="center" android:id="@+id/no_park_desc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:text="@string/no_parks_desc" android:layout_below="@+id/no_movie_title" android:layout_centerHorizontal="true" app:fontType="1"/>
        </RelativeLayout>
    </RelativeLayout>
    <include layout="@layout/park_no_network_layout"/>
    <RelativeLayout android:id="@+id/events_home_fragment_progressbar" android:background="@color/color_00000000" android:visibility="gone" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent">
        <ProgressBar android:layout_width="@dimen/dimen_50dp" android:layout_height="@dimen/dimen_50dp" android:indeterminateDrawable="@drawable/amp_progress_large_holo" android:layout_centerInParent="true"/>
    </RelativeLayout>
    <ImageView android:id="@+id/back_to_top" android:background="@drawable/circle_transy_filled" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="20dp" android:src="@drawable/ic_scroll_arrow_up" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>
</RelativeLayout>
