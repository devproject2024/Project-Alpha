<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/parent" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:id="@+id/iv_motif" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/pb_ic_motif_classic" android:layout_alignParentRight="true"/>
    <ImageView android:id="@+id/iv_payment_logo" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="25dp" android:src="@drawable/pb_ic_payments_bank_logo" android:layout_centerHorizontal="true"/>
    <ImageView android:id="@+id/iv_back_arrow" android:background="?android:attr/selectableItemBackground" android:paddingTop="8dp" android:paddingRight="8dp" android:paddingBottom="8dp" android:layout_width="@dimen/dimen_32dp" android:layout_height="@dimen/dimen_32dp" android:layout_marginLeft="20dp" android:layout_marginTop="24dp" android:src="@drawable/pb_ic_back"/>
    <TextView android:textSize="13sp" android:textColor="#444444" android:gravity="center_horizontal" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/pb_fixed_deposit" android:layout_below="@+id/iv_payment_logo" android:layout_centerInParent="true" android:textAllCaps="true" android:letterSpacing="0.23"/>
    <ScrollView android:id="@+id/scroll_view" android:layout_width="match_parent" android:layout_height="wrap_content" android:fillViewport="true" android:layout_below="@+id/iv_motif">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#444444" android:id="@+id/txt_available_deposit" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_24dp" android:layout_marginRight="@dimen/dimen_24dp" android:text="@string/available_deposit" android:lineSpacingExtra="6sp" android:fontFamily="sans-serif" android:layout_marginStart="@dimen/dimen_24dp" android:layout_marginEnd="@dimen/dimen_24dp"/>
            <TextView android:textSize="36sp" android:textStyle="normal" android:textColor="#000000" android:id="@+id/tv_available_deposit" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_24dp" android:layout_marginRight="@dimen/dimen_24dp" android:layout_below="@+id/txt_available_deposit" android:fontFamily="sans-serif" android:layout_marginStart="@dimen/dimen_24dp" android:layout_marginEnd="@dimen/dimen_24dp"/>
            <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#00aced" android:gravity="end" android:id="@+id/tv_interest_table_link" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_24dp" android:layout_marginRight="@dimen/dimen_24dp" android:text="@string/interest_table" android:layout_below="@+id/tv_available_deposit" android:lineSpacingExtra="8sp" android:fontFamily="sans-serif-medium" android:layout_marginStart="@dimen/dimen_24dp" android:layout_marginEnd="@dimen/dimen_24dp"/>
            <Button android:textSize="@dimen/dimen_17sp" android:textColor="@color/white" android:id="@+id/btn_create_fd" android:background="@drawable/bg_btn_blue" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_24dp" android:layout_marginTop="@dimen/dimen_15dp" android:layout_marginRight="@dimen/dimen_24dp" android:minHeight="@dimen/dimen_56dp" android:text="@string/create_slfd" android:layout_below="@+id/tv_interest_table_link" android:textAllCaps="false" android:fontFamily="@string/font_family_roboto_medium" android:layout_marginStart="@dimen/dimen_24dp" android:layout_marginEnd="@dimen/dimen_24dp"/>
            <View android:id="@+id/view_separator" android:background="@drawable/pb_bottom_border_debit_card" android:layout_width="match_parent" android:layout_height="10dp" android:layout_marginTop="40dp" android:layout_marginBottom="20dp" android:layout_below="@+id/btn_create_fd"/>
            <FrameLayout android:id="@+id/fragment_container_benefits" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/view_separator"/>
        </RelativeLayout>
    </ScrollView>
    <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#506d85" android:gravity="center" android:id="@+id/v_ftr_2" android:background="#f5f8fa" android:layout_width="match_parent" android:layout_height="40dp" android:text="@string/pb_in_collabration_with_induslnd" android:layout_alignParentBottom="true" android:fontFamily="sans-serif"/>
    <ProgressBar android:id="@+id/pb_progress" android:background="@color/wallet_progress_bg" android:focusable="true" android:visibility="gone" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent" android:indeterminateDrawable="@drawable/pb_pb_paytm_progress"/>
</RelativeLayout>
