<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/main_layout" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:id="@+id/charges_lyt" android:background="@color/color_fafbfb" android:paddingTop="24dp" android:paddingBottom="25dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_17sp" android:textColor="@color/color_222222" android:id="@+id/atm_card_issuaces_charges_tv" android:layout_width="240dp" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:text="@string/pb_pdc_atm_card_issuance_charges" app:fontType="4"/>
            <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_12sp" android:textColor="@color/blue" android:id="@+id/atm_card_charges_tv" android:layout_width="240dp" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="5dp" android:text="@string/pb_pdc_rates_and_charges" android:layout_below="@+id/atm_card_issuaces_charges_tv" app:fontType="3"/>
            <com.paytm.utility.RoboTextView android:textSize="17sp" android:textColor="@color/color_222222" android:gravity="center" android:id="@+id/atm_price" android:background="@drawable/pb_bg_round_pdc_amount_buy_atm_card" android:paddingLeft="@dimen/dimen_17dp" android:paddingTop="@dimen/dimen_2dp" android:paddingRight="@dimen/dimen_17dp" android:paddingBottom="@dimen/dimen_2dp" android:layout_width="wrap_content" android:layout_height="29dp" android:layout_marginRight="20dp" android:layout_alignTop="@+id/atm_card_issuaces_charges_tv" android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <TextView android:textSize="15sp" android:textColor="#222222" android:id="@+id/info_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="25dp" android:layout_marginRight="20dp" android:text="@string/pb_pdc_deduction_msg" android:layout_below="@+id/charges_lyt" android:lineSpacingExtra="7sp"/>
        <TextView android:textSize="12sp" android:textColor="#ffa400" android:id="@+id/insuff_bal_static_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="8dp" android:layout_marginRight="2dp" android:text="@string/pb_pdc_insuff_balance_msg" android:layout_below="@+id/info_tv" android:lineSpacingExtra="5sp"/>
        <TextView android:textSize="12sp" android:textColor="#ffa400" android:id="@+id/insuff_bal_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/insuff_bal_static_tv" android:layout_alignTop="@+id/insuff_bal_static_tv" android:lineSpacingExtra="5sp"/>
        <View android:id="@+id/line_v" android:background="@color/color_e2ebee" android:layout_width="25dp" android:layout_height="3dp" android:layout_marginLeft="20dp" android:layout_marginTop="20dp" android:layout_marginRight="20dp" android:layout_marginBottom="24dp" android:layout_below="@+id/insuff_bal_tv"/>
        <TextView android:textSize="12sp" android:textColor="#444444" android:id="@+id/tranfer_fund_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:text="@string/pb_pdc_transfer_fund_msg" android:layout_below="@+id/line_v" android:lineSpacingExtra="6sp"/>
        <TextView android:textSize="12sp" android:textColor="#00b9f5" android:id="@+id/view_details_tv" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="10dp" android:layout_marginRight="20dp" android:text="@string/pb_pdc_hide_details" android:layout_below="@+id/tranfer_fund_tv"/>
        <RelativeLayout android:id="@+id/fragment_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="@dimen/wallet_10_dp" android:layout_marginRight="20dp" android:layout_marginBottom="@dimen/wallet_10_dp" android:layout_below="@+id/view_details_tv">
            <RelativeLayout android:id="@+id/lyt_bank_detail" android:background="@drawable/pb_border_debit_card" android:layout_width="match_parent" android:layout_height="wrap_content">
                <ImageView android:id="@+id/iv_motif" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/pb_ic_motif_classic" android:layout_alignParentTop="true" android:layout_alignParentRight="true"/>
                <LinearLayout android:orientation="vertical" android:id="@+id/layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="15dp" android:layout_marginRight="10dp" android:layout_marginBottom="13dp">
                    <com.paytm.utility.RoboTextView android:textSize="11sp" android:textStyle="normal" android:textColor="@color/color_666666" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="14dp" android:text="@string/pb_uam_name" app:fontType="2"/>
                    <com.paytm.utility.RoboTextView android:textSize="12sp" android:textStyle="normal" android:textColor="@color/color_222222" android:id="@+id/name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" app:fontType="3"/>
                    <View android:background="@color/divider_color" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginTop="@dimen/dimen_9dp" android:layout_marginBottom="@dimen/dimen_9dp"/>
                    <com.paytm.utility.RoboTextView android:textSize="11sp" android:textStyle="normal" android:textColor="@color/color_666666" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/pb_uam_account_number" app:fontType="2"/>
                    <com.paytm.utility.RoboTextView android:textSize="12sp" android:textStyle="normal" android:textColor="@color/color_222222" android:id="@+id/acc_number" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" app:fontType="3"/>
                    <View android:background="@color/divider_color" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginTop="@dimen/dimen_9dp" android:layout_marginBottom="@dimen/dimen_9dp"/>
                    <com.paytm.utility.RoboTextView android:textSize="11sp" android:textStyle="normal" android:textColor="@color/color_666666" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/pb_uam_ifsc_code" app:fontType="2"/>
                    <com.paytm.utility.RoboTextView android:textSize="12sp" android:textStyle="normal" android:textColor="@color/color_222222" android:id="@+id/ifsc_code" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" app:fontType="3"/>
                </LinearLayout>
                <LinearLayout android:orientation="vertical" android:id="@+id/bottom_strip" android:background="@drawable/pb_bottom_border_debit_card" android:layout_width="match_parent" android:layout_height="14dp" android:layout_marginTop="13dp" android:layout_below="@+id/layout"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>
