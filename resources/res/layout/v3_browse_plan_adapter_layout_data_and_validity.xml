<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/color_ffffff" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="@dimen/dimen_20sp" android:textColor="@color/color_1d2f54" android:id="@+id/price_Text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_21dp" android:minWidth="@dimen/dimen_80dp" android:fontFamily="@string/font_family_roboto_regular" android:layout_marginStart="@dimen/dimen_16dp" android:layout_marginEnd="@dimen/dimen_10dp"/>
    <LinearLayout android:id="@+id/lyt_select" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_21dp" android:weightSum="3" android:layout_toRightOf="@+id/price_Text" android:layout_marginEnd="@dimen/dimen_16dp">
        <LinearLayout android:orientation="vertical" android:id="@+id/validityLL" android:layout_width="@dimen/dimen_0dp" android:layout_height="wrap_content" android:layout_weight="1.5" android:layout_marginEnd="@dimen/dimen_5dp">
            <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_11sp" android:textColor="@color/color_506d85" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/validity" android:textAllCaps="true" app:fontType="3"/>
            <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_14sp" android:textColor="@color/color_1d2f54" android:id="@+id/daysTv" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" app:fontType="3"/>
        </LinearLayout>
        <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_14sp" android:textColor="@color/color_1d2f54" android:id="@+id/talkTimeTv" android:visibility="gone" android:layout_width="@dimen/dimen_0dp" android:layout_height="wrap_content" android:layout_weight="3" app:fontType="2"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/dataLL" android:layout_width="@dimen/dimen_0dp" android:layout_height="wrap_content" android:layout_weight="1.5" android:layout_marginEnd="@dimen/dimen_5dp">
            <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_11sp" android:textColor="@color/color_506d85" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/data_title" android:textAllCaps="true" app:fontType="3"/>
            <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_14sp" android:textColor="@color/color_1d2f54" android:id="@+id/dataTv" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" app:fontType="3"/>
        </LinearLayout>
        <ImageView android:layout_gravity="right|center_vertical|center_horizontal|center|end" android:id="@+id/talkTimeRightIv" android:visibility="gone" android:layout_width="@dimen/dimen_16dp" android:layout_height="@dimen/dimen_16dp" android:rotation="270" android:layout_marginStart="@dimen/dimen_8dp" app:srcCompat="@drawable/ic_browse_plan_arrow"/>
    </LinearLayout>
    <RelativeLayout android:id="@+id/descriptionRL" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_12dp" android:layout_toRightOf="@+id/price_Text" android:layout_below="@+id/lyt_select" android:layout_marginEnd="@dimen/dimen_16dp">
        <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_12sp" android:textStyle="normal" android:textColor="@color/color_1d2f54" android:id="@+id/description" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/descRightArrowIv" android:layout_alignParentLeft="true" android:lineSpacingExtra="4sp" android:fontFamily="sans-serif"/>
        <TextView android:textSize="@dimen/dimen_12sp" android:textColor="@color/color_00aced" android:id="@+id/readMoreTv" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/read_more" android:layout_below="@+id/description" android:fontFamily="@string/font_family_roboto_regular"/>
        <ImageView android:layout_gravity="center_vertical" android:id="@+id/descRightArrowIv" android:layout_width="@dimen/dimen_16dp" android:layout_height="@dimen/dimen_16dp" android:layout_centerVertical="true" android:rotation="270" android:layout_marginStart="@dimen/dimen_8dp" android:layout_alignParentEnd="true" app:srcCompat="@drawable/ic_browse_plan_arrow"/>
    </RelativeLayout>
    <View android:id="@+id/divider" android:background="@color/color_dde5ed" android:layout_width="match_parent" android:layout_height="@dimen/dimen_1dp" android:layout_marginTop="@dimen/dimen_16dp" android:layout_below="@+id/descriptionRL"/>
</RelativeLayout>
