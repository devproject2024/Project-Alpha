<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/root" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar android:id="@+id/toolbar" android:background="?attr/colorPrimary" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="80dp" app:contentInsetStartWithNavigation="0dp" app:navigationIcon="@drawable/chat_ic_arrow_left_black">
        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="20sp" android:textColor="?attr/album.element.color" android:ellipsize="end" android:gravity="center" android:id="@+id/selected_album" android:layout_width="0dp" android:layout_height="?attr/actionBarSize" android:maxLines="2" android:drawableRight="@drawable/chat_icon_arrow_down" android:drawablePadding="5dp" android:layout_marginEnd="10dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toStartOf="@+id/btnCamera" app:layout_constraintHorizontal_bias="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0" app:layout_constraintWidth_default="1"/>
            <androidx.appcompat.widget.AppCompatImageView android:id="@+id/btnCamera" android:background="?attr/selectableItemBackgroundBorderless" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginEnd="15dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0" app:layout_constraintTop_toTopOf="0" app:srcCompat="@drawable/ic_camera"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.Toolbar>
    <FrameLayout android:id="@+id/bottom_toolbar" android:background="?attr/bottomToolbar.bg" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:elevation="4dp">
        <LinearLayout android:layout_gravity="center" android:orientation="horizontal" android:id="@+id/originalLayout" android:padding="16dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:foreground="?attr/selectableItemBackground">
            <com.zhihu.matisse.internal.ui.widget.CheckRadioView android:layout_gravity="center_vertical" android:id="@+id/original" android:layout_width="16dp" android:layout_height="16dp" android:src="@drawable/chat_ic_preview_radio_off"/>
            <TextView android:enabled="true" android:textSize="14sp" android:textColor="?attr/bottomToolbar.preview.textColor" android:layout_gravity="center_vertical" android:paddingLeft="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/chat_module_button_original" android:paddingStart="4dp"/>
        </LinearLayout>
        <TextView android:textSize="16sp" android:textColor="?attr/bottomToolbar.apply.textColor" android:layout_gravity="end" android:id="@+id/button_apply" android:padding="16dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:foreground="?attr/selectableItemBackground"/>
        <Button android:textSize="16sp" android:textColor="?attr/done.title.color" android:layout_gravity="center_horizontal" android:id="@+id/button_done" android:background="#00b9f5" android:layout_width="match_parent" android:layout_height="50dp" android:layout_margin="20dp" android:text="Done" android:textAllCaps="false"/>
    </FrameLayout>
    <FrameLayout android:id="@+id/container" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/bottom_toolbar" android:layout_below="@+id/toolbar"/>
    <FrameLayout android:id="@+id/empty_view" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/bottom_toolbar" android:layout_below="@+id/toolbar">
        <TextView android:textSize="30sp" android:textColor="?attr/album.emptyView.textColor" android:gravity="center" android:layout_gravity="center" android:id="@+id/empty_view_content" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/chat_picker_empty_text" android:drawableTop="?attr/album.emptyView" android:drawablePadding="37dp" android:fontFamily="sans-serif-thin"/>
    </FrameLayout>
</RelativeLayout>
