<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:layout_gravity="center_vertical" android:orientation="horizontal" android:paddingTop="5dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="1" android:paddingEnd="10dp">
            <androidx.appcompat.widget.AppCompatImageView android:id="@+id/back_button" android:background="@android:color/transparent" android:padding="@dimen/dimen_16dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_alignParentStart="true" app:srcCompat="@drawable/bus_back_arrow"/>
        </RelativeLayout>
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout android:background="@drawable/travel_res_bus_bg_white_grey_border" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginRight="15dp">
        <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/city_search_cl" android:background="#f6f6f6" android:paddingTop="14dp" android:paddingBottom="14dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="10dp" android:paddingEnd="14dp" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0">
            <androidx.appcompat.widget.AppCompatImageView android:id="@+id/imageView9" android:padding="@dimen/dimen_3dp" android:layout_width="@dimen/dimen_16dp" android:layout_height="@dimen/dimen_16dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0" app:srcCompat="@drawable/bus_circle_point"/>
            <EditText android:textSize="18sp" android:textStyle="normal" android:ellipsize="end" android:id="@+id/city_search_source" android:background="@null" android:layout_width="0dp" android:layout_height="wrap_content" android:hint="@string/from_where" android:singleLine="true" android:inputType="text" android:imeOptions="actionDone" android:fontFamily="sans-serif-medium" android:layout_marginStart="@dimen/dimen_12dp" android:layout_marginEnd="@dimen/dimen_12dp" app:layout_constraintEnd_toStartOf="@+id/close_source" app:layout_constraintStart_toEndOf="@+id/imageView9" app:layout_constraintTop_toTopOf="0"/>
            <androidx.appcompat.widget.AppCompatImageView android:id="@+id/close_source" android:padding="@dimen/dimen_5dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginEnd="20dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0" app:layout_constraintTop_toTopOf="0" app:srcCompat="@drawable/bus_close_normal"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/city_search_destination_cl" android:paddingTop="14dp" android:paddingBottom="14dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="10dp" android:paddingEnd="14dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0" app:layout_constraintHorizontal_bias="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/city_search_cl">
            <androidx.appcompat.widget.AppCompatImageView android:id="@+id/imageView10" android:padding="@dimen/dimen_1dp" android:layout_width="@dimen/dimen_16dp" android:layout_height="@dimen/dimen_16dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0" app:srcCompat="@drawable/bus_map_icon"/>
            <EditText android:textSize="18sp" android:textStyle="normal" android:ellipsize="end" android:id="@+id/city_search_destination" android:background="@android:color/transparent" android:layout_width="0dp" android:layout_height="wrap_content" android:hint="@string/to_where" android:maxLines="2" android:singleLine="true" android:inputType="text" android:imeOptions="actionDone" android:fontFamily="sans-serif-medium" android:layout_marginStart="10dp" android:layout_marginEnd="@dimen/dimen_10dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0" app:layout_constraintEnd_toStartOf="@+id/close_destination" app:layout_constraintStart_toEndOf="@+id/imageView10" app:layout_constraintTop_toTopOf="0"/>
            <androidx.appcompat.widget.AppCompatImageView android:id="@+id/close_destination" android:padding="@dimen/dimen_5dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginEnd="20dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0" app:layout_constraintTop_toTopOf="0" app:srcCompat="@drawable/bus_close_normal"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.appcompat.widget.AppCompatImageView android:id="@+id/imageView11" android:layout_width="1dp" android:layout_height="@dimen/dimen_40dp" android:layout_marginStart="@dimen/dimen_17dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0" app:srcCompat="@drawable/bus_vertical_dashed_line"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <com.paytm.utility.RoboTextView android:textSize="16dp" android:textColor="@color/text_gray" android:gravity="center_horizontal" android:id="@+id/no_result_text" android:padding="10dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/suggested_cities" app:fontType="2"/>
        <ListView android:id="@+id/city_listview" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="@dimen/dimen_5dp" android:divider="@null"/>
        <ProgressBar android:id="@+id/progress_city" android:layout_width="wrap_content" android:layout_height="wrap_content" android:indeterminateDrawable="@drawable/travel_res_bus_progress_large_holo" android:layout_centerInParent="true"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/err_lyt" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="10dp" android:layout_marginTop="30dp" android:layout_marginRight="10dp">
            <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="@color/color_000000" android:gravity="center" android:id="@+id/error_text_quote" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:text="@string/bus_error_msg" android:maxLines="2" app:fontType="2"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
