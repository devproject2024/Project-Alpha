                <Button android:textColor="@color/white" android:id="@+id/seat_error_cta_btn" android:background="@drawable/btn_paytm_blue_round_rectangle" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="@string/movie_seat_api_error_cta_btn"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
