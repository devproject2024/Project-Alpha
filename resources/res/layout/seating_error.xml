            <RelativeLayout android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.2">
                <ImageView android:layout_width="36dp" android:layout_height="36dp" android:layout_marginRight="15dp" android:layout_alignParentTop="true" android:layout_alignParentRight="true" app:srcCompat="@drawable/movie_seating_error"/>
            </RelativeLayout>
