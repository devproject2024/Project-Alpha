<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@android:color/white" android:padding="@dimen/dimen_4dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/lyt_outer_container" android:paddingLeft="2dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:layout_alignParentStart="true">
        <RadioButton android:id="@+id/iv_radio_icon" android:padding="@dimen/dimen_10dp" android:visibility="gone" android:clickable="false" android:layout_width="@dimen/dimen_20dp" android:layout_height="@dimen/dimen_20dp" android:checked="false" android:button="@drawable/btn_radio_holo_light" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:layout_alignParentStart="true"/>
        <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_14sp" android:textColor="@color/color_222222" android:id="@+id/txt_card_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_42dp" app:fontType="2"/>
        <ImageView android:id="@+id/txt_delete_card" android:padding="@dimen/dimen_2dp" android:visibility="visible" android:layout_width="@dimen/dimen_25dp" android:layout_height="@dimen/dimen_25dp" android:src="@drawable/icon_trash" android:layout_alignParentRight="true"/>
        <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_14sp" android:textColor="@color/color_444444" android:id="@+id/txt_card_number" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_42dp" android:layout_marginTop="@dimen/dimen_5dp" android:layout_below="@+id/txt_card_name" app:fontType="2"/>
        <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_13sp" android:textStyle="normal" android:textColor="@color/color_444444" android:id="@+id/txt_card_ifsc" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_42dp" android:layout_marginTop="@dimen/dimen_5dp" android:layout_below="@+id/txt_card_number" android:lineSpacingExtra="3.5sp" android:letterSpacing="0.04"/>
        <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_14sp" android:textStyle="normal" android:textColor="@color/color_444444" android:id="@+id/txt_card_upi" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_42dp" android:layout_marginTop="@dimen/dimen_5dp" android:layout_below="@+id/txt_card_number" android:letterSpacing="0.01"/>
    </RelativeLayout>
    <View android:background="@color/separators" android:visibility="gone" android:layout_width="match_parent" android:layout_height="8dp" android:layout_below="@+id/lyt_outer_container"/>
</RelativeLayout>
