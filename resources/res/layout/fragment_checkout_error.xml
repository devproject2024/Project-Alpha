<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@drawable/rounded_bottom_sheet" android:paddingLeft="@dimen/activity_margin_left" android:paddingTop="36dp" android:paddingRight="@dimen/activity_margin_left" android:paddingBottom="36dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView android:id="@+id/ivErrorIcon" android:layout_width="wrap_content" android:layout_height="wrap_content" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintTop_toTopOf="0" app:srcCompat="@drawable/native_ic_ill_timeout1"/>
    <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="#222222" android:id="@+id/tvErrorTitle" android:visibility="gone" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginRight="16dp" android:text="@string/bank_transaction_error_title" android:lineSpacingExtra="2sp" android:fontFamily="sans-serif" app:layout_constraintLeft_toRightOf="@+id/ivErrorIcon" app:layout_constraintRight_toLeftOf="@+id/ivClose" app:layout_constraintTop_toTopOf="0"/>
    <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/tvErrorMsg" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="9dp" android:text="@string/default_bank_transaction_error" android:lineSpacingExtra="0sp" android:fontFamily="sans-serif" app:layout_constraintLeft_toRightOf="@+id/ivErrorIcon" app:layout_constraintRight_toLeftOf="@+id/ivClose" app:layout_constraintTop_toBottomOf="@+id/tvErrorTitle"/>
    <ImageView android:id="@+id/ivClose" android:layout_width="wrap_content" android:layout_height="wrap_content" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toTopOf="0" app:srcCompat="@drawable/native_ic_close"/>
    <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="#ffffff" android:gravity="center" android:id="@+id/tvOk" android:background="@drawable/nativesdk_button_click" android:layout_width="match_parent" android:layout_height="60dp" android:layout_marginTop="36dp" android:text="Ok" android:lineSpacingExtra="-1sp" android:fontFamily="sans-serif" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintTop_toBottomOf="@+id/tvErrorMsg"/>
    <RelativeLayout android:gravity="center" android:id="@+id/llOtherPayOptions" android:background="@drawable/rounded_corner_bg_apply_btn" android:paddingTop="12dp" android:paddingBottom="12dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="32dp" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintTop_toBottomOf="@+id/ivErrorIcon">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerInParent="true">
            <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="#ffffff" android:gravity="center_horizontal" android:id="@+id/paysecurely" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Use Other Payment Options" android:lineSpacingExtra="-1sp" android:fontFamily="sans-serif"/>
            <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#ffffff" android:gravity="center_horizontal" android:id="@+id/tv_proceed_securely" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="7dp" android:text="Applied offer will be removed" android:lineSpacingExtra="0sp" android:fontFamily="sans-serif"/>
        </LinearLayout>
        <com.airbnb.lottie.LottieAnimationView android:id="@+id/ltv_loading" android:visibility="gone" android:layout_width="@dimen/width_lottie_button" android:layout_height="@dimen/height_lottie_button" android:layout_centerInParent="true"/>
    </RelativeLayout>
    <TextView android:textSize="16sp" android:textStyle="normal" android:textColor="#00b9f5" android:gravity="center_horizontal" android:id="@+id/tvApplyOtherOffer" android:padding="20dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="Apply Another Offer" android:lineSpacingExtra="2sp" android:fontFamily="sans-serif" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toBottomOf="@+id/llOtherPayOptions"/>
    <FrameLayout android:id="@+id/disableClickView" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="50dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
