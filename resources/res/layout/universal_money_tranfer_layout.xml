<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/root_layout" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/toolbar_layout" android:layout_width="match_parent" android:layout_height="60dp">
        <ImageView android:id="@+id/iv_back_button" android:padding="@dimen/dimen_20dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/upi_ic_back" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <ImageView android:id="@+id/motif_iv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_motif_classic" android:layout_alignParentRight="true"/>
    <TextView android:textSize="14sp" android:textColor="@color/color_00b9f5" android:id="@+id/menu_tv" android:background="@drawable/mt_more_bg" android:paddingLeft="@dimen/dimen_12dp" android:paddingTop="@dimen/dimen_7dp" android:paddingRight="@dimen/dimen_12dp" android:paddingBottom="@dimen/dimen_7dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_15dp" android:layout_marginRight="@dimen/dimen_15dp" android:text="@string/mt_more_label" android:drawableRight="@drawable/ic_arrow_right_blue" android:drawablePadding="@dimen/dimen_5dp" android:layout_alignParentRight="true" android:drawableEnd="@drawable/ic_arrow_right_blue"/>
    <androidx.core.widget.NestedScrollView android:id="@+id/parent_scroll_view" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true" android:layout_below="@+id/toolbar_layout">
        <RelativeLayout android:orientation="vertical" android:id="@+id/parent_layout" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:animateLayoutChanges="true" app:layout_scrollFlags="1">
            <RelativeLayout android:orientation="vertical" android:id="@+id/title_layout_lnr" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content">
                <ImageView android:id="@+id/upi_logo_iv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="@dimen/dimen_7dp" android:baselineAlignBottom="true" app:srcCompat="@drawable/mt_upi_logo_upi"/>
                <TextView android:textSize="@dimen/dimen_21sp" android:textStyle="bold" android:textColor="@color/color_222222" android:id="@+id/tv_heading" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_10dp" android:layout_marginRight="@dimen/dimen_20dp" android:text="@string/money_transfer" android:layout_toRightOf="@+id/upi_logo_iv" android:lineSpacingExtra="8sp" android:fontFamily="@string/font_family_roboto_regular"/>
                <TextView android:textSize="@dimen/dimen_12sp" android:textStyle="normal" android:textColor="@color/color_222222" android:id="@+id/tv_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="10dp" android:layout_marginRight="@dimen/dimen_20dp" android:layout_below="@+id/tv_heading" android:lineSpacingExtra="7sp" android:fontFamily="@string/font_family_roboto_regular"/>
                <LinearLayout android:orientation="horizontal" android:id="@+id/noHeadingLayout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="10dp" android:layout_marginRight="20dp" android:layout_below="@+id/tv_heading">
                    <View android:layout_gravity="center_vertical" android:background="@drawable/gray_circle" android:layout_width="6dp" android:layout_height="6dp" android:layout_marginTop="2dp" android:layout_marginRight="10dp" android:layout_marginBottom="2dp"/>
                    <TextView android:textSize="@dimen/dimen_12sp" android:textStyle="normal" android:textColor="@color/color_222222" android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_24dp" android:text="100% Safe" android:fontFamily="@string/font_family_roboto_regular"/>
                    <View android:layout_gravity="center_vertical" android:background="@drawable/gray_circle" android:layout_width="6dp" android:layout_height="6dp" android:layout_marginTop="2dp" android:layout_marginRight="10dp" android:layout_marginBottom="2dp"/>
                    <TextView android:textSize="@dimen/dimen_12sp" android:textStyle="normal" android:textColor="@color/color_222222" android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_24dp" android:text="0% Fee" android:fontFamily="@string/font_family_roboto_regular"/>
                    <View android:layout_gravity="center_vertical" android:background="@drawable/gray_circle" android:layout_width="6dp" android:layout_height="6dp" android:layout_marginTop="2dp" android:layout_marginRight="@dimen/dimen_10dp" android:layout_marginBottom="2dp"/>
                    <TextView android:textSize="@dimen/dimen_12sp" android:textStyle="normal" android:textColor="@color/color_222222" android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Any Bank to Any Bank" android:fontFamily="@string/font_family_roboto_regular"/>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/normal_linear" android:background="#ffffff" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="@dimen/dimen_30dp" android:layout_marginRight="@dimen/dimen_20dp" android:layout_below="@+id/title_layout_lnr" android:animateLayoutChanges="true">
                <RelativeLayout android:id="@+id/contactContainer" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="@color/edittext_hint_color" android:id="@+id/account_number_et" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:text="@string/mt_trnsfr_upi_bank_acc_adhaar" android:singleLine="true" android:lineSpacingExtra="6sp" android:fontFamily="@string/font_family_roboto_regular" android:letterSpacing="0.02"/>
                    <ImageView android:id="@+id/phonebook_iv" android:padding="6dp" android:visibility="visible" android:layout_width="30dp" android:layout_height="30dp" android:layout_marginTop="@dimen/dimen_10dp" android:src="@drawable/contact" android:layout_alignParentRight="true"/>
                    <View android:id="@+id/account_number_divider" android:background="#e2ebee" android:layout_width="match_parent" android:layout_height="1.5dp" android:layout_marginTop="8dp" android:layout_below="@+id/account_number_et"/>
                    <TextView android:textSize="12sp" android:textColor="@color/excl_color_00b9f5" android:id="@+id/bankAccountOrVPA" android:paddingTop="6dp" android:paddingBottom="6dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:text="@string/mt_or_enter_bank_account_upi" android:layout_below="@+id/account_number_divider" android:fontFamily="sans-serif"/>
                </RelativeLayout>
                <RelativeLayout android:id="@+id/accountContainer" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="@color/edittext_hint_color" android:id="@+id/contact_bank_account_vpa" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:text="@string/univ_money_trnsfr_upi_bank_acc_adhaar" android:singleLine="true" android:lineSpacingExtra="6sp" android:fontFamily="@string/font_family_roboto_regular" android:letterSpacing="0.02"/>
                    <View android:id="@+id/contact_divider" android:background="#e2ebee" android:layout_width="match_parent" android:layout_height="1.5dp" android:layout_marginTop="8dp" android:layout_below="@+id/contact_bank_account_vpa"/>
                    <TextView android:textSize="12sp" android:textColor="@color/excl_color_00b9f5" android:id="@+id/contact_enter_contact_detail" android:paddingTop="6dp" android:paddingBottom="6dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:text="@string/or_enter_name_mobile_no" android:layout_below="@+id/contact_divider" android:fontFamily="sans-serif"/>
                </RelativeLayout>
                <RelativeLayout android:id="@+id/rl_offers" android:background="@color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/dimen_40dp" android:layout_marginTop="@dimen/dimen_40dp">
                    <ImageView android:id="@+id/offer_left_arrow" android:paddingLeft="@dimen/dimen_5dp" android:paddingTop="@dimen/dimen_10dp" android:paddingRight="@dimen/dimen_10dp" android:paddingBottom="@dimen/dimen_10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/arrow_left" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
                    <androidx.viewpager.widget.ViewPager android:id="@+id/mt_offers_view_pager" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_toLeftOf="@+id/offer_right_arrow" android:layout_toRightOf="@+id/offer_left_arrow" android:layout_centerVertical="true"/>
                    <ImageView android:id="@+id/offer_right_arrow" android:paddingLeft="@dimen/dimen_10dp" android:paddingTop="@dimen/dimen_10dp" android:paddingRight="@dimen/dimen_5dp" android:paddingBottom="@dimen/dimen_10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/arrow_right_black" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/recentBeneficiaryLayout" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_40dp" android:layout_below="@+id/normal_linear">
                <FrameLayout android:id="@+id/recent_fragment_container" android:background="#ffffff" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:animateLayoutChanges="true"/>
                <FrameLayout android:id="@+id/bottomFragmentContainer" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="match_parent" android:animateLayoutChanges="true"/>
            </LinearLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
    <FrameLayout android:id="@+id/fragmentContainer" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <include android:visibility="gone" layout="@layout/mt_scratch_promo"/>
</RelativeLayout>
