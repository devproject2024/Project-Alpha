        </RelativeLayout>
        <View android:id="@+id/default_divider" android:background="@color/upi_card_bg" android:visibility="gone" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="@dimen/dimen_56dp"/>
        <RelativeLayout android:id="@+id/rl_check_balance" android:background="@drawable/white_selector_bg" android:paddingLeft="@dimen/dimen_24dp" android:paddingTop="16dp" android:paddingBottom="16dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="@dimen/dimen_64dp">
            <ImageView android:id="@+id/img_wishlist" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginRight="@dimen/wallet_20_dp" android:src="@drawable/ic_ac_balance" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
            <TextView android:textSize="@dimen/dimen_14sp" android:textColor="@color/color_222222" android:id="@+id/tv_check_balance" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/upi_check_balance_new" android:layout_toRightOf="@+id/img_wishlist" android:layout_centerVertical="true" android:lineSpacingExtra="2sp"/>
            <TextView android:textSize="@dimen/dimen_14sp" android:textColor="@color/color_222222" android:id="@+id/tv_balance_value" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_32dp" android:text="@string/upi_balance_is" android:layout_toRightOf="@+id/img_wishlist" android:layout_below="@+id/tv_check_balance"/>
            <ImageView android:paddingRight="20dp" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/arrow_right_black" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View android:id="@+id/check_balance_divider" android:background="@color/upi_card_bg" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="@dimen/dimen_56dp"/>
        <RelativeLayout android:id="@+id/rl_change_mpin" android:background="@drawable/white_selector_bg" android:paddingLeft="@dimen/dimen_24dp" android:paddingTop="16dp" android:paddingBottom="16dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="@dimen/dimen_64dp">
            <ImageView android:id="@+id/img_wishlist2" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginRight="@dimen/wallet_20_dp" android:src="@drawable/ic_change_mpin" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
            <TextView android:textSize="@dimen/dimen_14sp" android:textColor="@color/color_222222" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/create_new_upi_pin" android:layout_toRightOf="@+id/img_wishlist2" android:layout_centerVertical="true" android:lineSpacingExtra="2sp"/>
            <ImageView android:paddingRight="20dp" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/arrow_right_black" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View android:id="@+id/change_mpin_divider" android:background="@color/upi_card_bg" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="@dimen/dimen_56dp"/>
        <RelativeLayout android:id="@+id/rl_reset_mpin" android:background="@drawable/white_selector_bg" android:paddingLeft="@dimen/dimen_24dp" android:paddingTop="16dp" android:paddingBottom="16dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="@dimen/dimen_64dp">
            <ImageView android:id="@+id/img_wishlist3" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginRight="@dimen/wallet_20_dp" android:src="@drawable/ic_forgot_mpin" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
            <TextView android:textSize="@dimen/dimen_14sp" android:textColor="@color/color_222222" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/upi_forgot_mpin" android:layout_toRightOf="@+id/img_wishlist3" android:layout_centerVertical="true" android:lineSpacingExtra="2sp"/>
            <ImageView android:paddingRight="20dp" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/arrow_right_black" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View android:id="@+id/reset_mpin_divider" android:background="@color/upi_card_bg" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="@dimen/dimen_56dp"/>
        <RelativeLayout android:id="@+id/rl_delete_bank" android:background="@drawable/white_selector_bg" android:paddingLeft="@dimen/dimen_24dp" android:paddingTop="16dp" android:paddingBottom="16dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="@dimen/dimen_64dp">
            <ImageView android:id="@+id/img_wishlist4" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginRight="@dimen/wallet_20_dp" android:src="@drawable/ic_delete" android:tint="#002e6e" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
            <TextView android:textSize="@dimen/dimen_14sp" android:textColor="@color/color_222222" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/upi_delete_bank" android:layout_toRightOf="@+id/img_wishlist4" android:layout_centerVertical="true" android:lineSpacingExtra="2sp"/>
