        </RelativeLayout>
        <View android:id="@+id/delete_bank_divider" android:background="@color/upi_card_bg" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="@dimen/dimen_56dp"/>
    </LinearLayout>
</ScrollView>
