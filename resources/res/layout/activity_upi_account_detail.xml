        </androidx.appcompat.widget.Toolbar>
        <include layout="@layout/upi_bank_card"/>
        <View android:background="@color/upi_card_bg" android:layout_width="match_parent" android:layout_height="@dimen/dimen_10dp"/>
        <RelativeLayout android:id="@+id/rl_make_default" android:background="@drawable/white_selector_bg" android:paddingLeft="@dimen/dimen_24dp" android:paddingTop="16dp" android:paddingBottom="16dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="@dimen/dimen_64dp">
