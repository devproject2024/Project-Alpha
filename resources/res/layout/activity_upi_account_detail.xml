            <TextView android:textSize="@dimen/dimen_14sp" android:textColor="@color/color_222222" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/upi_make_default" android:layout_toRightOf="@+id/iv_default" android:layout_centerVertical="true" android:lineSpacingExtra="2sp"/>
