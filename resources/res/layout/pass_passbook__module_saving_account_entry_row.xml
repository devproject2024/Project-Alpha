<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/passbook_entry_row_rl" android:paddingTop="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="@dimen/dimen_100dp">
