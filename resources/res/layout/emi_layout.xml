<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:tag="layout/emi_layout_0" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:id="@+id/ll_savedCardContainer" android:tag="binding_1" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/rl_selectBank"/>
    <LinearLayout android:orientation="horizontal" android:id="@+id/ll_useAnotherCard" android:tag="binding_2" android:paddingLeft="@dimen/dimen_20dp" android:paddingTop="@dimen/dimen_10dp" android:paddingRight="@dimen/dimen_20dp" android:paddingBottom="@dimen/dimen_10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dimen_5dp" android:layout_below="@+id/ll_savedCardContainer">
        <RadioButton android:id="@+id/rb_anotherCard" android:tag="binding_3" android:background="@color/transparent" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:button="@drawable/radio_drawable"/>
        <TextView android:textSize="@dimen/dimen_16sp" android:textStyle="normal" android:textColor="@color/black" android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@+id/tv_useAnother" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_10dp" android:text="Use Another Card" android:fontFamily="sans-serif"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:id="@+id/ll_cvvLayout" android:tag="binding_4" android:paddingLeft="@dimen/dimen_20dp" android:paddingRight="@dimen/dimen_20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="17dp" android:layout_marginBottom="2dp" android:baselineAligned="false" android:weightSum="10" android:layout_below="@+id/tv_addedEmiDetails">
        <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="6">
            <EditText android:textSize="@dimen/dimen_14sp" android:textColorHint="#999999" android:id="@+id/et_expiry_validity" android:tag="binding_5" android:background="@drawable/white_background_with_border" android:padding="10dp" android:layout_width="match_parent" android:layout_height="@dimen/dimen_48dp" android:layout_marginTop="8dp" android:hint="Expiry / Validity Date" android:maxLength="5" android:digits="0123456789/" android:inputType="number" android:imeOptions="actionDone"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:tag="binding_6" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_weight="4">
            <EditText android:textSize="@dimen/dimen_14sp" android:textColorHint="#999999" android:id="@+id/etCvv" android:tag="binding_7" android:background="@drawable/white_background_with_border" android:padding="10dp" android:layout_width="match_parent" android:layout_height="@dimen/dimen_48dp" android:layout_marginTop="8dp" android:hint="Enter CVV" android:maxLength="4" android:digits="0123456789" android:inputType="numberPassword" android:imeOptions="actionDone"/>
            <net.one97.paytm.nativesdk.widget.RoboTextView android:textSize="@dimen/dimen_11sp" android:textStyle="bold" android:textColor="@color/paytm_blue" android:gravity="end" android:id="@+id/tv_cvv_help" android:tag="binding_8" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_2dp" android:text="@string/native_help" android:layout_alignParentRight="true"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout android:id="@+id/rl_nameLayout" android:tag="binding_9" android:background="@drawable/ripple_effect" android:paddingLeft="@dimen/dimen_20dp" android:paddingTop="@dimen/dimen_20dp" android:paddingRight="@dimen/dimen_20dp" android:paddingBottom="@dimen/dimen_20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RadioButton android:id="@+id/radio_button" android:tag="binding_10" android:background="@color/transparent" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_4dp" android:button="@drawable/radio_drawable"/>
        <TextView android:textSize="@dimen/dimen_16sp" android:textStyle="bold" android:textColor="@color/black" android:id="@+id/txtamount" android:tag="binding_11" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:fontFamily="sans-serif" android:layout_alignParentEnd="true"/>
        <net.one97.paytm.nativesdk.widget.RoboTextView android:textSize="@dimen/dimen_16sp" android:textColor="@color/color_222222" android:id="@+id/txtDebitCreditCard" android:tag="binding_12" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignTop="@+id/radio_button" android:lineSpacingExtra="@dimen/dimen_4sp" android:layout_marginStart="@dimen/dimen_10dp" android:layout_toEndOf="@+id/radio_button"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/rl_selectBank" android:tag="binding_13" android:background="@drawable/grey_background_with_border" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginRight="@dimen/dimen_20dp" android:layout_marginBottom="@dimen/dimen_10dp" android:layout_below="@+id/rl_nameLayout">
        <ImageView android:id="@+id/iv_arrow" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_10dp" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginEnd="@dimen/dimen_10dp" android:layout_alignParentEnd="true" app:srcCompat="@drawable/native_right_arrow"/>
        <ProgressBar android:id="@+id/pb_selectBank" android:visibility="gone" android:layout_width="@dimen/dimen_20dp" android:layout_height="@dimen/dimen_20dp" android:layout_marginRight="@dimen/dimen_10dp" android:layout_toLeftOf="@+id/iv_arrow" android:layout_centerVertical="true"/>
        <net.one97.paytm.nativesdk.widget.RoboTextView android:textSize="@dimen/cart_16sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/txtEmiSelectBank" android:padding="@dimen/dimen_15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/select_bank" android:fontFamily="sans-serif"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/rl_creditCardNumber" android:tag="binding_14" android:paddingLeft="@dimen/dimen_20dp" android:paddingRight="@dimen/dimen_20dp" android:layout_width="match_parent" android:layout_height="@dimen/dimen_48dp" android:layout_marginTop="7.5dp" android:layout_marginBottom="7.5dp" android:layout_below="@+id/ll_useAnotherCard">
        <EditText android:textSize="@dimen/dimen_16sp" android:id="@+id/etCardNumber" android:tag="binding_15" android:background="@drawable/white_background_with_border" android:padding="10dp" android:layout_width="match_parent" android:layout_height="@dimen/dimen_48dp" android:hint="Enter Card Number" android:maxLength="23" android:digits="0123456789-" android:inputType="phone" android:imeOptions="actionDone" android:letterSpacing="0.03"/>
        <ImageView android:layout_gravity="center_vertical" android:id="@+id/iv_card_logo" android:tag="binding_16" android:layout_width="@dimen/dimen_32dp" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_10dp" android:scaleType="fitCenter" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:contentDescription="@null" android:layout_marginEnd="@dimen/dimen_10dp" android:layout_alignParentEnd="true"/>
        <ImageView android:id="@+id/iv_cross" android:tag="binding_17" android:padding="@dimen/dimen_5dp" android:layout_width="@dimen/dimen_32dp" android:layout_height="@dimen/dimen_32dp" android:layout_marginLeft="@dimen/dimen_10dp" android:layout_marginRight="@dimen/dimen_10dp" android:layout_toLeftOf="@+id/iv_card_logo" android:layout_centerVertical="true" android:layout_alignWithParentIfMissing="true" android:contentDescription="@string/native_clear" android:layout_toStartOf="@+id/iv_card_logo" app:srcCompat="@drawable/nativesdk_close"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/rl_selectEMIPlan" android:tag="binding_18" android:background="@drawable/grey_background_with_border" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="@dimen/dimen_10dp" android:layout_marginRight="@dimen/dimen_20dp" android:layout_marginBottom="@dimen/dimen_10dp" android:layout_below="@+id/rl_creditCardNumber">
        <ImageView android:id="@+id/iv_selectEmiArrow" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_10dp" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:contentDescription="@null" android:layout_marginEnd="@dimen/dimen_10dp" android:layout_alignParentEnd="true" app:srcCompat="@drawable/native_right_arrow"/>
        <ProgressBar android:id="@+id/pb_selectEmiPlan" android:visibility="gone" android:layout_width="@dimen/dimen_20dp" android:layout_height="@dimen/dimen_20dp" android:layout_marginRight="@dimen/dimen_10dp" android:layout_toLeftOf="@+id/iv_selectEmiArrow" android:layout_centerVertical="true"/>
        <net.one97.paytm.nativesdk.widget.RoboTextView android:textSize="@dimen/cart_16sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/txtSelectEmiPlan" android:padding="@dimen/dimen_15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/select_emi_plan" android:fontFamily="sans-serif"/>
    </RelativeLayout>
    <TextView android:id="@+id/tnc" android:tag="binding_19" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="@dimen/dimen_10dp" android:layout_marginRight="@dimen/dimen_20dp" android:layout_marginBottom="@dimen/dimen_10dp" android:text="@string/emi_tnc" android:layout_below="@+id/rl_selectEMIPlan"/>
    <RelativeLayout android:id="@+id/rl_cardView" android:tag="binding_20" android:paddingLeft="@dimen/dimen_20dp" android:paddingRight="@dimen/dimen_20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_29dp" android:layout_below="@+id/tnc">
        <RelativeLayout android:id="@+id/rl_cardNumber" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_5dp" android:layout_below="@+id/tv_addedBankName">
            <ImageView android:id="@+id/iv_saved_card" android:layout_width="@dimen/dimen_30dp" android:layout_height="@dimen/dimen_25dp" android:layout_marginLeft="@dimen/dimen_10dp" android:layout_toRightOf="@+id/tv_bank_name" android:layout_centerVertical="true" android:contentDescription="@null" android:layout_marginStart="@dimen/dimen_10dp" android:layout_toEndOf="@+id/tv_bank_name"/>
            <net.one97.paytm.nativesdk.widget.RoboTextView android:textSize="@dimen/dimen_13sp" android:textStyle="normal" android:textColor="@color/color_666666" android:id="@+id/tv_bank_name" android:tag="binding_21" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:fontFamily="sans-serif"/>
        </RelativeLayout>
        <TextView android:textSize="@dimen/dimen_16sp" android:textStyle="bold" android:textColor="#222222" android:id="@+id/tv_addedBankName" android:layout_width="wrap_content" android:layout_height="wrap_content" android:fontFamily="sans-serif"/>
        <TextView android:textColor="@color/paytm_blue" android:id="@+id/tv_changeBankCard" android:tag="binding_22" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_5dp" android:text="Change Bank/Card" android:layout_below="@+id/rl_cardNumber"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/tv_addedEmiDetails" android:tag="binding_23" android:background="@color/color_f9fafb" android:padding="@dimen/dimen_10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="47dp" android:layout_marginTop="@dimen/dimen_10dp" android:layout_marginRight="@dimen/dimen_20dp" android:layout_below="@+id/rl_cardView">
        <ImageView android:id="@+id/imgEmiCross" android:paddingRight="@dimen/dimen_5dp" android:visibility="gone" android:layout_width="@dimen/dimen_30dp" android:layout_height="@dimen/dimen_30dp" android:layout_alignParentRight="true" android:contentDescription="@null" app:srcCompat="@drawable/nativesdk_close"/>
        <net.one97.paytm.nativesdk.widget.RoboTextView android:textSize="@dimen/dimen_12sp" android:textStyle="bold" android:textColor="#506d85" android:id="@+id/tv_addedEmiInfo" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/imgEmiCross" android:layout_alignParentLeft="true"/>
        <net.one97.paytm.nativesdk.widget.RoboTextView android:textSize="@dimen/dimen_14sp" android:textStyle="bold" android:textColor="#000000" android:id="@+id/tv_addedTotalAmount" android:tag="binding_24" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_5dp" android:layout_below="@+id/tv_addedEmiInfo" android:layout_alignLeft="@+id/tv_addedEmiInfo" android:fontFamily="sans-serif" android:letterSpacing="0.04"/>
        <net.one97.paytm.nativesdk.widget.RoboTextView android:textSize="@dimen/dimen_13sp" android:textStyle="normal" android:textColor="#00b9f5" android:id="@+id/tv_change_plan" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_5dp" android:text="@string/native_change_plan" android:layout_below="@+id/tv_addedTotalAmount" android:layout_alignLeft="@+id/tv_addedEmiInfo" android:fontFamily="sans-serif" android:letterSpacing="0.04"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/rl_allOffers" android:tag="binding_25" android:background="#e8f8f1" android:paddingTop="@dimen/dimen_10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="@dimen/dimen_10dp" android:layout_marginRight="@dimen/dimen_20dp" android:layout_marginBottom="@dimen/dimen_16dp" android:layout_below="@+id/ll_cvvLayout" android:paddingStart="@dimen/dimen_8dp" android:paddingEnd="@dimen/dimen_15dp">
        <TextView android:textSize="@dimen/dimen_12sp" android:textStyle="bold" android:textColor="#1d252d" android:id="@+id/tv_appliedOffers" android:tag="binding_26" android:paddingTop="@dimen/dimen_6dp" android:paddingBottom="@dimen/dimen_10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/native_emi_applied_offer"/>
        <TextView android:textSize="@dimen/dimen_11sp" android:textColor="@color/color_21c17a" android:id="@+id/tv_bankOffer" android:tag="binding_27" android:paddingBottom="@dimen/dimen_10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:drawableLeft="@drawable/percentage_image" android:drawablePadding="@dimen/dimen_5dp" android:layout_below="@+id/tv_appliedOffers"/>
        <TextView android:textSize="@dimen/dimen_11sp" android:textColor="@color/color_21c17a" android:id="@+id/tv_subventionOffer" android:tag="binding_28" android:paddingBottom="@dimen/dimen_10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/tv_bankOffer"/>
        <View android:tag="binding_29" android:layout_width="match_parent" android:layout_height="6dp" android:layout_below="@+id/tv_subventionOffer"/>
    </RelativeLayout>
    <FrameLayout android:id="@+id/fl_loader" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginRight="@dimen/dimen_20dp" android:layout_below="@+id/rl_allOffers">
        <LinearLayout android:orientation="horizontal" android:id="@+id/ll_checkOffer" android:tag="binding_30" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="@dimen/dimen_24dp">
            <TextView android:textSize="@dimen/dimen_13sp" android:textColor="#506d85" android:id="@+id/tv_checkingOffers" android:tag="binding_31" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <com.airbnb.lottie.LottieAnimationView android:id="@+id/ltv_getOffers" android:visibility="gone" android:layout_width="60dp" android:layout_height="20dp"/>
        </LinearLayout>
        <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="@color/color_222222" android:gravity="center_horizontal" android:id="@+id/tv_convFee" android:tag="binding_32" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="@dimen/dimen_24dp" android:fontFamily="sans-serif"/>
    </FrameLayout>
    <RelativeLayout android:id="@+id/btnProceed" android:tag="binding_33" android:background="@drawable/nativesdk_button_click" android:paddingTop="@dimen/dimen_16dp" android:paddingBottom="@dimen/dimen_16dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_12dp" android:layout_below="@+id/fl_loader" android:layout_marginStart="@dimen/dimen_12dp" android:layout_marginEnd="@dimen/dimen_12dp">
        <TextView android:textSize="@dimen/dimen_18sp" android:textStyle="bold" android:textColor="@color/pure_white" android:gravity="center" android:id="@+id/paysecurely" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/nativesdk_proceed_to_pay" android:layout_centerInParent="true"/>
        <com.airbnb.lottie.LottieAnimationView android:id="@+id/ltv_loading" android:visibility="gone" android:layout_width="@dimen/width_lottie_button" android:layout_height="@dimen/height_lottie_button" android:layout_centerInParent="true"/>
    </RelativeLayout>
</RelativeLayout>
