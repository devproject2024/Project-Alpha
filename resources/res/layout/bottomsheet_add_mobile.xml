<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:paddingTop="25dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="21sp" android:textStyle="bold" android:textColor="@color/color_222222" android:id="@+id/message" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="25dp" android:layout_marginRight="15dp" android:text="@string/msg_add_mobile_number" android:fontFamily="sans-serif"/>
    <TextView android:textSize="15sp" android:textColor="@color/color_222222" android:id="@+id/msg_benefit" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="25dp" android:layout_marginTop="15dp" android:layout_marginRight="15dp" android:text="@string/msg_benefit" android:layout_below="@+id/message" android:fontFamily="sans-serif"/>
    <com.google.android.material.textfield.TextInputLayout android:theme="@style/OauthPaytmEditTextTheme" android:id="@+id/til_mobile" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="25dp" android:layout_marginTop="30dp" android:layout_marginRight="25dp" android:minHeight="48dp" android:hint="@string/hint_enter_mobile_number" android:layout_below="@+id/msg_benefit" android:layout_centerVertical="true" app:errorTextAppearance="@style/OauthPaytmErrorThemeTextInput">
        <androidx.appcompat.widget.AppCompatEditText android:textSize="17sp" android:textStyle="normal" android:id="@+id/et_mobile" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLength="14" android:digits="0123456789+" android:lineSpacingExtra="10sp" android:inputType="phone" android:fontFamily="sans-serif"/>
    </com.google.android.material.textfield.TextInputLayout>
    <Button android:textColor="@color/paytm_blue" android:id="@+id/resend_otp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/resend_otp" android:layout_alignTop="@+id/til_mobile" android:layout_alignRight="@+id/til_mobile" android:layout_alignBottom="@+id/til_mobile" style="@style/Widget.AppCompat.Button.Borderless.Colored"/>
    <Button android:textSize="17sp" android:textStyle="normal" android:textColor="@color/white" android:id="@+id/btnProceed" android:background="@drawable/rounded_blue_rectangle" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="30dp" android:layout_marginRight="10dp" android:text="@string/btn_proceed" android:layout_below="@+id/til_mobile" android:textAllCaps="false" android:fontFamily="sans-serif-medium"/>
    <TextView android:textSize="17sp" android:textStyle="normal" android:textColor="@color/paytm_blue" android:id="@+id/login_with_account" android:padding="@dimen/dimen_10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:layout_marginBottom="@dimen/dimen_20dp" android:text="@string/login_to_diff_account" android:layout_below="@+id/btnProceed" android:layout_centerHorizontal="true" android:lineSpacingExtra="10sp" android:fontFamily="@string/font_family_roboto_regular"/>
    <FrameLayout android:id="@+id/progressView" android:background="@color/white_70p" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="70dp" android:layout_centerInParent="true">
        <com.airbnb.lottie.LottieAnimationView android:id="@+id/lottie_loader" android:layout_width="wrap_content" android:layout_height="30dp" style="@style/loader"/>
    </FrameLayout>
</RelativeLayout>
