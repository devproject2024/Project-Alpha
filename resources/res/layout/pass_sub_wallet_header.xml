<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:id="@+id/rl_download_statement" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_25dp">
            <ImageView android:id="@+id/icon_download_statement" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_10dp" app:srcCompat="@drawable/pass_ic_download_statement"/>
            <com.paytm.utility.RoboTextView android:textSize="@dimen/text_size_15sp" android:textStyle="normal" android:textColor="@color/color_00b9f5" android:id="@+id/tv_download_statement" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/wallet_download_statement_new" android:layout_toRightOf="@+id/icon_download_statement" android:layout_centerVertical="true" android:lineSpacingExtra="1sp" android:fontFamily="sans-serif-light"/>
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_20dp" android:src="@drawable/pass_ic_arrow_forward_passbook" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View android:background="@color/color_f3f7f8" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="@dimen/dimen_1dp" android:layout_marginLeft="@dimen/dimen_25dp" android:layout_marginTop="@dimen/dimen_15dp"/>
        <RelativeLayout android:id="@+id/rl_send_money_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_25dp" android:layout_marginTop="@dimen/dimen_15dp">
            <ImageView android:id="@+id/icon_send_money_to_bank" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_10dp" app:srcCompat="@drawable/pass_ic_send_money_to_bank"/>
            <com.paytm.utility.RoboTextView android:textSize="@dimen/text_size_15sp" android:textStyle="normal" android:textColor="@color/color_00b9f5" android:id="@+id/tvsendMoney" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/wallet_send_money" android:layout_toRightOf="@+id/icon_send_money_to_bank" android:layout_centerVertical="true" android:lineSpacingExtra="1sp" android:fontFamily="sans-serif-light"/>
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_20dp" android:src="@drawable/pass_ic_arrow_forward_passbook" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View android:background="@color/color_f3f7f8" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="@dimen/dimen_1dp" android:layout_marginLeft="@dimen/dimen_25dp" android:layout_marginTop="@dimen/dimen_15dp"/>
        <RelativeLayout android:id="@+id/rl_add_money_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_25dp" android:layout_marginTop="@dimen/dimen_15dp">
            <ImageView android:id="@+id/icon_add_money_to_paytm_wallet" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_10dp" app:srcCompat="@drawable/pass_ic_add_money_to_wallet"/>
            <com.paytm.utility.RoboTextView android:textSize="@dimen/text_size_15sp" android:textStyle="normal" android:textColor="@color/color_00b9f5" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/wallet_add_money" android:layout_toRightOf="@+id/icon_add_money_to_paytm_wallet" android:layout_centerVertical="true" android:lineSpacingExtra="1sp" android:fontFamily="sans-serif-light"/>
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_20dp" android:src="@drawable/pass_ic_arrow_forward_passbook" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View android:id="@+id/view_SA_divider" android:background="@color/color_f3f7f8" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="@dimen/dimen_1dp" android:layout_marginLeft="@dimen/dimen_25dp" android:layout_marginTop="@dimen/dimen_15dp" android:layout_below="@+id/tvsendMoney"/>
        <RelativeLayout android:id="@+id/rlAutomaticAddMoney" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_25dp" android:layout_marginTop="@dimen/dimen_15dp">
            <ImageView android:id="@+id/icon_automatic_add_money" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_10dp" app:srcCompat="@drawable/pass_auto_add_money_svg"/>
            <com.paytm.utility.RoboTextView android:textSize="@dimen/text_size_15sp" android:textStyle="normal" android:textColor="@color/color_00b9f5" android:id="@+id/tvAam" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/pass_cta_auto_add_money" android:layout_toRightOf="@+id/icon_automatic_add_money" android:layout_centerVertical="true" android:lineSpacingExtra="1sp" android:fontFamily="sans-serif-light"/>
            <ImageView android:id="@+id/ivAamNew" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/tvAam" android:layout_marginStart="4dp" app:srcCompat="@drawable/pass_ic_new_svg"/>
            <androidx.appcompat.widget.AppCompatTextView android:textSize="10sp" android:textColor="@color/pass_color_11bf80" android:gravity="center_vertical" android:id="@+id/tvSubscriptionStatus" android:background="@drawable/pass_blue_border_with_corner_radius" android:paddingTop="2dp" android:paddingBottom="2dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/ivAamNew" android:layout_centerInParent="true" android:paddingStart="9dp" android:paddingEnd="9dp" android:layout_marginStart="8dp" android:backgroundTint="@color/pass_color_11bf80"/>
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_20dp" android:src="@drawable/pass_ic_arrow_forward_passbook" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View android:id="@+id/viewAutoAddMoneyDivider" android:background="@color/color_f3f7f8" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="@dimen/dimen_1dp" android:layout_marginLeft="@dimen/dimen_25dp" android:layout_marginTop="@dimen/dimen_15dp" android:layout_below="@+id/tvsendMoney"/>
        <RelativeLayout android:id="@+id/rl_view_spend_analytics" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_25dp" android:layout_marginTop="@dimen/dimen_15dp">
            <ImageView android:id="@+id/icon_view_spend_analytics" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_10dp" app:srcCompat="@drawable/pass_ic_spend_analytics"/>
            <com.paytm.utility.RoboTextView android:textSize="@dimen/text_size_15sp" android:textStyle="normal" android:textColor="@color/color_00b9f5" android:id="@+id/tv_view_spend_analytics" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/pass_view_spend_analytics" android:layout_toRightOf="@+id/icon_view_spend_analytics" android:layout_centerVertical="true" android:lineSpacingExtra="1sp" android:fontFamily="sans-serif-light"/>
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_20dp" android:src="@drawable/pass_ic_arrow_forward_passbook" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/send_money_loader_ll" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:layout_centerInParent="true">
        <com.airbnb.lottie.LottieAnimationView android:layout_gravity="center_vertical" android:id="@+id/send_money_loader" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="30dp" android:adjustViewBounds="true" app:amount="5" app:animationDirectionbundle="-1" app:circleSize="15" app:duration="@android:integer/config_mediumAnimTime" app:endColor="@color/light_blue_A400" app:startColor="@color/light_blue_A700"/>
    </LinearLayout>
</RelativeLayout>
