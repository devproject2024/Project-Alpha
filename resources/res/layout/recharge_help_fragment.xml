<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:nestedScrollingEnabled="false">
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:nestedScrollingEnabled="false">
        <LinearLayout android:orientation="vertical" android:id="@+id/content_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:nestedScrollingEnabled="true">
            <androidx.recyclerview.widget.RecyclerView android:orientation="vertical" android:id="@+id/list_help_videos" android:layout_width="match_parent" android:layout_height="wrap_content" android:nestedScrollingEnabled="false"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/show_more_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
                <View android:id="@+id/divider" android:background="@color/bg_grid_grey" android:layout_width="match_parent" android:layout_height="@dimen/dimen_1dp" android:layout_marginTop="@dimen/dimen_16dp"/>
                <Button android:textSize="16sp" android:textColor="@color/color_33b5e5" android:gravity="center" android:id="@+id/show_more_btn" android:background="@color/transparent" android:layout_width="match_parent" android:layout_height="70dp" android:text="@string/show_more" android:textAllCaps="false"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/no_video_layout" android:padding="@dimen/dimen_16dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="18sp" android:textColor="@color/black" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/wallet_48_dp" android:text="@string/no_videos_found"/>
        <ImageView android:layout_gravity="center_horizontal" android:layout_width="144dp" android:layout_height="144dp" android:layout_marginTop="@dimen/dimen_24dp" android:layout_marginBottom="@dimen/dimen_24dp" android:src="@drawable/no_video_image"/>
        <TextView android:textSize="@dimen/dimen_15sp" android:textColor="@color/black" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/wallet_48_dp" android:text="@string/video_will_be_added_soon_text"/>
    </LinearLayout>
    <ProgressBar android:id="@+id/progress_bar" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_margin="@dimen/dimen_32dp" android:layout_centerHorizontal="true"/>
</RelativeLayout>
