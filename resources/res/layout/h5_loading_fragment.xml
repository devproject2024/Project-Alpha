<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:background="@color/h5_nav_bar" android:layout_width="match_parent" android:layout_height="@dimen/h5_title_height">
        <ImageButton android:id="@+id/h5_lv_nav_back_loading" android:background="@android:color/transparent" android:layout_width="48dp" android:layout_height="match_parent" android:src="@drawable/h5_title_bar_back_btn_selector" android:scaleType="centerInside" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
        <View android:layout_gravity="center" android:id="@+id/h5_v_divider_loading" android:background="@color/h5_nav_bar_divider" android:layout_width="0.7dp" android:layout_height="24dp" android:layout_marginRight="12dp" android:layout_toRightOf="@+id/h5_lv_nav_back_loading" android:layout_centerVertical="true"/>
        <RelativeLayout android:orientation="horizontal" android:id="@+id/h5_ll_lv_title_loading" android:paddingRight="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toRightOf="@+id/h5_v_divider_loading" android:layout_centerVertical="true">
            <TextView android:textSize="@dimen/h5_nav_title_text" android:textColor="@color/h5_white" android:id="@+id/h5_ll_lv_nav_title" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <ProgressBar android:id="@+id/h5_nav_loading_loading" android:visibility="invisible" android:layout_width="16dp" android:layout_height="16dp" android:layout_marginLeft="6dp" android:layout_marginRight="6dp" android:indeterminateDrawable="@drawable/h5_title_bar_progress" android:layout_toRightOf="@+id/h5_ll_lv_nav_title" android:layout_centerVertical="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <View android:background="@color/h5_nav_bar_bottomline" android:layout_width="match_parent" android:layout_height="1px"/>
</LinearLayout>
