<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/cart_promo_bg_color" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/rl_enter_promo" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:id="@+id/promocode_lyt" android:paddingLeft="@dimen/dimen_20dp" android:paddingRight="@dimen/dimen_20dp" android:layout_width="match_parent" android:layout_height="40dp">
            <LinearLayout android:focusable="true" android:focusableInTouchMode="true" android:layout_width="0px" android:layout_height="0px"/>
            <EditText android:textSize="15sp" android:textStyle="bold" android:textColor="@color/color_222222" android:textColorHint="@color/color_bcbcbc" android:id="@+id/edit_txt_promocode" android:background="@null" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="5dp" android:hint="@string/have_a_promo_code_enter_here" android:singleLine="true" android:layout_toLeftOf="@+id/ll_options" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:lineSpacingExtra="9sp" android:fontFamily="sans-serif" android:layout_toStartOf="@+id/ll_options"/>
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/ll_options" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_alignParentEnd="true">
                <ImageView android:id="@+id/promo_remove_image" android:padding="5dp" android:clickable="true" android:layout_width="@dimen/dimen_30dp" android:layout_height="@dimen/dimen_30dp" android:layout_toLeftOf="@+id/apply_btn_lyt" app:srcCompat="@drawable/mall_scan_cross"/>
                <RelativeLayout android:id="@+id/apply_btn_lyt" android:background="@drawable/mall_button_tomato" android:paddingLeft="@dimen/dimen_25dp" android:paddingTop="2dp" android:paddingRight="@dimen/dimen_25dp" android:paddingBottom="2dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="10dp" android:layout_marginTop="10dp" android:layout_marginBottom="10dp">
                    <com.paytmmall.artifact.widget.RoboTextView android:textSize="14sp" android:textStyle="bold" android:textColor="@color/white" android:gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/apply" android:layout_centerHorizontal="true" android:layout_centerVertical="true" android:lineSpacingExtra="10sp" android:fontFamily="sans-serif"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
        <View android:id="@+id/view_divider" android:background="@color/cart_promo_bg_color" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginRight="@dimen/dimen_20dp" android:layout_below="@+id/promocode_lyt"/>
        <TextView android:textSize="12sp" android:textColor="@color/red" android:id="@+id/txt_error" android:paddingLeft="20dp" android:paddingTop="5dp" android:paddingRight="10dp" android:paddingBottom="5dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/view_divider"/>
        <View android:id="@+id/view1" android:background="@color/white" android:layout_width="match_parent" android:layout_height="@dimen/dimen_18dp" android:layout_marginTop="@dimen/dimen_25dp" android:layout_below="@+id/txt_error"/>
        <View android:id="@+id/view2" android:background="@color/cart_promo_bg_color" android:layout_width="match_parent" android:layout_height="@dimen/dimen_20dp" android:layout_below="@+id/view1"/>
        <TextView android:textSize="15sp" android:textColor="#999999" android:gravity="center" android:id="@+id/txv_or" android:background="@drawable/mall_circle_border_with_white_bg" android:layout_width="@dimen/dimen_36dp" android:layout_height="@dimen/dimen_36dp" android:layout_marginTop="@dimen/dimen_25dp" android:text="@string/or" android:layout_below="@+id/txt_error" android:layout_centerHorizontal="true" android:lineSpacingExtra="9sp"/>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/root_view" android:background="@color/cart_promo_bg_color" android:paddingTop="@dimen/dimen_22dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/rl_enter_promo">
        <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="@color/color_222222" android:id="@+id/txt_choose_offer" android:paddingLeft="15dp" android:paddingRight="10dp" android:paddingBottom="5dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/choose_from_the_offers_below" android:lineSpacingExtra="9sp" android:fontFamily="sans-serif-medium"/>
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/recycler_view_offers" android:background="@color/cart_promo_bg_color" android:paddingTop="5dp" android:paddingBottom="@dimen/dimen_75dp" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="3dp"/>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/no_offers_layout" android:background="@color/cart_promo_bg_color" android:paddingTop="@dimen/dimen_100dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/rl_enter_promo">
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dimen_40dp" app:srcCompat="@drawable/mall_no_promo_icon"/>
        <TextView android:textSize="22sp" android:textStyle="normal" android:textColor="#000000" android:gravity="center_horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/padding_profile_separator" android:text="@string/no_promo_cart" android:fontFamily="sans-serif"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/lyt_cashback_info" android:background="@drawable/mall_shadow_top" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <LinearLayout android:orientation="vertical" android:background="@color/tp_light_yellow" android:paddingTop="@dimen/dimen_10dp" android:paddingBottom="@dimen/dimen_15dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <com.paytmmall.artifact.widget.RoboTextView android:textSize="11sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/wallet_loyality_cash_back_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_15dp" android:layout_marginRight="@dimen/dimen_10dp" android:text="@string/offer_cash_back_loyality_txt" android:lineSpacingExtra="3.5sp" android:fontFamily="sans-serif"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout android:id="@+id/wishlist_product_filter_container" android:background="#d9989898" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
        <include android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true" layout="@layout/mall_fly_out_filter_lyt_in_pdp"/>
    </RelativeLayout>
</RelativeLayout>
