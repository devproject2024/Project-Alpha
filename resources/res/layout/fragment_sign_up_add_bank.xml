        </RelativeLayout>
        <include android:id="@+id/i_bottom_strip" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true" layout="@layout/bottom_paytm_line"/>
    </RelativeLayout>
</RelativeLayout>
