        <ImageView android:id="@+id/fill" android:paddingRight="@dimen/dimen_20dp" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true" app:srcCompat="@drawable/mall_select_suggest"/>
        <View android:background="@color/color_f4f4f4" android:layout_width="wrap_content" android:layout_height="@dimen/dimen_1dp" android:layout_below="@+id/popular_search_item_text" android:layout_alignLeft="@+id/popular_search_item_text" android:layout_alignStart="@+id/popular_search_item_text"/>
    </RelativeLayout>
</RelativeLayout>
