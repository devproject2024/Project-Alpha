<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/search_header_layout" android:background="@color/color_f4f4f4" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="@dimen/dimen_11sp" android:textStyle="normal" android:textColor="@color/color_6f6f6f" android:id="@+id/header_text" android:paddingLeft="@dimen/dimen_24dp" android:paddingTop="@dimen/dimen_9dp" android:paddingBottom="@dimen/dimen_9dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:textAllCaps="true" android:fontFamily="sans-serif-medium"/>
        <TextView android:textSize="@dimen/dimen_11sp" android:textColor="@color/search_blue" android:id="@+id/clear_text" android:paddingRight="@dimen/dimen_24dp" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/clear_history" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/search_item_text_container" android:background="@color/white" android:paddingLeft="@dimen/dimen_24dp" android:layout_width="match_parent" android:layout_height="wrap_content">
