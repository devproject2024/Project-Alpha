            <com.paytm.utility.RoboTextView android:textSize="12sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/time_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="09:16 AM" android:lineSpacingExtra="0sp" android:fontFamily="sans-serif" app:fontType="1"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true">
            <TextView android:textSize="17sp" android:textStyle="normal" android:textColor="#222222" android:gravity="end" android:layout_gravity="right" android:id="@+id/amount_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="â‚¹2,500" android:lineSpacingExtra="-2sp" android:fontFamily="sans-serif-light"/>
            <com.paytm.utility.RoboTextView android:textSize="14sp" android:textStyle="normal" android:textColor="@color/red" android:gravity="end" android:layout_gravity="right" android:id="@+id/failed_tv" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="@string/failure" android:textAllCaps="true" android:fontFamily="sans-serif-light" app:fontType="3"/>
        </LinearLayout>
    </RelativeLayout>
    <View android:background="#f3f7f8" android:layout_width="match_parent" android:layout_height="2dp" android:layout_marginLeft="20dp" android:layout_marginRight="20dp"/>
</LinearLayout>
