<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/min_kyc_heade_ll" android:paddingLeft="16dp" android:paddingRight="25dp" android:layout_width="match_parent" android:layout_height="60dp">
        <ImageView android:id="@+id/min_kyc_back_iv" android:padding="@dimen/dimen_5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/back_arrow"/>
        <androidx.legacy.widget.Space android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
        <com.paytm.utility.RoboTextView android:textSize="15sp" android:textColor="@color/paytm_light_blue" android:gravity="center_vertical" android:id="@+id/min_kyc_later_tv" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/min_kyc_do_it_later"/>
    </LinearLayout>
    <ScrollView android:id="@+id/min_kyc_parent_scroll_container" android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:paddingLeft="@dimen/dimen_25dp" android:paddingRight="@dimen/dimen_25dp" android:paddingBottom="@dimen/dimen_15dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/dimen_24sp" android:textStyle="bold" android:id="@+id/min_kyc_imp_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_20dp" android:text="@string/kyc_important" android:fontFamily="@string/font_family_roboto_medium"/>
            <ImageView android:id="@+id/min_kyc_cross_iv" android:padding="@dimen/dimen_5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_18dp" android:src="@drawable/ic_close_minkyc" android:layout_alignParentRight="true"/>
            <TextView android:textSize="@dimen/dimen_17sp" android:textColor="#222222" android:id="@+id/min_kyc_imp_desc_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:layout_below="@+id/min_kyc_imp_tv" android:textAlignment="viewStart"/>
            <RadioGroup android:orientation="vertical" android:id="@+id/min_kyc_pan_aadhar_rg" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_20dp" android:layout_below="@+id/min_kyc_imp_desc_tv">
                <androidx.appcompat.widget.AppCompatRadioButton android:textSize="@dimen/dimen_15sp" android:id="@+id/min_kyc_pan_rb" android:paddingLeft="@dimen/dimen_10dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:button="@drawable/btn_radio_holo_light" android:text="@string/kyc_pan_card" android:lineSpacingExtra="2sp"/>
                <androidx.appcompat.widget.AppCompatRadioButton android:textSize="@dimen/dimen_15sp" android:id="@+id/min_kyc_other_doc_rb_passport" android:paddingLeft="@dimen/dimen_10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:button="@drawable/btn_radio_holo_light" android:text="@string/passport" android:lineSpacingExtra="2sp"/>
                <androidx.appcompat.widget.AppCompatRadioButton android:textSize="@dimen/dimen_15sp" android:id="@+id/min_kyc_other_doc_voter_id_rb" android:paddingLeft="@dimen/dimen_10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:button="@drawable/btn_radio_holo_light" android:text="@string/voter_id" android:lineSpacingExtra="2sp"/>
                <androidx.appcompat.widget.AppCompatRadioButton android:textSize="@dimen/dimen_15sp" android:id="@+id/min_kyc_other_doc_driving_rb" android:paddingLeft="@dimen/dimen_10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:button="@drawable/btn_radio_holo_light" android:text="@string/driving_license" android:lineSpacingExtra="2sp"/>
                <androidx.appcompat.widget.AppCompatRadioButton android:textSize="@dimen/dimen_15sp" android:id="@+id/min_kyc_other_doc_jobcard_rb" android:paddingLeft="@dimen/dimen_10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:button="@drawable/btn_radio_holo_light" android:text="@string/nrega_job_card" android:lineSpacingExtra="2sp"/>
            </RadioGroup>
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/min_kyc_pan_aadhar_rg">
                <com.google.android.material.textfield.TextInputLayout android:id="@+id/min_kyc_til_doc_number" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_15dp" android:hint="@string/kyc_passport_number" app:errorEnabled="true">
                    <com.google.android.material.textfield.TextInputEditText android:textSize="16sp" android:textColor="@android:color/black" android:textColorHint="@color/color_222222" android:id="@+id/min_kyc_enter_doc_num_et" android:focusable="true" android:longClickable="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true" android:maxLength="30" android:digits="A BCDEFGHIJKLMNOPQRSTUVWXYZ,0123456789-/()." android:layout_centerHorizontal="true" android:inputType="textCapCharacters"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout android:id="@+id/min_kyc_til_name_on_doc" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/passport_name" android:layout_below="@+id/activity_verify_doc_lyt_number" app:errorEnabled="true">
                    <com.google.android.material.textfield.TextInputEditText android:textSize="16sp" android:textColor="@android:color/black" android:textColorHint="@color/color_222222" android:id="@+id/min_kyc_enter_name_on_doc_et" android:focusable="true" android:longClickable="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true" android:maxLength="60" android:digits="A BCDEFGHIJKLMNOPQRSTUVWXYZ" android:layout_centerHorizontal="true" android:inputType="textCapCharacters"/>
                </com.google.android.material.textfield.TextInputLayout>
                <CheckBox android:textSize="14sp" android:gravity="left" android:id="@+id/min_kyc_self_agree_cb" android:paddingLeft="@dimen/dimen_10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_25dp" android:checked="false" android:button="@drawable/kyc_checkbox" android:text="@string/min_kyc_self_agreement"/>
                <Button android:textSize="16sp" android:textStyle="normal" android:textColor="@android:color/white" android:id="@+id/min_kyc_submit_btn" android:background="@color/paytm_light_blue" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_20dp" android:layout_marginBottom="@dimen/dimen_15dp" android:text="@string/submit" android:layout_above="@+id/activity_verify_doc_doc_heading" android:textAllCaps="false"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>
