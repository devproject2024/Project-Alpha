<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:id="@+id/back_arrow" android:padding="19dp" android:layout_width="?attr/actionBarSize" android:layout_height="?attr/actionBarSize" android:src="@drawable/back_arrow" style="?android:attr/borderlessButtonStyle"/>
    <androidx.core.widget.NestedScrollView android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true" android:layout_below="@+id/back_arrow">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/recurStaticTv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="10dp" android:text="@string/si_recur_for" android:fontFamily="sans-serif"/>
            <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="#222222" android:id="@+id/recurNameTv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="5dp" android:layout_marginRight="150dp" android:layout_below="@+id/recurStaticTv" android:lineSpacingExtra="4sp" android:fontFamily="sans-serif" android:letterSpacing="0.01"/>
            <TextView android:textSize="24sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/rupeesStaticTv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="2dp" android:text="@string/si_rupee" android:layout_toLeftOf="@+id/rupeesTv" android:layout_alignTop="@+id/recurStaticTv" android:fontFamily="sans-serif-light"/>
            <TextView android:textSize="24sp" android:textStyle="bold" android:textColor="#222222" android:id="@+id/rupeesTv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="20dp" android:layout_alignTop="@+id/recurStaticTv" android:layout_alignParentRight="true" android:fontFamily="sans-serif"/>
            <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="#222222" android:gravity="end" android:id="@+id/frequencyTv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="20dp" android:layout_below="@+id/rupeesTv" android:layout_alignParentRight="true" android:fontFamily="sans-serif"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/benifLyt" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_below="@+id/recurNameTv">
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/benifBtnLyt" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#00b9f5" android:id="@+id/benifStaticTv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/si_benif_details" android:lineSpacingExtra="5sp" android:fontFamily="sans-serif"/>
                    <androidx.appcompat.widget.AppCompatImageView android:id="@+id/benifDropDownIV" android:layout_width="13dp" android:layout_height="13dp" android:layout_marginLeft="10dp" app:srcCompat="@drawable/si_benif_lyt_drop_down"/>
                </LinearLayout>
                <RelativeLayout android:id="@+id/benifOpenLyt" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp">
                    <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/benifNameTv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:fontFamily="sans-serif-medium" android:letterSpacing="0.01"/>
                    <TextView android:textSize="13sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/benifAccountStaticTv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_marginRight="5dp" android:text="@string/si_acc_no" android:maxLines="1" android:layout_below="@+id/benifNameTv" android:fontFamily="sans-serif"/>
                    <TextView android:textSize="13sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/benifAccountTv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:maxLines="1" android:layout_toRightOf="@+id/benifAccountStaticTv" android:layout_below="@+id/benifNameTv" android:fontFamily="sans-serif"/>
                    <TextView android:textSize="13sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/benifIfscStaticTv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/si_ifsc" android:layout_below="@+id/benifAccountStaticTv" android:fontFamily="sans-serif"/>
                    <TextView android:textSize="13sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/benifIfscTv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/benifAccountTv" android:layout_alignLeft="@+id/benifAccountTv" android:fontFamily="sans-serif"/>
                    <androidx.appcompat.widget.AppCompatImageView android:id="@+id/benifIconIv" android:background="@drawable/si_bg_white_circle_stroke" android:padding="10dp" android:layout_width="48dp" android:layout_height="48dp" android:layout_alignParentRight="true"/>
                </RelativeLayout>
            </LinearLayout>
            <View android:id="@+id/lineView" android:background="@color/color_f3f7f8" android:layout_width="match_parent" android:layout_height="2dp" android:layout_marginTop="20dp" android:layout_marginBottom="20dp" android:layout_below="@+id/benifLyt"/>
            <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="#222222" android:ellipsize="end" android:id="@+id/paymentTitleTv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:maxLines="1" android:layout_toLeftOf="@+id/resumeBtn" android:layout_below="@+id/lineView" android:layout_alignParentLeft="true" android:lineSpacingExtra="5sp" android:fontFamily="sans-serif-medium" android:letterSpacing="0.01"/>
            <TextView android:textSize="13sp" android:textStyle="normal" android:textColor="#999999" android:ellipsize="end" android:id="@+id/paymentSubtitleTv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:maxLines="1" android:layout_toLeftOf="@+id/resumeBtn" android:layout_below="@+id/paymentTitleTv" android:layout_alignLeft="@+id/paymentTitleTv" android:lineSpacingExtra="6sp" android:fontFamily="sans-serif"/>
            <TextView android:textSize="13sp" android:textStyle="normal" android:textColor="#ffffff" android:gravity="center_horizontal" android:id="@+id/resumeBtn" android:background="@color/paytm_blue" android:paddingLeft="20dp" android:paddingTop="10dp" android:paddingRight="20dp" android:paddingBottom="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="20dp" android:text="@string/si_resume" android:layout_alignTop="@+id/paymentTitleTv" android:layout_alignParentRight="true" android:lineSpacingExtra="3sp" android:fontFamily="sans-serif-medium"/>
            <TextView android:textSize="13sp" android:textStyle="bold" android:textColor="#444444" android:id="@+id/paymentHistoryTitleTv" android:background="#fafbfb" android:paddingLeft="20dp" android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:text="@string/si_payment_history" android:layout_below="@+id/paymentSubtitleTv" android:fontFamily="sans-serif" android:letterSpacing="0.06"/>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/paymentHistoryTitleTv">
                <androidx.recyclerview.widget.RecyclerView android:id="@+id/paymentHistoryRv" android:layout_width="match_parent" android:layout_height="match_parent"/>
                <TextView android:textSize="16sp" android:textStyle="normal" android:textColor="#222222" android:gravity="center" android:id="@+id/noItemTv" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/si_no_history_msg" android:layout_centerInParent="true" android:fontFamily="sans-serif" android:letterSpacing="0.06"/>
            </RelativeLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>
