<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@android:color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
    <View android:background="@color/wallet_separator_bg" android:layout_width="match_parent" android:layout_height="20dp"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/lyt_container" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="13sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/txt_upgrade_usage_limit_btn" android:background="@drawable/bg_btn_blue" android:padding="6dp" android:visibility="gone" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/upgrade_usage_limit" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            <TextView android:textSize="16sp" android:textColor="@android:color/black" android:gravity="left|center_vertical|center_horizontal|center" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/wallet_usage" android:layout_toLeftOf="@+id/txt_upgrade_usage_limit_btn" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <ProgressBar android:id="@+id/progress_bar_limit_status" android:layout_width="match_parent" android:layout_height="5dp" android:progress="50" android:progressDrawable="@drawable/green_horizontal_progress" style="?android:attr/progressBarStyleHorizontal"/>
        <TextView android:textSize="12sp" android:textColor="@color/gray" android:id="@+id/txt_wallet_usage_limit" android:paddingTop="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerVertical="true"/>
    </LinearLayout>
</LinearLayout>
