<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/actionbar_fare_alerts" android:layout_width="match_parent" android:layout_height="57dp">
        <ImageView android:id="@+id/img_alert_sub_back" android:padding="@dimen/dimen_12dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true"/>
        <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/title_blue" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/fare_alerts" android:layout_centerInParent="true"/>
    </RelativeLayout>
    <View android:background="@color/color_dcdcdc" android:layout_width="match_parent" android:layout_height="@dimen/dimen_1dp" android:layout_below="@+id/actionbar_fare_alerts"/>
    <TextView android:textSize="10sp" android:textStyle="normal" android:textColor="@color/title_blue" android:id="@+id/txt_fare_alert_home_terms" android:padding="@dimen/dimen_15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dimen_5dp" android:text="@string/terms_and_conditions" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" android:fontFamily="sans-serif"/>
    <RelativeLayout android:id="@+id/lyt_note_subscribed" android:background="@color/color_f2f7fc" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_1dp" android:layout_below="@+id/actionbar_fare_alerts">
        <ImageView android:id="@+id/img_fare_alert_list_bell" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_6dp" android:layout_marginRight="@dimen/dimen_6dp" android:layout_centerVertical="true"/>
        <TextView android:textSize="12sp" android:textColor="@color/color_666666" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/note_subscribe_alert" android:layout_toRightOf="@+id/img_fare_alert_list_bell" android:layout_centerVertical="true" android:lineSpacingExtra="3sp"/>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:paddingLeft="@dimen/dimen_15dp" android:paddingRight="@dimen/dimen_15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:layout_below="@+id/lyt_note_subscribed">
        <RelativeLayout android:id="@+id/journey_route" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:id="@+id/rel_sep_route" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
                <ImageView android:layout_gravity="bottom" android:id="@+id/sep_route" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentBottom="true"/>
            </LinearLayout>
            <RelativeLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:id="@+id/source_city" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:minHeight="48dp" android:layout_toLeftOf="@+id/rel_sep_route" android:layout_alignParentLeft="true">
                <com.paytm.utility.RoboTextView android:textSize="@dimen/cart_14sp" android:textColor="@color/flight_text_color" android:id="@+id/label_source" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/enter_origin" android:layout_alignParentLeft="true" app:fontType="2"/>
                <com.paytm.utility.RoboTextView android:textSize="@dimen/cart_16sp" android:textColor="@color/flight_from_to_color" android:id="@+id/source_city_code" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="@string/enter_origin" android:layout_below="@+id/label_source" android:layout_alignParentLeft="true" android:layout_alignParentStart="true" app:fontType="2"/>
                <com.paytm.utility.RoboTextView android:textSize="@dimen/cart_12sp" android:textColor="@color/flight_city_color" android:ellipsize="end" android:id="@+id/source" android:background="@android:color/transparent" android:visibility="invisible" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/enter_origin" android:maxLines="1" android:layout_below="@+id/source_city_code" android:layout_alignParentLeft="true" android:layout_centerVertical="true" app:fontType="2"/>
            </RelativeLayout>
            <ImageView android:id="@+id/sep_line_1" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="8dp" android:layout_toLeftOf="@+id/rel_sep_route" android:layout_below="@+id/source_city" android:layout_alignLeft="@+id/source_city" app:srcCompat="@color/flight_line_color"/>
            <RelativeLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:id="@+id/destination_city" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:layout_marginTop="12dp" android:minHeight="48dp" android:layout_toRightOf="@+id/rel_sep_route" android:layout_alignParentRight="true">
                <com.paytm.utility.RoboTextView android:textSize="@dimen/cart_14sp" android:textColor="@color/flight_text_color" android:gravity="right" android:id="@+id/label_desination" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/enter_destination" android:layout_alignParentLeft="true" android:layout_alignParentRight="true" app:fontType="2"/>
                <com.paytm.utility.RoboTextView android:textSize="@dimen/cart_16sp" android:textColor="@color/flight_from_to_color" android:gravity="right" android:layout_gravity="right" android:id="@+id/dest_city_code" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="@string/enter_destination" android:layout_below="@+id/label_desination" android:layout_alignParentRight="true" app:fontType="2"/>
                <com.paytm.utility.RoboTextView android:textSize="@dimen/cart_12sp" android:textColor="@color/flight_city_color" android:ellipsize="end" android:gravity="right" android:layout_gravity="right" android:id="@+id/destination" android:background="@android:color/transparent" android:visibility="invisible" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/enter_destination" android:maxLines="1" android:layout_below="@+id/dest_city_code" android:layout_alignParentLeft="true" android:layout_alignParentRight="true" android:layout_centerVertical="true" app:fontType="2"/>
            </RelativeLayout>
            <ImageView android:id="@+id/sep_line_2" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="8dp" android:layout_toRightOf="@+id/rel_sep_route" android:layout_below="@+id/source_city" android:layout_alignRight="@+id/destination_city" app:srcCompat="@color/flight_line_color"/>
        </RelativeLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/journey_date" android:layout_width="match_parent" android:layout_height="65dp" android:layout_marginTop="@dimen/dimen_10sp">
            <RelativeLayout android:id="@+id/departure_date_lyt" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
                <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_centerInParent="true">
                    <com.paytm.utility.RoboTextView android:textSize="@dimen/cart_14sp" android:textColor="@color/flight_text_color" android:id="@+id/label_depart_on" android:tag="@string/select_dept_date" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/select_dept_date" android:layout_alignParentLeft="true" app:fontType="2"/>
                    <RelativeLayout android:orientation="vertical" android:id="@+id/departure_date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:layout_below="@+id/label_depart_on">
                        <com.paytm.utility.RoboTextView android:textSize="@dimen/cart_16sp" android:textColor="@color/flight_from_to_color" android:id="@+id/source_date" android:tag="@string/select_dept_date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/select_dept_date" android:layout_alignParentLeft="true" app:fontType="2"/>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
        <ImageView android:id="@+id/sep_2" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="6dp" app:srcCompat="@color/flight_line_color"/>
        <Button android:textSize="17sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/btn_subscribe_alert" android:background="@drawable/bg_btn_blue" android:layout_width="match_parent" android:layout_height="57dp" android:layout_marginTop="@dimen/dimen_40dp" android:text="@string/subscribe" android:textAllCaps="false"/>
        <TextView android:textSize="11sp" android:textStyle="normal" android:textColor="@color/color_adadad" android:gravity="center_horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:text="@string/note_alert_notifed" android:lineSpacingExtra="4sp" android:fontFamily="sans-serif"/>
    </LinearLayout>
</RelativeLayout>
