<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
    <com.paytm.utility.RoboTextView android:textSize="16sp" android:textColor="@android:color/black" android:gravity="center" android:layout_gravity="center" android:id="@+id/txt_title" android:padding="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" app:fontType="4"/>
    <View android:background="@color/paytm_blue" android:layout_width="match_parent" android:layout_height="1dp"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/lyt_apply_promo_code" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content">
        <EditText android:id="@+id/edit_promo_code" android:background="@drawable/transparent_border" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="25dp" android:layout_marginRight="20dp" android:hint="@string/promo_code_hint" android:maxLines="1"/>
        <View android:id="@+id/promo_code_separator" android:background="@drawable/edit_view_divider" android:layout_width="match_parent" android:layout_height="6dp" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:contentDescription="@string/app_name"/>
        <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="@color/red" android:id="@+id/txt_apply_error_msg" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="12dp" android:layout_marginRight="10dp" app:fontType="2"/>
        <Button android:textSize="18sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/btn_apply" android:background="@drawable/bg_square_btn_blue" android:padding="8dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="25dp" android:textAllCaps="false"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/lyt_promo_code_applied" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="15dp" android:layout_marginRight="10dp">
            <ImageView android:id="@+id/img_success_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/automatic_success_button" android:layout_centerVertical="true"/>
            <com.paytm.utility.RoboTextView android:textSize="18sp" android:ellipsize="end" android:id="@+id/txt_promo_code" android:paddingLeft="6dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true" android:layout_toLeftOf="@+id/tx_its_done" android:layout_toRightOf="@+id/img_success_icon" android:layout_centerVertical="true" app:fontType="2"/>
            <com.paytm.utility.RoboTextView android:textSize="13sp" android:textColor="@color/wallet_promo_success_green" android:id="@+id/tx_its_done" android:paddingLeft="6dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/awesome_its_done" android:layout_alignParentRight="true" android:layout_centerVertical="true" app:fontType="2"/>
        </RelativeLayout>
        <View android:background="@color/separators" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="10dp" android:layout_marginTop="15dp" android:layout_marginRight="10dp"/>
        <com.paytm.utility.RoboTextView android:textSize="16sp" android:textColor="@color/bus_ticket_grey" android:id="@+id/txt_promo_status" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="15dp" android:layout_marginRight="10dp" android:layout_alignParentRight="true" android:layout_centerVertical="true" app:fontType="2"/>
        <Button android:textSize="18sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/btn_ok" android:background="@drawable/bg_square_btn_blue" android:padding="8dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="@string/done" android:textAllCaps="false"/>
    </LinearLayout>
</LinearLayout>
