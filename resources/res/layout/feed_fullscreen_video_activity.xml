<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/root" android:tag="layout/feed_fullscreen_video_activity_0" android:background="@color/feed_black" android:paddingTop="40dp" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:id="@+id/main_media_frame" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerInParent="true">
        <com.google.android.exoplayer2.ui.SimpleExoPlayerView android:id="@+id/playerView" android:layout_width="match_parent" android:layout_height="wrap_content" app:controller_layout_id="@layout/exoplayer_custom_playback_controls" app:hide_on_touch="false"/>
    </FrameLayout>
    <com.makeramen.roundedimageview.RoundedImageView android:id="@+id/source_image" android:tag="binding_1" android:layout_width="@dimen/feed_avatar_size" android:layout_height="@dimen/feed_avatar_size" android:layout_marginLeft="@dimen/feed_start_margin" android:layout_marginTop="@dimen/feed_10dp" android:scaleType="centerCrop" android:contentDescription="@string/feed_user_avatar" android:layout_marginStart="@dimen/feed_start_margin" app:riv_corner_radius="@dimen/publisher_round_corner_radius" app:srcCompat="@drawable/feed_ic_placeholder"/>
    <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="@color/feed_white" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/provider_name" android:tag="binding_2" android:focusable="true" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="2" android:layout_alignTop="@+id/source_image" android:layout_alignBottom="@+id/source_image" android:fontFamily="sans-serif-medium" android:layout_marginStart="@dimen/feed_marging_start_source_name" android:layout_toEndOf="@+id/source_image"/>
    <TextView android:textSize="14sp" android:id="@+id/provider_follow" android:background="@drawable/feed_follow_border" android:paddingLeft="15dp" android:paddingTop="7dp" android:paddingRight="15dp" android:paddingBottom="7dp" android:focusable="true" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/feed_10dp" android:layout_marginRight="@dimen/feed_20dp" android:text="@string/follow" android:layout_alignTop="@+id/source_image" android:layout_alignParentRight="true" style="@style/FeedColorAccent"/>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/likeShareContainer" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <ImageView android:id="@+id/ivLike" android:paddingLeft="@dimen/feed_20dp" android:paddingBottom="@dimen/feed_20dp" android:layout_width="wrap_content" android:layout_height="40dp" android:adjustViewBounds="true" app:srcCompat="@drawable/feed_ic_like_svg"/>
        <TextView android:textSize="11sp" android:textColor="@color/feed_comment_count_color" android:id="@+id/tvLike" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginRight="@dimen/feed_10dp"/>
        <ImageView android:id="@+id/ivComment" android:tag="binding_3" android:paddingLeft="@dimen/feed_20dp" android:paddingBottom="@dimen/feed_20dp" android:layout_width="wrap_content" android:layout_height="40dp" android:adjustViewBounds="true" app:srcCompat="@drawable/feed_ic_comment"/>
        <TextView android:textSize="11sp" android:textColor="@color/feed_comment_count_color" android:id="@+id/tvComment" android:tag="binding_4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginRight="@dimen/feed_10dp"/>
        <ImageView android:id="@+id/ivShare" android:tag="binding_5" android:paddingLeft="@dimen/feed_20dp" android:paddingBottom="@dimen/feed_20dp" android:layout_width="wrap_content" android:layout_height="40dp" android:adjustViewBounds="true" app:srcCompat="@drawable/feed_ic_share"/>
        <TextView android:textSize="11sp" android:textColor="@color/feed_comment_count_color" android:id="@+id/tvShare" android:tag="binding_6" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginRight="@dimen/feed_10dp"/>
        <View android:layout_width="@dimen/feed_10dp" android:layout_height="@dimen/feed_10dp" android:layout_weight="1"/>
        <ImageView android:id="@+id/ivBookmark" android:paddingLeft="@dimen/feed_20dp" android:paddingBottom="@dimen/feed_20dp" android:layout_width="wrap_content" android:layout_height="45dp" android:layout_marginRight="@dimen/feed_20dp" android:adjustViewBounds="true" app:srcCompat="@drawable/feed_ic_unbookmark"/>
    </LinearLayout>
    <ProgressBar android:id="@+id/progressBar" android:visibility="gone" android:layout_width="64dp" android:layout_height="64dp" android:layout_centerInParent="true" android:indeterminateTint="@color/feed_colorAccent"/>
</RelativeLayout>
