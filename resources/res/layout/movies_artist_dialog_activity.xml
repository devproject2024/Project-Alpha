<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/id_root_lin_layout" android:paddingLeft="10dp" android:paddingTop="20dp" android:paddingRight="10dp" android:paddingBottom="40dp" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:id="@+id/artist_container" android:background="@drawable/bg_rounded_white_rect" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_centerInParent="true">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:id="@+id/artistImage" android:layout_width="120dp" android:layout_height="120dp" android:layout_marginTop="24dp" android:layout_centerHorizontal="true"/>
            <com.paytm.utility.RoboTextView android:textSize="18sp" android:textColor="@color/color_222222" android:id="@+id/artistTitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_below="@+id/artistImage" android:layout_centerHorizontal="true" app:fontType="3"/>
            <ImageView android:id="@+id/id_artist_dialog_close" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="24dp" android:layout_marginRight="20dp" android:src="@drawable/ic_close_cst_feedback" android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <ScrollView android:scrollbarSize="4dp" android:scrollbarThumbVertical="@color/bargain_date" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginRight="10dp" android:layout_marginBottom="20dp" android:fadeScrollbars="false">
            <TextView android:textSize="15sp" android:textColor="@color/color_222222" android:id="@+id/artistdesc" android:paddingBottom="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_24dp" android:layout_marginTop="11dp" android:layout_marginRight="@dimen/dimen_14dp" android:lineSpacingExtra="8sp" app:fontType="1"/>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
