<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:gravity="center" android:id="@+id/activity_show_code_toolbar" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="4dp">
        <RelativeLayout android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:id="@+id/activity_show_code_btn_back" android:padding="@dimen/dimen_5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:src="@drawable/back_arrow" android:layout_centerVertical="true" android:contentDescription="@string/back_button" android:layout_marginStart="12dp"/>
            <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/activity_show_code_header" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/dimen_5dp" android:layout_centerInParent="true">
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/action_bar_logo_paytm" android:contentDescription="TODO"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    <FrameLayout android:orientation="vertical" android:id="@+id/rly_selectbank_container" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginBottom="70dp" android:layout_below="@+id/activity_show_code_toolbar"/>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:background="@drawable/background_top_round_showcode" android:paddingTop="7dp" android:paddingBottom="7dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/dimen_12sp" android:textColor="@color/color_222222" android:id="@+id/activity_show_code_heading2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/p2b_wallet_rs"/>
            <TextView android:textSize="@dimen/dimen_12sp" android:textColor="@color/color_00b9f5" android:id="@+id/tv_add_money" android:paddingLeft="9dp" android:paddingRight="9dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="1dp" android:text="@string/add_money" android:layout_marginStart="1dp"/>
        </LinearLayout>
        <TextView android:textSize="@dimen/dimen_12sp" android:gravity="center" android:layout_gravity="center" android:id="@+id/tv_postpaid" android:background="@color/white" android:paddingLeft="17dp" android:paddingTop="12dp" android:paddingRight="17dp" android:paddingBottom="12dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="1dp" android:layout_marginStart="1dp"/>
    </LinearLayout>
</RelativeLayout>
