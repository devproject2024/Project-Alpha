<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/select_airport_lyt" android:background="#80000000" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:id="@+id/airport_lyt" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:id="@+id/search_dest_lyt" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:layout_gravity="end" android:id="@+id/flight_search_close_view" android:padding="@dimen/dimen_24dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RelativeLayout android:layout_gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="1">
                <EditText android:textSize="@dimen/dimen_17sp" android:textColor="@color/dark_black" android:textColorHint="@color/flight_tab_divider_color" android:id="@+id/city_search" android:background="@android:color/transparent" android:paddingLeft="@dimen/dimen_19dp" android:paddingBottom="@dimen/dimen_15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true" android:layout_centerVertical="true" android:inputType="text" android:imeOptions="actionDone"/>
            </RelativeLayout>
            <View android:id="@+id/source_city_devider" android:background="@color/flight_tab_divider_color" android:visibility="visible" android:layout_width="match_parent" android:layout_height="@dimen/dimen_1dp" android:layout_marginLeft="@dimen/dimen_15dp"/>
            <View android:id="@+id/dest_city_devider" android:background="@color/flight_tab_divider_color" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/dimen_1dp" android:layout_marginRight="@dimen/dimen_27dp"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
            <RelativeLayout android:orientation="vertical" android:id="@+id/suggestion_lyt" android:paddingLeft="@dimen/dimen_15dp" android:paddingTop="@dimen/dimen_12dp" android:paddingRight="@dimen/dimen_15dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="@dimen/dimen_17sp" android:textColor="@color/color_000000" android:id="@+id/no_suggestions_found" android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/no_suggestions_found"/>
                <TextView android:textSize="@dimen/dimen_15sp" android:textColor="@color/dark_gray" android:id="@+id/message_verify_text" android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/flight_search_error_msg" android:layout_below="@+id/no_suggestions_found"/>
            </RelativeLayout>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/suggestion_lyt">
                <TextView android:textSize="13sp" android:textColor="@color/red" android:id="@+id/airport_same_error_message" android:background="@android:color/transparent" android:padding="@dimen/dimen_5dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_10dp" android:text="@string/flight_selected_destination_is_same_as_origin"/>
                <ListView android:id="@+id/airport_listview" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent" android:divider="@null" android:dividerHeight="@dimen/dimen_0dp" android:layout_below="@+id/airport_same_error_message"/>
                <ProgressBar android:id="@+id/progress_city" android:layout_width="wrap_content" android:layout_height="wrap_content" android:indeterminateDrawable="@drawable/pre_f_flight_progress_large_holo" android:layout_centerInParent="true"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <FrameLayout android:id="@+id/fragment_container" android:background="@color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent"/>
</LinearLayout>
