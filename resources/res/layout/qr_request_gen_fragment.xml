<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/qr_fragment_container" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:background="@color/white" android:padding="10dp" android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:gravity="center" android:orientation="vertical" android:id="@+id/wave_bg" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:layout_marginBottom="@dimen/dimen_10dp">
            <EditText android:textSize="16sp" android:id="@+id/qr_request_money_amount" android:background="@drawable/transparent_border" android:paddingLeft="10dp" android:paddingRight="10dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/amount_rs_hint" android:singleLine="true" android:inputType="numberDecimal"/>
            <View android:id="@+id/amount_separator" android:background="@drawable/edit_view_divider" android:layout_width="match_parent" android:layout_height="6dp" android:layout_below="@+id/qr_request_money_amount" android:contentDescription="@string/app_name"/>
            <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="@color/wallet_error" android:id="@+id/txt_amount_error" android:paddingLeft="10dp" android:paddingTop="5dp" android:paddingRight="10dp" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="wrap_content" android:drawableRight="@drawable/in_field_error_icon" android:layout_below="@+id/amount_separator" android:drawableEnd="@drawable/in_field_error_icon" app:fontType="2"/>
        </RelativeLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/qr_reuest_money_comments_container" android:layout_width="match_parent" android:layout_height="wrap_content">
            <EditText android:textSize="16sp" android:id="@+id/qr_request_remarks" android:background="@drawable/transparent_border" android:paddingLeft="10dp" android:paddingRight="10dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/wallet_comment_hint" android:singleLine="true" android:inputType="none"/>
            <View android:id="@+id/remarks_separator" android:background="@drawable/edit_view_divider" android:layout_width="match_parent" android:layout_height="6dp" android:contentDescription="@string/app_name"/>
        </LinearLayout>
        <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="@color/wallet_error" android:id="@+id/dummy_error" android:paddingLeft="10dp" android:paddingTop="5dp" android:paddingRight="10dp" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dimen_10dp" android:drawableRight="@drawable/in_field_error_icon" android:layout_below="@+id/amount_separator" android:drawableEnd="@drawable/in_field_error_icon" app:fontType="2"/>
        <Button android:textSize="18sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/gen_qr_btn" android:background="@drawable/bg_btn_blue" android:layout_width="match_parent" android:layout_height="40dp" android:text="@string/gen_qr_code" android:textAllCaps="false"/>
    </LinearLayout>
</LinearLayout>
