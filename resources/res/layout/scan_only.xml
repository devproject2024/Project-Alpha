<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:background="#000000" android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:id="@+id/capture_layout" android:background="#000000" android:layout_width="match_parent" android:layout_height="match_parent">
            <SurfaceView android:id="@+id/preview_view" android:layout_width="match_parent" android:layout_height="match_parent"/>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_16dp" android:layout_marginTop="@dimen/dimen_5dp" android:layout_marginRight="@dimen/dimen_16dp" android:layout_alignParentTop="true">
                <ImageView android:id="@+id/cross_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/scan_cross" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:contentDescription="TODO" android:layout_alignParentStart="true"/>
                <ImageView android:textColor="@color/white" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:src="@drawable/paytm_fast_scan" android:layout_toRightOf="@+id/cross_icon" android:layout_centerInParent="true" android:contentDescription="TODO" android:layout_marginStart="@dimen/dimen_20dp" android:layout_toEndOf="@+id/cross_icon"/>
                <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_alignParentEnd="true">
                    <ImageView android:id="@+id/iv_my_qr" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/my_qr" android:contentDescription="TODO"/>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_alignParentEnd="true">
                <ImageView android:id="@+id/qr_header_flash_icon" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/flash_off" android:layout_alignTop="@+id/viewfinder_view" android:layout_alignRight="@+id/viewfinder_view" android:contentDescription="@string/tb_flash_off" android:layout_alignEnd="@+id/viewfinder_view"/>
                <ImageView android:id="@+id/gallery_icon" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/gallery_icon" android:contentDescription="@string/tb_gallery"/>
            </LinearLayout>
            <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent">
                <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_15sp" android:textStyle="normal" android:textColor="@color/white" android:gravity="center" android:layout_gravity="top" android:id="@+id/tvFastScan" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_30dp" android:layout_marginTop="@dimen/dimen_76dp" android:layout_marginRight="@dimen/dimen_30dp" android:text="@string/fast_qr_scan" android:lineSpacingExtra="7sp" android:contentDescription="@string/tb_fast_qr_scan" android:fontFamily="sans-serif" app:fontType="2"/>
                <com.google.zxing.client.android.ViewfinderView android:id="@+id/viewfinder_view" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            </FrameLayout>
            <com.google.zxing.client.android.ViewfinderView android:id="@+id/viewfinder_view" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignBottom="@+id/linearLayout4" android:layout_alignParentLeft="true" android:layout_alignParentStart="true"/>
            <TextView android:textSize="@dimen/dimen_17sp" android:textStyle="bold" android:textColor="@color/white" android:gravity="center" android:id="@+id/status_view" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="25dp" android:text="@string/msg_default_status" android:layout_above="@+id/viewfinder_view"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/linearLayout4" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_alignParentBottom="true" android:layout_alignParentStart="true">
                <LinearLayout android:layout_gravity="center_horizontal" android:orientation="horizontal" android:id="@+id/ll_shop_not_accepting" android:padding="@dimen/dimen_2dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="@color/white" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/tv_shop_not_accepting" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dimen_100dp" android:text="@string/shop_not_accepting_payment" android:shadowColor="#99000000" android:shadowDy="2" android:shadowRadius="4" android:lineSpacingExtra="3sp" android:fontFamily="sans-serif"/>
                    <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="@color/paytm_blue" android:gravity="center" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/qr_report_here" android:shadowColor="#99000000" android:shadowDy="2" android:shadowRadius="4" android:lineSpacingExtra="3sp" android:fontFamily="sans-serif"/>
                </LinearLayout>
                <TextView android:textSize="12sp" android:textColor="@color/white" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/capture_balance_textview" android:paddingLeft="50dp" android:paddingRight="50dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginBottom="15dp" android:text="@string/no_need_to_wait"/>
            </LinearLayout>
            <com.airbnb.lottie.LottieAnimationView android:layout_gravity="center" android:id="@+id/wallet_loader" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="30dp" android:layout_centerInParent="true" app:amount="5" app:animationDirectionbundle="-1" app:circleSize="15" app:duration="@android:integer/config_mediumAnimTime" app:endColor="@color/light_blue_A400" app:startColor="@color/light_blue_A700"/>
        </RelativeLayout>
        <TextView android:textColor="@color/status_text" android:gravity="center" android:layout_gravity="bottom" android:id="@+id/status_view" android:padding="15dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/msg_default_status"/>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
            <LinearLayout android:orientation="vertical" android:id="@+id/show_otp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="@dimen/dimen_14sp" android:textColor="#ecaf15" android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:id="@+id/alignQrAlert" android:padding="@dimen/dimen_5dp" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/align_qr_alert"/>
                <TextView android:textSize="17sp" android:textColor="@color/paytm_blue" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/capture_show_code_btn" android:padding="@dimen/dimen_5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/recent_pay_using_otp" android:contentDescription="@string/tb_show_paytm_code_or_otp"/>
            </LinearLayout>
            <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:id="@+id/recent_ll" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/show_otp">
                <TextView android:textSize="@dimen/dimen_12sp" android:textStyle="normal" android:textColor="@color/white" android:paddingLeft="@dimen/dimen_25dp" android:paddingRight="@dimen/dimen_25dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/cp_recents" android:fontFamily="sans-serif-medium"/>
                <androidx.recyclerview.widget.RecyclerView android:orientation="horizontal" android:id="@+id/recent_rv" android:paddingLeft="@dimen/dimen_25dp" android:paddingRight="@dimen/dimen_25dp" android:paddingBottom="@dimen/dimen_5dp" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_5dp" android:divider="@null"/>
            </LinearLayout>
            <TableRow android:gravity="center" android:id="@+id/refer_shop_tr" android:background="#99000000" android:layout_width="match_parent" android:layout_height="@dimen/dimen_40dp" android:layout_below="@+id/recent_ll" android:layout_centerInParent="true">
                <TextView android:textColor="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/scan_shop_not_accepting" android:contentDescription="@string/tb_scan_shop_not_accepting"/>
                <TextView android:textColor="@color/color_33b5e5" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/scan_refer_shop"/>
            </TableRow>
        </RelativeLayout>
        <RelativeLayout android:layout_gravity="center" android:id="@+id/capture_permission_denied_layout" android:background="@color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
            <androidx.appcompat.widget.Toolbar android:id="@+id/paysend_toolbar" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
                <RelativeLayout android:id="@+id/toolbar_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentTop="true">
                    <ImageView android:id="@+id/toolbar_btn_back" android:paddingLeft="@dimen/dimen_5dp" android:paddingTop="@dimen/dimen_15dp" android:paddingRight="@dimen/dimen_15dp" android:paddingBottom="@dimen/dimen_15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/back_arrow" android:layout_centerVertical="true" android:contentDescription="TODO" android:paddingStart="@dimen/dimen_5dp" android:paddingEnd="@dimen/dimen_15dp"/>
                    <com.paytm.utility.RoboTextView android:textSize="17dp" android:textColor="@color/black" android:id="@+id/pay_send_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/qr_scan" android:layout_toRightOf="@+id/toolbar_btn_back" android:layout_centerVertical="true" android:onClick="onClick" android:layout_toEndOf="@+id/toolbar_btn_back" app:fontType="3"/>
                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerInParent="true">
                <ImageView android:id="@+id/image" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:src="@drawable/camera_permission" android:contentDescription="TODO"/>
                <TextView android:textSize="18sp" android:textColor="@color/black" android:gravity="center" android:id="@+id/camera_access" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/camera_access" android:layout_below="@+id/image"/>
                <TextView android:textSize="16sp" android:textStyle="normal" android:textColor="@color/payment_success_text_grey" android:gravity="center" android:id="@+id/empty" android:paddingLeft="30dp" android:paddingRight="30dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/no_camera_permission_message_scan_only" android:layout_below="@+id/camera_access" android:layout_centerHorizontal="true"/>
                <Button android:textSize="18sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/capture_enable_camera_btn" android:background="@drawable/bg_btn_blue" android:paddingLeft="30dp" android:paddingRight="30dp" android:layout_width="wrap_content" android:layout_height="50dp" android:layout_marginTop="20dp" android:layout_marginBottom="50dp" android:text="@string/enable_camera" android:layout_below="@+id/empty" android:layout_centerHorizontal="true" android:textAllCaps="false"/>
            </RelativeLayout>
            <LinearLayout android:orientation="vertical" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
                <TextView android:textSize="17sp" android:textColor="@color/paytm_blue" android:layout_gravity="center_horizontal" android:id="@+id/permission_show_code_btn" android:padding="5dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="25dp" android:text="@string/show_code_button"/>
                <TextView android:textSize="@dimen/dimen_14sp" android:textColor="#666666" android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:id="@+id/permission_balance_textview" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="35dp" android:layout_marginBottom="15dp" android:text="@string/no_need_to_wait" android:layout_below="@+id/permission_show_code_btn"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout android:orientation="vertical" android:background="#000000" android:paddingBottom="40dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="90dp" android:layout_alignParentTop="true">
            <RelativeLayout android:gravity="center_vertical" android:id="@+id/p2p_invoker_tv" android:paddingLeft="40dp" android:paddingRight="40dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp">
                <ImageView android:id="@+id/mobile_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="5dp" android:src="@drawable/mobile_icon" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:contentDescription="TODO" android:layout_marginEnd="5dp" android:layout_alignParentStart="true"/>
                <TextView android:textSize="@dimen/dimen_17sp" android:textColor="#999999" android:layout_gravity="left|center_vertical|center_horizontal|center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/mobile_number" android:layout_toRightOf="@+id/mobile_icon" android:layout_centerVertical="true" android:layout_toEndOf="@+id/mobile_icon"/>
                <ImageView android:layout_gravity="left|center_vertical|center_horizontal|center" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/mobile_91" android:layout_toRightOf="@+id/mobile_icon" android:layout_centerVertical="true" android:contentDescription="TODO" android:layout_toEndOf="@+id/mobile_icon"/>
                <ImageView android:id="@+id/img_p2p_contact_picker" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/contacts_black" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:contentDescription="TODO" android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <View android:background="#999999" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="40dp" android:layout_marginRight="40dp" android:layout_below="@+id/p2p_invoker_tv"/>
        </RelativeLayout>
        <TextView android:textSize="@dimen/dimen_12sp" android:gravity="center" android:background="@drawable/circle_black" android:visibility="gone" android:layout_width="40dp" android:layout_height="40dp" android:layout_marginTop="70dp" android:text="@string/capture_or" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <include android:id="@+id/lyt_my_qr" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" layout="@layout/fragment_my_qr"/>
</FrameLayout>
