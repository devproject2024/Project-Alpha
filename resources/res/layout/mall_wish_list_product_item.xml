<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/wishlist_product_detail_lyt" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp">
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dimen_15sp">
        <ImageView android:id="@+id/wish_list_remove_menu" android:paddingLeft="25dp" android:paddingTop="11dp" android:paddingRight="17dp" android:paddingBottom="17dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_alignParentRight="true" android:layout_alignParentEnd="true" app:srcCompat="@drawable/mall_remove_cart_item"/>
        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/wish_list_image" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="15dp" android:layout_alignParentRight="true" android:layout_alignParentEnd="true">
            <RelativeLayout android:id="@+id/wish_list_image_lyt" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <RelativeLayout android:id="@+id/wish_list_product_image_lyt" android:background="@drawable/mall_circle_grey" android:padding="11dp" android:visibility="visible" android:layout_width="@dimen/dimen_70dp" android:layout_height="@dimen/dimen_70dp" android:layout_marginTop="10dp" android:layout_marginRight="17dp" android:layout_centerInParent="true">
                    <ImageView android:layout_gravity="center" android:id="@+id/wishlist_item_image" android:layout_width="60dp" android:layout_height="60dp" android:layout_centerInParent="true" android:contentDescription="@string/row_product_image"/>
                    <ProgressBar android:id="@+id/wish_list_image_progress_bar" android:background="@color/white" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true"/>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="@dimen/dimen_15sp">
            <com.paytmmall.artifact.widget.RoboTextView android:textColor="#ff000000" android:orientation="vertical" android:id="@+id/wish_list_product_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_alignParentStart="true"/>
            <com.paytmmall.artifact.widget.RoboTextView android:textSize="11dp" android:textColor="@color/cart_black1" android:id="@+id/wish_list_product_seller_name_by" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="8dp" android:text="@string/by" app:fontType="2"/>
            <com.paytmmall.artifact.widget.RoboTextView android:textSize="@dimen/dimen_15sp" android:textColor="@color/paytm_blue" android:id="@+id/wishlist_out_of_stock" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" app:fontType="2"/>
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="32dp">
                <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:id="@+id/select_attributes" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginRight="15dp"/>
                <LinearLayout android:orientation="vertical" android:id="@+id/selected_attributes" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginRight="15dp"/>
                <com.paytmmall.artifact.widget.RoboTextView android:textSize="13sp" android:textColor="@color/cart_black1" android:id="@+id/wishlist_item_discount" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_marginTop="10dp" android:text="" android:singleLine="true" app:fontType="2"/>
                <com.paytmmall.artifact.widget.RoboTextView android:textSize="13sp" android:textColor="#9a9a9a" android:id="@+id/wishlist_item_original_price" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_marginTop="10dp" android:text="" android:singleLine="true" app:fontType="2"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:id="@+id/price_drop_layout" android:padding="5dp" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp">
                <ImageView android:paddingTop="3dp" android:paddingRight="3dp" android:layout_width="25dp" android:layout_height="25dp" app:srcCompat="@drawable/mall_price_drop_icon"/>
                <com.paytmmall.artifact.widget.RoboTextView android:textSize="@dimen/dimen_15sp" android:textColor="@color/green" android:gravity="center" android:layout_gravity="center" android:id="@+id/price_drop" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="price drop" app:fontType="2"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <ImageView android:layout_width="match_parent" android:layout_height="1dp" app:srcCompat="@color/divider_color"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/wishlist_offer_lyt" android:paddingLeft="25dp" android:paddingBottom="15dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:orientation="horizontal" android:paddingRight="20dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp">
            <com.paytmmall.artifact.widget.RoboTextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/cart_blue" android:id="@+id/wishlist_new_offer" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerVertical="true" app:fontType="4"/>
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true" app:srcCompat="@drawable/mall_arrow_right"/>
        </RelativeLayout>
    </LinearLayout>
    <ImageView android:layout_width="match_parent" android:layout_height="1dp" app:srcCompat="@color/divider_color"/>
    <LinearLayout android:orientation="horizontal" android:id="@+id/no_applied_additional_offers_text" android:paddingLeft="10dp" android:paddingTop="8dp" android:paddingRight="20dp" android:paddingBottom="8dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content">
        <com.paytmmall.artifact.widget.RoboTextView android:textSize="@dimen/dimen_15sp" android:textStyle="bold" android:textColor="@color/cart_blue" android:gravity="center" android:id="@+id/wishlist_remove_text" android:padding="6dp" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/menu_delete" android:layout_weight="1" app:fontType="3"/>
        <com.paytmmall.artifact.widget.RoboTextView android:textSize="@dimen/dimen_15sp" android:textStyle="bold" android:textColor="@color/cart_blue" android:gravity="center" android:id="@+id/wishlist_move_to_bag" android:padding="6dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/move_to_bag" android:layout_weight="1" app:fontType="3" app:srcCompat="@drawable/mall_arrow_right"/>
    </LinearLayout>
</LinearLayout>
