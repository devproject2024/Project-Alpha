<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/activity_container" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginBottom="44dp">
    <RelativeLayout android:layout_gravity="top" android:id="@+id/toolbar_start_ap" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:gravity="bottom" android:id="@+id/split_back_button" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_15dp" android:layout_marginTop="@dimen/dimen_30dp" android:src="@drawable/back_arrow" android:layout_alignParentLeft="true" android:layout_alignParentStart="true"/>
        <LinearLayout android:gravity="bottom" android:id="@+id/new_bill" android:background="@drawable/sb_button_layout" android:visibility="visible" android:clickable="true" android:layout_width="@dimen/dimen_108dp" android:layout_height="@dimen/dimen_35dp" android:layout_marginTop="@dimen/dimen_30dp" android:layout_marginRight="@dimen/dimen_20dp" android:layout_alignParentRight="true">
            <com.paytm.utility.RoboTextView android:textSize="15sp" android:textStyle="normal" android:textColor="#ffffff" android:gravity="center_horizontal" android:layout_gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/new_bill" android:fontFamily="sans-serif-medium" android:letterSpacing="0.05" app:fontType="3"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/status_ticker_view" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:layout_alignParentStart="true"/>
    </RelativeLayout>
    <com.paytm.utility.RoboTextView android:textSize="21sp" android:textStyle="bold" android:textColor="@color/color_222222" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="@dimen/dimen_24dp" android:text="@string/splitbill" android:fontFamily="sans-serif" android:letterSpacing="0.02" app:fontType="4"/>
    <LinearLayout android:orientation="horizontal" android:id="@+id/container_for_payable_receivable" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp">
        <LinearLayout android:orientation="vertical" android:id="@+id/total_rev" android:padding="@dimen/dimen_20dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <com.paytm.utility.RoboTextView android:textSize="12sp" android:textStyle="normal" android:textColor="#21c17a" android:id="@+id/receiveHolder" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="You Will Receive" android:textAllCaps="true" android:fontFamily="sans-serif-medium" android:letterSpacing="0.08" app:fontType="3"/>
            <com.paytm.utility.RoboTextView android:textSize="17sp" android:textStyle="normal" android:textColor="@color/color_222222" android:id="@+id/tvTotalReceive" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_8dp" android:text="₹5,346" android:fontFamily="sans-serif-light" app:fontType="4"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:padding="@dimen/dimen_20dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <com.paytm.utility.RoboTextView android:textSize="12sp" android:textStyle="normal" android:textColor="#fd5c5c" android:id="@+id/payHolder" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="You Will Pay" android:textAllCaps="true" android:fontFamily="sans-serif-medium" android:letterSpacing="0.08" app:fontType="3"/>
            <com.paytm.utility.RoboTextView android:textSize="17sp" android:textStyle="normal" android:textColor="@color/color_222222" android:id="@+id/tvTotalPay" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_8dp" android:text="₹1,200" android:fontFamily="sans-serif-light" app:fontType="4"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout android:id="@+id/receivedByYouHolder" android:background="@color/color_f3f7f8" android:paddingLeft="@dimen/dimen_20dp" android:paddingTop="@dimen/dimen_11dp" android:paddingRight="@dimen/dimen_20dp" android:paddingBottom="@dimen/dimen_11dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_16dp">
        <com.paytm.utility.RoboTextView android:textSize="12sp" android:textStyle="normal" android:textColor="#666666" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Your Friends" android:layout_alignParentLeft="true" android:textAllCaps="true" android:fontFamily="sans-serif-medium" android:letterSpacing="0.08" app:fontType="3"/>
        <com.paytm.utility.RoboTextView android:textSize="12sp" android:textStyle="normal" android:textColor="@color/color_00b9f5" android:gravity="end" android:id="@+id/receiveViewAll" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/view_all" android:layout_alignParentRight="true" android:fontFamily="sans-serif" android:letterSpacing="0.04" app:fontType="2"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/lyt_all_settled_up" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true">
            <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/all_settled_up" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="32dp" android:text="All Settled Up!" android:fontFamily="sans-serif"/>
            <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#666666" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="8dp" android:layout_marginBottom="39dp" android:text="You do not have any pending bills" android:fontFamily="sans-serif"/>
        </LinearLayout>
        <ImageView android:background="@drawable/sb_ic_settled_up" android:layout_width="80dp" android:layout_height="65dp" android:layout_marginRight="20dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/rv_user_settlement" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_alignParentEnd="true" android:nestedScrollingEnabled="false"/>
        <com.airbnb.lottie.LottieAnimationView android:id="@+id/lav_lottie_loader" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="30dp" android:layout_marginBottom="20dp" android:layout_alignBottom="@+id/rv_user_settlement" android:layout_centerHorizontal="true" app:amount="5" app:animationDirectionbundle="-1" app:circleSize="15" app:duration="@android:integer/config_mediumAnimTime" app:endColor="@color/light_blue_A400" app:startColor="@color/light_blue_A700"/>
    </RelativeLayout>
    <FrameLayout android:id="@+id/frame_container" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content"/>
</LinearLayout>
