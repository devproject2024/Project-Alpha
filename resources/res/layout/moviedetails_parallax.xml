<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/movie_detail_rel_lay" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/movie_details" android:focusableInTouchMode="true" android:visibility="visible" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent">
        <androidx.coordinatorlayout.widget.CoordinatorLayout android:id="@+id/id_coord_layout" android:layout_width="match_parent" android:layout_height="match_parent">
            <com.google.android.material.appbar.AppBarLayout android:theme="@style/ThemeOverlay.AppCompat.ActionBar" android:id="@+id/movie_details_appbar" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" app:elevation="0dp">
                <include layout="@layout/movie_detail_top_banner"/> // show time and content tabs 
                <net.one97.paytm.o2o.movies.common.customui.CustomTabLayout android:layout_gravity="center_vertical" android:id="@+id/movie_details_tabs" android:background="@color/white" android:layout_width="match_parent" android:layout_height="48dp" app:tabBackground="?attr/selectableItemBackground" app:tabIndicatorColor="#00b9f5" app:tabMinWidth="100dp" app:tabSelectedTextColor="@color/color_222222" app:tabTextAppearance="@style/MovieTabTextAppearance" app:tabTextColor="#b8c2cb" app:tabGravity="0" style="@style/AppTabLayout"/>
                <View android:background="@color/color_ebebeb" android:layout_width="match_parent" android:layout_height="1dp"/> // date bar 
                <androidx.recyclerview.widget.RecyclerView android:id="@+id/date_tab_recycler_view" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginBottom="16dp"/>
            </com.google.android.material.appbar.AppBarLayout>
            <net.one97.paytm.common.widgets.CJRNonSwipableViewPager android:id="@+id/movie_details_viewpager" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/movie_details_appbar" app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
        </androidx.coordinatorlayout.widget.CoordinatorLayout> // bottom book button 
        <RelativeLayout android:id="@+id/movie_detail_tab_book" android:background="@color/color_00b9f5" android:visibility="gone" android:clickable="true" android:layout_width="match_parent" android:layout_height="50dp" android:layout_alignParentBottom="true">
            <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/book_tickets" android:layout_centerInParent="true" android:fontFamily="sans-serif" app:fontType="4"/>
        </RelativeLayout> // hint legend 
        <LinearLayout android:orientation="vertical" android:id="@+id/hint_legend" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
            <LinearLayout android:gravity="center_horizontal" android:orientation="horizontal" android:id="@+id/legends" android:background="@color/color_fafafa" android:paddingTop="9dp" android:paddingBottom="9dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="35dp">
                <ImageView android:layout_width="8dp" android:layout_height="8dp" android:layout_marginTop="5dp" android:src="@drawable/movies_green_circle"/>
                <com.paytm.utility.RoboTextView android:textSize="@dimen/cart_12sp" android:textColor="@color/movie_half_available" android:gravity="center_vertical" android:paddingLeft="10dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/available"/>
                <ImageView android:layout_width="8dp" android:layout_height="8dp" android:layout_marginLeft="30dp" android:layout_marginTop="5dp" android:src="@drawable/yellow"/>
                <com.paytm.utility.RoboTextView android:textSize="@dimen/cart_12sp" android:textColor="@color/movie_tentofifty_available" android:gravity="center_vertical" android:paddingLeft="10dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/movie_legend_filling_fast"/>
                <ImageView android:layout_width="8dp" android:layout_height="8dp" android:layout_marginLeft="30dp" android:layout_marginTop="5dp" android:src="@drawable/red"/>
                <com.paytm.utility.RoboTextView android:textSize="@dimen/cart_12sp" android:textColor="@color/movie_lessthanten_available" android:gravity="center_vertical" android:paddingLeft="10dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/movie_legend_almost_filled"/>
            </LinearLayout>
        </LinearLayout> // top toolbar 
        <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/id_toolbar" android:layout_width="match_parent" android:layout_height="48dp">
            <View android:id="@+id/id_toolbar_bg" android:background="@color/white" android:layout_width="0dp" android:layout_height="0dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0"/>
            <ImageView android:id="@+id/id_toolbar_back" android:paddingLeft="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0" app:srcCompat="@drawable/movie_back_arrow_white"/>
            <com.paytm.utility.RoboTextView android:textSize="16sp" android:textColor="@color/black" android:ellipsize="end" android:id="@+id/id_toolbar_name" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="30dp" android:layout_marginRight="15dp" android:singleLine="true" app:fontType="3" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toEndOf="@+id/id_toolbar_back" app:layout_constraintTop_toTopOf="0"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <include android:id="@+id/lyt_no_movies" android:layout_width="match_parent" android:layout_height="match_parent" layout="@layout/no_movies_in_detail_page"/>
        <include android:id="@+id/lyt_error_handling" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" layout="@layout/error_handling"/>
    </RelativeLayout>
    <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="horizontal" android:id="@+id/sortByDistanceRly" android:background="@drawable/sort_by_distance_bg" android:visibility="gone" android:layout_width="170dp" android:layout_height="48dp" android:layout_marginBottom="@dimen/dimen_20dp" android:foreground="@drawable/ripple_simple_gray" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" android:elevation="@dimen/dimen_6dp">
        <com.paytm.utility.RoboTextView android:textSize="12sp" android:textColor="@color/color_444444" android:layout_gravity="center_vertical" android:id="@+id/sortByDistanceTv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="2dp" android:text="@string/sort_by_distance" app:fontType="4"/>
        <ImageView android:gravity="center_horizontal" android:id="@+id/sortByDistanceFilterImg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_5dp" android:layout_toRightOf="@+id/sortByDistanceTv" app:srcCompat="@drawable/ic_direction_black_arrow"/>
    </LinearLayout>
    <RelativeLayout android:id="@+id/progress_bar_layout" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent">
        <include layout="@layout/view_dummy_movie_detail"/>
    </RelativeLayout>
</RelativeLayout>
