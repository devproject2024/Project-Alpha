<?xml version="1.0" encoding="utf-8"?>
<net.one97.paytm.upi.util.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/swipe_layout_2" android:layout_width="match_parent" android:layout_height="wrap_content" app:dragEdge="2" app:mode="oneLine">
    <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="match_parent">
        <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#ffffff" android:gravity="center" android:id="@+id/make_default_tv" android:background="#21c17a" android:layout_width="95dp" android:layout_height="match_parent" android:text="@string/money_transfer_make_default" android:fontFamily="sans-serif" android:letterSpacing="0.06"/>
        <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#ffffff" android:gravity="center" android:id="@+id/delete_tv" android:background="#fd5c5c" android:layout_width="95dp" android:layout_height="match_parent" android:text="@string/delete" android:fontFamily="sans-serif" android:letterSpacing="0.06"/>
    </LinearLayout>
    <RelativeLayout android:orientation="vertical" android:id="@+id/beneficiary_item" android:background="@color/white" android:paddingLeft="@dimen/dimen_20dp" android:paddingTop="@dimen/dimen_10dp" android:focusable="true" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:animateLayoutChanges="true">
        <RelativeLayout android:id="@+id/iconLayout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_15dp" android:layout_alignParentLeft="true" android:animateLayoutChanges="true">
            <TextView android:textSize="21sp" android:gravity="center" android:id="@+id/beneficiary_circle" android:background="@drawable/bg_white_circular_stroke" android:visibility="visible" android:layout_width="36dp" android:layout_height="36dp" android:fontFamily="@string/font_family_roboto_medium"/>
            <ImageView android:layout_gravity="center" android:id="@+id/beneficiary_no_name_icon" android:background="@drawable/bg_white_circular_stroke" android:padding="5dp" android:visibility="visible" android:layout_width="36dp" android:layout_height="36dp" android:src="@drawable/ic_bank_sbi"/>
        </RelativeLayout>
        <RelativeLayout android:orientation="vertical" android:id="@+id/detail_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_10dp" android:layout_toRightOf="@+id/iconLayout">
            <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="#222222" android:ellipsize="end" android:id="@+id/bank_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:fontFamily="@string/font_family_roboto_regular"/>
            <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#666666" android:ellipsize="end" android:id="@+id/bank_account_no" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:maxLines="1" android:layout_below="@+id/bank_name" android:fontFamily="@string/font_family_roboto_regular"/>
            <TextView android:textSize="10sp" android:textStyle="normal" android:textColor="@color/color_21c17a" android:id="@+id/default_acc_tv" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:text="@string/money_transfer_default_account" android:layout_below="@+id/bank_account_no" android:textAllCaps="true" android:fontFamily="@string/font_family_roboto_regular" android:letterSpacing="0.04"/>
            <TextView android:textSize="@dimen/cart_12sp" android:textColor="#00b9f5" android:id="@+id/check_balance_tv" android:paddingTop="@dimen/dimen_10dp" android:paddingBottom="@dimen/dimen_5dp" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="@string/check_balance" android:layout_below="@+id/default_acc_tv" android:lineSpacingExtra="@dimen/dimen_10dp" android:fontFamily="@string/font_family_roboto_regular"/>
            <ImageView android:layout_gravity="center" android:id="@+id/info_icon" android:paddingLeft="@dimen/dimen_5dp" android:paddingRight="@dimen/dimen_5dp" android:visibility="gone" android:layout_width="24dp" android:layout_height="24dp" android:layout_marginLeft="@dimen/dimen_10dp" android:src="@drawable/upi_info" android:layout_toRightOf="@+id/check_balance_tv" android:layout_alignBottom="@+id/check_balance_tv"/>
        </RelativeLayout>
        <View android:background="@color/color_f3f7f8" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="@dimen/dimen_15dp" android:layout_toRightOf="@+id/iconLayout" android:layout_below="@+id/detail_layout"/>
    </RelativeLayout>
</net.one97.paytm.upi.util.SwipeRevealLayout>
