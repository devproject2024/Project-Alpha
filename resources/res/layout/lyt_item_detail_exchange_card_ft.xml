<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@drawable/bg_order_detail_promo_fastag" android:paddingLeft="@dimen/item_detail_container_padding" android:paddingTop="@dimen/item_detail_promo_card_padding" android:paddingRight="@dimen/item_detail_container_padding" android:paddingBottom="@dimen/item_detail_promo_card_padding" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_16dp" android:layout_marginRight="@dimen/dimen_16dp">
    <RelativeLayout android:id="@+id/exchange_tag_container" android:layout_width="match_parent" android:layout_height="@dimen/item_detail_promo_tag_height">
        <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/exchange_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:lineSpacingExtra="1sp" android:fontFamily="sans-serif-medium"/>
        <TextView android:textSize="15sp" android:textStyle="bold" android:textColor="#222222" android:layout_gravity="end" android:id="@+id/exchnage_amount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:lineSpacingExtra="0sp" android:fontFamily="sans-serif"/>
    </RelativeLayout>
    <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/exchange_brand_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/exchange_title" android:lineSpacingExtra="1sp" android:fontFamily="sans-serif-medium"/>
    <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/exchange_subtitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/exchange_brand_name" android:lineSpacingExtra="1sp" android:fontFamily="sans-serif-medium"/>
    <com.paytm.utility.RoboTextView android:textSize="15sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/exchange_desc" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/item_detail_promo_desc_top_margin" android:lineSpacingExtra="4sp" android:fontFamily="sans-serif"/>
</LinearLayout>
