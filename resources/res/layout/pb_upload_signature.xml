            <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#00aced" android:gravity="center_horizontal" android:id="@+id/btn_upload_more" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_20dp" android:layout_marginBottom="@dimen/dimen_10dp" android:text="@string/upload_more" android:layout_below="@+id/rv_document_holder" android:layout_alignParentRight="true" android:lineSpacingExtra="4sp" android:fontFamily="sans-serif" android:layout_marginEnd="@dimen/dimen_20dp" android:layout_alignParentEnd="true"/>
            <RelativeLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/rl_upload_document" android:background="@drawable/bg_cb_grey_outline" android:padding="10dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dimen_20dp" android:layout_below="@+id/btn_upload_more" android:alpha="1" android:layout_marginStart="@dimen/dimen_20dp" android:layout_marginEnd="@dimen/dimen_20dp">
