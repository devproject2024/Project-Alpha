                <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#00aced" android:layout_gravity="center_horizontal" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/upload_document" android:layout_toRightOf="@+id/iv_upload_document" android:layout_centerVertical="true" android:lineSpacingExtra="6sp" android:fontFamily="sans-serif-medium"/>
