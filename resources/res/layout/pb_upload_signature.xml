            <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#506d85" android:gravity="center_horizontal" android:id="@+id/tv_terms_and_condition" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/by_proceeding_you_agree_to_the_terms_amp_conditions" android:layout_below="@+id/rl_upload_document" android:layout_centerHorizontal="true" android:lineSpacingExtra="6sp" android:fontFamily="sans-serif"/>
