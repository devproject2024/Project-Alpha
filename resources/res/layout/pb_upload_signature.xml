            <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#444444" android:id="@+id/tv_signature_footer" android:paddingLeft="20dp" android:paddingRight="@dimen/dimen_20dp" android:paddingBottom="@dimen/dimen_10dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_35dp" android:text="@string/note_cheque_book_issuance_charges_will_be_deducted_from_your_paytm_payments_bank_savings_a_c" android:layout_below="@+id/tv_proceed_payment" android:lineSpacingExtra="5sp" android:fontFamily="sans-serif"/>
        </RelativeLayout>
    </ScrollView>
    <FrameLayout android:id="@+id/fl_progress_bar" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
