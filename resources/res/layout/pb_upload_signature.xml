            <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#506d85" android:id="@+id/txt_document_upload_info" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_4dp" android:layout_marginBottom="@dimen/dimen_40dp" android:text="@string/document_should_have_signature_name_and_photo" android:layout_below="@+id/txt_document_upload" android:lineSpacingExtra="4sp" android:fontFamily="sans-serif" android:layout_marginStart="@dimen/dimen_20dp" android:layout_marginEnd="@dimen/dimen_20dp"/>
            <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#8ba6c1" android:id="@+id/txt_select_document" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dimen_6dp" android:text="@string/select_document" android:layout_below="@+id/txt_document_upload_info" android:lineSpacingExtra="4sp" android:fontFamily="sans-serif" android:layout_marginStart="@dimen/dimen_20dp" android:layout_marginEnd="@dimen/dimen_20dp"/>
            <Spinner android:id="@+id/spinner" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dimen_20dp" android:layout_below="@+id/txt_select_document" android:spinnerMode="dialog" android:layout_marginStart="@dimen/dimen_20dp" android:layout_marginEnd="@dimen/dimen_20dp"/>
