<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:tag="layout/uam_save_card_layout_0" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:id="@+id/text_view_layout" android:paddingTop="@dimen/dimen_10dp" android:paddingBottom="@dimen/dimen_10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:layout_marginRight="@dimen/dimen_10dp" android:layout_toLeftOf="@+id/rl_bank_icon">
        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <RadioButton android:gravity="center" android:id="@+id/rbBankName" android:tag="binding_1" android:focusable="true" android:layout_width="25dp" android:layout_height="25dp" android:button="@drawable/uam_radio_selector"/>
            <com.paytm.utility.RoboTextView android:textSize="15sp" android:textColor="@color/color_222222" android:ellipsize="end" android:id="@+id/title" android:tag="binding_2" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="13dp" android:maxLines="2" app:fontType="2"/>
        </LinearLayout>
        <com.paytm.utility.RoboTextView android:textSize="12sp" android:textColor="@color/color_444444" android:ellipsize="end" android:gravity="left" android:id="@+id/tvCardNumber" android:tag="binding_3" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="38dp" android:layout_marginTop="7dp" android:maxLines="2" android:layout_marginStart="38dp" app:fontType="2"/>
        <RadioGroup android:orientation="vertical" android:id="@+id/two_mode_auth_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_40dp" android:layout_marginTop="@dimen/dimen_20dp" android:layout_marginStart="@dimen/dimen_40dp">
            <RadioButton android:textSize="@dimen/dimen_15sp" android:textStyle="normal" android:textColor="@color/black" android:id="@+id/rb_saved_card_atm_pin" android:background="@android:color/transparent" android:focusable="true" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:button="@drawable/uam_radio_selector" android:drawablePadding="@dimen/dimen_10dp" android:fontFamily="sans-serif" android:paddingStart="@dimen/dimen_16dp"/>
            <RadioButton android:textSize="@dimen/dimen_15sp" android:textStyle="normal" android:textColor="@color/black" android:id="@+id/rb_saved_card_otp" android:background="@android:color/transparent" android:focusable="true" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_40dp" android:button="@drawable/uam_radio_selector" android:fontFamily="sans-serif" android:paddingStart="@dimen/dimen_16dp"/>
        </RadioGroup>
        <LinearLayout android:orientation="horizontal" android:id="@+id/cvv_layout" android:visibility="gone" android:layout_width="110dp" android:layout_height="wrap_content" android:layout_marginLeft="35dp" android:layout_marginTop="16dp">
            <EditText android:textSize="@dimen/dimen_16sp" android:textColorHint="#999999" android:id="@+id/etCvv" android:background="@drawable/addmoney_white_background_with_border" android:padding="10dp" android:layout_width="0dp" android:layout_height="wrap_content" android:hint="@string/cvv" android:maxLength="4" android:digits="0123456789" android:layout_weight="1" android:inputType="numberPassword"/>
        </LinearLayout>
        <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_11sp" android:textStyle="normal" android:textColor="@color/color_00b9f5" android:gravity="center" android:id="@+id/tv_emi_availbale" android:tag="binding_4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="35dp" android:layout_marginTop="@dimen/dimen_10dp" android:text="@string/uam_emi_opt_available" android:lineSpacingExtra="3sp" android:layout_marginStart="35dp"/>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/btnProceed" android:background="@drawable/uam_rounded_blue_rect" android:padding="@dimen/dimen_15dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_16dp">
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_secure_cta_addmoney"/>
            <TextView android:textSize="@dimen/dimen_15sp" android:textStyle="bold" android:textColor="@color/white" android:gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_10dp" android:text="@string/uam_proceed_securely" android:lineSpacingExtra="2sp" android:fontFamily="@string/font_family_roboto_regular"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout android:id="@+id/rl_bank_icon" android:layout_width="48dp" android:layout_height="48dp" android:layout_marginTop="10dp" android:layout_alignParentRight="true">
        <ImageView android:background="@drawable/uam_grey_circle_border" android:padding="@dimen/wallet_2_dp" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="fitXY" android:layout_centerInParent="true"/>
        <ImageView android:id="@+id/iv_saved_card" android:visibility="gone" android:layout_width="38dp" android:layout_height="38dp" android:scaleType="fitCenter" android:layout_centerInParent="true" app:srcCompat="@drawable/ic_bank_hdfc"/>
    </RelativeLayout>
</RelativeLayout>
