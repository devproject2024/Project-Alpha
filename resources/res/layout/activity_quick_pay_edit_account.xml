<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <TableRow android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="@dimen/dimen_60dp">
        <ImageView android:id="@+id/qpea_back_iv" android:padding="@dimen/dimen_10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_10dp" android:src="@drawable/back_arrow"/>
        <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="#222222" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_15dp" android:text="Recipientâ€™s Account Details" android:fontFamily="sans-serif"/>
    </TableRow>
    <View android:background="@color/color_f3f7f8" android:layout_width="match_parent" android:layout_height="@dimen/dimen_1dp"/>
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:padding="@dimen/dimen_20dp" android:layout_width="match_parent" android:layout_height="match_parent">
            <RadioGroup android:orientation="horizontal" android:id="@+id/qp_select_rg" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_20dp" android:weightSum="2">
                <RadioButton android:textSize="@dimen/wallet_14_sp" android:textStyle="bold" android:id="@+id/qp_account_rb" android:padding="@dimen/wallet_5_dp" android:layout_width="0dp" android:layout_height="wrap_content" android:checked="true" android:button="@drawable/btn_radio_holo_light" android:text="@string/bank_account" android:layout_weight="1"/>
                <RadioButton android:textSize="@dimen/wallet_14_sp" android:id="@+id/qp_paytm_rb" android:padding="@dimen/wallet_5_dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/wallet_20_dp" android:button="@drawable/btn_radio_holo_light" android:text="@string/paytm_wallet" android:layout_weight="1"/>
            </RadioGroup>
            <include layout="@layout/qp_bank_layout"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/qp_wallet_ll" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="25dp">
                <com.google.android.material.textfield.TextInputLayout android:theme="@style/MoneyTransferEditTextTheme" android:id="@+id/qp_mobile_number_til" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/mobile_number">
                    <androidx.appcompat.widget.AppCompatEditText android:textSize="17sp" android:textStyle="bold" android:textColor="#222222" android:textColorHint="@color/edittext_hint_color" android:id="@+id/qp_mobile_number_et" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true" android:maxLength="10" android:digits="1234567890" android:inputType="none|text|textNoSuggestions|number|phone"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <TextView android:textSize="16sp" android:textStyle="normal" android:textColor="#ffffff" android:gravity="center" android:id="@+id/qpe_save_tv" android:background="@drawable/rounded_rectangle_paytmblue" android:layout_width="match_parent" android:layout_height="@dimen/dimen_55dp" android:layout_marginTop="@dimen/dimen_40dp" android:text="Save" android:fontFamily="sans-serif-medium"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
