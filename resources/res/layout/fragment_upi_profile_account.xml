<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:id="@+id/ll_content" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
        <View android:id="@+id/view_divider" android:background="@color/color_fafbfb" android:layout_width="match_parent" android:layout_height="@dimen/dimen_10dp"/>
        <RelativeLayout android:id="@+id/rl_profile_vpa_header" android:background="@color/white" android:paddingLeft="@dimen/dimen_24dp" android:paddingRight="@dimen/dimen_16dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="@dimen/wallet_84_dp">
            <ImageView android:id="@+id/iv_upi_logo" android:background="@drawable/upi_bg_stroke" android:padding="@dimen/dimen_6dp" android:layout_width="@dimen/wallet_48_dp" android:layout_height="@dimen/wallet_48_dp" android:src="@drawable/ic_bhim" android:layout_centerVertical="true"/>
            <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/iv_overflow_menu" android:layout_toRightOf="@+id/iv_upi_logo" android:layout_centerVertical="true">
                <net.one97.paytm.upi.common.RoboTextView android:textSize="@dimen/wallet_18_sp" android:textColor="@color/color_222222" android:id="@+id/tv_vpa_value" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_16dp"/>
                <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="@color/upi_pin_green" android:id="@+id/tv_primary_label" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_16dp" android:layout_marginTop="@dimen/dimen_8dp" android:text="@string/upi_primary_vpa" android:fontFamily="sans-serif"/>
                <net.one97.paytm.upi.common.RoboTextView android:textSize="@dimen/wallet_15_sp" android:textColor="@color/color_00b9f5" android:id="@+id/tv_no_acc_linked" android:background="?android:attr/selectableItemBackground" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_16dp" android:layout_marginTop="@dimen/dimen_8dp" android:text="@string/upi_link_bank_profile" android:drawableRight="@drawable/arrow_right_blue" android:drawablePadding="6dp"/>
            </LinearLayout>
            <ImageView android:id="@+id/iv_overflow_menu" android:background="?attr/selectableItemBackground" android:padding="@dimen/dimen_6dp" android:layout_width="@dimen/dimen_24dp" android:layout_height="@dimen/dimen_24dp" android:src="@drawable/remove_cart_item" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View android:background="@color/upi_card_bg" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="@dimen/dimen_16dp"/>
        <net.one97.paytm.upi.common.RoboTextView android:textSize="@dimen/dimen_12sp" android:textColor="@color/color_444444" android:id="@+id/tv_vpa_section_header" android:background="@color/white" android:paddingLeft="@dimen/dimen_24dp" android:paddingTop="@dimen/dimen_12dp" android:paddingRight="@dimen/dimen_16dp" android:paddingBottom="@dimen/dimen_8dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/upi_profile_section_header"/>
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/rv_debit_account_list" android:layout_width="match_parent" android:layout_height="match_parent" android:nestedScrollingEnabled="false"/>
        <include layout="@layout/list_empty_layout"/>
    </LinearLayout>
    <include layout="@layout/error_layout_retry"/>
    <ProgressBar android:layout_gravity="center" android:id="@+id/progress_bar" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
</FrameLayout>
