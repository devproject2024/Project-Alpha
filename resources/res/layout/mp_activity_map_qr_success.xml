<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="bottom" android:layout_gravity="center_horizontal" android:orientation="vertical" android:id="@+id/parent_container" android:background="@color/color_white" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="@dimen/dimen_10dp">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentTop="true">
                <ImageView android:id="@+id/close_icon" android:padding="@dimen/dimen_16dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:src="@drawable/mqr_ic_clear" android:layout_alignParentLeft="true"/>
                <com.business.common_module.view.widget.CustomTextView android:textSize="20sp" android:textColor="#182233" android:id="@+id/heading1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_16dp" android:layout_marginTop="@dimen/dimen_5dp" android:layout_marginRight="@dimen/dimen_20dp" android:text="@string/mp_qr_code_linked_successfully_to_your_merchant_account" android:drawableRight="@drawable/mp_ic_success_new" android:drawablePadding="@dimen/dimen_8dp" android:layout_below="@+id/close_icon" android:lineSpacingExtra="2sp" app:mp_font_name="3"/>
                <com.business.common_module.view.widget.CustomTextView android:id="@+id/heading2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_15dp" android:layout_marginRight="@dimen/dimen_20dp" android:text="@string/mp_payments_accepted_from_this_qr_code_will_be_settled_to_your_bank_account" android:layout_below="@+id/heading1" android:layout_alignLeft="@+id/heading1" app:mp_font_name="2"/>
            </RelativeLayout>
            <androidx.cardview.widget.CardView android:id="@+id/cv_success" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_16dp" android:layout_marginTop="@dimen/dimen_40dp" android:layout_marginRight="@dimen/dimen_16dp">
                <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/save_lyt" android:background="@color/color_white" android:paddingBottom="@dimen/dimen_14dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="@dimen/dimen_24dp">
                    <ImageView android:layout_width="@dimen/dimen_100dp" android:layout_height="@dimen/dimen_56dp" android:layout_centerHorizontal="true" app:srcCompat="@drawable/mqr_ic_paytm_accepted_here"/>
                    <com.business.common_module.view.widget.CustomTextView android:textSize="28sp" android:textColor="#29394f" android:gravity="center_horizontal" android:id="@+id/business_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_24dp" android:lineSpacingExtra="4sp" app:mp_font_name="3"/>
                    <com.business.common_module.view.widget.CustomTextView android:textSize="14sp" android:textColor="#29394f" android:gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_16dp" android:text="@string/mp_scan_this_code_to_pay" android:lineSpacingExtra="6sp" app:mp_font_name="2"/>
                    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp">
                        <ImageView android:id="@+id/map_qr_code" android:layout_width="@dimen/dimen_250dp" android:layout_height="@dimen/dimen_250dp" android:layout_centerInParent="true"/>
                        <ImageView android:id="@+id/overlap_img" android:background="#ffffff" android:padding="3dp" android:layout_width="@dimen/dimen_36dp" android:layout_height="@dimen/dimen_21dp" android:layout_centerInParent="true" app:srcCompat="@drawable/mqr_ic_paytm_logo"/>
                    </RelativeLayout>
                    <com.business.common_module.view.widget.CustomTextView android:textSize="16sp" android:textColor="#29394f" android:gravity="center_horizontal" android:id="@+id/additional_txt" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="-10dp" android:layout_marginBottom="@dimen/dimen_10dp" android:lineSpacingExtra="4sp" app:mp_font_name="3"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <com.business.common_module.view.widget.CustomTextView android:textSize="14sp" android:textColor="#00b9f5" android:gravity="center_horizontal" android:id="@+id/share_link_button" android:padding="@dimen/dimen_10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_24dp" android:layout_marginBottom="@dimen/dimen_50dp" android:text="@string/mp_download_qr" android:drawablePadding="@dimen/dimen_5dp" android:lineSpacingExtra="6sp" app:mp_font_name="1"/>
        </LinearLayout>
    </ScrollView>
    <View android:layout_gravity="bottom" android:background="#00b9f5" android:layout_width="match_parent" android:layout_height="7dp"/>
    <View android:layout_gravity="bottom" android:background="#012b72" android:layout_width="match_parent" android:layout_height="7dp"/>
</LinearLayout>
