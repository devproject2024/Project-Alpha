<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/movie_detail_rel_lay" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/movie_details" android:focusableInTouchMode="true" android:visibility="visible" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent">
        <FrameLayout android:id="@+id/title_head" android:visibility="gone" android:layout_width="match_parent" android:layout_height="60dp">
            <androidx.constraintlayout.widget.ConstraintLayout android:orientation="horizontal" android:id="@+id/toolbar" android:visibility="visible" android:layout_width="match_parent" android:layout_height="@dimen/dimen_60dp">
                <androidx.appcompat.widget.AppCompatImageView android:id="@+id/movie_detail_back_btn" android:padding="7dp" android:layout_width="35dp" android:layout_height="30dp" android:layout_marginLeft="8dp" android:layout_marginTop="8dp" android:layout_marginBottom="8dp" android:layout_centerVertical="true" android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0" app:srcCompat="@drawable/back_arrow"/>
                <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_marginTop="8dp" android:layout_marginRight="8dp" android:layout_marginBottom="8dp" android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/search_icon" app:layout_constraintStart_toEndOf="@+id/movie_detail_back_btn" app:layout_constraintTop_toTopOf="0">
                    <com.paytm.utility.RoboTextView android:textSize="17sp" android:textStyle="bold" android:textColor="@color/black" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:maxWidth="230dp" android:maxLines="2" android:fontFamily="sans-serif" app:fontType="4"/>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </FrameLayout>
        <androidx.coordinatorlayout.widget.CoordinatorLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="1dp" android:layout_below="@+id/title_head">
            <com.google.android.material.appbar.AppBarLayout android:theme="@style/ThemeOverlay.AppCompat.ActionBar" android:id="@+id/movie_details_appbar" android:fitsSystemWindows="true" android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.google.android.material.appbar.CollapsingToolbarLayout android:id="@+id/movie_details_collapse_toolbar" android:fitsSystemWindows="true" android:layout_width="match_parent" android:layout_height="230dp" app:collapsedTitleTextAppearance="@style/collapsedappbar" app:contentScrim="@color/smoothpay_tool_bar_bg" app:expandedTitleMarginEnd="-10dp" app:expandedTitleMarginStart="@dimen/dimen_20dp" app:expandedTitleTextAppearance="@style/expandedappbar_cinema" app:layout_scrollFlags="3" app:scrimAnimationDuration="500">
                    <FrameLayout android:fitsSystemWindows="true" android:layout_width="match_parent" android:layout_height="match_parent" app:layout_collapseMode="2">
                        <ImageView android:id="@+id/header_image" android:fitsSystemWindows="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:scaleType="fitXY" android:transitionName="@string/movie_click_transition"/>
                        <RelativeLayout android:id="@+id/sub_layout" android:paddingBottom="2dp" android:layout_width="match_parent" android:layout_height="@dimen/dimen_130dp" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="98dp" android:layout_marginRight="@dimen/dimen_20dp">
                            <com.paytm.utility.RoboTextView android:textSize="11sp" android:textColor="@color/color_666666" android:ellipsize="end" android:id="@+id/movie_banner_subTitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="5dp" android:maxLines="3" app:fontType="2"/>
                            <LinearLayout android:gravity="center_vertical" android:id="@+id/directionLl" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/movie_banner_subTitle">
                                <ImageView android:layout_width="15dp" android:layout_height="18dp" android:scaleType="fitXY" app:srcCompat="@drawable/ic_movies_location"/>
                                <com.paytm.utility.RoboTextView android:textSize="12sp" android:textColor="@color/color_444444" android:ellipsize="end" android:id="@+id/directionDistanceTv" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="14 km" android:maxLines="3" android:layout_toRightOf="@+id/directionIv" app:fontType="2"/>
                                <com.paytm.utility.RoboTextView android:textSize="12sp" android:textColor="@color/color_00b9f5" android:ellipsize="end" android:id="@+id/directionTv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="@string/get_direction" android:maxLines="3" android:layout_toRightOf="@+id/directionIv" app:fontType="2"/>
                            </LinearLayout>
                            <androidx.recyclerview.widget.RecyclerView android:id="@+id/rvCinemaAmenities" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_15dp" android:layout_below="@+id/directionLl"/>
                        </RelativeLayout>
                    </FrameLayout>
                    <ImageView android:layout_gravity="center" android:id="@+id/youtube_play_icon" android:padding="10dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:foreground="@drawable/ripple_simple_gray" android:src="@drawable/youtube_video_icon"/>
                    <androidx.appcompat.widget.Toolbar android:id="@+id/movie_details_toolbar" android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="44dp" app:layout_collapseMode="1" app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>
                </com.google.android.material.appbar.CollapsingToolbarLayout>
                <net.one97.paytm.o2o.movies.common.customui.CustomTabLayout android:layout_gravity="center_vertical" android:id="@+id/movie_details_tabs" android:background="@color/white" android:layout_width="match_parent" android:layout_height="48dp" app:tabBackground="?attr/selectableItemBackground" app:tabIndicatorColor="#00b9f5" app:tabMinWidth="100dp" app:tabSelectedTextColor="@color/color_222222" app:tabTextAppearance="@style/MovieTabTextAppearance" app:tabTextColor="#b8c2cb" app:layout_scrollFlags="1" app:tabGravity="0" style="@style/AppTabLayout"/>
                <androidx.recyclerview.widget.RecyclerView android:id="@+id/date_tab_recycler_view" android:background="@color/white" android:paddingTop="15dp" android:paddingBottom="15dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                <View android:background="@color/color_ebebeb" android:layout_width="match_parent" android:layout_height="1dp"/>
            </com.google.android.material.appbar.AppBarLayout>
            <net.one97.paytm.common.widgets.CJRNonSwipableViewPager android:id="@+id/movie_details_viewpager" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_below="@+id/movie_details_appbar" app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
        <RelativeLayout android:id="@+id/movie_detail_tab_book" android:background="@color/color_00b9f5" android:visibility="gone" android:clickable="true" android:layout_width="match_parent" android:layout_height="50dp" android:layout_alignParentBottom="true">
            <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/book_tickets" android:layout_centerInParent="true" android:fontFamily="sans-serif" app:fontType="4"/>
        </RelativeLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/hint_legend" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
            <LinearLayout android:gravity="center_horizontal" android:orientation="horizontal" android:id="@+id/legends" android:background="@color/color_fafafa" android:paddingTop="9dp" android:paddingBottom="9dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="35dp">
                <ImageView android:layout_width="8dp" android:layout_height="8dp" android:layout_marginTop="5dp" android:src="@drawable/movies_green_circle"/>
                <com.paytm.utility.RoboTextView android:textSize="@dimen/cart_12sp" android:textColor="@color/movie_half_available" android:gravity="center_vertical" android:paddingLeft="10dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/available"/>
                <ImageView android:layout_width="8dp" android:layout_height="8dp" android:layout_marginLeft="30dp" android:layout_marginTop="5dp" android:src="@drawable/yellow"/>
                <com.paytm.utility.RoboTextView android:textSize="@dimen/cart_12sp" android:textColor="@color/movie_tentofifty_available" android:gravity="center_vertical" android:paddingLeft="10dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/movie_legend_filling_fast"/>
                <ImageView android:layout_width="8dp" android:layout_height="8dp" android:layout_marginLeft="30dp" android:layout_marginTop="5dp" android:src="@drawable/red"/>
                <com.paytm.utility.RoboTextView android:textSize="@dimen/cart_12sp" android:textColor="@color/movie_lessthanten_available" android:gravity="center_vertical" android:paddingLeft="10dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/movie_legend_almost_filled"/>
            </LinearLayout>
        </LinearLayout>
        <include android:id="@+id/lyt_no_movies" android:layout_width="match_parent" android:layout_height="match_parent" layout="@layout/no_movies_in_detail_page"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/progress_bar_layout" android:visibility="gone" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent">
        <include layout="@layout/view_dummy_cinema_detail"/>
    </RelativeLayout>
</RelativeLayout>
