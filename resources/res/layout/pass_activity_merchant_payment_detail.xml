<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/parent_layout" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:background="#f3f7f8" android:paddingLeft="21dp" android:paddingTop="28dp" android:paddingRight="21dp" android:paddingBottom="28dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:id="@+id/back_arrow_imv" android:paddingRight="20dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/pass_back_arrow" android:layout_alignParentLeft="true"/>
            <ImageView android:id="@+id/share_imv" android:paddingLeft="20dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/pass_sahre_filled" android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <TextView android:textSize="21sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/status_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="35dp" android:text="@string/paid_to" android:fontFamily="sans-serif-medium"/>
        <LinearLayout android:orientation="horizontal" android:id="@+id/amount_ll" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_below="@+id/status_tv">
            <TextView android:textSize="36sp" android:textStyle="normal" android:textColor="#222222" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/rupee_symbol" android:fontFamily="sans-serif-light"/>
            <TextView android:textSize="36sp" android:textStyle="bold" android:textColor="#222222" android:id="@+id/amount_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="2,500" android:fontFamily="sans-serif"/>
        </LinearLayout>
        <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/date_time_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="12:30 pm, 20 Mar 2018" android:layout_below="@+id/amount_ll" android:fontFamily="sans-serif"/>
        <ImageView android:id="@+id/status_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/pass_ic_tick" android:layout_alignBottom="@+id/amount_ll" android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <ScrollView android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                <RelativeLayout android:paddingLeft="20dp" android:paddingTop="30dp" android:paddingRight="20dp" android:paddingBottom="30dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <net.one97.paytm.passbook.customview.CircularImageView android:id="@+id/sent_to_pic_imv" android:background="@drawable/pass_circle" android:layout_width="48dp" android:layout_height="48dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:layout_toLeftOf="@+id/sent_to_pic_imv">
                        <TextView android:textSize="11sp" android:textStyle="normal" android:textColor="#999999" android:id="@+id/to_title_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/paid_at1" android:textAllCaps="true" android:fontFamily="sans-serif-medium" android:letterSpacing="0.09"/>
                        <TextView android:textSize="17sp" android:textStyle="bold" android:textColor="#222222" android:ellipsize="end" android:id="@+id/merchant_name_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="9dp" android:fontFamily="sans-serif"/>
                        <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#222222" android:ellipsize="end" android:gravity="center_horizontal" android:id="@+id/orderid_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:lineSpacingExtra="25sp" android:fontFamily="sans-serif-light"/>
                    </LinearLayout>
                </RelativeLayout>
                <View android:id="@+id/seprator_view" android:background="#f3f7f8" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="20dp" android:layout_marginRight="20dp"/>
                <TextView android:textSize="11sp" android:textStyle="normal" android:textColor="#999999" android:id="@+id/from_title_tv" android:paddingTop="30dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="@string/paid_from" android:textAllCaps="true" android:fontFamily="sans-serif-medium" android:letterSpacing="0.09"/>
                <LinearLayout android:orientation="vertical" android:id="@+id/transaction_details_layout" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                <LinearLayout android:orientation="horizontal" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="20dp">
                    <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#444444" android:id="@+id/txnidtype_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Wallet Txn ID:" android:lineSpacingExtra="25sp" android:fontFamily="sans-serif-light"/>
                    <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#444444" android:id="@+id/txnid_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:text="8023 2123 3312 " android:lineSpacingExtra="25sp" android:fontFamily="sans-serif-light"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <RelativeLayout android:id="@+id/loader_contianer" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
            <com.airbnb.lottie.LottieAnimationView android:id="@+id/loader" android:layout_width="wrap_content" android:layout_height="30dp" android:layout_centerInParent="true"/>
        </RelativeLayout>
    </FrameLayout>
</LinearLayout>
