        <ImageView android:layout_gravity="right|center_vertical|center_horizontal|center" android:id="@+id/book_return_ticket_close_btn" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginRight="12dp" android:src="@drawable/close_filter"/>
    </FrameLayout>
</RelativeLayout>
