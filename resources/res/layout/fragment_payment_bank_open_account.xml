<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/main_lyt" android:layout_width="match_parent" android:layout_height="match_parent">
        <ImageView android:id="@+id/iv_motif" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/pb_ic_payment_bank_large_motif" android:layout_alignParentRight="true"/>
        <include android:id="@+id/layout_bank_header_bar_toolbar" layout="@layout/pb_layout_bank_header_without_divider"/>
        <androidx.core.widget.NestedScrollView android:id="@+id/scrollview" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/layout_bank_header_bar_toolbar">
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/dimen_20dp">
                    <TextView android:textSize="@dimen/dimen_24sp" android:textStyle="bold" android:textColor="@color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/india_most_sincere_bank"/>
                    <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_17sp" android:textColor="@color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_12dp" android:layout_marginBottom="20dp" android:text="@string/experience_saving_account_new" app:fontType="1"/>
                    <LinearLayout android:orientation="vertical" android:id="@+id/lyt_unexpanded" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_20dp">
                            <androidx.appcompat.widget.AppCompatImageView android:layout_width="@dimen/dimen_36dp" android:layout_height="@dimen/dimen_36dp" app:srcCompat="@drawable/pb_ic_save_money"/>
                            <TextView android:textSize="@dimen/wallet_15sp" android:textColor="@color/black" android:layout_gravity="center_vertical" android:id="@+id/pb_bank_promotion_title1_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/wallet_15_dp" android:text="@string/pb_bank_promotion_title1"/>
                        </LinearLayout>
                        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_20dp">
                            <androidx.appcompat.widget.AppCompatImageView android:layout_width="@dimen/dimen_36dp" android:layout_height="@dimen/dimen_36dp" app:srcCompat="@drawable/ic_fd_wala_account"/>
                            <TextView android:textSize="@dimen/wallet_15sp" android:textColor="@color/black" android:layout_gravity="center_vertical" android:id="@+id/pb_bank_promotion_title2_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/wallet_15_dp" android:text="@string/pb_bank_promotion_title2"/>
                        </LinearLayout>
                        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_20dp">
                            <androidx.appcompat.widget.AppCompatImageView android:layout_width="@dimen/dimen_36dp" android:layout_height="@dimen/dimen_36dp" app:srcCompat="@drawable/pb_ic_bank_promotion_upi"/>
                            <TextView android:textSize="@dimen/wallet_15sp" android:textColor="@color/black" android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/wallet_15_dp" android:text="@string/pb_bank_promotion_title3"/>
                        </LinearLayout>
                        <LinearLayout android:orientation="horizontal" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_20dp">
                            <androidx.appcompat.widget.AppCompatImageView android:layout_width="@dimen/dimen_36dp" android:layout_height="@dimen/dimen_36dp" app:srcCompat="@drawable/pb_ic_bank_promotion_free_debit"/>
                            <TextView android:textSize="@dimen/wallet_15sp" android:textColor="@color/black" android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/wallet_15_dp" android:text="@string/pb_bank_promotion_title4"/>
                        </LinearLayout>
                        <LinearLayout android:orientation="horizontal" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_20dp">
                            <androidx.appcompat.widget.AppCompatImageView android:layout_width="@dimen/dimen_36dp" android:layout_height="@dimen/dimen_36dp" app:srcCompat="@drawable/pb_ic_bank_promotion_lounge"/>
                            <TextView android:textSize="@dimen/wallet_15sp" android:textColor="@color/black" android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/wallet_15_dp" android:text="@string/pb_bank_promotion_title5"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/videosLayout" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="53dp" android:layout_marginTop="@dimen/dimen_18dp">
                        <androidx.appcompat.widget.AppCompatImageView android:id="@+id/videoPlayIcon" android:visibility="gone" android:layout_width="27dp" android:layout_height="27dp" app:srcCompat="@drawable/pb_help_video"/>
                        <com.paytm.utility.RoboTextView android:textSize="12sp" android:textColor="@color/paytm_blue" android:layout_gravity="center_vertical" android:id="@+id/requestCardKnowMoreButton" android:paddingRight="20dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/know_more"/>
                    </LinearLayout>
                    <androidx.appcompat.widget.AppCompatButton android:textSize="@dimen/wallet_17sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/paytments_bank_open_btn_proceed" android:background="@drawable/pb_button_click" android:padding="17dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_30dp" android:text="@string/open_your_savings_acc" android:textAllCaps="false" android:fontFamily="sans-serif-medium"/>
                    <TextView android:textSize="17sp" android:textColor="@color/black" android:id="@+id/tv_error" android:layout_width="match_parent" android:layout_height="wrap_content" android:lineSpacingExtra="2sp"/>
                </LinearLayout>
                <ImageView android:id="@+id/iv_bank_cityscape" android:layout_width="match_parent" android:layout_height="wrap_content" android:src="@drawable/bank_cityscape" android:scaleType="fitXY" android:layout_alignParentBottom="true"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
        <ImageView android:id="@+id/fragment_open_account_iv_close" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="20dp" android:src="@drawable/pb_ic_close_black_bank" android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <LinearLayout android:id="@+id/loading_lyt" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
        <com.airbnb.lottie.LottieAnimationView android:id="@+id/loading_view" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="30dp" android:layout_marginTop="30dp" android:layout_marginBottom="30dp" android:layout_centerInParent="true" app:amount="5" app:circleSize="15" app:duration="@android:integer/config_mediumAnimTime" app:endColor="@color/light_blue_A400" app:startColor="@color/light_blue_A700" app:animationDirectionbundle="-1"/>
    </LinearLayout>
</RelativeLayout>
