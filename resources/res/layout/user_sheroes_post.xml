<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/sheroes_card_view_post" android:layout_width="match_parent" android:layout_height="wrap_content">
    <FrameLayout android:id="@+id/sheroes_fl_spam_post_ui" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:layout_gravity="bottom" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="@integer/int_value_for_line_1">
            <TextView android:textSize="@dimen/sheroes_sp_size_14" android:textColor="@color/sheroes_pure_black" android:id="@+id/sheroes_tv_review_description" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/sheroes_dp_size_11" android:text="@string/sheroes_ID_NEED_TO_BE_REVIEWED" android:layout_weight="@integer/int_value_for_line_1" android:lineSpacingExtra="@dimen/sheroes_dp_size_3" android:fontFamily="@string/sheroes_ID_ROBOTO_REGULAR"/>
            <TextView android:layout_gravity="right" android:id="@+id/sheroes_tv_spam_post_menu" android:background="@color/sheroes_white" android:padding="@dimen/sheroes_dp_size_15" android:layout_width="wrap_content" android:layout_height="match_parent" android:drawableRight="@drawable/vector_sheroes_menu_dashboard"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:layout_gravity="bottom" android:orientation="horizontal" android:id="@+id/sheroes_li_approve_delete" android:background="@color/sheroes_spam_post" android:padding="@dimen/sheroes_dp_size_10" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="@integer/int_value_for_line_1">
            <TextView android:textSize="@dimen/sheroes_sp_size_14" android:textColor="@color/colorAccent" android:gravity="center" android:id="@+id/sheroes_tv_delete_spam_post" android:padding="@dimen/sheroes_dp_size_10" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/sheroes_ID_DELETE" android:layout_weight="0.5" android:textAllCaps="true" android:fontFamily="@string/sheroes_ID_ROBOTO_REGULAR"/>
            <View android:background="@color/sheroes_divide_approve_delete" android:layout_width="1dp" android:layout_height="match_parent" android:layout_marginTop="@dimen/sheroes_dp_size_5" android:layout_marginBottom="@dimen/sheroes_dp_size_5"/>
            <TextView android:textSize="@dimen/sheroes_sp_size_14" android:textColor="@color/sheroes_approve_admin" android:gravity="center" android:id="@+id/sheroes_tv_approve_spam_post" android:padding="@dimen/sheroes_dp_size_10" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/sheroes_ID_APPROVE" android:layout_weight="0.5" android:textAllCaps="true" android:fontFamily="@string/sheroes_ID_ROBOTO_REGULAR"/>
        </LinearLayout>
    </FrameLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/sheroes_view_container" android:background="@color/sheroes_white" android:layout_width="match_parent" android:layout_height="wrap_content" android:baselineAligned="false" android:layout_below="@+id/sheroes_fl_spam_post_ui">
        <RelativeLayout android:id="@+id/sheroes_top_post_view" android:background="@drawable/triangle_sheroes_style" android:visibility="gone" android:layout_width="93dp" android:layout_height="22dp" android:layout_marginTop="4dp">
            <ImageView android:id="@+id/sheroes_star" android:layout_width="14dp" android:layout_height="14dp" android:layout_marginLeft="5dp" android:src="@drawable/vector_sheroes_star" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
            <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#878787" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:text="Top Post" android:layout_toRightOf="@+id/sheroes_star" android:layout_centerVertical="true" android:fontFamily="sans-serif"/>
        </RelativeLayout>
        <LinearLayout android:gravity="top" android:layout_gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/sheroes_dp_size_16" android:layout_marginTop="@dimen/sheroes_dp_size_16" android:layout_marginRight="@dimen/sheroes_dp_size_10" android:weightSum="1">
            <FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                <com.sheroes.final_sdk.appliedlife.pvtltd.SHEROES.views.cutomeviews.CircleImageView android:id="@+id/sheroes_author_pic_icon" android:layout_width="@dimen/sheroes_feed_profile_icon_size" android:layout_height="@dimen/sheroes_feed_profile_icon_size"/>
                <ImageView android:layout_gravity="bottom|right|center_vertical|center_horizontal|center|end" android:id="@+id/sheroes_author_verified_icon" android:background="@drawable/vector_sheroes_verified" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            </FrameLayout>
            <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/sheroes_dp_size_8" android:layout_weight="1">
                <TextView android:textSize="@dimen/sheroes_sp_size_14" android:textColor="@color/sheroes_comment_text" android:id="@+id/sheroes_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:fontFamily="@string/sheroes_ID_ROBOTO_MEDIUM"/>
                <TextView android:textSize="@dimen/sheroes_sp_size_14" android:textColor="@color/sheroes_feed_card_time" android:id="@+id/sheroes_post_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/sheroes_dp_size_3" android:fontFamily="@string/sheroes_ID_ROBOTO_REGULAR"/>
            </LinearLayout>
            <TextView android:id="@+id/sheroes_post_menu" android:padding="@dimen/sheroes_dp_size_10" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:drawableRight="@drawable/vector_sheroes_menu_dashboard"/>
        </LinearLayout>
        <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/sheroes_dp_size_16" android:layout_marginTop="@dimen/sheroes_dp_size_8" android:layout_marginRight="@dimen/sheroes_dp_size_16">
            <com.sheroes.final_sdk.appliedlife.pvtltd.SHEROES.views.cutomeviews.NoScrollTextView android:textSize="@dimen/sheroes_sp_size_14" android:textColor="@color/sheroes_comment_text" android:textColorLink="@color/sheroes_view_more" android:id="@+id/sheroes_description" android:layout_width="match_parent" android:layout_height="wrap_content" android:lineSpacingExtra="@dimen/sheroes_dp_size_3" android:fontFamily="@string/sheroes_ID_ROBOTO_REGULAR"/>
        </FrameLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/sheroes_li_post_link_render" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/sheroes_dp_size_16" android:layout_marginTop="@dimen/sheroes_dp_size_8" android:layout_marginRight="@dimen/sheroes_dp_size_16">
            <FrameLayout android:id="@+id/sheroes_fm_image_thumb" android:background="@color/sheroes_comment_box_edit_border" android:layout_width="match_parent" android:layout_height="@dimen/sheroes_dp_size_180">
                <ImageView android:id="@+id/sheroes_iv_post_link_thumbnail" android:background="@drawable/edit_sheroes_text_line" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:adjustViewBounds="true"/>
                <ImageView android:layout_gravity="center" android:id="@+id/sheroes_iv_play" android:background="@drawable/circular_sheroes_view" android:visibility="gone" android:layout_width="@dimen/sheroes_dp_size_50" android:layout_height="@dimen/sheroes_dp_size_50" android:src="@drawable/vector_sheroes_media_play_dark"/>
                <ProgressBar android:theme="@style/Theme.Sheroes" android:layout_gravity="center" android:id="@+id/sheroes_progress_bar_post_link" android:layout_width="@dimen/sheroes_dp_size_50" android:layout_height="@dimen/sheroes_dp_size_50" android:backgroundTint="@color/sheroes_added_member_text"/>
            </FrameLayout>
            <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/sheroes_dp_size_1">
                <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/sheroes_dp_size_8" android:layout_marginTop="@dimen/sheroes_dp_size_10" android:layout_marginRight="@dimen/sheroes_dp_size_14" android:layout_marginBottom="@dimen/sheroes_dp_size_9">
                    <TextView android:textSize="@dimen/sheroes_sp_size_14" android:textColor="@color/sheroes_comment_text" android:id="@+id/sheroes_tv_post_link_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/sheroes_dp_size_10" android:fontFamily="@string/sheroes_ID_ROBOTO_MEDIUM"/>
                    <TextView android:textSize="@dimen/sheroes_sp_size_9" android:textColor="@color/sheroes_comment_text" android:ellipsize="end" android:id="@+id/sheroes_tv_post_link_sub_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/sheroes_dp_size_6" android:maxLines="@integer/int_value_for_line_3" android:fontFamily="@string/sheroes_ID_ROBOTO_REGULAR"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/sheroes_user_post_images" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="@dimen/sheroes_dp_size_8"/>
        <RelativeLayout android:id="@+id/sheroes_like_comment_count_view" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/sheroes_dp_size_16" android:layout_marginTop="@dimen/sheroes_dp_size_8" android:layout_marginRight="@dimen/sheroes_dp_size_16">
            <TextView android:id="@+id/sheroes_like_heart_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:drawableLeft="@drawable/vector_sheroes_likes_heart"/>
            <TextView android:textSize="@dimen/sheroes_sp_size_14" android:textColor="@color/sheroes_feed_card_time" android:id="@+id/sheroes_likes_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/sheroes_dp_size_8" android:layout_toRightOf="@+id/sheroes_like_heart_icon" android:layout_alignParentTop="true" android:fontFamily="@string/sheroes_ID_ROBOTO_MEDIUM" android:layout_marginStart="@dimen/sheroes_dp_size_8"/>
            <TextView android:textSize="@dimen/sheroes_sp_size_14" android:textColor="@color/sheroes_feed_card_time" android:id="@+id/sheroes_comment_counts" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_alignParentRight="true" android:fontFamily="@string/sheroes_ID_ROBOTO_MEDIUM" android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <View android:id="@+id/sheroes_line_for_no_image" android:background="@color/sheroes_feed_card_time" android:layout_width="match_parent" android:layout_height="@dimen/sheroes_dp_size_0.5" android:layout_marginLeft="@dimen/sheroes_dp_size_16" android:layout_marginTop="@dimen/sheroes_dp_size_8" android:layout_marginRight="@dimen/sheroes_dp_size_16"/>
        <LinearLayout android:orientation="horizontal" android:clickable="false" android:saveEnabled="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_marginTop="@dimen/sheroes_dp_size_6" android:layout_marginRight="8dp">
            <RelativeLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="0.33">
                <TextView android:textSize="@dimen/sheroes_sp_size_14" android:textColor="@color/sheroes_recent_post_comment" android:gravity="center" android:id="@+id/sheroes_like_button" android:paddingLeft="8dp" android:paddingTop="@dimen/sheroes_dp_size_10" android:paddingBottom="@dimen/sheroes_dp_size_10" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/sheroes_ID_LIKE" android:drawableLeft="@drawable/vector_sheroes_heart_in_active" android:drawablePadding="@dimen/sheroes_dp_size_8" android:fontFamily="@string/sheroes_ID_ROBOTO_MEDIUM"/>
            </RelativeLayout>
            <RelativeLayout android:gravity="center" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="0.33">
                <TextView android:textSize="@dimen/sheroes_sp_size_14" android:textColor="@color/sheroes_recent_post_comment" android:id="@+id/sheroes_comment_button" android:paddingTop="@dimen/sheroes_dp_size_10" android:paddingBottom="@dimen/sheroes_dp_size_10" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/sheroes_comment" android:drawableLeft="@drawable/vector_sheroes_comment_icon" android:drawablePadding="@dimen/sheroes_dp_size_8" android:fontFamily="@string/sheroes_ID_ROBOTO_MEDIUM"/>
            </RelativeLayout>
            <RelativeLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="0.33">
                <TextView android:textSize="@dimen/sheroes_sp_size_14" android:textColor="@color/sheroes_share_color" android:gravity="center" android:id="@+id/sheroes_share_button" android:paddingLeft="8dp" android:paddingTop="@dimen/sheroes_dp_size_7" android:paddingBottom="@dimen/sheroes_dp_size_10" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/sheroes_ID_SHARE_ON_WHATS_APP" android:drawableLeft="@drawable/vector_sheroes_share_card" android:drawablePadding="@dimen/sheroes_dp_size_8" android:layout_alignParentRight="true" android:fontFamily="@string/sheroes_ID_ROBOTO_MEDIUM" android:layout_alignParentEnd="true"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
