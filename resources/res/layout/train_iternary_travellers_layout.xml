<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/traveller_container" android:background="@color/white" android:paddingTop="@dimen/dimen_17dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp">
    <RelativeLayout android:paddingLeft="@dimen/dimen_15dp" android:paddingRight="@dimen/dimen_15dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <com.paytm.utility.RoboTextView android:textSize="15sp" android:textStyle="normal" android:textColor="#222222" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Traveller Information" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:fontFamily="sans-serif-medium"/>
        <com.paytm.utility.RoboTextView android:textSize="13sp" android:textStyle="normal" android:textColor="#00b9f5" android:gravity="end" android:id="@+id/traveller_edit" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/edit" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:fontFamily="sans-serif-medium"/>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/adult_traveller_container" android:paddingLeft="@dimen/dimen_15dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/child_lyt" android:paddingLeft="@dimen/dimen_15dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
        <com.paytm.utility.RoboTextView android:textSize="13sp" android:textStyle="normal" android:textColor="#0a0a0a" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_20dp" android:text="Child Traveller Information" android:lineSpacingExtra="5.2sp" android:fontFamily="sans-serif"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/child_msg_lyt" android:background="@color/white" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="18dp">
            <View android:background="@color/color_ebebeb" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginRight="@dimen/dimen_15dp"/>
            <LinearLayout android:orientation="horizontal" android:background="@color/white" android:paddingTop="@dimen/dimen_7dp" android:paddingBottom="@dimen/dimen_7dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/child_traveller_detail_heading">
                <ImageView android:layout_width="@dimen/dimen_13dp" android:layout_height="@dimen/dimen_18dp" android:src="@drawable/pre_t_ic_note_icon"/>
                <com.paytm.utility.RoboTextView android:textSize="11sp" android:textColor="@color/color_666666" android:layout_gravity="center_vertical" android:id="@+id/child_msg_box" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="9dp" android:layout_marginRight="15dp" android:text="@string/child_train_traveller_info_msg" android:lineSpacingExtra="2sp" android:letterSpacing="0.02" app:fontType="2"/>
            </LinearLayout>
            <View android:background="@color/color_ebebeb" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginRight="@dimen/dimen_15dp"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/child_traveller_container" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/extra_traveller_container" android:paddingLeft="@dimen/dimen_15dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="17dp" android:layout_below="@+id/child_traveller_container">
        <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="@color/train_add_extra_text_color" android:gravity="center_horizontal" android:layout_gravity="left|center_vertical|center_horizontal|center" android:id="@+id/add_extra_infants" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_marginBottom="@dimen/dimen_4dp" android:text="@string/add_childrens" android:layout_weight="1" app:fontType="3"/>
        <View android:background="@color/color_ebebeb" android:layout_width="1dp" android:layout_height="match_parent"/>
        <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="@color/train_add_extra_text_color" android:gravity="center_horizontal" android:layout_gravity="right|center_vertical|center_horizontal|center" android:id="@+id/add_extra_traveller" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_marginBottom="@dimen/dimen_4dp" android:text="@string/add_traveller_text" android:layout_weight="1" app:fontType="3"/>
    </LinearLayout>
    <View android:background="@color/color_ebebeb" android:layout_width="match_parent" android:layout_height="5dp" android:layout_marginTop="@dimen/dimen_20dp"/>
</LinearLayout>
