<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/outermost_container" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:orientation="horizontal" android:id="@+id/p2p_top_body_rl" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/motif_iv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_motif_classic" android:layout_alignParentRight="true"/>
        <RelativeLayout android:paddingRight="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="28dp">
            <ImageView android:id="@+id/paytm_logo" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ptop_lending_logo" android:layout_centerInParent="true"/>
            <TextView android:textStyle="normal" android:textColor="@color/color_00b9f5" android:gravity="center_horizontal" android:id="@+id/share_rl" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="20dp" android:text="@string/share" android:layout_alignParentRight="true" android:lineSpacingExtra="4sp" android:fontFamily="sans-serif-medium"/>
        </RelativeLayout>
        <LinearLayout android:orientation="vertical" android:paddingLeft="25dp" android:paddingRight="25dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/motif_iv">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.paytm.utility.RoboTextView android:textSize="21sp" android:textStyle="normal" android:textColor="@color/color_222222" android:id="@+id/p2p_header_tv" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/p2p_status_holder_iv" android:layout_alignParentTop="true" android:fontFamily="@string/fontFamily__roboto_medium" android:layout_alignParentStart="true"/>
                <ImageView android:layout_gravity="center" android:id="@+id/p2p_status_holder_iv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_10dp" android:layout_alignParentRight="true"/>
                <com.airbnb.lottie.LottieAnimationView android:id="@+id/p2p_success_status_lav" android:visibility="visible" android:layout_width="@dimen/dimen_36dp" android:layout_height="@dimen/dimen_36dp" android:layout_marginLeft="@dimen/dimen_10dp" android:layout_alignParentRight="true"/>
                <net.one97.paytm.moneytransfer.utils.CircularProgressBar android:id="@+id/pb_pending" android:visibility="gone" android:layout_width="36dp" android:layout_height="36dp" android:layout_alignParentRight="true" app:animateProgress="true" app:backgroundStrokeColor="#e2ebee" app:backgroundStrokeWidth="3dp" app:drawBackgroundStroke="true" app:foregroundStrokeCap="0" app:foregroundStrokeColor="#ffa400" app:foregroundStrokeWidth="3dp" app:indeterminate="true" app:indeterminateMinimumAngle="0" app:indeterminateRotationAnimationDuration="4000" app:indeterminateSweepAnimationDuration="800" app:startAngle="0"/>
            </RelativeLayout>
            <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_21sp" android:textColor="@color/color_222222" android:id="@+id/p2p_amount_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:fontFamily="@string/fontFamily__roboto_medium"/>
            <TableRow android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_15dp">
                <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                    <com.paytm.utility.RoboTextView android:textSize="15sp" android:textStyle="normal" android:textColor="@color/color_222222" android:id="@+id/p2p_name_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:fontFamily="sans-serif-medium" android:letterSpacing="-0.02"/>
                    <com.paytm.utility.RoboTextView android:textSize="12sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/p2p_mobile_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_7dp" android:fontFamily="sans-serif" android:letterSpacing="-0.02"/>
                </LinearLayout>
                <ImageView android:id="@+id/p2p_profile_iv" android:visibility="visible" android:layout_width="@dimen/dimen_60dp" android:layout_height="@dimen/dimen_60dp" android:src="@drawable/ic_bank_sbi" android:layout_centerHorizontal="true"/>
            </TableRow>
            <com.paytm.utility.RoboTextView android:textSize="12sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/p2p_transaction_tv" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="21dp" android:fontFamily="sans-serif"/>
            <com.paytm.utility.RoboTextView android:textSize="12sp" android:textStyle="normal" android:textColor="#999999" android:id="@+id/p2p_date_tv" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_6dp" android:lineSpacingExtra="3sp" android:fontFamily="@string/font_family_roboto_regular"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout android:id="@+id/view_details_strip" android:paddingLeft="@dimen/dimen_25dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_17dp" android:layout_marginBottom="@dimen/dimen_10dp">
        <TextView android:textStyle="normal" android:textColor="@color/paytm_blue" android:id="@+id/view_details_tv" android:background="#ffffff" android:layout_marginRight="@dimen/dimen_10dp" android:text="@string/view_details" android:fontFamily="sans-serif-medium" style="@style/post_order_buttons"/>
        <TextView android:textStyle="normal" android:textColor="@color/paytm_blue" android:id="@+id/repeat_payment_tv" android:background="#ffffff" android:layout_marginRight="@dimen/dimen_10dp" android:text="@string/new_upi_new_payment" android:fontFamily="sans-serif-medium" style="@style/post_order_buttons"/>
        <TextView android:textStyle="normal" android:textColor="@color/paytm_blue" android:id="@+id/set_payment_tr" android:background="#ffffff" android:visibility="gone" android:text="@string/qpr_set_a_reminder" android:fontFamily="sans-serif-medium" style="@style/post_order_buttons"/>
    </LinearLayout>
    <RelativeLayout android:id="@+id/post_txn_view" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="25dp" android:layout_marginRight="25dp"/>
    <include android:id="@+id/paytm_strip" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" layout="@layout/bottom_paytm_line"/>
</LinearLayout>
