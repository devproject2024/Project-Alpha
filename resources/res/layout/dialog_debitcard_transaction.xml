<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout android:background="@drawable/bottom_sheet_background" android:paddingTop="16dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="#222222" android:id="@+id/tvTitle" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/activity_margin_left" android:layout_marginTop="@dimen/activity_margin_left" android:lineSpacingExtra="0sp" android:fontFamily="sans-serif" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toLeftOf="@+id/ivClose" app:layout_constraintTop_toTopOf="0"/>
        <ImageView android:id="@+id/ivClose" android:padding="@dimen/activity_margin_left" android:layout_width="wrap_content" android:layout_height="wrap_content" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toTopOf="0" app:srcCompat="@drawable/native_ic_close"/>
        <TextView android:textSize="@dimen/dimen_12sp" android:textStyle="normal" android:textColor="@color/color_222222" android:gravity="start" android:id="@+id/tv_convFee" android:paddingRight="8dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/activity_margin_left" android:layout_marginTop="@dimen/dimen_8dp" android:layout_marginRight="@dimen/activity_margin_left" android:lineSpacingExtra="@dimen/dimen_5sp" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintTop_toBottomOf="@+id/tvTitle"/>
        <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#21c17a" android:id="@+id/tvPromoCode" android:background="@drawable/rounded_corner_promocode" android:paddingLeft="8dp" android:paddingTop="6dp" android:paddingRight="8dp" android:paddingBottom="6dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/activity_margin_left" android:layout_marginTop="12dp" android:layout_marginRight="@dimen/activity_margin_left" android:lineSpacingExtra="0sp" android:fontFamily="sans-serif-medium" android:letterSpacing="0.08" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintTop_toBottomOf="@+id/tv_convFee"/>
        <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#444444" android:id="@+id/tvPayUsingText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/activity_margin_left" android:layout_marginTop="36dp" android:layout_marginRight="@dimen/activity_margin_left" android:text="PAY USING" android:lineSpacingExtra="0sp" android:fontFamily="sans-serif-medium" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintTop_toBottomOf="@+id/tvPromoCode"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/savedCardContainer" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/activity_margin_left" android:layout_marginTop="21dp" android:layout_marginRight="@dimen/activity_margin_left" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintTop_toBottomOf="@+id/tvPayUsingText"/>
        <RelativeLayout android:orientation="vertical" android:id="@+id/llPaySecurely" android:background="@drawable/rounded_corner_bg_apply_btn" android:visibility="visible" android:layout_width="match_parent" android:layout_height="60dp" android:layout_marginLeft="@dimen/activity_margin_left" android:layout_marginTop="28dp" android:layout_marginRight="@dimen/activity_margin_left" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintTop_toBottomOf="@+id/savedCardContainer">
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerInParent="true">
                <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="#ffffff" android:gravity="center_horizontal" android:id="@+id/paysecurely" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerHorizontal="true" android:lineSpacingExtra="-1sp" android:fontFamily="sans-serif"/>
                <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#ffffff" android:gravity="center_horizontal" android:id="@+id/paysecurely2" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/paysecurely" android:lineSpacingExtra="0sp" android:fontFamily="sans-serif" android:letterSpacing="-0.04"/>
            </LinearLayout>
            <com.airbnb.lottie.LottieAnimationView android:id="@+id/ltv_loading" android:visibility="visible" android:layout_width="@dimen/width_lottie_button" android:layout_height="@dimen/height_lottie_button" android:layout_centerInParent="true" android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <View android:id="@+id/separator" android:background="@color/color_f3f7f8" android:layout_width="match_parent" android:layout_height="10dp" android:layout_marginTop="34dp" app:layout_constraintTop_toBottomOf="@+id/llPaySecurely"/>
        <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/otherPayModes" android:paddingLeft="@dimen/activity_margin_left" android:paddingTop="24dp" android:paddingRight="@dimen/activity_margin_left" android:paddingBottom="24dp" android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintTop_toBottomOf="@+id/separator">
            <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/tvPayOtherModeText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Use Other Payment Modes" android:fontFamily="sans-serif" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintTop_toTopOf="0"/>
            <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#444444" android:id="@+id/tvPayOtherModeSubText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="Applied offer will be removed" android:fontFamily="sans-serif" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintTop_toBottomOf="@+id/tvPayOtherModeText"/>
            <ImageView android:id="@+id/ivRightArrow" android:layout_width="wrap_content" android:layout_height="wrap_content" app:layout_constraintBottom_toBottomOf="@+id/tvPayOtherModeSubText" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toTopOf="@+id/tvPayOtherModeText" app:srcCompat="@drawable/native_ic_collapse"/>
            <com.airbnb.lottie.LottieAnimationView android:id="@+id/ltv_loading1" android:visibility="gone" android:layout_width="@dimen/width_lottie_button" android:layout_height="@dimen/height_lottie_button" app:layout_constraintBottom_toBottomOf="@+id/tvPayOtherModeSubText" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toTopOf="@+id/tvPayOtherModeText"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <View android:id="@+id/bottomSeparator1" android:background="#00b9f5" android:layout_width="match_parent" android:layout_height="10dp" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintTop_toBottomOf="@+id/otherPayModes"/>
        <View android:background="#012b72" android:layout_width="match_parent" android:layout_height="10dp" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintTop_toBottomOf="@+id/bottomSeparator1"/>
        <FrameLayout android:id="@+id/disableClickView" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="50dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
