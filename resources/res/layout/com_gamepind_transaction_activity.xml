<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/img_back_arrow" android:layout_width="24dp" android:layout_height="24dp" android:layout_marginTop="16dp" android:onClick="onClick" android:layout_marginStart="12dp" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintTop_toTopOf="0" app:srcCompat="@drawable/com_gamepind_back_logo_black"/>
        <TextView android:textSize="20sp" android:textColor="#ff000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Recent Transactions" android:fontFamily="@font/roboto_medium" android:layout_marginStart="12dp" app:layout_constraintBottom_toBottomOf="@+id/img_back_arrow" app:layout_constraintLeft_toRightOf="@+id/img_back_arrow" app:layout_constraintTop_toTopOf="@+id/img_back_arrow"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View android:id="@+id/vw_div" android:background="@color/bg_grey" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="16dp"/>
    <RadioGroup android:orientation="horizontal" android:id="@+id/container_txn_type_btn" android:paddingLeft="12dp" android:paddingTop="12dp" android:paddingRight="12dp" android:paddingBottom="16dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RadioButton android:textSize="12sp" android:textColor="@color/com_gamepind_transaction_txtcolor_selector" android:id="@+id/passbook_transaction_type_all" android:background="@drawable/com_gamepind_transaction_btn_selector" android:paddingLeft="20dp" android:paddingTop="7dp" android:paddingRight="20dp" android:paddingBottom="7dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="true" android:button="@null" android:text="All" android:includeFontPadding="false" android:fontFamily="@font/roboto_medium"/>
        <RadioButton android:textSize="12sp" android:textColor="@color/com_gamepind_transaction_txtcolor_selector" android:id="@+id/passbook_transaction_type_paid" android:background="@drawable/com_gamepind_transaction_btn_selector" android:paddingLeft="16dp" android:paddingTop="7dp" android:paddingRight="16dp" android:paddingBottom="7dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:checked="false" android:button="@null" android:text="Paid" android:includeFontPadding="false" android:fontFamily="@font/roboto_medium"/>
        <RadioButton android:textSize="12sp" android:textColor="@color/com_gamepind_transaction_txtcolor_selector" android:id="@+id/passbook_transaction_type_received" android:background="@drawable/com_gamepind_transaction_btn_selector" android:paddingLeft="12dp" android:paddingTop="7dp" android:paddingRight="12dp" android:paddingBottom="7dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:checked="false" android:button="@null" android:text="Received" android:includeFontPadding="false" android:fontFamily="@font/roboto_medium"/>
        <RadioButton android:textSize="12sp" android:textColor="@color/com_gamepind_transaction_txtcolor_selector" android:id="@+id/passbook_transaction_type_withdrawn" android:background="@drawable/com_gamepind_transaction_btn_selector" android:paddingLeft="12dp" android:paddingTop="7dp" android:paddingRight="12dp" android:paddingBottom="7dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:checked="false" android:button="@null" android:text="Withdrawn" android:includeFontPadding="false" android:fontFamily="@font/roboto_medium"/>
    </RadioGroup>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout android:id="@+id/swipe_refresh_txn" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView android:id="@+id/rv_transaction_list" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/root_txn_none" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="54dp">
                <ImageView android:layout_width="24dp" android:layout_height="24dp" app:srcCompat="@drawable/com_gamepind_transaction_none"/>
                <TextView android:textSize="12sp" android:textColor="#ff878788" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="No transactions under this catagory!" android:fontFamily="@font/robotocondensed_regular"/>
            </LinearLayout> &gt; 
        </RelativeLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</LinearLayout>
