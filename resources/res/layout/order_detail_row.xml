<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="@dimen/dimen_12dp" android:textStyle="bold" android:id="@+id/interestTitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginRight="@dimen/dimen_16dp" android:text="@string/interest_txt"/>
    <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_16dp" android:layout_marginTop="@dimen/dimen_30dp" android:layout_marginRight="@dimen/dimen_16dp">
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp">
            <ImageView android:layout_gravity="center" android:id="@+id/productImage" android:layout_width="@dimen/dimen_40dp" android:layout_height="@dimen/dimen_60dp" android:layout_marginLeft="@dimen/dimen_16dp" android:layout_marginRight="@dimen/dimen_16dp" android:src="@drawable/img_ashoka"/>
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_16dp" android:layout_marginRight="@dimen/dimen_16dp">
                <TextView android:textSize="@dimen/cart_14sp" android:textColor="@color/orderScreentxtColor" android:id="@+id/productTitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Samsun blue Note 9 128 GB \10 (Midnight Black)"/>
                <TextView android:textSize="@dimen/cart_14sp" android:textColor="@color/orderScreentxtColor" android:id="@+id/productQuantity" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="Quantity : 1"/>
            </LinearLayout>
        </LinearLayout>
        <View android:background="@color/emiHeadingColor" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_margin="@dimen/dimen_16dp" android:layout_marginTop="@dimen/dimen_18dp"/>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_16dp" android:layout_marginTop="@dimen/dimen_10dp" android:layout_marginRight="@dimen/dimen_16dp">
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="2">
                <TextView android:textSize="@dimen/cart_14sp" android:textColor="@color/orderScreentxtColor" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Item Value" android:layout_weight="1"/>
                <TextView android:textSize="@dimen/cart_14sp" android:textStyle="bold" android:textColor="@color/orderScreentxtColor" android:gravity="right" android:layout_gravity="right" android:id="@+id/productPriceValue" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_16dp" android:layout_marginRight="@dimen/dimen_16dp" android:text="$664872648" android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:id="@+id/ll_total_interest" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_5dp" android:weightSum="2">
                <TextView android:textSize="@dimen/cart_14sp" android:textColor="@color/orderScreentxtColor" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/total_interest"/>
                <TextView android:textSize="@dimen/cart_14sp" android:textColor="@color/emiHeadingColor" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/charged_by_bank" android:layout_weight="1"/>
                <TextView android:textSize="@dimen/cart_14sp" android:textStyle="bold" android:textColor="@color/orderScreentxtColor" android:gravity="right" android:layout_gravity="right" android:id="@+id/totalInterestxt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_16dp" android:layout_marginRight="@dimen/dimen_16dp" android:text="$123456" android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:id="@+id/emi_cashback_root" android:background="@drawable/mall_emi_rounded_corner" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:weightSum="2" android:backgroundTint="@color/color_bef8ce">
                <TextView android:textSize="@dimen/cart_14sp" android:textStyle="bold" android:textColor="@color/cashbackColor" android:id="@+id/EMICashbackType" android:padding="@dimen/dimen_5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="EMI CashBack" android:layout_weight="1"/>
                <TextView android:textSize="@dimen/cart_14sp" android:textStyle="bold" android:textColor="@color/cashbackColor" android:gravity="right" android:layout_gravity="center" android:id="@+id/totalCashbackTxt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_16dp" android:layout_marginRight="@dimen/dimen_16dp" android:text="$12345" android:layout_weight="1"/>
            </LinearLayout>
            <TextView android:textSize="@dimen/cart_14sp" android:gravity="right" android:id="@+id/cashbackString" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="7dp" android:text="@string/paytmCashback"/>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:weightSum="2">
                <TextView android:textSize="@dimen/cart_14sp" android:textStyle="bold" android:textColor="@color/orderScreentxtColor" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Effective Price" android:layout_weight="1"/>
                <TextView android:textSize="@dimen/cart_14sp" android:textStyle="bold" android:textColor="@color/orderScreentxtColor" android:gravity="right" android:layout_gravity="center" android:id="@+id/effectivePricetxt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_16dp" android:layout_marginRight="@dimen/dimen_16dp" android:text="$12345" android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View android:background="@color/ordeDetailViewColor" android:layout_width="match_parent" android:layout_height="8dp" android:layout_marginTop="5dp"/>
</LinearLayout>
