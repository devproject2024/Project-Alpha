<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:background="#99000000" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:background="@drawable/curve_pop_lyt" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="21sp" android:textStyle="bold" android:textColor="#222222" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="31dp" android:text="Delete Bill?" android:fontFamily="sans-serif"/>
        <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="#222222" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="10dp" android:layout_marginRight="20dp" android:text="Are you sure you want to delete this bill? You and your friends will no longer be able to view the status of amount to be paid/ received against this bill." android:lineSpacingExtra="7sp" android:fontFamily="sans-serif"/>
        <RelativeLayout android:gravity="center" android:fitsSystemWindows="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="19dp" android:layout_marginRight="20dp">
            <Button android:textSize="17sp" android:textStyle="bold" android:textColor="#ffffff" android:id="@+id/button_confirm_delete" android:background="@drawable/sb_blue_btn_bg_rounded" android:layout_width="match_parent" android:layout_height="55dp" android:text="Confirm" android:textAllCaps="false" android:fontFamily="sans-serif" android:stateListAnimator="@null"/>
            <com.airbnb.lottie.LottieAnimationView android:id="@+id/lav_lottie_loader" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="30dp" android:layout_centerInParent="true" app:amount="5" app:animationDirectionbundle="-1" app:circleSize="15" app:duration="@android:integer/config_mediumAnimTime" app:endColor="@color/light_blue_A400" app:startColor="@color/light_blue_A700"/>
        </RelativeLayout>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="#00b9f5" android:gravity="center_horizontal" android:id="@+id/tv_cancel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:layout_marginBottom="35dp" android:text="Cancel" android:layout_centerHorizontal="true" android:fontFamily="sans-serif"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
