<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="bottom|center_vertical|center_horizontal|center" android:background="#40000000" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/root" android:background="@drawable/shape_btn_white_top_radius" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/image_first_game" android:visibility="gone" android:layout_width="match_parent" android:layout_height="130dp" android:layout_marginTop="12dp" android:src="@drawable/games_img_defult_midcard" android:scaleType="centerCrop" android:paddingStart="12dp" android:paddingEnd="12dp" app:layout_constraintTop_toTopOf="0"/>
        <TextView android:textSize="12sp" android:textStyle="bold" android:textColor="@color/black_000000" android:id="@+id/text_recommend_title" android:paddingTop="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="12dp" app:layout_constraintTop_toBottomOf="@+id/image_first_game"/>
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/recycler_recommend" android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_constraintTop_toBottomOf="@+id/text_recommend_title"/>
        <TextView android:id="@+id/split_line" android:background="@color/gray_e3e3e3" android:layout_width="match_parent" android:layout_height="8dp" app:layout_constraintTop_toBottomOf="@+id/recycler_recommend"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="56dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintTop_toBottomOf="@+id/split_line">
            <LinearLayout android:gravity="center" android:layout_gravity="center" android:id="@+id/btn_keeping" android:layout_width="0dp" android:layout_height="56dp" android:layout_weight="1">
                <TextView android:textSize="14sp" android:textColor="@color/black_202020" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/keep_playing" android:drawableLeft="@drawable/ic_keep_game" android:drawablePadding="6dp" android:fontFamily="@font/roboto_medium"/>
            </LinearLayout>
            <TextView android:layout_gravity="center_vertical" android:background="@color/gray_d5d8da" android:layout_width="1dp" android:layout_height="36dp"/>
            <LinearLayout android:gravity="center" android:layout_gravity="center" android:id="@+id/btn_exit" android:layout_width="0dp" android:layout_height="56dp" android:layout_weight="1">
                <TextView android:textSize="14sp" android:textColor="@color/red_d0021b" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/exit" android:drawableLeft="@drawable/ic_exit" android:drawablePadding="6dp" android:fontFamily="@font/roboto_medium"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
