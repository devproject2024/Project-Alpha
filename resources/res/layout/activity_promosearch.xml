<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:textSize="21sp" android:textStyle="bold" android:textColor="#222222" android:id="@+id/tvTitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/activity_margin_left" android:layout_marginTop="36dp" android:text="Apply Promocode" android:fontFamily="sans-serif" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintTop_toTopOf="0"/>
    <ImageView android:id="@+id/ivClose" android:padding="@dimen/activity_margin_left" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toTopOf="0" app:srcCompat="@drawable/native_ic_close"/>
    <EditText android:id="@+id/etDummy" android:layout_width="0dp" android:layout_height="0dp" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintTop_toTopOf="0"/>
    <com.google.android.material.textfield.TextInputLayout android:theme="@style/TILTheme" android:id="@+id/tilEnterPromo" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="40dp" android:layout_marginRight="@dimen/dimen_20dp" app:hintTextAppearance="@style/TextInputLayout" app:layout_constraintTop_toBottomOf="@+id/tvTitle">
        <com.google.android.material.textfield.TextInputEditText android:textSize="21sp" android:textStyle="bold" android:textColor="#222222" android:id="@+id/tietEnterPromo" android:background="@drawable/edit_text_grey_line" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/hint_enter_promocode" android:singleLine="true"/>
    </com.google.android.material.textfield.TextInputLayout>
    <ImageView android:id="@+id/ivEditCross" android:padding="14dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="11dp" android:layout_alignParentRight="true" android:layout_centerVertical="true" app:layout_constraintBottom_toBottomOf="@+id/tilEnterPromo" app:layout_constraintRight_toRightOf="0" app:srcCompat="@drawable/native_edittext_close"/>
    <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#fd5c5c" android:id="@+id/tvPromoError" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/activity_margin_left" android:layout_marginTop="8dp" android:layout_marginRight="@dimen/activity_margin_left" android:lineSpacingExtra="2sp" android:fontFamily="sans-serif" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintTop_toBottomOf="@+id/tilEnterPromo"/>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/llOtherOfferSeparator" android:background="#f3f7f8" android:paddingLeft="@dimen/activity_margin_left" android:paddingRight="@dimen/activity_margin_left" android:layout_width="match_parent" android:layout_height="36dp" android:layout_marginTop="40dp" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintTop_toBottomOf="@+id/tilEnterPromo">
        <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/tvOtherOfferText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:fontFamily="sans-serif-medium" android:letterSpacing="0.04"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/promoListView" android:layout_width="0dp" android:layout_height="0dp" app:layout_constraintBottom_toTopOf="@+id/llApply" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toBottomOf="@+id/llOtherOfferSeparator"/>
    <LinearLayout android:id="@+id/llApply" android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_constraintBottom_toBottomOf="0">
        <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="#ffffff" android:gravity="center" android:id="@+id/tvApplyOfferButton" android:background="@drawable/promo_pay_button_click" android:visibility="gone" android:layout_width="match_parent" android:layout_height="60dp" android:layout_margin="10dp" android:text="Apply Offer" android:lineSpacingExtra="-1sp" android:fontFamily="sans-serif"/>
    </LinearLayout>
    <ScrollView android:id="@+id/llNoPromoLayout" android:visibility="gone" android:layout_width="0dp" android:layout_height="0dp" app:layout_constraintBottom_toTopOf="@+id/llApply" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toBottomOf="@+id/llOtherOfferSeparator">
        <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/activity_margin_left" android:layout_marginTop="90dp" android:layout_marginRight="@dimen/activity_margin_left">
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" app:srcCompat="@drawable/ic_ill_no_promo"/>
            <TextView android:textSize="18sp" android:textColor="#222222" android:gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="36dp" android:text="There are no applicable promocodes at the moment" android:lineSpacingExtra="6sp"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
