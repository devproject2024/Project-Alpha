<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/rl_saved_accounts" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <RelativeLayout android:id="@+id/saved_accounts_parent_layout" android:background="@color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
            <RelativeLayout android:id="@+id/rl_saved_heading" android:background="@color/color_f3f7f8" android:layout_width="match_parent" android:layout_height="36dp">
                <TextView android:textSize="12sp" android:textStyle="bold" android:textColor="@color/color_999999" android:id="@+id/tv_saved_contacts" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:text="@string/pb_money_transfer_saved_accounts" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:fontFamily="@string/font_family_roboto_regular" android:letterSpacing="0.08"/>
                <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="@color/color_00b9f5" android:id="@+id/tv_view_all" android:padding="@dimen/dimen_5dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_15dp" android:text="@string/pb_money_transfer_view_all" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:fontFamily="@string/font_family_roboto_regular"/>
            </RelativeLayout>
            <androidx.recyclerview.widget.RecyclerView android:id="@+id/beneficiary_list" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/rl_saved_heading"/>
        </RelativeLayout>
        <FrameLayout android:id="@+id/progress_layout_beneficiary" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
            <include layout="@layout/pb_si_dummy_benif_list_view"/>
        </FrameLayout>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/rl_self_accounts" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/rl_saved_accounts">
        <RelativeLayout android:id="@+id/self_accounts_parent_layout" android:background="@color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
            <RelativeLayout android:id="@+id/rl_self_heading" android:background="@color/color_f3f7f8" android:layout_width="match_parent" android:layout_height="36dp">
                <TextView android:textSize="12sp" android:textStyle="bold" android:textColor="@color/color_999999" android:id="@+id/tv_self_accounts" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:text="@string/pb_money_transfer_to_own_account_heading" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:textAllCaps="true" android:fontFamily="@string/font_family_roboto_regular" android:letterSpacing="0.08"/>
                <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="@color/color_00b9f5" android:id="@+id/tv_view_all_self" android:padding="@dimen/dimen_5dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_15dp" android:text="@string/pb_money_transfer_view_all" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:fontFamily="@string/font_family_roboto_regular"/>
            </RelativeLayout>
            <androidx.recyclerview.widget.RecyclerView android:id="@+id/self_accounts_list" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/rl_self_heading"/>
        </RelativeLayout>
        <FrameLayout android:id="@+id/progress_layout_self_account" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
            <include layout="@layout/pb_si_dummy_self_accounts_view"/>
        </FrameLayout>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/loader_view" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content">
        <include android:id="@+id/lyt_wallet_loader" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_50dp" layout="@layout/pb_si_layout_wallet_loader"/>
    </RelativeLayout>
</RelativeLayout>
