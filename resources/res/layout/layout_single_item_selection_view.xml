    <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_18sp" android:textColor="@color/color_1d252d" android:id="@+id/headingText" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_16dp" android:layout_marginRight="8dp" android:text="@string/select_item" android:layout_toLeftOf="@+id/img_cross_view" android:layout_below="@+id/img_cross_view" android:layout_marginStart="@dimen/dimen_16dp" android:layout_marginEnd="8dp" app:fontType="4"/>
    <FrameLayout android:id="@+id/frameView" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="@dimen/dimen_120dp" android:layout_below="@+id/headingText">
