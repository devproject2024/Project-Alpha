    <include android:id="@+id/view_bottom_lines" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/btn_proceed_to_pay" layout="@layout/pb_base_bottom_paytm_line"/>
</RelativeLayout>
