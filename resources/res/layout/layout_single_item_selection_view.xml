        </RelativeLayout>
        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/errorView" android:padding="@dimen/dimen_24dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
            <com.paytm.utility.RoboTextView android:textSize="16sp" android:gravity="center" android:id="@+id/errorTitle" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <com.paytm.utility.RoboTextView android:textSize="16sp" android:gravity="center" android:id="@+id/errorMessage" android:layout_width="match_parent" android:layout_height="wrap_content"/>
