<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/set_passcode_img_close" android:padding="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/back_arrow" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
        <ImageView android:paddingTop="15dp" android:paddingBottom="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/pb_ic_payments_bank_logo" android:layout_centerInParent="true"/>
    </RelativeLayout>
    <View android:background="#ebebeb" android:layout_width="match_parent" android:layout_height="1dp"/>
    <com.paytm.utility.RoboTextView android:textSize="19sp" android:textColor="@android:color/black" android:id="@+id/payment_bank_set_passcode_tv_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="25dp" android:layout_marginRight="20dp" android:text="@string/set_paytm_passcode" app:fontType="3"/>
    <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="#aaa" android:id="@+id/tv_passcode_desc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="10dp" android:layout_marginRight="20dp" android:text="@string/set_paytm_passcode_desc" app:fontType="2"/>
    <net.one97.paytm.bankCommon.widget.NonSwipeableViewPager android:layout_gravity="left" android:id="@+id/payment_bank_set_passcode_pager_passcode" android:layout_width="match_parent" android:layout_height="100dp" android:layout_marginLeft="20dp" android:layout_marginTop="120dp"/>
    <com.paytm.utility.RoboTextView android:textSize="11sp" android:textColor="@android:color/holo_red_dark" android:layout_gravity="center_horizontal" android:id="@+id/set_passcode_tv_error_msg" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/passcode_does_not_match" app:fontType="2"/>
</LinearLayout>
