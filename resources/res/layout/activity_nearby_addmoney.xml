<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
        <androidx.appcompat.widget.Toolbar android:gravity="center_vertical" android:id="@+id/nearby_tool_bar" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:elevation="1dp" app:contentInsetEnd="0dp" app:contentInsetStart="0dp">
            <RelativeLayout android:orientation="horizontal" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="match_parent">
                <ImageView android:layout_gravity="center" android:id="@+id/header_back_button" android:paddingLeft="@dimen/header_image_padding_except_right" android:paddingTop="@dimen/wallet_20_dp" android:paddingRight="@dimen/header_image_right_padding" android:paddingBottom="@dimen/header_image_padding_except_right" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/back_arrow" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:onClick="onClick"/>
                <net.one97.paytm.common.widgets.LightTextView android:textSize="@dimen/cart_15sp" android:ellipsize="end" android:id="@+id/toolbar_heading_nearby_location" android:paddingLeft="@dimen/wallet_5_dp" android:paddingTop="@dimen/wallet_5_dp" android:paddingRight="@dimen/wallet_5_dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:lines="1" android:drawableLeft="@drawable/movie_location_img_addmoney" android:drawableRight="@drawable/arrow_down" android:drawablePadding="@dimen/wallet_3_dp" android:layout_toRightOf="@+id/header_back_button" android:layout_centerInParent="true" android:onClick="onLocationSearchClick" app:fontType="2"/>
                <TextView android:textSize="@dimen/action_bar_title_size" android:textColor="@color/black" android:gravity="center_horizontal" android:id="@+id/toolbar_heading_toolbar" android:padding="@dimen/wallet_12_dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/add_wallet_cash" android:layout_centerInParent="true" android:layout_centerHorizontal="true" android:layout_centerVertical="true" android:fontFamily="@string/font_family_roboto_medium"/>
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
        <RelativeLayout android:id="@+id/nearby_layout" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/nearby_tool_bar">
            <ProgressBar android:id="@+id/nearby_progress_bar" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:indeterminateDrawable="@drawable/paytm_progress" android:layout_centerInParent="true"/>
            <LinearLayout android:name="net.one97.paytm.wallet.newdesign.net.one97.paytm.wallet.newdesign.addmoney.view.AddMoneyNearByFragment" android:id="@+id/nearbywithoutfilterfragment" android:layout_width="match_parent" android:layout_height="match_parent"/>
            <LinearLayout android:gravity="center" android:id="@+id/nearby_error_layout_id" android:background="@color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent"/>
        </RelativeLayout>
    </RelativeLayout>
    <include android:gravity="center" android:layout_gravity="bottom" android:id="@+id/nearby_messagebanner" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="@dimen/dimen_100dp" layout="@layout/message_nearby_money"/>
    <include android:gravity="center" android:layout_gravity="bottom" android:id="@+id/nearby_no_location_banner" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="@dimen/dimen_100dp" layout="@layout/layout_nearbylocation_addmoney"/>
    <RelativeLayout android:id="@+id/error_service_not_available_rl" android:layout_width="match_parent" android:layout_height="match_parent" android:animateLayoutChanges="true">
        <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="#000000" android:gravity="center" android:id="@+id/error_service_not_available_tv" android:background="#ebfaff" android:padding="20dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/service_is_only_available_from" android:layout_alignParentBottom="true" android:layout_centerInParent="true" android:lineSpacingExtra="6.5sp" android:fontFamily="sans-serif-medium"/>
    </RelativeLayout>
</FrameLayout>
