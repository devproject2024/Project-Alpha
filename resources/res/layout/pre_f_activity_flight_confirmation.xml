<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/parentContainer" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <LinearLayout android:layout_gravity="bottom" android:orientation="vertical" android:id="@+id/proceed_button_lyt" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
            <ImageView android:layout_gravity="end" android:id="@+id/arrow_down_floating_button" android:visibility="gone" android:layout_width="@dimen/dimen_22dp" android:layout_height="@dimen/dimen_22dp" android:layout_marginRight="@dimen/dimen_21dp" app:srcCompat="@drawable/pre_f_flight_ic_trip_summary_down"/>
            <LinearLayout android:gravity="center" android:orientation="vertical" android:background="@color/color_00b9f5" android:layout_width="match_parent" android:layout_height="@dimen/dimen_60dp" android:layout_margin="@dimen/dimen_5dp">
                <TextView android:enabled="true" android:textSize="@dimen/dimen_16sp" android:textStyle="bold" android:textColor="@color/color_ffffff" android:gravity="top|center_vertical|center_horizontal|center" android:id="@+id/proceed_to_pay_button" android:paddingLeft="@dimen/dimen_6dp" android:paddingTop="@dimen/dimen_3dp" android:paddingRight="@dimen/dimen_6dp" android:paddingBottom="@dimen/dimen_3dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/flight_summary_book_text" android:lineSpacingExtra="0.7sp" android:fontFamily="sans-serif" android:letterSpacing="0.03"/>
                <TextView android:textSize="@dimen/cart_13sp" android:textStyle="normal" android:textColor="@color/color_ffffff" android:gravity="center" android:id="@+id/cashback_text" android:paddingLeft="@dimen/dimen_6dp" android:paddingRight="@dimen/dimen_6dp" android:paddingBottom="@dimen/dimen_6dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:lineSpacingExtra="@dimen/dimen_5sp" android:fontFamily="sans-serif"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/flight_summary_detail_lyt" android:background="@drawable/rounded_corner_rect_with_15dp_radius" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_100dp" android:layout_above="@+id/proceed_button_lyt">
            <RelativeLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:textSize="@dimen/dimen_17sp" android:textStyle="normal" android:textColor="@color/color_323232" android:id="@+id/trip_summary_title" android:paddingLeft="@dimen/dimen_13dp" android:paddingTop="@dimen/dimen_13dp" android:paddingRight="@dimen/dimen_13dp" android:paddingBottom="@dimen/dimen_18dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/flight_summary_title_revamp" android:fontFamily="sans-serif-medium"/>
                <ImageView android:id="@+id/close_button" android:padding="@dimen/dimen_12dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignTop="@+id/trip_summary_title" android:layout_alignBottom="@+id/trip_summary_title" android:layout_alignParentRight="true"/>
                <View android:background="@color/color_ebebeb" android:layout_width="match_parent" android:layout_height="@dimen/dimen_1dp" android:layout_marginLeft="@dimen/dimen_10dp" android:layout_marginRight="@dimen/dimen_10dp" android:layout_below="@+id/trip_summary_title"/>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/timer_lyt" android:visibility="gone" android:layout_width="match_parent" android:layout_height="30dp" android:layout_marginTop="10dp">
                <ProgressBar android:id="@+id/timer_bg_view" android:background="@drawable/flight_rr_timer_progress_bg" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="@dimen/dimen_10dp" android:layout_marginRight="@dimen/dimen_10dp" android:max="1000" android:progressDrawable="@drawable/flight_rounded_corners_progress_bar" style="?android:attr/progressBarStyleHorizontal"/>
                <com.paytm.utility.RoboTextView android:textSize="12.5sp" android:textColor="@color/more_flights_available" android:id="@+id/count_down_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginStart="16dp" android:layout_marginEnd="3dp" app:fontType="4"/>
                <com.paytm.utility.RoboTextView android:textSize="10sp" android:textColor="@color/flight_cart_count_black" android:ellipsize="end" android:id="@+id/timer_session_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="2" android:includeFontPadding="false" android:layout_centerVertical="true" android:layout_marginStart="4dp" android:layout_marginEnd="10dp" android:layout_toEndOf="@+id/count_down_text" app:fontType="2"/>
            </RelativeLayout>
            <androidx.core.widget.NestedScrollView android:id="@+id/scroll_view_container" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
                <LinearLayout android:orientation="vertical" android:id="@+id/lyt_trip_summary_content" android:layout_width="match_parent" android:layout_height="match_parent">
                    <LinearLayout android:orientation="horizontal" android:id="@+id/lyt_flight_summary_info" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="@dimen/dimen_15dp" android:layout_marginRight="@dimen/dimen_15dp" android:layout_marginBottom="@dimen/dimen_15dp"/>
                    <RelativeLayout android:layout_gravity="center_vertical" android:id="@+id/selling_package_bundle" android:paddingLeft="@dimen/dimen_15dp" android:paddingTop="@dimen/dimen_4dp" android:paddingRight="@dimen/dimen_15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="@dimen/dimen_50dp">
                        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="10">
                            <View android:background="@color/color_ebebeb" android:layout_width="match_parent" android:layout_height="@dimen/dimen_1dp" android:layout_marginTop="@dimen/dimen_5dp" android:layout_marginRight="@dimen/dimen_10dp" android:layout_weight="5"/>
                            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" app:srcCompat="@drawable/plus_icon"/>
                            <View android:background="@color/color_ebebeb" android:layout_width="match_parent" android:layout_height="@dimen/dimen_1dp" android:layout_marginLeft="@dimen/dimen_10dp" android:layout_marginTop="@dimen/dimen_5dp" android:layout_weight="5"/>
                        </LinearLayout>
                        <ImageView android:id="@+id/selling_package_bundle_type_iv" android:layout_width="@dimen/dimen_30dp" android:layout_height="@dimen/dimen_30dp" android:layout_marginTop="@dimen/dimen_15dp" android:maxWidth="@dimen/dimen_2dp" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
                        <TextView android:textSize="14sp" android:textColor="@color/black" android:gravity="center_vertical" android:id="@+id/selling_package_bundle_type_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_5dp" android:layout_toRightOf="@+id/selling_package_bundle_type_iv" android:layout_centerVertical="true"/>
                        <View android:background="@color/color_ebebeb" android:layout_width="match_parent" android:layout_height="@dimen/dimen_1dp" android:layout_marginTop="@dimen/dimen_20dp" android:layout_below="@+id/selling_package_bundle_type_iv"/>
                    </RelativeLayout>
                    <TextView android:textSize="@dimen/cart_15sp" android:textStyle="normal" android:textColor="@color/color_000000" android:id="@+id/flight_traveller_title" android:paddingLeft="@dimen/dimen_15dp" android:paddingTop="@dimen/dimen_4dp" android:paddingRight="@dimen/dimen_15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/flight_summary_traveller_title" android:fontFamily="sans-serif-medium"/>
                    <androidx.recyclerview.widget.RecyclerView android:id="@+id/travellerList" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_16dp" android:layout_marginRight="@dimen/dimen_16dp"/>
                    <LinearLayout android:orientation="vertical" android:id="@+id/lyt_flight_traveller_info" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_15dp" android:layout_marginRight="@dimen/dimen_15dp" android:layout_marginBottom="@dimen/dimen_15dp"/>
                    <LinearLayout android:orientation="vertical" android:id="@+id/gst_container" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dimen_5dp">
                        <TextView android:textSize="@dimen/cart_15sp" android:textStyle="normal" android:textColor="@color/color_000000" android:id="@+id/flight_gst_info_title" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_15dp" android:layout_marginRight="@dimen/dimen_15dp" android:layout_marginBottom="@dimen/dimen_5dp" android:text="@string/flight_gst_detail_title" android:fontFamily="sans-serif-medium"/>
                        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_15dp" android:layout_marginTop="@dimen/dimen_11dp" android:layout_marginRight="@dimen/dimen_15dp" android:layout_marginBottom="@dimen/dimen_5dp" android:weightSum="2">
                            <TextView android:textSize="@dimen/dimen_14sp" android:textStyle="normal" android:textColor="@color/warm_grey" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/flight_gst_number" android:layout_weight="1" android:fontFamily="sans-serif"/>
                            <TextView android:textSize="@dimen/dimen_15sp" android:textStyle="normal" android:textColor="@color/color_323232" android:gravity="end" android:id="@+id/flight_gst_number" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1" android:lineSpacingExtra="2.3sp" android:fontFamily="sans-serif-light"/>
                        </LinearLayout>
                        <TextView android:textSize="@dimen/dimen_10sp" android:textStyle="normal" android:textColor="@color/color_00b9f5" android:id="@+id/gst_view_more" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_15dp" android:text="@string/flight_view_more_text" android:fontFamily="sans-serif"/>
                        <View android:id="@+id/gst_number_devider" android:background="@color/color_ebebeb" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/dimen_1dp" android:layout_marginLeft="@dimen/dimen_15dp" android:layout_marginTop="@dimen/dimen_6dp" android:layout_marginRight="@dimen/dimen_15dp"/>
                        <LinearLayout android:orientation="vertical" android:id="@+id/lyt_flight_gst_details" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_15dp" android:layout_marginRight="@dimen/dimen_15dp" android:layout_marginBottom="@dimen/dimen_15dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>
    </RelativeLayout>
    <include android:id="@+id/flight_reprice_dialog" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true" layout="@layout/pre_f_flight_reprice_dialog"/>
    <RelativeLayout android:id="@+id/animationParent" android:background="@drawable/rounded_corner_rect_with_15dp_radius" android:visibility="gone" android:clickable="false" android:layout_width="match_parent" android:layout_height="@dimen/dimen_350dp" android:layout_alignParentBottom="true">
        <com.airbnb.lottie.LottieAnimationView android:id="@+id/progress_animation_view" android:visibility="gone" android:layout_width="@dimen/dimen_150dp" android:layout_height="@dimen/dimen_150dp" android:layout_centerInParent="true" app:lottie_autoPlay="true"/>
        <TextView android:textSize="@dimen/dimen_20sp" android:textStyle="bold" android:textColor="@color/black" android:id="@+id/progress_flight_confirmation_heading" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:text="Hold Tight!" android:layout_below="@+id/progress_animation_view" android:layout_centerHorizontal="true"/>
        <TextView android:textSize="@dimen/dimen_20sp" android:textColor="@color/color_999999" android:id="@+id/progress_flight_confirmation_subheading" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_5dp" android:text="Confirming fares with the airlines" android:layout_below="@+id/progress_flight_confirmation_heading" android:layout_centerHorizontal="true"/>
        <RelativeLayout android:id="@+id/progress_rv_two_way_onward_flight_logo" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
            <ImageView android:id="@+id/progress_two_way_onward_flight_icon" android:layout_width="@dimen/dimen_22dp" android:layout_height="@dimen/dimen_22dp" android:layout_centerVertical="true"/>
            <ImageView android:id="@+id/progress_img_view_onward_first_hop_logo" android:background="@drawable/bg_white_br_grey_background" android:padding="1.5dp" android:visibility="gone" android:layout_width="@dimen/dimen_16dp" android:layout_height="@dimen/dimen_16dp" android:layout_marginLeft="1dp" android:layout_marginTop="@dimen/dimen_3dp" android:layout_marginRight="@dimen/dimen_1dp" android:layout_marginBottom="@dimen/dimen_1dp" android:scaleType="fitCenter" android:elevation="@dimen/dimen_2dp"/>
            <ImageView android:id="@+id/progress_img_view_onward_second_hop_logo" android:background="@drawable/bg_white_br_grey_background" android:padding="1.5dp" android:visibility="gone" android:layout_width="@dimen/dimen_16dp" android:layout_height="@dimen/dimen_16dp" android:layout_marginLeft="13dp" android:layout_marginTop="15dp" android:layout_marginRight="@dimen/dimen_1dp" android:layout_marginBottom="@dimen/dimen_1dp" android:scaleType="fitCenter" android:elevation="@dimen/dimen_2dp"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
