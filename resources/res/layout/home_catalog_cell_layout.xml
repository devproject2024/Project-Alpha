<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/catalog_cell_layout" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/rly_selectbank_container" android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:id="@+id/lyt_catalog_icon_image" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true">
            <ImageView android:id="@+id/catalog_icon_image" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:layout_marginRight="10dp" android:layout_centerVertical="true" android:contentDescription="@string/app_name"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/lyt_catalog_text_tag" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/lyt_catalog_icon_image" android:layout_centerVertical="true"/>
        <ImageView android:id="@+id/catalog_arrow_image" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/arrow_right" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:contentDescription="@string/app_name"/>
        <ImageView android:id="@+id/catalog_selected_image" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/small_success_icon_blue" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:contentDescription="@string/app_name"/>
        <ImageView android:id="@+id/catalog_plus_image" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="4dp" android:src="@drawable/arrow_right" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:contentDescription="@string/app_name"/>
        <ImageView android:id="@+id/catalog_minus_image" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="4dp" android:src="@drawable/minus_icon" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:contentDescription="@string/app_name"/>
    </RelativeLayout>
    <View android:id="@+id/separator" android:background="@color/separators" android:visibility="gone" android:layout_width="match_parent" android:layout_height="1px" android:layout_alignParentTop="true"/>
</RelativeLayout>
