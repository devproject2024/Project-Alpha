<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/white" android:paddingLeft="25dp" android:paddingRight="@dimen/dimen_20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <com.airbnb.lottie.LottieAnimationView android:id="@+id/lavProgress" android:background="@color/white" android:visibility="visible" android:layout_width="match_parent" android:layout_height="100dp" android:adjustViewBounds="true" app:amount="5" app:animationDirectionbundle="-1" app:circleSize="15" app:duration="@android:integer/config_mediumAnimTime" app:endColor="@color/light_blue_A400" app:startColor="@color/light_blue_A700"/>
    <TextView android:textSize="13sp" android:textStyle="normal" android:textColor="@color/color_222222" android:id="@+id/tv_ppb_balance" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="40dp" android:layout_marginBottom="10dp" android:text="@string/uam_available_paytm_balance"/>
    <LinearLayout android:id="@+id/noPasscodeLayout" android:paddingTop="20dp" android:paddingBottom="30dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/tv_ppb_balance">
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/setPaytmPasscodeBtn" android:background="@drawable/uam_rounded_blue_rect" android:padding="@dimen/dimen_15dp" android:paddingTop="@dimen/dimen_15dp" android:paddingBottom="@dimen/dimen_15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_26dp" android:layout_marginBottom="@dimen/dimen_16dp">
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_secure_cta_addmoney"/>
            <TextView android:textSize="@dimen/dimen_15sp" android:textStyle="bold" android:textColor="@color/white" android:gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_10dp" android:text="@string/uam_set_passcode" android:lineSpacingExtra="2sp" android:fontFamily="@string/font_family_roboto_regular"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/normalLayout" android:background="@color/white" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/tv_ppb_balance">
        <LinearLayout android:orientation="vertical" android:id="@+id/llPasscodeContainer" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="40dp" android:layout_weight="1">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <EditText android:textSize="17sp" android:textStyle="normal" android:textColor="@color/color_222222" android:textColorHint="#999999" android:id="@+id/etPasscode" android:background="@drawable/uam_ppb_et_blue_border" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/uam_enter_passcode" android:maxLength="4" android:digits="0123456789" android:lineSpacingExtra="15sp" android:inputType="numberPassword" android:imeOptions="actionDone" android:fontFamily="sans-serif"/>
                <androidx.appcompat.widget.AppCompatImageView android:id="@+id/crossBtn" android:visibility="gone" android:layout_width="18dp" android:layout_height="18dp" android:layout_marginRight="18dp" android:layout_alignParentRight="true" android:layout_centerVertical="true" app:srcCompat="@drawable/uam_close_cross"/>
            </RelativeLayout>
            <TextView android:textSize="11sp" android:textStyle="normal" android:textColor="#fd5c5c" android:id="@+id/tvError" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:fontFamily="sans-serif"/>
            <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_13sp" android:textColor="@color/paytm_blue" android:id="@+id/tvForgotPasscode" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="17dp" android:text="@string/uam_forgot_paytm_passcode" android:layout_alignParentRight="true"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/llProceed" android:background="@drawable/uam_rounded_blue_rect" android:padding="@dimen/dimen_15dp" android:paddingTop="@dimen/dimen_15dp" android:paddingBottom="@dimen/dimen_15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="17dp" android:layout_marginBottom="@dimen/dimen_16dp">
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_secure_cta_addmoney"/>
            <TextView android:textSize="@dimen/dimen_15sp" android:textStyle="bold" android:textColor="@color/white" android:gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_10dp" android:text="@string/uam_proceed_securely" android:lineSpacingExtra="2sp" android:fontFamily="@string/font_family_roboto_regular"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
