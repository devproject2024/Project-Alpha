<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/pb_ic_payment_bank_large_motif" android:layout_alignParentRight="true"/>
    <include android:id="@+id/layout_bank_header_bar" layout="@layout/pb_layout_bank_header_without_divider"/>
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginBottom="@dimen/dimen_80dp" android:fillViewport="true" android:layout_below="@+id/layout_bank_header_bar">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <com.paytm.utility.RoboTextView android:textSize="27sp" android:textColor="@android:color/black" android:layout_gravity="left" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_30dp" android:layout_marginTop="10dp" android:text="@string/congratuation_text" app:fontType="2"/>
            <com.paytm.utility.RoboTextView android:textSize="27sp" android:textColor="@android:color/black" android:layout_gravity="left" android:id="@+id/bank_account_opened_tv_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_30dp" android:layout_marginTop="10dp" app:fontType="4"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/normalLayout" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.paytm.utility.RoboTextView android:textSize="@dimen/wallet_17sp" android:textColor="@color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_30dp" android:layout_marginTop="8dp" android:text="@string/bank_account_opened_text" app:fontType="2"/>
                <com.paytm.utility.RoboTextView android:textSize="@dimen/wallet_17sp" android:textStyle="bold" android:textColor="@color/black" android:gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_30dp" android:layout_marginTop="10dp" android:text="@string/we_will_notify" app:fontType="4"/>
                <View android:id="@+id/divider" android:background="#f3f7f8" android:layout_width="match_parent" android:layout_height="@dimen/wallet_10_dp" android:layout_marginTop="30dp" android:layout_marginBottom="@dimen/dimen_5dp"/>
                <LinearLayout android:orientation="vertical" android:id="@+id/bank_account_opened_lyt_bottom_bar" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_40dp" android:layout_marginRight="@dimen/dimen_40dp">
                    <RelativeLayout android:gravity="center" android:id="@+id/bank_account_opened_bottom_lyt1" android:padding="@dimen/dimen_25dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <ImageView android:id="@+id/icon1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_bank_open_passbook" android:layout_centerVertical="true"/>
                        <com.paytm.utility.RoboTextView android:textSize="@dimen/wallet_12_sp" android:textColor="@color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:text="@string/msg_passbook_will_be_updated" android:layout_toRightOf="@+id/icon1" android:layout_centerVertical="true"/>
                    </RelativeLayout>
                    <View android:id="@+id/bank_account_opened_divider" android:background="#f3f7f8" android:visibility="gone" android:layout_width="match_parent" android:layout_height="1dp"/>
                    <RelativeLayout android:gravity="center" android:id="@+id/bank_account_opened_bottom_lyt2" android:padding="@dimen/dimen_25dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <ImageView android:id="@+id/icon2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/pb_ic_bank_open_pan" android:layout_centerVertical="true"/>
                        <com.paytm.utility.RoboTextView android:textSize="@dimen/wallet_12_sp" android:textColor="@color/black" android:id="@+id/bank_account_opened_tv_full_saviings_access" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:text="@string/update_pan_to_upgrade_savings_acc" android:layout_toRightOf="@+id/icon2" android:layout_centerVertical="true"/>
                    </RelativeLayout>
                </LinearLayout>
                <Button android:textSize="16sp" android:textStyle="normal" android:textColor="@android:color/white" android:id="@+id/bank_account_opened_btn_done" android:background="@color/paytm_blue" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_40dp" android:layout_marginTop="@dimen/wallet_50_dp" android:layout_marginRight="@dimen/dimen_40dp" android:layout_marginBottom="@dimen/wallet_15_dp" android:text="@string/done" android:layout_above="@+id/activity_verify_doc_doc_heading" android:textAllCaps="false"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/p2bLayout" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_15sp" android:textColor="@color/color_222222" android:paddingLeft="@dimen/dimen_30dp" android:paddingRight="@dimen/dimen_11dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_5dp" android:layout_marginBottom="@dimen/dimen_34dp" android:text="@string/pb_you_have_success_setup_acc" app:fontType="2"/>
                <RelativeLayout android:orientation="vertical" android:background="@drawable/pb_gray_rounded_border" android:paddingLeft="@dimen/dimen_20dp" android:paddingTop="@dimen/dimen_24dp" android:paddingRight="@dimen/dimen_20dp" android:paddingBottom="@dimen/dimen_24dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_30dp" android:layout_marginRight="@dimen/dimen_30dp">
                    <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_15sp" android:textColor="@color/black" android:id="@+id/transfer_wallet_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dimen_20dp" android:text="@string/pb_transfer_ur_wallet_balance" app:fontType="2"/>
                    <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_12sp" android:textColor="@color/gray" android:id="@+id/wallet_available_balance_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/pb_available_wallet_balance" android:layout_below="@+id/transfer_wallet_title" app:fontType="2"/>
                    <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_17sp" android:textColor="@color/black" android:id="@+id/available_bal_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/wallet_available_balance_title" app:fontType="2"/>
                    <androidx.appcompat.widget.AppCompatImageView android:layout_width="116dp" android:layout_height="42dp" android:layout_alignTop="@+id/wallet_available_balance_title" android:layout_alignParentRight="true" app:srcCompat="@drawable/pb_transfer_to_bank"/>
                    <Button android:textSize="@dimen/dimen_15sp" android:textStyle="normal" android:textColor="@android:color/white" android:id="@+id/transfer_money_to_bank_btn" android:background="@color/paytm_blue" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/wallet_50_dp" android:layout_marginBottom="@dimen/dimen_21dp" android:text="@string/pb_transfer_money_to_account" android:layout_below="@+id/available_bal_tv" android:textAllCaps="false"/>
                    <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_14sp" android:textColor="@color/paytm_blue" android:id="@+id/skip_btn" android:padding="@dimen/dimen_10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/pb_skip_for_now" android:layout_below="@+id/transfer_money_to_bank_btn" android:layout_centerHorizontal="true" app:fontType="3"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout android:gravity="center" android:id="@+id/progressLayout" android:layout_width="match_parent" android:layout_height="match_parent">
                <com.airbnb.lottie.LottieAnimationView android:layout_gravity="center" android:id="@+id/wallet_loader" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="30dp" android:layout_centerInParent="true" app:amount="5" app:circleSize="15" app:duration="@android:integer/config_mediumAnimTime" app:endColor="@color/light_blue_A400" app:startColor="@color/light_blue_A700" app:animationDirectionbundle="-1"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <androidx.appcompat.widget.AppCompatImageView android:background="@drawable/bank_cityscape" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true"/>
</RelativeLayout>
