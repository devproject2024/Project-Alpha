<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:id="@+id/back_arrow" android:padding="@dimen/dimen_5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_10dp" android:layout_marginTop="@dimen/dimen_20dp" android:src="@drawable/back_arrow" android:layout_marginStart="@dimen/dimen_10dp"/>
    <RelativeLayout android:id="@+id/textViewContainer" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_30dp" android:layout_below="@+id/back_arrow">
        <TextView android:textSize="@dimen/dimen_13sp" android:textColor="@color/paytm_blue" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_19dp" android:text="@string/enter_name_mobile_no" android:layout_marginStart="@dimen/dimen_19dp"/>
        <net.one97.paytm.wallet.entity.CustomEditText android:textSize="@dimen/dimen_20sp" android:textStyle="bold" android:textColor="@color/color_222222" android:id="@+id/filter_contacts_et" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_16dp" android:layout_marginTop="@dimen/dimen_15dp" android:layout_marginRight="@dimen/dimen_15dp" android:maxLines="1" android:inputType="none|text|textNoSuggestions|textUri|textPassword|textVisiblePassword" android:imeOptions="actionDone" android:textCursorDrawable="@drawable/cursor_edittext" android:fontFamily="@string/font_family_roboto_light" android:layout_marginStart="@dimen/dimen_16dp" android:layout_marginEnd="@dimen/dimen_15dp" android:backgroundTint="@color/paytm_blue"/>
        <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="@color/color_fd5c5c" android:ellipsize="end" android:id="@+id/enter_number_tv" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_19dp" android:text="@string/money_transfer_enter_valid_mobile" android:layout_below="@+id/filter_contacts_et" android:layout_marginStart="@dimen/dimen_19dp"/>
        <ImageView android:id="@+id/iv_clear" android:visibility="gone" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginRight="@dimen/dimen_7dp" android:layout_marginBottom="@dimen/dimen_14dp" android:src="@drawable/ic_close_minkyc" android:layout_alignRight="@+id/filter_contacts_et" android:layout_alignBottom="@+id/filter_contacts_et" android:layout_marginEnd="@dimen/dimen_7dp" android:layout_alignEnd="@+id/filter_contacts_et"/>
    </RelativeLayout>
    <androidx.constraintlayout.widget.ConstraintLayout android:orientation="horizontal" android:id="@+id/contactsContainer" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/textViewContainer">
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/contacts_list" android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0"/>
        <net.one97.paytm.common.FastScrollerLinearLayout android:id="@+id/fast_scroller" android:paddingLeft="@dimen/dimen_20dp" android:paddingTop="10dp" android:paddingRight="5dp" android:paddingBottom="5dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:paddingStart="@dimen/dimen_20dp" android:paddingEnd="5dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0" app:layout_constraintTop_toTopOf="0"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <RelativeLayout android:gravity="center" android:id="@+id/proceed_but_rl" android:visibility="gone" android:fitsSystemWindows="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <Button android:textSize="@dimen/dimen_17sp" android:textColor="@color/white" android:id="@+id/proceed_btn" android:background="@drawable/bkg_view_card_button" android:layout_width="match_parent" android:layout_height="@dimen/dimen_55dp" android:text="@string/addcard_proceed" android:textAllCaps="false" android:stateListAnimator="@null"/>
        <com.airbnb.lottie.LottieAnimationView android:id="@+id/pay_button_loader" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="30dp" android:layout_centerInParent="true" app:amount="5" app:animationDirectionbundle="-1" app:circleSize="15" app:duration="@android:integer/config_mediumAnimTime" app:endColor="@color/light_blue_A400" app:startColor="@color/light_blue_A700"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/contact_not_found" android:padding="@dimen/dimen_10dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/contactsContainer">
        <TextView android:id="@+id/contact_not_found_tv" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_10dp" android:layout_marginRight="@dimen/dimen_10dp" android:text="@string/contact_not_found_error"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/go_to_settings" android:padding="@dimen/dimen_10dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_100dp" android:layout_below="@+id/textViewContainer">
        <TextView android:gravity="center" android:id="@+id/go_to_settings_tv" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_10dp" android:layout_marginRight="@dimen/dimen_10dp" android:text="@string/contacts_go_to_settings" android:lineSpacingExtra="@dimen/dimen_5sp"/>
    </RelativeLayout>
    <com.airbnb.lottie.LottieAnimationView android:id="@+id/loader" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="@dimen/dimen_20dp" android:layout_marginTop="@dimen/dimen_30dp" android:layout_below="@+id/contactsContainer" android:layout_centerInParent="true" app:amount="5" app:animationDirectionbundle="-1" app:circleSize="10" app:duration="@android:integer/config_mediumAnimTime" app:endColor="@color/light_blue_A400" app:startColor="@color/light_blue_A700"/>
</RelativeLayout>
