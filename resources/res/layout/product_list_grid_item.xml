<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/lyt_thumnail" android:paddingLeft="@dimen/horizontal_row_divider_width" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/root_data_view" android:layout_width="115dp" android:layout_height="155dp" android:layout_marginTop="12dp">
        <LinearLayout android:gravity="center" android:id="@+id/offer_tag_container" android:layout_width="match_parent" android:layout_height="23dp" android:layout_marginLeft="3dp" android:layout_marginTop="9dp" android:layout_marginRight="3dp" android:layout_centerHorizontal="true">
            <ImageView android:id="@+id/offer_img_left" android:background="@drawable/yellow_band_left" android:layout_width="wrap_content" android:layout_height="wrap_content" android:scaleType="center"/>
            <TextView android:textSize="11sp" android:textColor="#012b72" android:ellipsize="end" android:gravity="center" android:id="@+id/offer_tag" android:background="@drawable/yellow_band_center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxWidth="80dp" android:singleLine="true"/>
            <ImageView android:id="@+id/offer_img_right" android:background="@drawable/yellow_band_right" android:layout_width="wrap_content" android:layout_height="wrap_content" android:scaleType="center"/>
        </LinearLayout>
        <FrameLayout android:id="@+id/product_img_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:layout_below="@+id/offer_tag_container" android:layout_centerHorizontal="true">
            <ImageView android:layout_gravity="center_horizontal" android:id="@+id/content_thumbnail" android:layout_width="65dp" android:layout_height="65dp" android:scaleType="fitCenter" android:contentDescription="@string/row_product_image"/>
        </FrameLayout>
        <RelativeLayout android:id="@+id/product_details_root_tag" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:layout_below="@+id/product_img_container">
            <TextView android:textSize="13sp" android:textColor="@color/flight_city_color" android:ellipsize="end" android:id="@+id/product_row_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:layout_centerHorizontal="true" app:fontType="2"/>
            <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/price_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_below="@+id/product_row_name">
                <TextView android:textSize="12sp" android:textColor="#222222" android:ellipsize="end" android:id="@+id/product_actual_price" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxWidth="80dp" android:singleLine="true" app:fontType="2"/>
                <TextView android:textSize="12sp" android:textColor="@color/row_orange" android:id="@+id/product_discount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:singleLine="true"/>
            </LinearLayout>
        </RelativeLayout>
        <ProgressBar android:id="@+id/image_progress_bar" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:indeterminate="true" android:indeterminateDrawable="@drawable/progress_medium_holo" android:layout_above="@+id/product_details_root_tag" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/moreItemsLyt" android:background="@drawable/carousel_white_background_grey_border" android:visibility="visible" android:layout_width="102dp" android:layout_height="155dp" android:layout_marginTop="12dp">
        <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="3dp" android:layout_marginRight="3dp" android:layout_centerHorizontal="true" android:layout_centerVertical="true">
            <TextView android:textSize="14sp" android:textColor="#333333" android:ellipsize="end" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxWidth="80dp" android:text="Shop all" android:singleLine="true" app:fontType="2"/>
            <TextView android:textSize="13sp" android:textColor="#666666" android:ellipsize="end" android:id="@+id/moreItemsTxt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:maxWidth="80dp" android:singleLine="true" app:fontType="1"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
