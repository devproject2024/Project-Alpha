        <com.paytm.utility.RoboTextView android:textSize="3sp" android:textColor="@color/payment_bank_dark_grey" android:id="@+id/tv_card_holder_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:layout_marginBottom="@dimen/dimen_1dp" android:maxLines="1" android:layout_below="@+id/validUptoTitle" android:layout_alignLeft="@+id/tv_card_number" android:textAllCaps="true" android:fontFamily="@string/font_family_roboto_regular" app:fontType="2"/>
        <ImageView android:layout_width="25dp" android:layout_height="@dimen/dimen_15dp" android:layout_marginLeft="1dp" android:layout_marginTop="44dp" android:layout_marginRight="@dimen/dimen_2dp" android:src="@drawable/pb_ic_rupay_logo" android:layout_alignParentRight="true"/>
    </RelativeLayout>
</FrameLayout>
