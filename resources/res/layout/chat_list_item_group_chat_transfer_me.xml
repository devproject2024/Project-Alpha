<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content">
    <include layout="@layout/chat_view_chat_time"/>
    <RelativeLayout android:gravity="end" android:orientation="horizontal" android:id="@+id/card_group_chat_message" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp">
        <LinearLayout android:gravity="end" android:orientation="horizontal" android:id="@+id/group_chat_message_container" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginEnd="15dp" android:layout_alignParentEnd="true">
            <LinearLayout android:orientation="vertical" android:id="@+id/group_chat_bubble" android:background="@drawable/chat_shape_chat_self_bg" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <androidx.constraintlayout.widget.ConstraintLayout android:orientation="vertical" android:id="@+id/ll" android:layout_width="match_parent" android:layout_height="wrap_content" android:minWidth="180dp">
                    <include android:id="@+id/layoutReply" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_marginTop="8dp" android:layout_marginRight="8dp" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0" layout="@layout/chat_reply_layout_me"/>
                    <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="@color/chat_header_text_color" android:id="@+id/tv_group_chat_transfer_status" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="@string/chat_module_paid" android:layout_marginStart="12dp" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/layoutReply"/>
                    <ImageView android:id="@+id/iv_group_chat_transfer_status" android:layout_width="@dimen/dimen_16dp" android:layout_height="@dimen/dimen_16dp" android:layout_marginTop="14dp" android:layout_marginStart="6dp" app:layout_constraintStart_toEndOf="@+id/tv_group_chat_transfer_status" app:layout_constraintTop_toBottomOf="@+id/layoutReply" app:srcCompat="@drawable/chat_ic_payment_success"/>
                    <ImageView android:id="@+id/iv_group_chat_transfer_info" android:layout_width="@dimen/dimen_16dp" android:layout_height="@dimen/dimen_16dp" android:layout_marginTop="14dp" android:layout_marginEnd="13dp" app:layout_constraintEnd_toEndOf="0" app:layout_constraintTop_toBottomOf="@+id/layoutReply" app:srcCompat="@drawable/ic_chevron_right" app:tint="@color/chat_color_07448E"/>
                    <TextView android:textSize="42sp" android:textColor="@color/chat_header_text_color" android:id="@+id/text_group_chat_transfer_money" android:layout_width="wrap_content" android:layout_height="wrap_content" android:fontFamily="sans-serif-medium" android:paddingEnd="18dp" android:layout_marginStart="10dp" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/tv_group_chat_transfer_status"/>
                    <TextView android:textSize="10sp" android:textStyle="normal" android:textColor="@color/chat_body_text_color" android:id="@+id/text_group_chat_message" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxWidth="260dp" android:layout_marginStart="12dp" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/text_group_chat_transfer_money"/>
                    <LinearLayout android:layout_gravity="center_vertical" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="8dp" android:layout_marginEnd="14dp" app:layout_constraintBottom_toTopOf="@+id/border" app:layout_constraintEnd_toEndOf="0" app:layout_constraintTop_toBottomOf="@+id/text_group_chat_message">
                        <TextView android:textSize="10sp" android:textColor="@color/chat_color_4D000000" android:layout_gravity="center" android:id="@+id/chat_msg_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="12:00 PM" android:fontFamily="sans-serif-medium" android:layout_marginEnd="2dp"/>
                        <ImageView android:layout_gravity="center" android:id="@+id/image_group_chat_read_receipt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/chat_icon_group_chat_message_state_send"/>
                    </LinearLayout>
                    <ImageView android:orientation="vertical" android:id="@+id/border" android:layout_width="0dp" android:layout_height="@dimen/dimen_8dp" android:scaleType="fitXY" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:srcCompat="@drawable/chat_ic_ribbon"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
            <ImageView android:id="@+id/arrow" android:layout_width="wrap_content" android:layout_height="wrap_content" app:srcCompat="@drawable/chat_bubble_arrow_me"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/recycler_group_quick_reply_container" android:visibility="invisible" android:scrollbars="none" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_below="@+id/group_chat_message_container" android:layout_marginEnd="15dp"/>
    </RelativeLayout>
    <include layout="@layout/chat_layout_group_chat_fail_message_tip"/>
</LinearLayout>
