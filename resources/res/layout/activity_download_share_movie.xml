                    <RelativeLayout android:id="@+id/content_thumbnail_layout_movie" android:layout_width="69dp" android:layout_height="86dp" android:layout_alignParentRight="true">
                        <ProgressBar android:layout_gravity="center" android:id="@+id/loading_movie" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:indeterminateDrawable="@drawable/progress_large_holo" android:layout_centerInParent="true"/>
                        <ImageView android:id="@+id/content_thumbnail_movie" android:layout_width="69dp" android:layout_height="86dp" android:scaleType="centerCrop" android:contentDescription="@string/row_product_image"/>
                    </RelativeLayout>
                    <com.paytm.utility.RoboTextView android:textColor="#000000" android:id="@+id/movie_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_10dp" android:layout_toLeftOf="@+id/content_thumbnail_layout_movie" android:layout_alignParentLeft="true" app:fontType="3" style="@style/movie_title"/>
                    <com.paytm.utility.RoboTextView android:textColor="@color/hint_grey" android:id="@+id/movie_language_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_7dp" android:layout_marginRight="@dimen/dimen_10dp" android:layout_toLeftOf="@+id/content_thumbnail_layout_movie" android:layout_below="@+id/movie_name" android:layout_alignParentLeft="true" app:fontType="2" style="@style/movie_language"/>
                    <com.paytm.utility.RoboTextView android:textColor="@color/black" android:id="@+id/cinema_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_16dp" android:layout_marginRight="@dimen/dimen_10dp" android:layout_toLeftOf="@+id/content_thumbnail_layout_movie" android:layout_below="@+id/movie_language_time" android:layout_alignParentLeft="true" app:fontType="3" style="@style/movie_location"/>
                    <com.paytm.utility.RoboTextView android:textColor="@color/color_666666" android:id="@+id/cinema_location" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_10dp" android:layout_toLeftOf="@+id/content_thumbnail_layout_movie" android:layout_below="@+id/cinema_name" android:layout_alignParentLeft="true" app:fontType="1" style="@style/movie_location"/>
                </RelativeLayout>
                <LinearLayout android:orientation="vertical" android:paddingBottom="@dimen/dimen_24dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <com.paytm.utility.RoboTextView android:textColor="@color/black" android:id="@+id/movie_audi" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_24dp" android:layout_marginRight="@dimen/dimen_10dp" app:fontType="3" style="@style/movie_title"/>
                    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_24dp" android:layout_marginTop="@dimen/dimen_4dp" android:layout_marginRight="@dimen/dimen_10dp">
                        <com.paytm.utility.RoboTextView android:textColor="@color/black" android:id="@+id/movie_booking_date" android:layout_width="wrap_content" android:layout_height="wrap_content" app:fontType="3" style="@style/movie_audi_info_b"/>
                        <com.paytm.utility.RoboTextView android:textColor="@color/movie_offline_img_color" android:id="@+id/movie_booking_date_time_separator" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_12dp" android:layout_marginRight="@dimen/dimen_12dp" app:fontType="3" style="@style/movie_audi_info_b"/>
                        <com.paytm.utility.RoboTextView android:textColor="@color/black" android:id="@+id/movie_booking_time" android:layout_width="wrap_content" android:layout_height="wrap_content" app:fontType="3" style="@style/movie_audi_info_b"/>
                    </LinearLayout>
                    <com.paytm.utility.RoboTextView android:textColor="@color/black" android:id="@+id/movie_ticket_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_24dp" android:layout_marginTop="@dimen/dimen_16dp" android:layout_marginRight="@dimen/dimen_10dp" app:fontType="2" style="@style/movie_audi_info"/>
                    <com.paytm.utility.RoboTextView android:textColor="@color/black" android:id="@+id/movie_seats_no" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_24dp" android:layout_marginTop="@dimen/dimen_2dp" android:layout_marginRight="@dimen/dimen_24dp" app:fontType="2" style="@style/movie_audi_info"/>
                    <View android:layout_width="@dimen/dimen_1dp" android:layout_height="45dp"/>
                    <RelativeLayout android:layout_gravity="center_horizontal" android:id="@+id/content_thumbnail_layout_qr" android:layout_width="110dp" android:layout_height="110dp">
                        <ProgressBar android:id="@+id/loading_qr" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:indeterminateDrawable="@drawable/progress_large_holo" android:layout_centerInParent="true"/>
                        <ImageView android:id="@+id/content_thumbnail_qr" android:layout_width="110dp" android:layout_height="110dp" android:layout_marginStart="0dp" android:layout_alignParentStart="true"/>
                    </RelativeLayout>
                    <LinearLayout android:layout_gravity="center_horizontal" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_2dp">
                        <com.paytm.utility.RoboTextView android:textColor="@color/color_222222" android:id="@+id/booking_id_label" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Booking ID - " app:fontType="2" style="@style/movie_language"/>
                        <com.paytm.utility.RoboTextView android:textColor="@color/color_222222" android:id="@+id/booking_id" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_2dp" app:fontType="3" style="@style/movie_language_b"/>
                    </LinearLayout>
                    <View android:background="@color/bg_grid_grey" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="@dimen/dimen_20dp" android:layout_marginBottom="@dimen/dimen_12dp"/>
                    <LinearLayout android:orientation="horizontal" android:id="@+id/ticketCountLL" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <com.paytm.utility.RoboTextView android:textColor="@color/hint_grey" android:id="@+id/ticketPriceDesc" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_24dp" android:layout_marginTop="@dimen/dimen_2dp" android:layout_marginRight="@dimen/dimen_24dp" android:layout_weight="1" app:fontType="2" style="@style/movie_language"/>
                        <com.paytm.utility.RoboTextView android:textColor="@color/hint_grey" android:id="@+id/ticketPrice" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_24dp" android:layout_marginTop="@dimen/dimen_2dp" android:layout_marginRight="@dimen/dimen_24dp" app:fontType="2" style="@style/movie_language"/>
                    </LinearLayout>
                    <LinearLayout android:orientation="horizontal" android:id="@+id/foodItemPaymentLL" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_2dp">
                        <com.paytm.utility.RoboTextView android:textColor="@color/hint_grey" android:id="@+id/foodItemDesc" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_24dp" android:layout_marginTop="@dimen/dimen_2dp" android:layout_marginRight="@dimen/dimen_24dp" android:layout_weight="1" app:fontType="2" style="@style/movie_language"/>
                        <com.paytm.utility.RoboTextView android:textColor="@color/hint_grey" android:id="@+id/foodItemPrice" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_24dp" android:layout_marginTop="@dimen/dimen_2dp" android:layout_marginRight="@dimen/dimen_24dp" app:fontType="2" style="@style/movie_language"/>
                    </LinearLayout>
                    <LinearLayout android:orientation="horizontal" android:id="@+id/taxesLL" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_2dp">
                        <com.paytm.utility.RoboTextView android:textColor="@color/hint_grey" android:id="@+id/taxesDesc" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_24dp" android:layout_marginTop="@dimen/dimen_2dp" android:layout_marginRight="@dimen/dimen_24dp" android:layout_weight="1" app:fontType="2" style="@style/movie_language"/>
                        <com.paytm.utility.RoboTextView android:textColor="@color/hint_grey" android:id="@+id/taxesPrice" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_24dp" android:layout_marginTop="@dimen/dimen_2dp" android:layout_marginRight="@dimen/dimen_24dp" app:fontType="2" style="@style/movie_language"/>
                    </LinearLayout>
                    <LinearLayout android:orientation="horizontal" android:id="@+id/cancellationProtectLL" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_2dp">
                        <com.paytm.utility.RoboTextView android:textColor="@color/hint_grey" android:id="@+id/cancellationProtectDesc" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_24dp" android:layout_marginTop="@dimen/dimen_2dp" android:layout_marginRight="@dimen/dimen_24dp" android:layout_weight="1" app:fontType="2" style="@style/movie_language"/>
                        <com.paytm.utility.RoboTextView android:textColor="@color/hint_grey" android:id="@+id/cancellationProtectPrice" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_24dp" android:layout_marginTop="@dimen/dimen_2dp" android:layout_marginRight="@dimen/dimen_24dp" app:fontType="2" style="@style/movie_language"/>
                    </LinearLayout>
                    <LinearLayout android:orientation="horizontal" android:id="@+id/totalAmountLL" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_7dp">
                        <com.paytm.utility.RoboTextView android:textColor="@color/black" android:id="@+id/totalAmountDesc" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_24dp" android:layout_marginTop="@dimen/dimen_2dp" android:layout_marginRight="@dimen/dimen_24dp" android:layout_weight="1" app:fontType="3" style="@style/movie_location_b"/>
                        <com.paytm.utility.RoboTextView android:textColor="@color/black" android:id="@+id/totalAmountPrice" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_24dp" android:layout_marginTop="@dimen/dimen_2dp" android:layout_marginRight="@dimen/dimen_24dp" app:fontType="3" style="@style/movie_location_b"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
    <LinearLayout android:id="@+id/footerLayout" android:background="@color/white" android:padding="@dimen/dimen_8dp" android:layout_width="match_parent" android:layout_height="71dp" android:layout_alignParentBottom="true" android:elevation="@dimen/dimen_10dp">
        <TextView android:textSize="18sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/tvDownlaod" android:background="@drawable/bg_blue_solid_btn" android:layout_width="match_parent" android:layout_height="match_parent" android:text="Download Ticket" app:fontType="3"/>
    </LinearLayout>
    <ProgressBar android:id="@+id/id_movie_ticket_progress_bar" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:indeterminateDrawable="@drawable/progress_large_holo" android:layout_centerInParent="true"/>
</RelativeLayout>
