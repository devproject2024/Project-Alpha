<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="#f3f7f8" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/header" android:layout_width="match_parent" android:layout_height="44dp" android:layout_marginLeft="@dimen/dimen_12dp" android:layout_marginRight="@dimen/dimen_12dp">
        <ImageView android:id="@+id/ivBackButton" android:layout_width="28dp" android:layout_height="28dp" android:src="@drawable/black_back_arrow" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
        <ImageView android:layout_width="@dimen/dimen_78dp" android:layout_height="@dimen/dimen_26dp" android:layout_centerInParent="true" app:srcCompat="@drawable/paytm_header_image"/>
        <TextView android:textSize="@dimen/dimen_14dp" android:textColor="#00b9f5" android:gravity="center_vertical" android:id="@+id/tvShare" android:paddingLeft="@dimen/dimen_8dp" android:paddingRight="8dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="Share" android:layout_alignParentRight="true" android:layout_centerVertical="true" app:fontType="3"/>
    </RelativeLayout>
    <ScrollView android:id="@+id/scrollView" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_above="@+id/footerLayout" android:layout_below="@+id/header">
