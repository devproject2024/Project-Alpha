            <net.one97.paytm.o2o.movies.utils.CJRTicketView android:id="@+id/ticketView" android:layout_width="match_parent" android:layout_height="600dp" app:ticketCornerRadius="10dp" app:ticketCornerType="1" app:ticketDividerColor="#dedede" app:ticketDividerPadding="0dp" app:ticketDividerType="1" app:ticketElevation="15dp" app:ticketOrientation="0" app:ticketScallopPositionPercent="99" app:ticketScallopRadius="12dp" app:ticketShowBorder="false" app:ticketShowDivider="true"/>
