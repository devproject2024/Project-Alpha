<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/white" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp">
    <RelativeLayout android:orientation="vertical" android:background="@drawable/pre_f_flight_flight_cashback_rectangle" android:paddingLeft="20dp" android:paddingTop="20dp" android:paddingRight="20dp" android:paddingBottom="20dp" android:layout_width="match_parent" android:layout_height="100dp">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.paytm.utility.RoboTextView android:textSize="16sp" android:textColor="@color/white" android:id="@+id/cashback_value" android:layout_width="wrap_content" android:layout_height="wrap_content" app:fontType="2"/>
        </RelativeLayout>
        <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="@color/white" android:id="@+id/cashback_desc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_25dp" android:text="@string/promo_text" app:fontType="2"/>
    </RelativeLayout>
    <LinearLayout android:orientation="horizontal" android:id="@+id/promo_breakup_layout" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="@dimen/dimen_20dp" android:layout_marginRight="@dimen/dimen_20dp" android:layout_marginBottom="@dimen/dimen_5dp">
        <com.paytm.utility.RoboTextView android:textSize="11sp" android:textColor="@color/color_666666" android:id="@+id/header_value" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/passengers" android:layout_weight="1" android:layout_toRightOf="@+id/cashback_value" app:fontType="1"/>
        <com.paytm.utility.RoboTextView android:textSize="11sp" android:textColor="@color/color_666666" android:gravity="right" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/cashback" android:layout_weight="1" android:layout_toRightOf="@+id/cashback_value" app:fontType="1"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/cashback_details_container" android:paddingLeft="20dp" android:paddingRight="20dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <com.paytm.utility.RoboTextView android:textSize="14sp" android:textColor="@color/color_00b9f5" android:gravity="center" android:id="@+id/wallet_statement" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginBottom="10dp" android:text="@string/wallet_statement_title" android:layout_weight="1" android:fontFamily="sans-serif-medium"/>
</LinearLayout>
