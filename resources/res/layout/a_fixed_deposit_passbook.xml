<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true">
    <RelativeLayout android:background="@color/white" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="match_parent">
        <ImageView android:id="@+id/iv_payment_logo" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="25dp" android:src="@drawable/pb_ic_payments_bank_logo" android:layout_centerHorizontal="true"/>
        <ImageView android:id="@+id/iv_back_arrow" android:background="?android:attr/selectableItemBackground" android:paddingTop="8dp" android:paddingRight="8dp" android:paddingBottom="8dp" android:layout_width="@dimen/dimen_32dp" android:layout_height="@dimen/dimen_32dp" android:layout_marginLeft="20dp" android:layout_marginTop="24dp" android:src="@drawable/pb_ic_back"/>
        <TextView android:textSize="13sp" android:textColor="#444444" android:gravity="center_horizontal" android:id="@+id/tv_fd" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/pb_fixed_deposit" android:layout_below="@+id/iv_payment_logo" android:layout_centerHorizontal="true" android:textAllCaps="true" android:letterSpacing="0.23"/>
        <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#00b9f5" android:gravity="end" android:id="@+id/tv_know_more" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="18dp" android:layout_marginRight="6dp" android:text="@string/pb_view_benefits" android:layout_alignParentRight="true" android:lineSpacingExtra="8sp" android:fontFamily="sans-serif"/>
        <RelativeLayout android:id="@+id/rl_header_wrapper" android:background="@color/color_fafbfb" android:padding="@dimen/dimen_20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="37dp" android:layout_below="@+id/tv_fd">
            <TextView android:textSize="16sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/tv_you_do_not_have" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/pb_you_do_not_have_any" android:lineSpacingExtra="8sp" android:fontFamily="sans-serif-medium"/>
            <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#00b9f5" android:id="@+id/tv_view_interest_table" android:padding="@dimen/dimen_10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="-10dp" android:text="@string/pb_view_interest_table" android:layout_below="@+id/tv_you_do_not_have" android:lineSpacingExtra="8sp" android:fontFamily="sans-serif"/>
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="-20dp" android:src="@drawable/pb_fd_landing_icon" android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/rl_manage_fd" android:paddingLeft="@dimen/dimen_20dp" android:paddingTop="20dp" android:paddingBottom="14dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/rl_header_wrapper" android:paddingStart="@dimen/dimen_20dp">
            <androidx.appcompat.widget.AppCompatImageView android:id="@+id/fd_manage_iv" android:layout_width="24dp" android:layout_height="24dp" android:layout_alignParentLeft="true" android:layout_alignParentStart="true" app:srcCompat="@drawable/ic_manage_fd"/>
            <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#00b9f5" android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="@string/pb_fg_manage_fixed_deposit" android:layout_toRightOf="@+id/fd_manage_iv" android:layout_centerHorizontal="true" android:lineSpacingExtra="8sp" android:fontFamily="sans-serif"/>
            <androidx.appcompat.widget.AppCompatImageView android:layout_gravity="right" android:id="@+id/arrow_manage_fd" android:padding="3dp" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginLeft="@dimen/dimen_5dp" android:layout_marginRight="17dp" android:layout_alignParentRight="true" app:srcCompat="@drawable/pb_ic_arrow_forward_small"/>
        </RelativeLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/ll_blue_strip" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/rl_manage_fd">
            <View android:background="@color/color_00b9f5" android:layout_width="match_parent" android:layout_height="8dp"/>
            <View android:background="@color/color_012b72" android:layout_width="match_parent" android:layout_height="8dp"/>
        </LinearLayout>
        <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/tv_your_fixed_deposit" android:background="@color/color_fafbfb" android:paddingLeft="@dimen/dimen_20dp" android:paddingTop="16dp" android:paddingBottom="16dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/pb_your_fixed_deposit_passbook" android:layout_below="@+id/ll_blue_strip" android:fontFamily="sans-serif-medium"/>
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/rv_fixed_deposit_history" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/tv_your_fixed_deposit"/>
        <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#b6c2cc" android:gravity="center" android:id="@+id/v_ftr_2" android:background="#f3f7f8" android:layout_width="match_parent" android:layout_height="50dp" android:text="@string/pb_in_partnership_with_induslnd" android:layout_alignParentBottom="true" android:fontFamily="sans-serif"/>
    </RelativeLayout>
</ScrollView>
