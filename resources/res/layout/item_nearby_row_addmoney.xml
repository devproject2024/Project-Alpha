<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/rl_nearby_item" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/wallet_15_dp">
        <ImageView android:id="@+id/iv_nearby_icon" android:padding="@dimen/wallet_2_dp" android:paddingLeft="@dimen/wallet_20_dp" android:layout_width="@dimen/dimen_64dp" android:layout_height="@dimen/dimen_64dp" android:layout_marginTop="@dimen/wallet_15_dp" android:src="@drawable/circle_filled_color" android:scaleType="fitXY" android:layout_alignParentLeft="true"/>
        <RelativeLayout android:id="@+id/ll_nearby_brand_info_container" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/wallet_15_dp" android:layout_marginTop="@dimen/wallet_15_dp" android:layout_toRightOf="@+id/iv_nearby_icon">
            <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_16dp" android:textColor="@color/color_222222" android:ellipsize="end" android:gravity="left" android:id="@+id/tv_nearby_row_brand_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_15dp" android:layout_marginBottom="@dimen/wallet_1_dp" android:lines="1" android:layout_toLeftOf="@+id/ll_nearby_action" android:layout_alignParentLeft="true" android:marqueeRepeatLimit="marquee_forever" android:fontFamily="@string/font_family_roboto_regular" app:fontType="3"/>
            <androidx.appcompat.widget.AppCompatRatingBar android:theme="@style/RatingBar" android:id="@+id/store_rating" android:padding="0dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="-2dp" android:layout_marginTop="@dimen/dimen_3dp" android:layout_below="@+id/tv_nearby_row_brand_name" style="?android:attr/ratingBarStyleSmall"/>
            <LinearLayout android:gravity="center_horizontal" android:orientation="horizontal" android:id="@+id/ll_nearby_time" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_15dp" android:layout_below="@+id/store_rating">
                <View android:layout_gravity="center_vertical" android:background="@drawable/circle_nearby_addmoney" android:visibility="gone" android:layout_width="4dp" android:layout_height="4dp" android:layout_marginLeft="@dimen/dimen_5dp" android:layout_marginTop="2dp"/>
                <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="@color/green" android:gravity="center_horizontal" android:layout_gravity="center" android:id="@+id/tv_open" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_8dp" android:fontFamily="@string/font_family_roboto_regular"/>
                <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="@color/color_222222" android:gravity="center_horizontal" android:layout_gravity="center" android:id="@+id/tv_time" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_5dp" android:layout_marginRight="@dimen/dimen_15dp" android:lineSpacingExtra="0sp" android:fontFamily="@string/font_family_roboto_regular"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:id="@+id/ll_nearby_action" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_5dp" android:layout_alignParentRight="true">
                <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/ll_nearby_call" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/wallet_15_dp">
                    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_nearby_call_addmoney"/>
                    <TextView android:textSize="10sp" android:textStyle="normal" android:textColor="@color/color_222222" android:gravity="center_horizontal" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/wallet_7_dp" android:text="@string/nearby_call_text" android:lineSpacingExtra="0sp" android:fontFamily="sans-serif"/>
                </LinearLayout>
                <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/ll_direction_distance" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_15dp" android:layout_below="@+id/store_rating">
                    <ImageView android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_direction"/>
                    <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="@color/color_222222" android:gravity="center_horizontal" android:id="@+id/tv_nearby_distance" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_7dp" android:lineSpacingExtra="0sp" android:fontFamily="@string/font_family_roboto_regular"/>
                </LinearLayout>
            </LinearLayout>
            <net.one97.paytm.common.widgets.LightTextView android:textSize="@dimen/wallet_12_sp" android:textColor="@color/color_blue_nearby_industry_type" android:gravity="left" android:id="@+id/tv_nearby_row_brandcategory_type" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/wallet_1_dp" android:layout_toLeftOf="@+id/ll_nearby_action" android:layout_below="@+id/ll_nearby_time" android:layout_alignParentLeft="true" app:fontType="3"/>
            <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_11sp" android:textColor="@color/color_999999" android:ellipsize="end" android:gravity="left" android:id="@+id/tv_nearby_row_brand_address" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_5dp" android:layout_marginRight="@dimen/wallet_15_dp" android:layout_toLeftOf="@+id/ll_nearby_action" android:layout_below="@+id/tv_nearby_row_brandcategory_type" android:layout_alignParentLeft="true" android:fontFamily="@string/font_family_roboto_regular"/>
            <TextView android:textSize="@dimen/dimen_12sp" android:ellipsize="end" android:id="@+id/tv_deal_offer" android:background="@drawable/background_nearby_item_del_offer_addmoney" android:paddingLeft="@dimen/dimen_12dp" android:paddingTop="@dimen/dimen_5dp" android:paddingRight="@dimen/dimen_5dp" android:paddingBottom="@dimen/dimen_5dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:layout_marginRight="@dimen/wallet_10_dp" android:layout_marginBottom="@dimen/dimen_5dp" android:maxLines="2" android:layout_below="@+id/tv_nearby_row_brand_address"/>
            <TextView android:textSize="@dimen/wallet_12_sp" android:textStyle="normal" android:textColor="@color/gray" android:id="@+id/tv_available_here" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dimen_10dp" android:text="@string/nearby_service_title" android:lineSpacingExtra="0sp" android:fontFamily="sans-serif-medium" android:letterSpacing="0.02"/>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dimen_10dp">
                <net.one97.paytm.common.widgets.LightTextView android:textSize="@dimen/wallet_12_sp" android:textColor="@color/color_nearby_need_help" android:gravity="center" android:id="@+id/tv_pay_with_paytm" android:background="@drawable/background_nearby_item_button_grey_addmoney" android:paddingLeft="@dimen/dimen_10dp" android:paddingRight="@dimen/dimen_10dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="@dimen/dimen_25dp" android:layout_marginRight="@dimen/dimen_10dp" android:text="@string/nearby_service_pay_with_paytm" app:fontType="4"/>
                <net.one97.paytm.common.widgets.LightTextView android:textSize="@dimen/wallet_12_sp" android:textColor="@color/color_nearby_need_help" android:gravity="center" android:id="@+id/tv_add_cash" android:background="@drawable/background_nearby_item_button_grey_addmoney" android:paddingLeft="@dimen/dimen_10dp" android:paddingRight="@dimen/dimen_10dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="@dimen/dimen_25dp" android:layout_marginRight="@dimen/dimen_10dp" android:text="@string/nearby_service_add_cash" android:layout_toRightOf="@+id/tv_pay_with_paytm" app:fontType="4"/>
                <net.one97.paytm.common.widgets.LightTextView android:textSize="@dimen/wallet_12_sp" android:textColor="@color/color_nearby_need_help" android:gravity="center" android:id="@+id/tv_upgrade_account" android:background="@drawable/background_nearby_item_button_grey_addmoney" android:paddingLeft="@dimen/dimen_10dp" android:paddingRight="@dimen/dimen_10dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="@dimen/dimen_25dp" android:text="@string/nearby_service_upgrade_account" android:layout_toRightOf="@+id/tv_add_cash" app:fontType="4"/>
            </RelativeLayout>
            <View android:id="@+id/bottom_separator" android:background="@color/color_F3F7F8" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="@dimen/dimen_15dp" android:layout_below="@+id/tv_deal_offer"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/rl_progress_bar" android:background="@color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ProgressBar android:id="@+id/pb_nearby_kyc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:indeterminate="true" android:layout_centerInParent="true"/>
    </RelativeLayout>
</RelativeLayout>
