<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="center" android:orientation="vertical" android:background="@color/clp_white" android:clickable="true" android:layout_width="match_parent" android:layout_height="@dimen/dimen_70dp">
    <View android:id="@+id/cardDivider" android:background="#dde5ed" android:visibility="visible" android:layout_width="match_parent" android:layout_height="@dimen/dimen_1dp"/>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:paddingStart="@dimen/dimen_16dp" android:paddingEnd="@dimen/dimen_16dp">
        <LinearLayout android:orientation="vertical" android:id="@+id/cart_details_container" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
            <com.paytmmall.clpartifact.customViews.CLPRobotoTextView android:textSize="@dimen/dimen_12sp" android:textColor="@color/clp_label1" android:id="@+id/priceLabel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/total_price" android:includeFontPadding="false"/>
            <LinearLayout android:gravity="bottom" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.paytmmall.clpartifact.customViews.CLPRobotoTextView android:textSize="@dimen/dimen_20sp" android:textColor="@color/clp_color_2222222" android:id="@+id/priceValue" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="1498" android:includeFontPadding="false" android:paddingEnd="@dimen/dimen_13dp"/>
                <com.paytmmall.clpartifact.customViews.CLPRobotoTextView android:textSize="@dimen/dimen_12sp" android:textColor="@color/clp_label1" android:id="@+id/itemLabel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/cart_count" android:includeFontPadding="false"/>
                <ImageView android:id="@+id/cartArrow" android:layout_width="20dp" android:layout_height="20dp" app:srcCompat="@drawable/clp_ic_arrow_up_cart"/>
            </LinearLayout>
            <TextView android:textSize="@dimen/dimen_12sp" android:textColor="#26d07c" android:id="@+id/effective_price_tag" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Effective Price: 13044"/>
        </LinearLayout>
        <Button android:textSize="@dimen/dimen_14sp" android:textColor="@color/clp_white" android:id="@+id/goToCartBtn" android:background="@drawable/clp_bg_blue_rectangle" android:paddingTop="@dimen/dimen_12dp" android:paddingBottom="@dimen/dimen_12dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/go_to_cart" android:textAllCaps="false" android:paddingStart="@dimen/dimen_28dp" android:paddingEnd="@dimen/dimen_28dp"/>
    </LinearLayout>
</LinearLayout>
