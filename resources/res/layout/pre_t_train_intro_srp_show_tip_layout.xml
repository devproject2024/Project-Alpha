<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/main_container" android:layout_width="@dimen/dimen_160dp" android:layout_height="@dimen/dimen_160dp">
        <FrameLayout android:layout_width="@dimen/dimen_160dp" android:layout_height="@dimen/dimen_160dp">
            <ImageView android:id="@+id/background_show_tip_image" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="fitXY" android:rotation="90" app:srcCompat="@drawable/pre_t_train_ic_rectangle_with_arc"/>
        </FrameLayout>
        <LinearLayout android:gravity="bottom" android:orientation="vertical" android:id="@+id/show_tip_layout" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_alignParentBottom="true">
            <TextView android:textSize="@dimen/dimen_13sp" android:textStyle="normal" android:textColor="@color/color_262626" android:id="@+id/title_txt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_12dp" android:layout_marginTop="@dimen/dimen_15dp" android:layout_marginRight="@dimen/dimen_12dp" android:text="2/3" android:lineSpacingExtra="@dimen/dimen_3sp" android:fontFamily="sans-serif"/>
            <TextView android:textSize="@dimen/dimen_11sp" android:textStyle="bold" android:textColor="@color/color_666666" android:id="@+id/description_txt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_12dp" android:layout_marginTop="10dp" android:layout_marginRight="@dimen/dimen_12dp" android:text="@string/train_show_tip_view_desc1" android:lineSpacingExtra="3sp" android:fontFamily="sans-serif"/>
            <View android:id="@+id/divider_view" android:background="@color/color_ebebeb" android:layout_width="match_parent" android:layout_height="@dimen/dimen_1dp" android:layout_margin="@dimen/dimen_12dp"/>
            <LinearLayout android:gravity="right" android:layout_gravity="right" android:orientation="horizontal" android:paddingBottom="@dimen/dimen_20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_20dp">
                <TextView android:textSize="@dimen/dimen_13sp" android:textStyle="bold" android:textColor="@color/color_cacaca" android:id="@+id/negative_btn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_22dp" android:singleLine="true" android:fontFamily="sans-serif"/>
                <TextView android:textSize="@dimen/dimen_13sp" android:textStyle="bold" android:textColor="#00c8f7" android:id="@+id/positive_btn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:fontFamily="sans-serif"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
