<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="28dp">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="16dp" android:layout_marginTop="26dp">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp">
            <com.android.volley.toolbox.NetworkImageView android:id="@+id/event_imageview_thumb_nail" android:background="@drawable/homepage_default_icon" android:layout_width="118dp" android:layout_height="141dp" android:src="@drawable/agent_refresh_bg" android:scaleType="centerCrop" android:adjustViewBounds="true"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/container_linear_lyt" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="26dp" android:layout_toRightOf="@+id/event_imageview_thumb_nail">
                <TextView android:textSize="12sp" android:textColor="@color/color_000000" android:ellipsize="end" android:id="@+id/event_booking_id_textview" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/booking_id" android:lines="2" android:includeFontPadding="false" app:fontType="3"/>
                <TextView android:textSize="16dp" android:textStyle="bold" android:textColor="#ff002e6e" android:ellipsize="end" android:id="@+id/event_name" android:paddingTop="6dp" android:paddingBottom="6dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Event      Name" android:maxLines="2" android:lines="2" android:includeFontPadding="false" app:fontType="3"/>
                <TextView android:textSize="14sp" android:textColor="@color/color_000000" android:ellipsize="end" android:id="@+id/event_date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="Date" android:singleLine="true" android:includeFontPadding="false" app:fontType="3"/>
                <TextView android:textSize="14sp" android:textColor="@color/color_000000" android:ellipsize="end" android:id="@+id/event_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="Time" android:lines="1" android:singleLine="true" android:includeFontPadding="false" app:fontType="3"/>
            </LinearLayout>
        </RelativeLayout>
        <TextView android:textSize="14sp" android:textColor="@color/color_000000" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/event_ticket_summary" android:background="@color/white" android:paddingTop="15dp" android:paddingBottom="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:includeFontPadding="false" app:fontType="3"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/container_linear_lyt" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginBottom="26dp" android:layout_toRightOf="@+id/event_imageview_thumb_nail">
            <TextView android:textSize="14dp" android:textColor="@color/color_000000" android:id="@+id/event_address_name" android:paddingTop="8dp" android:paddingBottom="6dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:includeFontPadding="false" app:fontType="3"/>
            <TextView android:textSize="12sp" android:textColor="@color/color_000000" android:ellipsize="end" android:id="@+id/event_address_desc" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:text="@string/event_address_detail" android:includeFontPadding="false" app:fontType="2"/>
            <TextView android:textSize="14sp" android:textColor="@color/flight_tab_select" android:ellipsize="end" android:gravity="bottom|left|center_vertical|center_horizontal|center" android:id="@+id/txt_events_view_more" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="@string/event_get_directions" android:maxLines="1" android:singleLine="true" app:fontType="3"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
