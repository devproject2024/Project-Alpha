<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:paddingLeft="20dp" android:layout_width="match_parent" android:layout_height="82dp" android:paddingStart="20dp">
    <ImageView android:id="@+id/item_settings_iv_title" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginTop="25dp" android:src="@mipmap/chat_ic_launcher"/>
    <LinearLayout android:orientation="horizontal" android:id="@+id/item_settings_ll" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="20dp" android:layout_toRightOf="@+id/item_settings_iv_title">
        <TextView android:textSize="14sp" android:textColor="@android:color/black" android:id="@+id/item_settings_tv_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/chat_module_title" android:layout_weight="1"/>
        <ImageView android:layout_gravity="center" android:id="@+id/item_settings_nav" android:layout_width="6dp" android:layout_height="12dp" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:src="@mipmap/chat_ic_forward" android:layout_alignParentRight="true"/>
        <Switch android:id="@+id/item_settings_switch" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="20dp" android:thumb="@drawable/chat_shape_switch_thumb_common_normal" android:track="@drawable/chat_switch_track_common_normal_selector"/>
    </LinearLayout>
    <TextView android:textSize="12sp" android:textColor="@color/color_808080" android:id="@+id/item_settings_tv_intro" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/chat_module_intro" android:layout_below="@+id/item_settings_ll" android:layout_alignLeft="@+id/item_settings_ll"/>
    <TextView android:background="@color/split_line" android:layout_width="match_parent" android:layout_height="1dp" android:layout_alignParentBottom="true"/>
</RelativeLayout>
