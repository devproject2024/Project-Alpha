<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/lyt_outer_container" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="15dp" android:layout_marginTop="15dp" android:layout_toLeftOf="@+id/saved_card_remove_menu">
        <ImageView android:id="@+id/img_card" android:layout_width="match_parent" android:layout_height="wrap_content" android:src="@drawable/saved_cards_maestro" android:scaleType="fitXY" android:layout_alignTop="@+id/lyt_txt" android:layout_alignBottom="@+id/lyt_txt"/>
        <RelativeLayout android:id="@+id/lyt_txt" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <com.paytm.utility.RoboTextView android:textSize="16sp" android:textColor="@android:color/white" android:id="@+id/txt_card_name" android:paddingLeft="20dp" android:paddingTop="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" app:fontType="4"/>
            <com.paytm.utility.RoboTextView android:textSize="16sp" android:textColor="@android:color/white" android:id="@+id/txt_card_number" android:paddingLeft="20dp" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/txt_card_name" app:fontType="4"/>
        </RelativeLayout>
    </RelativeLayout>
    <ImageView android:id="@+id/saved_card_remove_menu" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/remove_cart_item" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    <View android:background="@color/separators" android:layout_width="match_parent" android:layout_height="8dp" android:layout_below="@+id/lyt_outer_container"/>
</RelativeLayout>
