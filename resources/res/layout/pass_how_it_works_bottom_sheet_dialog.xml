<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@drawable/pass_passbook_filter_sheet_bg" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/rlHeader" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_25dp" android:layout_marginStart="@dimen/dimen_25dp" android:layout_marginEnd="@dimen/dimen_25dp">
        <com.paytm.utility.RoboTextView android:textSize="@dimen/text_size_21sp" android:textStyle="bold" android:textColor="@color/color_222222" android:id="@+id/titleTv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/wallet_filter_tran" android:layout_toLeftOf="@+id/closeImv" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:lineSpacingExtra="-6sp" android:fontFamily="sans-serif" app:fontType="4"/>
        <ImageView android:id="@+id/closeImv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/pass_pdp_close_icon" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <androidx.core.widget.NestedScrollView android:id="@+id/nsvHeader" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/rlHeader">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#1d252d" android:id="@+id/descTv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="25dp" android:layout_marginTop="12dp" android:layout_marginRight="25dp" android:text="It is a prepaid digital wallet that offers tax-saving meal allowance to employees. You may use the balance to pay any food merchant." android:lineSpacingExtra="6sp" android:fontFamily="sans-serif"/>
            <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#506d85" android:id="@+id/noteTv" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="25dp" android:layout_marginTop="30dp" android:layout_marginRight="25dp" android:text="@string/msg_note_your_wallet_is_non_transferable" android:lineSpacingExtra="4sp" android:fontFamily="sans-serif"/>
            <View android:background="#dde5ed" android:layout_width="match_parent" android:layout_height="@dimen/dimen_1dp" android:layout_marginLeft="25dp" android:layout_marginTop="20dp" android:layout_marginRight="25dp"/>
            <TextView android:textSize="16sp" android:textStyle="normal" android:textColor="#1d252d" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="25dp" android:layout_marginTop="20dp" android:text="@string/how_it_works" android:lineSpacingExtra="4sp" android:fontFamily="sans-serif-medium" android:letterSpacing="0.03"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/oneLinearLayout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="25dp" android:layout_marginTop="20dp" android:layout_marginRight="25dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout android:orientation="vertical" android:id="@+id/llFooter" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:layout_below="@+id/nsvHeader">
        <View android:background="#00b9f5" android:layout_width="match_parent" android:layout_height="10dp"/>
        <View android:background="#012b72" android:layout_width="match_parent" android:layout_height="10dp"/>
    </LinearLayout>
</RelativeLayout>
