<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@drawable/v8_content_dialog_rounded_top_corner" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="#222222" android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="28dp" android:text="@string/browse_plan_detail_heading_text" android:lineSpacingExtra="6sp" android:fontFamily="sans-serif"/>
        <ImageView android:id="@+id/close_button" android:layout_width="@dimen/dimen_33dp" android:layout_height="@dimen/dimen_33dp" android:layout_marginTop="@dimen/dimen_28dp" android:layout_alignParentRight="true" android:layout_marginEnd="@dimen/dimen_24dp" app:srcCompat="@drawable/ic_close_dialog"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="80dp" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginRight="@dimen/dimen_20dp">
        <net.one97.paytm.recharge.common.widget.CJRAmountView android:textSize="18sp" android:textStyle="bold" android:textColor="@color/color_222222" android:gravity="center" android:id="@+id/price_Text" android:paddingRight="@dimen/dimen_10dp" android:layout_width="wrap_content" android:layout_height="35dp" android:layout_marginTop="@dimen/dimen_27dp" android:layout_centerVertical="true"/>
        <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/validity_days_txt" android:paddingRight="@dimen/dimen_20dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_12dp" android:layout_toRightOf="@+id/price_Text" android:layout_centerVertical="true" android:lineSpacingExtra="5sp" android:fontFamily="sans-serif"/>
    </RelativeLayout>
    <View android:id="@+id/divider" android:background="#f3f7f8" android:layout_width="match_parent" android:layout_height="1dp"/>
    <LinearLayout android:orientation="horizontal" android:id="@+id/type_2_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="@dimen/dimen_13dp" android:layout_marginRight="@dimen/dimen_20dp" android:weightSum="3">
        <LinearLayout android:orientation="vertical" android:id="@+id/data_layout" android:visibility="gone" android:layout_width="0dp" android:layout_height="60dp" android:layout_weight="1">
            <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <ImageView android:layout_gravity="top" android:id="@+id/dataImage" android:layout_width="20dp" android:layout_height="20dp" app:srcCompat="@drawable/icon_data"/>
                <TextView android:textSize="12sp" android:textColor="#8f969c" android:gravity="center_vertical" android:id="@+id/dataText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="@string/browse_plan_data"/>
            </LinearLayout>
            <TextView android:textSize="12sp" android:textColor="@color/color_222222" android:id="@+id/dataValidityText" android:paddingRight="5dp" android:layout_width="wrap_content" android:layout_height="30dp"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/talktime_layout" android:visibility="gone" android:layout_width="0dp" android:layout_height="60dp" android:layout_weight="1.2">
            <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <ImageView android:layout_gravity="left" android:id="@+id/talktimeImage" android:layout_width="@dimen/dimen_20dp" android:layout_height="@dimen/dimen_20dp" app:srcCompat="@drawable/icon_talktime"/>
                <TextView android:textSize="@dimen/dimen_12sp" android:textColor="#8f969c" android:gravity="center_vertical" android:id="@+id/talktimeText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_5dp" android:text="@string/browse_plan_talktime"/>
            </LinearLayout>
            <TextView android:textSize="@dimen/dimen_12sp" android:textColor="@color/color_222222" android:id="@+id/talkTimeValidityText" android:paddingRight="@dimen/dimen_5dp" android:layout_width="wrap_content" android:layout_height="@dimen/dimen_30dp"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/sms_layout" android:visibility="gone" android:layout_width="0dp" android:layout_height="@dimen/dimen_60dp" android:layout_weight="0.8">
            <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <ImageView android:layout_gravity="center" android:id="@+id/smsImage" android:layout_width="@dimen/dimen_20dp" android:layout_height="@dimen/dimen_20dp" app:srcCompat="@drawable/icon_sms"/>
                <TextView android:textSize="@dimen/dimen_12sp" android:textColor="#8f969c" android:gravity="center_vertical" android:id="@+id/smsText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="@string/SMS_txt"/>
            </LinearLayout>
            <TextView android:textSize="12sp" android:textColor="@color/color_222222" android:id="@+id/smsValidityText" android:paddingRight="5dp" android:layout_width="wrap_content" android:layout_height="30dp" android:text="Unlimited"/>
        </LinearLayout>
    </LinearLayout>
    <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#8f969c" android:id="@+id/browseplan_description_title" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginRight="@dimen/dimen_20dp" android:text="@string/browse_plan_description" android:fontFamily="sans-serif" android:letterSpacing="0.09"/>
    <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/browseplan_description" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="@dimen/dimen_12dp" android:layout_marginRight="@dimen/dimen_24dp" android:lineSpacingExtra="4sp" android:fontFamily="sans-serif"/>
    <net.one97.paytm.recharge.widgets.widget.CJRProceedWidgetV8 android:textColor="@android:color/white" android:id="@+id/select_plan_button" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="20dp" android:text="@string/btn_select_plan" android:textAllCaps="false"/>
</LinearLayout>
