<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/lyt_grid_item" android:background="@drawable/mall_rounded_corner_grid_white_bg" android:paddingLeft="@dimen/dimen_10dp" android:paddingRight="@dimen/dimen_10dp" android:paddingBottom="@dimen/dimen_10dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <RelativeLayout android:gravity="center" android:id="@+id/lyt_product_image" android:padding="@dimen/dimen_10dp" android:layout_width="125dp" android:layout_height="125dp" android:layout_marginTop="@dimen/dimen_25dp" android:layout_centerHorizontal="true">
        <ProgressBar android:layout_gravity="center" android:id="@+id/img_loading" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:indeterminateDrawable="@drawable/mall_progress_medium_holo" android:layout_centerInParent="true"/>
        <ImageView android:layout_gravity="center" android:id="@+id/product_image" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="centerInside" android:contentDescription="@string/app_name"/>
        <com.paytmmall.artifact.widget.RoboTextView android:textSize="12sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/txt_out_of_stock" android:background="@drawable/mall_bg_out_of_stock_view" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/out_of_stock" android:layout_centerInParent="true" app:fontType="2"/>
    </RelativeLayout>
    <TextView android:textSize="@dimen/cart_13sp" android:textColor="@color/grid_product_name" android:ellipsize="end" android:gravity="center" android:id="@+id/product_name" android:layout_width="125dp" android:layout_height="wrap_content" android:maxLines="2" android:minLines="2" android:layout_below="@+id/lyt_product_image" android:layout_centerHorizontal="true"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="125dp" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_5dp" android:weightSum="3" android:layout_below="@+id/product_name">
        <TextView android:textSize="@dimen/cart_12sp" android:textColor="@color/black" android:gravity="center" android:id="@+id/discounted_price" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true" android:layout_weight="1"/>
        <RelativeLayout android:textColor="@color/black" android:layout_gravity="center_vertical" android:id="@+id/layout_actual_price" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1" android:layout_toRightOf="@+id/discounted_price">
            <TextView android:textSize="@dimen/wallet_11_sp" android:textColor="@color/gray" android:id="@+id/actual_price" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <ImageView android:background="@color/gray" android:layout_width="match_parent" android:layout_height="1dp" android:layout_alignRight="@+id/actual_price" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <TextView android:textSize="@dimen/cart_12sp" android:textColor="@color/grid_discount" android:gravity="end" android:id="@+id/discount_percent" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:id="@+id/offer_tag_container" android:visibility="gone" android:layout_width="match_parent" android:layout_height="30dp" android:layout_marginTop="@dimen/dimen_10dp" android:layout_marginBottom="10dp" android:layout_centerHorizontal="true">
        <TextView android:textSize="12sp" android:textColor="#333333" android:ellipsize="end" android:gravity="center" android:id="@+id/offer_tag" android:background="@drawable/mall_offer_tag_rounded_corner" android:paddingLeft="8dp" android:paddingTop="4dp" android:paddingRight="8dp" android:paddingBottom="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxWidth="100dp" android:singleLine="true"/>
    </LinearLayout>
</RelativeLayout>
