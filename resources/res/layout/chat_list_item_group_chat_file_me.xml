<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <include layout="@layout/chat_view_chat_time"/>
    <RelativeLayout android:id="@+id/card_group_chat_message" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal" android:id="@+id/group_chat_message_container" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="8dp" android:layout_marginEnd="15dp" android:layout_alignParentEnd="true">
            <LinearLayout android:orientation="vertical" android:id="@+id/group_chat_bubble" android:background="@drawable/chat_shape_chat_self_bg" android:layout_width="282dp" android:layout_height="wrap_content">
                <RelativeLayout android:orientation="horizontal" android:id="@+id/layout_group_chat_file_message" android:background="@drawable/chat_shape_chat_self_bg" android:padding="12dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_alignParentRight="true" android:paddingStart="10dp">
                    <TextView android:textSize="10sp" android:textColor="@color/chat_forwarded_color" android:id="@+id/text_group_chat_list_forward_tip" android:background="@null" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="5dp" android:text="@string/chat_module_forwarded" android:drawableLeft="@drawable/chat_ic_reply_tip" android:drawablePadding="5dp" android:drawableStart="@drawable/chat_ic_reply_tip"/>
                    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/text_group_chat_list_forward_tip">
                        <ImageView android:gravity="center" android:id="@+id/image_group_chat_file_type" android:background="@null" android:layout_width="29dp" android:layout_height="35dp" android:src="@drawable/chat_icon_file_pdf" android:scaleType="fitXY"/>
                        <TextView android:textSize="14sp" android:textColor="@color/groupChatTextMe" android:ellipsize="end" android:id="@+id/text_group_chat_file_name" android:background="@null" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="2dp" android:singleLine="true" android:layout_toRightOf="@+id/image_group_chat_file_type" android:layout_marginStart="10dp"/>
                        <TextView android:textSize="10sp" android:textColor="@color/groupChatTextMe" android:id="@+id/text_group_chat_file_size" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/text_group_chat_file_name" android:alpha="0.5" android:layout_marginStart="10dp" android:layout_toEndOf="@+id/image_group_chat_file_type"/>
                        <LinearLayout android:orientation="horizontal" android:id="@+id/ll_time_status_container" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignBottom="@+id/image_group_chat_file_type" android:layout_alignParentEnd="true">
                            <TextView android:textSize="10sp" android:textColor="@color/chat_color_4D000000" android:layout_gravity="center" android:id="@+id/chat_msg_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="12:00 PM" android:fontFamily="sans-serif-medium" android:layout_marginEnd="2dp"/>
                            <ImageView android:layout_gravity="center" android:id="@+id/image_group_chat_read_receipt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/chat_icon_group_chat_message_state_send"/>
                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
            <ImageView android:id="@+id/arrow" android:layout_width="wrap_content" android:layout_height="wrap_content" app:srcCompat="@drawable/chat_bubble_arrow_me"/>
        </LinearLayout>
        <View android:id="@+id/view_select_view" android:background="@color/chat_select_bg" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignTop="@+id/group_chat_message_container" android:layout_alignBottom="@+id/group_chat_message_container"/>
    </RelativeLayout>
    <include layout="@layout/chat_layout_group_chat_fail_message_tip"/>
</LinearLayout>
