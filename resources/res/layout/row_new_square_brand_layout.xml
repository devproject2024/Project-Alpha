<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/lyt_thumnail" android:paddingLeft="@dimen/horizontal_row_divider_width" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/root_data_view" android:layout_width="@dimen/row_square_width" android:layout_height="@dimen/row_square_height" android:layout_marginBottom="2dp">
        <LinearLayout android:gravity="center" android:id="@+id/offer_tag_container" android:layout_width="match_parent" android:layout_height="23dp" android:layout_marginLeft="3dp" android:layout_marginRight="3dp" android:layout_centerHorizontal="true">
            <ImageView android:id="@+id/offer_img_left" android:background="@drawable/yellow_band_left" android:layout_width="wrap_content" android:layout_height="wrap_content" android:scaleType="center"/>
            <TextView android:textSize="10sp" android:textColor="#012b72" android:ellipsize="end" android:gravity="center" android:id="@+id/offer_tag" android:background="@drawable/yellow_band_center" android:padding="1dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxWidth="80dp" android:singleLine="true" app:fontType="2"/>
            <ImageView android:id="@+id/offer_img_right" android:background="@drawable/yellow_band_right" android:layout_width="wrap_content" android:layout_height="wrap_content" android:scaleType="center"/>
        </LinearLayout>
        <FrameLayout android:id="@+id/product_img_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_below="@+id/offer_tag_container" android:layout_centerHorizontal="true">
            <ImageView android:layout_gravity="center_horizontal" android:id="@+id/content_thumbnail" android:layout_width="@dimen/row_square_image_width" android:layout_height="@dimen/row_square_image_height" android:scaleType="fitCenter" android:layout_below="@+id/product_discount_text" android:contentDescription="@string/row_product_image"/>
            <View android:layout_gravity="right|center_vertical|center_horizontal|center" android:id="@+id/vertical_seperator" android:background="@color/light_grey" android:layout_width="2dp" android:layout_height="35dp"/>
        </FrameLayout>
        <RelativeLayout android:id="@+id/product_details_root_tag" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:layout_below="@+id/product_img_container">
            <TextView android:textSize="12sp" android:textColor="#666666" android:ellipsize="end" android:id="@+id/product_row_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:layout_centerHorizontal="true" app:fontType="2"/>
            <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/price_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_below="@+id/product_row_name">
                <TextView android:textSize="12sp" android:textColor="#222222" android:id="@+id/product_offer_price" android:padding="1dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" app:fontType="2"/>
                <TextView android:textSize="12sp" android:textColor="#999999" android:id="@+id/product_actual_price" android:padding="1dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:singleLine="true" app:fontType="1"/>
            </LinearLayout>
            <TextView android:textSize="12sp" android:textColor="@color/grid_discount" android:gravity="center" android:id="@+id/product_discount_text" android:paddingLeft="4dp" android:paddingTop="1dp" android:paddingRight="4dp" android:paddingBottom="1dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="20dp" android:singleLine="true" android:layout_below="@+id/price_container" android:layout_centerHorizontal="true" app:fontType="2"/>
        </RelativeLayout>
        <ProgressBar android:id="@+id/image_progress_bar" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:indeterminate="true" android:indeterminateDrawable="@drawable/progress_medium_holo" android:layout_above="@+id/product_details_root_tag" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/see_all_view" android:visibility="gone" android:layout_width="@dimen/row_square_width" android:layout_height="@dimen/row_square_height">
        <TextView android:textSize="@dimen/text_size_item_sub_heading" android:textStyle="bold" android:textColor="@color/color_33b5e5" android:id="@+id/txt_see_all" android:background="@drawable/bg_text_box" android:padding="3dp" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/see_all" android:singleLine="true" android:drawableRight="@drawable/blue_seeall" android:layout_centerInParent="true" android:layout_centerVertical="true" app:fontType="2"/>
    </RelativeLayout>
</RelativeLayout>
