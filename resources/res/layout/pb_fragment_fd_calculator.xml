<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:padding="16dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <WebView android:id="@+id/wbJS" android:layout_width="1dp" android:layout_height="1dp"/>
    <TextView android:textSize="22sp" android:textStyle="bold" android:textColor="#222222" android:id="@+id/tv_heading" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/fixed_deposit_calculator" android:lineSpacingExtra="8sp" android:fontFamily="sans-serif"/>
    <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#506d85" android:id="@+id/tv_fd_rate" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_8dp" android:lineSpacingExtra="6sp" android:fontFamily="sans-serif"/>
    <Button android:id="@+id/dummyView" android:layout_width="1dp" android:layout_height="1dp"/>
    <FrameLayout android:id="@+id/etAmount" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_48dp"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:baselineAligned="false">
        <RelativeLayout android:background="@drawable/pb_bg_break_fd" android:padding="15dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginRight="8dp" android:layout_weight="1" android:layout_marginEnd="8dp">
            <ImageView android:id="@+id/iv_break_fd" android:background="@drawable/bg_solid_circle_grey" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:layout_alignParentStart="true" app:srcCompat="@drawable/ic_break_fd"/>
            <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_8dp" android:layout_toRightOf="@+id/iv_break_fd" android:layout_centerVertical="true" android:layout_marginStart="@dimen/dimen_8dp" android:layout_toEndOf="@+id/iv_break_fd">
                <TextView android:textSize="11sp" android:textStyle="normal" android:textColor="#506d85" android:id="@+id/txt_h1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/total_interest" android:lineSpacingExtra="3sp" android:fontFamily="sans-serif"/>
                <TextView android:textSize="12sp" android:textStyle="bold" android:textColor="#1d252d" android:id="@+id/tv_total_interest" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/txt_h1" android:lineSpacingExtra="2sp" android:fontFamily="sans-serif"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/maturityView" android:background="@drawable/pb_bg_break_fd" android:padding="15dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginRight="8dp" android:layout_weight="1" android:layout_marginEnd="8dp">
            <ImageView android:id="@+id/iv_break_fd2" android:background="@drawable/bg_solid_circle_grey" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:layout_alignParentStart="true" app:srcCompat="@drawable/ic_break_fd"/>
            <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_8dp" android:layout_toRightOf="@+id/iv_break_fd2" android:layout_centerVertical="true" android:layout_marginStart="@dimen/dimen_8dp" android:layout_toEndOf="@+id/iv_break_fd2">
                <TextView android:textSize="11sp" android:textStyle="normal" android:textColor="#506d85" android:id="@+id/txt_h2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/maturity_value" android:lineSpacingExtra="3sp" android:fontFamily="sans-serif"/>
                <TextView android:textSize="12sp" android:textStyle="bold" android:textColor="#1d252d" android:id="@+id/tv_maturity_value" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/txt_h2" android:lineSpacingExtra="2sp" android:fontFamily="sans-serif"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
