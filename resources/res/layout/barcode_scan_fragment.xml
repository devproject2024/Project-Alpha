<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/parent_container" android:background="@android:color/white" android:paddingTop="?attr/actionBarSize" android:paddingBottom="?attr/actionBarSize" android:layout_width="match_parent" android:layout_height="match_parent">
