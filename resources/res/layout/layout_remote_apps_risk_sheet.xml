        <View android:background="#00b9f5" android:layout_width="match_parent" android:layout_height="@dimen/dimen_8dp"/>
        <View android:background="#012b72" android:layout_width="match_parent" android:layout_height="@dimen/dimen_8dp"/>
    </LinearLayout>
</RelativeLayout>
