<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/white_ffffff" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:orientation="horizontal" android:background="@color/white" android:layout_width="match_parent" android:layout_height="@dimen/gp_header_height">
        <ImageView android:id="@+id/back" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/gp_horizontal_margin" android:src="@drawable/games_back_arrow" android:layout_centerVertical="true"/>
        <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="@color/black_000000" android:id="@+id/tv_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/gp_horizontal_margin" android:layout_centerVertical="true" android:layout_toEndOf="@+id/back"/>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/recycler_only_game" android:layout_width="match_parent" android:layout_height="match_parent"/>
</LinearLayout>
