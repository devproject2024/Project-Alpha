        <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_16sp" android:textColor="@color/color_summary_promo_title" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/txt_row_title" android:padding="3dp" android:clickable="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_13dp" android:text="Hello testing heading" android:maxLines="2" android:layout_weight="1" android:layout_alignParentTop="true" app:fontType="3"/>
