<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:background="@color/white" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_motif_classic" android:layout_alignParentRight="true"/>
            <ImageView android:id="@+id/qp_back_iv" android:padding="@dimen/dimen_15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_15dp" android:src="@drawable/back_arrow"/>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="@dimen/dimen_52dp" android:layout_marginRight="@dimen/dimen_20dp">
                <TextView android:textSize="@dimen/dimen_21dp" android:textStyle="bold" android:textColor="#222222" android:id="@+id/qp_name_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/qpe_header" android:layout_alignParentLeft="true" android:layout_centerInParent="true" android:fontFamily="sans-serif"/>
                <RelativeLayout android:id="@+id/rel_img_container" android:background="@drawable/circle_grey" android:padding="@dimen/dimen_5dp" android:layout_width="@dimen/dimen_60dp" android:layout_height="@dimen/dimen_60dp" android:layout_alignParentRight="true">
                    <ImageView android:id="@+id/qp_icon_iv" android:layout_width="match_parent" android:layout_height="match_parent"/>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:orientation="vertical" android:paddingLeft="@dimen/dimen_20dp" android:paddingRight="@dimen/margin_20dp" android:layout_width="match_parent" android:layout_height="match_parent">
                <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#222222" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/qpe_message" android:lineSpacingExtra="6sp" android:fontFamily="sans-serif-medium"/>
                <com.google.android.material.textfield.TextInputLayout android:theme="@style/MoneyTransferEditTextTheme" android:id="@+id/qpe_amount_til" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_9dp" android:hint="@string/you_are_transfer">
                    <androidx.appcompat.widget.AppCompatEditText android:textSize="18sp" android:textStyle="bold" android:textColor="#222222" android:textColorHint="@color/edittext_hint_color" android:id="@+id/qpe_amount_et" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true" android:maxLength="6" android:inputType="number"/>
                    <TextView android:textSize="11sp" android:textStyle="normal" android:textColor="#666666" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_8dp" android:text="@string/qpa_message_one" android:fontFamily="sans-serif"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout android:theme="@style/MoneyTransferEditTextTheme" android:id="@+id/qpe_name_til" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_20dp" android:hint="@string/qp_whom_to_pay">
                    <androidx.appcompat.widget.AppCompatEditText android:textSize="18sp" android:textStyle="normal" android:textColor="#222222" android:textColorHint="@color/edittext_hint_color" android:id="@+id/qpe_name_et" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Driver’s Salary" android:singleLine="true" android:inputType="textCapWords" android:fontFamily="sans-serif-medium"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout android:theme="@style/MoneyTransferEditTextTheme" android:id="@+id/qpe_tag_til" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_20dp" android:hint="@string/qp_what_to_pay">
                    <androidx.appcompat.widget.AppCompatEditText android:textSize="18sp" android:textStyle="normal" android:textColor="#222222" android:textColorHint="@color/edittext_hint_color" android:id="@+id/qpe_tag_et" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true" android:inputType="textCapWords" android:fontFamily="sans-serif-medium"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:padding="@dimen/dimen_20dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TableRow android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="15sp" android:textStyle="bold" android:textColor="#222222" android:id="@+id/account_header_tv" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Recipient’s Account Details" android:layout_weight="1" android:lineSpacingExtra="-3sp" android:fontFamily="sans-serif" android:letterSpacing="0.03"/>
                    <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#00b9f5" android:id="@+id/qpe_change_tv" android:padding="@dimen/dimen_5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Change" android:fontFamily="sans-serif-medium" android:letterSpacing="0.04"/>
                </TableRow>
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                        <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/qpe_account_holder_name_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:lineSpacingExtra="6sp" android:fontFamily="sans-serif" android:letterSpacing="0.02"/>
                        <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/qpe_account_no_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:fontFamily="sans-serif"/>
                        <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#222222" android:id="@+id/qpe_ifsc_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:fontFamily="sans-serif"/>
                    </LinearLayout>
                    <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_40dp">
                        <LinearLayout android:gravity="center" android:background="@drawable/uam_grey_circle_border" android:layout_width="@dimen/dimen_48dp" android:layout_height="@dimen/dimen_48dp">
                            <ImageView android:id="@+id/qpe_bank_icon_iv" android:layout_width="@dimen/dimen_32dp" android:layout_height="@dimen/dimen_32dp"/>
                        </LinearLayout>
                        <TextView android:textSize="10sp" android:textStyle="normal" android:textColor="#999999" android:ellipsize="end" android:gravity="center_horizontal" android:id="@+id/qpe_bank_name_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:maxWidth="100dp" android:singleLine="true" android:fontFamily="sans-serif"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <View android:background="#f3f7f8" android:layout_width="match_parent" android:layout_height="@dimen/dimen_10dp" android:layout_marginTop="@dimen/dimen_20dp"/>
            <LinearLayout android:orientation="vertical" android:paddingTop="@dimen/dimen_20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="@dimen/dimen_18sp" android:textStyle="normal" android:textColor="@color/black" android:id="@+id/qp_message" android:paddingLeft="@dimen/dimen_20dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:text="@string/qp_send_money" android:fontFamily="sans-serif-medium"/>
                <RadioGroup android:orientation="horizontal" android:id="@+id/qp_select_rg" android:paddingLeft="@dimen/dimen_20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_20dp" android:weightSum="2">
                    <RadioButton android:textSize="@dimen/wallet_14_sp" android:textStyle="bold" android:id="@+id/qp_account_rb" android:padding="@dimen/wallet_5_dp" android:layout_width="0dp" android:layout_height="wrap_content" android:checked="false" android:button="@drawable/btn_radio_holo_light" android:text="@string/bank_account" android:layout_weight="1"/>
                    <RadioButton android:textSize="@dimen/wallet_14_sp" android:id="@+id/qp_paytm_rb" android:padding="@dimen/wallet_5_dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/wallet_20_dp" android:button="@drawable/btn_radio_holo_light" android:text="@string/paytm_wallet" android:layout_weight="1"/>
                </RadioGroup>
                <include android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="@dimen/dimen_16dp" android:layout_marginBottom="@dimen/dimen_15dp" layout="@layout/qp_lyt_selected_payment"/>
                <include android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20dp" layout="@layout/qp_bank_layout"/>
                <RelativeLayout android:orientation="horizontal" android:id="@+id/qp_wallet_ll" android:paddingLeft="@dimen/dimen_20dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputLayout android:theme="@style/MoneyTransferEditTextTheme" android:id="@+id/qp_mobile_number_til" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/mobile_number">
                        <androidx.appcompat.widget.AppCompatEditText android:textSize="17sp" android:textStyle="bold" android:textColor="#222222" android:textColorHint="@color/edittext_hint_color" android:id="@+id/qp_mobile_number_et" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true" android:maxLength="10" android:digits="1234567890" android:inputType="none|text|textNoSuggestions|number|phone"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <ImageView android:id="@+id/p2p_cp_contact_iv" android:padding="@dimen/dimen_8dp" android:paddingLeft="@dimen/dimen_10dp" android:paddingRight="@dimen/dimen_5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_5dp" android:layout_marginTop="@dimen/dimen_3dp" android:src="@drawable/contact" android:layout_alignParentRight="true"/>
                </RelativeLayout>
                <View android:id="@+id/horizontal_view" android:background="#f3f7f8" android:layout_width="match_parent" android:layout_height="@dimen/dimen_10dp" android:layout_marginTop="@dimen/dimen_10dp"/>
                <LinearLayout android:id="@+id/qpe_date_tym_ll" android:paddingLeft="@dimen/dimen_20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_5dp"/>
                <TextView android:textSize="16sp" android:textStyle="normal" android:textColor="#ffffff" android:gravity="center" android:id="@+id/qpe_save_tv" android:background="@drawable/rounded_rectangle_paytmblue" android:paddingLeft="@dimen/dimen_20dp" android:layout_width="match_parent" android:layout_height="@dimen/dimen_55dp" android:layout_marginLeft="@dimen/dimen_20dp" android:layout_marginTop="@dimen/dimen_40dp" android:layout_marginRight="@dimen/dimen_20dp" android:layout_marginBottom="@dimen/dimen_30dp" android:text="Save" android:fontFamily="sans-serif-medium"/>
            </LinearLayout>
        </LinearLayout>
        <include android:visibility="gone" layout="@layout/bottom_sheet"/>
    </LinearLayout>
</ScrollView>
