<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/color_fafafa" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center" android:orientation="vertical" android:background="@color/text_color_proceed_button" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="16dp">
        <ImageView android:id="@+id/pending_order_status_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:src="@drawable/order_pending" android:scaleType="center" android:layout_centerHorizontal="true"/>
        <TextView android:textSize="14sp" android:textColor="@android:color/white" android:gravity="center" android:layout_gravity="center" android:id="@+id/pending_recharge_badge" android:background="@drawable/summary_inprogress_background" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="@string/event_booking_pending" android:layout_below="@+id/pending_order_status_icon" android:layout_centerHorizontal="true" app:fontType="2"/>
        <TextView android:textSize="14sp" android:textColor="@color/event_seat_details_text_color" android:ellipsize="end" android:gravity="center" android:id="@+id/pending_header_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="30dp" android:layout_marginTop="21dp" android:layout_marginRight="30dp" android:maxLines="2" android:layout_below="@+id/pending_recharge_badge" android:layout_centerHorizontal="true" app:fontType="2"/>
        <TextView android:textSize="12sp" android:textColor="@color/event_text_color_gray" android:gravity="center" android:id="@+id/pending_header_desc_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="30dp" android:layout_marginTop="16dp" android:layout_marginRight="25dp" android:text="@string/event_pending_order_message" android:singleLine="true" android:layout_below="@+id/pending_header_text" app:fontType="2"/>
        <LinearLayout android:gravity="center" android:paddingBottom="25dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="12sp" android:textColor="@color/event_text_color_gray" android:gravity="center" android:id="@+id/pending_header_desc_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxWidth="250dp" android:text="@string/event_check_order_status" android:layout_below="@+id/pending_header_text" app:fontType="2"/>
            <TextView android:textSize="12sp" android:textColor="@color/event_blue_color" android:ellipsize="end" android:id="@+id/events_pending_my_order" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_5dp" android:maxWidth="80dp" android:text="@string/event_my_orders" android:maxLines="2" app:fontType="2"/>
        </LinearLayout>
        <RelativeLayout android:id="@+id/pending_order_cancel_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_below="@+id/pending_header_desc_text" android:layout_centerHorizontal="true">
            <TextView android:textSize="18sp" android:textColor="@android:color/white" android:gravity="center" android:layout_gravity="center" android:id="@+id/pending_keep_trying_text" android:background="@drawable/recharge_summary_button_selector" android:padding="10dp" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginRight="16dp" android:layout_marginBottom="20dp" android:text="@string/recharge_keep_trying" app:fontType="3"/>
            <TextView android:textSize="18sp" android:textColor="@color/blue_button_text" android:gravity="center" android:layout_gravity="center" android:id="@+id/pending_order_cancel_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/recharge_cancel_order" android:layout_below="@+id/pending_keep_trying_text" android:layout_centerHorizontal="true" app:fontType="3"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
