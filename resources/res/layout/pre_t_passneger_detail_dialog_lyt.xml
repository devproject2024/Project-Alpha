<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customNS="http://schemas.android.com/apk/res/net.one97.paytm" xmlns:aapt="http://schemas.android.com/aapt" android:background="#80000000" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:layout_gravity="bottom" android:background="@drawable/pre_t_train_top_left_right_round_dialog_bg" android:layout_width="match_parent" android:layout_height="wrap_content" android:fillViewport="true">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                <RelativeLayout android:id="@+id/irctc_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp">
                    <com.paytm.utility.RoboTextView android:textSize="16sp" android:textColor="@color/color_222222" android:id="@+id/irctc_heading" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="@string/irctc_booking_flow" android:layout_centerVertical="true" android:fontFamily="sans-serif-medium"/>
                    <ImageView android:id="@+id/dialog_close" android:paddingLeft="4dp" android:paddingRight="4dp" android:layout_width="36dp" android:layout_height="36dp" android:layout_marginRight="20dp" android:src="@drawable/pre_t_cross" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                </RelativeLayout>
                <LinearLayout android:orientation="horizontal" android:id="@+id/instructionLL" android:paddingBottom="@dimen/dimen_26dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:layout_marginTop="20dp" android:layout_marginRight="15dp" android:layout_below="@+id/irctc_title">
                    <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_5dp">
                        <ImageView android:id="@+id/img_num_one" android:layout_width="22dp" android:layout_height="22dp" android:src="@drawable/pre_t_irctc_tick"/>
                        <View android:layout_gravity="center_horizontal" android:background="#8f969c" android:layout_width="@dimen/dimen_1dp" android:layout_height="@dimen/dimen_60dp" android:layout_marginTop="@dimen/dimen_4dp" android:layout_below="@+id/img_num_one"/>
                        <ImageView android:layout_gravity="center_horizontal" android:id="@+id/img_num_two" android:layout_width="15dp" android:layout_height="15dp" android:layout_marginTop="@dimen/dimen_4dp" android:src="@drawable/pre_t_train_circle_hollow_grey"/>
                        <View android:layout_gravity="center_horizontal" android:background="#8f969c" android:layout_width="@dimen/dimen_1dp" android:layout_height="@dimen/dimen_60dp" android:layout_marginTop="@dimen/dimen_4dp" android:layout_below="@+id/img_num_two"/>
                        <ImageView android:layout_gravity="center_horizontal" android:layout_width="15dp" android:layout_height="15dp" android:layout_marginTop="@dimen/dimen_4dp" android:src="@drawable/pre_t_train_circle_hollow_grey"/>
                    </LinearLayout>
                    <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_10dp" android:layout_marginRight="@dimen/dimen_12dp">
                        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="3dp">
                            <ImageView android:layout_gravity="center_vertical" android:id="@+id/irctc_userid_icon" android:layout_width="35dp" android:layout_height="35dp"/>
                            <com.paytm.utility.RoboTextView android:textSize="14sp" android:textStyle="normal" android:textColor="#222222" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_8dp" android:layout_marginTop="5dp" android:text="IRCTC User ID Verification" android:fontFamily="sans-serif-medium"/>
                        </LinearLayout>
                        <com.paytm.utility.RoboTextView android:textSize="12sp" android:textStyle="normal" android:textColor="#9b9b9b" android:id="@+id/inst_payment" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_45dp" android:lineSpacingExtra="@dimen/dimen_6sp" android:fontFamily="sans-serif"/>
                        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_18dp">
                            <ImageView android:id="@+id/irctc_payment_icon" android:padding="@dimen/dimen_3dp" android:layout_width="35dp" android:layout_height="35dp"/>
                            <com.paytm.utility.RoboTextView android:textSize="14sp" android:textStyle="normal" android:textColor="#222222" android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_10dp" android:text="@string/instruction_payment" android:fontFamily="sans-serif-medium" android:letterSpacing="-0.01"/>
                        </LinearLayout>
                        <com.paytm.utility.RoboTextView android:textSize="12sp" android:textStyle="normal" android:textColor="#9b9b9b" android:id="@+id/inst_login" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_45dp" android:lineSpacingExtra="@dimen/dimen_6sp" android:fontFamily="sans-serif"/>
                        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="3dp" android:layout_marginTop="@dimen/dimen_18dp">
                            <ImageView android:id="@+id/irctc_password_icon" android:layout_width="@dimen/dimen_35dp" android:layout_height="@dimen/dimen_35dp"/>
                            <com.paytm.utility.RoboTextView android:textSize="@dimen/cart_14sp" android:textStyle="normal" android:textColor="@color/color_222222" android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:text="Enter IRCTC Password" android:fontFamily="sans-serif-medium" android:letterSpacing="-0.01"/>
                        </LinearLayout>
                        <com.paytm.utility.RoboTextView android:textSize="12sp" android:textStyle="normal" android:textColor="#9b9b9b" android:id="@+id/inst_password" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_45dp" android:lineSpacingExtra="@dimen/dimen_6sp" android:fontFamily="sans-serif"/>
                    </LinearLayout>
                </LinearLayout>
                <RelativeLayout android:id="@+id/userIdLyt" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="10dp" android:layout_marginRight="20dp" android:layout_marginBottom="20dp" android:layout_below="@+id/irctc_title">
                    <LinearLayout android:orientation="horizontal" android:paddingBottom="@dimen/dimen_10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_alignParentBottom="true" android:layout_alignParentEnd="true">
                        <ImageView android:layout_gravity="center_vertical" android:id="@+id/success_icon" android:layout_width="@dimen/dimen_10dp" android:layout_height="@dimen/dimen_10dp"/>
                        <TextView android:textSize="13sp" android:textStyle="normal" android:textColor="#09ac63" android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_5dp" android:text="Verified" android:fontFamily="sans-serif-medium"/>
                    </LinearLayout>
                    <com.google.android.material.textfield.TextInputLayout android:theme="@style/train_login_dialog_theme" android:id="@+id/user_text_id" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/irctct_user_id_text" android:layout_toLeftOf="@+id/remove_user_id_close_btn" android:layout_alignParentLeft="true" android:layout_centerVertical="true">
                        <EditText android:enabled="false" android:textSize="14sp" android:textColor="@color/bus_time_color" android:id="@+id/irctc_user_id" android:background="@android:color/transparent" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/train_pnr_text2" android:singleLine="true" android:maxLength="35"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <View android:background="@color/bg_grid_grey" android:layout_width="match_parent" android:layout_height="1dp" android:layout_below="@+id/user_text_id"/>
                </RelativeLayout>
            </RelativeLayout>
            <RadioGroup android:id="@+id/instruction_radio_group" android:layout_width="match_parent" android:layout_height="wrap_content">
                <RadioButton android:textColor="@color/color_222222" android:id="@+id/password_remember_radio" android:background="@drawable/pre_t_train_pwd_reset_selector" android:padding="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="32dp" android:checked="true" android:button="@drawable/pre_t_train_pwd_reset_radio_selector" android:text="@string/dont_remember_txt" android:lineSpacingExtra="8.5sp" android:fontFamily="sans-serif"/>
                <RadioButton android:textColor="@color/color_222222" android:id="@+id/password_not_remember_radio" android:background="@drawable/pre_t_train_pwd_reset_selector" android:padding="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="5dp" android:layout_marginRight="32dp" android:button="@drawable/pre_t_train_pwd_reset_radio_selector" android:text="@string/password_not_remember" android:lineSpacingExtra="8.5sp" android:fontFamily="sans-serif"/>
            </RadioGroup>
            <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_14sp" android:textStyle="bold" android:textColor="@android:color/white" android:gravity="center" android:layout_gravity="right" android:id="@+id/detail_dialog_proceed_btn" android:background="@drawable/pre_t_train_bg_btn_train_blue" android:paddingLeft="@dimen/dimen_16dp" android:paddingRight="@dimen/dimen_16dp" android:layout_width="wrap_content" android:layout_height="@dimen/dimen_50dp" android:layout_marginLeft="@dimen/dimen_25dp" android:layout_marginTop="@dimen/dimen_15dp" android:layout_marginRight="@dimen/dimen_32dp" android:layout_marginBottom="@dimen/dimen_25dp" android:text="@string/continue_bookig" android:fontFamily="roboto_medium"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
