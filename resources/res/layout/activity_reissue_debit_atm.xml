<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.airbnb.lottie.LottieAnimationView android:id="@+id/topLoading" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="30dp" android:layout_centerInParent="true" app:amount="5" app:circleSize="15" app:duration="@android:integer/config_mediumAnimTime" app:endColor="@color/light_blue_A400" app:startColor="@color/light_blue_A700" app:animationDirectionbundle="-1"/>
    <ScrollView android:id="@+id/scrollView" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true">
        <RelativeLayout android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
            <com.paytm.utility.RoboTextView android:textSize="18sp" android:textColor="@color/color_222222" android:id="@+id/blockedTv" android:layout_width="146dp" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="23dp" android:text="@string/pb_pdc_blocked_dc" android:lineSpacingExtra="6sp" app:fontType="4"/>
            <androidx.appcompat.widget.AppCompatImageView android:id="@+id/blockedCardIv" android:layout_width="104dp" android:layout_height="66dp" android:layout_marginRight="20dp" android:src="@drawable/block_debit_cards" android:layout_alignTop="@+id/blockedTv" android:layout_alignParentRight="true"/>
            <View android:id="@+id/blockCardLineBelow" android:background="@color/color_fafbfb" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="48dp" android:layout_below="@+id/blockedTv"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/normalLayout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/blockCardLineBelow">
                <com.paytm.utility.RoboTextView android:textSize="21sp" android:textColor="#222222" android:id="@+id/yourNewCardTv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="23dp" android:text="@string/pb_pdc_ur_new_dc" android:layout_below="@+id/blockCardLineBelow" app:fontType="4"/>
                <com.paytm.utility.RoboTextView android:textSize="12sp" android:textColor="#222222" android:id="@+id/newCardDescTv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="8dp" android:layout_marginRight="50dp" android:text="@string/pb_pdc_ur_new_dc_desc" android:layout_below="@+id/yourNewCardTv" android:lineSpacingExtra="4sp" app:fontType="2"/>
                <FrameLayout android:id="@+id/activity_manage_debit_atm_card_lyt" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="7dp" android:layout_marginBottom="20dp" android:layout_below="@+id/newCardDescTv" android:transitionName="@string/bank_pdc_transition_name"/>
                <View android:id="@+id/marginView" android:background="@color/color_fafbfb" android:layout_width="match_parent" android:layout_height="10dp" android:layout_below="@+id/activity_manage_debit_atm_card_lyt"/>
                <LinearLayout android:id="@+id/loaderView" android:background="@color/white" android:paddingTop="@dimen/dimen_40dp" android:paddingBottom="@dimen/dimen_40dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/marginView">
                    <include android:gravity="center" android:layout_width="match_parent" android:layout_height="match_parent" layout="@layout/pb_si_layout_wallet_loader"/>
                </LinearLayout>
                <LinearLayout android:orientation="vertical" android:id="@+id/atm_state_1" android:background="@color/color_fafbfb" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/marginView">
                    <include android:id="@+id/request_atm_btn" android:layout_width="match_parent" android:layout_height="wrap_content" layout="@layout/request_phy_debit_card_button_layout"/>
                </LinearLayout>
                <LinearLayout android:orientation="vertical" android:id="@+id/pdc_about_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/atm_state_1">
                    <View android:id="@+id/lineAboveBenefitsAbout" android:background="@color/light_grey" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="@dimen/dimen_26dp"/>
                    <net.one97.paytm.paymentsBank.widget.FacilitiesView android:id="@+id/about_db_card" android:layout_width="match_parent" android:layout_height="wrap_content" app:layoutFile="@layout/phy_debit_card_options_list_row" app:rightIcon="@drawable/pb_pdc_card_offer" app:subTitleColor="@color/color_ffa400" app:title="@string/pb_pdc_view_benefits_and_offer"/>
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout android:id="@+id/pageLoadingLayout" android:background="@color/white" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/blockCardLineBelow">
                <com.airbnb.lottie.LottieAnimationView android:id="@+id/pageLoader" android:layout_width="wrap_content" android:layout_height="24dp" android:layout_marginTop="8dp" android:adjustViewBounds="true" android:layout_centerHorizontal="true" app:amount="5" app:circleSize="15" app:duration="@android:integer/config_mediumAnimTime" app:endColor="@color/light_blue_A400" app:startColor="@color/light_blue_A700" app:animationDirectionbundle="-1"/>
            </RelativeLayout>
            <LinearLayout android:gravity="center_horizontal" android:id="@+id/vdcPendingTv" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/blockCardLineBelow">
                <include android:layout_width="wrap_content" android:layout_height="wrap_content" layout="@layout/pb_reissue_pending_bank_card_view"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
