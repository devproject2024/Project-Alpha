        <com.paytm.utility.RoboTextView android:textSize="16sp" android:layout_gravity="center" android:id="@+id/product_packaging_rate_type" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" app:fontType="2"/>
