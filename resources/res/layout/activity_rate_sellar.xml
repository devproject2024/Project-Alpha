        <com.paytm.utility.RoboTextView android:textSize="16sp" android:textColor="@color/bus_ticket_grey" android:layout_gravity="center" android:id="@+id/product_delivery" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/seller_rating_product_delivery_txt" app:fontType="2"/>
