        <com.paytm.utility.RoboTextView android:textSize="16sp" android:layout_gravity="center" android:id="@+id/product_description_rate_type" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" app:fontType="2"/>
        <View android:background="@color/separators" android:layout_width="wrap_content" android:layout_height="1dp"/>
        <com.paytm.utility.RoboTextView android:textSize="16sp" android:textColor="@color/bus_ticket_grey" android:layout_gravity="center" android:id="@+id/product_packaging" android:paddingTop="3dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/seller_rating_product_packaging_txt" app:fontType="2"/>
