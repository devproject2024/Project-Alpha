                        <RelativeLayout android:layout_gravity="center_horizontal" android:id="@+id/rl_txn_count" android:background="@drawable/shadow1" android:visibility="gone" android:layout_width="60dp" android:layout_height="60dp" android:layout_marginTop="35dp" android:layout_marginStart="-12dp" android:layout_toEndOf="@+id/rl_merchant_logo">
