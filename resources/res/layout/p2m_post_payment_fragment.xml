                    </RelativeLayout>
                    <TextView android:textSize="@dimen/dimen_15dp" android:textStyle="normal" android:textColor="@color/color_ffa400" android:gravity="center" android:id="@+id/tv_status_msg" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:fontFamily="sans-serif"/>
                    <TextView android:textSize="24sp" android:textStyle="normal" android:textColor="@color/color_222222" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/tv_merchant_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_5dp" android:text="Yumm Mumm" android:fontFamily="sans-serif-medium"/>
                    <RelativeLayout android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_21dp">
                        <RelativeLayout android:layout_gravity="center" android:id="@+id/tv_amount_rel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/wallet_8_dp" android:layout_marginBottom="@dimen/wallet_8_dp" android:includeFontPadding="false" android:layout_centerInParent="true">
                            <LinearLayout android:orientation="horizontal" android:id="@+id/tv_amount_container" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true">
                                <TextView android:textSize="36sp" android:textColor="#1d252d" android:id="@+id/tv_rupee" android:padding="@dimen/dimen_5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:fontFamily="@string/font_family_roboto_regular"/>
                                <TextView android:textSize="36sp" android:textColor="#1d252d" android:id="@+id/tv_amount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="60" android:fontFamily="@string/font_family_roboto_medium"/>
                                <TextView android:textSize="24sp" android:textColor="#1d252d" android:id="@+id/tv_amount_fractional" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=".05" android:fontFamily="@string/font_family_roboto_medium"/>
                            </LinearLayout>
                            <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_12dp" android:layout_centerVertical="true" android:layout_marginStart="@dimen/dimen_10dp" android:layout_toEndOf="@+id/tv_amount_container">
                                <ImageView android:id="@+id/ic_payment_status" android:layout_width="@dimen/dimen_36dp" android:layout_height="@dimen/dimen_36dp" android:baselineAlignBottom="@+id/tv_amount_rel"/>
                                <com.airbnb.lottie.LottieAnimationView android:id="@+id/success_animation" android:layout_width="@dimen/dimen_36dp" android:layout_height="@dimen/dimen_36dp"/>
                            </LinearLayout>
                            <net.one97.paytm.postpayment.utils.WalletCircularProgressBar android:id="@+id/pb_pending" android:visibility="gone" android:layout_width="36dp" android:layout_height="36dp" android:layout_centerVertical="true" android:layout_marginStart="@dimen/dimen_10dp" android:layout_toEndOf="@+id/tv_amount_container" app:animateProgress="true" app:backgroundStrokeColor="#e2ebee" app:backgroundStrokeWidth="3dp" app:drawBackgroundStroke="true" app:foregroundStrokeColor="#ffa400" app:foregroundStrokeWidth="3dp" app:foreground_strokeCap="0" app:indeterminate="true" app:indeterminateMinimumAngle="0" app:indeterminateRotationAnimationDuration="4000" app:indeterminateSweepAnimationDuration="800" app:startAngle="0"/>
                        </RelativeLayout>
                    </RelativeLayout>
                    <TextView android:textSize="12sp" android:textColor="@color/color_222222" android:gravity="center" android:id="@+id/tv_status_desc" android:background="@color/color_fdfbd3" android:paddingLeft="@dimen/dimen_12dp" android:paddingTop="@dimen/dimen_14dp" android:paddingRight="@dimen/dimen_12dp" android:paddingBottom="@dimen/dimen_14dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="11dp" android:layout_marginRight="10dp" android:text="@string/payment_pending_desc_msg" android:maxLines="3" android:lineSpacingExtra="8sp"/>
                    <com.paytm.utility.RoboTextView android:textSize="17sp" android:textColor="@color/color_222222" android:gravity="center" android:id="@+id/tv_prn_label" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="40dp" android:text="@string/payment_ref" app:fontType="3"/>
                    <com.paytm.utility.RoboTextView android:textSize="15sp" android:textColor="@color/color_444444" android:gravity="center" android:id="@+id/tv_prn_message" android:paddingLeft="15dp" android:paddingRight="15dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/prn_message" app:fontType="2"/>
                    <TextView android:textSize="24sp" android:textStyle="bold" android:textColor="@color/color_222222" android:layout_gravity="center_horizontal" android:id="@+id/text_otp" android:background="@drawable/prn_background" android:paddingLeft="15dp" android:paddingTop="10dp" android:paddingRight="15dp" android:paddingBottom="10dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_16dp" android:fontFamily="@string/font_family_roboto_light"/>
                    <View android:layout_gravity="center_horizontal" android:background="@color/color_e2ebee" android:layout_width="30dp" android:layout_height="3dp" android:layout_marginTop="30dp" android:layout_marginBottom="30dp"/>
                    <TextView android:textSize="12sp" android:textStyle="normal" android:textColor="#222222" android:gravity="center_horizontal" android:layout_gravity="center" android:id="@+id/tv_pay_mode" android:paddingBottom="@dimen/dimen_14dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:lineSpacingExtra="7.5sp" android:fontFamily="sans-serif"/>
                    <TextView android:textSize="17sp" android:textStyle="normal" android:textColor="@color/color_222222" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/tv_order_id" android:layout_width="wrap_content" android:layout_height="wrap_content" android:fontFamily="sans-serif"/>
                    <TextView android:textSize="17sp" android:textStyle="normal" android:textColor="@color/color_222222" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/tv_date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:text="12:30 pm, 7 Mar 2018" android:fontFamily="sans-serif"/>
                    <com.paytm.utility.RoboTextView android:textSize="12sp" android:textStyle="italic" android:textColor="#999999" android:gravity="center_horizontal" android:id="@+id/tv_comment" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:layout_marginBottom="@dimen/dimen_12dp" android:fontFamily="sans-serif"/>
                    <View android:layout_width="match_parent" android:layout_height="@dimen/dimen_22dp"/>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/dynamic_views" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/main_summary_rl">
                <FrameLayout android:id="@+id/ad_fragment_container" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp"/>
                <include android:id="@+id/wallet_post_txn_cta" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" layout="@layout/p2m_wallet_balance_layout"/>
                <LinearLayout android:orientation="vertical" android:id="@+id/mlv_layout" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:id="@+id/cashback_offers_view" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/wallet_10_dp" android:layout_below="@+id/dynamic_views"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/deals_fragment_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/wallet_10_dp" android:layout_below="@+id/cashback_offers_view"/>
            <include android:id="@+id/contact_trust_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/wallet_10_dp" android:layout_below="@+id/deals_fragment_container" layout="@layout/contact_trust_layout"/>
        </RelativeLayout>
    </ScrollView>
    <ImageView android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_motif_classic" android:contentDescription="TODO" android:layout_alignParentEnd="true"/>
    <RelativeLayout android:gravity="center" android:id="@+id/floating_nav" android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dimen_25dp" android:layout_alignParentBottom="true"/>
    <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="@color/color_00b9f5" android:id="@+id/tv_share" android:background="@drawable/oval_shape_bg_share" android:paddingLeft="7dp" android:paddingTop="3dp" android:paddingRight="7dp" android:paddingBottom="3dp" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="@string/share" android:fontFamily="sans-serif-medium" android:layout_marginEnd="@dimen/dimen_20dp" android:layout_alignParentEnd="true"/>
    <ImageView android:id="@+id/iv_cross" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:layout_marginStart="@dimen/dimen_12dp" android:layout_alignParentStart="true" app:srcCompat="@drawable/grey_close"/>
</RelativeLayout>
