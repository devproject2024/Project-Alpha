<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/header" android:layout_width="match_parent" android:layout_height="48dp">
        <ImageView android:id="@+id/back_btn" android:paddingLeft="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" app:srcCompat="@drawable/movies_back_arrow_black"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/actorRv" android:descendantFocusability="blocksDescendants" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/header"/>
    <RelativeLayout android:gravity="center" android:id="@+id/api_failure_rlt" android:background="@color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/header">
        <ImageView android:id="@+id/error_iv" android:layout_width="180dp" android:layout_height="155dp" android:layout_centerHorizontal="true" app:srcCompat="@drawable/ic_error_actor_page"/>
        <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_18sp" android:textColor="@color/black" android:gravity="center_horizontal" android:id="@+id/header_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="25dp" android:text="@string/actor_api_error_header" android:layout_below="@+id/error_iv" android:layout_centerHorizontal="true" app:fontType="3"/>
        <com.paytm.utility.RoboTextView android:textSize="@dimen/dimen_14sp" android:textColor="@color/black" android:id="@+id/desc_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="11dp" android:text="@string/actor_api_error_desc" android:layout_below="@+id/header_tv" android:layout_centerHorizontal="true" app:fontType="1"/>
        <Button android:textColor="@color/white" android:id="@+id/error_cta_btn" android:background="@drawable/btn_paytm_blue_round_rectangle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="14dp" android:text="@string/retry" android:layout_below="@+id/desc_tv" android:layout_centerHorizontal="true" app:fontType="3"/>
    </RelativeLayout>
    <ProgressBar android:id="@+id/progress_bar" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:indeterminateDrawable="@drawable/movie_progress_large_holo" android:layout_centerInParent="true"/>
</RelativeLayout>
