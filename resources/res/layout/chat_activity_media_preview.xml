<?xml version="1.0" encoding="utf-8"?>
<com.zhihu.matisse.internal.ui.widget.RelativeLayoutEx xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/root" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.zhihu.matisse.internal.ui.widget.PreviewViewPager android:layout_gravity="center" android:id="@+id/pager" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/bottom_layout"/>
    <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:elevation="10dp">
        <LinearLayout android:layout_gravity="bottom" android:orientation="vertical" android:id="@+id/bottom_layout" android:paddingLeft="15dp" android:paddingTop="16dp" android:paddingRight="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <ImageButton android:id="@+id/button_add_more" android:background="@drawable/chat_add_image_preview_btn_bg" android:layout_width="50dp" android:layout_height="50dp" android:layout_marginTop="5dp" android:layout_marginRight="3dp" android:src="@drawable/chat_icon_add_more"/>
                <androidx.recyclerview.widget.RecyclerView android:id="@+id/layout_preview_thumbnail_list" android:layout_width="match_parent" android:layout_height="50dp" android:layout_marginTop="5dp" android:layout_marginBottom="15dp"/>
            </LinearLayout>
            <RelativeLayout android:id="@+id/edit_caption_layout" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginBottom="20dp">
                <EditText android:textSize="14dp" android:textColor="#666666" android:textColorHint="#666666" android:layout_gravity="center_vertical" android:id="@+id/edittext_caption" android:background="@drawable/chat_bg_edittext" android:paddingLeft="@dimen/dimen_15dp" android:paddingTop="5dp" android:paddingRight="@dimen/dimen_30dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="50dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:minHeight="33dp" android:hint="@string/chat_module_add_a_caption" android:maxLines="6" android:layout_weight="1" android:inputType="textNoSuggestions" android:imeOptions="actionDone"/>
                <androidx.appcompat.widget.AppCompatImageView android:id="@+id/button_msg_send" android:layout_width="18dp" android:layout_height="18dp" android:layout_marginRight="15dp" android:tint="@color/chat_blue_default" android:layout_alignParentRight="true" android:layout_centerVertical="true" app:srcCompat="@drawable/chat_icon_msg_send"/>
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <FrameLayout android:id="@+id/bottom_toolbar" android:background="@color/preview_bottom_toolbar_bg" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:elevation="4dp">
        <TextView android:textSize="16sp" android:textColor="?attr/preview.bottomToolbar.back.textColor" android:layout_gravity="start" android:id="@+id/button_back" android:padding="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:foreground="?attr/selectableItemBackground" android:text="@string/chat_module_button_back"/>
        <LinearLayout android:layout_gravity="center" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <LinearLayout android:layout_gravity="center" android:orientation="horizontal" android:id="@+id/originalLayout" android:padding="16dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:foreground="?attr/selectableItemBackground">
                <com.zhihu.matisse.internal.ui.widget.CheckRadioView android:layout_gravity="center_vertical" android:id="@+id/original" android:layout_width="16dp" android:layout_height="16dp" android:src="@drawable/chat_ic_preview_radio_off" android:tint="#ffffff"/>
                <TextView android:enabled="true" android:textSize="14sp" android:textColor="?attr/preview.bottomToolbar.back.textColor" android:layout_gravity="center_vertical" android:paddingLeft="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/chat_module_button_original" android:paddingStart="4dp"/>
            </LinearLayout>
            <TextView android:textSize="16sp" android:textColor="@color/preview_bottom_size" android:layout_gravity="center" android:id="@+id/size" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView android:textSize="16sp" android:textColor="?attr/preview.bottomToolbar.apply.textColor" android:layout_gravity="end" android:id="@+id/button_apply" android:padding="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:foreground="?attr/selectableItemBackground"/>
    </FrameLayout>
    <FrameLayout android:id="@+id/top_toolbar_left" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="27dp" android:layout_marginTop="50dp">
        <View android:background="@drawable/chat_ic_arrow_left_black" android:layout_width="20dp" android:layout_height="20dp"/>
    </FrameLayout>
    <FrameLayout android:id="@+id/crop_image_btn_flt" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="50dp" android:layout_marginRight="27dp" android:layout_alignParentRight="true">
        <View android:background="@drawable/ic_chat_crop" android:layout_width="30dp" android:layout_height="30dp"/>
    </FrameLayout>
</com.zhihu.matisse.internal.ui.widget.RelativeLayoutEx>
