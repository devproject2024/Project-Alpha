<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/sheroes_white" android:layout_width="match_parent" android:layout_height="wrap_content">
    <FrameLayout android:id="@+id/sheroes_image_container" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="16dp">
        <com.sheroes.final_sdk.appliedlife.pvtltd.SHEROES.views.cutomeviews.CircleImageView android:id="@+id/sheroes_user_profile_pic" android:layout_width="@dimen/sheroes_user_comment_icon" android:layout_height="@dimen/sheroes_user_comment_icon" android:src="@drawable/vector_sheroes_create_community_icon"/>
        <ImageView android:layout_gravity="bottom|right|center_vertical|center_horizontal|center|end" android:id="@+id/sheroes_profile_verified" android:background="@drawable/vector_sheroes_verified" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </FrameLayout>
    <TextView android:textSize="14sp" android:textColor="@color/sheroes_text_grey" android:id="@+id/sheroes_tv_list_user_comment_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:layout_marginRight="8dp" android:text="2 min" android:layout_alignBaseline="@+id/sheroes_comment_author_name" android:layout_alignParentRight="true"/>
    <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="#3c3c3c" android:id="@+id/sheroes_comment_author_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_toLeftOf="@+id/sheroes_tv_list_user_comment_time" android:layout_toRightOf="@+id/sheroes_image_container" android:lineSpacingExtra="4sp" android:fontFamily="sans-serif"/>
    <com.sheroes.final_sdk.appliedlife.pvtltd.SHEROES.views.cutomeviews.NoScrollTextView android:textSize="@dimen/sheroes_sp_size_14" android:textColor="#3c3c3c" android:textColorLink="@color/sheroes_view_more" android:id="@+id/sheroes_tv_list_user_comment" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_marginRight="8dp" android:layout_toRightOf="@+id/sheroes_image_container" android:layout_below="@+id/sheroes_comment_author_name" android:layout_alignBaseline="@+id/sheroes_image_container" android:lineSpacingExtra="4sp" android:fontFamily="sans-serif"/>
    <TextView android:textSize="14sp" android:textColor="@color/sheroes_text_grey" android:gravity="center" android:id="@+id/sheroes_like" android:paddingTop="12dp" android:paddingRight="16dp" android:paddingBottom="12dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="1" android:drawableLeft="@drawable/vector_sheroes_like_red_18dp" android:drawablePadding="8dp" android:layout_toRightOf="@+id/sheroes_image_container" android:layout_below="@+id/sheroes_tv_list_user_comment"/>
    <ImageView android:id="@+id/sheroes_tv_user_comment_list_menu" android:paddingRight="16dp" android:layout_width="48dp" android:layout_height="48dp" android:src="@drawable/vector_sheroes_menu_horizontal" android:layout_below="@+id/sheroes_tv_list_user_comment" android:layout_alignBottom="@+id/sheroes_like" android:layout_alignParentRight="true"/>
    <View android:background="#90949c" android:layout_width="match_parent" android:layout_height="0.3dp" android:layout_below="@+id/sheroes_like"/>
</RelativeLayout>
