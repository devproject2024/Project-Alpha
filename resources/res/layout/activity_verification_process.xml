<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/top_toolbar_rl" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/iv_back_button" android:padding="@dimen/dimen_15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_back" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:layout_alignParentStart="true"/>
    </RelativeLayout>
    <ProgressBar android:layout_gravity="center" android:id="@+id/pb_progress" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:indeterminateDrawable="@drawable/paytm_progress"/>
    <ScrollView android:id="@+id/verification_scrollbar" android:padding="@dimen/dimen_5dp" android:visibility="visible" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:padding="@dimen/dimen_5dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="23sp" android:textStyle="bold" android:textColor="#222222" android:id="@+id/form_title" android:padding="@dimen/dimen_5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_5dp" android:layout_marginBottom="@dimen/dimen_5dp" android:lineSpacingExtra="7sp" android:fontFamily="sans-serif"/>
            <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#444444" android:id="@+id/form_sub_title" android:padding="@dimen/dimen_5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:lineSpacingExtra="3sp" android:fontFamily="sans-serif" android:letterSpacing="0.03"/>
            <TextView android:textSize="17sp" android:textStyle="bold" android:textColor="#222222" android:id="@+id/form_sub_title_dynamic" android:padding="@dimen/dimen_5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:fontFamily="sans-serif" android:letterSpacing="0.03"/>
            <TextView android:textSize="17sp" android:textStyle="normal" android:textColor="#999999" android:id="@+id/form_tip_up" android:padding="@dimen/dimen_5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:layout_marginBottom="-8dp" android:fontFamily="sans-serif" android:letterSpacing="0.02"/>
            <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/linear_lyt_passcode_edt" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:layout_marginBottom="@dimen/dimen_5dp"/>
            <com.google.android.material.textfield.TextInputLayout android:theme="@style/PaytmEditTextTheme" android:id="@+id/layout_password_edittext" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatEditText android:textSize="@dimen/cart_17sp" android:textColor="@android:color/black" android:textColorHint="@color/grey_phone" android:id="@+id/password_edittext" android:focusable="true" android:longClickable="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true" android:layout_centerHorizontal="true" android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>
            <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#fd5c5c" android:id="@+id/passcode_error_lyt" android:paddingLeft="@dimen/dimen_5dp" android:paddingRight="@dimen/dimen_5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:fontFamily="sans-serif"/>
            <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="#999999" android:gravity="center_horizontal" android:id="@+id/resend_otp" android:paddingLeft="@dimen/dimen_5dp" android:paddingTop="@dimen/dimen_10dp" android:paddingRight="@dimen/dimen_5dp" android:paddingBottom="@dimen/dimen_10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:fontFamily="sans-serif"/>
            <TextView android:enabled="false" android:textSize="19sp" android:textStyle="normal" android:textColor="#ffffff" android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:id="@+id/confirm_button" android:background="@drawable/button_selector" android:padding="@dimen/dimen_12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginTop="@dimen/dimen_30dp" android:layout_marginRight="5dp" android:layout_marginBottom="@dimen/dimen_10dp" android:fontFamily="sans-serif-medium" android:letterSpacing="0.03"/>
            <TextView android:textSize="14sp" android:textStyle="normal" android:textColor="@color/bright_sky_blue" android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:id="@+id/form_bottom_text" android:padding="@dimen/dimen_5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:fontFamily="sans-serif-medium"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
