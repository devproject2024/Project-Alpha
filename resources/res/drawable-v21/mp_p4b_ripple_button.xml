<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:color="@color/mp_button_background_pressed">
    <item>
        <selector>
            <item android:state_enabled="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/mp_button_background"/>
                    <corners android:radius="@dimen/mp_button_radius"/>
                </shape>
            </item>
            <item android:state_enabled="false">
                <shape android:shape="rectangle">
                    <solid android:color="@color/mp_button_background_disabled"/>
                    <corners android:radius="@dimen/mp_button_radius"/>
                </shape>
            </item>
        </selector>
    </item>
</ripple>
